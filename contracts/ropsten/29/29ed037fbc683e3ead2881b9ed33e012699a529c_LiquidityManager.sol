abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}


abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor() {
        _transferOwnership(_msgSender());
    }

    function owner() public view virtual returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        _transferOwnership(address(0));
    }

    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        _transferOwnership(newOwner);
    }

    function _transferOwnership(address newOwner) internal virtual {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}

contract LiquidityManager is Ownable {
    IUniswapV2Router02 uniswapV2Router = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
    address public usdt = 0x110a13FC3efE6A245B50102D2d79B3E76125Ae83;
    address public token;
    address public uniswapV2Pair;
    uint256 private minLpDealTokenCount;

    constructor() {
        Address.functionCall(
            usdt,
            abi.encodeWithSignature("approve(address,uint256)",
            address(uniswapV2Router),
            type(uint256).max)
        );
    }

    function init(address _token, address _uniswapV2Pair, uint256 _minLpDealTokenCount) external {
        require(token == address(0) && uniswapV2Pair == address(0), "LiquidityManager: Already initialized");

        uniswapV2Pair = _uniswapV2Pair;
        token = _token;
        minLpDealTokenCount = _minLpDealTokenCount;
        Address.functionCall(
            token,
            abi.encodeWithSignature("approve(address,uint256)",
            address(uniswapV2Router),
            type(uint256).max)
        );
    }

    function setMinLpDealTokenCount(uint256 _minLpDealTokenCount) public onlyOwner {
        minLpDealTokenCount = _minLpDealTokenCount;
    }

    function swapForLiquidity(uint8 lpRate, uint8 lpShareRate) external {
        uint256 tokens = IERC20(token).balanceOf(address(this));
        if (tokens < minLpDealTokenCount) {
            return;
        }

        uint256 half = tokens / 2;
        uint256 otherHalf = tokens - half;

        uint256 initUsdt = IERC20(usdt).balanceOf(address(this));

        _swapTokensForUSDT(half);

        uint256 newUsdt = IERC20(usdt).balanceOf(address(this)) - initUsdt;

        uint256 lpShareToken = otherHalf * lpShareRate / (lpRate + lpShareRate);
        uint256 lpToken = otherHalf - lpShareToken;
        uint256 lpShareUsdt = newUsdt * lpShareRate / (lpRate + lpShareRate);
        uint256 lpUsdt = newUsdt - lpShareUsdt;

        _shareLiquidity(lpShareToken, lpShareUsdt);
        _addLiquidity(lpToken, lpUsdt);
    }

    function _swapTokensForUSDT(uint256 tokenAmount) private {
        address[] memory path = new address[](2);
        path[0] = token;
        path[1] = usdt;

        uniswapV2Router.swapExactTokensForTokens(
            tokenAmount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function _swapTokensForEth(uint256 tokenAmount) private {
        address[] memory path = new address[](2);
        path[0] = token;
        path[1] = uniswapV2Router.WETH();

        uniswapV2Router.swapExactTokensForETH(
            tokenAmount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function _addLiquidity(uint256 tokenAmount, uint256 usdtAmount) private {
        if (tokenAmount == 0 || usdtAmount == 0) {
            return;
        }

        uniswapV2Router.addLiquidity (
            token,
            usdt,
            tokenAmount,
            usdtAmount,
            0,
            0,
            address(0),
            block.timestamp
        );
    }

    function _shareLiquidity(uint256 tokenAmount, uint256 usdtAmount) private {
        if (tokenAmount == 0 && usdtAmount == 0) {
            return;
        }

        if (tokenAmount > 0) {
//            assert(IERC20(token).transfer(uniswapV2Pair, tokenAmount));
            Address.functionCall(token, abi.encodeWithSelector(0xa9059cbb, uniswapV2Pair, tokenAmount));
        }
        if (usdtAmount > 0) {
//            assert(IERC20(usdt).transfer(uniswapV2Pair, usdtAmount));
            Address.functionCall(usdt, abi.encodeWithSelector(0xa9059cbb, uniswapV2Pair, tokenAmount));
        }
        //        IWETH(uniswapV2Router.WETH()).deposit{value: ethAmount}();
        //        assert(IWETH(uniswapV2Router.WETH()).transfer(uniswapV2Pair, ethAmount));

        IUniswapV2Pair pair = IUniswapV2Pair(uniswapV2Pair);
        pair.sync();
    }
}