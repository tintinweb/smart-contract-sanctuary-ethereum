        feeShare[_kind] = _point;

        // check the parameter is valid
        uint256 _sum = 0;
        for (uint8 i = 0; i < MaxFeeShare; i++) {
            _sum += feeShare[i];
        }
        require(_sum <= MaxFeePercent, "out of point");
