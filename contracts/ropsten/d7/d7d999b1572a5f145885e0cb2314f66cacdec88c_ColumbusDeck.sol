import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "./interfaces/IERC20Burnable.sol";
import "./interfaces/IERC20Mintable.sol";
import "./ColumbusAsset.sol";
import "./ColumbusPool.sol";

/**
 * @dev columbusDeck implementation withdraw and deposit of cross-chain transfers
 */
contract ColumbusDeck is Initializable, ColumbusPool {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address public genericHandlerAddress;
    address public columbusAssetAddress;

    // cross bridge events
    event Deposit(address indexed sender, address indexed token, uint256 amount);
    event Withdraw(address indexed to, address indexed token, uint256 amount);

    modifier onlyGenericHandler() {
        require(
            genericHandlerAddress == msg.sender,
            "only Generic Handler is allowed to call this function"
        );
        _;
    }

    /**
     * @dev initialize contract
     * @param handler contract address of generic handler
     * @param asset contract address of columbus asset
     */
    function initialize(address handler, address asset) public initializer {
        __Ownable_init();

        genericHandlerAddress = handler;
        columbusAssetAddress = asset;
        // set defalut admin role
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    /**
     * @dev set the contract address of the generic handler
     * @param handler contract address of generic handler
     */
    function adminSetGenericHandler(address handler) external onlyOwner {
        genericHandlerAddress = handler;
    }

    /**
     * @dev set the contract address of the columbus asset
     * @param asset contract address of generic handler
     */
    function adminColumbusAssetAddress(address asset) external onlyOwner {
        columbusAssetAddress = asset;
    }

    /**
     * @dev cross-chain deposit operation
     *
     * This function is called by after generic handler
     *
     * @param data packaged data via abi
     *
     * Emits an {Deposit} event.
     */
    function deposit(bytes calldata data) external onlyGenericHandler {
        (uint256 tokenId, uint256 amount, address fromAddress, ) = abi.decode(
            data,
            (uint256, uint256, address, bytes32)
        );

        ColumbusAsset asset = ColumbusAsset(columbusAssetAddress);
        address erc20 = asset.getTokenAddressByTokenId(tokenId);
        bool isBurn = asset.isBurn(tokenId);

        if (isBurn) {
            IERC20Burnable erc = IERC20Burnable(erc20);
            erc.burnFrom(fromAddress, amount);
        } else {
            IERC20 erc = IERC20(erc20);
            erc.safeTransferFrom(fromAddress, address(this), amount);
        }

        emit Deposit(fromAddress, erc20, amount);
    }

    /**
     * @dev cross-chain withdraw operation
     *
     * This function is called by after generic handler
     *
     * @param data packaged data via abi
     *
     * Emits an {Withdraw} event.
     */
    function withdraw(bytes calldata data) external onlyGenericHandler {
        (uint256 tokenId, address to, uint256 amount) = abi.decode(
            data,
            (uint256, address, uint256)
        );

        ColumbusAsset asset = ColumbusAsset(columbusAssetAddress);
        address erc20 = asset.getTokenAddressByTokenId(tokenId);
        bool isBurn = asset.isBurn(tokenId);

        if (isBurn) {
            IERC20Mintable erc = IERC20Mintable(erc20);
            erc.mint(to, amount);
        } else {
            IERC20 erc = IERC20(erc20);
            // deduct fee
            amount = _chargeFee(erc20, amount);
            // transfer token
            erc.safeTransfer(to, amount);
        }

        emit Withdraw(to, erc20, amount);
    }
}

