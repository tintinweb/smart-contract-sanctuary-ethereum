        uint256 _now = IERC20(_token).balanceOf(address(this));
        uint256 _maxShare = tokenForCToken(_token, _now);
        // Gets the amount of user cToken
        uint256 _share = IERC20(_market.cToken).balanceOf(msg.sender);

        if (_maxShare > _share) {
            return _share;
        }
        return _maxShare;
    }
    
