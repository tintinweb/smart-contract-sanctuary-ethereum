        require(MaxFee > _fee && _fee >= 0, "invalid liquidity fee");
        require(_fixedFee >= 0, "invalid fixed fee");
        require(_minAdd > 0, "invalid minAdd amount");

        for (uint i = 0; i < allMarkets.length; i++) {
