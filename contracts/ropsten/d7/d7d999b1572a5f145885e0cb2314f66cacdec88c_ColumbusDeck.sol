    function _updateFeeShare(address _token, uint256 _fee) internal {
        for(uint8 i = 1; i < MaxFeeShare; i++) {
            uint256 _calFee = _fee.mul(feeShare[i]).div(MaxFeePercent);
            feeCounter[i][_token] = feeCounter[i][_token].add(_calFee);
