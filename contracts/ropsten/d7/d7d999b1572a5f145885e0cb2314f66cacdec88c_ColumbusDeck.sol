        require(_market.token == _token, "invalid market");

        // Gets the amount of token locked in the contract
        uint256 totalToken = _market.liquidity;
        // Gets the amount of cToken in existence
        uint256 totalShares = IERC20(_market.cToken).totalSupply();

        if (totalShares == 0 || totalToken == 0) {
            return _amount;
        }
        return _amount.mul(totalToken).div(totalShares);
    }

    /**
     * @dev returns how much cToken someone gets for depositing token.
