    function _chargeFee(address token, uint256 amount) internal returns (uint256) {
        // sub fixed fee
        uint256 _amount = amount.sub(fixedFee[token]);
        // calculate fee share
        uint256 fee = _amount.mul(minFee[token]).div(MaxFee);
        uint256 poolFee = fee.mul(feeShare[0]).div(MaxFeePercent);
        _updateFeeShare(token, fee);
        // update market
        market storage m = markets[token];
        m.liquidity = m.liquidity.add(poolFee);
        m.fees = m.fees.add(fee);

        return _amount.sub(fee);
    }

    /**
     * @dev Update amount of fee.
     * @param _token the address of liquidity token
     * @param _fee amount of cross-chain fees
