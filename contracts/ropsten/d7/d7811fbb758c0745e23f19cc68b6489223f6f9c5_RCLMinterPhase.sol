pragma solidity 0.8.10;





interface IRCL {
    function mint(address, uint256) external;
}

contract RCLMinterPhase is Ownable {
    using SafeMath for uint256;
    using Strings for uint256;

    // The master contract
    IRCL private parent;

    // Constants (private) 
    enum State {PAUSED, WHITELIST, PUBLIC}              
    uint256 private constant maxSupply = 10000;
    uint256 private constant maxMintsPerUser = 20;
    uint256 private constant maxMintsPerTx = 10;
    uint256 private constant price = 0.3 ether;
    
    // Vars
    State state = State.PAUSED;         	// Current state
    address internal treasuryAddr;    		// Address of the treasury
    address internal prizePoolAddr;    		// Address of the prizes pool
    uint256 public currentSupply = 0;   	// Current supply
    bytes32 internal merkleRoot;			// Only validated account list
    
    // Mappings
    mapping(address => uint256) public mintsPerUser;
    
    // Emitters
    event Parent(address _parent);
    event Mint(address _sender, uint256 _amount);
    event Withdraw(address to, uint256 amount);

	// Modifiers
    modifier onlyAdmin() {
        require(address(owner()) == _msgSender() || treasuryAddr == _msgSender() || prizePoolAddr == _msgSender(), "Not authorized");
        _;
    }
    
    constructor(
        address _parent,
        address _treasury,
        address _prizePool
    ) Ownable() payable {
        parent = IRCL(_parent);
        treasuryAddr = _treasury;
        prizePoolAddr = _prizePool;
    }

    function setRCL(IRCL _parent) external onlyOwner {
        parent = _parent;
        emit Parent(address(_parent));
    }

    /**
     * @dev To update the sale state
     */
    function setState(State _state) external onlyOwner {
        state = _state;
    }

    /**
     * @dev To update the Merkle root address
     */
    function setMerkleRoot(bytes32 _root) external onlyOwner {
        merkleRoot = _root;
    }

    /**
     * @dev Allows only the admins to safely withdraw ether (transfer)
     */
    function withdraw() external onlyAdmin {
    	uint256 shares = address(this).balance.div(2);
    	payable(treasuryAddr).transfer(shares);
        emit Withdraw(treasuryAddr, shares);
        payable(prizePoolAddr).transfer(shares);
        emit Withdraw(prizePoolAddr, shares);
    }

    /*
     * Public mint method
     * Checks-effects-interactions model recommended by Solidity
     */
    function mint(uint256 amount, bytes32[] calldata proof) external payable {
        require(state != State.PAUSED, "Mint is not active");
        require(amount > 0, "Amount not positive");
        require(amount <= maxMintsPerTx, "Exceeds max amount per tx");
        bytes32 hash = keccak256(abi.encodePacked(msg.sender));
        require(currentSupply.add(amount) <= maxSupply, "Exceeds max supply");
        if (state == State.WHITELIST) {
            require(MerkleProof.verify(proof, merkleRoot, hash), "Proof not valid");
        }
        require(mintsPerUser[msg.sender].add(amount) <= maxMintsPerUser, "Exceeds max mints for this user");
        require(msg.value == price.mul(amount), "Ether value sent is not correct");
        mintsPerUser[msg.sender] = mintsPerUser[msg.sender].add(amount);
        currentSupply = currentSupply.add(amount);
        
        //Called last to avoid re-entrancy
        parent.mint(msg.sender, amount);
        emit Mint(msg.sender, amount);
    }
}