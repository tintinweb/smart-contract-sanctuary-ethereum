pragma solidity ^0.8.9;

import "@openzeppelin/contracts/access/Ownable.sol";
import "../common/SyltareERC20Base.sol";

contract RewardDistributor is Ownable, SyltareERC20Base  {
    struct Reward {
        address to;
        uint256 amount;
    }

    event Claim(address indexed _address, uint256 _amount);
    event Airdrop(address indexed _address, uint256 amount, string reason);

    mapping(address => uint256) public claimables;

    constructor(address _tokenAddr) {
        setERC20(_tokenAddr);
    }

    function claim() public {
        erc20.transfer(msg.sender, claimables[msg.sender]);
        emit Claim(msg.sender, claimables[msg.sender]);
        claimables[msg.sender] = 0;
    }

    function addClaimable(Reward calldata _item) public onlyOwner {
        claimables[_item.to] += _item.amount;
    }

    function addClaimables(Reward[] calldata _items) external onlyOwner {
        for (uint256 i = 0; i < _items.length; i++) {
            addClaimable(_items[i]);
        }
    }

    function airdrop(Reward calldata _item, string calldata _reason) public onlyOwner {
        erc20.transfer(_item.to, _item.amount);
        emit Airdrop(_item.to, _item.amount, _reason);
    }

    function airdrops(Reward[] calldata _item, string calldata _reason) external onlyOwner {
        for (uint256 i = 0; i < _item.length; i++) {
            airdrop(_item[i], _reason);
        }
    }

    function deleteClaimables(address[] calldata _addresses) external onlyOwner {
        for (uint256 i = 0; i < _addresses.length; i++) {
            claimables[_addresses[i]] = 0;
        }
    }
}

