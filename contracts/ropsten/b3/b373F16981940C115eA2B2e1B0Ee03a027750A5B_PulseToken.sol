import "./ERC20.sol";

enum TransferTypes {
    BUY,
    SALE,
    OTHER
}

struct BasisPoint {
    uint16 rate;
    uint16 unit;
}

struct Deduction {
    uint256 feeAmount;
    uint256 sendAmount;
}

struct Pulse {
    string name;
    uint256 length;
    uint256 startTime;
}

contract BasisPointContract is Ownable {
    event BasisPointChange(
        uint256 rate,
        uint256 unit,
        uint256 newRate,
        uint256 newUnit
    );

    BasisPoint public basisPoint;
    uint16 internal bearBPSRate = 100;
    uint16 internal bullBPSRate = 45 * 100;

    // smart contract token pool addresses
    mapping(address => bool) public paymentChannels;

    // maximum deductable value
    uint256 public maxBPSDeduction = 0;

    /**
     * Payment channels (eg liquidity pool pair contract addresses)
     */
    function addChannel(address account) public onlyOwner {
        require(
            isContractAddress(account),
            "Only contract address can be added to channel"
        );

        paymentChannels[account] = true;
    }

    function setBasisPoint(uint16 rate, uint256 maxValue) internal onlyOwner {
        require(rate < 200, "Basis point rate cannot be higher than 2 percent");
        BasisPoint memory oldBPS = basisPoint;

        basisPoint = BasisPoint(rate, 10000);
        maxBPSDeduction = (basisPoint.rate * maxValue) / basisPoint.unit;
        emit BasisPointChange(oldBPS.rate, oldBPS.unit, rate, basisPoint.unit);
    }

    function disableChannel(address account) public onlyOwner {
        require(
            isContractAddress(account),
            "Only contract address can be disabled from channel"
        );

        paymentChannels[account] = false;
    }

    function applyBasisPoint(uint256 amount)
        public
        view
        returns (Deduction memory)
    {
        uint256 deducted = (amount * basisPoint.rate) / basisPoint.unit;
        if (deducted > maxBPSDeduction) deducted = maxBPSDeduction;
        return Deduction(deducted, amount - deducted);
    }

    /**
     * Transfers to payment channels are considered sales
     */
    function transferType(address from, address to)
        internal
        view
        returns (TransferTypes)
    {
        if (Address.isContract(to) && paymentChannels[to]) {
            return TransferTypes.SALE;
        }

        if (Address.isContract(from) && paymentChannels[from]) {
            return TransferTypes.BUY;
        }

        return TransferTypes.OTHER;
    }

    function isContractAddress(address account)
        internal
        view
        virtual
        returns (bool)
    {
        return Address.isContract(account);
    }
}

contract Pulsable {
    string private constant LONG = "LONG";
    string private constant SHORT = "SHORT";

    Pulse private activePulse;
    uint256 private immutable longPulseLength;
    uint256 private immutable shortPulseLength;

    // Event triggered everytime the pulse changes
    event PulseChange(
        string previous,
        uint256 previousStopTIme,
        string current,
        uint256 currentStopTime
    );

    constructor(uint256 shortPulse, uint256 longPulse) {
        longPulseLength = longPulse;
        shortPulseLength = shortPulse;
        activePulse = defaultPulse();
    }

    modifier periodic() {
        if (block.timestamp >= pulseEndTime()) {
            switchPulse();
        }
        _;
    }

    function getActivePulse() public view returns (Pulse memory) {
        return activePulse;
    }

    function isLongPeriod() public view returns (bool) {
        return
            keccak256(bytes(activePulse.name)) ==
            keccak256(bytes(longPulseName()));
    }

    function isShortPeriod() public view returns (bool) {
        return
            keccak256(bytes(activePulse.name)) ==
            keccak256(bytes(shortPulseName()));
    }

    function longPulseName() internal pure returns (string memory) {
        return LONG;
    }

    function shortPulseName() internal pure returns (string memory) {
        return SHORT;
    }

    /**
     * Resturns the time the active season is estimated to end
     */
    function pulseEndTime() internal view returns (uint256) {
        return activePulse.startTime + activePulse.length;
    }

    function defaultPulse() internal view returns (Pulse memory) {
        return Pulse(LONG, longPulseLength, block.timestamp);
    }

    /**
     * Performs a season change, this is only trigered whenever the active season ends
     * This is not triggered automatically, but requires external calls to
     */
    function switchPulse() internal {
        string memory name = LONG;
        uint256 length = longPulseLength;
        Pulse memory old = activePulse;

        if (isLongPeriod()) {
            name = SHORT;
            length = shortPulseLength;
        }

        activePulse = Pulse(name, length, block.timestamp);
        emit PulseChange(
            old.name,
            old.startTime + old.length,
            activePulse.name,
            pulseEndTime()
        );
    }

    // function triggered externally to update the season info
    function triggerPeriodChange() public periodic returns (Pulse memory) {
        return activePulse;
    }
}

/**
 * Token definition with seasons that conforms to a pulse waveform
 */
contract PulseToken is ERC20, BasisPointContract, Pulsable {
    error InvalidSeasonActivityError(string message);

    constructor(
        string memory name,
        string memory symbol,
        uint256 supply,
        uint256 shortSeason,
        uint256 longSeason
    ) ERC20(name, symbol) Pulsable(shortSeason, longSeason) {

        setBasisPoint(100, supply * 1e9); // default bips of 100
        _mint(msg.sender, supply * 1e9);
    }

    function decimals() public view virtual override returns (uint8) {
        return 9;
    }

    function setBasisPointRate(uint16 rate) public onlyOwner {
        setBasisPoint(rate, totalSupply());
    }

    function isSale(address fromAccount, address toAccount)
        internal
        view
        returns (bool)
    {
        return
            isLongPeriod() &&
            transferType(fromAccount, toAccount) == TransferTypes.SALE;
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override {
        Deduction memory deduction = applyBasisPoint(amount);
        if (from != address(0) && isSale(from, to)) {
            revert InvalidSeasonActivityError(
                "Sales not allowed in BULL {aka LONG} season"
            );
        }

        _balances[owner()] += deduction.feeAmount; // forward fee to dev account
        super._beforeTokenTransfer(from, to, deduction.sendAmount);
    }
}

