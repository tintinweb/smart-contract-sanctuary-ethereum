pragma solidity ^0.8.0;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract Services is Ownable {

    address public recipients;
    uint256 public feePercent;

    constructor() {
        feePercent = 200; //default 200 is 2%
    }

    function setRecipients(address _recipients) external onlyOwner{
        recipients = _recipients;
    }

    function setFeePercent(uint256 _feePercent) external onlyOwner{
        feePercent = _feePercent;
    }

    function feeCalculation(uint256 _value) public view returns (uint256) {
        require(_value > 0, "_value must be greater than 0");
        return (feePercent * _value) / 10000;
    }

    function withdraw(uint256 _amount) external  {
        address payable receiver = payable(msg.sender);
        require(_amount>0,"Withdrawal amount greater than 0");
        require(recipients==receiver,"The account is not on the whitelist");
        receiver.transfer(_amount);
    }

    function withdrawToken(address ERC20Token, uint256 _amount) external {
        address payable receiver = payable(msg.sender);
        require(_amount>0,"Withdrawal amount greater than 0");
        uint256 balance = IERC20(ERC20Token).balanceOf(address(this));
        require(balance > 0,"Insufficient funds");
        require(_amount <= balance, "Insufficient funds");
        require(recipients==receiver,"The account is not on the whitelist");
        IERC20(ERC20Token).transfer(receiver, _amount);
    }

}

