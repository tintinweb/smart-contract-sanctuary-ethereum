pragma abicoder v2; // required to accept structs as function parameters

import "../royalties/Royalties.sol";
import "../services/Services.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";

contract ExchangeV1 is EIP712,Ownable {
    
    string private constant SIGNING_DOMAIN = "EXCHANGE";
    string private constant SIGNATURE_VERSION = "1";

    address private royalties;
    address private services;

    constructor(address _royalties, address _services)
        EIP712(SIGNING_DOMAIN, SIGNATURE_VERSION) {
        royalties = _royalties;
        services = _services;
    }

    struct ASSETS {
        /// @notice The id of the token to be redeemed. Must be unique - if another token with this ID already exists, the redeem function will revert.
        uint256 tokenId;
        /// @notice the value of the token of the total supply
        uint256 tokenValue;
        /// @notice The price (in wei) that the NFT creator is willing to accept for the initial sale of this NFT.
        uint256 price;
        /// @notice The metadata URI to associate with this token.
        string uri;
        /// @notice Percentage of royalties Ex: 1% is 100, 2.5% is 250, 10% is 1000
        uint32 royaltiesPercentage;
        /// @notice The ERC-20 token accept to pay.
        address ERC20Token;
        /// @notice the EIP-712 signature of all other fields in the NFT721 struct. For a voucher to be valid, it must be signed by an account with the MINTER_ROLE.
        bytes signature;
    }

    /// @param _tokenValue only for ERC-1155 assets
    function buyNow(ASSETS calldata _assets, address _collection, uint256 _tokenValue) public payable {
        address payable _seller = payable(_verify(_assets));
        address payable _buyer = payable(msg.sender);
        uint256 fee = Services(services).feeCalculation(_assets.price);
        address payable serviceOwner = payable(Services(services).recipients());
        uint256 royaltiesFee = _royaltiesCalculation(_collection, _seller, _buyer, _assets.tokenId, _assets.price);
        address payable creator = payable(_creator(_collection, _assets.tokenId));
        if(_assets.tokenValue == 0){
            //ERC-721
            require(IERC721(_collection).isApprovedForAll(_seller, address(this)),"Seller has not approved");
            require(IERC721(_collection).ownerOf(_assets.tokenId) == _seller,"The seller is not the owner");
            uint256 _amountRoyalties = _assets.price - (royaltiesFee + fee);
            if (_assets.ERC20Token != address(0)) {
                // take service fee
                IERC20(_assets.ERC20Token).transferFrom(_buyer, serviceOwner, fee);
                if (royaltiesFee > 0) {
                    // transfer tokens ERC20 to seller
                    IERC20(_assets.ERC20Token).transferFrom(_buyer, _seller, _amountRoyalties);
                    // transer token ERC20 to creator
                    IERC20(_assets.ERC20Token).transferFrom(_buyer, creator, royaltiesFee);
                }else{
                    uint256 amount = _assets.price - fee;
                    // transfer tokens ERC20 to seller
                    IERC20(_assets.ERC20Token).transferFrom(_buyer, _seller, amount);
                }
                //pay NFT token for buyer
                IERC721(_collection).safeTransferFrom(_seller, _buyer, _assets.tokenId);
            }else{
                //pay with coin
                require(msg.value == _assets.price, "Insufficient funds");
                // take service fee
                serviceOwner.transfer(fee);
                // transfer the tokenId to the buyer
                IERC721(_collection).safeTransferFrom(_seller, _buyer, _assets.tokenId);
                // pay royalties for creator
                if (royaltiesFee > 0) {
                    // pay for seller
                    _seller.transfer(_amountRoyalties);
                    // pay for creator
                    creator.transfer(royaltiesFee);
                } else {
                    uint256 amount = msg.value - fee;
                    // pay for seller
                    _seller.transfer(amount);
                }
            }
        }else{
            //ERC-1155
            require(IERC1155(_collection).isApprovedForAll(_seller, address(this)),"Seller has not approved");
            require(IERC1155(_collection).balanceOf(_seller, _assets.tokenId) > 0,"The seller has no assets to sell");
            require(IERC1155(_collection).balanceOf(_seller, _assets.tokenId) >= _tokenValue,"The seller does not have enough quantity to sell");
            uint256 price = _assets.price * _tokenValue;
            uint256 _amountRoyalties = price - (royaltiesFee + fee);
            if (_assets.ERC20Token != address(0)) {
                // take service fee
                IERC20(_assets.ERC20Token).transferFrom(_buyer, serviceOwner, fee);
                // pay royalties for creator
                if (royaltiesFee > 0) {
                    // transfer tokens ERC20 to seller
                    IERC20(_assets.ERC20Token).transferFrom(_buyer, _seller, _amountRoyalties);
                    // transer token ERC20 to creator
                    IERC20(_assets.ERC20Token).transferFrom(_buyer, creator, royaltiesFee);
                } else {
                    uint256 amount = price - fee;
                    // transfer tokens ERC20 to seller
                    IERC20(_assets.ERC20Token).transferFrom(_buyer, _seller, amount);
                }
                //pay NFT token for buyer
                IERC1155(_collection).safeTransferFrom(_seller, _buyer, _assets.tokenId, _tokenValue, "");
            } else {
                //pay with coin
                require(msg.value == price, "Insufficient funds");
                // take service fee
                serviceOwner.transfer(fee);
                // pay NFT token for buyer
                IERC1155(_collection).safeTransferFrom(_seller, _buyer, _assets.tokenId, _tokenValue, "");
                // pay royalties for creator
                if (royaltiesFee > 0) {
                    // pay for seller
                    _seller.transfer(_amountRoyalties);
                    // pay for creator
                    creator.transfer(royaltiesFee);
                } else {
                    uint256 amount = msg.value - fee;
                    // pay for seller
                    _seller.transfer(amount);
                }
            }
        }
    }

    /// @notice royalty fee, return the fee paid by the seller
    /// @notice If the seller and the buyer are the author, the result is 0.
    /// @param _value is the total NFT price when sold
    /// @param _tokenId to find the percentage of copyright when the creator set it
    function _royaltiesCalculation(address _collection, address _seller, address _buyer, uint256 _tokenId, uint256 _value) internal view returns (uint256) {
        require(_value > 0, "_value must be greater than 0");
        address creator = _creator(_collection, _tokenId);
        uint256 percent = Royalties(royalties).getRoyaltiesCollection(_collection, _tokenId).percent;
        if (percent == 0 || _seller == creator || _buyer == creator) {
           return 0;
        }
        return (percent * _value) / 10000;
    }

    function _creator(address _collection, uint256 _tokenId) internal view returns (address){
        return Royalties(royalties).getRoyaltiesCollection(_collection, _tokenId).owner;
    }

    /// @notice Returns a hash of the given ASSETS, prepared using EIP712 typed data hashing rules.
    /// @param _assets An ASSETS to hash.
    function _hash(ASSETS calldata _assets) internal view returns (bytes32) {
        return
            _hashTypedDataV4(
                keccak256(
                    abi.encode(
                        keccak256(
                            "ASSETS(uint256 tokenId,uint256 tokenValue,uint256 price,uint32 royaltiesPercentage,address ERC20Token)"
                        ),
                        _assets.tokenId,
                        _assets.tokenValue,
                        _assets.price,
                        _assets.royaltiesPercentage,
                        _assets.ERC20Token
                    )
                )
            );
    }

    /// @notice Verifies the signature for a given ASSETS, returning the address of the signer.
    /// @dev Will revert if the signature is invalid. Does not verify that the signer is authorized to mint NFTs.
    /// @param _assets describing an unminted NFT.
    function _verify(ASSETS calldata _assets) internal view returns (address) {
        bytes32 digest = _hash(_assets);
        return ECDSA.recover(digest, _assets.signature);
    }

}

