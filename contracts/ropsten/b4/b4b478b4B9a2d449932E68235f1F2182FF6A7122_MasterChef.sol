// MasterChef is the master of Token. He can make token, and he is a fair guy.
//
// Note that it's ownable and the owner wields tremendous power. The ownership
// will be transferred to a governance smart contract once TOKEN is sufficiently
// distributed and the community can show to govern itself.
//
// Have fun reading it. Hopefully it's bug-free. God bless.
contract MasterChef is Ownable, ReentrancyGuard, Pausable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many stake tokens the user has provided.
        uint256 weight; // weight of staked tokens
        uint256 timestamp; // the time at which user staked their tokens
        uint256 stakeUntill; // timestamp after which user can unstake
        uint256 stakeFor; // this will in days
    }

    struct RewardsInfo {
        uint256 totalClaimed; // total rewards claimed
        uint256 totalUnstaked; // total tokens unstaked
        uint256 totalStaked; // total staked tokens
        uint256 totalWeight; // total weight of all tokens staked untill now.
        uint256 lastVest;
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20 stakeToken; // Address of stake token contract.
        uint256 balance; // How many stake tokens the pool has.
        uint256 lastRewardBlock;
        uint256 totalWeight;
    }
    // The TOKEN TOKEN!
    IERC20 public immutable token;
    IVesting public immutable vesting;
    IERC20 public immutable rewardingToken;

    uint256 public tokenPerBlock;

    PoolInfo public poolInfo;

    uint256 public tokenPerBlockMaxCap = 1000 ether;

    // Info of each user that stakes LP tokens.
    mapping(address => UserInfo[]) public userStakes;

    mapping(address => RewardsInfo) public rewardsInfo;

    mapping(uint256 => uint256) private daysToWeight;
    mapping(uint256 => uint256) private daysToTimestamp;

    event Deposit(address indexed user, uint256 stakeIndex, uint256 amount);
    event Withdraw(address indexed user, uint256 stakeIndex, uint256 amount);

    event TokenPerBlockUpdate(uint256 tokenPerBlock);
    event TokenPerBlockMaxCapUpdate(uint256 tokenPerBlockMaxCap);

    constructor(
        IERC20 _stakingToken,
        IERC20 _rewardingToken,
        address _vesting,
        uint256 _tokenPerBlock
    ) {
        token = _stakingToken;
        rewardingToken = _rewardingToken;
        vesting = IVesting(_vesting);
        tokenPerBlock = _tokenPerBlock;

        // staking pool info
        poolInfo = PoolInfo({
            stakeToken: _stakingToken,
            lastRewardBlock: block.number,
            balance: 0,
            totalWeight: 0
        });

        daysToWeight[30] = 0.33 ether; // 0.33x
        daysToWeight[90] = 1 ether; // 1x
        daysToWeight[180] = 2 ether; // 2x
        daysToWeight[360] = 4 ether; // 4x

        daysToTimestamp[30] = 30 days;
        daysToTimestamp[90] = 90 days;
        daysToTimestamp[180] = 180 days;
        daysToTimestamp[360] = 360 days;
    }

    function getStakes(address _user)
        external
        view
        returns (UserInfo[] memory stakes)
    {
        return userStakes[_user];
    }

    function setTokenPerBlockMaxCap(uint256 _amount) external onlyOwner {
        tokenPerBlockMaxCap = _amount;
        emit TokenPerBlockMaxCapUpdate(tokenPerBlockMaxCap);
    }

    modifier onlyVester() {
        require(msg.sender == address(vesting));
        _;
    }

    function pull(address user) external onlyVester returns (uint256 rewards) {
        rewards = pendingRewards(user);
        rewardsInfo[user].lastVest = block.number;
        rewardingToken.approve(address(vesting), rewards);
    }

    function claim(uint256 index) external {
        vesting.claimVestedTokens(msg.sender, index);
    }

    function deposit(uint256 _amount, uint256 _stakeFor)
        external
        nonReentrant
        whenNotPaused
        periods(_stakeFor)
    {
        require(
            poolInfo.stakeToken.allowance(msg.sender, address(this)) >= _amount
        );
        UserInfo memory user;
        user.amount = _amount;
        user.stakeFor = _stakeFor;
        user.timestamp = block.timestamp;
        user.weight = daysToWeight[_stakeFor].mul(_amount).div(1e18);
        user.stakeUntill = block.timestamp.add(daysToTimestamp[_stakeFor]);
        userStakes[msg.sender].push(user);

        PoolInfo storage pool = poolInfo;
        poolInfo.balance += _amount;
        pool.totalWeight += user.weight;

        rewardsInfo[msg.sender].totalStaked += user.amount;
        rewardsInfo[msg.sender].totalWeight += user.weight;
        rewardsInfo[msg.sender].lastVest = block.number;

        uint256 stakeIndex = userStakes[msg.sender].length - 1;
        pool.stakeToken.safeTransferFrom(msg.sender, address(this), _amount);
        emit Deposit(msg.sender, stakeIndex, _amount);
    }

    function withdraw(uint256 stakeIndex) external nonReentrant {
        UserInfo memory stake = indexAt(stakeIndex);
        require(stake.stakeUntill < block.timestamp);

        rewardsInfo[msg.sender].totalStaked -= stake.amount;
        rewardsInfo[msg.sender].totalUnstaked += stake.amount;
        rewardsInfo[msg.sender].totalWeight -= stake.weight;

        poolInfo.stakeToken.safeTransfer(msg.sender, stake.amount);
        emit Withdraw(msg.sender, stakeIndex, stake.amount);
    }

    function approveForVesting() external onlyOwner {
        rewardingToken.approve(address(vesting), type(uint256).max);
    }

    function puase() external onlyOwner {
        _pause();
    }

    function unpuase() external onlyOwner {
        _unpause();
    }

    function setTokenPerBlock(uint256 _tokenPerBlock) external onlyOwner {
        require(_tokenPerBlock != 0, "MUST_NOT_BE_ZERO");
        tokenPerBlock = _tokenPerBlock;
    }

    modifier periods(uint256 _stakeFor) {
        require(
            (_stakeFor == 30) ||
                (_stakeFor == 90) ||
                (_stakeFor == 180) ||
                (_stakeFor == 360),
            "invalid staking period"
        );
        _;
    }

    function indexAt(uint256 index)
        private
        view
        returns (UserInfo memory stakes)
    {
        stakes = userStakes[msg.sender][index];
    }

    function getCurrentStaked(address user) public view returns (uint256) {
        return rewardsInfo[user].totalStaked;
    }

    function getCurrentClaimed(address user) public view returns (uint256) {
        return rewardsInfo[user].totalClaimed;
    }

    function getCurrentUnstaked(address user) public view returns (uint256) {
        return rewardsInfo[user].totalUnstaked;
    }

    function yieldPerBlock(UserInfo memory stake)
        private
        view
        returns (uint256)
    {
        return
            stake
                .amount
                .mul(tokenPerBlock)
                .mul(daysToWeight[stake.stakeFor])
                .div(poolInfo.totalWeight)
                .div(1e18);
    }

    function pendingRewards(address user)
        public
        view
        returns (uint256 rewards)
    {
        UserInfo[] memory stakes = userStakes[user];
        for (uint256 i = 0; i < stakes.length; i++) {
            if (stakes[i].stakeUntill >= block.timestamp) {
                rewards += yieldPerBlock(stakes[i]).mul(
                    block.number - rewardsInfo[user].lastVest
                );
            }
        }
    }
}

pragma solidity ^0.8.4;

interface IVesting {
    function vest(
        address _recipient,
        uint256 _amount,
        uint256 _vestingDuration
    ) external;

    function claimVestedTokens(address recipient,uint256 index) external;

    function getClaimAmount(uint256 index) external view returns (uint256);

    function getVestingTime(uint256 index) external view returns (uint256);

    function getUnlockTime(uint256 index) external view returns (uint256);

    function getRemainingDuration(uint256 index)
        external
        view
        returns (uint256);
}

