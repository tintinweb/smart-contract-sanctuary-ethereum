import "@uniswap/v3-core/contracts/libraries/TickMath.sol";
import "./lib/UniswapV3PriceLibrary.sol";
import "./PaperToken.sol";
import "./interfaces/IPaperToken.sol";

contract TokenFactory is ERC721Holder {
  using SafeERC20 for IERC20;
  using SafeMath for uint256;
  using TickMath for uint160;

  event PoolCreated(
    address indexed by,
    address indexed tokenA,
    address indexed _tokenB,
    uint256 amountA,
    uint256 amountB,
    uint256 lpAmount
  );

  /// @dev Token address list
  address[] private tokenList;

  /// @dev Token address -> Bool
  mapping(address => bool) public isPaperToken;

  /// @dev Token hash -> Token address
  mapping(bytes => address) public tokenAddressByHash;

  /// @dev Token1 hash -> Token2 hash -> Pool address
  mapping(bytes => mapping(bytes => address)) public poolAddressByHash;

  /// @dev UniswapV3 NonFungiblePositionManager address
  address private constant NonFungiblePositionManager = 0xC36442b4a4522E871399CD717aBDD847Ab11FE88;

  /// @dev USDC address
  address private constant USDC = 0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174;

  /// @dev UniswapV3 pool fee
  uint24 public constant PoolFee = 500; // 0.05%

  /// @dev UniswapV3 non fungible position managner
  INonfungiblePositionManager public immutable nonfungiblePositionManager;

  /// @dev USDC hash
  bytes public USDC_HASH;

  constructor() {
    nonfungiblePositionManager = INonfungiblePositionManager(NonFungiblePositionManager);
    USDC_HASH = abi.encodePacked(USDC);
  }

  /**
   * @notice Create the new PaperToken
   * @param _name Token name
   * @param _symbol Token symbol
   * @param _amount Token amount to mint
   * @param _pHash Token hash
   * @return (address) PaperToken address
   */
  function createToken(
    string memory _name,
    string memory _symbol,
    uint256 _amount,
    bytes memory _pHash,
    bytes[] memory _pHashListForCitationPool,
    uint256[] memory _priceListForCitationPool,
    uint256[] memory _liquidityAmountListForCitationPool
  ) external returns (address) {
    require(tokenAddressByHash[_pHash] == address(0), "metadata already registered");
    require(
      _pHashListForCitationPool.length == _priceListForCitationPool.length,
      "Invalid data set for citation pools"
    );
    require(
      _pHashListForCitationPool.length == _liquidityAmountListForCitationPool.length,
      "Invalid data set for citation pools"
    );

    // create the new token
    address newToken = address(new PaperToken(address(this), _name, _symbol, _amount, _pHash));

    // check pHash list and create the citation pools
    uint256 totalLiquidityAmount;
    for (uint256 i; i < _pHashListForCitationPool.length; i++) {
      // ignore if token hashes are identical
      if (keccak256(_pHash) == keccak256(_pHashListForCitationPool[i])) continue;

      address paperToken = tokenAddressByHash[_pHashListForCitationPool[i]];

      if (paperToken != address(0)) {
        if (
          poolAddressByHash[_pHashListForCitationPool[i]][_pHash] == address(0) &&
          poolAddressByHash[_pHash][_pHashListForCitationPool[i]] == address(0)
        ) {
          // mint the position
          _mintNewPositionForCitationPool(
            newToken,
            _liquidityAmountListForCitationPool[i],
            paperToken,
            1,
            _priceListForCitationPool[i],
            msg.sender
          );

          // update totalLiquidityAmount
          totalLiquidityAmount += _liquidityAmountListForCitationPool[i];
        }
      }
    }

    IERC20(newToken).safeTransfer(msg.sender, _amount.sub(totalLiquidityAmount));

    // set the new token created
    tokenList.push(newToken);
    isPaperToken[newToken] = true;

    // update tokenAddressByHash
    tokenAddressByHash[_pHash] = newToken;

    return newToken;
  }

  /**
   * @notice Create the citation pool for PaperToken1/PaperToken2
   * @param _paperToken0 PaperToken0 address
   * @param _paperToken0AmountToMint PaperToken0 amount to mint
   * @param _paperToken1 PaperToken1 address
   * @param _paperToken1AmountToMint PaperToken1 amount to mint
   * @param _minPriceInPaperToken1 PaperToken0 min price in PaperToken1
   * @param _refunder Refunder address
   */
  function _mintNewPositionForCitationPool(
    address _paperToken0,
    uint256 _paperToken0AmountToMint,
    address _paperToken1,
    uint256 _paperToken1AmountToMint,
    uint256 _minPriceInPaperToken1,
    address _refunder
  ) internal {
    address pair;

    // mint the new position on uniswap V3
    if (_paperToken0 < _paperToken1) {
      pair = _mintNewPosition(
        _paperToken0,
        _paperToken1,
        _paperToken0AmountToMint,
        _paperToken1AmountToMint,
        _minPriceInPaperToken1,
        true,
        _refunder
      );
    } else {
      pair = _mintNewPosition(
        _paperToken1,
        _paperToken0,
        _paperToken1AmountToMint,
        _paperToken0AmountToMint,
        _minPriceInPaperToken1,
        false,
        _refunder
      );
    }

    // update poolAddressByHash
    bytes memory paperToken0Hash = IPaperToken(_paperToken0).pHash();
    bytes memory paperToken1Hash = IPaperToken(_paperToken1).pHash();
    poolAddressByHash[paperToken0Hash][paperToken1Hash] = poolAddressByHash[paperToken1Hash][paperToken0Hash] = pair;
  }

  /**
   * @notice Mint new position(PaperToken/USDC) on uniswap V3
   * @dev Always mint the position with PaperToken/USDC pair
   * @dev The price range of the minted position will be [_minPriceInUSDC, infinite]
   * @param _paperToken PaperToken address
   * @param _paperTokenAmountToMint PaperToken amount to add the liquidity
   * @param _minPriceInUSDC PaperToken min price in USDC
   */
  function mintNewPositionForUSDCPool(
    address _paperToken,
    uint256 _paperTokenAmountToMint,
    uint256 _minPriceInUSDC
  ) external {
    require(isPaperToken[_paperToken], "Invalid PaperToken");

    address pair;

    // transfer PaperToken and USDC to the contract
    IERC20(_paperToken).safeTransferFrom(msg.sender, address(this), _paperTokenAmountToMint);

    // mint the new position on uniswap V3
    if (_paperToken < USDC) {
      pair = _mintNewPosition(_paperToken, USDC, _paperTokenAmountToMint, 1, _minPriceInUSDC, true, msg.sender);
    } else {
      pair = _mintNewPosition(USDC, _paperToken, 1, _paperTokenAmountToMint, _minPriceInUSDC, false, msg.sender);
    }

    // update poolAddressByHash
    bytes memory pHash = IPaperToken(_paperToken).pHash();
    poolAddressByHash[pHash][USDC_HASH] = poolAddressByHash[USDC_HASH][pHash] = pair;
  }

  /**
   * @notice Calls the MintParams function defined in periphery, mints sigle side liquidity.
   * @dev Refund all the remaining tokens to the user
   * @param _token0 Token0 address
   * @param _token1 Token1 address
   * @param _amount0ToMint Token0 amount to use
   * @param _amount1ToMint Token1 amount to use
   * @param _token0PriceInToken1 Token0 price in Token1
   * @param _isToken1NoLiquididty Indicate if Token1 shouldn't have the liquidity
   * @param _refunder Refunder address
   * @return (address) Minted UniswapV3 pair address
   */
  function _mintNewPosition(
    address _token0,
    address _token1,
    uint256 _amount0ToMint,
    uint256 _amount1ToMint,
    uint256 _token0PriceInToken1,
    bool _isToken1NoLiquididty,
    address _refunder
  ) internal returns (address) {
    // approve the position manager
    if (_isToken1NoLiquididty) {
      IERC20(_token0).approve(address(nonfungiblePositionManager), _amount0ToMint);
    } else {
      IERC20(_token1).approve(address(nonfungiblePositionManager), _amount1ToMint);
    }

    // create the pool with 0.5% fee
    address pair = nonfungiblePositionManager.createAndInitializePoolIfNecessary(
      _token0,
      _token1,
      PoolFee,
      _isToken1NoLiquididty ? TickMath.MIN_SQRT_RATIO : TickMath.MAX_SQRT_RATIO - 1
    );

    // calculate the tick for the _token0PriceInToken1
    uint160 sqrtMinPriceX96;
    if (_isToken1NoLiquididty) {
      sqrtMinPriceX96 = UniswapV3PriceLibrary.calculateSqrtPrice(_token0PriceInToken1, 10**18, 18, 6);
    } else {
      sqrtMinPriceX96 = UniswapV3PriceLibrary.calculateSqrtPrice(10**18, _token0PriceInToken1, 6, 18);
    }
    int24 minTick = TickMath.getTickAtSqrtRatio(sqrtMinPriceX96);

    // mint the position
    INonfungiblePositionManager.MintParams memory params = INonfungiblePositionManager.MintParams({
      token0: _token0,
      token1: _token1,
      fee: PoolFee,
      tickLower: _isToken1NoLiquididty ? (minTick / 10) * 10 : int24(-887270),
      tickUpper: _isToken1NoLiquididty ? int24(887270) : (minTick / 10) * 10,
      amount0Desired: _amount0ToMint,
      amount1Desired: _amount1ToMint,
      amount0Min: 0,
      amount1Min: 0,
      recipient: msg.sender,
      deadline: block.timestamp
    });

    uint256 amount0Used;
    uint256 amount1Used;
    (, , amount0Used, amount1Used) = nonfungiblePositionManager.mint(params);

    // refund remaining tokens
    _refundTokens(
      _token0,
      _token1,
      _amount0ToMint,
      _amount1ToMint,
      amount0Used,
      amount1Used,
      _isToken1NoLiquididty,
      _refunder
    );

    // make sure if the pool is a single side one
    if (_isToken1NoLiquididty) {
      require(amount1Used == 0, "no signle side pool");
    } else {
      require(amount0Used == 0, "no single side pool");
    }

    return pair;
  }

  /**
   * @notice Refund tokens to the user
   * @param _token0 Token0 address
   * @param _token1 Token1 address
   * @param _amount0 Token0 amount
   * @param _amount1 Token1 amount
   * @param _amount0Used Token0 amount used
   * @param _amount1Used Token1 amount used
   * @param _isToken1NoLiquididty Indicate if Token1 shouldn't have the liquidity
   * @param _refunder Refunder address
   */
  function _refundTokens(
    address _token0,
    address _token1,
    uint256 _amount0,
    uint256 _amount1,
    uint256 _amount0Used,
    uint256 _amount1Used,
    bool _isToken1NoLiquididty,
    address _refunder
  ) internal {
    // Remove allowance and refund tokens
    if (_amount0Used < _amount0) {
      IERC20(_token0).approve(address(nonfungiblePositionManager), 0);
      if (_isToken1NoLiquididty) {
        uint256 refundToken0 = _amount0.sub(_amount0Used);
        IERC20(_token0).safeTransfer(_refunder, refundToken0);
      }
    }

    if (_amount1Used < _amount1) {
      IERC20(_token1).approve(address(nonfungiblePositionManager), 0);
      if (!_isToken1NoLiquididty) {
        uint256 refundToken1 = _amount1.sub(_amount1Used);
        IERC20(_token1).safeTransfer(_refunder, refundToken1);
      }
    }
  }

  function getTokenList() external view returns (address[] memory) {
    return tokenList;
  }
}

