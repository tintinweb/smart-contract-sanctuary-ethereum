contract PaperToken is ERC20 {
  using SafeMath for uint256;

  event TokenCreated(
    address indexed by,
    address indexed tokenAddress,
    address indexed to,
    uint256 amount,
    string name,
    string symbol,
    bytes pHash
  );
  event TokenMinted(address indexed by, uint256 amount);

  /// @dev Token hash
  bytes public pHash;

  /// @dev Minter address
  address public minter;

  /// @dev Max supply
  uint256 public constant MAX_SUPPLY = 20000 * 10**18;

  modifier onlyMinter() {
    require(msg.sender == minter, "only minter");
    _;
  }

  constructor(
    address _to,
    string memory _name,
    string memory _symbol,
    uint256 _amount,
    bytes memory _pHash
  ) ERC20(_name, _symbol) {
    // set minter address
    minter = msg.sender;

    // get the mint amount
    uint256 mintAmount;
    if (_amount <= MAX_SUPPLY) {
      mintAmount = _amount;
    } else {
      mintAmount = MAX_SUPPLY;
    }

    _mint(_to, mintAmount);

    // set the token hash
    pHash = _pHash;

    emit TokenCreated(msg.sender, address(this), _to, mintAmount, _name, _symbol, _pHash);
  }

