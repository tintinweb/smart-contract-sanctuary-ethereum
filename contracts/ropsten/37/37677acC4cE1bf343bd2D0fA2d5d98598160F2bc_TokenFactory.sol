  function mint(uint256 _amount) external onlyMinter {
    uint256 totalAmount = totalSupply();

    uint256 mintAmount;
    if (totalAmount.add(_amount) <= MAX_SUPPLY) {
      mintAmount = _amount;
    } else {
      mintAmount = MAX_SUPPLY.sub(totalAmount);
    }

    _mint(msg.sender, mintAmount);

    emit TokenMinted(msg.sender, mintAmount);
  }
}

