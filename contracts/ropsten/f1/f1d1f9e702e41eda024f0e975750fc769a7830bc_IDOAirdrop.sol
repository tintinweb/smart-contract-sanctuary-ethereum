pragma solidity ^0.8.13;

import "openzeppelin-contracts/contracts/token/ERC20/IERC20.sol";
import "openzeppelin-contracts/contracts/utils/math/SafeMath.sol";
import {AirdropAccessControl} from "../src/utils/AirdropAccessControl.sol";
import {FireCatTransfer} from "../src/utils/FireCatTransfer.sol";
import {IIDOAirdrop} from "../src/interfaces/IIDOAirdrop.sol";

/**
 * @title FireCat's IDOAirdrop contract
 * @notice main: claim, topUP
 * @author FireCat Finance
 */
contract IDOAirdrop is IIDOAirdrop, FireCatTransfer, AirdropAccessControl {
    using SafeMath for uint256;

    event SetReleaseConfig(uint256[] releaseTimePeriod_);
    event SetClaimOn(bool isClaimOn_);
    event TopUp(address user_, uint256 amount_, uint256 totalSupplyNew_);
    event Claimed(address user_, uint256 actualSubAmount_, uint256 totalClaimedNew_);

    /**
    * @dev switch on/off the claim function.
    */
    bool public isClaimOn = false;

    /**
    * @dev the token of airdrop.
    */
    address public airdropToken;

    /**
    * @dev the token of airdrop.
    */
    uint256[] public releaseTimePeriod;

    /**
    * @dev the total airdrop amount which is alread exists in the contract.
    */
    uint256 private _totalSupply;

    /**
    * @dev the total claimed amount which is already transfer from this contract.
    */
    uint256 private _totalClaimed;

    /**
    * @dev the reward amount of user.
    */
    mapping(address => uint256[]) private _userReward;

    /**
    * @dev the claimed amount of user.
    */
    mapping(address => uint256) private _claimed;

    function initialize(address admin_, address airdropToken_) initializer public {
        airdropToken = airdropToken_;
        __AccessControl_init();
        __ReentrancyGuard_init();
        _setupRole(DEFAULT_ADMIN_ROLE, admin_);
    }

    modifier beforeClaim() {
        require(isClaimOn, "ARD:E05");
        _;
    }

    /// @inheritdoc IIDOAirdrop
    function totalSupply() public view returns (uint256) {
        return _totalSupply;
    }

    /// @inheritdoc IIDOAirdrop
    function totalClaimed() public view returns (uint256) {
        return _totalClaimed;
    }

    /// @inheritdoc IIDOAirdrop
    function claimedOf(address user_) public view returns (uint256) {
        return _claimed[user_];
    }

    /// @inheritdoc IIDOAirdrop
    function userRewardOf(address user_) public view returns (uint256[] memory) {
        return _userReward[user_];
    }

    /**
    * @notice calculate the sum of totalReward when timestamp is bigger than last timePeriod.
    * @param user_ address
    * @return totalReward
    */
    function _selectSumReward(address user_) internal view returns (uint256) {
        uint256[] memory rewardArray = _userReward[user_];

        uint256 totalReward = 0;
        for (uint256 i = 0; i < rewardArray.length; i++) {
            totalReward += rewardArray[i];
        }
        return totalReward;
    }
    
    /// @inheritdoc IIDOAirdrop
    function reviewOf(address user_) public view returns (uint256, uint256, uint256) {
        uint256 totalClaim = _selectSumReward(user_);
        uint256[] memory rewardArray = _userReward[user_];

        uint256 maxFakeClaim = 0;
        for (uint256 i = 0; i < releaseTimePeriod.length; i++) {
            if (block.timestamp > releaseTimePeriod[i]) {
                // rewardArray[0] + rewardArray[1] + rewardArray[n] + ...;
                maxFakeClaim += rewardArray[i];
            }
        }
        
        uint256 claimed = _claimed[user_];
        uint256 availableClaim = maxFakeClaim.sub(claimed);
        return (availableClaim, claimed, totalClaim);
    }

    /// @inheritdoc IIDOAirdrop
    function setClaimOn(bool isClaimOn_) external onlyRole(DATA_ADMIN) {
        isClaimOn = isClaimOn_;
        emit SetClaimOn(isClaimOn_);
    }

    /// @inheritdoc IIDOAirdrop
    function setReleaseConfig(uint256[] memory releaseTimePeriod_) external onlyRole(DATA_ADMIN) {
        uint256 arrayLen = releaseTimePeriod_.length;
        require(arrayLen > 0, "ARD:E00");

        for (uint256 i = 0; i < arrayLen; i++) {
            if (i + 1 < arrayLen) {
                require(releaseTimePeriod_[i] < releaseTimePeriod_[i + 1], "ARD:E04");
            }
        }
        releaseTimePeriod = releaseTimePeriod_;
        emit SetReleaseConfig(releaseTimePeriod_);
    }
   
    /// @inheritdoc IIDOAirdrop
    function importRewardConfig(address[] memory userArray_, uint256[] memory rewardArray_) external onlyRole(DATA_ADMIN) {
        require(userArray_.length > 0 && rewardArray_.length > 0, "ARD:E03");

        for (uint256 i = 0; i < userArray_.length; i++) {
            _userReward[userArray_[i]] = rewardArray_;
        }
    }

    /// @inheritdoc IIDOAirdrop
    function withdrawRemaining(address token, uint256 amount) external nonReentrant onlyRole(DATA_ADMIN) returns (uint256) {
        return withdraw(token, amount);
    }

    /// @inheritdoc IIDOAirdrop
    function topUp(uint256 addAmount) external nonReentrant onlyRole(DATA_ADMIN) returns (uint256) {
        require(IERC20(airdropToken).balanceOf(msg.sender) >= addAmount, "ARD:E01");

        uint256 actualAddAmount = doTransferIn(airdropToken, msg.sender, addAmount);
        // totalSupplyNew + actualAddAmount
        uint256 totalSupplyNew = _totalSupply.add(actualAddAmount);

        /* Revert on overflow */
        require(totalSupplyNew > _totalSupply, "ARD:E02");

        _totalSupply = totalSupplyNew;
        emit TopUp(msg.sender, actualAddAmount, totalSupplyNew);
        return actualAddAmount;
    }

    /// @inheritdoc IIDOAirdrop
    function claim() external beforeClaim nonReentrant returns (uint256) {
        (uint256 availableClaim,,) = reviewOf(msg.sender);
        require(availableClaim > 0, "ARD:E00");
        require(IERC20(airdropToken).balanceOf(address(this)) >= availableClaim, "ARD:E01");

        uint256 actualClaimedAmount = doTransferOut(airdropToken, msg.sender, availableClaim);
        _claimed[msg.sender] = _claimed[msg.sender].add(actualClaimedAmount);

        _totalClaimed = _totalClaimed.add(actualClaimedAmount);
        emit Claimed(msg.sender, actualClaimedAmount, _totalClaimed);
        return actualClaimedAmount;
    }

}

