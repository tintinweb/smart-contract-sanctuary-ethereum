        public
        view
        override
        returns (uint256 balance)
    {
        VaultAPI[] memory vaults = allVaults(token);

        for (uint256 id = 0; id < vaults.length; id++) {
            balance = balance.add(
                vaults[id]
                    .balanceOf(account)
                    .mul(vaults[id].pricePerShare())
                    .div(10**uint256(vaults[id].decimals()))
            );
        }
    }

