pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/cryptography/SignatureChecker.sol";

interface IERC721SpecialToken is IERC721 {
    function marketplaceInitSaleBeneficiary() external view returns (address);

    function isMarketplaceAdmin(address sender) external view returns (bool);

    function mintFromMarketplace(uint256 tokenId) external;

    function burnFromMarketplace(uint256 tokenId) external;
}

contract ERC721Marketplace is Ownable {
    enum SaleKind {
        NONE,
        ORDER,
        AUCTION
    }

    struct SaleProperties {
        SaleKind kind;
        address creator;
        address paymentToken;
        bool isSignSale;
        bool isInitSale;
    }

    struct SignProperties {
        address key;
        uint128 kind;
    }

    struct OrderProperties {
        uint256 paymentAmount;
    }

    struct AuctionProperties {
        address shopper;
        uint256 paymentAmount;
        uint256 auctionStartTime;
        uint256 auctionEndTime;
    }

    mapping(address => mapping(uint256 => SaleProperties))
        public salePropertiesMap;
    mapping(address => mapping(uint256 => SignProperties))
        public signPropertiesMap;
    mapping(address => mapping(uint256 => OrderProperties))
        public orderPropertiesMap;
    mapping(address => mapping(uint256 => AuctionProperties))
        public auctionPropertiesMap;

    mapping(address => uint256) public tokenFeeMap;
    mapping(address => address) public tokenFeeRecipientMap;

    mapping(address => bool) public isSpecialToken;

    uint256 public fee;
    address public feeRecipient;

    function openOrder(
        address token,
        uint256 tokenId,
        address paymentToken,
        uint256 paymentAmount
    ) external {
        address creator = _msgSender();

        _setSale(token, tokenId, SaleKind.ORDER, creator, paymentToken, false);
        _setOrder(token, tokenId, paymentAmount);
    }

    function openOrderWithSign(
        address token,
        uint256 tokenId,
        address paymentToken,
        uint256 paymentAmount,
        address signKey,
        uint128 signKind
    ) external {
        address creator = _msgSender();

        _setSign(token, tokenId, signKey, signKind);
        _setSale(token, tokenId, SaleKind.ORDER, creator, paymentToken, true);
        _setOrder(token, tokenId, paymentAmount);
    }

    function cancelOrder(address token, uint256 tokenId) external {
        address creator = _msgSender();

        _cancelSale(token, tokenId, creator);

        delete signPropertiesMap[token][tokenId];
        delete orderPropertiesMap[token][tokenId];
    }

    function closeOrder(address token, uint256 tokenId) external payable {
        address shoper = _msgSender();

        _closeOrder(token, tokenId, shoper, msg.value);
    }

    function closeOrderWithSign(
        address token,
        uint256 tokenId,
        bytes memory sign
    ) external payable {
        address shoper = _msgSender();

        _checkSign(shoper, token, tokenId, sign);

        _closeOrder(token, tokenId, shoper, msg.value);

        delete signPropertiesMap[token][tokenId];
    }

    function openAuction(
        address token,
        uint256 tokenId,
        address paymentToken,
        uint256 paymentAmount,
        uint256 auctionStartTime,
        uint256 auctionEndTime
    ) external {
        address creator = _msgSender();

        _setSale(
            token,
            tokenId,
            SaleKind.AUCTION,
            creator,
            paymentToken,
            false
        );
        _setAuction(
            token,
            tokenId,
            paymentAmount,
            auctionStartTime,
            auctionEndTime
        );
    }

    function openAuctionWithSign(
        address token,
        uint256 tokenId,
        address paymentToken,
        uint256 paymentAmount,
        uint256 auctionStartTime,
        uint256 auctionEndTime,
        address signKey,
        uint128 signKind
    ) external {
        address creator = _msgSender();

        _setSign(token, tokenId, signKey, signKind);
        _setSale(token, tokenId, SaleKind.AUCTION, creator, paymentToken, true);
        _setAuction(
            token,
            tokenId,
            paymentAmount,
            auctionStartTime,
            auctionEndTime
        );
    }

    function participateAuction(
        address token,
        uint256 tokenId,
        uint256 paymentAmount
    ) external payable {
        address shoper = _msgSender();

        _participateAuction(token, tokenId, shoper, paymentAmount, msg.value);
    }

    function participateAuctionWithSign(
        address token,
        uint256 tokenId,
        uint256 paymentAmount,
        bytes memory sign
    ) external payable {
        address shoper = _msgSender();

        _checkSign(shoper, token, tokenId, sign);

        _participateAuction(token, tokenId, shoper, paymentAmount, msg.value);
    }

    function cancelAuction(address token, uint256 tokenId) external {
        AuctionProperties storage a = auctionPropertiesMap[token][tokenId];
        if (!(a.shopper == address(0))) {
            revert(""); //todo
        }

        address creator = _msgSender();

        _cancelSale(token, tokenId, creator);

        delete signPropertiesMap[token][tokenId];
        delete auctionPropertiesMap[token][tokenId];
    }

    function closeAuction(address token, uint256 tokenId) external {
        SaleProperties storage s = salePropertiesMap[token][tokenId];
        if (!(s.kind == SaleKind.AUCTION)) {
            revert(""); //todo
        }

        AuctionProperties storage a = auctionPropertiesMap[token][tokenId];
        if (!(a.auctionEndTime <= block.timestamp)) {
            revert(""); //todo
        }
        if (!(a.shopper != address(0))) {
            revert(""); //todo
        }

        address recipient = s.isInitSale
            ? IERC721SpecialToken(token).marketplaceInitSaleBeneficiary()
            : s.creator;
        if (s.paymentToken == address(0)) {
            _sendCoin(recipient, a.paymentAmount);
        } else {
            IERC20(s.paymentToken).transfer(recipient, a.paymentAmount);
        }

        IERC721(token).transferFrom(address(this), a.shopper, tokenId);

        delete signPropertiesMap[token][tokenId];
        delete salePropertiesMap[token][tokenId];
        delete auctionPropertiesMap[token][tokenId];
    }

    function _setSale(
        address token,
        uint256 tokenId,
        SaleKind kind,
        address creator,
        address paymentToken,
        bool isSignSale
    ) private {
        SaleProperties storage s = salePropertiesMap[token][tokenId];
        if (!(s.kind == SaleKind.NONE)) {
            revert(""); //todo
        }

        s.kind = kind;
        s.creator = creator;
        s.paymentToken = paymentToken;
        s.isSignSale = isSignSale;

        address owner = IERC721(token).ownerOf(tokenId);
        if (owner == creator) {
            IERC721(token).transferFrom(owner, address(this), tokenId);
        } else if (owner == address(0)) {
            if (!isSpecialToken[token]) {
                revert(""); //todo
            }

            if (!IERC721SpecialToken(token).isMarketplaceAdmin(creator)) {
                revert(""); //todo
            }

            IERC721SpecialToken(token).mintFromMarketplace(tokenId);

            s.isInitSale = true;
        } else {
            revert(""); //todo
        }
    }

    function _cancelSale(
        address token,
        uint256 tokenId,
        address creator
    ) private {
        SaleProperties storage s = salePropertiesMap[token][tokenId];

        if (!(s.kind != SaleKind.NONE)) {
            revert(""); //todo
        }

        if (s.isInitSale) {
            if (!IERC721SpecialToken(token).isMarketplaceAdmin(creator)) {
                revert(""); //todo
            }

            IERC721SpecialToken(token).burnFromMarketplace(tokenId);
        } else {
            if (!(creator == s.creator)) {
                revert(""); //todo
            }

            IERC721(token).transferFrom(address(this), creator, tokenId);
        }

        delete salePropertiesMap[token][tokenId];
    }

    function _setSign(
        address token,
        uint256 tokenId,
        address key,
        uint128 kind
    ) private {
        SignProperties storage s = signPropertiesMap[token][tokenId];

        s.key = key;
        s.kind = kind;
    }

    function _setOrder(
        address token,
        uint256 tokenId,
        uint256 paymentAmount
    ) private {
        OrderProperties storage o = orderPropertiesMap[token][tokenId];

        o.paymentAmount = paymentAmount;
    }

    function _participateAuction(
        address token,
        uint256 tokenId,
        address shopper,
        uint256 paymentAmount,
        uint256 coinValue
    ) private {
        SaleProperties storage s = salePropertiesMap[token][tokenId];
        if (!(s.kind == SaleKind.AUCTION)) {
            revert(""); //todo
        }

        AuctionProperties storage a = auctionPropertiesMap[token][tokenId];
        if (!(a.auctionStartTime <= block.timestamp)) {
            revert(""); //todo
        }
        if (!(block.timestamp < a.auctionEndTime)) {
            revert(""); //todo
        }
        if (!(a.paymentAmount < paymentAmount)) {
            revert(""); //todo
        }

        if (s.paymentToken == address(0)) {
            if (!(paymentAmount == coinValue)) {
                revert(""); //todo
            }

            if (a.shopper != address(0)) {
                _sendCoin(a.shopper, a.paymentAmount);
            }
        } else {
            IERC20(s.paymentToken).transferFrom(
                shopper,
                address(this),
                paymentAmount
            );

            if (a.shopper != address(0)) {
                IERC20(s.paymentToken).transfer(shopper, a.paymentAmount);
            }
        }

        a.shopper = shopper;
        a.paymentAmount = paymentAmount;
    }

    function _closeOrder(
        address token,
        uint256 tokenId,
        address shopper,
        uint256 coinValue
    ) private {
        SaleProperties storage s = salePropertiesMap[token][tokenId];
        if (!(s.kind == SaleKind.ORDER)) {
            revert(""); //todo
        }

        if (0 < fee) {
            if (coinValue < fee) {
                revert(""); //todo
            }

            _sendCoin(feeRecipient, fee);
            coinValue -= fee;
        }

        uint256 tokenFee = tokenFeeMap[token];
        if (0 < tokenFee) {
            if (coinValue < tokenFee) {
                revert(""); //todo
            }

            _sendCoin(tokenFeeRecipientMap[token], tokenFee);
            coinValue -= tokenFee;
        }

        address recipient = s.isInitSale
            ? IERC721SpecialToken(token).marketplaceInitSaleBeneficiary()
            : s.creator;
        OrderProperties storage o = orderPropertiesMap[token][tokenId];
        if (s.paymentToken == address(0)) {
            _sendCoin(recipient, o.paymentAmount);
            coinValue -= o.paymentAmount;
        } else {
            IERC20(s.paymentToken).transferFrom(
                shopper,
                recipient,
                o.paymentAmount
            );
        }

        if (!(coinValue == 0)) {
            revert("");
        }

        IERC721(token).transferFrom(address(this), shopper, tokenId);

        delete salePropertiesMap[token][tokenId];
        delete orderPropertiesMap[token][tokenId];
    }

    function _setAuction(
        address token,
        uint256 tokenId,
        uint256 paymentAmount,
        uint256 auctionStartTime,
        uint256 auctionEndTime
    ) private {
        AuctionProperties storage a = auctionPropertiesMap[token][tokenId];

        a.paymentAmount = paymentAmount;
        a.auctionStartTime = auctionStartTime;
        a.auctionEndTime = auctionEndTime;
    }

    function _checkSign(
        address shoper,
        address token,
        uint256 tokenId,
        bytes memory sign
    ) private view {
        SignProperties storage s = signPropertiesMap[token][tokenId];

        bytes32 dataHash = keccak256(
            abi.encodeWithSignature(
                "hash(address,address,uin128)",
                shoper,
                token,
                s.kind
            )
        );

        if (!SignatureChecker.isValidSignatureNow(s.key, dataHash, sign)) {
            revert(""); //todo
        }
    }

    function _sendCoin(address recipient, uint256 amount) private {
        (bool success, ) = recipient.call{value: amount}("");

        if (!success) {
            revert(""); //todo
        }
    }
}

