contract Staking is Ownable, ReentrancyGuard, SetStake {
    /* ========== STATE VARIABLES ========== */
    IERC20 public rewardToken; //REWARD TOKEN ADDRESS
    IERC20 public stakingToken; //LP TOKEN ADDRESS

    uint256[] public endWitdrawTimestamps; //ALL ENDS STAKE TIMESTAMP
    uint256[] public allStakedBalances; //ALL STAKES BALANCES FROM BEGINNING
    uint256[] public allRewards; //ALL REWARDS FROM BEGINNING

    uint256 public StakedReward; //REWARD

    mapping(address => uint256) public stakedBalance; // stake = {};
    mapping(address => uint256) private stakeProfit; // stake = {};
    mapping(address => uint256) public stakedTime; // stake = {};

    uint256 public allStakedBalance; // stake = {};
    uint256 public LpBalanceOfMonth; // stake = {};

    event RewardAmount(address indexed user, uint256 reward);
    event Stake(address indexed user, uint256 amount, uint256 endTime);
    event Unstake(address indexed user, uint256 amountStaked, uint256 reward);
    event SetReward(address user, uint256 reward);

    constructor(address _stakingToken, address _rewardToken) {
        /* ======= PAIR AND LPTOKEN HAVE SAVE ADDRESSES ======= */
        stakingToken = IERC20(_stakingToken); //LP TOKEN ADDRESS
        rewardToken = IERC20(_rewardToken);
    }

    //includes modifiers
    modifier startStake() {
        uint256 endStakeTimestamp = startStakeTimestamp + 24 hours;
        require(
            block.timestamp >= startStakeTimestamp &&
                block.timestamp <= endStakeTimestamp,
            "you cant stake at this time"
        );

        _;
    }

    modifier haveReward(address sender) {
        require(stakeProfit[sender] != 0, "you have no reward");
        require(stakedTime[msg.sender] != endWitdrawTimestamp);
        _;
    }

    modifier zeroAmount(uint256 amount) {
        require(amount != 0, "you have no shares");
        _;
    }
    modifier haveShares(address sender) {
        require(stakedBalance[sender] != 0, "you have no shares");

        _;
    }
    modifier startWitdraw() {
        require(
            block.timestamp >= startWitdrawTimestamp &&
                block.timestamp <= endWitdrawTimestamp,
            "you cant witdraw at this time"
        );

        _;
    }

    function _getReward(address sender) public view returns (uint256) {
        uint256 shares;
        uint256 percentShares;
        for (uint256 i = 0; i < endWitdrawTimestamps.length; i++) {
            if (endWitdrawTimestamps[i] > stakedTime[sender]) {
                percentShares = calculate(
                    stakeProfit[sender],
                    allStakedBalances[i]
                );

                shares += Math.ceilDiv(
                    (percentShares * allRewards[i]),
                    100 * 10**18
                );
            }
        }

        return shares;
    }

    function showReward(address sender) public view returns (uint256 rewards) {
        uint256 deposited = stakedBalance[sender];
        uint256 percentShares = calculate(deposited, LpBalanceOfMonth);
        uint256 shares = _getReward(sender);
        rewards =
            Math.ceilDiv((percentShares * StakedReward), 100 * 10**18) +
            shares;
    }

    function getReward(address sender)
        public
        haveReward(msg.sender)
        nonReentrant
        returns (uint256 shares)
    {
        require(sender == msg.sender);
        shares = _getReward(sender);
        require(shares != 0, "no reward to recieve");
        if (stakedBalance[sender] == 0) stakeProfit[sender] = 0;
        stakedTime[sender] = endWitdrawTimestamp;
        StakedReward = (shares > StakedReward ? 0 : StakedReward - shares);
        rewardToken.transfer(sender, shares);

        emit RewardAmount(sender, shares);
    }

    function stake(uint256 _amount)
        external
        nonReentrant
        startStake
        zeroAmount(_amount)
    {
        if (!(startStakeTimestamp == stakedTime[msg.sender]))
            require(
                stakedTime[msg.sender] == 0,
                "you have already staked amount"
            );

        stakingToken.transferFrom(msg.sender, address(this), _amount);
        stakedTime[msg.sender] = startStakeTimestamp;
        stakedBalance[msg.sender] += _amount; // stake[address] = amount;
        LpBalanceOfMonth += _amount;
        stakeProfit[msg.sender] += _amount;
        allStakedBalance += _amount;
    }

    function unstake()
        external
        nonReentrant
        setLoop
        startWitdraw
        haveShares(msg.sender)
    {
        uint256 deposited = stakedBalance[msg.sender];
        uint256 shares = calculate(deposited, allStakedBalance);
        allStakedBalance -= deposited;
        LpBalanceOfMonth -= deposited;
        stakedBalance[msg.sender] = 0;
        stakedTime[msg.sender] = 0;
        stakingToken.transfer(msg.sender, deposited);
        emit Unstake(msg.sender, deposited, shares);
    }

    //33,333333,333333,333334
    function setReward(uint256 _reward) external onlyOwner {
        require(_reward > 0, "Cannot setReward 0");

        rewardToken.transferFrom(msg.sender, address(this), _reward);
        StakedReward = _reward;
        emit SetReward(msg.sender, _reward);
    }

    function addReward(uint256 _reward) external onlyOwner {
        require(_reward > 0, "Cannot setReward 0");

        rewardToken.transferFrom(msg.sender, address(this), _reward);
        StakedReward += _reward;

        emit SetReward(msg.sender, _reward);
    }

    function setStake() external onlyOwner {
        _start();
        LpBalanceOfMonth = 0;
    }

    //you did not stake
    function witdrawOwnerReward(uint256 amount)
        external
        onlyOwner
        zeroAmount(amount)
    {
        require(amount < allRewards[allRewards.length - 1]);
        rewardToken.transferFrom(address(this), owner(), amount);
    }

    function calculate(uint256 deposited, uint256 Balance)
        public
        pure
        returns (uint256 percentShares)
    {
        uint256 div = 100 * 10**18;
        percentShares = Math.ceilDiv(deposited * div, Balance);
    }

    function percentageShare(address _sender) public view returns (uint256) {
        uint256 deposited = stakedBalance[_sender];
        return calculate(deposited, allStakedBalance);
    }

    function calculateValue(uint256 _LpTokenAmount)
        public
        view
        returns (uint256 valueLpPerBusd)
    {
        IUniswapV2Pair pair = IUniswapV2Pair(address(stakingToken));
        uint256 LPBalancePair = pair.totalSupply(); //
        bool trueToken = (pair.token0() != address(rewardToken));
        uint256 BusdAmount;

        if (trueToken) {
            (BusdAmount, , ) = pair.getReserves();
        } else {
            (, BusdAmount, ) = pair.getReserves();
        }
        uint256 BusdBalancePair = BusdAmount;

        uint256 pairValue = BusdBalancePair * 2;
        uint256 LpTokenPerBusdValue = Math.ceilDiv(pairValue, LPBalancePair);
        valueLpPerBusd = _LpTokenAmount * LpTokenPerBusdValue;
    }

    function getAll(address sender)
        public
        view
        returns (
            uint256 percentShares,
            uint256 shares,
            uint256 value,
            uint256 reward
        )
    {
        percentShares = percentageShare(sender);
        shares = stakedBalance[sender];
        value = calculateValue(shares);
        reward = showReward(sender);
    }

    function isStartedStake() public view returns (bool start) {
        start = false;
        if (
            block.timestamp >= startStakeTimestamp &&
            block.timestamp <= endStakeTimestamp
        ) start = true;
    }

    function isStartedWitdraw() public view returns (bool start) {
        start = false;
        if (
            block.timestamp >= startWitdrawTimestamp &&
            block.timestamp <= endWitdrawTimestamp
        ) start = true;
    }
}

