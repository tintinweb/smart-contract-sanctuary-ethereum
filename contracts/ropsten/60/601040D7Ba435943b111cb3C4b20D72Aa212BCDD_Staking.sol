import "./DateTime.sol";

contract SetStake is DateTime {
    /* ========== STATE VARIABLES ========== */

    uint256 public startStakeTimestamp;
    uint256 public startWitdrawTimestamp;
    uint256 public endStakeTimestamp;
    uint256 public endWitdrawTimestamp;
    uint256 public nextStakeTimestamp;
    uint256 public nextWitdrawTimestamp;
    uint256 public lastEndStake;

    event Start(
        uint16 ThisMonth,
        uint16 StartMonth,
        uint256 StartStake,
        uint256 EndStake
    );

    modifier setLoop() {
        if (
            block.timestamp >= startStakeTimestamp &&
            block.timestamp >= endStakeTimestamp
        ) {
            startStakeTimestamp = nextStakeTimestamp;
            startWitdrawTimestamp = nextWitdrawTimestamp;
            _start();
        }

        _;
    }

    function _start() public {
        uint16 year = getYear(block.timestamp);
        uint8 month = getMonth(block.timestamp);
        uint8 nextMonth = month == 12 ? (1) : (month + 1);
        uint8 daysInNextMonth = getDaysInMonth(nextMonth, year);
        uint256 delta;
        if (
            startWitdrawTimestamp < block.timestamp &&
            nextWitdrawTimestamp < block.timestamp
        ) {
            uint8 daysInMonth = getDaysInMonth(month, year);
            delta = daysInMonth - getDay(block.timestamp);
            startStakeTimestamp = block.timestamp + 180 + (uint256(delta) * 5);

            startWitdrawTimestamp = block.timestamp + (uint256(delta) * 5);
            nextMonth = month == 12 ? (1) : (month + 1);
            endStakeTimestamp = startStakeTimestamp + 180;
            endWitdrawTimestamp = startWitdrawTimestamp + 180;
        }
        nextStakeTimestamp =
            startStakeTimestamp +
            (uint256(daysInNextMonth) * 5 + 180);
        nextWitdrawTimestamp =
            endWitdrawTimestamp +
            (uint256(daysInNextMonth) * 5);
        emit Start(month, month + 1, nextStakeTimestamp, nextWitdrawTimestamp);
    }

    // function witdrawOwner(uint256 amount) external onlyOwner {}
}

