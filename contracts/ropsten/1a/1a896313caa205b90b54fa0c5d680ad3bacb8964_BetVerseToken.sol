pragma solidity ^0.8.10;

import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "./BetVerseTokenTimelock.sol";
import "./Interest.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract BetVerseToken is
    ERC20Upgradeable,
    OwnableUpgradeable,
    Interest,
    ReentrancyGuardUpgradeable
{
    using SafeMath for uint256;
    uint256 public ratePerYearInWei;
    uint256 public calculateRatePerYearInRAY;
    uint256 public startDate;
    uint256 public stakingDuration;
    uint256 public stakingEndDate;
    uint256 public maxManualMintable;
    uint256 public cap;
    address[] public forbiddenToStake;
    address[] public burnableAddresses;
    Deposit[] public deposits;

    struct Deposit {
        address user;
        uint256 amount;
        uint256 startdate;
    }

    function initialize(
        string memory name_,
        string memory symbol_,
        uint256 cap_,
        uint256 ratePerYearInWei_,
        uint256 calculateRatePerYearInRAY_,
        uint256 maxManualMintable_,
        uint256 stakingDuration_
    ) public initializer {
        __Ownable_init();
        __ERC20_init(name_, symbol_);
        __ReentrancyGuard_init();
        ratePerYearInWei = ratePerYearInWei_;
        calculateRatePerYearInRAY = calculateRatePerYearInRAY_;
        cap = cap_;
        maxManualMintable = maxManualMintable_;
        startDate = block.timestamp;
        stakingDuration = stakingDuration_;
        stakingEndDate = block.timestamp + stakingDuration;
        emit tokenInitialed(address(this), block.timestamp);
    }

    function mint(address _account, uint256 _amount)
        external
        onlyOwner
        maxManualMintableNotReached
        nonReentrant
    {
        _mint(_account, _amount);
        emit tokenMintedSuccess(_account, _amount, block.timestamp);
    }

    function burn(address _account, uint256 _amount)
        external
        onlyOwner
        isAllowedToBurn
    {
        _burn(_account, _amount);
        emit tokenBurnedSuccess(_account, _amount, block.timestamp);
    }

    function stake(uint256 amount_)
        public
        payable
        isAllowedToStake
        isStakingActive
        isNotEther
        isAlreadyStaking
        nonReentrant
    {
        require(amount_ > 0, "The deposit amount must be greather than zero");

        _transfer(msg.sender, address(this), amount_);

        addExistentDeposit(amount_, block.timestamp);
        if (!isStaking(msg.sender))
            deposits.push(Deposit(msg.sender, amount_, block.timestamp));

        emit stakeSuccess(msg.sender, amount_, block.timestamp);
    }

    function unstake() public nonReentrant {
        uint256 _amount = getStakedAmount();
        require(_amount > 0, "You don't have any stake balance to unstake");

        uint256 profit = getProfits();

        if (profit > 0) _mint(msg.sender, profit);

        removeSenderDeposits();

        _transfer(address(this), msg.sender, _amount);

        emit unstakeSuccess(msg.sender, _amount, block.timestamp);
    }

    // This returns the balance in ETH not in token
    function getSendersBalance() public view returns (uint256) {
        return address(msg.sender).balance;
    }

    function getTotalStaked() public view returns (uint256) {
        Deposit[] memory deposits_ = getDeposits();
        uint256 total = 0;
        for (uint256 i = 0; i < deposits_.length; i++) {
            total = total.add(deposits_[i].amount);
        }
        return total;
    }

    // STAKING
    function getStakedAmount() public view returns (uint256) {
        return getSenderTotalStaked();
    }

    function getSenderTotalStaked() public view returns (uint256) {
        if (!isStaking(msg.sender)) return 0;
        Deposit memory deposits_ = getSenderDeposits();
        return deposits_.amount;
    }

    function getSenderDeposits() public view returns (Deposit memory) {
        if (!isStaking(msg.sender))
            return Deposit(0x0000000000000000000000000000000000000000, 0, 0);

        uint256 index = 0;
        for (uint256 i = 0; i < deposits.length; i++) {
            if (deposits[i].user == msg.sender) {
                index = i;
                break;
            }
        }
        return deposits[index];
    }

    function addExistentDeposit(uint256 amount, uint256 startdate) internal {
        for (uint256 i = 0; i < deposits.length; i++) {
            if (deposits[i].user == msg.sender) {
                deposits[i].amount = amount;
                deposits[i].startdate = startdate;
                break;
            }
        }
    }

    function removeSenderDeposits() internal {
        for (uint256 i = 0; i < deposits.length; i++) {
            if (deposits[i].user == msg.sender) {
                deposits[i].amount = 0;
                deposits[i].startdate = 0;
                break;
            }
        }
    }

    function getDeposits() public view returns (Deposit[] memory) {
        Deposit[] memory deposits_ = new Deposit[](deposits.length);
        for (uint256 i = 0; i < deposits.length; i++) {
            deposits_[i] = deposits[i];
        }
        return deposits_;
    }

    function getStakingAge() public view returns (uint256) {
        if (!isStaking(msg.sender)) return 0;

        uint256 userStakingStartDate = (getSenderDeposits()).startdate;

        uint256 stakingAge = block.timestamp.sub(userStakingStartDate);

        return stakingAge;
    }

    function calculateInterest() public view returns (uint256) {
        if (!isStaking(msg.sender)) return 0;

        uint256 stakingAge = getStakingAge();

        uint256 stakedAmount = getStakedAmount();

        return
            accrueInterest(stakedAmount, calculateRatePerYearInRAY, stakingAge);
    }

    function getProfits() public view returns (uint256) {
        if (!isStaking(msg.sender)) return 0;
        uint256 interest = calculateInterest();
        uint256 stakedAmount = getStakedAmount();
        uint256 profit = interest.sub(stakedAmount);
        return profit;
    }

    function getForbiddenToStake() public view returns (address[] memory) {
        address[] memory forbiddenAddresses = new address[](
            forbiddenToStake.length
        );

        for (uint256 i = 0; i < forbiddenToStake.length; i++) {
            forbiddenAddresses[i] = forbiddenToStake[i];
        }

        return forbiddenAddresses;
    }

    function getContractsBalance() public view returns (uint256) {
        return balanceOf(address(this));
    }

    function setCapInWei(uint256 cap_) public onlyOwner {
        cap = cap_;
    }

    function setRatePerYearInWei(uint256 ratePerYearInWei_) public onlyOwner {
        ratePerYearInWei = ratePerYearInWei_;
    }

    function setCalculateRatePerYearInRAY(uint256 calculateRatePerYearInRAY_)
        public
        onlyOwner
    {
        calculateRatePerYearInRAY = calculateRatePerYearInRAY_;
    }

    function stakingStatus() public view returns (bool) {
        return (stakingEndDate > 0 && (stakingEndDate >= block.timestamp));
    }

    function isForbiddenToStake(address address_) public view returns (bool) {
        bool isForbidden = false;
        for (uint16 i = 0; i < forbiddenToStake.length; i++) {
            if (forbiddenToStake[i] == address_) {
                isForbidden = true;
                break;
            }
        }
        return isForbidden;
    }

    function isBurnable(address address_) public view returns (bool) {
        bool _isBurnable = false;
        for (uint16 i = 0; i < burnableAddresses.length; i++) {
            if (burnableAddresses[i] == address_) {
                _isBurnable = true;
                break;
            }
        }
        return _isBurnable;
    }

    function isStaking(address address_) public view returns (bool) {
        bool _isStaking = false;
        for (uint256 i = 0; i < deposits.length; i++) {
            if (
                deposits[i].user == address_ &&
                deposits[i].amount > 0 &&
                deposits[i].startdate > 0
            ) {
                _isStaking = true;
                break;
            }
        }
        return _isStaking;
    }

    function setForbiddenToStake(address _account) external onlyOwner {
        forbiddenToStake.push(_account);
    }

    function setBurnableAddresses(address _account) external onlyOwner {
        burnableAddresses.push(_account);
    }

    modifier isAlreadyStaking() {
        require(!isStaking(msg.sender), "You are already staking");
        _;
    }

    modifier isAllowedToStake() {
        require(!isForbiddenToStake(msg.sender), "You are forbidden to stake");
        _;
    }

    modifier isAllowedToBurn() {
        require(isBurnable(msg.sender), "You are forbidden to stake");
        _;
    }

    modifier isNotEther() {
        require(
            msg.value == 0,
            "You can't deposit Ether directly to this contract using this method"
        );
        _;
    }

    modifier maxManualMintableNotReached() {
        require(
            this.totalSupply() <= maxManualMintable,
            "You can only mint manually till the half of the maximum supply."
        );
        _;
    }

    modifier isStakingActive() {
        require(stakingStatus(), "Staking must be active");
        _;
    }

    //Events
    event tokenInitialed(address indexed _who, uint256 timestamp);

    event unstakeSuccess(
        address indexed _who,
        uint256 _amount,
        uint256 timestamp
    );

    event stakeSuccess(
        address indexed _who,
        uint256 _amount,
        uint256 timestamp
    );

    event tokenMintedSuccess(
        address indexed _who,
        uint256 _amount,
        uint256 timestamp
    );

    event tokenBurnedSuccess(
        address indexed _who,
        uint256 _amount,
        uint256 timestamp
    );
}

