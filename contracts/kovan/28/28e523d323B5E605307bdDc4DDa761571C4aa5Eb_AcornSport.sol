            emit NewProvider(_sport, _league, _sportType, _leagueName);

        } else {

            sportsProviders.remove(_sport);

            emit RemoveProvider(_sport);

        }

    }



    function createEventsOfGames(uint256 _epoch) external onlyOperator {

        // solhint-disable-next-line

        // require(_epoch > block.timestamp, "Error");



        uint256 providersLength = sportsProviders.length();



        for (uint i =0; i < providersLength; i = unsafeInc(i)){

            IAcornSportGame game = IAcornSportGame(sportsProviders.at(i));

            game.createEvents(_epoch);

        }

    }



    function updateEventsOfGames(uint256 _epoch) external onlyOperator {

        // solhint-disable-next-line

        require(_epoch <= block.timestamp, "Error");



        uint256 providersLength = sportsProviders.length();



        for (uint i =0; i < providersLength; i = unsafeInc(i)){

            IAcornSportGame game = IAcornSportGame(sportsProviders.at(i));

            game.updateEvents(_epoch);

        }

    }



    function betInGame(uint256 _betAmount, uint256 _provider, bytes32 _gameId, uint256 _betType) external nonReentrant whenNotPaused {

        require(_betAmount > 0.1 ether, "Error");

        require(_provider >= 0, "Error");



        IAcornSportGame game = IAcornSportGame(sportsProviders.at(_provider));

        game.bet(_betAmount, _gameId, msg.sender, _betType);

        bank.spendCredits(msg.sender, _betAmount, false);

    }



    function distributionOfGames() external onlyOperator {

        uint256 providersLength = sportsProviders.length();

        uint256 treasuryAmount;



        for (uint i =0; i < providersLength; i = unsafeInc(i)){

            IAcornSportGame game = IAcornSportGame(sportsProviders.at(i));

            treasuryAmount += game.distribution(treasuryFee);

        }



        if (treasuryAmount > 0) {

            bank.loseCredits(treasuryAmount);

        }

    }



    function bankDistribution(address _player, uint256 _baseAmount, uint256 _amount, bool _win) external onlySportProvider {

        if (_win) {

            bank.winCredits(_player, _amount, _baseAmount);

        } else {

            bank.loseCredits(_amount);

        }

    }



    function fundGame(uint256 _amount, uint256 _index) external onlyOwner {

        linkToken.transfer(sportsProviders.at(_index), _amount);

    }



    function fundGames(uint256 _amount) external onlyOwner {

        uint256 providersLength = sportsProviders.length();

        uint256 amountPerGame = _amount / providersLength;



        for (uint i =0; i < providersLength; i = unsafeInc(i)){

            linkToken.transfer(sportsProviders.at(i), amountPerGame);

        }

    }



    function setTreasuryFee(uint256 _treasuryFee) external onlyOwner {

        require(_treasuryFee <= MAX_TREASURY_FEE, "Treasury fee too high");

        treasuryFee = _treasuryFee;

    }



    function setMinBetAmount(uint256 _minBetAmount) external onlyOwner {

        require(_minBetAmount != 0, "Must be superior to 0");

        minBetAmount = _minBetAmount;

    }



    function setOperator(address _operator) external onlyOwner {

        operator = _operator;

    }



    /**

     * @notice Function for pause and unpause the contract.

     */

    function togglePause() external onlyOwner {

        paused() ? _unpause() : _pause();

    }



    function getTreasuryFee() external view returns (uint256) {

        return treasuryFee;

    }

}