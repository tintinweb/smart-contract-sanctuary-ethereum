			for (uint256 i=0; i < balances.length; i++) {
				if (includeCount == listAmount) {
					break;
				} else if(balances[i] == 0) {
					continue;
				} else {
					uint include = _random(2, msg.sender);
					if (include == 1) {
						heldCards[i] = i + 1;
						includeCount++;
					}
				}
			}
			cardContract.burnUsedCard(detectiveListId, msg.sender); // burn dective card
