pragma solidity ^0.8.0;

import "GameCards_1155.sol";
import "CyberToken.sol";
// need to make sure this contract is set up to receive ERC777

contract GamePlay {

	// Administrative
	bool public GameplayIsActive; // need to implement this as modifier

	// constructor
	address public owner;
	string public name;
	string public description;
	// other contracts
	GameCards public cardContract;
	CyberToken public tokenContract;
	// gameplay configs
	uint256 public packPrice;
	uint256 public stealCount;
	uint256 public trapDestroyCount;
	// setIdList
	uint256[] private _idList;

	mapping (address => uint256) private _trapCount;

	uint256 private _counter;
	
	// Events
	event PlayerDefeated(
		address indexed loser,
		address indexed winner
	);

	event AssetStaked(
		address indexed player,
		uint256 indexed time
	);

	event AssetUnstaked(
		address indexed player,
		uint256 indexed time
	);

	event CardPackPriceChange(
		uint256 indexed oldPrice,
		uint256 indexed newPrice
	);

	event DetectiveCardSuccess(
		address indexed player,
		uint256 indexed cardPlayed,
		uint256 indexed timestamp
	);

	event DetectiveCardBlocked(
		address indexed player,
		uint256 indexed cardPlayed,
		uint256 indexed timestamp
	);

	// Player Management 
	struct Player{
		bool isActive;
		uint256 availablePacks;
	}

	mapping (address => Player) public playerActivity;

	// STAKING SCIENTIST
	struct StakeInstance {
		uint256 assetsStaked;
		uint256[] stakingStart;
		uint256[] lastReward;
	}

	uint256 rewardRate; // tokens issued per reward claim
	uint256 blockStakingRate; // number of blocks per claim
	
	mapping (address => StakeInstance) public scientistStakeActivity;

	// STAKING REPLICANT
		// handled FIFO model
	struct ReplicantStake {
		uint256 assetsStaked;
		uint256[] stakingStart;
	}

	uint256 blockChargeRate; // rate which replicant charges

	mapping (address => ReplicantStake) public replicantStakeActivity;

	// MODIFIERS
	modifier _onlyOwner() {
		require(msg.sender == owner, "Only owner can call this function.");
		_;
	}

	constructor(address cardAddr, address tokenAddr, uint _packPrice, uint256 _stealCount, uint256 _trapDestroyCount) {
		owner = msg.sender;
		name = "Cyberpunk Wars Game Play";
		description = "Some description";
		cardContract = GameCards(cardAddr);
		tokenContract = CyberToken(tokenAddr);
		packPrice = _packPrice;
		stealCount = _stealCount;
		trapDestroyCount = _trapDestroyCount;
	}

	// ADMIN FUNCTIONS & CONFIGS
	function setCardPackPrice(uint256 newPrice) public _onlyOwner {
		uint256 oldPrice = packPrice;
		packPrice = newPrice;
		emit CardPackPriceChange(oldPrice, newPrice);
	}

	function withdrawRevenue(address receiver) public _onlyOwner {
		address payable receivingAddr = payable(receiver);
		receivingAddr.transfer(address(this).balance);
	}

	function setStakingConfigs(uint256 newBlockRate, uint256 newRewardRate, uint256 _blockChargeRate) public _onlyOwner {
		rewardRate = newRewardRate;
		blockStakingRate = newBlockRate;
		blockChargeRate = _blockChargeRate;
	}

	function setIdList(uint256[] calldata tokenIdList) public _onlyOwner {
		_idList = tokenIdList;
	}

	function _getAllBalances(address receiver) view private returns(uint256[] memory) {
		address[] memory  accounts = new address[](_idList.length);
		for (uint256 i=0; i < accounts.length; i++) {
			accounts[i] = receiver;
		}

		return cardContract.balanceOfBatch(accounts, _idList);

	}

	function setGamePlayConfigs(uint256 _stealCount, uint256 _trapDestroyCount) public _onlyOwner {
		stealCount = _stealCount;
		trapDestroyCount = _trapDestroyCount;
	}

	// INTERNAL GAMEPLAY ACTIONS
	function _checkForTrap(address receiver) private {
		uint256 trapBalance = _trapCount[receiver];

		if (trapBalance > 0) {
			// need to set a global trap destroy count variable
			uint256[] memory cardIdsToDestroy = new uint256[](trapDestroyCount);
			uint256[] memory destroyBalances = new uint256[](trapDestroyCount);
			uint256[] memory cardBalance = _getAllBalances(receiver);
			uint256 count = 0;

			while (count < 2) {
				uint256 index = _random(_idList.length, msg.sender);
				uint256 selection = cardBalance[index];
				if (selection > 0) {
					cardIdsToDestroy[count] = _idList[selection];
					destroyBalances[count] = 1;
					cardBalance[index] -= 1;
					count++;
				}
			}
			cardContract.burnCardBatchSinglePlayer(receiver, cardIdsToDestroy, destroyBalances);
		} 
	}

	// CARD PURCHASE
	function purchaseCardPack() public payable {
		require(msg.value >= packPrice, "Insufficient funds for purchase");
		
		// Need to limit the purchase of packs
		Player storage currentPlayer = playerActivity[msg.sender];
		if (!currentPlayer.isActive) {
			currentPlayer.availablePacks = 2;
			currentPlayer.isActive = true;
		} else {
			if (currentPlayer.availablePacks < 1) {
				revert("Limited to two(2) pack purchases between defeats.");
			}
		}

		cardContract.createCardPack(msg.sender);
		currentPlayer.availablePacks -= 1;
	}

	// STAKING FUNCTIONS
	function _stake(address player, uint256 assetId) private {
		cardContract.adminSafeTransferFrom(player, address(this), assetId, 1);
		emit AssetStaked(player, block.timestamp);
	}

	function _unstake(address player, uint256 assetId) private {
		cardContract.adminSafeTransferFrom(address(this), player, assetId, 1);
		emit AssetUnstaked(player, block.timestamp);
	}

	function getStakedScientistBalance() public view returns(uint256) {
		StakeInstance memory data = scientistStakeActivity[msg.sender];
		return data.assetsStaked;
	}

	function startResearching() public {
		require(cardContract.balanceOf(msg.sender, 7) > 0, "You do not have sufficient scientists for research.");

		StakeInstance storage player  = scientistStakeActivity[msg.sender];
		player.assetsStaked++;
		player.stakingStart.push(block.number);
		player.lastReward.push(block.number);

		_stake(msg.sender, 7);
	}

	function _calculateRewards(uint256 lastRewardBlock, uint256 currentBlock, uint256 stakeStart) view private returns(uint256 reward) {
        if (currentBlock - stakeStart >= blockStakingRate) {
            uint256 valOne = (lastRewardBlock % blockStakingRate) > 0 ? (lastRewardBlock % blockStakingRate) : 10;
            uint256 d = valOne - (stakeStart % blockStakingRate);
            uint256 changeSinceLastBlock = currentBlock - (lastRewardBlock - d);
            if (changeSinceLastBlock >= blockStakingRate) {
                return changeSinceLastBlock / blockStakingRate;
            } else {
                return 0;
            }
        } else {
            return 0;
        }
    }

	function _claimReward(address player, uint256 amount) private {
		tokenContract.claimStakingReward(player, amount);
	}

	function claimResearchResults() public {
		StakeInstance storage player = scientistStakeActivity[msg.sender];
		require(player.assetsStaked > 0, "No assets staked");

		uint256 totalClaims = 0;
		for (uint256 i=0; i < player.assetsStaked; i++) {
			uint256 currentBlock = block.number;
			uint256 stakeStart = player.stakingStart[i];
			uint256 lastReward = player.lastReward[i];

			uint256 claims = _calculateRewards(lastReward, currentBlock, stakeStart);

			totalClaims += claims;

			player.lastReward[i] = currentBlock;
		}

		uint256 totalRewards = totalClaims * rewardRate;
		_claimReward(msg.sender, totalRewards);
	}

	function leaveResearchLab() public {
		// this function will actually unstake the first scientiest staked
		StakeInstance storage data = scientistStakeActivity[msg.sender];

		require(data.assetsStaked > 0, "You do not have staked assets");
		data.assetsStaked -= 1;
		delete data.stakingStart[0];
		delete data.lastReward[0];
		_unstake(msg.sender, 7);
	}

	function chargeReplicant() public {
		//string memory card_name = cardContract.cards[]
		//require(); // check to make sure replicant is provided
		uint256 bal = cardContract.balanceOf(msg.sender, 1);
		require(bal > 0, "Insufficient balance of Replicants.");

		ReplicantStake storage stake = replicantStakeActivity[msg.sender];
		stake.assetsStaked++;
		stake.stakingStart.push(block.number);

		_stake(msg.sender, 1);
	}

	function totalFinishedCharging() view public returns(uint256) {
		// returns the number of replicants that have been charged
		ReplicantStake memory stake =  replicantStakeActivity[msg.sender];

		uint256 count = 0;
		uint256 currentBlock = block.number;
		for (uint256 i=0; i < stake.stakingStart.length; i++) {
			uint256 start = stake.stakingStart[i];
			if (start + blockChargeRate >= currentBlock) {
				count++;
			}
		}

		return count;
	}

	function claimEnhancedReplicant() public {
		ReplicantStake storage stake = replicantStakeActivity[msg.sender];
		require(stake.assetsStaked > 0, "Insufficient balance of staked Replicants");

		uint256 currentBlock = block.number;
		for (uint256 i=0; i < stake.stakingStart.length; i++) {
			uint256 start = stake.stakingStart[i];
			if (start + blockChargeRate < currentBlock) {
				revert("Asset has not been staked long enough");
			} else {
				cardContract.burnCard(1, msg.sender);
				cardContract.mintCard(2, msg.sender);

				stake.assetsStaked -= 1;
				delete stake.stakingStart[stake.stakingStart.length - 1];
			}
		}
	}

	function unstakeReplicantEarly() public {
		ReplicantStake storage stake = replicantStakeActivity[msg.sender];
		require(stake.assetsStaked > 0, "Insufficient balance of staked Replicants");
		
		// takes top staked replicant
		uint256 start = stake.stakingStart[stake.stakingStart.length - 1];
		require(start + blockChargeRate <= block.number, "Asset ready to claim");

		stake.assetsStaked -= 1;
		delete stake.stakingStart[stake.stakingStart.length - 1];

		_unstake(msg.sender, 1);
	}

	// ATTACK FUNCTIONS
	function _playerDefeated(address winner, address loser) private {
		// need to call out to 777 contract to generate trophy for winner
		// shall redistribute NFTs of loser - need to determine what this will look like
		emit PlayerDefeated(loser, winner);
	}

	//////// NEED TO INCORPORATE USING AN ENERGIZED REPLICANT FOR ATTACK
	function sendAttack(address receiver) public payable {
		uint256 replicantId =  1;
		uint256 saviorId = 8;
		uint256 bal = cardContract.balanceOf(msg.sender, replicantId);
		require(bal >= 1, "Insufficient Replicant card balance.");

		uint256 saviorBalance = cardContract.balanceOf(receiver, saviorId);
		
		if (saviorBalance > 0) {
			uint256[] memory ids = new uint256[](2);
			ids[0] = replicantId;
			ids[1] = saviorId;
			address[] memory players = new address[](2);
			players[0] = msg.sender;
			players[1] = receiver;

			cardContract.burnCardBatchMultiPlayer(ids, players);
		} else {
			// Transfer defeated player's cards
			cardContract.adminUserDefeated(receiver, msg.sender);
			// Burn the used card
			cardContract.burnUsedCard(replicantId, msg.sender);
			_playerDefeated(msg.sender, receiver);
		}
	}


	// DETECTIVE ACTIONS
	function _random(uint256 _rangeTop, address _sender) private returns(uint256) {
		uint256 val = uint256(keccak256((abi.encodePacked(block.difficulty, block.timestamp, _counter, _sender))));
		_counter++;
		return uint256(val % _rangeTop);
	}

	function _cardBlocked(uint256 _playedCard, address _sender, address _receiver) private {
		address[] memory players = new address[](2);
		players[0] = _sender;
		players[1] = _receiver;

		uint256[] memory ids = new uint256[](2);
		ids[0] = _playedCard; // playedCard ID
		ids[1] = 5; // blocker ID
		cardContract.burnCardBatchMultiPlayer(ids, players);
		emit DetectiveCardBlocked(_sender, _playedCard, block.timestamp);

		revert("Recever blocked your move.");
	}

	function playDetectiveList(address receiver) public returns(uint256[] memory) {
		/*
			This would be used to play a detective card
			
			should have validation to check for the correct detective card
			should have validation to see if receive has block card
			
			should return a list of the opposing player's cards
		*/
		uint256 detectiveListId = 3;
		uint256 balance = cardContract.balanceOf(msg.sender, detectiveListId);
		require(balance > 0, "You have insufficient card balance");

		uint256 block_balance = cardContract.balanceOf(receiver, 5);
		if (block_balance > 0) {
			_cardBlocked(detectiveListId, msg.sender, receiver);
		} else {
			// get list of asset balances for receiver 
			address[] memory  accounts = new address[](8);
			uint256[] memory ids = new uint256[](8);
			for (uint256 i=0; i < accounts.length; i++) {
				accounts[i] = receiver;
				ids[i] = i += 1;
			}

			uint256[] memory balances = cardContract.balanceOfBatch(accounts, ids);
