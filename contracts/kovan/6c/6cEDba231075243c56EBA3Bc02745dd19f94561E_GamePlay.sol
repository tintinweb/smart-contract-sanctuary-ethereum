		}
	}

	function playDetectiveSteal(address receiver) public {
		/*
			This would be used to play a detective card
			
			should have validation to check for the correct detective card
			should have validation to see if receiver has block card
			
			should transfer a random card from teh receiver to the sender
		*/
		uint256 detectiveStealId = 4;
		uint256 steal_balance = cardContract.balanceOf(msg.sender, detectiveStealId);
		require(steal_balance > 0, "You do not have a sufficient card balance for this action.");

		uint256 block_balance = cardContract.balanceOf(msg.sender, 5);
		if (block_balance > 0) {
			_cardBlocked(detectiveStealId, msg.sender, receiver);
		} else {
			uint256[] memory cardBalances = _getAllBalances(receiver);
			
			uint256[] memory cardsToSteal = new uint256[](stealCount);
			uint256[] memory amounts = new uint256[](stealCount);
			// need to determine a count 
