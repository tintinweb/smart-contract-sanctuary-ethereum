				uint256 randomSelection = _random(8, msg.sender);
				uint selectionBalance = 0;
				while (selectionBalance < 1) {
					selectionBalance = cardBalances[randomSelection];
					if (selectionBalance > 0) {
						cardsToSteal[i] = randomSelection + 1;
						cardBalances[randomSelection] -= 1;
						amounts[i] = 1;
						break;
					} else {
						randomSelection = _random(8, msg.sender);
					}
				}
			}

			cardContract.adminSafeBatchTransferFrom(receiver, msg.sender, cardsToSteal, amounts);
			emit DetectiveCardSuccess(msg.sender, detectiveStealId, block.timestamp);
		}
	}

	function playDetectiveTrap(address receiver) public {
		/*
			This would be used to play a detective card
			
			should have validation to check for the correct detective card
			should have validation to see if receive has block card

			the Trap card will set a bomb that will destroy some amount of random cards. This will not go off until the next time the Player tries to make a move.
		*/
