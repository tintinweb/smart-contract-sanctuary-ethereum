pragma solidity ^0.8.0;

import "ERC1155.sol";
import "Base64.sol";


// should have an attack "leave behind" that leaves a notifier for the receiver 
// need to place a block on getBalanceOf function or need to set a register function to abstract player wallet

contract GameCards is ERC1155 {
	
	// Administrative
	address private _owner;
	uint256 private _counter;
	string public name;
	string public description;
	bool public readyForMint=false;

	address public gameplay;
	address public cybertoken;

	mapping (address => bool) private approvedAddresses;
	
	// Token Config
	uint256 public Replicant = 1;
	uint256 public EnergizedReplicant = 2;
	uint256 public DetectiveList = 3;
	uint256 public DetectiveSteal = 4;
	uint256 public DetectiveBlock = 5;
	uint256 public DetectiveTrap = 6;
	uint256 public Scientist = 7;
	uint256 public Savior = 8;

	uint256 public totalCards=0;
	
	struct GameCard {
		string card_type;
		string action;
		string card_description;
	}
	mapping (uint256 => GameCard) public cards;
	mapping (uint256 => bool) public tokenIdListing;

	// Modifiers
	modifier _onlyOwner() {
		require(msg.sender == _owner, "Only owner can call this function.");
		_;
	}
	
	modifier _onlyApprovedUser() {
		require(approvedAddresses[msg.sender] == true, "You are not an approved address");
		_;
	}

	modifier _isValidTokenId(uint256 _id) {
		require(_does_exist(_id), "This is not a valid token ID");
		_;
	}

	// Administrative
	function addApprovedUser(address newApprovedUser) public _onlyOwner {
		approvedAddresses[newApprovedUser] = true;
	}

	function setGamePlay(address newGamePlayAddr) public _onlyOwner {
		gameplay = newGamePlayAddr;
	}

	function setCyberToken(address newTokenAddr) public _onlyOwner {
		cybertoken = newTokenAddr;
	}

	function setAllCardData(uint256[] calldata _ids, string[] memory _card_types, string[] memory _actions, string[] memory _card_descriptions) public _onlyOwner {
		for (uint256 i=0; i < _ids.length; i++) {
			GameCard memory newCard = GameCard(
				_card_types[i], 
				_actions[i], 
				_card_descriptions[i]
			);
			cards[_ids[i]] = newCard;
			tokenIdListing[_ids[i]] = true;
			totalCards += 1;
		}
	}

	function setReadyForMint() public _onlyOwner {
		readyForMint = true;
	}


	// Functions
	constructor() ERC1155(" ") {
		_owner = msg.sender;
		name = "Cryptopunk Wars";
		description = "Some description here";
		_counter = 0;
	}

	function _random(uint256 _rangeTop, address _sender) private returns(uint256) {
		uint256 val = uint256(keccak256((abi.encodePacked(block.difficulty, block.timestamp, _counter, _sender))));
		_counter++;
		return uint256(val % _rangeTop);
	}

	function createCardPack(address receiver) public _onlyApprovedUser returns(bool) {
		// This function will populate a card pack and send it to the receiver
		// Will probably not want the randomized logic as part of the actual NFT contract
		// likely this should sit within the contract calling this contract
		require(readyForMint, "This action is not available yet");

		uint256 totalReplicants = _random(4, msg.sender); // 30%
		uint256 totalScientists = _random(3, msg.sender); // 20%		
		uint256 totalSavior = _random(3, msg.sender); // 20%
		

		uint256 remainingDetectives = 10 - totalReplicants - totalScientists - totalSavior;

		uint256 totalView = _random(remainingDetectives + 1, msg.sender);
		remainingDetectives -= totalView;
		uint256 totalSteal = _random(remainingDetectives + 1, msg.sender);
		remainingDetectives -= totalSteal;
		uint256 totalBlock = _random(remainingDetectives + 1, msg.sender);
		uint256 totalTrap = remainingDetectives - totalBlock;

		uint256[] memory ids = new uint256[](7);
		ids[0] = 1;
		ids[1] = 3;
		ids[2] = 4;
		ids[3] = 5;
		ids[4] = 6;
		ids[5] = 7;
		ids[6] = 8;
		
		uint256[] memory amounts = new uint256[](7);
		amounts[0] = totalReplicants;
		amounts[1] = totalScientists;
		amounts[2] = totalSavior;
		amounts[3] = totalBlock;
		amounts[4] = totalView;
		amounts[5] = totalTrap;
		amounts[6] = totalSteal;

		_mintBatch(receiver, ids, amounts, "");
		_counter ++;
		return (true);
	}

	function mintCard(uint256 _id, address receiver) public _onlyApprovedUser _isValidTokenId(_id) {
		_mint(receiver, _id, 1, "");
	}

	function burnCard(uint256 _id, address owner) public _onlyApprovedUser _isValidTokenId(_id) {
		_burn(owner, _id, 1);
	}
	 
	function _does_exist(uint256 _id) private view returns(bool) {
		bool val = tokenIdListing[_id];
		return val;
	}

	function _buildMetadata(uint256 _tokenId) private view returns(string memory) {
		GameCard memory currentCard  = cards[_tokenId];
		return string(abi.encodePacked(
			'data:application/json;base64,', Base64.encode(bytes(abi.encodePacked(
				'{"name":"',
				name,
				'", "description":"',
				description,
				'", "properties": {',
				'"type": "Card Type",',
				'"description": "',
				currentCard.card_type,
				'", "type": "Action",',
				'"description": "',
				currentCard.action,
				'", "type": "Card Description",',
				'"description": "',
				currentCard.card_description,
				'"}}'
			)))
		));
	}

	function uri(uint _id) public override view returns (string memory) {
		require (_does_exist(_id), "This is not a valid token ID");
		return _buildMetadata(_id);
	}

	// Admin functions
	function adminSafeTransferFrom(address from, address to, uint256 id, uint256 amount) public _onlyApprovedUser {
		 _safeTransferFrom(from, to, id, amount, "");
	}

	function adminSafeBatchTransferFrom(address from, address to, uint256[] calldata ids, uint256[] calldata amounts) public _onlyApprovedUser {
		_safeBatchTransferFrom(from, to, ids, amounts, "");
	}

	function burnUsedCard(uint256 id, address player) public _onlyApprovedUser {
		_burn(player, id, 1);
	}

	function burnCardBatchMultiPlayer(uint256[] calldata ids, address[] calldata players) public _onlyApprovedUser {
		require(ids.length == players.length, "Lengths do not match");
		for (uint256 i=0; i < ids.length; i++) {
			_burn(players[i], ids[i], 1);
		}
	}

	function burnCardBatchSinglePlayer(address receiver, uint256[] calldata ids, uint256[] calldata amounts) public _onlyApprovedUser {
		_burnBatch(receiver, ids, amounts);
	}

	function adminUserDefeated(address from, address to) public _onlyApprovedUser {
		address[] memory addressListFrom = new address[](totalCards);
		address[] memory addressListTo = new address[](totalCards);
		uint256[] memory idList = new uint256[](totalCards);

		for (uint256 x=1; x <= totalCards; x++) {
			addressListFrom[x-1] = from;
			addressListTo[x-1] = to;
			idList[x-1] = x;
		}

		uint256[] memory balances = balanceOfBatch(
			addressListFrom,
			idList
		);
		_safeBatchTransferFrom(from, to, idList, balances, "");
	}

}

