    IBEP20 public token;

    address private constant DEAD = 0x000000000000000000000000000000000000dEaD;
    address private constant ZERO = 0x0000000000000000000000000000000000000000;

    address public issuer;
    address public pool;

    mapping(bytes32 => bool) public signatures;

    event Deposit(address addr, uint256 amount);
    event Withdraw(address addr, uint256 amount);
    event ExecSig(bytes32 hash, address addr, uint256 from, uint256 to, uint256 amount);

    receive() external payable { }

    constructor (address _token) Auth(msg.sender) {
        token = IBEP20(_token);
    }
    function setPool(address _pool) external authorized {
        pool = _pool;
    }
    function setIssuer(address _issuer) external authorized {
        issuer = _issuer;
    }

    function transferBNB() external authorized {
        (bool success,) = address(this).call{value:address(this).balance}(new bytes(0));
        require(success, 'BNB transfer failed');
    }
    function transferToken() external authorized {
        token.transfer(msg.sender, token.balanceOf(address(this)));
    }

    function deposit(uint256 amount) external {
        bool success = token.transferFrom(msg.sender, pool, amount);
        require(success, "token transfer failed");
        emit Deposit(msg.sender, amount);
    }
    function execSig(bytes memory signature, address addr, uint256 from, uint256 to, uint256 amount) internal returns (bool) {
        // abi encode of [address, uint256, uint256, uint256] = 20+256/8*3 = 116 bytes
        bytes32 hash = keccak256(abi.encodePacked(
            "\x19Ethereum Signed Message:\n116", addr, from, to, amount
        ));
        require(!signatures[hash], "signature was executed");
        require(SignatureChecker.isValidSignatureNow(issuer, hash, signature), "invalid signature");
        signatures[hash] = true;
        emit ExecSig(hash, addr, from, to, amount);
        return true;
    }
    function withdraw(bytes memory signature, uint256 from, uint256 to, uint256 amount) external {
        require(execSig(signature, msg.sender, from, to, amount), "withdraw got error");
        token.transferFrom(pool, msg.sender, amount);
        emit Withdraw(msg.sender, amount);
    }
