// File: contracts/game/AuctionHouse.sol


pragma solidity ^0.8.0;






enum EndReason {
    None, 
    Abortive,
    Recall,
    Finished,
    Replace
}

contract AuctionHouse is Ownable, ERC721Holder {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    // 收藏品
    address public collection;
    // 支付现金
    address public cash;
    // 手续费比率(满额10000)
    uint256 public radio;
    // 手续费地址
    address public taxAddress;

    // 拍卖单
    struct Offer {
        uint256 pid; // 拍卖编号
        bool isForSale; // 状态(拍卖中/下架{true/false})
        uint256 tokenId; // tokenId
        address seller; // 售卖者
        uint256 minAmount; // 起拍价
        uint256 fixedAmount; // 一口价
        uint256 startTime; // 开始日期
        uint256 endTime; // 终止日期
        address purchaser; // 指定买方
        EndReason endReason; // 结束原因
    }

    // 竞拍单
    struct Bid {
        uint256 pid; // 竞拍编号
        bool hasBid; // 报价状态（竞拍中/失败|成交{true/false}）
        uint256 tokenId; // tokenId
        address bidder; // 报价者
        uint256 amount; // 价格
        uint256 startTime; // 开始日期
        uint256 endTime; // 终止日期
        EndReason endReason; // 结束原因
    }
    // 成交单
    struct Clinch {
        uint256 seller; // 拍卖方(offersId)
        uint256 buyer; // 竞拍方(bidsId)
    }

    // 最新货架
    mapping(uint256 => Offer) public shelves;
    // 最新报价
    mapping(uint256 => Bid) public quotation;
    // 用户拍卖记录
    mapping(address => uint256[]) public userOffers;
    // 用户竞拍记录
    mapping(address => uint256[]) public userBids;
    //成交记录
    mapping(uint256 => Clinch[]) public bargains;
    // 拍卖记录
    Offer[] public offers;
    // 竞拍记录
    Bid[] public biddings;

    event Auction(
        address indexed user,
        uint256 indexed tokenId,
        uint256 minAmount,
        uint256 fixedAmount,
        uint256 endTime
    );
    event Bidding(
        address indexed user,
        uint256 indexed tokenId,
        uint256 amount
    );
    event EndAuction(
        address indexed user,
        uint256 indexed tokenId,
        uint256 offerId,
        uint256 bidId,
        EndReason status
    );

    event Bargain(
        address indexed user,
        uint256 indexed tokenId,
        uint256 offerId,
        uint256 bidId
    );

    constructor(
        address _collection,
        address _cash,
        uint256 _radio
    ) {
        collection = _collection;
        cash = _cash;
        radio = _radio;
        taxAddress = msg.sender;
    }

    function _setRadio(uint256 _radio) external onlyOwner {
        require(_radio >0 && _radio < 10000, "radio is not good");
        radio = _radio;
    }

    function _setTax(address _tax) external onlyOwner {
        taxAddress = _tax;
    }

    // 拍卖单长度.
    function offersLength() external view returns (uint256) {
        return offers.length;
    }

    // 竞拍单长度.
    function bigsLength() external view returns (uint256) {
        return biddings.length;
    }

    // 上架拍卖
    function auction(
        uint256 _tokenId,
        uint256 _minAmount,
        uint256 _fixedAmount,
        uint256 _endTime,
        address _purchaser
    ) external {
        Offer storage offer = shelves[_tokenId];
        require(_minAmount > 0, "minAmount is not good");
        require(_fixedAmount > _minAmount, "fixedAmount is not good");
        require(!offer.isForSale, "tokenId is on sale");
        // 转账
        IERC721(collection).safeTransferFrom(
            msg.sender,
            address(this),
            _tokenId
        );
        // 更新货架
        offer.pid = offers.length;
        offer.isForSale = true;
        offer.tokenId = _tokenId;
        offer.seller = msg.sender;
        offer.minAmount = _minAmount;
        offer.fixedAmount = _fixedAmount;
        offer.startTime = block.timestamp;
        offer.endTime = _endTime;
        offer.purchaser = _purchaser;
        offer.endReason = EndReason.None;
        // 记录用户账本
        userOffers[msg.sender].push(offers.length);
        // 添加拍卖记录
        offers.push(offer);

        emit Auction(msg.sender, _tokenId, _minAmount, _fixedAmount, _endTime);
    }

    // 叫价竞拍
    function bidding(uint256 _tokenId, uint256 _amount) external {
        Offer memory offer = shelves[_tokenId];
        Bid storage bidOn = quotation[_tokenId];
        // 流拍
        if (offer.endTime <= block.timestamp) {
            endAuction(
                _tokenId,
                block.timestamp,
                msg.sender,
                EndReason.Abortive
            );
            return;
        }
        require(
            offer.purchaser == address(0) || offer.purchaser == msg.sender,
            "user is is not good"
        );
        require(offer.isForSale, "tokenId is not sale");
        require(
            _amount > offer.minAmount && _amount > bidOn.amount,
            "_amount is not good"
        );
        // 转账
        IERC20(cash).safeTransferFrom(msg.sender, address(this), _amount);
        // 挤掉上一个叫价
        if (bidOn.hasBid) {
            biddings[bidOn.pid].hasBid = false;
            biddings[bidOn.pid].endReason = EndReason.Replace;
            biddings[bidOn.pid].endTime = block.timestamp;
            IERC20(cash).safeTransfer(
                biddings[bidOn.pid].bidder,
                biddings[bidOn.pid].amount
            );
        }
        // 更新报价
        bidOn.pid = biddings.length;
        bidOn.hasBid = true;
        bidOn.tokenId = _tokenId;
        bidOn.bidder = msg.sender;
        bidOn.amount = _amount;
        bidOn.startTime = block.timestamp;
        bidOn.endTime = 0;
        bidOn.endReason = EndReason.None;
        // 记录用户账本
        userBids[msg.sender].push(biddings.length);
        // 添加竞拍记录
        biddings.push(bidOn);
        // 一口价成交
        if (_amount >= offer.fixedAmount) {
            bargain(_tokenId, block.timestamp, msg.sender);
        }

        emit Bidding(msg.sender, _tokenId, _amount);
    }

    //流拍
    function endAuction(
        uint256 _tokenId,
        uint256 _now,
        address _user,
        EndReason _status
    ) internal {
        // 停止拍卖
        shelves[_tokenId].isForSale = false;
        shelves[_tokenId].endTime = _now;
        shelves[_tokenId].endReason = _status;
        offers[shelves[_tokenId].pid].isForSale = false;
        offers[shelves[_tokenId].pid].endTime = _now;
        offers[shelves[_tokenId].pid].endReason = _status;
        IERC721(collection).safeTransferFrom(
            address(this),
            shelves[_tokenId].seller,
            _tokenId
        );
        // 停止竞拍
        quotation[_tokenId].hasBid = false;
        quotation[_tokenId].endTime = _now;
        quotation[_tokenId].endReason = _status;
        biddings[quotation[_tokenId].pid].hasBid = false;
        biddings[quotation[_tokenId].pid].endTime = _now;
        biddings[quotation[_tokenId].pid].endReason = _status;
        IERC20(cash).safeTransfer(
            quotation[_tokenId].bidder,
            quotation[_tokenId].amount
        );

        emit EndAuction(
            _user,
            _tokenId,
            shelves[_tokenId].pid,
            quotation[_tokenId].pid,
            _status
        );
    }

    // 成交
    function bargain(
        uint256 _tokenId,
        uint256 _now,
        address _user
    ) internal {
        // 停止拍卖
        shelves[_tokenId].isForSale = false;
        shelves[_tokenId].endTime = _now;
        shelves[_tokenId].endReason = EndReason.Finished;
        offers[shelves[_tokenId].pid].isForSale = false;
        offers[shelves[_tokenId].pid].endTime = _now;
        offers[shelves[_tokenId].pid].endReason = EndReason.Finished;
        // 停止竞拍
        quotation[_tokenId].hasBid = false;
        quotation[_tokenId].endTime = _now;
        quotation[_tokenId].endReason = EndReason.Finished;
        biddings[quotation[_tokenId].pid].hasBid = false;
        biddings[quotation[_tokenId].pid].endTime = _now;
        biddings[quotation[_tokenId].pid].endReason = EndReason.Finished;
        // 交换物品
        IERC721(collection).safeTransferFrom(
            address(this),
            quotation[_tokenId].bidder,
            _tokenId
        );
        IERC20(cash).safeTransfer(
            shelves[_tokenId].seller,
            quotation[_tokenId].amount.mul(10000 - radio).div(10000)
        );
        if(radio > 0){
            IERC20(cash).safeTransfer(
                taxAddress,
                quotation[_tokenId].amount.mul(radio).div(10000)
            );
        }
        

        emit Bargain(
            _user,
            _tokenId,
            shelves[_tokenId].pid,
            quotation[_tokenId].pid
        );
    }

    // 成交(卖方操作)
    function knockdown(uint256 _tokenId) external {
        Offer memory offer = shelves[_tokenId];
        Bid memory bidOn = quotation[_tokenId];
        require(offer.isForSale, "tokenId is not sale");
        require(bidOn.hasBid, "tokenId have no bidder");
        // 流拍
        if (offer.endTime <= block.timestamp) {
            endAuction(
                _tokenId,
                block.timestamp,
                msg.sender,
                EndReason.Abortive
            );
            return;
        }
        require(offer.seller == msg.sender, "you are not seller");
        bargain(_tokenId, block.timestamp, msg.sender);
    }

    // 取消交易(卖方操作)
    function cancel(uint256 _tokenId) external {
        Offer memory offer = shelves[_tokenId];
        require(offer.isForSale, "tokenId is not sale");
        // 流拍
        if (offer.endTime <= block.timestamp) {
            endAuction(
                _tokenId,
                block.timestamp,
                msg.sender,
                EndReason.Abortive
            );
            return;
        }
        require(offer.seller == msg.sender, "you are not seller");
        endAuction(_tokenId, block.timestamp, msg.sender, EndReason.Recall);
    }
}