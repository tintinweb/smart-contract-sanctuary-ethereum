pragma solidity ^0.8.7;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Address.sol";

contract LayawayGeneral {
    using SafeERC20 for IERC20;
    using Address for address;

    function onTransferFrom(
        address _tokenAddress,
        address _from,
        address _to,
        uint256 _amount,
        uint256 msgValue
    ) internal {
        if (_tokenAddress == address(0)) {
            require(msgValue == _amount, "Message value isn't enough");
        } else {
            IERC20(_tokenAddress).safeTransferFrom(_from, _to, _amount);
        }
    }

    function onTransfer(
        address _tokenAddress,
        address payable _receipient,
        uint256 _paid
    ) internal {
        if (_tokenAddress == address(0)) {
            Address.sendValue(_receipient, _paid);
        } else {
            IERC20(_tokenAddress).safeTransfer(_receipient, _paid);
        }
    }

    function getTotalBalance(address _tokenAddress)
        public
        view
        returns (uint256)
    {
        if (_tokenAddress == address(0)) return address(this).balance;
        return IERC20(_tokenAddress).balanceOf(address(this));
    }
}

