pragma solidity ^0.8.7;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "./interfaces/ILayawayRouter.sol";
import "./interfaces/ILayawayPoolImplement.sol";
import "./LayawayGeneral.sol";
import "./LayawayPoolProxy.sol";

contract LayawayRouter is
    Ownable,
    ILayawayRouter,
    ReentrancyGuard,
    LayawayGeneral
{
    using Counters for Counters.Counter;
    using Address for address;

    address public layawayPoolImplementAddress;
    // bytes public constant initializeSelector = abi.encodePacked(bytes4(keccak256("initialize()")));

    address payable public treasuryAddress;

    uint256[] public dayTerms;
    mapping(uint256 => bool) public dayTermsExist;

    address[] public layawayPoolList;
    mapping(address => bool) public layawayPoolExist;

    Counters.Counter public orderCounter;

    uint256[] public orderIdList;
    mapping(uint256 => Order) public idToOrder;
    mapping(uint256 => bool) public orderExist;
    mapping(address => mapping(address => mapping(uint256 => bool))) public pairExist;

    constructor(address _treasuryAddress, address _layawayPoolImplementAddress)
    {
        require(_treasuryAddress != address(0), "Treasury address is Zero");
        treasuryAddress = payable(_treasuryAddress);
        layawayPoolImplementAddress = _layawayPoolImplementAddress;
        dayTerms.push(30 days);
        dayTerms.push(60 days);
        dayTerms.push(90 days);
        dayTermsExist[30 days] = true;
        dayTermsExist[60 days] = true;
        dayTermsExist[90 days] = true;
    }

    receive() external payable {}

    function setDayTerm(uint256[] calldata _dayTerms) external onlyOwner {
        for (uint256 i = 0; i < _dayTerms.length; i++) {
            uint256 term = _dayTerms[i];
            if (dayTermsExist[term]) continue;
            dayTerms.push(term);
            dayTermsExist[term] = true;
        }
    }

    function removeDayTerm(uint256 _dayTerm) external onlyOwner {
        require(dayTermsExist[_dayTerm], "Day term isn't existed");
        dayTermsExist[_dayTerm] = false;
    }

    function setTreasury(address _treasuryAddress) external onlyOwner {
        require(_treasuryAddress != address(0), "Treasury address is Zero");
        treasuryAddress = payable(_treasuryAddress);
    }

    function createLayawayPool(
        address _sellTokenAddress,
        address _payingTokenAddress,
        uint256 _price,
        LiquidityTokenInfo memory _liquidityTokenInfo
    ) external {
        require(
            _sellTokenAddress.isContract() || _sellTokenAddress == address(0),
            "Sell token can't be wallet address"
        );
        require(
            _payingTokenAddress.isContract() ||
                _payingTokenAddress == address(0),
            "Paying token can't be wallet address"
        );
        require(
            !pairExist[_sellTokenAddress][_payingTokenAddress][_price],
            "Pool is exist"
        );

        pairExist[_sellTokenAddress][_payingTokenAddress][_price] = true;

        LayawayPoolProxy layawayPool = new LayawayPoolProxy(
            owner(),
            layawayPoolImplementAddress,
            _sellTokenAddress,
            _payingTokenAddress,
            _price,
            _liquidityTokenInfo.name,
            _liquidityTokenInfo.symbol
        );
        layawayPoolExist[address(layawayPool)] = true;
        layawayPoolList.push(address(layawayPool));
    }

    function createOrder(
        address _layawayPoolAddress,
        uint256 _purchaseAmount,
        uint256 _term
    ) external payable nonReentrant {
        require(layawayPoolExist[_layawayPoolAddress], "Pool isn't existed");
        require(dayTermsExist[_term], "Term isn't existed");

        ILayawayPoolImplement layawayPool = ILayawayPoolImplement(
            _layawayPoolAddress
        );
        uint256 availableSellBalance = layawayPool.getAvailableSellAmount();
        require(
            _purchaseAmount <= availableSellBalance,
            "Purchase amount exceeds"
        );

        orderCounter.increment();
        uint256 _orderId = orderCounter.current();
        orderIdList.push(_orderId);
        idToOrder[_orderId] = Order(
            _layawayPoolAddress,
            _purchaseAmount,
            _term,
            OrderStatus.Open,
            msg.sender,
            block.timestamp
        );
        orderExist[_orderId] = true;

        (, address payingTokenAddress, uint256 price, ) = layawayPool.layaway();
        uint256 payingFirstTime = (_purchaseAmount * price * 10) / 100;

        onTransferFrom(
            payingTokenAddress,
            msg.sender,
            address(this),
            payingFirstTime,
            msg.value
        );

        layawayPool.lock(_purchaseAmount);
    }

    function prevActionOrder(uint256 _orderId)
        internal
        returns (
            Order memory,
            ILayawayPoolImplement,
            address,
            uint256
        )
    {
        require(orderExist[_orderId], "Order isn't existed");
        Order storage order = idToOrder[_orderId];
        ILayawayPoolImplement layawayPool = ILayawayPoolImplement(
            order.poolAddress
        );
        (, address payingTokenAddress, uint256 price, ) = layawayPool.layaway();
        require(order.status == OrderStatus.Open, "Order is closed");

        order.status = OrderStatus.Closed;
        return (order, layawayPool, payingTokenAddress, price);
    }

    function executeOrder(uint256 _orderId) external payable nonReentrant {
        (
            Order memory order,
            ILayawayPoolImplement layawayPool,
            address payingTokenAddress,
            uint256 price
        ) = prevActionOrder(_orderId);

        require(
            block.timestamp <= order.createdAt + order.dayTerm,
            "Exceed deadline"
        );
        require(msg.sender == order.owner, "You aren't this order's owner");

        uint256 payingSecondTime = (order.purchaseAmount * price * 90) / 100;

        onTransferFrom(
            payingTokenAddress,
            msg.sender,
            address(this),
            payingSecondTime,
            msg.value
        );

        layawayPool.swap(msg.sender, order.purchaseAmount);
    }

    function cancelOrder(uint256 _orderId) external nonReentrant {
        (
            Order memory order,
            ILayawayPoolImplement layawayPool,
            address payingTokenAddress,
            uint256 price
        ) = prevActionOrder(_orderId);

        require(
            block.timestamp > order.createdAt + order.dayTerm,
            "Exceed deadline"
        );

        uint256 paid = (order.purchaseAmount * price * 10) / 100;

        onTransfer(payingTokenAddress, treasuryAddress, paid);

        layawayPool.unlock(order.purchaseAmount);
    }
}

