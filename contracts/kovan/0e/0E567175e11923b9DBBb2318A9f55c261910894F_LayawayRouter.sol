import "@openzeppelin/contracts/proxy/Proxy.sol";
import "./interfaces/ILayawayPoolProxy.sol";
import "./interfaces/ISharedStructure.sol";

contract LayawayPoolProxy is Proxy, ISharedStructure, ILayawayPoolProxy, ERC20, ReentrancyGuard {
    LayawayInfo public override layaway;
    address public adminAddress;
    address public layawayRouterAddress;
    mapping(address => uint256) public claimedAmount;
    bytes32 private constant _IMPLEMENTATION_SLOT = 0x360894a13ba1a3210667c828492db98dca3e2076cc3735a920a3ca505d382bbc;

    event Upgraded(address indexed implementation);

    constructor(
        address _admin,
        address _logic,  
        address _sellTokenAddress,
        address _payingTokenAddress,
        uint256 _price,
        string memory _name, 
        string memory _symbol
    ) ERC20(_name, _symbol){
        require(_admin !=address(0), "admin address must be diff address Zero");
        assert(_IMPLEMENTATION_SLOT == bytes32(uint256(keccak256("eip1967.proxy.implementation")) - 1));
        _setImplementation(_logic);

        layaway = LayawayInfo(
            _sellTokenAddress,
            _payingTokenAddress,
            _price,
            0
        );
        adminAddress = _admin;
        layawayRouterAddress = msg.sender;
    }

    modifier onlyAdmin(){
        require(msg.sender == adminAddress, "Only admin have right");
        _;
    }
    function _implementation() internal override view returns (address impl) {
        bytes32 slot = _IMPLEMENTATION_SLOT;
        // solhint-disable-next-line no-inline-assembly
        assembly {
            impl := sload(slot)
        }
    }
    
    function _fallback() override internal {
        _delegate(_implementation());
    }

    function _delegate(address implementation) internal override {
        assembly {
            calldatacopy(0, 0, calldatasize())

            let result := delegatecall(gas(), implementation, 0, calldatasize(), 0, 0)

            returndatacopy(0, 0, returndatasize())

            switch result
            case 0 { revert(0, returndatasize()) }
            default { return(0, returndatasize()) }
        }
    }
    
    // function upgradeToAndCall(address newImplementation, bytes calldata data) external payable {
    //     _upgradeTo(newImplementation);
    //     // solhint-disable-next-line avoid-low-level-calls
    //     (bool success,) = newImplementation.delegatecall(data);
    //     require(success);
    // }
    
    function upgradeTo(address newImplementation) external onlyAdmin{
        _setImplementation(newImplementation);
        emit Upgraded(newImplementation);
    }

    function _setImplementation(address newImplementation) private {

        bytes32 slot = _IMPLEMENTATION_SLOT;

        // solhint-disable-next-line no-inline-assembly
        assembly {
            sstore(slot, newImplementation)
        }
    }
    
    fallback () external payable override {
        _fallback();
    }

    receive() external payable override {}
}

