contract LuffyV2Swap is Ownable {
  // Mainnet
  IUniswapV2Router02 public router = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
  IERC20 public luffy = IERC20(0xC1bfcCd4c29813eDe019D00D2179Eea838a67703);
  IERC20 public goku = IERC20(0xA64dFe8D86963151E6496BEe513E366F6e42ED79);
  IERC20 public chopper = IERC20(0x28c5805B64d163588A909012a628b5a03c1041f9);
  IERC20 public deku = IERC20(0xA1a88cea335EDAF30ce90F103f1434a773ea46BD);
  IERC20 public LuffyV2 = IERC20(0x141a2B8c06ddF656Ee7EAb4D629EeEF1052b387E);

  bool public locked = false;

  modifier locktheswap {
    require(!locked, "Swap locked.");
    _;
  }

  event TokenSwapped(address receiver, address depositToken, uint256 depositAmount, uint256 withdrawalAmount);

  function getPrice(address _address, uint256 amountIn) public view returns(uint256) {
    address[] memory path = new address[](3);
    path[0] = _address;
    path[1] = address(router.WETH());
    path[2] = address(luffy);
    uint256[] memory price = router.getAmountsOut(amountIn, path);
    return price[2];
  }

  function getCurrentRate() public view returns(uint256) {
    uint256 total = 100*(10**9) + (100 * getPrice(address(deku), 10**9)) + (100 * getPrice(address(goku), 10**9)) + (getPrice(address(chopper), 10**9));
    uint256 currentRate = total/200;
    return currentRate;
  }

  function getSwapAmountOut(address _token, uint256 amount) public view returns(uint256) {
    return (getPrice(_token, amount)*(10**9))/getCurrentRate();
  }

  function swapToken(address _token, uint256 amount) public locktheswap  {
    IERC20 token = _token == address(luffy)? luffy: _token == address(goku)? goku: _token == address(chopper)? chopper: _token == address(deku)? deku: IERC20(address(0));
    require(address(token) != address(0), "Security Check: Invalid token");
    uint256 swapAmount = getSwapAmountOut(_token, amount);
    require(LuffyV2.allowance(owner(), address(this)) >= swapAmount, "Insufficient withdrawal amount.");
    token.transferFrom(msg.sender, address(this), amount);
    LuffyV2.transferFrom(owner(), msg.sender, swapAmount);
    emit TokenSwapped(msg.sender, _token, amount, swapAmount);                                        
  }

  function withdrawDepositedFunds(address _tokenAddress, uint256 amount, address _receiver) public onlyOwner {
    IERC20 token = IERC20(_tokenAddress);
    token.transfer(_receiver, amount);
  }

  function withdrawEth(address to) public onlyOwner {
    payable(to).transfer(address(this).balance);
  }

  function startSwap(bool _state) public onlyOwner {
    locked = !_state;
  }

  function changeLuffyV2(address _address) public onlyOwner {
    LuffyV2 = IERC20(_address);
  }
}