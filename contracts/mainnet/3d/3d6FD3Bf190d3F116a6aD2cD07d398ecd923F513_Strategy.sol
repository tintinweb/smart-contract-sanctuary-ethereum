contract Strategy is BaseStrategy {
    IProtocolDataProvider public constant PROTOCOL_DATA_PROVIDER =
        IProtocolDataProvider(0x057835Ad21a177dbdd3090bB1CAE03EaCF78Fc6d);

    address public immutable aToken;

    constructor(
