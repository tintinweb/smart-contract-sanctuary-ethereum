    function svgToImageURI(string memory svg)
        private
        pure
        returns (string memory)
    {
        string memory svgBase64Encoded = Base64.encode(
            bytes(string(abi.encodePacked(svg)))
        );
        return
            string(
                abi.encodePacked("data:image/svg+xml;base64,", svgBase64Encoded)
            );
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override
        returns (string memory)
    {
        require(_exists(tokenId), "ERC721Metadata: URI query for nonexistent token");

        string memory _svg;
        string memory _army;
        string memory _forces;
        uint256 maxPower = 0;
        uint256 power = tokenPower[tokenId];
        Army _t = _getArmy(tokenId);
        Forces _f = _getForces(tokenId);

        if (_t == Army.Ukrainian) {
            _army = "UA";
            maxPower = ukrPower;
        } else {
            _army = "RU";
            maxPower = rusPower;
        }

        if (_f == Forces.Aero) {
            _forces = "Aero";
        }

        if (_f == Forces.Tank) {
            _forces = "Tank";
        }

        if (_f == Forces.Motorized) {
            _forces = "Motorized";
        }

        if (_f == Forces.Airborne) {
            _forces = "Airborne";
        }

        _svg = getSvg(power, _f, _t);

        return
            string(
                abi.encodePacked(
                    "data:application/json;base64,",
                    Base64.encode(
                        bytes(
                            string(
                                abi.encodePacked(
                                    '{"name": "',
                                    _army,
                                    " soldier #",
                                    toString(tokenId),
                                    '", "attributes": [ {"trait_type": "Army", "value":"',
                                    _army,
                                    '"}, {"trait_type": "Forces", "value":"',
                                    _forces,
                                    '"}, {"trait_type": "Power", "value":',
                                    toString(power),
                                    ', "max_value":',
                                    toString(maxPower),
                                    '} ], "image":"',
                                    svgToImageURI(_svg),
                                    '"}'
                                )
                            )
                        )
                    )
                )
            );
    }

