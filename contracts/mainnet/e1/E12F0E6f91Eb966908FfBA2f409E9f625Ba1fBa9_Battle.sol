            }

            delete tokenPower[tokenId];
        }
    }

    function fight(uint256 _tokenId1, uint256 _tokenId2) external nonReentrant {
        require(_isApprovedOrOwner(_msgSender(), _tokenId1), "BTTL: not owner");
        require(_isApprovedOrOwner(_msgSender(), _tokenId2), "BTTL: not owner");
        Army _char1 = _getArmy(_tokenId1);
        Army _char2 = _getArmy(_tokenId2);

        require(_char1 != _char2, "BTTL: Only opposite chars");

        uint256 _char1Power = tokenPower[_tokenId1];
        uint256 _char2Power = tokenPower[_tokenId2];

        

        if (_char1Power == _char2Power) {
            uint256 winner = uint256(
                keccak256(
                    abi.encodePacked(
                        block.timestamp,
                        _msgSender(),
                        rusPower,
                        ukrPower
                    )
                )
            ) % 2;
            if (winner == 0) {
                _burn(_tokenId2);
                _increaseTokenPower(_tokenId1, _char2Power);
            } else {
                _burn(_tokenId1);
                _increaseTokenPower(_tokenId2, _char1Power);
            }
        }else
        {
        
            if (_char1Power > _char2Power) {
                _burn(_tokenId2);
                _increaseTokenPower(_tokenId1, _char2Power);
            }else{
                _burn(_tokenId1);
                _increaseTokenPower(_tokenId2, _char1Power);
                }
        }
    }

    function _increaseTokenPower(uint256 _tokenId, uint256 _increment)
        private
    {
        tokenPower[_tokenId] += _increment;
        Army _t = _getArmy(_tokenId);
        if (_t == Army.Ukrainian) {
            ukrPower += _increment;
        } else {
            rusPower += _increment;
        }
        emit TokenPowerIncreased(_tokenId, _increment, tokenPower[_tokenId]);
    }

