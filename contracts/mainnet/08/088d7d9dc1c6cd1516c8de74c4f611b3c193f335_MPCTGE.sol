pragma solidity ^0.8.0;





contract MPCTGE is Ownable, Pausable {
    using SafeMath for uint256;

    uint8 public constant _roundToDecimals = 18;
    uint256 public constant _minUsdPurchaseAmount = 100 ether; // 100 USD
    uint256 public constant _firstRoundMaxPurchasePerWallet = 12500 ether; // 12500 MPC Tokens

    address payable public immutable _withdrawAccount;

    bool public _isFirstRound = true;
    uint256 public _mpcCapacity = 10_000_000 ether;
    uint256 public _mpcTokenPrice;
    bytes32 public _merkleRoot;

    mapping(address => uint256) private _depositedEth;
    mapping(address => uint256) private _estimatedMPCPayout;

    AggregatorV3Interface private _priceFeed;

    constructor(
        address payable withdrawAccount,
        address priceFeed,
        uint256 mpcTokenPrice,
        bytes32 merkleRoot
    ) {
        _withdrawAccount = withdrawAccount;
        _priceFeed = AggregatorV3Interface(priceFeed);
        _mpcTokenPrice = mpcTokenPrice;
        _merkleRoot = merkleRoot;
    }

    function _scalePrice(
        uint256 _price,
        uint8 _priceDecimals,
        uint8 _decimals
    ) internal pure returns (uint256) {
        if (_priceDecimals < _decimals) {
            return _price * uint256(10**uint256(_decimals - _priceDecimals));
        } else if (_priceDecimals > _decimals) {
            return _price / uint256(10**uint256(_priceDecimals - _decimals));
        }
        return _price;
    }

    function purchase(bytes32[] calldata _merkleProof)
        external
        payable
        whenNotPaused
    {
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender));
        require(
            MerkleProof.verify(_merkleProof, _merkleRoot, leaf),
            "Invalid merkle proof"
        );

        (, int256 latestPrice, , , ) = _priceFeed.latestRoundData();
        uint256 transferedAmountInUsd = msg
            .value
            .mul(
                _scalePrice(
                    uint256(latestPrice),
                    _priceFeed.decimals(),
                    _roundToDecimals
                )
            )
            .div(10**_roundToDecimals);

        require(
            transferedAmountInUsd >= _minUsdPurchaseAmount,
            "Transfered amount in USD must be higher then 100USD"
        );

        uint256 mpcPayout = transferedAmountInUsd.div(_mpcTokenPrice).mul(
            10**_roundToDecimals
        );
        require(
            mpcPayout <= _mpcCapacity,
            "Allocated MPC token capacity for sale was exceeded"
        );

        _mpcCapacity -= mpcPayout;
        _depositedEth[_msgSender()] += msg.value;
        _estimatedMPCPayout[_msgSender()] += mpcPayout;

        if (_isFirstRound) {
            require(
                _estimatedMPCPayout[_msgSender()] <= _firstRoundMaxPurchasePerWallet,
                "Max purchase amount for the first round was reached. Wait for the next round or buy less tokens"
            );
        }
    }

    function withdraw() external onlyOwner {
        _withdrawAccount.transfer(address(this).balance);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function setMerkleRoot(bytes32 _newMerkleRoot) external onlyOwner {
        _merkleRoot = _newMerkleRoot;
    }

    function setMpcTokenPrice(uint256 _newMpcTokenPrice) external onlyOwner {
        if (_isFirstRound) {
            _isFirstRound = false;
        }

        _mpcTokenPrice = _newMpcTokenPrice;
    }

    function increaseCapacity(uint256 _amount) external onlyOwner {
        _mpcCapacity += _amount;
    }

    function ethDepositOf(address _depositor) public view returns (uint256) {
        return _depositedEth[_depositor];
    }

    function mpcTokenPayoutOf(address _depositor)
        public
        view
        returns (uint256)
    {
        return _estimatedMPCPayout[_depositor];
    }

    function simulateExchange(uint256 _ethAmount)
        public
        view
        returns (uint256)
    {
        (, int256 latestPrice, , , ) = _priceFeed.latestRoundData();
        uint256 transferedAmountInUsd = _ethAmount
            .mul(
                _scalePrice(
                    uint256(latestPrice),
                    _priceFeed.decimals(),
                    _roundToDecimals
                )
            )
            .div(10**_roundToDecimals);

        require(
            transferedAmountInUsd >= _minUsdPurchaseAmount,
            "Transfered amount in USD must be higher then 100USD"
        );

        uint256 mpcPayout = transferedAmountInUsd.div(_mpcTokenPrice).mul(
            10**_roundToDecimals
        );
        require(
            mpcPayout <= _mpcCapacity,
            "Allocated capacity for sale was exceeded"
        );

        return mpcPayout;
    }

    function isWhitelisted(address account, bytes32[] calldata _merkleProof)
        public
        view
        returns (bool)
    {
        bytes32 leaf = keccak256(abi.encodePacked(account));
        return MerkleProof.verify(_merkleProof, _merkleRoot, leaf);
    }
}


