        if(_traits.length == 1 && (keccak256(abi.encodePacked(_traits[0]))) == keccak256(abi.encodePacked(('Poor')))){
            uint outcome = randomValue % 100;
            hasRareItem = outcome < 5;
        } else {
            hasRareItem = false;
        }
    }

    // 19% Lost Everything
    function _hasLostItAll(uint randomValue) internal pure returns (bool hasRareItem){
        uint outcome = randomValue % 100;
        hasRareItem = (outcome >= 0 && outcome < 20);
    }

     // 60% 0 Items
    function _hasNoItems(uint randomValue) internal pure returns (bool hasRareItem){
        uint outcome = randomValue % 100;
        hasRareItem = (outcome >= 20 && outcome < 80);
    }

    // 2% 3 Items
    function _isSuZhuRich(uint randomValue) internal pure returns (bool hasRareItem){
        uint outcome = randomValue % 100;
        hasRareItem = (outcome >= 80 && outcome < 82);
    }

    // 4% 2 Itmes
