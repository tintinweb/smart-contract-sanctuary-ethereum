        uint outcome = randomValue % 100;
        hasRareItem = (outcome >= 82 && outcome < 86);
    }

    // 14% 1 Item
    function _isRich(uint randomValue) internal pure returns (bool hasRareItem){
        uint outcome = randomValue % 100;
        hasRareItem = (outcome >= 86 && outcome < 100);
    }

