        if(_gainedItAllBack(randomValue, tokenId)) {
            (_traits, _types) = _selectItems(randomValue, 3, false, true);
        } 
        else if(_hasNoItems(randomValue)){
            _traits = new string[](0);
            _types = new uint[](0);
        }
        else if(_hasLostItAll(randomValue)){
            (_traits, _types) = _selectItems(randomValue, 1, true, false);
        }
        else if(_isRich(randomValue)){
            (_traits, _types) = _selectItems(randomValue, 1, false, false);
        }
        else if(_isUltraRich(randomValue)){
            (_traits, _types) = _selectItems(randomValue, 2, false, false);
        }
        else if(_isSuZhuRich(randomValue)){
            (_traits, _types) = _selectItems(randomValue, 3, false, false);
        }
        else{
            _traits = new string[](0);
            _types = new uint[](0);
        }
    }
