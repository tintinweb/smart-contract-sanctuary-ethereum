interface IAgentsRaffle {
    function addToStakers(address newStaker) external;
}

contract AgentsRaffle is IAgentsRaffle, VRFv2DirectFundingConsumer {
    //Stores the addresses of current stakers and past winners
    address[] public stakers;
    address[] public winners;
    
    address public DigitsAgents;
    address public DigitsRedeemer;

    mapping(address => bool) public isStaker;

    constructor() {
        DigitsAgents = 0x3F39ca26C1f4A213E96b3676412A41969EC2BB2A;
        DigitsRedeemer = 0xA0498C6a8DF1cCD02446aDb74d368ccD989D0355;
    }

    function setDigitsAgents(address newAddress) external onlyOwner {
        require(newAddress != address(0), "Invalid Address!");
        DigitsAgents = newAddress;
    }

    function setDigitsRedeemer(address newAddress) external onlyOwner {
        require(newAddress != address(0), "Invalid Address!");
        DigitsRedeemer = newAddress;
    }

    function addToStakers(address newStaker) external override {
        require(msg.sender == DigitsRedeemer, "Not Digits Redeemer Contract!");
        if (!isStaker[tx.origin]) {
            isStaker[tx.origin] = true;
            stakers.push(newStaker);
        } 
    }

    function addToStakersOwner(address[] memory newStakers) external onlyOwner {
        for (uint i; i < stakers.length; i++) {
            isStaker[newStakers[i]] = true;
            stakers.push(newStakers[i]);
        }
    }

    function pickWinner(address nftOwner, uint tokenId) public onlyOwner {
        //Using the random number to pick a winner
        uint256 indexOfWinner = s_requests[lastRequestId].randomWords[0] % stakers.length;
        
        //Taking address out of raffle
        address firstValue = stakers[indexOfWinner];
        address secondValue = stakers[stakers.length - 1];
        stakers[indexOfWinner] = secondValue;
        stakers[stakers.length - 1] = firstValue;
        stakers.pop();

        winners.push(firstValue);

        //Sending an NFT to winner of raffle
        //Will fail if contract is not approved to send the nft of owner
        IERC721(DigitsAgents).transferFrom(nftOwner, firstValue, tokenId);

    }

    function listStakers() external view onlyOwner returns(address[] memory) {
        return stakers;
    }

}