		uint256 rate = _additionalUserData[user];
		// rate = rate.wadToRay();
		if (userBalance == 0) {
			return 0;
		}
		uint256 cumulatedInterest = MathUtils.calculateLinearInterest(
			rate,
			_timestamps[user]
		);
		return userBalance.rayMul(cumulatedInterest);
	}

