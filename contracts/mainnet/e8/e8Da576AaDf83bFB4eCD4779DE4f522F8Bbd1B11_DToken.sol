			_totalSupply = 0;
		} else {
			nextSupply = _totalSupply = previousSupply + amount;
			uint256 termOne = uint256(_averageRate).rayMul(previousSupply.wadToRay());
			uint256 termTwo = rate.rayMul(amount.wadToRay());

