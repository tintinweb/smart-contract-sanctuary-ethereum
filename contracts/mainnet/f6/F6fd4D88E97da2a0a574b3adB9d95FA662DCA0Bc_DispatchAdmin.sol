        @notice Removes a team member address from a token and burns the NFT from the team member. Only Owner or the admin of the token can remove a team member.
        @param _nftID the nft ID of the msg.sender(ADMIN)
        @param _orgAddress the TokenOrg address
        @param _adminTokenToBurn the team member address.
     */
  function removeTeamMember(
    uint256 _nftID,
    address _orgAddress,
    address _adminTokenToBurn
  ) external verify(_orgAddress, _nftID) onlyAuthorised(_nftID) {
    // burn the token owned by passed in user
    burnAdminNFTs(_adminTokenToBurn, _nftID, _orgAddress);
    emit TeamMemberRemoved(_orgAddress, _adminTokenToBurn);
  }

  /**
        @notice Mints the message NFT to the backend wallet. Only org Admin can mint the NFTs.
        @param _nftID the nft ID of the msg.sender(ADMIN)
        @param _orgAddress the TokenOrg address
        @param _metadata the metadata for Message NFT 
        @param _amount the amount of messages to mint
     */
  function mintMessage(
    uint256 _nftID,
    address _orgAddress,
    uint256 _amount,
    string memory _metadata
  ) external payable onlyAuthorised(_nftID) {
    require(msg.value > 0, "Can't send zero");
    (bool sent, ) = walletAddress[_orgAddress].call{ value: msg.value }("");
    require(sent, "Failed to send funds");
    uint256 messageID = nft.mint(walletAddress[_orgAddress], _amount, _metadata);
    emit MessageSent(_orgAddress, messageID, _metadata);
  }

  /**
        @notice Sends Message as an NFT to the filtered token holders. Only backend wallet can send the NFTs to the holders.
        @param _orgAddress the TokenOrg address
        @param _to list of filtered token holder address
        @param _messageID the ID of the message NFT
     */
  function sendNFTs(
    address _orgAddress,
    address[] memory _to,
    uint256 _messageID
  ) external onlyWallet(_orgAddress) {
    for (uint256 i = 0; i < _to.length; i++) {
      nft.safeTransferFrom(msg.sender, _to[i], _messageID, 1, "");
    }
  }
