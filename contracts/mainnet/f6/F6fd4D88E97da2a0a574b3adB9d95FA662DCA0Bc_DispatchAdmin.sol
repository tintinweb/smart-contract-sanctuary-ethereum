    for (uint256 i = 0; i < _messageTokenToBurn.length; i++) {
      uint256 _numTokensToBurn = nft.balanceOf(_messageTokenToBurn[i], _nftID);
      nft.burnMessage(_messageTokenToBurn[i], _nftID, _numTokensToBurn);
    }
