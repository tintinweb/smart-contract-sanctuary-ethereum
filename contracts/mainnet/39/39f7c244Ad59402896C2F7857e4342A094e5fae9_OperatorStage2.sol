    function getActiveUserPrincipals(address _user) private view returns (uint256 seuroActive, uint256 otherActive) {
        Bond[] memory bonds = getUserBonds(_user);
        for (uint256 i = 0; i < bonds.length; i++) {
            Bond memory bond = bonds[i];
