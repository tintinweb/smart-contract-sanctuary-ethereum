            _erc20.safeTransferFrom(
                request.purchaser,
                request.sellerAddress,
                pureIncome
            );
        }

        _erc1155.safeTransferFrom(
            request.sellerAddress,
            request.purchaser,
            request.tokenId,
            request.amount,
            ""
        );

        nonces[request.purchaser] = request.nonce + 1;

        emit NormalPurchase(
            request.purchaser,
            request.sellerAddress,
            request.nonce,
            request.orderId,
            1155,
            request.erc1155Address,
            request.tokenId,
            request.amount,
            request.paymentTokenAddress,
            request.price,
            request.feeRatio
        );
    }
}