// File contracts/ERC1155Sale.sol

pragma solidity ^0.8.7;

interface IERC1155 {
    function balanceOf(address account, uint256 id) external view returns (uint256);
    function setApprovalForAll(address operator, bool approved) external;
    function safeTransferFrom(
        address from, address to,
        uint256 id, uint256 amount,
        bytes calldata data
    ) external;
}

contract ERC1155Sale is ERC1155Holder, Ownable {
    using SafeMath for uint;

    address public erc1155Addr;
    uint public tokenId;
    uint public weiPerToken;
    uint public maxTokenHold;
    address public feeRecipient;

    constructor(
        address _erc1155Addr, uint _tokenId, 
        uint _weiPerToken, uint _maxTokenHold,
        address _feeRecipient
    ) {
        erc1155Addr = _erc1155Addr;
        tokenId = _tokenId;
        weiPerToken = _weiPerToken;
        maxTokenHold = _maxTokenHold;
        feeRecipient = _feeRecipient;
    }

    function calculatePrice(uint _tokenAmt) 
    public view returns(uint) {
        return  weiPerToken.mul(_tokenAmt);
    }

    event BoughtWithEth(address indexed buyer, uint indexed tokenId, uint amount, uint priceInWei);
    function buyWithEth(uint _tokenAmount) external payable {
        address _buyer = msg.sender;
        uint _buyerBal = IERC1155(erc1155Addr).balanceOf(_buyer, tokenId);
        require(_buyerBal + _tokenAmount <= maxTokenHold, "Token amount exceeds Max_Token_Holding_per_User limit");
        
        uint _price1 = calculatePrice(_tokenAmount);
        require(msg.value >= _price1, "Not enought Eth sent");
        
        uint contractBal = IERC1155(erc1155Addr).balanceOf(address(this), tokenId);
        require(contractBal >= _tokenAmount, "Amount is greater than available balance for sale");

        payable(feeRecipient).transfer(address(this).balance);
        IERC1155(erc1155Addr).safeTransferFrom(
            address(this), _buyer, tokenId, _tokenAmount, '0x'
        );
        emit BoughtWithEth(_buyer, tokenId, _tokenAmount, _price1);
    }


    event DataUpdated(address erc1155Addr, uint tokenId, uint weiPerToken, uint maxTokenHold);
    function updateData(
       address _erc1155Addr, uint _tokenId, 
        uint _weiPerToken, uint _maxTokenHold
    )external onlyOwner {
        erc1155Addr = _erc1155Addr;
        tokenId = _tokenId;
        weiPerToken = _weiPerToken;
        maxTokenHold = _maxTokenHold;
        emit DataUpdated(_erc1155Addr, _tokenId, _weiPerToken, _maxTokenHold);
    }

    event UpdatedFeeRecipient(address newFeeRecipient);
    function updateFeeRecipient(address _feeRecipient) external 
    onlyOwner {
        feeRecipient = _feeRecipient;
        emit UpdatedFeeRecipient(_feeRecipient);
    }

    function getBackRemainingNFTs() external onlyOwner {
        uint _contractBal = IERC1155(erc1155Addr).balanceOf(address(this), tokenId);
        IERC1155(erc1155Addr).safeTransferFrom(
            address(this), feeRecipient, tokenId, _contractBal, '0x'
        );
    }
}