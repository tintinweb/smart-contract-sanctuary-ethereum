        uint256[] memory tokens = activeChars[msg.sender];
        for (uint256 i = 0; i < tokens.length; i++) {
            oldWarContract.safeTransferFrom(gameVault, msg.sender, tokens[i]);
            emit CharDeactivated(msg.sender,tokens[i]);
            tokenOwners[tokens[i]] = address(0);
        }
        delete activeChars[msg.sender];
    }

