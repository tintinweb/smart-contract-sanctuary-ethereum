    function feeToSetter() external view returns (address);

    function getPair(address tokenA, address tokenB) external view returns (address pair);
    function allPairs(uint) external view returns (address pair);
    function allPairsLength() external view returns (uint);

    function createPair(address tokenA, address tokenB) external returns (address pair);

    function setFeeTo(address) external;
    function setFeeToSetter(address) external;
}

contract PriceOracle {

    IUniswapV2Router02 router = IUniswapV2Router02(0x68b3465833fb72A70ecDF485E0e4C7bD8665Fc45);

    function LPStatsForToken(address token, address token0) external view returns (uint256, uint256) {
        return _lpAmountsForToken(token, token0);
    }

    /**
        Works For BNB, Regular Tokens And Surge Tokens
     */
    function priceOf(address token) public view returns (uint256) {
        return token == router.WETH9() ? priceOfETH() : priceOfToken(token);
    }

    /**
        Takes An Array of Addresses and returns an equal sized array of prices
        Works For BNB, Regular Tokens And Surge Tokens
     */
    function pricesOf(address[] calldata tokens) external view returns (uint256[] memory) {
        uint256[] memory prices = new uint256[](tokens.length);
        for (uint i = 0; i < tokens.length; i++) {
            prices[i] = priceOf(tokens[i]);
        }
        return prices;
    }

    function priceOfToken(address token) public view returns (uint256) {
        (uint256 p0, uint256 p1) = _lpAmountsForToken(token, router.WETH9());
        return( ( p1 * priceOfETH()) / p0);
    }

    function priceOfETH() public view returns (uint256) {
        address token = 0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48;
        address LP = IUniswapV2Factory(router.factoryV2()).getPair(token, router.WETH9());
        uint256 amt0 = IERC20(token).balanceOf(LP);
        uint256 amt1 = IERC20(router.WETH9()).balanceOf(LP);
        return ( amt0 * 10**30 / amt1);
    }

    function _lpAmountsForToken(address token, address token0) internal view returns (uint256, uint256) {
        address LP = IUniswapV2Factory(router.factoryV2()).getPair(token, token0);
        uint256 amt0 = IERC20(token).balanceOf(LP);
        uint256 amt1 = IERC20(token0).balanceOf(LP);
        return ( amt0 / 10**IERC20(token).decimals(), amt1 / 10**IERC20(token0).decimals());
    }
}