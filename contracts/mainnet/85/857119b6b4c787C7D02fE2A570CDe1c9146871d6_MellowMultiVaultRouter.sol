        external
        view
        override
        returns (uint256[] memory)
    {
        uint256[] memory balances = new uint256[](_vaults.length);

        for (uint256 i = 0; i < _vaults.length; i++) {
            balances[i] = _managedLpTokens[owner][i];
        }

        return balances;
