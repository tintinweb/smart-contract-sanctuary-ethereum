        public
        view
        override
        returns (bool)
    {
        if (weights.length != _vaults.length) {
            return false;
        }

        uint256 sum = 0;
        for (uint256 i = 0; i < weights.length; i++) {
            if (_isVaultDeprecated[i] && weights[i] > 0) {
                return false;
            }
            sum += weights[i];
        }

