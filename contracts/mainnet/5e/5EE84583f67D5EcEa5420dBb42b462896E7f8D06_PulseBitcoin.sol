    uint256 private constant WITHDRAW_GRACE_PERIOD = 30;
    uint256 private constant ATM_EVENT_LENGTH = 30;
    uint256 private constant DAYS_FOR_PENALTY = MIN_MINING_DURATION + WITHDRAW_GRACE_PERIOD;
