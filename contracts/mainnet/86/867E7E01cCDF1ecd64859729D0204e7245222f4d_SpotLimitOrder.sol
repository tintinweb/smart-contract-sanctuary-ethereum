//base quote amount in execute
///////////////////////////////
contract SpotLimitOrder is
    Initializable,
    UUPSUpgradeable,
    AccessControlUpgradeable,
    PausableUpgradeable
{
    using SafeERC20Upgradeable for IERC20Upgradeable;

    enum OrderType {
        TAKE_PROFIT, //sell
        BUY_LIMIT //buy
    }
    /// @notice Address of UniswapV3 position manager
    INonfungiblePositionManager public nftPositionManager;
    /// @notice Address of UniswapV3 factory
    address public uniswapV3Factory;
    /// @notice Address of wrapped ether
    IWETH9 public weth;
    /// @notice Address of UniswapV3 position nft
    address public uniV3Nft;
    /// @notice Amount of eth which whould be payd for execution
    uint256 public executionFee;
    uint256 public SLIPPAGE;
    uint256 public SLIPPAGE_ACCURACY;
    /// @notice poolAddress => positionNFT_ID => orderData
    /// @dev pool_address -> tokenId -> trade data.
    mapping(address => mapping(uint256 => Order)) public orders;
    // Amount of ETH for executer order. orderId -> ETH
    mapping(uint256 => uint256) public ethForExecute;

    event CreateOrder(
        address indexed user,
        address token0,
        address token1,
        address indexed poolAddress,
        uint256 tokenId,
        int24 tickLower,
        int24 tickUpper,
        uint256 amount0,
        uint256 amount1,
        bool isReverse,
        OrderType orderType
    );
    event CancelOrder(
        address indexed user,
        address token0,
        address token1,
        uint256 tokenId,
        address indexed poolAddress,
        uint256 transferedToken0,
        uint256 transferedToken1
    );
    event ExecuteOrder(
        address indexed user,
        address token0,
        address token1,
        uint256 tokenId,
        address indexed poolAddress,
        uint256 transferedToken0,
        uint256 transferedToken1,
        uint256 quoteAmount,
        uint256 baseAmount
    );
    event LogBytes(bytes reason);
    struct Order {
        bool isReverse;
        address token0;
        address token1;
        address owner; //fix in creation
        int24 tickLower;
        int24 tickUpper;
        uint24 fee;
        uint128 liquidity; //fix in creation
        uint256 orderId; //fix in creation
        uint256 amountOfToken0;
        uint256 amountOfToken1;
        uint256 receivedAmount;
        uint256 deadline;
        OrderType orderType;
    }
    modifier allowedOrder(uint256 tokenId, address poolAddress) {
        require(
            orders[poolAddress][tokenId].orderType == OrderType.BUY_LIMIT ||
                orders[poolAddress][tokenId].orderType == OrderType.TAKE_PROFIT,
            "OT"
        );
        _;
    }

    function initialize(
        address _nftPositionManager,
        address _uniswapV3Factory,
        address _weth,
        uint256 _executionFee
    ) public initializer {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        /// Storage variable initialization.
        nftPositionManager = INonfungiblePositionManager(_nftPositionManager);
        uniswapV3Factory = _uniswapV3Factory;
        uniV3Nft = _nftPositionManager;
        weth = IWETH9(_weth);
        executionFee = _executionFee;
        SLIPPAGE = 9999;
        SLIPPAGE_ACCURACY = 1e5;
        __Pausable_init();
        __AccessControl_init();
        __UUPSUpgradeable_init();
    }

    function getAmount1FromAmount0(
        uint256 _amount0,
        int24 _tickLower,
        int24 _tickUpper
    ) external pure returns (uint256 _amount1) {
        uint128 liquidity = LiquidityAmounts.getLiquidityForAmount0(
            TickMath.getSqrtRatioAtTick(_tickLower),
            TickMath.getSqrtRatioAtTick(_tickUpper),
            _amount0
        );
        _amount1 = LiquidityAmounts.getAmount1ForLiquidity(
            TickMath.getSqrtRatioAtTick(_tickLower),
            TickMath.getSqrtRatioAtTick(_tickUpper),
            liquidity
        );
    }

    function getAmount0FromAmount1(
        uint256 _amount1,
        int24 _tickLower,
        int24 _tickUpper
    ) external pure returns (uint256 _amount0) {
        uint128 liquidity = LiquidityAmounts.getLiquidityForAmount1(
            TickMath.getSqrtRatioAtTick(_tickLower),
            TickMath.getSqrtRatioAtTick(_tickUpper),
            _amount1
        );
        _amount0 = LiquidityAmounts.getAmount0ForLiquidity(
            TickMath.getSqrtRatioAtTick(_tickLower),
            TickMath.getSqrtRatioAtTick(_tickUpper),
            liquidity
        );
    }

    function setExecutionFee(uint256 _executionFee)
        external
        whenPaused
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        executionFee = _executionFee;
    }

    function sweepTokens(
        address _token,
        address _to,
        uint256 _amount
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        IERC20Upgradeable(_token).transfer(_to, _amount);
    }

    function setPause(bool _newPauseState)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _newPauseState ? _pause() : _unpause();
    }

    function setSlippage(uint256 _newSlippage, uint256 _newSlippageAccuracy)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        require(_newSlippageAccuracy > _newSlippage, "STSL1");
        SLIPPAGE = _newSlippage;
        SLIPPAGE_ACCURACY = _newSlippageAccuracy;
    }

    function createOrder(Order memory _params)
        external
        payable
        whenNotPaused
        returns (uint256)
    {
        require(_params.token0 != _params.token1, "CRE1");
        require(
            _params.orderType == OrderType.TAKE_PROFIT ||
                _params.orderType == OrderType.BUY_LIMIT,
            "CRE2"
        );
        require(msg.value >= executionFee, "CRE3");
        require(_params.token0 < _params.token1, "CRE4");
        address poolAddress = PoolAddress.computeAddress(
            uniswapV3Factory,
            PoolAddress.getPoolKey(_params.token0, _params.token1, _params.fee)
        );
        require(AddressUpgradeable.isContract(poolAddress), "CRE5");
        int24 tickSpacing = IUniswapV3Pool(poolAddress).tickSpacing();
        (, int24 currentTick, , , , , ) = IUniswapV3Pool(poolAddress).slot0();
        if (_params.orderType == OrderType.TAKE_PROFIT) {
            require(_params.tickLower > currentTick, "CRE6");
            require(
                _params.tickLower <= TickMath.MAX_TICK - tickSpacing,
                "CRE7"
            );
            require(_params.amountOfToken0 > 0, "CRE8");
            require(_params.amountOfToken1 == 0, "CRE9");
            // require(_params.tickUpper == 0); //hueta
            IERC20Upgradeable(_params.token0).safeTransferFrom(
                _msgSender(),
                address(this),
                _params.amountOfToken0
            );
            IERC20Upgradeable(_params.token0).safeIncreaseAllowance(
                address(nftPositionManager),
                _params.amountOfToken0
            );
            _params.tickUpper = _params.tickLower + tickSpacing;
        } else if (_params.orderType == OrderType.BUY_LIMIT) {
            require(_params.tickUpper < currentTick, "CRE10");
            require(
                _params.tickUpper >= TickMath.MIN_TICK + tickSpacing,
                "CRE11"
            );
            require(_params.amountOfToken1 > 0, "CRE12");
            require(_params.amountOfToken0 == 0, "CRE13");
            require(_params.receivedAmount > 0, "CRE14");
            // require(_params.tickLower == 0, "CRE15"); //hueta
            IERC20Upgradeable(_params.token1).safeTransferFrom(
                _msgSender(),
                address(this),
                _params.amountOfToken1
            );
            IERC20Upgradeable(_params.token1).safeIncreaseAllowance(
                address(nftPositionManager),
                _params.amountOfToken1
            );
            _params.tickLower = _params.tickUpper - tickSpacing;
        }
        (uint256 tokenId, uint128 liquidity, , ) = nftPositionManager.mint(
            INonfungiblePositionManager.MintParams({
                token0: _params.token0,
                token1: _params.token1,
                tickLower: _params.tickLower,
                tickUpper: _params.tickUpper,
                fee: _params.fee,
                amount0Desired: _params.amountOfToken0,
                amount1Desired: _params.amountOfToken1,
                amount0Min: (_params.amountOfToken0 * SLIPPAGE) /
                    SLIPPAGE_ACCURACY,
                amount1Min: (_params.amountOfToken1 * SLIPPAGE) /
                    SLIPPAGE_ACCURACY,
                recipient: address(this),
                deadline: _params.deadline
            })
        );
        ethForExecute[tokenId] = msg.value;
        Order storage _order = orders[poolAddress][tokenId];
        _order.isReverse = _params.isReverse;
        _order.token0 = _params.token0;
        _order.token1 = _params.token1;
        _order.owner = _msgSender();
        _order.tickLower = _params.tickLower;
        _order.tickUpper = _params.tickUpper;
        _order.fee = _params.fee;
        _order.liquidity = liquidity;
        _order.orderId = tokenId;
        _order.amountOfToken0 = _params.amountOfToken0;
        _order.amountOfToken1 = _params.amountOfToken1;
        _order.receivedAmount = 0;
        _order.deadline = _params.deadline;
        _order.orderType = _params.orderType;
        emit CreateOrder(
            _msgSender(),
            _order.token0,
            _order.token1,
            poolAddress,
            tokenId,
            _order.tickLower,
            _order.tickUpper,
            _order.amountOfToken0,
            _order.amountOfToken1,
            _order.isReverse,
            _order.orderType
        );
        return tokenId;
    }

    function cancelOrder(uint256 _tokenId, address _poolAddress)
        public
        allowedOrder(_tokenId, _poolAddress)
    {
        Order storage _order = orders[_poolAddress][_tokenId];
        require(_order.token0 != address(0), "CAN1");
        require(_order.owner == _msgSender(), "CAN2");
        _closeOrder(_tokenId, _poolAddress);
        emit CancelOrder(
            msg.sender,
            _order.token0,
            _order.token1,
            _tokenId,
            _poolAddress,
            _order.amountOfToken0,
            _order.amountOfToken1
        );
        AddressUpgradeable.sendValue(
            payable(_msgSender()),
            ethForExecute[_tokenId]
        );
        delete orders[_poolAddress][_tokenId];
    }

    function executeOrder(uint256 _tokenId, address _poolAddress)
        public
        allowedOrder(_tokenId, _poolAddress)
    {
        (
            bool isClosable,
            ,
            ,
            uint256 quoteAmount,
            ,
            uint256 baseAmount
        ) = checkOrder(_poolAddress, _tokenId);
        Order storage order = orders[_poolAddress][_tokenId];
        require(order.token0 != address(0), "EXE01");
        require(isClosable, "EXE02");
        (uint256 transferedToken0, uint256 transferedToken1) = _closeOrder(
            _tokenId,
            _poolAddress
        );
        AddressUpgradeable.sendValue(
            payable(_msgSender()),
            ethForExecute[_tokenId]
        );
        emit ExecuteOrder(
            order.owner,
            order.token0,
            order.token1,
            _tokenId,
            _poolAddress,
            transferedToken0,
            transferedToken1,
            quoteAmount,
            baseAmount
        );
        delete orders[_poolAddress][_tokenId];
    }

    function checkOrder(address _poolAddress, uint256 _tokenId)
        public
        view
        returns (
            bool isClosable,
            address owner,
            address quoteToken,
            uint256 quoteAmount,
            address baseToken,
            uint256 baseAmount
        )
    {
        (baseAmount, quoteAmount) = _getBaseTokenAmount(_tokenId, _poolAddress);
        Order storage order = orders[_poolAddress][_tokenId];
        isClosable = baseAmount == 0;
        owner = order.owner;
        if (order.orderType == OrderType.BUY_LIMIT) {
            quoteToken = order.token0;
            baseToken = order.token1;
        } else if (order.orderType == OrderType.TAKE_PROFIT) {
            quoteToken = order.token1;
            baseToken = order.token0;
        }
        quoteToken = order.orderType == OrderType.BUY_LIMIT
            ? order.token0
            : order.orderType == OrderType.TAKE_PROFIT
            ? order.token1
            : address(0);
        baseToken = order.orderType == OrderType.BUY_LIMIT
            ? order.token1
            : order.orderType == OrderType.TAKE_PROFIT
            ? order.token0
            : address(0);
    }

    function _getBaseTokenAmount(uint256 _tokenId, address _poolAddress)
        private
        view
        returns (uint256 baseAmount, uint256 quoteAmount)
    {
        Order memory order = orders[_poolAddress][_tokenId];
        (uint160 sqrtPriceCurrentX96, , , , , , ) = IUniswapV3Pool(_poolAddress)
            .slot0();
        uint160 sqrtPriceLowerX96 = TickMath.getSqrtRatioAtTick(
            order.tickLower
        );
        uint160 sqrtPriceUpperX96 = TickMath.getSqrtRatioAtTick(
            order.tickUpper
        );
        (uint256 amount0, uint256 amount1) = LiquidityAmounts
            .getAmountsForLiquidity(
                sqrtPriceCurrentX96,
                sqrtPriceLowerX96,
                sqrtPriceUpperX96,
                order.liquidity
            );

        if (order.orderType == OrderType.BUY_LIMIT) {
            quoteAmount = amount0;
            baseAmount = amount1;
        } else if (order.orderType == OrderType.TAKE_PROFIT) {
            baseAmount = amount0;
            quoteAmount = amount1;
        }
    }

    function _closeOrder(uint256 _tokenId, address _poolAddress)
        internal
        returns (uint256 token0amount, uint256 token1amount)
    {
        Order memory _order = orders[_poolAddress][_tokenId];
        uint256 balanceOfToken0Before = IERC20Upgradeable(_order.token0)
            .balanceOf(address(this));
        uint256 balanceofToken1Before = IERC20Upgradeable(_order.token1)
            .balanceOf(address(this));

        INonfungiblePositionManager(nftPositionManager).decreaseLiquidity(
            INonfungiblePositionManager.DecreaseLiquidityParams({
                tokenId: _tokenId,
                liquidity: _order.liquidity,
                amount0Min: 0,
                amount1Min: 0,
                deadline: block.timestamp
            })
        );
        INonfungiblePositionManager(nftPositionManager).collect(
            INonfungiblePositionManager.CollectParams({
                tokenId: _tokenId,
                recipient: address(this),
                amount0Max: type(uint128).max,
                amount1Max: type(uint128).max
            })
        );
        uint256 balanceOfToken0After = IERC20Upgradeable(_order.token0)
            .balanceOf(address(this));
        uint256 balanceOfToken1After = IERC20Upgradeable(_order.token1)
            .balanceOf(address(this));
        if (balanceOfToken0After > balanceOfToken0Before) {
            IERC20Upgradeable(_order.token0).transfer(
                _order.owner,
                balanceOfToken0After - balanceOfToken0Before
            );
        }
        if (balanceOfToken1After > balanceofToken1Before) {
            IERC20Upgradeable(_order.token1).transfer(
                _order.owner,
                balanceOfToken1After - balanceofToken1Before
            );
        }
        _order.amountOfToken0 = balanceOfToken0After > balanceOfToken0Before
            ? balanceOfToken0After - balanceOfToken0Before
            : 0;
        _order.amountOfToken1 = balanceOfToken1After > balanceofToken1Before
            ? balanceOfToken1After - balanceofToken1Before
            : 0;
        return (
            balanceOfToken0After > balanceOfToken0Before
                ? balanceOfToken0After - balanceOfToken0Before
                : 0,
            balanceOfToken1After > balanceofToken1Before
                ? balanceOfToken1After - balanceofToken1Before
                : 0
        );
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyRole(DEFAULT_ADMIN_ROLE)
    {}
}

