contract TestPawDao is Ownable {
    using SafeMath for uint256;
    using Address for address;

    IERC20 tokenPAW = IERC20(0xDc63269eA166b70d4780b3A11F5C825C2b761B01);

    uint256 public immutable VOTE_DOWN      = 1;
    uint256 public immutable VOTE_NEUTRAL   = 2;
    uint256 public immutable VOTE_UP        = 3;

    struct Proposal {
        string name;
        string details;
        uint256 startTime;
        uint256 endTime;
        address proposer;
        address[] voters;
        uint256 finalNoVoteDown;
        uint256 finalNoNeutral;
        uint256 finalNoVoteUp;
        uint256 finalResult; //1 failed, 2 neutral, 3 successful
    }
    uint256 public noProposal;
    mapping(uint256 => Proposal) private proposals;
    mapping(uint256 => mapping(address => uint)) private voteInfo;

    uint256 public requireAmountForProposal;

    function vote(uint256 selection) public {
        require(tokenPAW.totalSupply() * 1 / 10000  <= tokenPAW.balanceOf(msg.sender), "Your token balance should be more than 0.0001% of total supply");
        require(proposals[noProposal].startTime < block.timestamp, "Not active time");
        require(proposals[noProposal].endTime > block.timestamp, "Not active time");
        
        require(selection <= VOTE_UP && selection >= VOTE_DOWN, "Incorrect selection");

        if(voteInfo[noProposal][msg.sender] == 0)
            proposals[noProposal].voters.push(msg.sender);

        voteInfo[noProposal][msg.sender] = selection;
    }

    function _finalize() internal {
        Proposal storage proposal = proposals[noProposal];
        if(proposal.endTime <= block.timestamp && proposal.finalResult == 0){
            for (uint256 i = 0; i < proposal.voters.length; i++) {
                if(voteInfo[noProposal][proposal.voters[i]] == VOTE_DOWN)
                    proposal.finalNoVoteDown += tokenPAW.balanceOf(proposal.voters[i]);
                else if(voteInfo[noProposal][proposal.voters[i]] == VOTE_UP)
                    proposal.finalNoVoteUp += tokenPAW.balanceOf(proposal.voters[i]);
                else if(voteInfo[noProposal][proposal.voters[i]] == VOTE_NEUTRAL)
                    proposal.finalNoNeutral += tokenPAW.balanceOf(proposal.voters[i]);
            }

            if(proposal.finalNoVoteDown == proposal.finalNoVoteUp){
                proposal.finalResult = VOTE_NEUTRAL; // Neutral
            }else if(proposal.finalNoVoteDown > proposal.finalNoVoteUp){
                proposal.finalResult = VOTE_DOWN; // Fail
            }else{
                proposal.finalResult = VOTE_UP; // Success
            }
        }
    }

    function finalizeLastProposal() public {
        Proposal memory proposal = proposals[noProposal];
        require(proposal.endTime <= block.timestamp, "Last proposal hasnt completed yet, check end time");
        require(proposal.finalResult == 0, "Last proposal has been finallized");
        _finalize();
    }

    function propose(string memory _proposalName, string memory _proposalDetails, uint256 _startTime, uint256 _endTime) public {
        require(tokenPAW.totalSupply() * 2 / 1000  <= tokenPAW.balanceOf(msg.sender), "Not meet requirement to submit a proposal");
        require(proposals[noProposal].endTime <= block.timestamp, "Last campaign hasn't finished yet");
        require(_startTime >= block.timestamp && _startTime < block.timestamp + 1 days, "Start time must start within a day from now");
        require(_endTime > _startTime && _endTime < _startTime + 1 days, "Proposal must finish within 1 days after starting");

        // Finally the last one if it

        
         //hasn't been finallized yet
        _finalize();
        // New proposal
        noProposal                         += 1;
        proposals[noProposal].name         = _proposalName;
        proposals[noProposal].details      = _proposalDetails;
        proposals[noProposal].startTime    = _startTime;
        proposals[noProposal].endTime      = _endTime;
    }

    function setRequiredAmountForSubmitProposal(uint256 amount) public onlyOwner {
        requireAmountForProposal = amount;
    }

    function getStatusOfLastProposal() public view returns(uint256, uint256, uint256){
        uint256 voteUp;
        uint256 voteDown;
        uint256 voteNetral;

        Proposal memory proposal = proposals[noProposal];        
        for (uint256 i = 0; i < proposal.voters.length; i++) {
            if(voteInfo[noProposal][proposal.voters[i]] == VOTE_DOWN)
                voteDown += tokenPAW.balanceOf(proposal.voters[i]);
            else if(voteInfo[noProposal][proposal.voters[i]] == VOTE_UP)
                voteUp += tokenPAW.balanceOf(proposal.voters[i]);
            else if(voteInfo[noProposal][proposal.voters[i]] == VOTE_NEUTRAL)
                voteNetral += tokenPAW.balanceOf(proposal.voters[i]);
        }
        return (voteUp, voteDown, voteNetral);
    }

    function getCurrentVotingPower(address account) public view returns(uint256){
        return tokenPAW.balanceOf(account);
    }

    function getYourVote(uint proposalId, address account) public view returns(uint256){
        return voteInfo[proposalId][account];
    }

    function proposalInfo(uint proposalId) public view returns(string memory name, string memory details, uint256 start, uint256 end,
        address proposer, uint256 finalNoVoteDown, uint256 finalNoNeutral, uint256 finalNoVoteUp, uint256 finalResult
    ){
        Proposal memory ppl = proposals[proposalId];
        name = ppl.name;
        details = ppl.details;
        start = ppl.startTime;
        end = ppl.endTime;
        proposer = ppl.proposer;
        finalNoVoteDown = ppl.finalNoVoteDown;
        finalNoNeutral = ppl.finalNoNeutral;
        finalNoVoteUp = ppl.finalNoVoteUp;
        finalResult = ppl.finalResult;
    }

    function listVotersOf(uint proposalId) public view returns(address[] memory){
        return proposals[proposalId].voters;
    }
}