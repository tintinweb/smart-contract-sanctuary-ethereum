        require(_exists(tokenId), "ERC721URIStorage: URI query for nonexistent token");

        // If there is no base URI, return the token URI.
        if (bytes(baseURI).length == 0) {
            return "";
        }

        uint256 packId = userInfos[tokenId].packId;
        uint8 standard = packs[packId].standard;  

        return string(abi.encodePacked(baseURI, uint2str(uint256(standard)), ".mp4"));
    }

    /**
    * Returns the latest price.
    */
    function getLatestPrice(address token) public view returns (int) {
        require(allowedToken[token], "This token is not set");

        // prettier-ignore
        (
            /* uint80 roundID */,
            int price,
            /*uint startedAt*/,
            /*uint timeStamp*/,
            /*uint80 answeredInRound*/
        ) = priceFeeds[token].latestRoundData();
        return price;
    }

    function getAggregatorDecimals(address token) public view returns (uint8) {
        require(allowedToken[token], "This token is not set");

        return priceFeeds[token].decimals();
    }

    function setPacks(PassPackInfo[] memory _packs) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(_packs.length > 0, "invalid provided packs");

        emit SetPacks(currentPackId + 1, currentPackId + _packs.length);
        
        for(uint8 i = 0; i < _packs.length; i++) {
            currentPackId++;
            packs[currentPackId] = PassPackInfo({
                price : _packs[i].price,
                standard : _packs[i].standard,
                chances : _packs[i].chances,
                hasFee : _packs[i].hasFee,
                discount: _packs[i].discount
            });
        }
    }

    function updatePacks(uint256 packId, PassPackInfo memory newPackConfiguration) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(packId > 0 && packId <= currentPackId, "Invalid provided packId");

        packs[packId] = PassPackInfo({
            price : newPackConfiguration.price,
            standard : newPackConfiguration.standard,
            chances : newPackConfiguration.chances,
            hasFee : newPackConfiguration.hasFee,
            discount: newPackConfiguration.discount
        });
    }

    function registMembership(
        uint256 packId, 
        SubscriptionMethod subscription,
        address paymentToken
    ) external payable {
        require(packId <= currentPackId, "Invalid provided packId");
        require(paymentToken == address(stableCoin) 
            || allowedToken[paymentToken], "Invalid payment method");
        
        _payment(packId, subscription,paymentToken);

        currentTokenId++;
        _mint(_msgSender(), currentTokenId);

        userInfos[currentTokenId] = UserPassInfo({
            packId: packId,
            subscription: subscription,
            usedTimes: 0
        });

        emit RegistMembership(packId, currentTokenId);
    }

    function extendMembership(
        uint256 tokenId, 
        SubscriptionMethod subscription, 
        address paymentToken
    ) external payable {
        require(ownerOf(tokenId) == _msgSender(), "Invalid owner");
        require(tokenId <= currentTokenId, "Invalid provided packId");

        _payment(userInfos[tokenId].packId, subscription, paymentToken);

        userInfos[tokenId].usedTimes = 0;

        emit ExtendMembership(tokenId);
    }

    function _payment(
        uint256 packId, 
        SubscriptionMethod subscription, 
        address paymentToken
    ) internal {
        PassPackInfo memory pack = packs[packId];

        uint256 requiredAmount = pack.price;
        if(subscription == SubscriptionMethod.YEARLY) {
            requiredAmount = FullMath.mulDiv(
                requiredAmount * 12, 
                PRECISION_FACTOR - pack.discount, 
                PRECISION_FACTOR
            );
        }

        if(paymentToken != address(stableCoin)) {
            (
                /* uint80 roundID */,
                int stablePrice,
                /*uint startedAt*/,
                /*uint timeStamp*/,
                /*uint80 answeredInRound*/
            ) = stableCoinUSDFeed.latestRoundData();
            stablePrice = scalePrice(stablePrice, stableCoinUSDFeed.decimals(), PRICE_FEED_DECIMALS);

            (
                /* uint80 roundID */,
                int paymentPrice,
                /*uint startedAt*/,
                /*uint timeStamp*/,
                /*uint80 answeredInRound*/
            ) = priceFeeds[paymentToken].latestRoundData();
            paymentPrice = scalePrice(paymentPrice, priceFeeds[paymentToken].decimals(), PRICE_FEED_DECIMALS);

            // _amount is already in wei unit, so no need to convert it
            requiredAmount = FullMath.mulDiv(requiredAmount, uint256(stablePrice), uint256(paymentPrice));
        }

        if(paymentToken == address(0)) {
            require(msg.value >= requiredAmount, "Insufficient fund");
        }
        else {
            require(msg.value == 0, "Redundant transfered assets");

            uint256 prevBalance = ERC20(paymentToken).balanceOf(address(this));
            ERC20(paymentToken).safeTransferFrom(_msgSender(), address(this), requiredAmount);
            uint256 afterBalance = ERC20(paymentToken).balanceOf(address(this));
            
            require(afterBalance - prevBalance >= requiredAmount, "Insufficient fund");
        }
    }

    function onParticipateEvent(uint256 tokenId) external onlyRole(NFT_PASS_CONSUMMER) {
        require(tokenId <= currentTokenId, "Invalid provided packId");

        PassPackInfo memory pack = packs[userInfos[tokenId].packId];
        require(userInfos[tokenId].usedTimes < pack.chances, "Exceed allowance times");

        userInfos[tokenId].usedTimes++;

        emit NFTPassUsed(tokenId);
    }

    function changeStableCoin(address tokenAddr) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(address(stableCoin) != tokenAddr, "Nothing will be changed");
         require(address(0) != tokenAddr, "Invalid provided statble coin");

        emit ChangeStableCoin(tokenAddr, address(stableCoin));

        stableCoin = ERC20(tokenAddr);
    }

    function changeStableCoinFeed(address stableCoinFeedAggr) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(address(stableCoinUSDFeed) != stableCoinFeedAggr, "Nothing will be changed");
         require(address(0) != stableCoinFeedAggr, "Invalid provided statble coin");

        emit ChangeStableCoinFeed(stableCoinFeedAggr, address(stableCoinUSDFeed));

        stableCoinUSDFeed = AggregatorV3Interface(stableCoinFeedAggr);
    }

    function setPriceFeed(address token, address aggregator) public onlyRole(DEFAULT_ADMIN_ROLE) {
        if(!allowedToken[token]) {
            allowedToken[token] = true;
        }
        priceFeeds[token] = AggregatorV3Interface(aggregator);

        emit SetPriceFeed(token, aggregator);
    }

    function removePriceFeed(address token) public onlyRole(DEFAULT_ADMIN_ROLE) {
        require(allowedToken[token], "This token is not set");
        
        delete allowedToken[token];
        delete priceFeeds[token];

        emit RemovePriceFeed(token);
    }

    function setConsummer(address consummer) external onlyRole(DEFAULT_ADMIN_ROLE) {
        grantRole(NFT_PASS_CONSUMMER, consummer);
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC721, AccessControl) returns (bool) {
        return interfaceId == type(IAccessControl).interfaceId || 
            interfaceId == type(IERC721).interfaceId ||
            interfaceId == type(IERC721Metadata).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    function claimFee(address _tokenAddress) external onlyRole(DEFAULT_ADMIN_ROLE) {
        if(_tokenAddress == address(0)) {
            uint256 balanceToRecover = address(this).balance;
            require(balanceToRecover > 0, "Operations: Balance must be > 0");
            payable(_msgSender()).transfer(balanceToRecover);
        }
        else {
            uint256 balanceToRecover = ERC20(_tokenAddress).balanceOf(
                address(this)
            );
            require(balanceToRecover > 0, "Operations: Balance must be > 0");
            ERC20(_tokenAddress).safeTransfer(
                _msgSender(),
                balanceToRecover
            );
        }
    }

    function scalePrice(
        int256 _price,
        uint8 _priceDecimals,
        uint8 _decimals
    ) internal pure returns (int256) {
        if (_priceDecimals < _decimals) {
            return _price * int256(10 ** uint256(_decimals - _priceDecimals));
        } else if (_priceDecimals > _decimals) {
            return _price / int256(10 ** uint256(_priceDecimals - _decimals));
        }
        return _price;
    }

    receive() external payable {}

    fallback() external payable {}
}

