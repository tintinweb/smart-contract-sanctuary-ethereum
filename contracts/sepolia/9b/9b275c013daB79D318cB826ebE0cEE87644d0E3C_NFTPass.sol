contract NFTPass is ERC721, AccessControl {
    using SafeERC20 for ERC20;

    enum SubscriptionMethod {
        MONTHLY,
        YEARLY
    }

    struct PassPackInfo {
        uint256 price;
        uint8 standard;
        uint64 chances;
        bool hasFee; 
        uint256 discount;
    }

    struct UserPassInfo {
        uint256 packId;
        SubscriptionMethod subscription;
        uint64 usedTimes;
    }

    uint256 public constant PRECISION_FACTOR = 1e24;
    /// @notice General denomination for different prices
    uint8 public constant PRICE_FEED_DECIMALS = 24;
    /// @notice allow to updating user nft-pass's chances everytime user participate in an event
    bytes32 public constant NFT_PASS_CONSUMMER = keccak256("NFT_PASS_CONSUMMER");
    bytes32 private constant base32Alphabet = 0x6162636465666768696A6B6C6D6E6F707172737475767778797A323334353637;

    /// @notice ERC20: USDT
    ERC20 public stableCoin;
    /// @notice aggregator for fetching stableCoin-usd price
    AggregatorV3Interface public stableCoinUSDFeed;

    uint256 public currentPackId;
    uint256 public currentTokenId;
    address public consummers;

    // Base URI
    string private baseURI;

    /// @notice token => aggregator to fetch price (Base(X) / USD)
    /// @dev token == address(0) => Fetching ETHUSD price
    mapping(address => AggregatorV3Interface) public priceFeeds;
    /// @notice token => allowed to payment
    mapping(address => bool) public allowedToken;
    /// @notice packId => Pack Info
    mapping(uint256 => PassPackInfo) public packs;
    /// @notice nftId => User NFT Info
    mapping(uint256 => UserPassInfo) public userInfos;

    event SetPacks(uint256 indexed fromPackId, uint256 indexed toPackId);
    event UpdatePack(uint256 packId);
    event RegistMembership(uint256 indexed packId, uint256 indexed tokenId);
    event ExtendMembership(uint256 indexed tokenId);
    event NFTPassUsed(uint256 indexed tokenId);
    event ChangeStableCoin(address indexed newToken, address indexed oldToken);
    event ChangeStableCoinFeed(address indexed newFeed, address indexed oldFeed);
    event SetPriceFeed(address indexed token, address indexed aggregator);
    event RemovePriceFeed(address indexed token);

    constructor(
        address[] memory tokens, 
        address[] memory aggregators,
        address tokenAddr,
        address stableCoinUSDProxy,
        bytes32 hash
    ) ERC721("Capshort Pass", "CSPASS") 
    {
        require(tokens.length == aggregators.length, "Incorrect length");

        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());

        if(tokens.length > 0) {
            for(uint8 i = 0; i < tokens.length; i++) {
                setPriceFeed(tokens[i], aggregators[i]);
            }
        }
        stableCoin = ERC20(tokenAddr);
        stableCoinUSDFeed = AggregatorV3Interface(stableCoinUSDProxy);

        _setBaseURI(hash);
    }

    function updateBaseURI(bytes32 hash) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _setBaseURI(hash);
    }

    /**
     * @dev Internal function to set the base URI for all token IDs. It is
     * automatically added as a prefix to the value returned in {tokenURI},
     * or to the token ID if {tokenURI} is empty.
     */
    function _setBaseURI(bytes32 hash) internal virtual {
        baseURI = string(abi.encodePacked("ipfs://","bafybei", hash2base32(hash), "/"));
    }

    // solium-disable-next-line security/no-assign-params
    function hash2base32(bytes32 hash) public pure returns (string memory _uintAsString) {
        uint256 _i = uint256(hash);
        uint256 k = 52;
        bytes memory bstr = new bytes(k);
        bstr[--k] = base32Alphabet[uint8((_i % 8) << 2)]; // uint8 s = uint8((256 - skip) % 5);  // (_i % (2**s)) << (5-s)
        _i /= 8;
