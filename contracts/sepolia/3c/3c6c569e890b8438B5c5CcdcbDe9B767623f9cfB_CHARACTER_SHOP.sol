    /*╔══════════════════════════════╗
      ║       AUCTION CREATION       ║
      ╚══════════════════════════════╝*/
    /**
     * Setup parameters applicable to all auctions and whitelised sales:
     * -> minimum price : _minPrice
     * -> buy now price : _buyNowPrice
     * -> the nft seller: msg.sender
     */
    function _setupAuction(
        uint256 _smallSaleId,
        address _nftContractAddress,
        uint256 _tokenId,
        string memory _tokenURI,
        uint256 _auctionStart,
        uint256 _auctionEnd
    ) internal {
        SmallSale memory smallSale = smallSales[_smallSaleId];
        if (smallSale.saleType == SaleType.BuyNow) {
            nftContractAuctions[_nftContractAddress][_tokenId]
                .buyNowPrice = smallSale.price;
            nftContractAuctions[_nftContractAddress][_tokenId].minPrice = 0;
            nftContractAuctions[_nftContractAddress][_tokenId]
                .bidIncreaseAmount = 0;
        } else if (smallSale.saleType == SaleType.EnglishAuction) {
            nftContractAuctions[_nftContractAddress][_tokenId].buyNowPrice = 0;
            nftContractAuctions[_nftContractAddress][_tokenId]
                .minPrice = smallSale.price;
            nftContractAuctions[_nftContractAddress][_tokenId]
                .bidIncreaseAmount = _getBidIncreaseAmount(
                _nftContractAddress,
                _tokenId
            );
        } else {
            // ZeroPriceSale
            nftContractAuctions[_nftContractAddress][_tokenId].buyNowPrice = 0;
            nftContractAuctions[_nftContractAddress][_tokenId].minPrice = 0;
            nftContractAuctions[_nftContractAddress][_tokenId]
                .bidIncreaseAmount = 0;
        }

        nftContractAuctions[_nftContractAddress][_tokenId].tokenURI = _tokenURI;
        nftContractAuctions[_nftContractAddress][_tokenId]
            .allowListRoot = smallSale.allowListRoot;
        nftContractAuctions[_nftContractAddress][_tokenId].sold = false;

        nftContractAuctions[_nftContractAddress][_tokenId]
            .startAt = _auctionStart;
        nftContractAuctions[_nftContractAddress][_tokenId]
            .auctionEnd = _auctionEnd;

        nftContractAuctions[_nftContractAddress][_tokenId]
            .smallSaleId = _smallSaleId;

        emit AuctionCreated(
            _nftContractAddress,
            _tokenId,
            smallSale.saleType,
            smallSale.price,
            _auctionStart,
            _auctionEnd,
            nftContractAuctions[_nftContractAddress][_tokenId].bidIncreaseAmount
        );
    }

    function _createNewNftAuction(
        uint256 _smallSaleId,
        address _nftContractAddress,
        uint256 _tokenId,
        string memory _tokenURI,
        uint256 _auctionStart,
        uint256 _auctionEnd
    ) internal {
        require(
            nftContractAuctions[_nftContractAddress][_tokenId]
                .nftHighestBidder == address(0),
            "Auction already has highest bidder"
        );
        _setupAuction(
            _smallSaleId,
            _nftContractAddress,
            _tokenId,
            _tokenURI,
            _auctionStart,
            _auctionEnd
        );
    }

    /**
     * Create an auction that uses the default bid increase percentage
     * & the default auction bid period.
     */
    function createDefaultNftAuction(
        uint256 _smallSaleId,
        address _nftContractAddress,
        uint256 _tokenId,
        string memory _tokenURI
    ) external onlyOwner whenNotPaused smallSaleExist(_smallSaleId) {
        try CHARACTER_V1(_nftContractAddress).ownerOf(_tokenId) returns (
            address
        ) {
            revert("Token is minted");
        } catch (bytes memory) {
            _createNewNftAuction(
                _smallSaleId,
                _nftContractAddress,
                _tokenId,
                _tokenURI,
                block.timestamp,
                block.timestamp + defaultAuctionBidPeriod
            );
        }
    }

    function createNewNftAuction(
        uint256 _smallSaleId,
        address _nftContractAddress,
        uint256 _auctionStart,
        uint256 _auctionEnd,
        uint128 _bidIncreaseAmount,
        uint256[] memory _tokenIds,
        string[] memory _tokenURIs
    ) external onlyOwner whenNotPaused smallSaleExist(_smallSaleId) {
        uint256 length = _tokenIds.length;
        require(
            block.timestamp < _auctionEnd,
            "Auction end is less than current timestamp"
        );
        require(
            _auctionStart < _auctionEnd,
            "Auction end is less than auction start"
        );
        require(
            length == _tokenURIs.length,
            "TokenIds Length and _tokenURIs length are not matched"
        );
        for (uint16 i; i < length; i++) {
            try
                CHARACTER_V1(_nftContractAddress).ownerOf(_tokenIds[i])
            returns (address) {
                revert("Token is minted");
            } catch (bytes memory) {
                nftContractAuctions[_nftContractAddress][_tokenIds[i]]
                    .bidIncreaseAmount = _bidIncreaseAmount;
                _createNewNftAuction(
                    _smallSaleId,
                    _nftContractAddress,
                    _tokenIds[i],
                    _tokenURIs[i],
                    _auctionStart,
                    _auctionEnd
                );
            }
        }
    }

    function getAunctionData(
        address _nftContractAddress,
        uint256 _tokenId
    ) public view returns (Auction memory) {
        Auction memory res = nftContractAuctions[_nftContractAddress][_tokenId];
        return res;
    }

