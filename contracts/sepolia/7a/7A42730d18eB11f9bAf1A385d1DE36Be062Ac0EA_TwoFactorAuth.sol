pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/Strings.sol";
import "@chainlink/contracts/src/v0.8/VRFV2WrapperConsumerBase.sol";

contract TwoFactorAuth is VRFV2WrapperConsumerBase {
    using Strings for *;
    address constant linkAddress = 0x779877A7B0D9E8603169DdbD7836e478b4624789;
    address constant vrfWrapperAddress =
        0xab18414CD93297B0d12ac29E63Ca20f515b3DB46;
    uint32 constant callbackGasLimit = 1_000_000;
    uint32 constant numWords = 1;
    uint16 constant requestConfirmations = 3;
    uint128 constant entryFee = 0.0001 ether;

    event GenerateOTP(address indexed user, uint256 requestId);
    event VerifyOTP(address indexed user, bool isValid);

    struct Status {
        uint256 fee;
        string randomWord;
        address user;
        bool fullfilled;
        uint timestamp;
        bool verified;
    }

    mapping(uint256 => Status) public statuses;

    constructor()
        payable
        VRFV2WrapperConsumerBase(linkAddress, vrfWrapperAddress)
    {}

    modifier onlyValidOTPOwner(uint256 _requestId) {
        require(statuses[_requestId].user == msg.sender, "Not your OTP");
        _;
    }

    function generateOTP() external payable returns (uint256) {
        require(msg.value >= entryFee, "Insufficient funds");
        uint256 requestId = requestRandomness(
            callbackGasLimit,
            requestConfirmations,
            numWords
        );

        statuses[requestId] = Status({
            fee: VRF_V2_WRAPPER.calculateRequestPrice(callbackGasLimit),
            randomWord: "0",
            timestamp: block.timestamp,
            verified: false,
            user: msg.sender,
            fullfilled: false
        });

        emit GenerateOTP(msg.sender, requestId);
        return requestId;
    }

    function verifyOTP(
        uint256 _requestId,
        uint256 _verifyWords
    ) external onlyValidOTPOwner(_requestId) returns (bool) {
        require(statuses[_requestId].fee > 0, "Request ID does not exist");
        require(
            statuses[_requestId].timestamp + 5 minutes > block.timestamp,
            "OTP expired"
        );
        require(!statuses[_requestId].verified, "OTP already verified");

        if (
            compareString(
                statuses[_requestId].randomWord,
                _verifyWords.toString()
            )
        ) {
            statuses[_requestId].verified = true;
            emit VerifyOTP(msg.sender, true);
            return true;
        }

        emit VerifyOTP(msg.sender, false);
        return false;
    }

    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        require(statuses[_requestId].fee > 0, "Request ID does not exist");

        statuses[_requestId].fullfilled = true;
        uint256 sixDigitOTP = _randomWords[0] % 1000000;
        string memory sixDigitOTPString = sixDigitOTP.toString();

        while (bytes(sixDigitOTPString).length < 6) {
            sixDigitOTPString = string(abi.encodePacked("0", sixDigitOTPString));
        }
        statuses[_requestId].randomWord = _randomWords[0].toString();
        statuses[_requestId].randomWord = sixDigitOTPString;
    }

    function getStatus(
        uint256 _requestId
    ) external view returns (Status memory) {
        return statuses[_requestId];
    }

    function compareString(
        string memory a,
        string memory b
    ) internal pure returns (bool) {
        return (keccak256(abi.encodePacked((a))) ==
            keccak256(abi.encodePacked((b))));
    }
}

