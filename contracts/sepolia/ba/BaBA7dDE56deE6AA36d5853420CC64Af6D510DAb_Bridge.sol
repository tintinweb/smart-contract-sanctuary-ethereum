/**
 * @title Bridge
 * @dev Bank contract which coordinates asset-related functionality.
 *      BscBank manages the locking and unlocking of BNB/BEP20 token assets
 *      based on Bsc.
 **/

contract Bridge is
    BscBank,
    OwnableUpgradeable,
    Validator,
    ReentrancyGuardUpgradeable,
    EIP712Upgradeable,
    PausableUpgradeable
{
    using SafeERC20 for BridgeToken;
    uint256 public constant BONE = 1e4;
    bytes32 public constant MINT_HASH =
        keccak256("MINT(address _recipient,address _tokenAddress,uint256 _amount,bytes32 _interchainTX)");
    //    bytes32 public constant MINT_HASH = keccak256("MINT(address _recipient,address _tokenAddress,string _symbol)");
    //EMERGENCY_WITHDRAW(address _tokenAddress,uint256 _amount)
    bytes32 public constant EMERGENCY_WITHDRAW_HASH =
        keccak256("EMERGENCY_WITHDRAW(address _tokenAddress,uint256 _amount)");
    //REFUND(address _recipient,address _tokenAddress,string _symbol,uint256 _amount,uint256 _nonce)
    bytes32 public constant REFUND_HASH =
        keccak256("REFUND(address _recipient,address _tokenAddress,uint256 _amount,uint256 _nonce)");
    bytes32 public constant BURN_HASH =
        keccak256(
            "BURN(address _recipient,address _token,uint256 _amount,string _chainName,uint256 _fee,uint256 _deadline,uint256 _nonce)"
        );

    address public operator; // we dont using this variable but we cannot remove it to avoid collision storage errors.
    address public timeLockContract;
    address public feeReceiver;
    uint256 public bridgeFee;
    mapping(address => bool) public excludeFee;
    mapping(address => bool) public operators;
    mapping(address => uint256) public nonces;

    /*
     * @dev: Constructor, sets operator
     */
    function initialize(
        address _operatorAddress,
        address _timeLockAddress,
        address _validator,
        string memory _name,
        string memory _version,
        uint256 _defaultFee,
        address _feeReceiver,
        uint256 _threshold
    ) public initializer {
        operator = _operatorAddress;
        operators[_operatorAddress] = true;
        timeLockContract = _timeLockAddress;
        addValidator(_validator);
        bridgeFee = _defaultFee;
        feeReceiver = _feeReceiver;
        threshold = _threshold;
        __ReentrancyGuard_init();
        __Ownable_init();
        __EIP712_init(_name, _version);
        __Pausable_init();
    }

    /*
     * @dev: Modifier to restrict access to operator
     */
    modifier onlyOperator() {
        require(operators[msg.sender], "Must be operator.");
        _;
    }

    /*
     * @dev: Modifier to restrict state change to timeLock smart contract
     */
    modifier isTimeLock() {
        require(msg.sender == timeLockContract, "Must be timeLock");
        _;
    }

    /*
     * @dev: Change to new Operator
     *
     */
    event AddOperator(address _newOperator);
    event RemoveOperator(address _operator);
    //    event ChangeBurnAddress(address _burnAddress);
    event ChangeBridgeFee(uint256 fee);
    event ExcludeBridgeFee(address user);
    event IncludeBridgeFee(address user);

    function addOperator(address _newOperator) public isTimeLock {
        require(_newOperator != address(0), "null address");
        operators[_newOperator] = true;
        emit AddOperator(_newOperator);
    }

    function removeOperator(address _operator) public isTimeLock {
        require(_operator != address(0), "null address");
        operators[_operator] = false;
        emit RemoveOperator(_operator);
    }

    function changeBridgeFee(uint256 _fee) public isTimeLock {
        bridgeFee = _fee;
        emit ChangeBridgeFee(_fee);
    }

    function excludeFromBridgeFee(address _user) public isTimeLock {
        excludeFee[_user] = true;
        emit ExcludeBridgeFee(_user);
    }

    function includeFromBridgeFee(address _user) public isTimeLock {
        excludeFee[_user] = false;
        emit IncludeBridgeFee(_user);
    }

    /*
     * @dev: Add validator
     *
     */
    function addValidator(address _newValidator) public isTimeLock {
        _addValidator(_newValidator);
    }

    /*
     * @dev: Remove validator
     *
     */
    function removeValidator(address _validator) public isTimeLock {
        _removeValidator(_validator);
    }

    function pauseContract() public isTimeLock {
        _pause();
    }

    function unPauseContract() public isTimeLock {
        _unpause();
    }

    /*
     * @dev: Fallback/receive function allows anyone to send funds to the bank directly
     *
     */

    fallback() external payable {}

    // receive() external payable {}

    function factory() public view returns (address) {
        return address(0);
    }

    function _getSigner(bytes32 _digest, bytes memory _signature) public view returns (address) {
        return ECDSA.recover(_digest, _signature);
    }

    function getMintHash(
        address payable _recipient,
        address _tokenAddress,
        uint256 _amount,
        bytes32 _interchainTX
    ) public view returns (bytes32 hash) {
        hash = _hashTypedDataV4(keccak256(abi.encode(MINT_HASH, _recipient, _tokenAddress, _amount, _interchainTX)));
    }

    function getBurnHash(
        address _recipient,
        address _token,
        uint256 _amount,
        string memory _chainName,
        uint256 _fee,
        uint256 _deadline,
        uint256 _nonce
    ) public view returns (bytes32 hash) {
        hash = _hashTypedDataV4(
            keccak256(
                abi.encode(
                    BURN_HASH,
                    _recipient,
                    _token,
                    _amount,
                    keccak256(abi.encodePacked(_chainName)),
                    _fee,
                    _deadline,
                    _nonce
                )
            )
        );
    }

    function getWithdrawHash(address _tokenAddress, uint256 _amount) public view returns (bytes32 hash) {
        hash = _hashTypedDataV4(keccak256(abi.encode(EMERGENCY_WITHDRAW_HASH, _tokenAddress, _amount)));
    }

    function getRefundHash(
        address payable _recipient,
        address _tokenAddress,
        uint256 _amount,
        uint256 _nonce
    ) public view returns (bytes32 hash) {
        hash = _hashTypedDataV4(keccak256(abi.encode(REFUND_HASH, _recipient, _tokenAddress, _amount, _nonce)));
    }

    function getBridgeFee(address _user) public view returns (uint256) {
        if (excludeFee[_user]) {
            return 0;
        }
        return bridgeFee;
    }

    function validateInputData(
        address sender,
        address signer,
        uint256 nonce,
        uint256 deadline
    ) public view returns (bool) {
        if (!operators[signer]) {
            return false;
        }
        if (deadline < block.timestamp) {
            return false;
        }
        if (nonces[sender] + 1 != nonce) {
            return false;
        }
        return true;
    }

    function getNextNonce(address user) public view returns (uint256) {
        return nonces[user] + 1;
    }

    /*
     * @dev: Burn received BNB/BEP20 funds.
     *
     * @param _recipient: representation of destination address.
     * @param _token: token address in origin chain (0x0 if ethereum)
     * @param _amount: value of deposit
     */

    function burn(
        address _recipient,
        address _token,
        uint256 _amount,
        string memory _chainName,
        //        uint256 _fromNetwork,
        uint256 _fee,
        uint256 _deadline,
        uint256 _nonce,
        bytes memory _signature
    ) public payable nonReentrant whenNotPaused {
        require(_recipient == msg.sender, "Invalid recipient");
        bytes32 hash = getBurnHash(_recipient, _token, _amount, _chainName, _fee, _deadline, _nonce);
        address signer = _getSigner(hash, _signature);
        require(validateInputData(msg.sender, signer, _nonce, _deadline), "Invalid");
        nonces[msg.sender]++;
        string memory symbol;
        require(msg.value == _fee, "Invalid fee amount");
        if (_fee > 0) {
            payable(feeReceiver).transfer(_fee);
        }

        BridgeToken(_token).safeTransferFrom(msg.sender, address(this), _amount);
        BridgeToken(_token).burn(_amount);
        symbol = BridgeToken(_token).symbol();
        burnFunds(payable(msg.sender), _recipient, _token, symbol, _amount, _chainName);
    }

    /*
     * @dev: Unlocks BNB and BEP20 tokens held on the contract.
     *
     * @param _recipient: recipient's is an bsc address
     * @param _token: token contract address
     * @param _symbol: token symbol
     * @param _amount: wei amount or BEP20 token count
     *
     * This functions is use for unlock IBC assets
     * - Operator send the
     */
    function mint(
        address payable _recipient,
        address _tokenAddress,
        uint256 _amount,
        bytes32 _interchainTX,
        bytes[] memory _signatures
    ) public onlyOperator nonReentrant whenNotPaused {
        require(isValidThreshold(_signatures.length), "Signature: Invalid Length");
        bytes32 hash = getMintHash(_recipient, _tokenAddress, _amount, _interchainTX);
        address[1000] memory listValidatorsSigned;
        for (uint256 i = 0; i < _signatures.length; i++) {
            bytes memory _signature = _signatures[i];
            address signer = _getSigner(hash, _signature);
            require(isValidator(signer), "Invalid signature");
            for (uint256 j = 0; j < listValidatorsSigned.length; j++) {
                if (listValidatorsSigned[j] == signer) {
                    require(false, "Invalid Signature Length");
                }
            }
            listValidatorsSigned[i] = signer;
        }

        require(unlockCompleted[_interchainTX].isUnlocked == false, "Processed before");
        address burnAddress = BridgeToken(_tokenAddress).bridgeBurnAddress();
        require(BridgeToken(_tokenAddress).balanceOf(burnAddress) >= _amount, "Insufficient ERC20 balance.");

        mintFunds(_recipient, payable(feeReceiver), _tokenAddress, _amount, 0, _interchainTX);
    }

    function emergencyWithdraw(address _tokenAddress, uint256 _amount) public onlyOperator nonReentrant {
        // Check if it is BNB
        if (_tokenAddress == address(0)) {
            require(address(this).balance >= _amount, "Insufficient balance.");
            payable(msg.sender).transfer(_amount);
        } else {
            require(BridgeToken(_tokenAddress).balanceOf(address(this)) >= _amount, "Insufficient ERC20 balance.");
            BridgeToken(_tokenAddress).safeTransfer(payable(owner()), _amount);
        }
    }

    /*
     * @dev: Refund BNB and BEP20 tokens held on the contract.
     *
     * @param _recipient: recipient's is an bsc address
     * @param _token: token contract address
     * @param _symbol: token symbol
     * @param _amount: wei amount or BEP20 token count
     */
    function refund(
        address payable _recipient,
        address _tokenAddress,
        uint256 _amount,
        uint256 _nonce,
        bytes[] memory _signatures
    ) public onlyOperator nonReentrant whenNotPaused {
        require(isValidThreshold(_signatures.length), "Signature: Invalid Length");
        bytes32 hash = getRefundHash(_recipient, _tokenAddress, _amount, _nonce);
        address[1000] memory listValidatorsSigned;
        for (uint256 i = 0; i < _signatures.length; i++) {
            bytes memory _signature = _signatures[i];
            address signer = _getSigner(hash, _signature);
            require(isValidator(signer), "Invalid signature");
            for (uint256 j = 0; j < listValidatorsSigned.length; j++) {
                if (listValidatorsSigned[j] == signer) {
                    require(false, "Invalid Signature Length");
                }
            }
            listValidatorsSigned[i] = signer;
        }
        require(refundCompleted[_nonce].isRefunded == false, "Processed before");
        require(refundCompleted[_nonce].tokenAddress == _tokenAddress, "Invalid tokenAddress");
        require(refundCompleted[_nonce].sender == _recipient, "Invalid recipient");
        require(refundCompleted[_nonce].amount == _amount, "Invalid amount");
        address burnAddress = BridgeToken(_tokenAddress).bridgeBurnAddress();
        require(BridgeToken(_tokenAddress).balanceOf(burnAddress) >= _amount, "Insufficient ERC20 for delivery.");
        refunds(_recipient, _tokenAddress, _amount, _nonce);
    }

    /*
     * @dev: For validators to get the lock data in order to verify
     *       if it is correct data that they need to verify with signature
     *
     * @param _recipient: Nonce Number
     * @return lockData
     */
    function getLockData(uint256 _nonce)
        public
        view
        returns (
            bool,
            uint256,
            address,
            address,
            uint256,
            string memory
        )
    {
        return _getLockData(_nonce);
    }

    // This function check the mapping to see if the transaction  is unlockeds
    function checkIsUnlocked(bytes32 _interchainTX) public view returns (bool) {
        return unlockCompleted[_interchainTX].isUnlocked;
    }
}

