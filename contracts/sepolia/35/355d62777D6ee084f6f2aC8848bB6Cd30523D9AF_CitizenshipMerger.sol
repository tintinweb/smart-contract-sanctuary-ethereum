pragma solidity ^0.8.20;

import "./ICitizenship.sol";
import "@openzeppelin/contracts/utils/cryptography/EIP712.sol";

/**
 * @title 2117 Citizenship Merger v1.0
 * @author DeployLabs.io
 *
 * @notice This contract is used to merge multiple 2117 Citizenship tokens into single tokens of higher levels.
 */
contract CitizenshipMerger is EIP712("Citizenship Merger", "1.0") {
	/**
	 * @dev Struct representing a merge request.
	 * @param wallet The wallet address of the user requesting the merge.
	 * @param walletRequestsCount The number of merge requests made by the wallet.
	 * @param primaryTokenId The ID of the token to be kept and upgraded.
	 * @param secondaryTokenId The ID of the token to be burned.
	 * @param resultingTokenType The type of token that will be created as a result of the merge (decoded on the backend).
	 */
	struct MergeRequest {
		address wallet;
		uint32 walletRequestsCount;
		uint32 primaryTokenId;
		uint32 secondaryTokenId;
		bytes1 resultingTokenType;
	}

	address private immutable i_trustedSigner;
	ICitizenship private immutable i_citizenship;

	mapping(address => uint16) s_walletRequestsCount;

	event MergeRequestProcessed(MergeRequest mergeRequest);

	error CitizenshipMerger__UntrustedSigner();
	error CitizenshipMerger__Unauthorized();
	error CitizenshipMerger__RequestNoLongerValid();
	error CitizenshipMerger__DoesNotOwnTokens();

	constructor(address trustedSigner, ICitizenship citizenship) {
		i_trustedSigner = trustedSigner;
		i_citizenship = citizenship;
	}

	/**
	 * @notice Merges two citizenship tokens into a single token of a higher level and a new type.
	 * @dev The primary token is the one that will be kept and upgraded. The secondary token will be burned.
	 *
	 * @param mergeRequest The merge request.
	 * @param signature The signature of the merge request.
	 */
	function merge(MergeRequest calldata mergeRequest, bytes calldata signature) external {
		address requestSigner = _getMergeRequestSigner(mergeRequest, signature);
		if (requestSigner != i_trustedSigner) revert CitizenshipMerger__UntrustedSigner();

		if (mergeRequest.wallet != msg.sender) revert CitizenshipMerger__Unauthorized();
		if (mergeRequest.walletRequestsCount != s_walletRequestsCount[mergeRequest.wallet])
			revert CitizenshipMerger__RequestNoLongerValid();

		bool ownsBothTokens = i_citizenship.ownerOf(mergeRequest.primaryTokenId) ==
			mergeRequest.wallet &&
			i_citizenship.ownerOf(mergeRequest.secondaryTokenId) == mergeRequest.wallet;
		if (!ownsBothTokens) revert CitizenshipMerger__DoesNotOwnTokens();

		s_walletRequestsCount[mergeRequest.wallet]++;

		uint256[] memory tokensToBurn = new uint256[](1);
		tokensToBurn[0] = mergeRequest.secondaryTokenId;
		i_citizenship.burnTokenBatchByTrustedAdmin(tokensToBurn);

		emit MergeRequestProcessed(mergeRequest);
	}

	/**
	 * @notice Returns the number of merge requests made by a wallet.
	 * @dev Used to prevent replay attacks.
	 *
	 * @param wallet The wallet address.
	 *
	 * @return The number of merge requests made by the wallet.
	 */
	function getWalletRequestsCount(address wallet) external view returns (uint16) {
		return s_walletRequestsCount[wallet];
	}

	function _getMergeRequestSigner(
		MergeRequest calldata mergeRequest,
		bytes calldata signature
	) internal view returns (address) {
		bytes32 digest = _hashTypedDataV4(
			keccak256(
				abi.encode(
					keccak256(
						"MergeRequest(address wallet,uint32 walletRequestsCount,uint32 primaryTokenId,uint32 secondaryTokenId,bytes1 resultingTokenType)"
					),
					mergeRequest.wallet,
					mergeRequest.walletRequestsCount,
					mergeRequest.primaryTokenId,
					mergeRequest.secondaryTokenId,
					mergeRequest.resultingTokenType
				)
			)
		);

		return ECDSA.recover(digest, signature);
	}
}

