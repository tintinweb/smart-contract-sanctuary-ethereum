contract NFTLinker is Ownable {
    uint256 private constant decimals = 10**6;
    uint256 private constant rewardPeriod = 300;
    address private constant backendAddress = 0x03dD4Fe026714eEc7b0B23Af87f85c82E06055f0;

    struct NFTLink {
        uint256 nft1Id;
        uint256 nft2Id;
        uint256 dailyReward;
        uint256 claimTimestamp;
    }

