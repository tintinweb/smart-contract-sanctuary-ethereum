        uint256 totalRewards = 0;
        for (uint256 i = 0; i < ownersLinks[userAddress].length; i++) {
            if (block.timestamp > nftLinks[ownersLinks[userAddress][i]].claimTimestamp) {
                uint256 daysPassed = (block.timestamp - nftLinks[ownersLinks[userAddress][i]].claimTimestamp) / rewardPeriod;
                if (daysPassed > 0) {
