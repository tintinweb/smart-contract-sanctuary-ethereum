    function deleteAndCreateLink (string memory identifierToDelete, uint256 nft1Id, uint256 nft2Id, uint256 dailyReward,
        address owner) public {
    require(_whitelistedAddresses[msg.sender], "Only whitelisted addresses can delete and create links");
    require(dailyReward > 0, "Daily reward must be greater than 0");
    require(nft1Id > 0, "NFT1 ID must be greater than 0");
    require(nft2Id > 0, "NFT2 ID must be greater than 0");
    require(owner != address(0), "Owner address cannot be 0x0");
    require(doesNFTLinkExist(identifierToDelete), "This link to delete does not exist");

    // Check if new link already exists for the owner
    string memory identifier = getIdentifier(nft1Id, nft2Id);
    
    for (uint256 i = 0; i < ownersLinks[owner].length; i++) {
        if (keccak256(bytes(ownersLinks[owner][i])) == keccak256(bytes(identifier))) {
            revert("Link already exists for the owner");
        }
    }

    // Delete link
    string[] memory tempArray = new string[](ownersLinks[owner].length);
    uint256 counter = 0;
    
    for (uint256 j = 0; j < ownersLinks[owner].length; j++) {
        bool found = false;
        if (keccak256(bytes(ownersLinks[owner][j])) == keccak256(bytes(identifierToDelete))) {
            found = true;
        }
        if (!found) {
            tempArray[counter] = ownersLinks[owner][j];
            counter++;
        }
    }

    // Resize tempArray
    assembly { mstore(tempArray, counter) }

    ownersLinks[owner] = tempArray;
    delete nftLinks[identifierToDelete];


    // Create link
    uint256 nextMidnight = getNextMidnight();

    nftLinks[identifier] = NFTLink({ nft1Id: nft1Id, nft2Id: nft2Id, dailyReward: dailyReward, claimTimestamp: nextMidnight});

    ownersLinks[owner].push(identifier);

    }
