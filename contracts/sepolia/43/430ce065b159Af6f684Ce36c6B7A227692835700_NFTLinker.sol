    // I'm going to use a system where the index (string) follows this pattern: "G(Goliath ID)OR(OldRocks ID)"
    mapping(address => bool) private _whitelistedAddresses;
    mapping (string => NFTLink) private nftLinks;
    mapping (address => string[]) private ownersLinks;

    constructor(address _densityTokenAddress) {
        // Test Address
        _whitelistedAddresses[backendAddress] = true;
        _whitelistedAddresses[msg.sender] = true;
        densityToken = Density(_densityTokenAddress);
    }

    function addToWhitelist(address addr) public onlyOwner {
        _whitelistedAddresses[addr] = true;
    }

    function removeFromWhitelist(address addr) public onlyOwner {
        _whitelistedAddresses[addr] = false;
    }

    function isWhitelisted(address addr) public view returns (bool) {
        return _whitelistedAddresses[addr];
    }

    function getIdentifier (uint256 nft1Id, uint256 nft2Id) public pure returns (string memory) {
        return string(abi.encodePacked("OR", Strings.toString(nft1Id), "G", Strings.toString(nft2Id)));
    }

    function getNextMidnight() private view returns (uint) {
        uint currentDay = block.timestamp / 1 days;
        uint nextMidnight = (currentDay + 1) * 1 days;
        return nextMidnight;
    }

    function createLink(
        uint256 nft1Id,
        uint256 nft2Id,
        uint256 dailyReward,
        address owner
    ) public {
        require(_whitelistedAddresses[msg.sender], "Only whitelisted addresses can link NFTs");
        require(dailyReward > 0, "Daily reward must be greater than 0");
        require(nft1Id > 0, "NFT1 ID must be greater than 0");
        require(nft2Id > 0, "NFT2 ID must be greater than 0");
        require(owner != address(0), "Owner address cannot be 0x0");

        string memory identifier = getIdentifier(nft1Id, nft2Id);
        
        for (uint256 i = 0; i < ownersLinks[owner].length; i++) {
            if (keccak256(bytes(ownersLinks[owner][i])) == keccak256(bytes(identifier))) {
                revert("Link already exists for the owner");
            }
        }

        uint256 nextMidnight = getNextMidnight();

        nftLinks[identifier] = NFTLink({ nft1Id: nft1Id, nft2Id: nft2Id, dailyReward: dailyReward, claimTimestamp: nextMidnight});

        ownersLinks[owner].push(identifier);
    }

