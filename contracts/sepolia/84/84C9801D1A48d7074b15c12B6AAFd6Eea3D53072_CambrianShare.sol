abstract contract CambrianShareBase is
    PausableUpgradeable,
    AccessControlUpgradeable
{
    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");

    // single asset
    struct JoinAsset {
        address account; // account address
        uint256 amount; // join amount
        uint256 amountMax; // withdraw max amount
        uint256 amountClaim; // claim amount
        uint256 amountInvite; // parnet account join last amount
        uint64 createAt; // create time (second)
        bool isClaim; // is claimed
    }

    // asset total data
    struct AssetTotal {
        uint256 joinCount; // join count number
        uint256 amountJoin; // join total amount
        uint256 amountClaim; // claim total amount
    }

    /// event
    event JoinAssetLog(
        uint256 id,
        address account,
        uint256 amount,
        uint256 amountMax,
        uint256 amountInvite,
        uint64 createAt
    );
    event JoinInviteLog(address account, address inviter);

    event CancelLog(uint256 id, uint256 amount, uint256 fee, address account);

    event ClaimLog(
        uint256[] ids,
        uint256[] amounts,
        uint256 fee,
        address account
    );

    // eth usdt decimal=6
    uint256 public constant oneUsdt = 1000000;

    // join min amount
    uint256 public constant minAmount = 100 * oneUsdt;

    // join amount
    uint256 public constant joinAmount = 2000 * oneUsdt;

    // time of day
    uint256 public constant timeOfDay = 60 * 10; // 10 minutes => a day

    // withdraw fee rate
    uint256 public feeRate; // 5%

    // yield rate
    uint256 public yieldRate; // 100 0.001%-7% 10000 * 100

    // widthdraw fee account
    address public receiver; // 0x5fDC16c3b16B45e29a6c2650B9513De8ea099C15;

    // withdraw message signer
    address public msgSigner; // 0x5fDC16c3b16B45e29a6c2650B9513De8ea099C15;

    // eth mainnet usdt erc20
    address public constant ETH_USDT_ADDRESS =
        0x5bB72AeAfE0Ec6447AEE5dD9d51A774EFB2C6064;

    // joinId => JoinAsset
    mapping(uint256 => JoinAsset) public joinAssets;

    // account address => asset total data
    mapping(address => AssetTotal) public assetTotals;

    // account address => parnet invite address
    mapping(address => address) public joinInvites;

    // account address => last join amount
    mapping(address => uint256) public lastAmounts;

    // top inviter list
    mapping(address => bool) public topInviters;

    function pause() external onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function setYieldRate(uint256 _rate) external onlyRole(OPERATOR_ROLE) {
        // 10000 * 100
        require(_rate > 0 && _rate <= 10000, "invalid yield rate");
        yieldRate = _rate;
    }

    function setFeeRate(uint256 _fee) external onlyRole(OPERATOR_ROLE) {
        require(_fee > 0 && _fee < 90, "invalid withdraw fee rate");
        feeRate = _fee;
    }

    function addTopInviters(
        address[] calldata _inviters
    ) external onlyRole(OPERATOR_ROLE) {
        for (uint256 i = 0; i < _inviters.length; i++) {
            require(_inviters[i] != address(0), "invalid address");
            if (!topInviters[_inviters[i]]) {
                topInviters[_inviters[i]] = true;
            }
        }
    }

    function delTopInviters(
        address[] calldata _inviters
    ) external onlyRole(OPERATOR_ROLE) {
        for (uint256 i = 0; i < _inviters.length; i++) {
            require(_inviters[i] != address(0), "invalid address");
            if (topInviters[_inviters[i]]) {
                topInviters[_inviters[i]] = false;
            }
        }
    }

    function _deposit(
        IERC20Upgradeable _usdtCont,
        address _from,
        uint256 _amount
    ) internal {
        _usdtCont.transferFrom(_from, address(this), _amount);
    }

    function _withdraw(
        IERC20Upgradeable _usdtCont,
        address _to,
        uint256 _amount
    ) internal {
        _usdtCont.transfer(_to, _amount);
    }
}

contract CambrianShare is Initializable, CambrianShareBase, UUPSUpgradeable {
    using ECDSAUpgradeable for bytes32;
    using StringsUpgradeable for uint256;

    using CountersUpgradeable for CountersUpgradeable.Counter;
    CountersUpgradeable.Counter private _idCounter;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(
        uint256 _feeRate,
        uint256 _yieldRate,
        address _receiver,
        address _msgSigner
    ) public initializer {
        __Pausable_init();
        __AccessControl_init();
        __UUPSUpgradeable_init();

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);
        _grantRole(UPGRADER_ROLE, msg.sender);

        feeRate = _feeRate; // 5%
        yieldRate = _yieldRate; // 100 0.001%-7% 10000 * 100
        receiver = _receiver; // todo del 0x5fDC16c3b16B45e29a6c2650B9513De8ea099C15;
        msgSigner = _msgSigner; // 0x5fDC16c3b16B45e29a6c2650B9513De8ea099C15;
    }

    function _authorizeUpgrade(
        address newImplementation
    ) internal override onlyRole(UPGRADER_ROLE) {}

    function join(uint256 _amount, address _inviter) external whenNotPaused {
        require(_amount >= minAmount, "invalid amount");
        require(
            _amount >= lastAmounts[msg.sender],
            "amount must be greater or equal to last"
        );

        lastAmounts[msg.sender] = _amount;

        require(_inviter != msg.sender, "cannot invite self");
        if (!topInviters[msg.sender]) {
            require(_inviter != address(0), "inviter is zero address");
        }
        if (joinInvites[msg.sender] == address(0) && _inviter != address(0)) {
            joinInvites[msg.sender] = _inviter;
            emit JoinInviteLog(msg.sender, _inviter);
        }

        IERC20Upgradeable _usdtCont = IERC20Upgradeable(ETH_USDT_ADDRESS);
        _deposit(_usdtCont, msg.sender, _amount);

        uint256 _amountMax = (25 * _amount) / 10; // 2.5x
        if (_amount >= joinAmount) {
            _amountMax = 3 * _amount; // 3x
        }

        _idCounter.increment();

        // parnet account last join amount
        address _parentAcct = joinInvites[msg.sender];
        uint256 _amountInvite;
        if (_amount >= lastAmounts[_parentAcct]) {
            _amountInvite = lastAmounts[_parentAcct];
        } else {
            _amountInvite = _amount;
        }

        joinAssets[_idCounter.current()] = JoinAsset(
            msg.sender,
            _amount,
            _amountMax,
            0,
            _amountInvite,
            uint64(block.timestamp),
            false
        );
        emit JoinAssetLog(
            _idCounter.current(),
            msg.sender,
            _amount,
            _amountMax,
            _amountInvite,
            uint64(block.timestamp)
        );

        uint256 _amountJoin = assetTotals[msg.sender].amountJoin + _amount;
        uint256 _amountClaim = assetTotals[msg.sender].amountClaim;
        uint256 _joinCount = assetTotals[msg.sender].joinCount + 1;
        assetTotals[msg.sender] = AssetTotal(
            _amountJoin,
            _amountClaim,
            _joinCount
        );
    }

    function _messageSigner(
        string memory _message,
        bytes memory _signature
    ) private pure returns (address) {
        require(bytes(_message).length > 0, "invalid message");
        require(_signature.length > 0, "invalid signature");
        bytes32 message = keccak256(abi.encodePacked(_message));
        bytes32 ethSignedHash = message.toEthSignedMessageHash();
        address _singer = ethSignedHash.recover(_signature);
        return _singer;
    }

    // verify message signer
    function verifyMessage(
        string memory _message,
        bytes memory _sign
    ) external pure returns (address) {
        // signature address
        return _messageSigner(_message, _sign);
    }

    // 15 day can cancel
    function cancel(
        uint256 _id,
        uint256 _amount,
        bytes memory _sign
    ) external whenNotPaused returns (bool) {
        require(_id > 0, "invalid id");
        require(_amount > 0, "invalid amount");
        require(
            assetTotals[msg.sender].joinCount == 1,
            "Limit the first investment amount"
        );

        require(!joinAssets[_id].isClaim, "is claimed");
        require(_amount <= joinAssets[_id].amountMax, "invalid claim amount");
        require(joinAssets[_id].account == msg.sender, "invalid account");
        require(
            block.timestamp <= joinAssets[_id].createAt + 15 * timeOfDay,
            "callable within 15 days"
        );

        joinAssets[_id].isClaim = true;
        joinAssets[_id].amountClaim = _amount;

        // contract address + idSum + amountSum + account
        string memory _message = (uint256(uint160(address(this))) +
            _id +
            _amount +
            uint256(uint160(msg.sender))).toString();

        require(
            _messageSigner(_message, _sign) == msgSigner,
            "invalid signature"
        );

        assetTotals[msg.sender].amountClaim += _amount;

        IERC20Upgradeable _usdtCont = IERC20Upgradeable(ETH_USDT_ADDRESS);
        require(
            _usdtCont.allowance(msg.sender, address(this)) >= _amount,
            "Insufficient allowance balance"
        );

        uint256 _fee = (_amount * feeRate) / 100;
        _withdraw(_usdtCont, msg.sender, _amount);
        _deposit(_usdtCont, msg.sender, _fee);

        emit CancelLog(_id, _amount, _fee, msg.sender);

        return true;
    }

    // offchain sign
    function claim(
        uint256[] memory _ids,
        uint256[] memory _amounts,
        bytes memory _sign
    ) external whenNotPaused returns (bool) {
        require(_ids.length > 0, "invalid id list");
        require(_ids.length == _amounts.length, "invalid amount list");

        uint256 _totalAmt;
        uint256 _idInt;
        for (uint256 i = 0; i < _ids.length; i++) {
            require(!joinAssets[_ids[i]].isClaim, "is claimed");
            require(
                _amounts[i] <= joinAssets[_ids[i]].amountMax,
                "invalid claim amount"
            );
            require(
                joinAssets[_ids[i]].account == msg.sender,
                "invalid account"
            );

            joinAssets[_ids[i]].isClaim = true;
            joinAssets[_ids[i]].amountClaim = _amounts[i];

            _totalAmt += _amounts[i];
            _idInt += _ids[i];
        }

        // contract address + idSum + amountSum + account
        string memory _message = (uint256(uint160(address(this))) +
            _idInt +
            _totalAmt +
            uint256(uint160(msg.sender))).toString();

        require(
            _messageSigner(_message, _sign) == msgSigner,
            "invalid signature"
        );

        assetTotals[msg.sender].amountClaim += _totalAmt;

        IERC20Upgradeable _usdtCont = IERC20Upgradeable(ETH_USDT_ADDRESS);
        require(
            _usdtCont.allowance(msg.sender, address(this)) >= _totalAmt,
            "Insufficient allowance balance"
        );

        uint256 _fee = (_totalAmt * feeRate) / 100;
        _withdraw(_usdtCont, msg.sender, _totalAmt);
        _deposit(_usdtCont, msg.sender, _fee);

        emit ClaimLog(_ids, _amounts, _fee, msg.sender);

        return true;
    }

    function withdraw(
        address _erc20,
        uint256 _amount
    ) external onlyRole(DEFAULT_ADMIN_ROLE) returns (bool) {
        if (_erc20 == address(1)) {
            uint256 _value = address(this).balance;
            require(_value > 0, "Insufficient balance");
            payable(msg.sender).transfer(_value);
        } else {
            require(_amount > 0, "invalid amount");
            IERC20Upgradeable _erc20Cont = IERC20Upgradeable(_erc20);
            _withdraw(_erc20Cont, msg.sender, _amount);
        }

        return true;
    }

    fallback() external payable {}

    receive() external payable {}
}

