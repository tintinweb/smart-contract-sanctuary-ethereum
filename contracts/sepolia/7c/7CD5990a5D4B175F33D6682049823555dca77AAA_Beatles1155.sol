     * @dev Mint `amount` of tokens of a single `id` to `account`.
     */
    function mint(address account, uint256 id, uint256 amount) public onlyRole(MINTER_ROLE) {
        _mint(account, id, amount, "");
    }

    /**
     * @dev Mint multiple `ids` of tokens of various `amounts` to `account`.
     */
    function mintBatch(address account, uint256[] memory ids, uint256[] memory amounts) public onlyRole(MINTER_ROLE) {
        require(ids.length == amounts.length, "Invalide Inputs.");
        for (uint256 i = 0; i < ids.length; i++) {
            mint(account, ids[i], amounts[i]);
        }
    }

    function airdrop(address[] memory accounts, uint256 id, uint256[] memory amounts) public onlyRole(DEFAULT_ADMIN_ROLE) {
        require(accounts.length == amounts.length, "Invalide Inputs.");

        // airdop
        require(_airdroppable[id] == true || id >= 10000, "Token not airdroppable.");

        for (uint256 i = 0; i < accounts.length; i++) {
            _mint(accounts[i], id, amounts[i], "");
        }
    }

    function burn(address account, uint256 id, uint256 amount) public onlyRole(BURNER_ROLE) {
        require(_burnable[id] == true, "Token not burnable.");
        _burn(account, id, amount);
    }

    function burnBatch(address account, uint256[] memory ids, uint256[] memory amounts) public onlyRole(BURNER_ROLE) {
        require(ids.length == amounts.length, "Invalide Inputs.");
        for (uint256 i = 0; i < ids.length; i++) {
            burn(account, ids[i], amounts[i]);
        }
    }

    function grantRole(bytes32 role, address account) public override onlyOwner {
        _grantRole(role, account);
    }

    function revokeRole(bytes32 role, address account) public override onlyOwner {
        _revokeRole(role, account);
    }
}