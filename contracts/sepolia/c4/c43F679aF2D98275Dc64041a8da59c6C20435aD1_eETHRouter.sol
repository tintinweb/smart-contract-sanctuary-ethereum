    ) {
        eETH = _eETH;
        require(address(_asset) != address(0), "Invalid address");
        asset = _asset;
        emit eETHSet(address(_eETH));
    }

    function depositETH(address receiver) external payable whenNotPaused nonReentrant returns (uint256 shares) {
        require(msg.value > 0, "No ETH sent");
        IWETH(asset).deposit{value: msg.value}();

        uint256 _shares = getExpectedShares(msg.value);

        eETH.mint(receiver, _shares);
        emit Deposit(msg.sender, address(asset), msg.value, _shares);
