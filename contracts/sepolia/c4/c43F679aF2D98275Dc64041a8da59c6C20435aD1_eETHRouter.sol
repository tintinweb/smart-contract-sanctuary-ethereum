/**
 * @title eETHRouter
 * @notice Router for minting eETH from depositing selecting tokens.
 */
contract eETHRouter is Ownable, ReentrancyGuard, Pausable {
    using SafeERC20 for IERC20;

    IeETH public eETH;
    ISwapper public swapper;
    eETHMinting public eETHMintingContract;

    mapping(address => bool) public supportedTokens;

    event Swap(
        address indexed user,
        address indexed tokenIn,
        uint256 amountIn,
        uint256 amountOut,
        address to
    );

    constructor(
        IeETH _eETH,
        ISwapper _swapper,
        eETHMinting _eETHMintingContract
    ) {
        eETH = _eETH;
        swapper = _swapper;
        eETHMintingContract = _eETHMintingContract;
    }

    function routeAndMint(
        address _tokenIn,
        uint256 _amountIn,
        uint256 _minEthAmountOut,
        uint256 _deadline
    ) external nonReentrant whenNotPaused {
        address[] memory path = new address[](1);
        path[0] = _tokenIn;
        
        bool success = IERC20(_tokenIn).transferFrom(msg.sender, address(this), _amountIn);
        require(success, "eETHRouter: Transfer failed");

        IERC20(_tokenIn).approve(address(swapper), _amountIn);
        uint256 ethAmountOut = swapper.swapExactTokensForETH(_amountIn, _minEthAmountOut, path, payable(address(this)), _deadline)[0];

        require(ethAmountOut >= _minEthAmountOut, "eETHRouter: Insufficient ETH amount out");

        eETHMintingContract.depositETH{value: ethAmountOut}(msg.sender);
    }

    function addSupportedToken(address _token, bool _isSupported) external onlyOwner {
        supportedTokens[_token] = _isSupported;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    receive() external payable {}
}

