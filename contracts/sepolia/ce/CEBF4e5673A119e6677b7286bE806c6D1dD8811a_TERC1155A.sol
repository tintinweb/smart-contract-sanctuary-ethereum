        if (hasRole(MINTER_ROLE, sender)) {
            grantRole(MINTER_ROLE, newAdmin);
            renounceRole(MINTER_ROLE, sender);
        }
        grantRole(DEFAULT_ADMIN_ROLE, newAdmin);
        renounceRole(DEFAULT_ADMIN_ROLE, sender);
