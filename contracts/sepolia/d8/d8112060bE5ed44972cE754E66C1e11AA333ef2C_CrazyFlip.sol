contract CrazyFlip is VRFV2WrapperConsumerBase, ConfirmedOwner {
    

    struct RequestStatus {
        uint256 paid; 
        bool fulfilled;
        uint256[] randomWords;
    }

    struct Temp {
        uint256 id;
        uint256 result;
        address playerAddress;
    }

    struct Flip {
        uint256 balance;
        uint256 betAmount;
        uint256 betChoice;
        address playerAddress;
        bool betOngoing;
        address affiliate;
        address tokenAddress;
        bool atMainnet;
    }
   

    // past requests Id.
    uint256[] public requestIds;

    uint256 public lastRequestId;

    uint32 callbackGasLimit; // = 1000000;
    uint16 requestConfirmations = 3;
    uint32 numWords = 1;
    
    address skimAddress;
    // Address LINK - hardcoded for BSC Mainnet
    address linkAddress = 0x779877A7B0D9E8603169DdbD7836e478b4624789;
    // address WRAPPER - hardcoded for BSC Mainnet
    address wrapperAddress = 0xab18414CD93297B0d12ac29E63Ca20f515b3DB46;
    // 0xc587d9053cd1118f25F645F9E08BB98c9712A4EE;

    mapping(address => Flip) public playersByAddress; //to check who is the player
    mapping(uint256 => Temp) public temps; //to check who is the sender of a pending bet by Id
    mapping(address => bool) public enabledTokens;
    mapping(uint256 => RequestStatus)
        public s_requests; /* requestId --> requestStatus */

    IERC20 internal _token;

    Affiliate internal _affiliate;
    
    // event NewIdRequest(address indexed player, uint256 requestId);
    // event GeneratedRandomNumber(uint256 requestId, uint256 randomNumber);
    event BetResult(address indexed player, bool victory, uint256 amount);
    // event RequestSent(uint256 requestId, uint32 numWords);
    event RequestFulfilled(
        address indexed player,
        bool victory,
        uint256 indexed amount,
        uint256 betAmount,
        uint256 timestamp,
        uint256 requestId,
        uint256[] randomWords
    );

    constructor() payable
        ConfirmedOwner(msg.sender)
        VRFV2WrapperConsumerBase(linkAddress, wrapperAddress)
    {}

    
    modifier betConditions() {
        require(
            !playersByAddress[msg.sender].betOngoing,
            "CrazyFlip: Address already as an Active Bet currently ongoing"
        );
        _;
    }

    function setAffilateContractAddress(address _address) public onlyOwner {
        _affiliate = Affiliate(_address);
    }

    
    function bet(
        uint256 _betChoice,
        address tokenAddress,
        address affiliate,
        uint256 betAmount,
        bool mainnet
    ) public payable betConditions {
        require(
            _betChoice == 0 || _betChoice == 1,
            "CrazyFlip: Invalid Bet choice provided"
        );
        require(betAmount > 0, "Add amount to bet");
        
        if(!mainnet){
            require(
                enabledTokens[tokenAddress],
                "CrazyFlip: Token choice is not enabled"
            );
            require(
                betAmount <= getContractBalance(tokenAddress) / 2,
                "CrazyFlip: Insufficient Prize Pool Balance for this Bet Amount"
            );
            _token = IERC20(tokenAddress);
            uint256 allowance = _token.allowance(msg.sender, address(this));
            
            require(allowance >= betAmount, "Insufficient spending amount"); 
            
            _token.transferFrom(msg.sender, address(this), betAmount); //balance
        }
        else{
            require(msg.value <= address(this).balance / 2, "Insufficient");
        }
                
        

        playersByAddress[msg.sender].playerAddress = msg.sender;
        playersByAddress[msg.sender].betChoice = _betChoice;
        playersByAddress[msg.sender].betOngoing = true;
        playersByAddress[msg.sender].betAmount = betAmount;
        playersByAddress[msg.sender].tokenAddress = tokenAddress;
        playersByAddress[msg.sender].affiliate = affiliate;
        playersByAddress[msg.sender].atMainnet = mainnet;


        uint256 requestId = requestRandomWords();

        temps[requestId].playerAddress = msg.sender;
        temps[requestId].id = requestId;

        // emit NewIdRequest(msg.sender, requestId);
    }

    function requestRandomWords() internal returns (uint256 requestId) {
        requestId = requestRandomness(
            callbackGasLimit,
            requestConfirmations,
            numWords
        );
        // CHECK THIS VRF_V2_WRAPPER
        s_requests[requestId] = RequestStatus({
            paid: VRF_V2_WRAPPER.calculateRequestPrice(callbackGasLimit),
            randomWords: new uint256[](0),
            fulfilled: false
        });
        requestIds.push(requestId);
        lastRequestId = requestId;
        // emit RequestSent(requestId, numWords);
        return requestId;
    }

    function fulfillRandomWords(
        uint256 _requestId,
        uint256[] memory _randomWords
    ) internal override {
        require(s_requests[_requestId].paid > 0, "request not found");
        address player;
        bool result;
        uint winnings;
        uint betAmount;

        s_requests[_requestId].fulfilled = true;
        s_requests[_requestId].randomWords = _randomWords;
        uint256 randomResult = _randomWords[0] % 2;
        temps[_requestId].result = randomResult;
        (player, result, winnings,betAmount) = checkResult(randomResult, _requestId); 
       
        emit RequestFulfilled(
            player,
            result,
            winnings,
            betAmount,
            block.timestamp,
            _requestId,
            _randomWords
        );
    }

    function getRequestStatus(
        uint256 _requestId
    )
        external
        view
        returns (uint256 paid, bool fulfilled, uint256[] memory randomWords)
    {
        require(s_requests[_requestId].paid > 0, "request not found");
        RequestStatus memory request = s_requests[_requestId];
        return (request.paid, request.fulfilled, request.randomWords);
    }

    // 95% to winner/contract 
    // from 5% -> 1% to referal and 4% to skim address if no referral 5% to skim address 

    function checkResult(
        uint256 _randomResult,
        uint256 _requestId
    ) internal returns (address,bool,uint,uint) {
        address player = temps[_requestId].playerAddress;
        // address affiliate = playersByAddress[player].affiliate;
        bool result = false;
        uint256 winnings = 0;
        uint256 remainder = 0;
        // uint256 skimAmount = 0;

        uint256 betAmount = playersByAddress[player].betAmount;
        address tokenAddress = playersByAddress[player].tokenAddress;
        _token = IERC20(tokenAddress);

        if (playersByAddress[player].betChoice == _randomResult) {
            uint256 winningAmount = getPercentage(betAmount, 95);
            remainder = betAmount - winningAmount;
            winnings  = winningAmount * 2;
            remainder = remainder * 2;
            if(!playersByAddress[player].atMainnet){
                _token.transfer(player, winnings);
                _token.transfer(skimAddress, remainder);
            }
            else{
                (bool sentToPlayer, ) = payable(player).call{value: winnings}("");
                require(sentToPlayer);

                (bool sentToSkimAddress, ) = payable(skimAddress).call{value: remainder}("");
                require(sentToSkimAddress);
            }
            result = true;
            

        } 
        //--------------------------------
        else {
            uint256 skimAddressAmount = getPercentage(betAmount, 5);
            if(!playersByAddress[player].atMainnet){
                _token.transfer(skimAddress, skimAddressAmount);    

            }
            else{
                (bool sentToSkimAddress, ) = payable(skimAddress).call{value: skimAddressAmount}("");
                require(sentToSkimAddress);
            }
            result = false;
            
            // if (_affiliate.isAffiliated(affiliate)) {
            //     remainder = SafeMath.div(betAmount, 10);
            //     _token.transfer(affiliate, remainder);
            //     skimAmount = SafeMath.mul(betAmount, skimPercentages[tokenAddress]);
            //     _token.transfer(skimAddress, skimAmount);
            //     _token.transfer(houseAddress, betAmount - remainder - skimAmount);
            // } else {
                
            //     skimAmount = SafeMath.mul(betAmount, skimPercentages[tokenAddress]);
            //     _token.transfer(skimAddress, skimAmount);
            //     _token.transfer(houseAddress, betAmount - skimAmount);
            // }
            // result = false;
        }
        playersByAddress[player].betAmount = 0;
        playersByAddress[player].betOngoing = false;

        delete (temps[_requestId]);

        return (player,result,winnings,betAmount);
    }


    function setSkimAddress(address _skimAddress) public onlyOwner{
        skimAddress = _skimAddress;
    }


    function enableToken(address tokenAddress) public onlyOwner {
        require(tokenAddress != address(0));
        enabledTokens[tokenAddress] = true;
    }

    function isTokenEnabled(address tokenAddress) public view returns (bool) {
        return enabledTokens[tokenAddress];
    }

    function getContractBalance(address tokenAddress) internal returns (uint) {
        _token = IERC20(tokenAddress);
        return _token.balanceOf(address(this));
        
    }

    function getPlayersByAddress(address _address) public view returns (Flip memory){
        return playersByAddress[_address];
    }

    function setPlayerByAddressState(address _address) public onlyOwner{
        playersByAddress[_address].betOngoing = false;
        playersByAddress[_address].betAmount = 0;
    }

    function withdrawTokens(address tokenAddress) public onlyOwner {

        _token = IERC20(tokenAddress);
        _token.transfer(msg.sender, _token.balanceOf(address(this)));
    }
    function withdrawMaincoin() public onlyOwner{
        (bool success, ) = payable(msg.sender).call{value: address(this).balance}("");
        require(success);
        
    }


    function withdrawLink() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(linkAddress);
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }

    function getPercentage(uint amount, uint percentage) public pure returns(uint){
        return (amount * percentage) / 100;
    }

    // function getRoleAffliate(address _address) public view returns (bool) {
    //     bool state =  _affiliate.isAffiliated(_address);
    //     return state;
    // }
    function getSkimAddress() public view returns (address){
        return skimAddress;
    }

    function setCallbackGasLimit(uint32 gasLimit) public onlyOwner{
        callbackGasLimit = gasLimit;
    }
    receive() external payable {
    }
}

