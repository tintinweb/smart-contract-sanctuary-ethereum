pragma solidity ^0.8.20;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract Staking is ReentrancyGuard {
    using SafeMath for uint256;

    IERC20 public token;
    address public owner;

    // 释放比例 万分之33
    uint public constant dailyReleaseRate = 33;
    // 释放周期 10秒
    uint public constant releaseInterval = 10 seconds;

    // 质押情况
    struct Deposit {
        uint amount;
        uint balance;
        uint timestamp;
    }
    mapping(address => Deposit[]) public deposits;

    // 提取情况
    struct Claim {
        uint amount;
        uint timestamp;
    }
    mapping(address => Claim[]) private claims;

    modifier onlyOwner {
        require(msg.sender == owner, "Only owner can call this function");
        _;
    }

    constructor(address _token) {
        owner = msg.sender;
        token = IERC20(_token);
    }

    // 获取质押情况
    // page 页码
    // pageSize 每页数量
    function getDepositList(address _address, uint page, uint pageSize) external view returns(Deposit[] memory) {
        Deposit[] memory userDeposit = deposits[_address];

        uint startIndex = (page - 1) * pageSize;
        uint endIndex = startIndex + pageSize;

        if (endIndex > userDeposit.length) {
            endIndex = userDeposit.length;
        }

        Deposit[] memory result = new Deposit[](endIndex - startIndex);

        for (uint i = startIndex; i < endIndex; i++) {
            result[i - startIndex] = userDeposit[i];
        }

        return result;
    }

    // 获取提取情况
    // page 页码
    // pageSize 每页数量
    function getClaimList(address _address, uint page, uint pageSize) external view returns(Claim[] memory) {
        Claim[] memory userClaim = claims[_address];

        uint startIndex = (page - 1) * pageSize;
        uint endIndex = startIndex + pageSize;

        if (endIndex > userClaim.length) {
            endIndex = userClaim.length;
        }

        Claim[] memory result = new Claim[](endIndex - startIndex);

        for (uint i = startIndex; i < endIndex; i++) {
            result[i - startIndex] = userClaim[i];
        }

        return result;
    }

    // 质押代币
    function deposit(uint amount) external returns (bool) {
        require(amount > 0, "Deposit amount must be greater than zero");
        require(token.allowance(msg.sender, address(this)) > amount, "Please add token approve");

        token.transferFrom(msg.sender, address(this), amount);
        deposits[msg.sender].push(Deposit({
            amount: amount,
            balance: amount,
            timestamp: block.timestamp
        }));

        return true;
    }

    // 计算可提取奖励
    function calc(address _address) public view returns (uint) {
        Deposit[] storage userDeposits = deposits[_address];

        if (userDeposits.length == 0) {
            return 0;
        }

        uint total = 0;
        uint i = 0;

        while (i < userDeposits.length) {
            Deposit storage dep = userDeposits[i];

            uint day = block.timestamp.sub(dep.timestamp).div(releaseInterval);
            if (day < 1) {
                i++;
                continue;
            }
            uint toClaim = dep.amount.mul(day).mul(dailyReleaseRate).div(10000);

            total = toClaim >= dep.balance ? total.add(dep.balance) : total.add(toClaim);
            i++;
        }

        return total;
    }

    // 提取奖励
    function claim() external nonReentrant {
        uint contractBalance = token.balanceOf(address(this));
        require(contractBalance > 0, "Not enough tokens left in the contract");

        Deposit[] storage userDeposits = deposits[msg.sender];

        uint total = 0;
        uint i = 0;

        while (i < userDeposits.length) {
            Deposit storage dep = userDeposits[i];

            uint day = block.timestamp.sub(dep.timestamp).div(releaseInterval);
            if (day < 1) {
                i++;
                continue;
            }
            uint toClaim = dep.amount.mul(day).mul(dailyReleaseRate).div(10000);

            if (toClaim >= dep.balance) {
                total = total.add(dep.balance);
                userDeposits[i] = userDeposits[userDeposits.length - 1];
                userDeposits.pop();
            } else {
                dep.balance = dep.balance.sub(toClaim);
                dep.timestamp = block.timestamp;
                total = total.add(toClaim);
                i++;
            }
        }

        if (total > contractBalance) {
            total = contractBalance;
        }

        require(total > 0, "No amount available");

        token.transfer(msg.sender, total);

        claims[msg.sender].push(Claim({
            amount: total,
            timestamp: block.timestamp
        }));
    }

    // 合约管理员提取token
    function withraw() external onlyOwner {
        uint balance = token.balanceOf(address(this));
        require(balance > 0, "Insufficient balance");

        token.transfer(msg.sender, balance);
    }
}

