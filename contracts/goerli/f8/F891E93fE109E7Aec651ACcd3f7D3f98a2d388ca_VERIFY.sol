pragma solidity ^0.8.15;

import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "./lib/HashVerifyDataLib.sol";

contract VERIFY is Pausable, AccessControl {
    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");
    bytes32 public constant WL_ROLE = keccak256("WL_ROLE");
    bytes32 public constant TIME_ROLE = keccak256("TIME_ROLE");
    event changeSinger(address newSinger);
    event useWhiteList(HashVerifyDataLib.hashMessageData message);
    event useWhiteListId(uint256 _id);
    mapping(bytes32 => bool) public hashMessageMap;
    address public whitelistSinger;
    uint256 public startPreMintTime;
    uint256 public startMintTime;
    uint256 public endTime;
    event changeMintTimeEvent(uint256 startPreMintTime, uint256 startMintTime);

    constructor(address _whitelistSinger) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);
        _grantRole(WL_ROLE, msg.sender);
        _grantRole(TIME_ROLE, msg.sender);
        whitelistSinger = _whitelistSinger;
    }

    function changMintTime(uint256 _startPreMintTime, uint256 _startMintTime,uint256 _endTime)
        public
        onlyRole(TIME_ROLE) whenNotPaused
    {
        endTime=_endTime;
        startPreMintTime = _startPreMintTime;
        startMintTime = _startMintTime;
        emit changeMintTimeEvent( startPreMintTime, startMintTime);
    }

    function chackWhiteList(HashVerifyDataLib.hashMessageData memory message)
        public
        view
        returns (uint256 theBack)
    {
        bytes32 packedMessage = packMessage(
            message._address,
            message._type,
            message._discount,
            message._id
        );
        require(packedMessage == message._hashedMessage);
        bytes memory prefix = "\x19Ethereum Signed Message:\n32";
        bytes32 prefixedHashMessage = keccak256(
            abi.encodePacked(prefix, message._hashedMessage)
        );
        address signer = ecrecover(
            prefixedHashMessage,
            message._v,
            message._r,
            message._s
        );
        if (signer != whitelistSinger) {
            // overSinger
            theBack = 3;
        } else {
            if (hashMessageMap[message._hashedMessage] == true) {
                //used
                theBack = 2;
            } else {
                // can
                theBack = 1;
            }
        }
    }

    function changeWhitelistSinger(address _whitelistSinger)
        public
        onlyRole(WL_ROLE)
    {
        whitelistSinger = _whitelistSinger;
        emit changeSinger(_whitelistSinger);
    }

    function packMessage(
        address _address,
        uint256 _type,
        uint256 _discount,
        uint256 _id
    ) public view returns (bytes32) {
        bytes memory theV = "v";
        bytes32 packedMessage = keccak256(
            abi.encodePacked(_address, theV, _type, theV, _discount, theV, _id,address(this))
        );
        return packedMessage;
    }

    function _verifyWhitelist(HashVerifyDataLib.hashMessageData memory message)
        public whenNotPaused 
    {
        require(
            hashMessageMap[message._hashedMessage] == false,
            "message verifyed"
        );

        bytes32 packedMessage = packMessage(
            message._address,
            message._type,
            message._discount,
            message._id
        );
        require(packedMessage == message._hashedMessage, "packMessage error");
        bytes memory prefix = "\x19Ethereum Signed Message:\n32";
        bytes32 prefixedHashMessage = keccak256(
            abi.encodePacked(prefix, message._hashedMessage)
        );
        address signer = ecrecover(
            prefixedHashMessage,
            message._v,
            message._r,
            message._s
        );

        require(signer == whitelistSinger, "verify error not singer");
        require(message._address == tx.origin, "verify error not origin");
        hashMessageMap[message._hashedMessage] = true;
        emit useWhiteList(message);
        emit useWhiteListId(message._id);
    }

    function checkMintRole(
        uint256 _mintType,
        HashVerifyDataLib.hashMessageData memory message1,
        HashVerifyDataLib.hashMessageData memory message2
    ) public whenNotPaused  returns (uint256) {
        require(endTime>=block.timestamp,'is end');
        //minttype 0 s,1 Pre ,2Pre +discount   3 discount
        require(_mintType < 4, "_mintType need <4");
        uint256 rate = 100;
        if (_mintType == 1 || _mintType == 2) {
            require(message1._type == 1, "_type need=1");
            _verifyWhitelist(message1);
        }
        if (_mintType == 2 || _mintType == 3) {
            require(message2._type == 2, "_type need=2");
            _verifyWhitelist(message2);
            rate = message2._discount;
        }

        if (_mintType == 0 || _mintType == 3) {
            require(block.timestamp >= startMintTime, "Mints not open");
        }
        if (_mintType == 1 || _mintType == 2) {
            require(block.timestamp >= startPreMintTime, "PreMint not open");
        }

        return rate;
    }

    function pause() public onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() public onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(AccessControl)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}

