        // Update the min price as we fetch data
        minTokenPrice59x18 = min(
            minTokenPrice59x18,
            wdiv(uint256(usdtPrice), 10**decimalsUSDT)
        );

        // Calculate the price the Curve 3pool lpToken
        uint256 curve3lpTokenPrice59x18 = uint256(
