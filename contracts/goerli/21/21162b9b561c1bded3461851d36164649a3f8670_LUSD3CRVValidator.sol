        keccak256(abi.encodePacked(CURVE3POOL_BALANCES_1_POS));
    bytes32 public constant CURVE3POOL_BALANCES_2_POS_HASH =
        keccak256(abi.encodePacked(CURVE3POOL_BALANCES_2_POS));
