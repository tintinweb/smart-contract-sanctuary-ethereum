import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract NFTStaking is ERC721Holder, Ownable, Pausable, ReentrancyGuard {
    using SafeMath for uint256;

    IERC721 public nftToken; // The NFT token being staked

    event Staked(
        address indexed staker,
        uint256[] tokenIds,
        uint256 statedTime
    );
    event UnStaked(
        address indexed staker,
        uint256[] tokenIds,
        uint256 unStakedTime
    );

    mapping(uint256 => mapping(address => uint256)) public startingTime;
    mapping(uint256 => mapping(address => bool)) public stakingDetails;
    mapping(address => uint256) public totalStaked;

    mapping(address => uint256[]) public stakedTokenIds;

    constructor(IERC721 _nftToken) {
        nftToken = _nftToken;
    }

    function pauseContract() external onlyOwner {
        _pause();
    }

    function unPauseContract() external onlyOwner {
        _unpause();
    }

    function stake(
        uint256[] calldata _tokenIds
    ) external whenNotPaused nonReentrant {
        require(_tokenIds.length > 0, "Cannot stake 0 tokens");
        address sender = msg.sender;
        uint256 currentTimeStamp = block.timestamp;
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            uint256 tokenId = _tokenIds[i];
            nftToken.safeTransferFrom(sender, address(this), tokenId);

            startingTime[tokenId][sender] = currentTimeStamp;
            stakingDetails[tokenId][sender] = true;
            stakedTokenIds[sender].push(tokenId);
        }
        totalStaked[sender] += _tokenIds.length;
        emit Staked(sender, _tokenIds, currentTimeStamp);
    }

    function unstake(uint256[] calldata _tokenIds) external nonReentrant {
        require(_tokenIds.length > 0, "Cannot unstake 0 tokens");
        address sender = msg.sender;
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            uint256 tokenId = _tokenIds[i];
            require(
                nftToken.ownerOf(tokenId) == address(this),
                "Token not held by contract"
            );
            require(stakingDetails[tokenId][sender], "Not an owner of nft");
            nftToken.safeTransferFrom(address(this), sender, tokenId);
            startingTime[tokenId][sender] = 0;
            stakingDetails[tokenId][sender] = false;
            shiftAndPop(stakedTokenIds[msg.sender], tokenId);
        }
        totalStaked[msg.sender] -= _tokenIds.length;
        emit UnStaked(msg.sender, _tokenIds, block.timestamp);
    }

    function shiftAndPop(uint256[] storage tokenIds, uint256 tokenId) internal {
        for (uint256 index; index < tokenIds.length; index++) {
            if (tokenIds[index] == tokenId) {
                // Shift elements back and decrease array length by 1
                for (uint256 j = index; j < tokenIds.length - 1; j++) {
                    tokenIds[j] = tokenIds[j + 1];
                }
                tokenIds.pop();
                break;
            }
        }
    }

    function getStakedTokens(
        address owner
    ) external view returns (uint256[] memory) {
        return stakedTokenIds[owner];
    }
}