import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "../../interfaces/IERC20UpgradeableExt.sol";
import "../../libs/multiSig/GnosisSafeUpgradeable.sol";
import "../constant/EthConstant.sol";
import "../priceOracle/IPriceOracle.sol";

contract GameCreditSale is
    GnosisSafeUpgradeable,
    PausableUpgradeable,
    OwnableUpgradeable
{
    using SafeERC20Upgradeable for IERC20UpgradeableExt;

    uint8 constant CREDIT_PRICE_DECIMALS = 8;

    address public admin;
    IERC20UpgradeableExt public token;
    uint oneToken;
    IPriceOracle public priceOracle;
    uint public creditPrice; // The price of credit in USD. It's scaled by 1e8.
    mapping(address => uint) public nonces;

    event Buy(address indexed buyer, uint indexed credits, uint indexed tokenAmount);
    event Sell(address indexed seller, uint indexed credits, uint indexed tokenAmount, uint nonce);

    function initialize(
        address _owner, address _admin, IPriceOracle _priceOracle
    ) public virtual initializer {
        __Ownable_init_unchained();
        _transferOwnership(_owner);

        token = IERC20UpgradeableExt(EthConstant.ZONE);
        oneToken = 10 ** token.decimals();

        admin = _admin;
        priceOracle = IPriceOracle(_priceOracle);
        creditPrice = 10 ** (CREDIT_PRICE_DECIMALS - 1); // 0.1 USD
    }

    function setAdmin(address _admin) external onlyOwner {
        admin = _admin;
    }

    function setCreditPrice(uint _creditPrice) external onlyOwner {
        require(_creditPrice > 0, "Invalid price");
        creditPrice = _creditPrice;
    }

    function getTokenAmount(uint _credits) public view returns (uint) {
        (uint priceInUSD, uint8 priceDecimals) = priceOracle.getAssetPrice(address(token));
        return  oneToken * _credits * Token.changeDecimals(creditPrice, CREDIT_PRICE_DECIMALS, priceDecimals) / priceInUSD;
    }

    ///@param _amount is amount of ZONE token
    function buy(uint _amount) external {
        uint creditPriceInToken = getTokenAmount(1);
        uint credits = _amount / creditPriceInToken;
        uint adjustedAmount = credits * creditPriceInToken;
        require(adjustedAmount > 0, "Amount is too small");

        address account = _msgSender();
        token.safeTransferFrom(account, address(this), adjustedAmount);
        emit Buy(account, credits, adjustedAmount);
    }

    function sell(uint _credits, bytes calldata _signature) external {
        address account = _msgSender();
        uint nonce = nonces[account];
        nonces[account] = nonce + 1;
        bytes memory data = abi.encodePacked(keccak256(abi.encodePacked(account, _credits, nonce)));
        require(isValidSignature(admin, data, _signature), "Invalid signature");

        uint amount = getTokenAmount(_credits);
        token.safeTransfer(account, amount);
        emit Sell(account, _credits, amount, nonce);
    }

    function withdraw() external onlyOwner {
        token.safeTransfer(owner(), token.balanceOf(address(this)));
    }
}

