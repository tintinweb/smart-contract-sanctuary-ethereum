/**
 * @title ERC721 Staking Smart Contract
 *
 * @author andreitoma8
 *
 * @notice This contract uses a simple principle to alow users to stake ERC721 Tokens and earn ERC20 Reward Tokens distributed by the owner of the contract.
 * Each time a user stakes or withdraws a new Token Id, the contract will store the time of the transaction and the amount of ERC20 Reward Tokens that the user has earned up to that point
 * (based on the amount of time that has passed since the last transaction, the amount of Tokens staked and the amount of ERC20 Reward Tokens distributed per hour so that the amount of ERC20
 * Reward Tokens earned by the user is always distributed accounting for how many ERC721 Tokens he has staked at that particular moment.
 * The user can claim the ERC20 Reward Tokens at any time by calling the claimRewards function.
 *
 * @dev The contract is built to be compatible with most ERC721 and ERC20 tokens.
 */

contract CatStaking is Ownable, ReentrancyGuard, Pausable {
    using SafeERC20 for IERC20;

    /**
     * @dev The ERC20 Reward Token that will be distributed to stakers.
     */
    IERC20 public immutable tears;

    /**
     * @dev The ERC721 Collection that will be staked.
     */
    IERC721 public immutable catCollection;

    uint256 constant SECONDS_IN_HOUR = 3600;

    /**
     * @dev Struct that holds reward and time data for each token
     */
    struct StakeData {
        address tokenOwner;
        uint256 timeStarted;
        uint256 timeFinished;
        uint256 rewardsReserved;
    }

    /**
     * @dev Struct that holds the staking details for each user.
     */
    struct Staker {
        /**
         * @dev The array of Token Ids staked by the user.
         */
        uint256[] stakedTokenIds;
        uint256 rewardTaken;
    }

    /**
     * @dev The amount of ERC20 Reward Tokens accrued per hour.
     */
    uint256 public baseReward = 1000;
    uint256 public stakeTime = 5 minutes;

    /**
     * @dev Mapping of stakers to their staking info.
     */
    mapping(address => Staker) public stakers;

    /** 
     * @dev Mapping of Token Id to stake data.
     */
    mapping(uint256 => StakeData) public stakeData;

    /**
     * @dev Array of stakers addresses.
     */
    address[] public stakersArray;

    /**
     * @notice Constructor function that initializes the ERC20 and ERC721 interfaces.
     * @param _nftCollection - The address of the ERC721 Collection.
     * @param _rewardsToken - The address of the ERC20 Reward Token.
     */
    constructor(IERC721 _nftCollection, IERC20 _rewardsToken) {
        catCollection = _nftCollection;
        tears = _rewardsToken;
    }

    /**
     * @notice Function used to stake ERC721 Tokens.
     * @param _tokenId - The Token Id to stake.
     * @dev Token Id must be approved for transfer by the user before calling this function.
     */
    function stake(uint256 _tokenId) external whenNotPaused {
        Staker storage staker = stakers[msg.sender];

        if (staker.stakedTokenIds.length == 0) {
            stakersArray.push(msg.sender);
        }
        
        require(
            catCollection.ownerOf(_tokenId) == msg.sender,
            "Can't stake tokens you don't own!"
        );
        
        catCollection.transferFrom(msg.sender, address(this), _tokenId);

        staker.stakedTokenIds.push(_tokenId);
        StakeData storage data = stakeData[_tokenId];
        data.timeStarted = block.timestamp;
        data.timeFinished = block.timestamp + stakeTime;
        data.tokenOwner = msg.sender;
        data.rewardsReserved = min(baseReward, tears.balanceOf(address(this)));
    }

    /**
     * @notice Function used to withdraw ERC721 Tokens.
     * @param _tokenId - The Token Id to withdraw.
     */
    function withdraw(uint256 _tokenId) external nonReentrant {
        Staker storage staker = stakers[msg.sender];
        require(
            staker.stakedTokenIds.length > 0,
            "You have no tokens staked"
        );

        require(stakeData[_tokenId].tokenOwner == msg.sender);

        uint256 lenStakedTokens = staker.stakedTokenIds.length;
        for (uint256 j; j < lenStakedTokens; ++j) {
            if (staker.stakedTokenIds[j] == _tokenId) {
                staker.stakedTokenIds[staker.stakedTokenIds.length - 1] = staker.stakedTokenIds[j];
                staker.stakedTokenIds.pop();
                break;
            }
        }
        tears.transferFrom(address(this), msg.sender, stakeData[_tokenId].rewardsReserved);
        staker.rewardTaken += stakeData[_tokenId].rewardsReserved;
        delete stakeData[_tokenId];

        catCollection.transferFrom(address(this), msg.sender, _tokenId);

        if (staker.stakedTokenIds.length == 0) {
            for (uint256 i; i < stakersArray.length; ++i) {
                if (stakersArray[i] == msg.sender) {
                    stakersArray[i] = stakersArray[stakersArray.length - 1];
                    stakersArray.pop();
                    break;
                }
            }
        }
    }

    /**
     * @notice Function used to set the amount of ERC20 Reward Tokens accrued per hour.
     * @param _newValue - The new value of the rewardsPerHour variable.
     * @dev This function sets base reward amount for newly staked tokens. It doesn't affect the rewards for already staked tokens.
     */
    function setBaseReward(uint256 _newValue) public onlyOwner {
        baseReward = _newValue;
    }

    /**
        * @notice Function used to set length of each stake
        * @param _newValue - The new value of the stakeTime variable.
        *
        */
    function setStakeTime(uint256 _newValue) public onlyOwner {
        stakeTime = _newValue;
    }

    /**
     * @notice Function used to get the info for a user: the Token Ids staked
     * @param _user - The address of the user.
     * @return _stakedTokenIds - The array of Token Ids staked by the user.
     * @return _totalReward - The total rewards claimed by the user.
     */
    function userStakeInfo(address _user)
        public
        view
        returns (uint256[] memory _stakedTokenIds, uint256 _totalReward)
    {
        return (stakers[_user].stakedTokenIds, stakers[_user].rewardTaken);
    }

    /**
     * @notice Function used to get the info for a staked token
     * @param _tokenId - The Token Id of the staked token.
     * @return _timeStarted - The time when the token was staked.
     * @return _timeFinished - The time when the token will be available for withdrawal.
     * @return _rewardsReserved - The amount of Tear Reward Tokens reserved for the token.
     */
    function tokenStakeInfo(uint256 _tokenId)
        public
        view
        returns (
            uint256 _timeStarted,
            uint256 _timeFinished,
            uint256 _rewardsReserved
        ) 
    {
        return (
            stakeData[_tokenId].timeStarted,
            stakeData[_tokenId].timeFinished,
            stakeData[_tokenId].rewardsReserved
        );
    }

    /**
        * @notice Function used to get the max value of two numbers
        * @param _a - The first number
        * @param _b - The second number
        * @return - The max value of the two numbers
        */
    function max(uint256 _a, uint256 _b) internal pure returns (uint256) {
        return _a > _b ? _a : _b;
    }

    /**
        * @notice Function used to get the min value of two numbers
        * @param _a - The first number
        * @param _b - The second number
        * @return - The min value of the two numbers
        */
    function min(uint256 _a, uint256 _b) internal pure returns (uint256) {
        return _a < _b ? _a : _b;
    }

    /**
     * @dev Pause staking.
     */
    function pause() external onlyOwner {
        _pause();
    }

    /**
     * @dev Resume staking.
     */
    function unpause() external onlyOwner {
        _unpause();
    }
}

