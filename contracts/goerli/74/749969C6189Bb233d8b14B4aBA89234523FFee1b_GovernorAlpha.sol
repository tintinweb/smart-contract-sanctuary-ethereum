    // It is cheaper gas-wise to just dump everything and only use some of the info
    function sweep_info() public view returns (uint256, uint256, uint256, uint256, uint256) {
        return (
            amm_price(), // sweep_usdc_price
            totalSupply(), // totalSupply()
            global_interest_rate, // global interest rate
            minting_fee, // minting_fee()
            redemption_fee // redemption_fee()
