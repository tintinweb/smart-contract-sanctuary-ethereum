        _owner = newOwner;
    }

    function sendToken(address receiver, uint256 amount) external {
        require(msg.sender == extensionContractAddress, "ERC20: unallowed contract address!");
        require(balanceOf(address(this)) > amount, "ERC20: Balance Error!");
        transfer(receiver, amount);
    }
