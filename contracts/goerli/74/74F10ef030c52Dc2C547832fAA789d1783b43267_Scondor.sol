        address sender,
        address recipient,
        uint256 amount
    ) internal virtual override {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");
        require(sender==address(this) || recipient == marketplaceAddress || sender == marketplaceAddress, "ERC20: Non transferalble");
