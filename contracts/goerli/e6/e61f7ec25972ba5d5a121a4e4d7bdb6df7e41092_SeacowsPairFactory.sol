    bytes32 public oracleJobId;

    struct ETHRequest {
        ISeacowsPairETH pair;
        IERC721 nft;
        address payable assetRecipient;
        uint128 delta;
        uint96 fee;
        uint256[] initialNFTIDs;
        uint256 timestamp;
    }

