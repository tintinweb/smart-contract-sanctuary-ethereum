import "chainlink/v0.8/VRFConsumerBaseV2.sol";

contract House is VRFConsumerBaseV2, ReentrancyGuard {
    // VRF
    VRFCoordinatorV2Interface COORDINATOR;
    uint64 subscriptionId;
    address internal constant vrfCoordinator = 0x2Ca8E0C643bDe4C2E08ab1fA0da3401AdAD7734D;
    bytes32 internal constant keyHash = 0x79d3d8832d904592c0bf9818b621522c988bb8b0c05cdc3b15aea1b6e8db0c15;
    uint32 internal constant callbackGasLimit = 200000;
    uint16 internal constant requestConfirmations = 5;
    uint32 internal constant numWords =  1;
    uint lastRequestId;
    uint[] public requestIds;
    mapping (uint => RequestStatus) requests;
    // bool requesting;
    struct RequestStatus {
        address player;
        uint8 direction;
        uint amount;
        bool isRebet;
        bool fulfilled;
        bool exists;
        uint randomWord;
    }

    address internal owner;
    mapping (address => uint) winnings;
    uint private minBalance;

    error RequestError();
    error InvalidBet();
    error InvalidWithdraw();

    event Result(
        bool rebet,
        uint8 direction,
        uint8 result,
        address better,
        uint value);

    constructor(uint64 _subscriptionId, uint _minBalance) VRFConsumerBaseV2(vrfCoordinator) {
        COORDINATOR = VRFCoordinatorV2Interface(vrfCoordinator);
        owner = msg.sender;
        subscriptionId = _subscriptionId;
        minBalance = _minBalance;
    }

    /* Modifiers */
    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }

    /* VRF functions */
    function requestRandomWords(uint8 _direction, address _player, uint _amount, bool _isRebet) internal returns (uint requestId) {
        // Will revert if subscription is not set and funded.
        requestId = COORDINATOR.requestRandomWords(
        keyHash,
        subscriptionId,
        requestConfirmations,
        callbackGasLimit,
        numWords
        );
        requestIds.push(requestId);
        requests[requestId] = RequestStatus({player: _player, direction: _direction, amount: _amount, isRebet: _isRebet, randomWord: 0, exists:true, fulfilled: false});
        lastRequestId = requestId;
    }

    function fulfillRandomWords(
        uint requestId, /* requestId */
        uint[] memory randomWords
    ) internal override {
        uint result = randomWords[0];

        requests[requestId].fulfilled = true;
        requests[requestId].randomWord = result;
        _settleBet(result, requestId);
    }

    /* View */
    function getBalance() public view returns (uint) {
        return address(this).balance;
    }

    function getWinnings(address _player) public view returns (uint) {
        return winnings[_player];
    }

    function getRequestStatus(uint _requestId) internal view returns (bool, uint result) {
        if(!requests[_requestId].exists) {
            revert RequestError();
        }
        RequestStatus memory request = requests[_requestId];
        return (request.fulfilled, request.randomWord);
    }

    /* Play functions */
    function makeBet(uint8 _direction) external payable {
        // require(requesting == false, "Another player is playing");
        if(msg.value <= 0 || address(this).balance - msg.value < getMinBalance() || _direction != 1 && _direction != 2) {
            revert InvalidBet();
        }
        
        requestRandomWords(_direction, msg.sender, msg.value, false);
    }

    function _settleBet(uint result, uint requestId) internal {
        RequestStatus memory rqs = requests[requestId];
        result = result % 2 + 1;
        uint winAfterFee = rqs.amount + (rqs.amount*997)/1000;
        if (result == rqs.direction) {
            winnings[rqs.player] += winAfterFee;
        } else if (rqs.isRebet) {
            winnings[msg.sender] -= rqs.amount;
        }
        emit Result(false, rqs.direction, uint8(result), rqs.player, rqs.amount);
    }

    function reBet(uint amount, uint8 _direction) external {
        if(amount <= 0 || address(this).balance - amount < getMinBalance() || _direction != 1 && _direction != 2 || winnings[msg.sender] < amount) {
            revert InvalidBet();
        }

        requestRandomWords(_direction, msg.sender, amount, true);
    }

    function cashOut(uint _amount) external nonReentrant {
        if(_amount <= 0 || winnings[msg.sender] < _amount) {
            revert InvalidWithdraw();
        }

        winnings[msg.sender] -= _amount;
        SafeTransferLib.safeTransferETH(msg.sender, _amount);
    }
    
    /* Owner functions */
    function withdraw(uint _amount, address _to) external onlyOwner {
        SafeTransferLib.safeTransferETH(_to, _amount);
    }

    function setOwner(address _newOwner) external onlyOwner {
        owner = _newOwner;
    }

    function getMinBalance() internal view returns(uint) {
        return (address(this).balance/10)*1;
    }

    receive() external payable {}

    fallback() external payable {}
}

