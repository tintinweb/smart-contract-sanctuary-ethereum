pragma solidity 0.8.16;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./BXMigration.sol";
import "@openzeppelin/contracts/proxy/beacon/BeaconProxy.sol";
import "@openzeppelin/contracts/proxy/beacon/IBeacon.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";

contract BXMigrationFactory is
    Initializable,
    OwnableUpgradeable,
    UUPSUpgradeable
{
    using Counters for Counters.Counter;

    uint256 public createFee; // fee for creating migration

    Counters.Counter private _migrationIds; // migration id's
    mapping(uint256 => address) private migrationIdToAddress;

    mapping(address => bool) public _isExcluded;

    IBeacon private beacon;

    event CreateFeeUpdated(uint256 createFee);

    // @custom:oz-upgrades-unsafe-allow constructor
    //constructor() initializer {}

    function initialize(uint256 createFee_, IBeacon _beacon)
        public
        initializer
    {
        createFee = createFee_;
        beacon = _beacon;
        __Ownable_init();
    }

    /**
     * @dev updates `createFee` with new `createFee_`
     *
     * @param createFee_ new fee for creating migration
     *
     * Emits {CreateFeeUpdated} event
     */
    function setCreateFee(uint256 createFee_) external onlyOwner {
        createFee = createFee_;
        emit CreateFeeUpdated(createFee_);
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    /*
        divider_ : 1 token0_ = (1/divider_) token1_
        restrictionTime: Time gap between two transaction of same account
        requirment: 1) divider_ (ratio) should be greater than 0 
                    2) msg.vale should be greater than creation fee
    */
    function createMigration(
        address token0_,
        address token1_,
        uint256 divider_,
        uint256 restrictionTime_
    ) external payable {
        _beforeCreateMigration(token0_,token1_,divider_,msg.sender);

        if (!_isExcluded[msg.sender]) {
            require(msg.value >= createFee, "Factory: Fee must be provided");
        }
        bytes memory data = abi.encodeWithSelector(
            BXMigration(address(0)).initialize.selector,
            token0_,
            token1_,
            divider_,
            restrictionTime_
        );
        BeaconProxy beconProxy = new BeaconProxy(address(beacon), data);

        BXMigration migration = BXMigration(address(beconProxy));

        migration.transferOwnership(msg.sender);

        _migrationIds.increment();
        uint256 newCarId = _migrationIds.current();
        migrationIdToAddress[newCarId] = address(migration);
    }

    function _beforeCreateMigration(
        address token0_,
        address token1_,
        uint256 divider_,
        address owner_
    )internal virtual{
        require(divider_ > 0, "Divider should be greater than zero");
        require(
            token0_ != address(0),
            "Error : Token should not be zero address"
        );
        require(
            token1_ != address(0),
            "Error : Token should not be zero address"
        );
        require(owner_ == Ownable(token0_).owner(),"error : caller must be the owner of token contract");
        require(owner_ == Ownable(token1_).owner(),"error : caller must be the owner of token contract");
    }

    /*
        Description: Withdraw any anonymous Token
    */
    function withdrawAnonymousToken(address token_) external onlyOwner {
        uint256 amount = IERC20(token_).balanceOf(address(this));
        require(amount > 0, "error : contract token balance is zero");
        SafeERC20Upgradeable.safeTransfer(
            IERC20Upgradeable(token_),
            owner(),
            amount
        );
    }

    /** @dev Includes `_address` in fee
     *
     * @param _address address to be included in fee
     *
     * Requirements:
     *
     * - Caller must be the owner
     * - `_address` cannot be the zero address.
     */
    function includeFee(address _address) external onlyOwner {
        require(
            _address != address(0),
            "Error : Zero address cannot be included or excluded"
        );
        require(
            _isExcluded[_address],
            "error : account already included in fee"
        );
        _isExcluded[_address] = false;
    }

    /** @dev Includes `accounts` in fee
     *
     * @param accounts array of addresses to be included in fee
     *
     * Requirements:
     *
     * - Caller must be the owner
     * - Addresses stored in `accounts` array cannot be the zero address.
     */
    function includeFeeForBatch(address[] memory accounts) external onlyOwner {
        for (uint256 account = 0; account < accounts.length; account++) {
            require(
                accounts[account] != address(0),
                "Error : Zero address cannot be included or excluded"
            );
            if (_isExcluded[accounts[account]]) {
                _isExcluded[accounts[account]] = false;
            }
        }
    }

    /** @dev Excludes `_address` from fee
     *
     * @param _address address to be excluded from fee
     *
     * Requirements:
     *
     * - Caller must be the owner
     * - `_address` cannot be the zero address.
     */
    function excludeFee(address _address) external onlyOwner {
        require(
            _address != address(0),
            "Error : Zero address cannot be included or excluded"
        );
        require(
            !_isExcluded[_address],
            "error : account already excluded from fee"
        );
        _isExcluded[_address] = true;
    }

    /** @dev Excludes `accounts` from fee
     *
     * @param accounts array of addresses to be excluded from fee
     *
     * Requirements:
     *
     * - Caller must be the owner
     * - Addresses stored in `accounts` array cannot be the zero address.
     */
    function excludeFeeForBatch(address[] memory accounts) external onlyOwner {
        for (uint256 account = 0; account < accounts.length; account++) {
            require(
                accounts[account] != address(0),
                "Error : Zero address cannot be included or excluded"
            );
            if (!_isExcluded[accounts[account]]) {
                _isExcluded[accounts[account]] = true;
            }
        }
    }

    /*
        Description: Withdraw any Creation
    */
    function withdrawFee() external onlyOwner {
        uint256 fee = address(this).balance;
        payable(owner()).transfer(fee);
    }

    /** @dev Returns migration address corresponding to `_migrationId`
     *
     * @param _migrationId migration id
     */
    function getMigationAddress(uint256 _migrationId)
        external
        view
        returns (address)
    {
        return migrationIdToAddress[_migrationId];
    }

    /**
     * @dev Returns the implementation address
     */
    function getImplementationAddress() external view returns (address) {
        return beacon.implementation();
    }

    /**
     * @dev Returns the beacon address
     */
    function getBeaconAddress() external view returns (address) {
        return address(beacon);
    }
}

