pragma solidity 0.8.16;
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

contract BXMigration is Initializable,OwnableUpgradeable,PausableUpgradeable {
    using SafeERC20 for IERC20;
    address public token1; 
    address public token2;
    uint256 public divider; // divider = 2 means every 2 token0  user will get 1 token1
    mapping(address => uint256) public lastMigrate; // timestamp of last migration
    uint256 restictionTime; // in second

    event Migrate(address indexed account);
    event ChangeDivider(uint256 newDivider);

    /// @custom:oz-upgrades-unsafe-allow constructor
  constructor() initializer {}
    function initialize(
        address token1_,
        address token2_,
        uint256 divider_,
        uint256 restrictionTime_
    ) external initializer {
         __Ownable_init_unchained();
         __Pausable_init_unchained();

        token1 = token1_;
        token2 = token2_;
        divider = divider_;
        restictionTime = restrictionTime_;
    }

    /**
    * @dev Updates `divider` with new `divider_`
    *
    * @param divider_ new divider
    *
    * Requirements:
    * 
    * - `divider_` should be greater than zero
    *
    * Emits {ChangeDivider} event
     */
    function changeDivider(uint256 divider_) external onlyOwner {
        require(divider_ > 0);
        divider = divider_;
        emit ChangeDivider(divider_);
    }

    /**
        @dev Pause the contract (stopped state)
     */
    function pause() external onlyOwner {
        _pause();
    }

    /**
        @dev Unpause the contract (normal state)
     */
    function unpause() external onlyOwner {
        _unpause();
    }


    /** 
    * @dev MIGRATE token1 to token2
    *
    * @param amount token amount to be migrated
    *
    * Requirement: 
    *
    * -there should be gap of restictionTime between two tranction
    *
    * Emits {Migrate} event
    */
    function migrate(uint256 amount) external whenNotPaused {
        require(
            block.timestamp - lastMigrate[msg.sender] >= restictionTime,
            "Restriction time is not passed"
        );
        uint256 decimal1 = IERC20Metadata(token1).decimals();
        uint256 decimal2 = IERC20Metadata(token2).decimals();
        uint256 newTokenAmount = (amount * 10**decimal2) / (10**decimal1 * divider);
        lastMigrate[msg.sender] = block.timestamp;
        IERC20(token1).safeTransferFrom(msg.sender, address(this), amount);
        IERC20(token2).safeTransfer(msg.sender, newTokenAmount);

        emit Migrate(msg.sender);
    }

    /**
    * @dev Transfers `token_` from contract to owner
    *
    * @param token_ address of token to be transferred 
     */
    function withdrawAnonymousToken(address token_) external onlyOwner {
        uint256 amount = IERC20(token_).balanceOf(address(this));
        require(amount > 0 , "error : contract token balance is zero");
        IERC20(token_).safeTransfer(owner(), amount);
    }

    function selfDestruct() public onlyOwner {
        selfdestruct(payable(owner()));
    }

     function _msgSender()
        internal
        view
        override(ContextUpgradeable)
        returns (address sender)
    {
        sender = ContextUpgradeable._msgSender();
    }

    function _msgData()
        internal
        view
        override(ContextUpgradeable)
        returns (bytes calldata)
    {
        return ContextUpgradeable._msgData();
    }

}

