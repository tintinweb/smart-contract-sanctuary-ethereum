pragma solidity ^0.8.13;

error InvalidProof();
error RootAlreadyUsed();
error EpochInProgress();
error UserAlreadySet();
error Q00nicornsOnly();

interface CrystalCaverns {
  function safeTransferFrom(
    address from,
    address to,
    uint256 id
  ) external;
}

contract testMerkleRope is Ownable, VRFV2WrapperConsumerBase {
  uint256 public ropeLength;
  uint256 internal vrfRequestId;

  CrystalCaverns crystalCaverns;
  address KING_Q00NTA = 0xd8Cc0336bcdED86Ea7b08144aAc517348bF27430;

  bool public epochEnded;

  address[] public participants;
  bytes32 public currentRoot;
  mapping(bytes32 => bool) public usedRoots;
  address public savior;

  mapping(address => uint256) public q00tantsHeld;
  mapping(address => uint256) public q00nicornsHeld;
  mapping(address => uint256) public reinforcementsHeld;

  // Address LINK - hardcoded for Goerli
  address linkAddress = 0x326C977E6efc84E512bB9C30f76E30c160eD06FB;

  // address WRAPPER - hardcoded for Goerli
  address wrapperAddress = 0x708701a1DfF4f478de54383E49a627eD4852C816;

  constructor(bytes32 _root) VRFV2WrapperConsumerBase(linkAddress, wrapperAddress) {
    currentRoot = _root;
    crystalCaverns = CrystalCaverns(0x8d215b6a7b9139A7310c2F63e45aE37A77a4D9A4);
  }

  function dig(bytes32[] calldata _proof, bytes32 _newRoot) public {
    if (usedRoots[_newRoot]) revert RootAlreadyUsed();
    if (q00nicornsHeld[msg.sender] == 0) revert Q00nicornsOnly();
    bytes32 leaf = keccak256((abi.encodePacked(msg.sender)));

    if (!MerkleProof.verify(_proof, currentRoot, leaf)) {
      revert InvalidProof();
    }

    participants.push(msg.sender);
    usedRoots[_newRoot] = true;
    currentRoot = _newRoot;

    ropeLength += totalPower(msg.sender);
    q00nicornsHeld[msg.sender] = 0;
  }

  function totalPower(address _address) public view returns (uint256) {
    if (q00nicornsHeld[msg.sender] == 0) return 0;
    uint256 reinforcementPower = reinforcementsHeld[_address] * 3;
    return q00nicornsHeld[_address] + q00tantsHeld[_address] + reinforcementPower;
  }

  function fulfillRandomWords(uint256 _requestId, uint256[] memory _randomWords) internal override {
    if (_requestId != vrfRequestId) revert();

    uint256 randomNumber = _randomWords[0] % participants.length;
    savior = participants[randomNumber];

    crystalCaverns.safeTransferFrom(KING_Q00NTA, savior, 0);
  }

  function setQ00tantBalances(address[] calldata _addresses, uint256[] calldata _counts) external onlyOwner {
    for (uint256 i = 0; i < _addresses.length;) {
      unchecked {
        q00tantsHeld[_addresses[i]] += _counts[i];
        ++i;
      }
    }
  }

  function setQ00nicornBalances(address[] calldata _addresses, uint256[] calldata _counts) external onlyOwner {
    for (uint256 i = 0; i < _addresses.length;) {
      unchecked {
        q00nicornsHeld[_addresses[i]] += _counts[i];
        ++i;
      }
    }
  }

  function setReinforcementBalances(address[] calldata _addresses, uint256[] calldata _counts) external onlyOwner {
    for (uint256 i = 0; i < _addresses.length;) {
      unchecked {
        reinforcementsHeld[_addresses[i]] += _counts[i];
        ++i;
      }
    }
  }

  function endEpoch() external onlyOwner {
    epochEnded = true;
  }

  function saveSerShinesalot() external {
    if (!epochEnded) revert EpochInProgress();
    vrfRequestId = requestRandomness(100000, 3, 1);
  }
}

