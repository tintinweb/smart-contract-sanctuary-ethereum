import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

contract PaymentGateway is Ownable {
    using SafeMath for uint256;

    IUniswapV2Router02 private immutable _router;

    address payable public payOutAddress;
    uint256 public minPayOutEthAmount = 0.1 ether;

    uint8 public buyBackFee = 30;
    uint256 private _feeDenominator = 100;

    MasterToken public masterToken;
    mapping(address => uint256) public _paymentsCount;
    mapping(address => mapping(uint256 => Payment)) public _payments;
    mapping(address => Token) public _acceptableTokens;

    constructor(address tokenAddress) {
        _router = IUniswapV2Router02(0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506);

        masterToken = MasterToken(tokenAddress, 0);

        payOutAddress = payable(0x86B94DB036058b83b6c9E57c030E041FFB473ba4);
        enableAcceptableToken(0x1f9840a85d5aF5bf1D1762F925BDADdC4201F984, 500000000000000);
    }

    function payInEth(string memory uuid) public payable {
        payOutAndBuyBack();

        address token = address(0x0);

        savePaymentInfo(token, msg.sender, uuid, msg.value);
    }

    function payInTokens(address token, string memory uuid, uint256 amount) public {
        require(_acceptableTokens[token].enabled, "This token is not acceptable by PaymentGateway provider!");
        IERC20 tokenInterface = IERC20(token);
        require(tokenInterface.balanceOf(msg.sender) >= amount, "You don't have enough tokens in your balance!");

        tokenInterface.transferFrom(msg.sender, address(this), amount);

        if (token == masterToken.tokenAddress) {
            burnMasterTokens();
        } else {
            swapTokenToETH(token, tokenInterface);
            payOutAndBuyBack();
        }

        savePaymentInfo(token, msg.sender, uuid, amount);
    }

    event PaymentInfoSaved(address token, address payer, string uuid, uint256 amount);
    function savePaymentInfo(address token, address payer, string memory uuid, uint256 amount) internal {
        _paymentsCount[token] += 1;
        _payments[token][_paymentsCount[token]] = Payment(token, msg.sender, uuid, amount);

        emit PaymentInfoSaved(token, payer, uuid, amount);
    }

    event TokenToETHSwapped(address tokenAddress, uint256 amount, uint256 receivedETH, address paidFor);
    function swapTokenToETH(address tokenAddress, IERC20 tokenInterface) internal {
        uint256 tokenAmount = tokenInterface.balanceOf(address(this));

        if (tokenAmount > _acceptableTokens[tokenAddress].minSwapAmount) {
            tokenInterface.approve(address(_router), tokenAmount);

            uint256 previousBalance = address(this).balance;

            _router.swapExactTokensForETHSupportingFeeOnTransferTokens( // Swap to ETH
                tokenAmount,
                0,
                getPathForRouter(tokenAddress, _router.WETH()),
                address(this),
                block.timestamp
            );

            uint256 receivedETH = address(this).balance - previousBalance;

            emit TokenToETHSwapped(tokenAddress, tokenAmount, receivedETH, address(this));
        }
    }

    function payOutAndBuyBack() internal {
        uint256 contractBalance = address(this).balance;

        if (contractBalance > minPayOutEthAmount) {
            uint256 buyBackEthAmount = contractBalance.mul(buyBackFee).div(_feeDenominator);

            payOut(contractBalance.sub(buyBackEthAmount));
            buyBackMasterTokens(buyBackEthAmount);
            burnMasterTokens();
        }
    }

    event PayOutTransferred(address dividendAddress, uint256 amount);
    function payOut(uint256 ethAmount) internal {
        payOutAddress.transfer(ethAmount);

        emit PayOutTransferred(payOutAddress, ethAmount);
    }

    event BuyBackMasterTokenExecuted(uint256 amount, address paidFor);
    function buyBackMasterTokens(uint256 buyBackEthAmount) internal {
        _router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: buyBackEthAmount}(
            0,
            getPathForRouter(_router.WETH(), masterToken.tokenAddress),
            address(this),
            block.timestamp
        );

        emit BuyBackMasterTokenExecuted(buyBackEthAmount, address(this));
    }

    event MasterTokenBurnt(uint256 amountBurnt);
    function burnMasterTokens() internal {
        ERC20Burnable masterTokenInterface = ERC20Burnable(masterToken.tokenAddress);

        uint256 balance = masterTokenInterface.balanceOf(address(this));

        masterTokenInterface.burn(balance);
        masterToken.burntAmount += balance;

        emit MasterTokenBurnt(balance);
    }

    function getPathForRouter(address token, address token2) private pure returns (address[] memory) {
        address[] memory path = new address[](2);
        path[0] = token;
        path[1] = token2;

        return path;
    }

    // Public Setters Section
    event AcceptableTokenEnabled(address token, uint256 minSwapAmount);
    function enableAcceptableToken(address token, uint256 minSwapAmount) public onlyOwner {
        _acceptableTokens[token] = Token(minSwapAmount, true);

        emit AcceptableTokenEnabled(token, minSwapAmount);
    }

    event AcceptableTokenDisabled(address token);
    function disableAcceptableToken(address token) public onlyOwner {
        require(_acceptableTokens[token].enabled == true, "This token is not enabled!");

        _acceptableTokens[token].enabled = false;

        emit AcceptableTokenDisabled(token);
    }

    event MinPayOutEthAmountUpdated(uint256 amount);
    function updateMinPayOutEthAmount(uint256 amount) public onlyOwner {
        minPayOutEthAmount = amount;

        emit MinPayOutEthAmountUpdated(amount);
    }

    event BuyBackFeeUpdated(uint8 buyBackFeeInPercents);
    function updateBuyBackFee(uint8 buyBackFeeInPercents) public onlyOwner {
        buyBackFee = buyBackFeeInPercents;

        emit BuyBackFeeUpdated(buyBackFeeInPercents);
    }

    // Public Getters Section

    function isTokenAcceptable(address token) public view returns (bool) {
        return _acceptableTokens[token].enabled;
    }

    receive() external payable {}

    struct Payment {
        address token;
        address payer;
        string uuid;
        uint256 amount;
    }

    struct MasterToken {
        address tokenAddress;
        uint256 burntAmount;
    }

    struct Token {
        uint256 minSwapAmount;
        bool enabled;
    }
}