pragma solidity ^0.8.14;
pragma abicoder v2;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "./LazyMintERC1155.sol";
import "../ERC2981PerTokenRoyalties.sol";

contract GenericERC1155 is
    OwnableUpgradeable,
    LazyNFTERC1155,
    ERC2981PerTokenRoyalties
{
    using Counters for Counters.Counter;
    Counters.Counter private _tokenIds;

    //Name of the token
    string public name;

    //Symbol of the token
    string public symbol;

    string private newContractURI;

    event TokenCreated(
        uint256 _tokenId,
        bytes _tokenURI,
        uint256 _initialSupply,
        address creator
    );
    event CreateERC1155User(address owner, string name, string symbol);

    function initialize(
        string memory _name,
        string memory _symbol,
        string memory _newBaseURI,
        address payable minter,
        address[] memory _whitelistAddresses
    ) public initializer {
        name = _name;
        symbol = _symbol;
        __Ownable_init_unchained();
        __LazyMintERC1155_init(_newBaseURI, minter, _whitelistAddresses);
    }

    function __ERC1155_User_initialise(
        string memory _name,
        string memory _symbol,
        string memory _newBaseURI,
        string memory _newContractURI,
        address[] memory operators
    ) public initializer {
        name = _name;
        symbol = _symbol;
        address[] memory _whitelistAddr = new address[](1);
        _whitelistAddr[0] = tx.origin;
        newContractURI = _newContractURI;

        __Ownable_init_unchained();
        __LazyMintERC1155_init(_newBaseURI, payable(tx.origin), _whitelistAddr);

        for (uint256 i = 0; i < operators.length; i++) {
            setApprovalForAll(operators[i], true);
        }
        emit CreateERC1155User(_msgSender(), name, symbol);
    }

    /// @notice Informs callers that this contract supports ERC2981
    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(LazyNFTERC1155, ERC2981PerTokenRoyalties)
        returns (bool)
    {
        return
            interfaceId == type(IERC2981).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    function contractURI() public view returns (string memory) {
        return newContractURI;
    }

    function createToken(
        string memory _tokenURI,
        uint256 _initialSupply,
        uint256 royalty
    ) public returns (uint256 tokenId) {
        require(bytes(_tokenURI).length != 0, "Token URI cannot be empty");
        _tokenIds.increment();
        _mint(
            msg.sender,
            _tokenIds.current(),
            _initialSupply,
            bytes(_tokenURI)
        );
        _setTokenURI(_tokenIds.current(), string(_tokenURI));
        _setTokenRoyalty(_tokenIds.current(), msg.sender, royalty);
        emit TokenCreated(
            _tokenIds.current(),
            bytes(_tokenURI),
            _initialSupply,
            msg.sender
        );
        return _tokenIds.current();
    }

    function redeem(
        address redeemer,
        uint256 minPrice,
        uint256 quantity,
        string calldata uri,
        uint256 _royalty,
        bytes calldata signature
    ) public payable returns (uint256) {
        NFTVoucher memory voucher = NFTVoucher({
            minPrice: minPrice,
            quantity: quantity,
            uri: uri,
            royalty: _royalty,
            signature: signature
        });
        _tokenIds.increment();
        uint256 royalty = redeem(redeemer, voucher, _tokenIds.current());
        _setTokenRoyalty(_tokenIds.current(), msg.sender, royalty);
        return _tokenIds.current();
    }

    function distributeTokens(
        address[] memory transferAddr,
        uint256[] memory ids,
        uint256[] memory quantity
    ) public returns (bool) {
        require(
            transferAddr.length == ids.length,
            "Addresses and tokenIds length mismatch"
        );
        require(
            transferAddr.length == quantity.length,
            "Addresses and quntity length mismatch"
        );
        for (uint256 i = 0; i < transferAddr.length; i++) {
            require(
                transferAddr[i] != address(0),
                "Cannot transfer to a zero address"
            );
            require(
                balanceOf(msg.sender, ids[i]) >= quantity[i],
                "Insufficient balance"
            );
            string memory tokenuri = uri(ids[i]);
            safeTransferFrom(
                msg.sender,
                transferAddr[i],
                ids[i],
                quantity[i],
                bytes(tokenuri)
            );
        }
        return true;
    }
}

