     *
     * @param _requestId - chainlink request ID
     * @param _value - user total reward amount
     */
    function chainlinkFulfill(bytes32 _requestId, uint256 _value)
        external
        onlyAdmin
    {
        // update requestIdMap the requestId isDone to be true
        RequestStruct memory requestStruct = requestIdMap[_requestId];
        requestStruct.isDone = true;
        requestIdMap[_requestId] = requestStruct;

        // update claimerRewardInfoMap ClaimerRewardStruct detail
        (
            bool isExist,
            uint256 rewardIndex,
            ClaimerRewardStruct memory rewardStruct
        ) = _getTargetReward(_requestId);
        if (isExist) {
            // if the ClaimerRewardStruct already exist, update the totalAmount
            rewardStruct.totalAmount = _value;
            claimerRewardInfoMap[requestStruct.requestUser][
                rewardIndex
            ] = rewardStruct;
        } else {
            // create ClaimerRewardStruct to claimerRewardInfoMap
            rewardStruct.nftType = requestStruct.nftType;
            rewardStruct.rewardAddress = requestStruct.rewardAddress;
            rewardStruct.nftId = requestStruct.nftId;
            rewardStruct.totalAmount = _value;
