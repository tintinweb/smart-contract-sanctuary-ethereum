        setChainlinkOracle(0xCC79157eb46F5624204f47AB42b3906cAA40eaB7);
        jobId = "ca98366cc7314957b8c012c72f05aeeb";
        fee = (1 * LINK_DIVISIBILITY) / 10; // 0,1 * 10**18 (Varies by network and job)
    }

    /**
     * @notice - add approved reward
     *
     * Polygon mainnet details:
     * Link Token: 0xb0897686c545045aFc77CF20eC7A532E3120E0F1
     * Oracle:  (Chainlink DevRel)
     * jobId: ca98366cc7314957b8c012c72f05aeeb
     *
     * Polygon Mumbai details:
     * Link Token: 0x326C977E6efc84E512bB9C30f76E30c160eD06FB
     * Oracle: 0x40193c8518BB267228Fc409a613bDbD8eC5a97b3 (Chainlink DevRel)
     * jobId: ca98366cc7314957b8c012c72f05aeeb
     * jopId: https://docs.chain.link/docs/any-api/testnet-oracles/#job-ids
     *
     * @param linkAddress -
     * @param oracleAddress -
     * @param jobId -
     */
    function setChainlinkInfo(
        address linkAddress,
        address oracleAddress,
        bytes32 jobId
    ) external onlyOwner {
        setChainlinkToken(linkAddress);
        setChainlinkOracle(oracleAddress);
        jobId = jobId;
    }

    function setRewardContract(address _aapRewardContract) external onlyOwner {
        aapRewardContract = AAPReward(_aapRewardContract);
    }

    /**
     * Create a Chainlink request to retrieve API response, find the target
     * data, then multiply by 1000000000000000000 (to remove decimal places from data).
     */
    function CLRequestReward(
        address _requestAddress,
        address _rewardAddress,
        uint256 _nftId
    ) external virtual onlyAdmin returns (bytes32) {
        Chainlink.Request memory req = buildChainlinkRequest(
            jobId,
            address(this),
            this.fulfill.selector
        );

        // Set the URL to perform the GET request on
        req.add(
            "get",
            "https://min-api.cryptocompare.com/data/pricemultifull?fsyms=ETH&tsyms=USD"
        );

        req.add("path", "RAW,ETH,USD,VOLUME24HOUR"); // Chainlink nodes 1.0.0 and later support this format

        // Multiply the result by 1000000000000000000 to remove decimals
        int256 timesAmount = 10**18;
        req.addInt("times", timesAmount);

        // Sends the request
        requestId = sendChainlinkRequest(req, fee);
        return requestId;
    }

    function requestVolumeData() public returns (bytes32 requestId) {
        Chainlink.Request memory req = buildChainlinkRequest(
            jobId,
            address(this),
            this.fulfill.selector
        );

        // Set the URL to perform the GET request on
        req.add(
            "get",
            "https://min-api.cryptocompare.com/data/pricemultifull?fsyms=ETH&tsyms=USD"
        );

        req.add("path", "RAW,ETH,USD,VOLUME24HOUR"); // Chainlink nodes 1.0.0 and later support this format

        // Multiply the result by 1000000000000000000 to remove decimals
        int256 timesAmount = 10**18;
        req.addInt("times", timesAmount);

        // Sends the request
        requestId = sendChainlinkRequest(req, fee);
        return requestId;
    }

    /**
     * Receive the response in the form of uint256
     */
    function fulfill(bytes32 _requestId, uint256 _value)
        public
        recordChainlinkFulfillment(_requestId)
    {
        requestId = _requestId;
        valueTest = 100;
        value = _value;
        // aapRewardContract.chainlinkFulfill(_requestId, _value);
    }

    /**
     * Allow withdraw of Link tokens from the contract
     */
    function withdrawLink() public onlyOwner {
        LinkTokenInterface link = LinkTokenInterface(chainlinkTokenAddress());
        require(
            link.transfer(msg.sender, link.balanceOf(address(this))),
            "Unable to transfer"
        );
    }
}

