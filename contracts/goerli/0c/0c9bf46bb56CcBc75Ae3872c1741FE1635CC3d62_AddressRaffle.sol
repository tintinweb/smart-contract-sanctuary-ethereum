    /// @notice Returns a randomised array of indexes
    /// @param size The length of the array to shuffle
    /// @return shuffled An array of indexes
    function _shuffle(uint256 size) internal view returns (uint256[] memory) {
        require(size > 0, "Size must be greater than 0");
        require(randomNumber > 0, 'Random number not yet generated');

        uint[] memory result = new uint[](size);

        // Initialize array.
        for (uint i; i < size; i++) {
            result[i] = i;
        }

        // Set the last item of the array which will be swapped.
        uint last_item = size - 1;

        // Set the initial randomness based on the provided entropy.
        uint256 _rand = randomNumber;

        // We need to do `size - 1` iterations to completely shuffle the array.
        for (uint256 i = 1; i < size - 1; i++) {
            // Select a number based on the randomness.
            uint selected_item = _rand % last_item;

            // Swap items `selected_item <> last_item`.
            uint aux = result[last_item];
            result[last_item] = result[selected_item];
            result[selected_item] = aux;

            // Decrease the size of the possible shuffle
            // to preserve the already shuffled items.
            // The already shuffled items are at the end of the array.
            last_item--;

            // Generate new randomness.
            _rand = _random(_rand);
        }

        return result;
    }

    /// @notice Generates a random number based on the provided entropy.
    /// @param entropy The entropy to use to generate the random number.
    /// @return The generated random number.
    function _random(uint256 entropy) internal pure returns (uint256) {
        return uint256(keccak256(abi.encodePacked(entropy)));
    }

