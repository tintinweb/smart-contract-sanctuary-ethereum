        // if status id true then a buy function has been initialized.....
        if(_status) {
            require(IERC20(USDT).balanceOf(address(this)) >= _amount, "TPW: Oracle Insufficient");

            TransferHelper.safeApprove(USDT, address(swapRouter), _amount);
        
            ISwapRouter.ExactInputSingleParams memory buyParams = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: USDT,
                tokenOut: TPW,
                // pool fee 0.3%
                fee: 3000,
                recipient: address(this),
                deadline: block.timestamp,
                amountIn: _amount,
                amountOutMinimum: 0,
                // NOTE: In production, this value can be used to set the limit
                // for the price the swap will push the pool to,
                // which can help protect against price impact
                sqrtPriceLimitX96: 0
            });
            amountOut = swapRouter.exactInputSingle(buyParams);
            
            emit Buy(msg.sender, _amount, amountOut, block.timestamp);
        } else {
            require(IERC20(TPW).balanceOf(address(this)) >= _amount, "TPW: Oracle Insufficient");

            TransferHelper.safeApprove(TPW, address(swapRouter), _amount);
        
            ISwapRouter.ExactInputSingleParams memory sellParams = ISwapRouter
            .ExactInputSingleParams({
                tokenIn: TPW,
                tokenOut: USDT,
                // pool fee 0.3%
                fee: 3000,
                recipient: address(this),
                deadline: block.timestamp,
                amountIn: _amount,
                amountOutMinimum: 0,
                // NOTE: In production, this value can be used to set the limit
                // for the price the swap will push the pool to,
                // which can help protect against price impact
                sqrtPriceLimitX96: 0
            });

            amountOut = swapRouter.exactInputSingle(sellParams);
            
            emit Buy(msg.sender, _amount, amountOut, block.timestamp);
        }
    }

