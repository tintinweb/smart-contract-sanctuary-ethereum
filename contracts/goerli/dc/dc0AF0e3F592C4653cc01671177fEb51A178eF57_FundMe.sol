pragma solidity ^0.8.8;

import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

// ðŸ†• - We did all of these steps in order to avoid hardcoding the AggregatorV3Interface address, and to make it so that the AggregatorV3Interface address depends on the Network we are on.

// ðŸ†•5ï¸âƒ£ passing "AggregatorV3Interface priceFeed" argument to the "getPrice" FN
library PriceConverter {
    function getPrice(
        AggregatorV3Interface priceFeed
    ) internal view returns (uint256) {
        (, int256 answer, , , ) = priceFeed.latestRoundData();
        // ETH/USD rate in 18 digit
        return uint256(answer * 10000000000);
    }

    // ðŸ†•4ï¸âƒ£ passing the "aggregatorV3Interface priceFeed" as second argument into the getConversionRate FN
    function getConversionRate(
        uint256 ethAmount,
        AggregatorV3Interface priceFeed
    ) internal view returns (uint256) {
        // ðŸ†•6ï¸âƒ£ passing "priceFeed" argument into the "getPrice" FN
        uint256 ethPrice = getPrice(priceFeed);
        uint256 ethAmountInUsd = (ethPrice * ethAmount) / 1000000000000000000;
        return ethAmountInUsd;
    }
}