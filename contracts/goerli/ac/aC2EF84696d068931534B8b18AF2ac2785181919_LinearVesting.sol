pragma solidity 0.8.8;

import "@openzeppelin/contracts/access/IAccessControl.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165.sol";

import "../interfaces/vesting/ILinearVesting.sol";

import "../utils/CommonChecks.sol";

contract LinearVesting is
    ILinearVesting,
    ERC165,
    CommonChecks,
    ReentrancyGuard
{
    using SafeERC20 for IERC20;
    using SafeCast for uint;

    IAccessControl public accessRegistry;
    IERC20 public rewardToken;
    bytes32 public vestingRole;

    mapping(address => VestingInfo) public vestingInfo;

    uint public totalVested; // total amount of tokens to be vested
    uint public totalClaimed; // total amout of tokens already claimed by users

    modifier onlyRole(bytes32 roleName) {
        require(
            accessRegistry.hasRole(roleName, msg.sender),
            "Vesting: FORBIDDEN"
        );
        _;
    }

    /**
     * @param _rewardToken reward token address
     * @param _accessRegistry access registry address
     */
    constructor(
        address _rewardToken,
        address _accessRegistry,
        string memory _roleName
    )
        notZeroAddress(_rewardToken)
        notZeroAddress(_accessRegistry)
        notEmptyString(_roleName)
    {
        require(
            IERC165(_accessRegistry).supportsInterface(
                type(IAccessControl).interfaceId
            ),
            "Vesting: UNSUPPORTED_ADDRESS"
        );

        accessRegistry = IAccessControl(_accessRegistry);
        rewardToken = IERC20(_rewardToken);
        vestingRole = keccak256(abi.encodePacked(_roleName));
    }

    /**
     * @dev returns amount of tokens unlocked by specified timestamp
     * @param _ts timestamp
     */
    function unlocked(uint32 _ts) external view returns (uint) {
        VestingInfo memory info = vestingInfo[msg.sender];

        return _vestingFunction(info.total, info.start, info.duration, _ts);
    }

    /**
     * @dev returns amount of tokens already withdrawn by user
     */
    function claimed() public view returns (uint) {
        return vestingInfo[msg.sender].claimed;
    }

    /**
     * @dev total amount of tokens to be vested
     */
    function total() external view returns (uint) {
        return vestingInfo[msg.sender].total;
    }

    /**
     * @dev returns amount of tokens available to claim
     */
    function available() public view virtual returns (uint) {
        VestingInfo memory info = vestingInfo[msg.sender];
        return
            _vestingFunction(
                info.total,
                info.start,
                info.duration,
                block.timestamp.toUint32()
            ) - vestingInfo[msg.sender].claimed;
    }

    /**
     * @dev claims and withdraws all the tokens unlocked up to now
     */
    function claim() external virtual {
        VestingInfo memory _info = vestingInfo[msg.sender];
        require(_info.total > 0, "Vesting: NO_RECORD");
        require(_info.start <= block.timestamp, "Vesting: NOT_STARTED_YET");

        uint _amount = _vestingFunction(
            _info.total,
            _info.start,
            _info.duration,
            block.timestamp.toUint32()
        ) - _info.claimed;

        require(_amount > 0, "Vesting: CLAIM_ZERO");

        vestingInfo[msg.sender].claimed += _amount;
        totalClaimed += _amount;

        rewardToken.safeTransfer(msg.sender, _amount);

        emit TokensClaimed(msg.sender, _amount);
    }

    /**
     * @dev adds multiple vesting records which have the same parameters
     * @param _grants list of GrantInfo items
     */
    function bulkGrantTokens(GrantInfo[] memory _grants)
        external
        virtual
        nonReentrant
        onlyRole(vestingRole)
    {
        require(_grants.length < type(uint8).max, "Vesting: TOO_MANY_ACCOUNTS");

        uint8 length = uint8(_grants.length); // cast is safe

        uint _totalAmount;

        for (uint8 i = 0; i < length; ++i) {
            uint amount = _grants[i].amount;
            require(amount > 0, "Vesting: ZERO_AMOUNT");
            _totalAmount += amount;
        }

        require(
            rewardToken.balanceOf(msg.sender) >= _totalAmount,
            "Vesting: NOT_ENOUGH_BALANCE"
        );

        for (uint8 i = 0; i < length; ++i) {
            GrantInfo memory grant = _grants[i];
            _grantTokens(
                grant.account,
                grant.amount,
                grant.start,
                grant.duration
            );
        }

        rewardToken.safeTransferFrom(msg.sender, address(this), _totalAmount);
    }

    /**
     * INTERNAL FUNCTIONS
     */
    function _vestingFunction(
        uint _total,
        uint32 _start,
        uint32 _duration,
        uint32 _ts
    ) internal pure virtual returns (uint) {
        if (_ts <= _start) return 0;
        if (_start + _duration <= _ts) return _total;

        return (_total * (_ts - _start)) / _duration;
    }

    function _grantTokens(
        address _account,
        uint _amount,
        uint32 _start,
        uint32 _duration
    ) internal virtual {
        // nonReentrant not required due to following check
        require(vestingInfo[_account].total == 0, "Vesting: RECORD_EXISTS");

        vestingInfo[_account] = VestingInfo({
            total: _amount,
            claimed: 0,
            start: _start,
            duration: _duration
        });

        totalVested += _amount;

        emit TokensGranted(_account, _amount, _start, _duration);
    }

    /**
     * IERC165 support
     */

    /**
     * @dev check whether interface is supported
     * @param _interfaceId interface id
     */
    function supportsInterface(bytes4 _interfaceId)
        public
        view
        virtual
        override
        returns (bool)
    {
        return
            _interfaceId == type(ILinearVesting).interfaceId ||
            super.supportsInterface(_interfaceId);
    }
}

