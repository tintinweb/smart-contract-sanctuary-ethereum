contract HelixPoolShares is BaseUpgradeablePausable, ERC20PermitUpgradeable, IHelixPoolShares, IVersioned {
    using HelixConfigHelper for IHelixConfig;
    using SafeCastUpgradeable for uint256;
    using SafeCastUpgradeable for int256;

	uint8 internal constant MAJOR_VERSION = 0;
	uint8 internal constant MINOR_VERSION = 1;
	uint8 internal constant PATCH_VERSION = 0;

    // optimize, see https://github.com/ethereum/EIPs/issues/1726#issuecomment-472352728
	uint256 constant public pointsMultiplier = 2**128;

    uint256 public rewardsTokenBalance;

    IHelixConfig public config;
    IHelixTranchedPool public pool;

	uint256 public override id;
	uint256 public override interestSharePrice;
    uint256 public override principalSharePrice;
	uint256 public override principalDeposited;

	mapping(address => int256) public pointsCorrection;
	mapping(address => uint256) public withdrawnPrincipal;
	mapping(address => uint256) public withdrawnInterest;

    function initialize(uint256 _id, address _config, address _pool, string memory _name, string memory _symbol) public override initializer {
        config = IHelixConfig(_config);
        pool = IHelixTranchedPool(_pool);
		id = _id;
		// principal share price will be equal 1 at the beginning
		principalSharePrice = pointsMultiplier;

        address owner = config.protocolAdminAddress();
        __BaseUpgradeablePausable__init(owner);
		__ERC20_init(_name, _symbol);
		__ERC20Permit_init(_name);
    }

	function lockPool() external override onlyPool {
		principalSharePrice = 0;
	}

    /**
	 * @dev mints tokens to an account.
	 * Update pointsCorrection to keep funds unchanged.
	 * @param account The account that will receive the created tokens.
	 * @param value The amount that will be created.
	 */
	function mint(address account, uint256 value) external override onlyPool {
		require(value > 0, "!value");
        super._mint(account, value);
        // pointsCorrection[account] = 0;
		principalDeposited = principalDeposited + value;
    }

    /** 
	 * @dev Internal function that burns an amount of the token of a given account.
	 * Update pointsCorrection to keep funds unchanged.
	 * @param value The amount that will be burnt.
	 */
	function burn(address account, uint256 value) external override onlyPool {
		require(value > 0, "!value");
		super._burn(account, value);
		// pointsCorrection[msg.sender] = pointsCorrection[msg.sender] + (totalSharePrice() * value).toInt256();
		principalDeposited = principalDeposited - value;
	}

    /**
	 * @notice Register a payment of funds in tokens. May be called directly after a deposit is made.
	 * @dev Calls _updateFundsTokenBalance(), whereby the contract computes the delta of the previous and the new 
	 * funds token balance and increments the total received funds (cumulative) by delta by calling _registerFunds()
	 */
	function updateFundsReceived(uint256 _interest, uint256 _principal) external override onlyPool {
		int256 newFunds = _updateFundsTokenBalance();
		if (newFunds > 0) {
			_distributeFunds(_interest, _principal);
		}
	}
    
    /**
	 * @notice Withdraws all available funds for a token holder
	 */
	function withdrawFunds(address _receiver) external override onlyPool {
		uint256 withdrawableFunds = _prepareWithdraw(_receiver);
		require(config.getUSDC().transfer(_receiver, withdrawableFunds), "!withdrawFunds");
		_updateFundsTokenBalance();
	}

	    /**
	 * @notice Emergency function to withdraw stuck tokens. It should be callable only by protocol
	 * @param _token token address
	 * @param _to receiver address
	 * @param _amount token amount
	 */
	function emergencyTokenTransfer(address _token, address _to, uint256 _amount) external override onlyPool {
		bool sent;
        if(_token != address(0)){
			sent = IERC20Upgradeable(_token).transfer(_to, _amount);
		} else {
			(sent, ) = payable(_to).call{value: _amount}("");
		}
		require(sent, "!sent");
    }


    /** 
	 * @notice View the amount of funds that an address can withdraw.
	 * @param _owner The address of a token holder.
	 * @return The amount funds that `_owner` can withdraw.
	 */
	function withdrawableFundsOf(address _owner) public override view returns(uint256, uint256) {
		uint accumulativePrincipal = accumulativePrincipalOf(_owner) - withdrawnPrincipal[_owner];
		uint accumulativeInterest = accumulativeInterestOf(_owner) - withdrawnInterest[_owner];

		return (accumulativeInterest, accumulativePrincipal);
	}

	function withdrawableFundsOfByShares(address _owner, uint256 _amount) public override view returns(uint256, uint256) {
		require(_amount <= balanceOf(_owner), "Exceeds share amount");
		
		uint accumulativePrincipal = accumulativePrincipalOfByShares(_owner, _amount) - withdrawnPrincipal[_owner];
		uint accumulativeInterest = accumulativeInterestOfByShares(_owner, _amount) - withdrawnInterest[_owner];

		return (accumulativeInterest, accumulativePrincipal);
	}
	
	/**
	 * @notice View the amount of funds that an address has withdrawn.
	 * @param _owner The address of a token holder.
	 * @return The amount of funds that `_owner` has withdrawn.
	 */
	function withdrawnInterestOf(address _owner) public view override returns(uint256) {
		return withdrawnInterest[_owner];
	}

	function withdrawnPrincipalOf(address _owner) public view override returns(uint256) {
		return withdrawnPrincipal[_owner];
	}

	/**
	 * @notice View the amount of funds that an address has earned in total.
	 * @dev accumulativeFundsOf(_owner) = withdrawableFundsOf(_owner) + withdrawnFundsOf(_owner)
	 * = (pointsPerShare * balanceOf(_owner) + pointsCorrection[_owner]) / pointsMultiplier
	 * @param _owner The address of a token holder.
	 * @return The amount of funds that `_owner` has earned in total.
	 */
	function accumulativeInterestOf(address _owner) public view returns(uint256) {
		return accumulativeInterestOfByShares(_owner, balanceOf(_owner));
	}

	function accumulativePrincipalOf(address _owner) public view returns(uint256) {
		return accumulativePrincipalOfByShares(_owner, balanceOf(_owner));
	}

	function accumulativeInterestOfByShares(address _owner, uint256 _amount) public view returns(uint256) {
		return ((interestSharePrice * _amount).toInt256() + pointsCorrection[_owner]).toUint256() / pointsMultiplier;
	}

	function accumulativePrincipalOfByShares(address _owner, uint256 _amount) public view returns(uint256) {
		return ((principalSharePrice * _amount).toInt256() + pointsCorrection[_owner]).toUint256() / pointsMultiplier;
	}

    function totalSharePrice() public view returns(uint256) {
        return interestSharePrice + principalSharePrice;
    }

	/// @inheritdoc IVersioned
	function getVersion() external pure override returns (uint8[3] memory version) {
		(version[0], version[1], version[2]) = (MAJOR_VERSION, MINOR_VERSION, PATCH_VERSION);
	}

    /**
	 * @dev Updates the current funds token balance 
	 * and returns the difference of new and previous funds token balances
	 * @return A int256 representing the difference of the new and previous funds token balance
	 */
	function _updateFundsTokenBalance() internal returns (int256) {
		uint256 prevFundsTokenBalance = rewardsTokenBalance;
		rewardsTokenBalance = config.getUSDC().balanceOf(address(this));
		return rewardsTokenBalance.toInt256() - prevFundsTokenBalance.toInt256();
	}

    /** 
	 * @notice Distributes funds to token holders.
	 * @dev It reverts if the total supply of tokens is 0.
	 * It emits the `FundsDistributed` event if the amount of received ether is greater than 0.
	 * About undistributed funds:
	 *   In each distribution, there is a small amount of funds which does not get distributed,
	 *     which is `(msg.value * pointsMultiplier) % totalSupply()`.
	 *   With a well-chosen `pointsMultiplier`, the amount funds that are not getting distributed
	 *     in a distribution can be less than 1 (base unit).
	 *   We can actually keep track of the undistributed ether in a distribution
	 *     and try to distribute it in the next distribution ....... todo implement  
	 */
	function _distributeFunds(uint256 _interest, uint256 _principal) internal {
		require(totalSupply() > 0, "!supply");
		if (_interest > 0) {
			interestSharePrice = interestSharePrice + (_interest * pointsMultiplier / totalSupply());
		}

        if (_principal > 0) {
            principalSharePrice = principalSharePrice + (_principal * pointsMultiplier / totalSupply());
        }
	}

    /**
	 * @notice Prepares funds withdrawal
	 * @dev It emits a `FundsWithdrawn` event if the amount of withdrawn ether is greater than 0.
	 */
	function _prepareWithdraw(address _receiver) internal returns (uint256) {
		uint256 accumulativeInterest; 
		uint256 accumulativePrincipal; 
		uint256 withdrawableDividend;
		(accumulativeInterest, accumulativePrincipal) = withdrawableFundsOf(_receiver);
		withdrawnInterest[_receiver] = withdrawnInterest[_receiver] + accumulativeInterest;
		withdrawnPrincipal[_receiver] = withdrawnPrincipal[_receiver] + accumulativePrincipal;
		// emit FundsWithdrawn(msg.sender, _withdrawableDividend);
		
		withdrawableDividend = accumulativePrincipal + accumulativeInterest;
		return withdrawableDividend;
	}

    /**
	 * @dev Internal function that transfer tokens from one address to another.
	 * Update pointsCorrection to keep funds unchanged.
	 * @param from The address to transfer from.
	 * @param to The address to transfer to.
	 * @param value The amount to be transferred.
	 */
	function _transfer(address from, address to, uint256 value) internal override {
		super._transfer(from, to, value);
		int256 _magCorrection = (totalSharePrice() * value).toInt256();
		pointsCorrection[from] = pointsCorrection[from] + _magCorrection;
		pointsCorrection[to] = pointsCorrection[to] - _magCorrection;
	}

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override {
        
    }

    /**
