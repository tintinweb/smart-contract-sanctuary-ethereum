contract ERC1155SwapFactory is IERC1155Receiver, IERC721Receiver {
    mapping(address => mapping(uint256 => address)) public getPair;
    address[] public allPairs;
    address owner;

    event PairCreated(address _collection, uint256 _tokenId, address _pair, uint256 _pairLength);

    constructor() {
        owner = msg.sender;
    }

    function createERC1155FractionalPair(
        address _collection,
        uint256 _tokenId,
        uint256 _amount,
        string memory _erc20Name,
        string memory _erc20Symbol
    ) external returns (address pair) {
        if (_amount == 0) {
            require(msg.sender == owner, "not owner");
        }
        require(getPair[_collection][_tokenId] == address(0), "PAIR_EXISTS");

        bytes memory _bytecode = type(ERC1155Pair).creationCode;
        bytes memory bytecode = abi.encodePacked(_bytecode, abi.encode(_erc20Name, _erc20Symbol, msg.sender, _collection, _tokenId, _amount));
        bytes32 salt = keccak256(abi.encodePacked(_collection, _tokenId, address(this)));
        assembly {
            pair := create2(0, add(bytecode, 32), mload(bytecode), salt)
        }
        // bytes32 _salt = keccak256(abi.encodePacked(_collection, _tokenId, address(this)));
        // ERC1155Pair erc1155Pair = new ERC1155Pair{salt: _salt}(_erc20Name, _erc20Symbol, msg.sender, _collection, _tokenId, _amount);
        // pair = address(erc1155Pair);

        if (_amount > 0) {
            IERC1155(_collection).safeTransferFrom(msg.sender, address(this), _tokenId, _amount, "");
            IERC1155(_collection).safeTransferFrom(address(this), pair, _tokenId, _amount, "");
        }
        // ERC1155Pair(pair).initialize(msg.sender, _collection, _tokenId, _amount);
        getPair[_collection][_tokenId] = pair;
        allPairs.push(pair);
        emit PairCreated(_collection, _tokenId, pair, allPairs.length);
    }

    function createGalaxyERC721FractionalPair(
        address _collection,
        uint256 _tokenId,
        string memory _erc20Name,
        string memory _erc20Symbol
    ) external returns (address pair) {
        address _tokenOwner = IERC721(_collection).ownerOf(_tokenId);
        if (_tokenOwner != msg.sender) {
            require(msg.sender == owner, "not owner");
        }
        uint256 cid = IGalaxyERC721(_collection).cid(_tokenId);
        require(getPair[_collection][cid] == address(0), "PAIR_EXISTS");

        bytes memory _bytecode = type(ERC721GalaxyPair).creationCode;
        bytes memory bytecode = abi.encodePacked(_bytecode, abi.encode(_erc20Name, _erc20Symbol, msg.sender, _collection, _tokenId, cid));
        bytes32 salt = keccak256(abi.encodePacked(_collection, cid, address(this)));
        assembly {
            pair := create2(0, add(bytecode, 32), mload(bytecode), salt)
        }

        // bytes32 _salt = keccak256(abi.encodePacked(_collection, cid, address(this)));
        // ERC721GalaxyPair eRC721GalaxyPair = new ERC721GalaxyPair{salt: _salt}(_erc20Name, _erc20Symbol, msg.sender, _collection, _tokenId, cid);
        // pair = address(eRC721GalaxyPair);

        if (_tokenOwner == msg.sender) {
            IERC721(_collection).safeTransferFrom(msg.sender, address(this), _tokenId);
            IERC721(_collection).safeTransferFrom(address(this), pair, _tokenId);
        }
        // ERC721GalaxyPair(pair).initialize(msg.sender, _collection, _tokenId, cid);
        getPair[_collection][cid] = pair;
        allPairs.push(pair);
        emit PairCreated(_collection, _tokenId, pair, allPairs.length);
    }

    function allPairsLength() external view returns (uint256) {
        return allPairs.length;
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return IERC721Receiver.onERC721Received.selector;
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    ) external pure override returns (bytes4) {
        return IERC1155Receiver.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] calldata ids,
        uint256[] calldata values,
        bytes calldata data
    ) external pure override returns (bytes4) {
        return IERC1155Receiver.onERC1155BatchReceived.selector;
    }

    function supportsInterface(bytes4 interfaceId) external view returns (bool) {
        return interfaceId == 0x80ac58cd || interfaceId == 0xd9b67a26;
    }
}

