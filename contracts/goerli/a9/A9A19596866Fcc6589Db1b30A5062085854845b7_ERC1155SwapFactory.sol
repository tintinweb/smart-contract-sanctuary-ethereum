contract ERC721GalaxyPair is ERC20, IERC721Receiver {
    address public immutable factory;
    address collection;
    uint256 cid;
    uint256 immutable rate = 1000;
    uint256[] tokenIds;

    constructor(
        string memory _name,
        string memory _symbol,
        address _user,
        address _collection,
        uint256 _tokenId,
        uint256 _cid
    ) ERC20(_name, _symbol) {
        factory = msg.sender;
        collection = _collection;
        cid = _cid;
        address _tokenOwner = IERC721(collection).ownerOf(_tokenId);
        if (_tokenOwner == _user) {
            tokenIds.push(_tokenId);
            _mint(_user, rate * (10**uint256(decimals())));
        }
    }

    // function initialize(
    //     address _user,
    //     address _collection,
    //     uint256 _tokenId,
