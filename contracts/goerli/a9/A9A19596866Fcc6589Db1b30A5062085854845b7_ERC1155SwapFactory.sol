    //         _mint(_user, rate * (10**uint256(decimals())));
    //     }
    // }

    function addLP(uint256 tokenId) external {
        require(IGalaxyERC721(collection).cid(tokenId) == cid, "not same cid");
        IERC721(collection).safeTransferFrom(msg.sender, address(this), tokenId);
        _mint(msg.sender, rate * (10**uint256(decimals())));
    }

    function withdrawNFT(uint256 amount) external {
        uint256 tokenAmount = amount * rate * (10**uint256(decimals()));
        _burn(msg.sender, tokenAmount);
        for (uint256 i = 0; i < amount; i++) {
            uint256 _tokenId = tokenIds[tokenIds.length - 1];
            tokenIds.pop();
            IERC721(collection).safeTransferFrom(address(this), msg.sender, _tokenId);
        }
    }

