/**
 * @title Zapper
 * @author Maikel Ordaz
 * @notice A contract to deposit and withdraw in a Beefy UniswapV2 LP vault using zapper
 * Note: with zapper the asset is converted to the LP Token by swapping and adding liquidity
 */

pragma solidity ^0.8.7;

// IMPORTS CONTRACTS

// IMPORTS INTERFACES
import "./interfaces/IWETH.sol";
import "./interfaces/IBeefyVault.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

// IMPORTS LIBRARIES
import "@uniswap/lib/contracts/libraries/Babylonian.sol";
import "@uniswap/v3-core/contracts/libraries/LowGasSafeMath.sol";

// ERRORS
error Zapper__InvalidToken();
error Zapper__TokenNotApproved();
error Zapper__InsignificantAmount();
error Zapper__InsufficientAmount();
error Zapper__InvalidPair();
error Zapper_ReservesToLow();
error Zapper__NothingToWithdraw();

// CONTRACT
contract Zapper {
    // LIBRARIES USED
    using LowGasSafeMath for uint256;
    using SafeERC20 for IERC20;
    using SafeERC20 for IBeefyVault;
    // STATE VARIABLES
    IUniswapV2Router02 public immutable router;
    address public immutable i_WMATIC;
    uint256 private constant MIN_AMOUNT = 10;

    // EVENTS
    event NewDeposit(address beefyVault);
    event NewWithdraw(address beefyVault);

    // MAPPING
    // user address => deposited amount
    mapping(address => uint256) private depositedAmount;

    // CONSTRUCTOR

    constructor(address _router, address _WMATIC) {
        router = IUniswapV2Router02(_router);
        i_WMATIC = _WMATIC;
    }

    receive() external payable {
        assert(msg.sender == i_WMATIC);
    }

    // MAIN FUNCTIONS
    /**
     * @notice A method t odeposit MATIC
     * @param beefyVault The selected vault
     * @param tokenAmountOutMin Minimum expected of moo token
     */
    function depositMATIC(address beefyVault, uint256 tokenAmountOutMin) external payable {
        if (msg.value < MIN_AMOUNT) {
            revert Zapper__InsignificantAmount();
        }

        IWETH(i_WMATIC).deposit{value: msg.value}();

        _swapAndStake(beefyVault, tokenAmountOutMin);
        depositedAmount[msg.sender] += msg.value;
        emit NewDeposit(beefyVault);
    }

    /**
     * @notice A method to deposit in tokens
     * @dev Only allow WMATIC
     * @param beefyVault the selected vault
     * @param tokenAmountOutMin The minimum expected from moo token
     * @param tokenIn the token to deposit
     * @param tokenInAmount The amount of token deposited
     */
    function depositWMatic(
        address beefyVault,
        uint256 tokenAmountOutMin,
        address tokenIn,
        uint256 tokenInAmount
    ) external {
        if (tokenInAmount <= MIN_AMOUNT) {
            revert Zapper__InsignificantAmount();
        }
        if (
            IERC20(tokenIn).allowance(msg.sender, address(this)) <= tokenInAmount ||
            tokenIn != i_WMATIC
        ) {
            revert Zapper__TokenNotApproved();
        }

        IERC20(tokenIn).safeTransferFrom(msg.sender, address(this), tokenInAmount);

        _swapAndStake(beefyVault, tokenAmountOutMin);
        depositedAmount[msg.sender] = tokenInAmount;
        emit NewDeposit(beefyVault);
    }

    function withdraw(address beefyVault, uint256 WMaticOutMin) external {
        if (depositedAmount[msg.sender] == 0) {
            revert Zapper__NothingToWithdraw();
        }
        uint256 withdrawAmount = depositedAmount[msg.sender];
        (IBeefyVault vault, IUniswapV2Pair pair) = _getVaultPair(beefyVault);
        address token0 = pair.token0();
        address token1 = pair.token1();
        if (token0 != i_WMATIC && token1 != i_WMATIC) {
            revert Zapper__InvalidToken();
        }

        vault.safeTransferFrom(msg.sender, address(this), withdrawAmount);
        vault.withdraw(withdrawAmount);
        _removeLiquidity(address(pair), address(this));

        address swapToken = token1 == i_WMATIC ? token0 : token1;
        address[] memory path = new address[](2);
        path[0] = swapToken;
        path[1] = i_WMATIC;

        _approveTokenIfNeeded(path[0], address(router));
        router.swapExactTokensForTokens(
            IERC20(swapToken).balanceOf(address(this)),
            WMaticOutMin,
            path,
            address(this),
            block.timestamp
        );

        _returnAssets(path);
        depositedAmount[msg.sender] = 0;
        emit NewWithdraw(beefyVault);
    }

    /**
     * @notice A method to swap and stak on LP
     * @param beefyVault The selected vault
     * @param tokenAmountOutMin The minimum LP token expected
     */
    function _swapAndStake(address beefyVault, uint256 tokenAmountOutMin) private {
        (IBeefyVault vault, IUniswapV2Pair pair) = _getVaultPair(beefyVault);

        (uint256 reserveA, uint256 reserveB, ) = pair.getReserves();
        if (reserveA < MIN_AMOUNT && reserveB < MIN_AMOUNT) {
            revert Zapper_ReservesToLow();
        }

        bool isInputA = pair.token0() == i_WMATIC;
        if (!isInputA || pair.token1() != i_WMATIC) {
            revert Zapper__InvalidToken();
        }

        address[] memory path = new address[](2);
        path[0] = i_WMATIC;
        path[1] = isInputA ? pair.token1() : pair.token0();

        uint256 fullInvestment = IERC20(i_WMATIC).balanceOf(address(this));
        uint256 swapAmountIn;
        if (isInputA) {
            swapAmountIn = _getSwapAmount(fullInvestment, reserveA, reserveB);
        } else {
            swapAmountIn = _getSwapAmount(fullInvestment, reserveB, reserveA);
        }

        _approveTokenIfNeeded(path[0], address(router));
        uint256[] memory swapedAmounts = router.swapExactTokensForTokens(
            swapAmountIn,
            tokenAmountOutMin,
            path,
            address(this),
            block.timestamp
        );

        _approveTokenIfNeeded(path[1], address(router));
        (, , uint256 amountLiquidity) = router.addLiquidity(
            path[0],
            path[1],
            fullInvestment.sub(swapedAmounts[0]),
            swapedAmounts[1],
            1,
            1,
            address(this),
            block.timestamp
        );

        _approveTokenIfNeeded(address(pair), address(vault));
        vault.deposit(amountLiquidity);

        vault.safeTransfer(msg.sender, vault.balanceOf(address(this)));
        _returnAssets(path);
    }

    /**
     * @notice A method to return tokens
     */
    function _returnAssets(address[] memory tokens) private {
        uint256 balance;
        for (uint256 i; i < tokens.length; i++) {
            balance = IERC20(tokens[i]).balanceOf(address(this));
            if (balance > 0) {
                if (tokens[i] == i_WMATIC) {
                    IWETH(i_WMATIC).withdraw(balance);
                    (bool success, ) = msg.sender.call{value: balance}(new bytes(0));
                    require(success);
                } else {
                    IERC20(tokens[i]).safeTransfer(msg.sender, balance);
                }
            }
        }
    }

    /**
     * @notice A method to approve allowance
     * @param token the tokens address
     * @param spender the spenders address
     */
    function _approveTokenIfNeeded(address token, address spender) private {
        if (IERC20(token).allowance(address(this), spender) == 0) {
            IERC20(token).safeApprove(spender, type(uint256).max);
        }
    }

    function _removeLiquidity(address pair, address to) private {
        IERC20(pair).safeTransfer(pair, IERC20(pair).balanceOf(address(this)));
        (uint256 amount0, uint256 amount1) = IUniswapV2Pair(pair).burn(to);

        if (amount0 <= MIN_AMOUNT && amount1 <= MIN_AMOUNT) {
            revert Zapper__InsufficientAmount();
        }
    }

    // VIE / PURE FUNCTIONS

    /**
     * @notice A view function to get the minimum deposit amount
     */
    function getMinAmount() public view returns (uint256) {
        return MIN_AMOUNT;
    }

    function getAmountByUser(address user) public view returns (uint256) {
        return depositedAmount[user];
    }

    /**
     * @notice A method to calculate how much to swap
     */
    function _getSwapAmount(
        uint256 investmentA,
        uint256 reserveA,
        uint256 reserveB
    ) private view returns (uint256 swapAmount) {
        uint256 halfInvestment = investmentA / 2;
        uint256 nominator = router.getAmountOut(halfInvestment, reserveA, reserveB);
        uint256 denominator = router.quote(
            halfInvestment,
            reserveA.add(halfInvestment),
            reserveB.sub(nominator)
        );
        swapAmount = investmentA.sub(
            Babylonian.sqrt((halfInvestment * halfInvestment * nominator) / denominator)
        );
    }

    /**
     * @notice A method to get the correct Uniswap token pair from the vault
     */
    function _getVaultPair(address beefyVault)
        private
        view
        returns (IBeefyVault vault, IUniswapV2Pair pair)
    {
        vault = IBeefyVault(beefyVault);

        try vault.want() returns (address pairAddress) {
            pair = IUniswapV2Pair(pairAddress); // Vault V6
        } catch {
            pair = IUniswapV2Pair(vault.token()); // Vault V5
        }

        if (pair.factory() != router.factory()) {
            revert Zapper__InvalidPair();
        }
    }
}