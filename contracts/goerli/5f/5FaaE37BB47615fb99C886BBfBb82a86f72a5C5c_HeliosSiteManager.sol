import "openzeppelin-contracts/contracts/token/ERC20/IERC20.sol";
import "openzeppelin-contracts-upgradeable/contracts/proxy/utils/Initializable.sol";
import "openzeppelin-contracts-upgradeable/contracts/access/OwnableUpgradeable.sol";
import "openzeppelin-contracts-upgradeable/contracts/security/PausableUpgradeable.sol";
import "openzeppelin-contracts-upgradeable/contracts/proxy/utils/UUPSUpgradeable.sol";
import "./HeliosSite.sol";

import {TransparentUpgradeableProxy} from
    "openzeppelin-contracts/contracts/proxy/transparent/TransparentUpgradeableProxy.sol";

/**
 * @title HeliosSiteManager contract
 * @notice Main entry point for site operators and backers.
 * @author Helios
 */
contract HeliosSiteManager is Initializable, UUPSUpgradeable, PausableUpgradeable, OwnableUpgradeable {
    event HeliosSiteCreated(address indexed siteOperator, address indexed heliosSite);

    mapping(address => address) private heliosSitesMapping;

    address public usdcAddr;

    constructor() {
        _disableInitializers();
    }

    function initialize(address _usdcAddr) public initializer {
        __UUPSUpgradeable_init();
        __Pausable_init();
        __Ownable_init();

        usdcAddr = _usdcAddr;
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    /**
     * @notice Create a new HeliosSite contract.
     */
    function createHeliosSite(
        address _siteOperator,
        uint256 _wattsMax,
        uint256 _fundingDurationInDays,
        uint256 _payoutIntervalInDays,
        uint256 _payoutRounds,
        uint256[] memory _tokenWatts,
        uint256[] memory _tokenPrices,
        string memory _uri
    ) public returns (address heliosSiteProxyAddr) {
        // 1. Deploy new instance of HeliosSite contract and initiate it through a proxy.
        // 2. Update the relevant indices.
        // 3. Emit relevant events
        // 4. Return the address of the newly created proxy

        // TODO: Consider using the clone factory pattern to reduce gas cost of contract creation.
        // https://blog.logrocket.com/cloning-solidity-smart-contracts-factory-pattern/

        HeliosSite heliosSite = new HeliosSite();
        bytes memory data = abi.encodeWithSignature(
            "initialize(address,uint256,uint256,uint256,uint256,uint256[],uint256[],string)",
            _siteOperator,
            _wattsMax,
            _fundingDurationInDays,
            _payoutIntervalInDays,
            _payoutRounds,
            _tokenWatts,
            _tokenPrices,
            _uri
        );

        TransparentUpgradeableProxy proxy = new TransparentUpgradeableProxy(address(heliosSite), _getAdmin(), data);
        heliosSiteProxyAddr = address(proxy);
        heliosSitesMapping[heliosSiteProxyAddr] = heliosSiteProxyAddr;
        emit HeliosSiteCreated(_siteOperator, heliosSiteProxyAddr);
    }

    /**
     * @notice Function for the Backers to purchase the capacity from the HeliosSite and get NFTs in return.
     * @param tokenIds Which capacity token to be purchased.
     * @param tokenAmounts The corresponding amounts of the capacity token to be purchased.
     */
    function buyHeliosSiteCapacity(address heliosSiteAddress, uint256[] memory tokenIds, uint256[] memory tokenAmounts)
        public
        onlyValidHeliosSite(heliosSiteAddress)
    {
        // TODO: Do we need to support that this function can be called from a contract instead?
        // 1. Calculate the total price of the given capacity tokens.
        // 2. Check the HeliosSite has enough remaining capacity for purchasing.
        // 3. Transfer the given amount of fund from sender to the HeliosSite.
        // 4. Mint corresponding NFTs to the sender's account.

        HeliosSite heliosSite = HeliosSite(heliosSiteAddress);
        require(heliosSite.isFundingPeriod(), "Not in funding period");
        uint256 totalPrice = heliosSite.calculateTotalPrice(tokenIds, tokenAmounts);
        IERC20 usdc = IERC20(usdcAddr);
        bool success = usdc.transferFrom(msg.sender, heliosSiteAddress, totalPrice);
        require(success, "Failed to transfer USDC fund");
        heliosSite.mintBatch(msg.sender, tokenIds, tokenAmounts, "");
    }

    modifier onlyValidHeliosSite(address heliosSiteAddress) {
        require(heliosSitesMapping[heliosSiteAddress] == heliosSiteAddress, "HeliosSite address is not found");
        _;
    }
}

