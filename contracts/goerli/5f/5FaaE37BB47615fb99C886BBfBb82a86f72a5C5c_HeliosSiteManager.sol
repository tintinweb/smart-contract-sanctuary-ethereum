    ERC1155Upgradeable,
    PausableUpgradeable,
    UUPSUpgradeable,
    ERC1155BurnableUpgradeable,
    ERC1155SupplyUpgradeable,
    OwnableUpgradeable
{
    //
    address public siteOperator;
    // The total amount of watts are offered for investing.
    uint256 public wattsMax;
    // The length of the period when this HeliosSite will be open for investing.
    uint256 public fundingDurationInDays;
    // How frequent the payout should be made. E.g. 30 means a payout roughly every month.
    uint256 public payoutIntervalInDays;
    // The total payout rounds. I.e. the total payout period is `payoutIntervalInDays * payoutRounds` days.
    uint256 public payoutRounds;
    // HeliosSite capacity are subscribed in fixed packages of watts. e.g. 500kW = 500000W, 1000kW = 1000000W, etc.
    // This array definese the available packege sizes in watts.
    uint256[] public tokenWatts;
    // This array definese the unit price of each token in USDC.
    uint256[] public tokenPrices;

    // The following can be adjusted after creation

    // When the funding period starts.
    // Only changable but the site operator before the period starts.
    uint256 public fundingStartTime;
    // When the payout period starts.
    // Only changable but the site operator before the period starts.
    uint256 public payoutStartTime;

    uint256 public wattsPurchased = 0;

    constructor() {
        _disableInitializers();
    }

    function initialize(
        address _siteOperator,
        uint256 _wattsMax,
        uint256 _fundingDurationInDays,
        uint256 _payoutIntervalInDays,
        uint256 _payoutRounds,
        uint256[] memory _tokenWatts,
        uint256[] memory _tokenPrices,
        string memory _uri
    ) public initializer {
        __UUPSUpgradeable_init();
        __Pausable_init();
        __Ownable_init();
        __ERC1155_init(_uri);
        siteOperator = _siteOperator;
        wattsMax = _wattsMax;
        fundingDurationInDays = _fundingDurationInDays;
        payoutIntervalInDays = _payoutIntervalInDays;
        payoutRounds = _payoutRounds;
        tokenWatts = _tokenWatts;
        tokenPrices = _tokenPrices;
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    // ------------------------------------------------------------
    //               ERC 1155 related functions
    // ------------------------------------------------------------

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function mintBatch(address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data)
        public
        onlyOwner
    {
        // 1. calcuate the total watts to be subscribed.
        // 2. check the wattsMax will not be exeeded.
        // 3. update the wattsPurchased.
        // 4. mint the NFTs

        uint256 totalWatts = 0;
        for (uint256 i = 0; i < ids.length; i++) {
            totalWatts += tokenWatts[ids[i]] * amounts[i];
        }
        require(wattsPurchased + totalWatts <= wattsMax, "Not enough remaining capacity");

        wattsPurchased += totalWatts;
        _mintBatch(to, ids, amounts, data);
    }

    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal override(ERC1155Upgradeable, ERC1155SupplyUpgradeable) whenNotPaused {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }

    // ------------------------------------------------------------
    //             Site Operator management functions
    // ------------------------------------------------------------

    modifier onlySiteOperator() {
        require(msg.sender == siteOperator || msg.sender == owner(), "Not site operator or owner");
        _;
    }

    modifier verifyFundingAndPayoutPeriods() {
        _;
        require(
            fundingStartTime == 0 || payoutStartTime == 0
                || payoutStartTime + payoutIntervalInDays * 1 days > fundingStartTime + fundingDurationInDays * 1 days,
            "Payout period ends before funding period ends"
        );
    }

    function setFundingStartTime(uint256 newFundingStartTime) public onlySiteOperator verifyFundingAndPayoutPeriods {
        require(fundingStartTime == 0 || fundingStartTime > block.timestamp, "Funding period has already started");
        require(newFundingStartTime > block.timestamp, "New funding start time is in the past");
        fundingStartTime = newFundingStartTime;
    }

    function setPayoutStartTime(uint256 newPayoutStartTime) public onlySiteOperator verifyFundingAndPayoutPeriods {
        require(payoutStartTime == 0 || payoutStartTime > block.timestamp, "Payout period has already started");
        require(newPayoutStartTime > block.timestamp, "New payout start time is in the past");
        payoutStartTime = newPayoutStartTime;
    }

    // ------------------------------------------------------------
    //                    Helper functions
    // ------------------------------------------------------------

    function fundingPeriodStarted() public view returns (bool) {
        return fundingStartTime > 0 && fundingStartTime < block.timestamp;
    }

    function fundingPeriodEnded() public view returns (bool) {
        return fundingPeriodStarted() && fundingStartTime + fundingDurationInDays * 1 days < block.timestamp;
    }

    function isFundingPeriod() public view returns (bool) {
        return fundingPeriodStarted() && !fundingPeriodEnded();
    }

    function payoutPeriodStarted() public view returns (bool) {
        return payoutStartTime > 0 && payoutStartTime < block.timestamp;
    }

    function payoutPeriodEnded() public view returns (bool) {
        return payoutPeriodStarted() && payoutStartTime + payoutIntervalInDays * payoutRounds * 1 days < block.timestamp;
    }

    function isPayoutPeriod() public view returns (bool) {
        return payoutPeriodStarted() && !payoutPeriodEnded();
    }

    function calculateTotalPrice(uint256[] memory ids, uint256[] memory amounts)
        public
        view
        returns (uint256 totalPrice)
    {
        for (uint256 i = 0; i < ids.length; i++) {
            totalPrice += tokenPrices[ids[i]] * amounts[i];
        }
    }

    function wattsRemaining() public view returns (uint256) {
      return wattsMax - wattsPurchased;
    }

    /**
     * @notice Transfer the investment fund to the site operator account. This can only be done after the funding period ends.
     * @param amount The amount in USDC that to be withdrew
     */
    function withdraw(uint256 amount) public onlySiteOperator {
        // 1. Check the funding period has finished.
        // 2. Transfer given amount of USDC from this contract to the sender's account.
        require(false, "Unimplemented");

    }

    /**
     * @notice Make payout to the site investors.
     * @param round The number of the round
     * @param amount The amount in USDC that to be withdrew
     */
    function makePayout(uint64 round, uint256 amount) public {}
}