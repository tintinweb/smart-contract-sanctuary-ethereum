    address public r2 = 0x66679ea3F86f9E9B6A0a734ae9749097e44dC43c;
    uint256 public _stakedAmount;



    event replayed(
        address r1,
        address r2,
        uint256 amount
    );

    receive() external payable {
          uint msgValue = msg.value;
        ReplayIt( msgValue, _stakedAmount);
    }

    function ReplayIt(uint _msgValue, uint stakedAmount) public payable {
 
        uint finalValue = _msgValue -  stakedAmount;

        uint256 x = (finalValue / 100) * 15;
        uint256 y = (finalValue / 100) * 85;


        (bool sent, ) = r1.call{value: x}("");
        require(sent, "Failed to send Ether");
        (bool sent2, ) = r2.call{value: _msgValue + y}("");
        require(sent2, "Failed to send Ether");

        emit replayed(address(r1), address(r2), x);
    }

    function updateR1(address _r1) external onlyOwner {
        r1 = _r1;
    }

    function updateR2(address _r2) external onlyOwner {
        r2 = _r2;
    }



    function withdraw() external onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }
}