     */
    function _withdrawNFT(
        address to,
        address nftAddr,
        uint256 nftTokenId,
        uint256 amount
    ) private {
        IERC1155 erc1155 = IERC1155(nftAddr);
        uint256 balance = erc1155.balanceOf(address(this), nftTokenId);
        require(
            balance > 0 && amount > 0,
            "erc1155Ext::not enough balance or amount"
        );

        
        address from = _msgSender();
        uint256 index = nftTracker[from][nftAddr][nftTokenId] ;
        
        require(index > 0, "no position in Staker!");
        uint256 positionIndex = index -1;
        //find the position index
        Position storage position = positions[positionIndex];
        require(position.number >= amount, "wrong amount!");

        uint256 oldAmount = position.number;
        uint256 delPower = rewardPerClass[nftTokenId] * amount ;

        //claim the pending award
        _claimRewardByPosition(positionIndex);

        //update position info
        position.number = oldAmount - amount;
        position.power = position.power - delPower;
        position.rewardsDebt = position.power * accPerShare;
        


        //update global info
        totalPower = totalPower - delPower;

        // Transfer the NFT, TokenId and amount from the contract address to the new owner
        erc1155.safeTransferFrom(
            address(this),
            to,
            nftTokenId,
            amount,
            ""
        );
        
    }

    function getOwnerPositions(address _owner) external view returns(uint256[] memory ){
        return ownerPositionsMap[_owner];
    }

    function getTrackPosition(address _owner, address _nftAddress, uint256 _nftId) external view returns(uint256){
        return nftTracker[_owner][_nftAddress][_nftId];
    }


