pragma solidity ^0.8.12;


import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import '@openzeppelin/contracts/security/ReentrancyGuard.sol';
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "../interfaces/IERC1155Burnable.sol";

//import "../interfaces/IVRFProxy.sol";
//import "./ChampionJockeyClub.sol";
contract SoulStaker is  AccessControl,Pausable, ReentrancyGuard {
    

    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    

    uint256 public lastDistributionTime;
    uint256 public accPerShare;
    uint256 public totalPower;
    uint256 public totalDistributed;

    
    //(nftAddress => (tokenId => nft amount))
    mapping(address => mapping(uint256 => uint256)) public amountOfStakingNftId;

    
    //position info
    struct Position {
		
		
		address nftAddress;
        uint256 tokenId; // nft token id
        uint256 number; //nft staking number

        uint256 power;
        uint256 rewardsDebt; //virtual rewards have claimed
         
    }

    Position[] private positions;

    //owner =>  positions
    mapping(address => uint256[]) private ownerPositionsMap;

    // owner => (nftAddress => (tokenId => positionIndex+1)).
    mapping(address => mapping(address => mapping(uint256 => uint256)))
        private nftTracker;

    uint256 private constant CJC_COIN_PRECISION = 1e18;

    uint256 private constant N_POOL_ID = 0;
    uint256 private constant R_POOL_ID = 1;
    uint256 private constant SR_POOL_ID = 2;
    uint256 private constant SSR_POOL_ID = 3;
    uint256 private constant LR_POOL_ID = 4;
    uint256 private constant UR_POOL_ID = 5;
    

    uint256[7] private rewardPerClass = [0,4,9,13,19,23,29];
    uint256 private constant totalShare = 97;


    //  nft address => bool staking allowed
    mapping(address => bool) public nftStakingAllowed;

    //reward token address
    IERC20 public  cjcToken;


    //events 
    event RewardClaimed(address to, uint256 reward);




     constructor(address _cjcTokenAddress) {
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _grantRole(OPERATOR_ROLE, _msgSender());
        cjcToken = IERC20(_cjcTokenAddress);
        
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes memory
    ) public  returns (bytes4) {
        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public  returns (bytes4) {
        return this.onERC1155BatchReceived.selector;
    }

    function distributeAwards(uint256 _amount) external onlyRole(OPERATOR_ROLE) {
        
        uint256 perShare = 0;
        if(totalPower !=0){
            perShare = (_amount * CJC_COIN_PRECISION) / totalPower;
        }
       
        accPerShare += perShare;
        totalDistributed = totalDistributed + _amount;
    }

    /**
     * configure nft address allowed to stake
     */
    function  setNftStakingAllowed(address _nftAddress, bool flag) public onlyRole(OPERATOR_ROLE) {

        nftStakingAllowed[_nftAddress] = flag;
    }


    /**
     * view  soul nft address refer to nft address 
     */
    function getNftStakingAllowed(address _nftAddress) external view returns (bool){
        return nftStakingAllowed[_nftAddress];
    }


    /**
     * claim an user all reward 
     */
    function claimAllReward() external nonReentrant whenNotPaused{
        address owner = _msgSender();
        uint256 length = ownerPositionsMap[owner].length;
        for(uint256 i=0; i<length; i++){
            _claimRewardByPosition(ownerPositionsMap[owner][i]);

        }
    }
    

function claimRewardByPosition(uint256 positionIndex)external nonReentrant whenNotPaused{
    _claimRewardByPosition(positionIndex);

}


    /**
     * claim one position reward 
     */
    function _claimRewardByPosition(uint256 positionIndex) internal {
            
        address owner = _msgSender();

        Position storage position = positions[positionIndex];

        uint256 index = nftTracker[owner][position.nftAddress][position.tokenId] -1 ;

        require(index==positionIndex,"the position is not owned by the message sender! ");

        uint256 reward = (position.power * accPerShare - position.rewardsDebt) / CJC_COIN_PRECISION;
        
        
        //update position state
        position.rewardsDebt = position.power * accPerShare;
       

        //tranfer tokener
        cjcToken.transfer(owner, reward);

        //event
        emit RewardClaimed(owner, reward);

    }

/**
     * view  one position reward Info 
     */
    function getRewardInfoByPosition(uint256 positionIndex)
        public
        view
        returns (uint256 ){
        Position memory position = positions[positionIndex];

        return (position.power * accPerShare - position.rewardsDebt) / CJC_COIN_PRECISION;

    }

    /**
     * view  an user all reward to claim 
     */
    function getUserAllReward()
        external
        view
        returns (uint256 ){
            address owner = _msgSender();
            uint256 totalReward = 0;
            uint256 length = ownerPositionsMap[owner].length;

            for(uint256 i=0; i<length; i++){
                uint256 positionIndex = ownerPositionsMap[owner][i];
            
                totalReward = totalReward + getRewardInfoByPosition(positionIndex);
            }


            return totalReward;
    }


    /**
     * @notice staking for an NFT collected by the staker.
     * @param nftAddr The NFT address.
     * @param id The token id.
     * @param owner The address of the owner.
     * @param amount of the tokenID
     */
    function stakingNft(
		address owner,
        address nftAddr,
        uint256 id,
        uint256 amount
    ) external nonReentrant whenNotPaused{
        require(owner==_msgSender(),"msgSender is not owner!");
        require(amount > 0,"not enough nft");
        _saveNft(nftAddr, id, owner, amount);
    }





    /**
     * @notice Helper function to update the staker states for an NFT collected by the staker.
     * @param nftAddr The NFT address.
     * @param nftTokenId The token id.
     * @param owner The address of the owner.
     * @param amount of the tokenID
     */
    function _saveNft(
        address nftAddr,
        uint256 nftTokenId,
        address owner,
        uint256 amount
    ) private {
        
        // Save the asset address and tokenId
        // Transfer the NFT, TokenId and amount from the owner to the contract address
        IERC1155 erc1155 = IERC1155(nftAddr);
        erc1155.safeTransferFrom(owner,address(this),nftTokenId,amount,"");


        //for position
        //uint256 timestamp = block.timestamp;
       
        uint256 number = nftTracker[owner][nftAddr][nftTokenId];

        uint256 newPower = rewardPerClass[nftTokenId] * amount;

        //check if a new position
        if( number ==0 ){

            
            uint256 awardDebet  = accPerShare * newPower;

            //add a new position
            Position memory tempPosition = Position(nftAddr, nftTokenId, amount, newPower, awardDebet);
            positions.push(tempPosition);

            //add position index to owner map
            uint256 positionIndex = positions.length-1;
            ownerPositionsMap[owner].push(positionIndex);

            // Track the actual owner per Token Id and amount
            nftTracker[owner][nftAddr][nftTokenId] = positionIndex + 1;

            
        }else{

            uint256 index = number - 1;

            Position storage position = positions[index];

            uint256 oldAmount = position.number;
            
            //claim the pending award
            _claimRewardByPosition(index);

            //update position data
            position.number = oldAmount + amount;
            position.power = position.power + newPower;
            position.rewardsDebt = position.power * accPerShare;
            

        }

            //update global info
            totalPower = totalPower + newPower;

    }


    function  withdrawNFT(
        address to,
        address nftAddr,
        uint256 id,
        uint256 amount
    )external nonReentrant whenNotPaused{
        _withdrawNFT(to, nftAddr, id, amount);
    }



    /**
     * @notice Transfers the NFT token from the staker address to the new owner.
     * @notice It also updates the internal state to keep track of the all the NFTs collected by the staker.
