pragma solidity ^0.8.9;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

error MirrorSites__TransferFailed();
error MirrorSites__InsufficientMsgValue();

contract MirrorSites is Ownable, ReentrancyGuard {
    using Counters for Counters.Counter;

    Counters.Counter private mirrorSiteCounter;

    struct MirrorSiteBundle {
        string websiteUrl;
        address websiteOwnerAddress;
        address referrerAddress;
        bool acceptedByRootOwner;
    }

    uint256 public priceOfApplication;

    mapping(uint256 => MirrorSiteBundle) private mirrorSitesMapping;

    constructor() {
        priceOfApplication = 500000000000000000; // 0.5 ETH
    }

    function applyRegisterMirrorSite(string memory _website, address _reffererAddress) external payable nonReentrant {
        if (msg.value < priceOfApplication) {
            revert MirrorSites__InsufficientMsgValue();
        }

        uint256 mirrorSiteId = mirrorSiteCounter.current();
        mirrorSitesMapping[mirrorSiteId] = MirrorSiteBundle(_website, msg.sender, _reffererAddress, false);
        mirrorSiteCounter.increment();

        bool success;
        (success, ) = _reffererAddress.call{value: priceOfApplication / 5}("");

        if (!success) {
            revert MirrorSites__TransferFailed();
        }

        (success, ) = owner().call{value: priceOfApplication - priceOfApplication / 5}("");

        if (!success) {
            revert MirrorSites__TransferFailed();
        }
    }

    function getMirrorSiteInfo(uint256 _mirrorSiteId) external view returns (MirrorSiteBundle memory) {
        return mirrorSitesMapping[_mirrorSiteId];
    }

    function getMirrorSitesByOwner(address _owner) external view returns (MirrorSiteBundle[] memory) {
        uint256 ownersMirrorSitesLength = 0;
        uint256 currentMirrorSiteLength = mirrorSiteCounter.current();

        for (uint256 i = 0; i < currentMirrorSiteLength; i++) {
            if (mirrorSitesMapping[i].websiteOwnerAddress == _owner) {
                ownersMirrorSitesLength++;
            }
        }

        MirrorSiteBundle[] memory ownersMirrorSiteBundle = new MirrorSiteBundle[](ownersMirrorSitesLength);

        uint256 ownersMirrorSiteBundleIdx = 0;

        for (uint256 i = 0; i < currentMirrorSiteLength; i++) {
            if (mirrorSitesMapping[i].websiteOwnerAddress == _owner) {
                ownersMirrorSiteBundle[ownersMirrorSiteBundleIdx] = mirrorSitesMapping[i];
                ownersMirrorSiteBundleIdx++;
            }
        }

        return ownersMirrorSiteBundle;
    }

    function updateApplicationFee(uint256 _priceOfApplication) external onlyOwner {
        priceOfApplication = _priceOfApplication;
    }

    function acceptOrRejectApplication(uint256 _mirrorSiteId, bool _option) external onlyOwner {
        mirrorSitesMapping[_mirrorSiteId].acceptedByRootOwner = _option;
    }
}

