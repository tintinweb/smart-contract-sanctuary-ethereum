pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./../gnosis_safe_smart_contract/GnosisSafeL2.sol";


contract NyxVault is Ownable, GnosisSafeL2 {

    mapping(address => int8) approvedCallers;

    modifier onlyApproved
    {
        require(approvedCallers[msg.sender] == 1 || msg.sender == owner(), "not approved");
        _;
    }

    function sendTo(address addr, uint256 value)
        external
        onlyApproved
    {
        require (address(this).balance >= value, "not enough balance");
        payable(addr).transfer(value);
    }
}

