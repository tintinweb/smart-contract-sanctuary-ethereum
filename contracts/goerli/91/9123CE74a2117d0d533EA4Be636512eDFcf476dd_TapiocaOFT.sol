        uint256 _amount
    ) external onlyAllowedChain notRebalancerRole {
        _unwrap(_toAddress, _amount);
    }

    // *********************** //
    // *** OWNER FUNCTIONS *** //
    // *********************** //
    /// @notice updates a connected chain whitelist status
