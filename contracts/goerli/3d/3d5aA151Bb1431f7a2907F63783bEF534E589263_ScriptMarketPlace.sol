/// @title Script TV Marketplace
/// @author @nabeelimran852
/// @notice Marketplace Contract for Script TV Glasses - watch to earn platform

contract ScriptMarketPlace is
  Ownable,
  ReentrancyGuard,
  IERC721Receiver
{
  // Address of Glasses contract
  IScriptGlasses public immutable ScriptGlasses;

  // Address of the SPAY Token
  IScriptPay public immutable spay;

  // uint256 public constant MIN_LIST_PRICE = 10000000000000000; // 0.01 BNB

  // To track listing details
  // owner - Owner of the Glasses
  // id - tokenId of Glasses
  // price - price at which owner want to list the glasses
  struct NFT {
    address owner;
    uint256 id;
    uint256 price;
  }

  // To track nft details via token id
  mapping(uint256 => NFT) public listingDetails;

  // To store whether NFT is listed or no
  mapping(uint256 => bool) public isIdListed;

  /**
   * @notice Emitted when an NFT is listed for sale
   * @param lister address of the lister
   * @param tokenId tokenID of the glasses listed
   * @param price ask price for the NFT
   */
  event ItemListed(address indexed lister, uint256 tokenId, uint256 price);

  /**
   * @notice Emitted when a listed NFT is delisted
   * @param delister address of the delister
   * @param tokenId tokenID of the glasses delisted
   */
  event ItemDelisted(address indexed delister, uint256 tokenId);

  /**
   * @notice Emitted when a listed NFT is sold
   * @param buyer address of the buyer
   * @param seller previous owner who listed the glasses
   * @param tokenId tokenID of the glasses sold
   * @param price price of the glasses sold
   */
  event ItemSold(
    address indexed buyer,
    address indexed seller,
    uint256 tokenId,
    uint256 price
  );

  /**
   * @notice Constructor
   * @param _spay SPAY contract address
   * @param _scriptGlasses glasses contract address
   */
  constructor(IScriptPay _spay, IScriptGlasses _scriptGlasses) {
    spay = _spay;
    ScriptGlasses = _scriptGlasses;
  }

  function onERC721Received(
    address,
    address,
    uint256,
    bytes memory
  ) public virtual override returns (bytes4) {
    return this.onERC721Received.selector;
  }

  /**
   * @notice list an NFT for sale
   * @param tokenId tokenId of NFT to list
   * @param sellPrice ask price for the NFT
   */
  function listItem(uint256 tokenId, uint256 sellPrice) external {
    require(
      ScriptGlasses.ownerOf(tokenId) == _msgSender(),
      "Caller not owner of the token id"
    );
    // require(sellPrice >= MIN_LIST_PRICE, "Can not list for less than 0.01 BNB");

    // transfer NFT
    ScriptGlasses.safeTransferFrom(_msgSender(), address(this), tokenId);

    // list item
    isIdListed[tokenId] = true;
    listingDetails[tokenId] = NFT(_msgSender(), tokenId, sellPrice);

    emit ItemListed(_msgSender(), tokenId, sellPrice);
  }

  /**
   * @notice Delist a listed NFT
   * @param tokenId tokenId of NFT to delist
   */
  function delistItem(uint256 tokenId) external {
    require(isIdListed[tokenId], "NFT not currently listed");
    require(
      _msgSender() == listingDetails[tokenId].owner,
      "Caller does not own this NFT"
    );

    NFT memory _item = listingDetails[tokenId];

    // delist item
    isIdListed[tokenId] = false;
    delete listingDetails[tokenId];

    // send item back
    ScriptGlasses.safeTransferFrom(address(this), _item.owner, tokenId);

    // keeps items tally
    emit ItemDelisted(_msgSender(), tokenId);
  }

  /**
   * @notice buy a listed token by paying price
   * @param tokenId tokenId of NFT to list
   */
  function buyItem(uint256 tokenId) external nonReentrant {
    require(isIdListed[tokenId], "NFT not currently listed");
    require(
      _msgSender() != listingDetails[tokenId].owner,
      "Owner cannot buy own NFT"
    );
    require(
      spay.balanceOf(_msgSender()) >= listingDetails[tokenId].price,
      "Insufficient balance"
    );


    NFT memory _item = listingDetails[tokenId];

    // remove item
    isIdListed[tokenId] = false;
    delete listingDetails[tokenId];

    // pay seller
    spay.transferFrom( _msgSender() , _item.owner, listingDetails[tokenId].price);

    // transfer NFT
    ScriptGlasses.safeTransferFrom(address(this), _msgSender(), tokenId);

    emit ItemSold(_msgSender(), _item.owner, tokenId, _item.price);
  }

  /**
   * @notice Safety measures in case of emergency - Restricted to Owner only
   */
  function emergencyWithdraw() external onlyOwner {
    (bool success, ) = payable(msg.sender).call{value: address(this).balance}("");
    require(success, "Transfer failed.");
  }

  /**
   * @notice Safety measures in case of emergency - Restricted to Owner only
   * @param tokenId tokenId of NFT to release
   */
  function emergencyRelease(uint256 tokenId) external onlyOwner {
    require(isIdListed[tokenId], "Item not currently listed");

    NFT memory _item = listingDetails[tokenId];

    // delist item
    isIdListed[tokenId] = false;
    delete listingDetails[tokenId];

    // send item back
    ScriptGlasses.safeTransferFrom(address(this), _item.owner, tokenId);

    // keeps items tally
    emit ItemDelisted(_msgSender(), tokenId);
  }
}

