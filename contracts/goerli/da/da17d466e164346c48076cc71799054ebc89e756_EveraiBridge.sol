import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

import "./interfaces/IStarknetCore.sol";

contract EveraiBridge is Pausable, Ownable {
    IStarknetCore public starknetCore;
    IERC721 public everaiDuo;

    uint256 private _bridgeSelector;
    uint256 private _bridgeContractAddress;
    uint256 private _gatewaySelector;

    constructor(
        address everaiDuo_,
        address starknetCore_,
        uint256 gatewaySelector_
    ) {
        require(
            starknetCore_ != address(0),
            "Gateway/invalid-starknet-core-address"
        );

        everaiDuo = IERC721(everaiDuo_);
        starknetCore = IStarknetCore(starknetCore_);
        _gatewaySelector = gatewaySelector_;
    }

    event BridgeToStarknet(
        address indexed l1ERC721,
        uint256 indexed l2ERC721,
        uint256 indexed l2Account,
        uint256 tokenId
    );

    function setEveraiDuo(address everaiDuo_) external onlyOwner {
        everaiDuo = IERC721(everaiDuo_);
    }

    function setStarknetCore(address starknetCore_) external onlyOwner {
        starknetCore = IStarknetCore(starknetCore_);
    }

    function setBridgeSelector(uint256 bridgeSelector_) external onlyOwner {
        _bridgeSelector = bridgeSelector_;
    }

    function setGatewaySelector(uint256 gatewaySelector_) external onlyOwner {
        _gatewaySelector = gatewaySelector_;
    }

    function setBridgeContractAddress(uint256 bridgeContractAddress_)
        external
        onlyOwner
    {
        _bridgeContractAddress = bridgeContractAddress_;
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function addressToUint(address value)
        internal
        pure
        returns (uint256 convertedValue)
    {
        convertedValue = uint256(uint160(address(value)));
    }

    function deposit(
        IERC721 _l1TokenContract,
        uint256 _l2TokenContract,
        uint256 _tokenId,
        uint256 _account
    ) external whenNotPaused {
        uint256[] memory payload = new uint256[](4);

        // optimistic transfer, should revert if no approved or not owner
        _l1TokenContract.transferFrom(msg.sender, address(this), _tokenId);

        // build deposit message payload
        payload[0] = _account;
        payload[1] = addressToUint(address(_l1TokenContract));
        payload[2] = _l2TokenContract;
        payload[3] = _tokenId;

        // send message
        starknetCore.sendMessageToL2(
            _bridgeContractAddress,
            _gatewaySelector,
            payload
        );

        emit BridgeToStarknet(
            address(_l1TokenContract),
            _l2TokenContract,
            _account,
            _tokenId
        );
    }
}

