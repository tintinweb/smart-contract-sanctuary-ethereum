// =================================================================================================================================
//                                                       Write Functions
// =================================================================================================================================
  function initialize(
    bool _paused,
    string memory _cid,
    address _DAI,
    address _dAgoraTreasury,
    uint96 _rewardedRole,
    uint256 _GRACE_PERIOD,
    uint256 _ecclesiaPrice,
    uint256 _dagorianPrice,
    uint256 _hoplitePrice,
    uint256 _percelisiaPrice,
    uint256 _baseMonthlyPrice,
    uint256 _discountRate
  ) public initializer {
    __ERC721A_init("dAgora Memberships", "dAgora");
    __ReentrancyGuard_init();

    //Set the sstate variables in diamond storage not in contract storage
    LibMemberships._init(
      _paused,
      true,
      _cid,
      _DAI,
      _dAgoraTreasury,
      _rewardedRole,
      _GRACE_PERIOD,
      _ecclesiaPrice,
      _dagorianPrice,
      _hoplitePrice,
      _percelisiaPrice,
      _baseMonthlyPrice,
      _discountRate
    );

  }

  function mintMembership(
    uint8 _durationInMonths,
    uint8 tier,
    uint256 _deadline,
    uint8 v,
    bytes32 r,
    bytes32 s
  ) public
    isNotPaused
    isNotMember
    durationCheck(_durationInMonths)
    nonReentrant
  {
    require(tier != 0, "dAgoraMemberships: Tier must be greater than 0");
    require(tier <= 4, "dAgoraMemberships: Tier must be less than 4");

    uint256 _tokenId = totalSupply() + 1;
    uint256 _duration = block.timestamp + _durationInMonths * 30 days;
    uint256 _price = LibMemberships._getPrice(tier, _durationInMonths);

    

    address dai = LibMemberships._getDAI();
    IERC20Permit(dai).permit(
      msg.sender,
      address(this),
      _price,
      _deadline,
      v,
      r,
      s
    );
    ISolidStateERC20(dai).transferFrom(msg.sender, address(this), _price);

    //Add new membership states to mappings and variable in diamond storage not in contract storage
    LibMemberships._addNewMember(msg.sender, _tokenId, _duration, tier);
    _safeMint(msg.sender, 1);
  }

  function renewMembership (
    uint256 _tokenId,
    uint8 _newDuration,
    uint256 _deadline,
    uint8 v,
    bytes32 r,
    bytes32 s
  ) public
    isNotPaused
    isDelegateOrOwner(_tokenId)
    durationCheck(_newDuration)
    isExpiring(_tokenId)
    nonReentrant
  {
    uint256 duration = (_newDuration * 30 days);
    uint8 _tier = LibMemberships.checkTokenTier(_tokenId);
    uint256 _monthlyPrice = LibMemberships._getMonthlyPrice(_tier);
    uint256 _price = _monthlyPrice * _newDuration;
    IERC20Permit(LibMemberships._getDAI()).permit(
      msg.sender,
      address(this),
      _price,
      _deadline,
      v,
      r,
      s
    );

    ISolidStateERC20(LibMemberships._getDAI()).transferFrom(msg.sender, address(this), _price);

    LibMemberships._renewMembership(_tokenId, duration);
  }

  function upgradeMembership(
    uint256 _tokenId,
    uint8 _newTier,
    uint256 _deadline,
    uint8 v,
    bytes32 r,
    bytes32 s
  ) public
    isNotPaused
    onlyController(_tokenId)
    nonReentrant
  {
    uint8 oldTier = LibMemberships.checkTokenTier(_tokenId);
    require(_newTier > oldTier, "dAgoraMemberships: New tier must be greater than old tier");
    require(_newTier < 4, "dAgoraMemberships: Tier must be between 0-3");

    uint256 _price = LibMemberships._getUpgradePrice(oldTier, _newTier);
    IERC20Permit(LibMemberships._getDAI()).permit(
      msg.sender,
      address(this),
      _price,
      _deadline,
      v,
      r,
      s
    );

    ISolidStateERC20(LibMemberships._getDAI()).transferFrom(msg.sender, address(this), _price);
    LibMemberships._upgradeMembership(_tokenId, _newTier, oldTier);
  }

  function cancelMembership(uint256 _tokenId) public
    isNotPaused
    isDelegateOrOwner(_tokenId)
    nonReentrant
  {
    LibMemberships._cancelMembership(_tokenId);
  }

  function setController(uint256 _tokenId, address _controller) public
    isNotPaused
    onlyController(_tokenId)
    nonReentrant
  {
    LibMemberships._setControllerOfToken(_tokenId, _controller);
  }

  function viewOwnerOfContract() public view returns (address) {
    return LibDiamond.contractOwner();
  }

  function addDelegate(
    uint256 _tokenId,
    address _delegate
  ) public
    isNotPaused
    isPerclesia(_tokenId)
    onlyController(_tokenId)
    nonReentrant
  {
    uint256 currenLen = LibMemberships._getDelegates(_tokenId).length;
    require(currenLen + 1 <= 10, "dAgoraMemberships: Max delegates reached");
    require(_delegate != address(0), "dAgoraMemberships: Delegate cannot be 0 address");
    require(_delegate != msg.sender, "dAgoraMemberships: Delegate cannot be sender");
    require(_delegate != address(this), "dAgoraMemberships: Delegate cannot be contract");
    require(LibMemberships._contains(_tokenId, _delegate), "dAgoraMemberships: Delegate already exists");
    LibMemberships._addDelegate(_tokenId, _delegate);
  }

  function swapDelegate(
    uint256 _tokenId,
    address _oldDelegatee,
    address _newDelegatee
  ) public
    isNotPaused
    isPerclesia(_tokenId)
    onlyController(_tokenId)
    nonReentrant
  {
    require(_oldDelegatee != _newDelegatee, "dAgoraMemberships: Cannot swap with same address");
    require(_newDelegatee != address(0), "dAgoraMemberships: Old delegate cannot be 0 address");
    require(_newDelegatee != msg.sender, "dAgoraMemberships: Old delegate cannot be sender");
    require(_newDelegatee != address(this), "dAgoraMemberships: Old delegate cannot be contract");
    LibMemberships._swapDelegate(_tokenId, _oldDelegatee, _newDelegatee);
  }

  function removeDelegate(
    uint256 _tokenId,
    address _delegate,
    uint8 _slot
  ) public
    isNotPaused
    isPerclesia(_tokenId)
    onlyController(_tokenId)
    nonReentrant
  {
    LibMemberships._removeDelegate(_tokenId, _delegate, _slot);
  }

