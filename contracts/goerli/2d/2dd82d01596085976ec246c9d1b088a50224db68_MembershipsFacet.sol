// =================================================================================================================================
  event MembershipPurchased(address indexed _member, uint256 indexed _tokenId, uint256 _expires, uint8 _tier);
  event MembershipExtended(address indexed _member, uint256 indexed _tokenId, uint256 _expires, uint8 _tier);
  event MembershipClaimed(address indexed _member, uint256 indexed _tokenId, uint256 _expires, uint8 _tier);
  event MembershipRevoked(address indexed _member, uint256 indexed _tokenId, uint256 _expires);
  event MembershipUpgraded(address indexed _member, uint256 indexed _tokenId, uint8 _oldTier, uint8 _newTier);
  event MembershipControllerChanged(uint256 indexed _tokenId, address _oldController, address _newController);
  event MembershipDelegateAdded(uint256 indexed _tokenId, address _delegate);
  event MembershipDelegateRemoved(uint256 indexed _tokenId, address _delegate);
  event MembershipDelegateSwapped(uint256 indexed _tokenId, address _oldDelegate, address _newDelegate);
// =================================================================================================================================
//                                                      Functions 
// =================================================================================================================================
  struct DiamondStorage {
    MembershipInfo membershipInfo;
    MemberInfo member;
    MemberMappings memberMappings;
  }

  function diamondStorage() internal pure returns (DiamondStorage storage ds) {
    bytes32 position = DIAMOND_MEMBER_STORAGE_POSITION;
    assembly {
      ds.slot := position
    }
  }


  function _addNewMember(address _member, uint256 _tokenId, uint256 _expires, uint8 _tier) internal {
    diamondStorage().memberMappings.tokenTier[_tokenId] = MemberInfo(_tier, Tier(_tier), _tokenId, _member, _expires);
    diamondStorage().memberMappings.expires[_tokenId] = _expires + block.timestamp;
    diamondStorage().memberMappings.tokenIndexedToOwner[_tokenId] = _member;
    diamondStorage().memberMappings.claimed[_member] = true;
    diamondStorage().member = MemberInfo(_tier, Tier(_tier), _tokenId, _member, _expires);
    emit MembershipPurchased(_member, _tokenId, _expires, _tier);
  }

  function _renewMembership(uint256 _tokenId, uint256 newExpiry) internal {
    diamondStorage().memberMappings.expires[_tokenId] = newExpiry + diamondStorage().membershipInfo.GRACE_PERIOD;
    diamondStorage().member._expires = newExpiry;
    emit MembershipExtended(diamondStorage().member._member, _tokenId, newExpiry, diamondStorage().member.tier);
  }

  function _upgradeMembership(uint256 _tokenId, uint8 _newTier, uint8 _oldTier) internal {
    diamondStorage().memberMappings.tokenTier[_tokenId].tier = _newTier;
    diamondStorage().memberMappings.tokenTier[_tokenId].tierName = Tier(_newTier);
    diamondStorage().member.tier = _newTier;
    emit MembershipUpgraded(diamondStorage().member._member, _tokenId, _oldTier, _newTier);
  }

  function _cancelMembership(uint256 _tokenId) internal {
    diamondStorage().memberMappings.expires[_tokenId] = block.timestamp + diamondStorage().membershipInfo.GRACE_PERIOD;
    diamondStorage().member._expires = block.timestamp + diamondStorage().membershipInfo.GRACE_PERIOD;
    emit MembershipRevoked(diamondStorage().member._member, _tokenId, diamondStorage().member._expires);
  }

  function _setControllerOfToken(uint256 _tokenId, address _controller) internal {
    address _oldController = diamondStorage().memberMappings.tokenIndexedToOwner[_tokenId];
    diamondStorage().memberMappings.tokenIndexedToOwner[_tokenId] = _controller;
    diamondStorage().member._member = _controller;
    emit MembershipControllerChanged(_tokenId, _oldController, _controller);
  }

  function _addDelegate(uint256 _tokenId, address _delegate) internal {
    diamondStorage().memberMappings._tokenDelegates[_tokenId].push(_delegate);
    emit MembershipDelegateAdded(_tokenId, _delegate);
  }

