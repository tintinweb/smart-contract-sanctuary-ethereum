    diamondStorage().membershipInfo.dAgoraTreasury = _treasury;
  }

  function _setRewardedRole(uint96 _role) internal {
    diamondStorage().membershipInfo.rewardedRole = _role;
  }

  function _setCid(string memory _cid) internal {
    diamondStorage().membershipInfo.cid = _cid;
  }

  function _getDelegates(uint256 _tokenId) internal view returns (address[] memory) {
    return diamondStorage().memberMappings._tokenDelegates[_tokenId];
  }

  function _isInitialized() internal view {
    require(
      diamondStorage().membershipInfo.isInitialized == true,
      "dAgora: Not initialized"
    );
  }
  
  function _ownerOfToken(uint256 _tokenId) internal view returns (address owner) {
    return ERC721AUpgradeable(diamondStorage().membershipInfo.dAgoraTreasury).ownerOf(_tokenId);
  }

  function _soulBound() internal pure {
    revert ("dAgora: Soulbound");
  }

  function _getPrice(uint256 _durationInMonths, uint8 _tier) internal view returns (uint256) {
    uint256 _price;
    uint256 _monthlyCost = _getMonthlyPrice(_tier);
    uint256 _dagorianPrice = diamondStorage().membershipInfo.dagorianPrice;
    uint256 _hoplitePrice = diamondStorage().membershipInfo.hoplitePrice;
    uint256 _percelisiaPrice = diamondStorage().membershipInfo.percelisiaPrice;
    uint256 _discount = diamondStorage().membershipInfo.discountRate;
    if(_durationInMonths == 12) {
      if(_tier == 1) {
        _price = (_monthlyCost + _dagorianPrice) - _discount;
      } else if(_tier == 2) {
        _price = (_monthlyCost + _hoplitePrice) - _discount;
      } else if(_tier == 3) {
        _price = (_monthlyCost + _percelisiaPrice) - _discount;
      } 
    } else {
      if(_tier == 1) {
        _price = _monthlyCost + _dagorianPrice;
      } else if(_tier == 2) {
        _price = _monthlyCost + _hoplitePrice;
      } else if(_tier == 3) {
        _price = _monthlyCost + _percelisiaPrice;
      }
    }
    return _price;
  }

  function _getUpgradePrice(uint8 _oldTier, uint8 _newTier) internal view returns(uint256 _cost) {
    uint256 _price;
    uint256 _dagorianPrice = diamondStorage().membershipInfo.dagorianPrice;
    uint256 _hoplitePrice = diamondStorage().membershipInfo.hoplitePrice;
    uint256 _percelisiaPrice = diamondStorage().membershipInfo.percelisiaPrice;
    if(_newTier == 1 && _oldTier == 0) {
      _price = _dagorianPrice;
    } else if(_newTier == 2 && _oldTier == 0) {
      _price = _dagorianPrice + _hoplitePrice;
      return _price;
    } else if(_newTier == 3 && _oldTier == 0) {
      _price = _percelisiaPrice + _dagorianPrice + _hoplitePrice;
      return _price;
    } else if(_newTier == 2 && _oldTier == 1) {
      _price = _hoplitePrice - _dagorianPrice;
      return _price;
    } else if(_newTier == 3 && _oldTier == 1) {
      _price = (_dagorianPrice + _hoplitePrice )+ _percelisiaPrice;
      return _price;
    } else if(_newTier == 3 && _oldTier == 2) {
      _price = _percelisiaPrice - (_hoplitePrice + _dagorianPrice);
      return _price;
    } else {
      revert("dAgora: Invalid tier");
    }
  }

  function _getDAI() internal view returns (address _DAI) {
    return diamondStorage().membershipInfo.DAI;
  }

  function isNotPaused() internal view {
    require(
      diamondStorage().membershipInfo.paused == false,
      "dAgora: Paused"
    );
  }

  function checkTokenTier(uint256 _tokenId) internal view returns (uint8 _tier) {
    return diamondStorage().memberMappings.tokenTier[_tokenId].tier;
  }

  function _getMonthlyPrice(uint8 _tier) internal view returns (uint256 _monthlyPrice) {
    uint256 _baseMonthlyPrice = diamondStorage().membershipInfo.baseMonthlyPrice;
    if(_tier == 0) {
      return _baseMonthlyPrice;
    } else if(_tier == 1) {
      return _baseMonthlyPrice;
    } else if(_tier == 2) {
      return _baseMonthlyPrice + 5000000000000000000;
    } else if(_tier == 3) {
      return _baseMonthlyPrice + 10000000000000000000;
    }
  }

  function _isDelegateOrOwner(uint256 _tokenId) internal view {
    require(
      _contains(_tokenId, msg.sender) == true ||
      diamondStorage().memberMappings.tokenIndexedToOwner[_tokenId] == msg.sender,
      "dAgora: Not owner or delegate of membership"
    );
  }

  function _isPerclesia(uint256 _tokenId) internal view {
    require(
      diamondStorage().memberMappings.tokenTier[_tokenId].tier == 3,
      "dAgora: Not a Percelisia member"
    );
  }

  function _onlyController(uint256 _tokenId) internal view {
    require(
      diamondStorage().memberMappings.tokenIndexedToOwner[_tokenId] == msg.sender,
      "dAgora: Not owner of membership"
    );
  }

  function _isNotMember() internal view {
    require(
      diamondStorage().memberMappings.claimed[msg.sender] == false,
      "dAgora: Member already exists"
    );
  }

  function _isExpiringSoon(uint256 _tokenId) internal view {
    require(
      block.timestamp + 30 days >= diamondStorage().memberMappings.expires[_tokenId],
      "dAgora: Membership is not expiring soon"
    );
  }

  function _durationChecker(uint256 _duration) internal pure {
    require(_duration > 0 && _duration <= 12, "dAgora: Duration must be between 1 and 12 months");
  }

  function _contains(uint256 _tokenId, address _addrs) internal view returns (bool contain) {
    for(uint256 i = 0; i < diamondStorage().memberMappings._tokenDelegates[_tokenId].length; i++) {
      if(diamondStorage().memberMappings._tokenDelegates[_tokenId][i] == _addrs) {
        contain = true;
        break;
      } else {
        contain = false;
      }
    }
    return contain;
  }


