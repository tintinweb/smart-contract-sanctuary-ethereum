    mapping(uint256 => MemberInfo) tokenTier;
    mapping(uint256 => uint256) expires;
    mapping(uint256 => address) tokenIndexedToOwner;
    mapping(address => bool) claimed;
    mapping(uint256 => address[]) _tokenDelegates;
  }
