      diamondStorage().memberMappings._tokenDelegates[_tokenId][_slot] == _delegate,
      "dAgoraMemberships: Cannot remove a delegatee that is not in the slot"
    );
    delete diamondStorage().memberMappings._tokenDelegates[_tokenId][_slot];
    diamondStorage().memberMappings._tokenDelegates[_tokenId][_slot] = diamondStorage().memberMappings._tokenDelegates[_tokenId][diamondStorage().memberMappings._tokenDelegates[_tokenId].length - 1];
    diamondStorage().memberMappings._tokenDelegates[_tokenId].pop();
    emit MembershipDelegateRemoved(_tokenId, _delegate);
