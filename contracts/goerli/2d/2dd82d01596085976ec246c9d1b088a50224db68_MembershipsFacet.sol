    for (uint256 i = 0; i < diamondStorage().memberMappings._tokenDelegates[_tokenId].length; i++) {
      if (diamondStorage().memberMappings._tokenDelegates[_tokenId][i] == _oldDelegate) {
        diamondStorage().memberMappings._tokenDelegates[_tokenId][i] = _newDelegate;
        break;
      }
    }
    emit MembershipDelegateSwapped(_tokenId, _oldDelegate, _newDelegate);
  }

