import "oz/access/Ownable.sol";
import "lib-sc/interfaces/univ2/IRouter.sol";
import "lib-sc/interfaces/univ2/IPair.sol";
import "./WorldCup22Token.sol";

contract WorldCup22Manager is Ownable {

    uint256 public constant INITIAL_SUPPLY = 1_000_000_000 ether;
    uint256 public constant INITIAL_LIQUIDITY = 0.001 ether;
    uint256 public constant CUT = 10; // 10% fee on losing teams liquidity

    IERC20 public constant weth = IERC20(0xB4FBF271143F4FBf7B91A5ded31805e42b2208d6); //IERC20(0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2);
    IRouter public constant router = IRouter(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);

    mapping (uint256 => WorldCup22Token) mapIdToWorldCup22Token;
    mapping (uint256 => bool) mapOutOfCup;

    constructor() {
        weth.approve(address(router), type(uint256).max);
    }

    function createTeam(string memory name, string memory symbol, uint256 id, bytes32 salt) external payable onlyOwner() returns(address) {
        require(msg.value == INITIAL_LIQUIDITY, "msg.value != INITIAL_LIQUIDITY");
        require(address(mapIdToWorldCup22Token[id]) == address(0), "id already in use");

        WorldCup22Token token = new WorldCup22Token{salt: salt}(name, symbol, id, INITIAL_SUPPLY);
        mapIdToWorldCup22Token[id] = token;

        token.approve(address(router), type(uint256).max);
        router.addLiquidityETH{value: INITIAL_LIQUIDITY}(address(token), INITIAL_SUPPLY, INITIAL_SUPPLY, INITIAL_LIQUIDITY, address(this), block.timestamp);

        return address(token);
    }

    function buyBack(uint256 winnerID, uint256 loserID) external onlyOwner() {
        require(!mapOutOfCup[winnerID] && !mapOutOfCup[loserID], "out of cup");
        mapOutOfCup[loserID] = true;

        unpauseTeam(loserID);
        unpauseTeam(winnerID);

        WorldCup22Token winner = mapIdToWorldCup22Token[winnerID];
        WorldCup22Token loser = mapIdToWorldCup22Token[loserID];
        
        IPair loserPair = IPair(pairFor(router.factory(), address(loser), address(weth)));
        loserPair.approve(address(router), type(uint256).max);
        router.removeLiquidity(address(loser), address(weth), loserPair.balanceOf(address(this)), 0, 0, address(this), block.timestamp);

        uint256 balance = weth.balanceOf(address(this));
        uint256 fee;
        if (balance >= INITIAL_LIQUIDITY) {
            fee = INITIAL_LIQUIDITY + ((balance - INITIAL_LIQUIDITY) * CUT) / 100;
        } else {
            fee = balance; // means we got less weth back than we put in the lp initially, only happens when no buyers, since we get 0.999... weth back from line 40
        }
        weth.transfer(owner(), fee); 
        address[] memory path = new address[](2);
        path[0] = address(weth);
        path[1] = address(winner);
        if (balance > fee) {
            router.swapExactTokensForTokens(balance-fee, 0, path, address(this), block.timestamp);
        }

        loser.burn(loser.balanceOf(address(this)));
        winner.burn(winner.balanceOf(address(this)));
    }

    function pauseTeam(uint256 id) public onlyOwner() {
        mapIdToWorldCup22Token[id].pause();
    }

    function unpauseTeam(uint256 id) public onlyOwner() {
        mapIdToWorldCup22Token[id].unpause();
    }

    function sortTokens(address tokenA, address tokenB) internal pure returns (address token0, address token1) {
        require(tokenA != tokenB, 'UniswapV2Library: IDENTICAL_ADDRESSES');
        (token0, token1) = tokenA < tokenB ? (tokenA, tokenB) : (tokenB, tokenA);
        require(token0 != address(0), 'UniswapV2Library: ZERO_ADDRESS');
    }

    function pairFor(address factory, address tokenA, address tokenB) internal pure returns (address pair) {
        (address token0, address token1) = sortTokens(tokenA, tokenB);
        pair = address(uint160(uint256(keccak256(abi.encodePacked(
                hex'ff',
                factory,
                keccak256(abi.encodePacked(token0, token1)),
                hex'96e8ac4277198ff8b6f785478aa9a39f403cb768dd02cbee326c3e7da348845f' // init code hash
            )))));
    }
}

