    enum State {
        OFFERED,
        WITHDRAWN,
        REJECTED,
        ACTIVE
    }

    // Define an Agreement structure
    struct Agreement {
        address supplier;
        address buyer;
        bytes32 verifiableCredentialHash;
        uint32 performanceIndicator;
        uint32 rewardRatio;
        State state;
    }

    // Events for offer management
    event Offered(
        uint32 agreementId,
        address indexed supplier,
        address indexed buyer
    );
    event Withdrawn(
        uint32 agreementId,
        address indexed supplier,
        address indexed buyer
    );
    event Rejected(
        uint32 agreementId,
        address indexed supplier,
        address indexed buyer
    );
    event Activated(
        uint32 agreementId,
        address indexed supplier,
        address indexed buyer
    );

    // Events for performance management
    event PerformanceIndicatorIncreased(
        uint32 agreementId,
        address indexed supplier,
        address indexed buyer,
        uint32 increased
    );

    event RewardsRedeemed(
        uint32 agreementId,
        address indexed supplier,
        address indexed buyer,
        uint32 redeemed
    );

    // Contract Variables
    mapping(uint32 => Agreement) private agreements;
    uint32 public nbAgreements;

    function __init() internal onlyInitializing {
        nbAgreements = 0;
    }

    // Simpler Getters
    function isBuyer(Agreement memory _agreement, address _buyer)
        public
        pure
        returns (bool)
    {
        return (_buyer == _agreement.buyer);
    }

    function isSupplier(Agreement memory _agreement, address _supplier)
        public
        pure
        returns (bool)
    {
        return (_supplier == _agreement.supplier);
    }

    function getAgreement(uint32 _agreementID)
        public
        view
        returns (Agreement memory)
    {
        return agreements[_agreementID];
    }

    function _onlySupplier(uint32 _agreementId) internal view {
        require(
            agreements[_agreementId].supplier == msg.sender,
            "Only Supplier can execute this function"
        );
    }

    function _onlyBuyer(uint32 _agreementId) internal view {
        require(
            agreements[_agreementId].buyer == msg.sender,
            "Only Buyer can execute this function"
        );
    }

    function _onlyActive(uint32 _agreementId) internal view {
        require(
            agreements[_agreementId].state == State.ACTIVE,
            "Agreement must be active"
        );
    }

    function _onlyOffered(uint32 _agreementId) internal view {
        require(
            agreements[_agreementId].state == State.OFFERED,
            "Agreement must be offered"
        );
    }

    // Supplier Proposes a Private Agreement to a Buyer
    function offer(
        bytes32 _verifiableCredentialHash,
        address _buyer,
        uint32 _rewardRatio
    ) public {
        // Check conditions
        require(_buyer != msg.sender, "Can not create offers to oneself");

        // Prepare data
        address supplier = msg.sender;
