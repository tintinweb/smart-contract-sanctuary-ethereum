pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155SupplyUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155BurnableUpgradeable.sol";
import "./ERC1155PermitUpgradeable.sol";
import "./Agreements.sol";

contract NegotiatedRewards is
    Initializable,
    OwnableUpgradeable,
    Agreements,
    ERC1155BurnableUpgradeable,
    ERC1155SupplyUpgradeable,
    ERC1155PermitUpgradeable
{
    // Contract Initializer
    function initialize() public initializer {
        OwnableUpgradeable.__Ownable_init();
        ERC1155PermitUpgradeable.__ERC1155Permit_init("Negotiated Rewards");
        Agreements.__init();
        ERC1155Upgradeable._setURI(
            "https://qa.negotiated-rewards.simard.io/metadata/{id}"
        );
        ERC1155BurnableUpgradeable.__ERC1155Burnable_init();
        ERC1155SupplyUpgradeable.__ERC1155Supply_init();
    }

    // Increase the Performance Indicator
    function incrementPerformanceIndicator(
        uint32 _agreementId,
        uint32 _increment
    ) public {
        require(_increment > 0, "At least one increment is required");

        // Check conditions
        _onlySupplier(_agreementId);
        _onlyActive(_agreementId);

        // Define rewards
        Agreement memory agreement = getAgreement(_agreementId);
        if (agreement.rewardRatio > 0) {
            // Check the rewards obtained with this increment
            uint256 rewardsBefore = agreement.performanceIndicator /
                agreement.rewardRatio;
            uint256 rewardsAfter = (agreement.performanceIndicator +
                _increment) / agreement.rewardRatio;
            uint256 rewarded = rewardsAfter - rewardsBefore;

            // Mint Reward as ER1155
            if (rewarded > 0) {
                _mint(agreement.buyer, _agreementId, rewarded, "");
            }
        }

        // Increment the performance units
        updatePerformanceIndicator(_agreementId, _increment);
    }

    // Redeem Rewards
    function redeemRewards(uint32 _agreementId, uint32 _rewards) public {
        // Check conditions
        require(_rewards > 0, "At least one reward must be redeemed");

        _onlyActive(_agreementId);

        require(
            balanceOf(msg.sender, _agreementId) >= _rewards,
            "Not enough Rewards available"
        );

        // Update the state
        _burn(msg.sender, _agreementId, _rewards);

        // Emit the event
        Agreement memory agreement = getAgreement(_agreementId);
        emit RewardsRedeemed(
            _agreementId,
            agreement.supplier,
            agreement.buyer,
            _rewards
        );
    }

    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    )
        internal
        virtual
        override(
            ERC1155Upgradeable,
            ERC1155SupplyUpgradeable,
            ERC1155PermitUpgradeable
        )
    {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }

    function setURI(string memory newuri) public onlyOwner {
        _setURI(newuri);
    }

    /**
     * @dev This empty reserved space is put in place to allow future versions to add new
     * variables without shifting down storage in the inheritance chain.
     * See https://docs.openzeppelin.com/contracts/4.x/upgradeable#storage_gaps
     */
    uint256[49] private __gap;
}

