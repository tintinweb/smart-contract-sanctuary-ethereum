import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./interfaces/IUniswapV2Router02.sol";
import "./interfaces/IUniswapV2Factory.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./interfaces/ISwapTokenUniswapV2.sol";

contract SwapTokenUniswapV2 is ISwapTokenUniswapV2 {
    using SafeMath for uint256;

    address private constant ROUTER =
        0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
    address private constant FACTORY =
        0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f;

    IUniswapV2Router02 uniswapRouter;
    IUniswapV2Factory uniswapFactory;

    mapping(uint256 => address) public controllerAddress;
    mapping(address => bool) public enabledController;

    constructor(uint256 _chainId, address _controller) {
        controllerAddress[_chainId] = _controller;
        uniswapRouter = IUniswapV2Router02(ROUTER);
        uniswapFactory = IUniswapV2Factory(FACTORY);
    }

    modifier onlyControllerCall(uint256 _chainId) {
        require(
            controllerAddress[_chainId] == msg.sender,
            "Only Controller Call"
        );
        _;
    }

    function swapExactTokensForTokens(
        address _token1,
        address _token2,
        uint256 _amount,
        address _destinationAddress,
        uint256 _chainId
    ) external onlyControllerCall(_chainId) returns (uint256 amounts) {
        address[] memory path = new address[](2);
        path[0] = _token1;
        path[1] = _token2;

        IERC20(_token1).transferFrom(msg.sender, address(this), _amount);
        IERC20(_token1).approve(ROUTER, _amount);

        amounts = uniswapRouter.swapExactTokensForTokens(
            _amount,
            0,
            path,
            _destinationAddress,
            block.timestamp
        )[1];
    }
}

