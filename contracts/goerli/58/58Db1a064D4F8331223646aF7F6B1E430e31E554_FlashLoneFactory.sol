pragma solidity 0.8.15;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract LendingPool is ReentrancyGuard {


    IERC20 public borrowAsset;
    using Address for address;
    uint256 public constant FEE = 0.01 ether;
    
    
    uint256 public collectedFees;
    uint256 public totalDepositedAssets;
    uint256 public revenuePerShare;
    uint256 public lastUpdateTime;

    mapping(address => uint256) public depositoorEntryPoint;
    mapping(address => uint256) public depositoorRevenue;

    mapping(address => uint256) public depositoors;

    constructor(IERC20 _address)  {
        borrowAsset = IERC20(_address);
        
    }

    receive () external payable {}

    modifier updateRevenue(address _address) {
        revenuePerShare = collectedFees/totalDepositedAssets;
        depositoorRevenue[_address] = earned(_address);
        depositoorEntryPoint[_address] = revenuePerShare;
    
        _;
    }


    function earned(address _address) public view returns(uint256) {
        return depositoors[_address] * (revenuePerShare - depositoorEntryPoint[_address]) + depositoorRevenue[_address];

    }


    function depositTokens(uint256 _amount) external payable nonReentrant updateRevenue(msg.sender) {
        depositoors[msg.sender] += _amount;
        totalDepositedAssets += _amount;
        revenuePerShare = collectedFees/totalDepositedAssets;
        borrowAsset.transferFrom(msg.sender,address(this), _amount);


    }


    function withdrawTokens(uint256 _amount) external nonReentrant updateRevenue(msg.sender) {
        require(depositoors[msg.sender]>_amount, "user balance insufficient");
        claimRevenue();
        borrowAsset.transfer(msg.sender, _amount);
        depositoors[msg.sender] -= _amount;
        totalDepositedAssets -= _amount;

    }
    



    function claimRevenue() public nonReentrant updateRevenue(msg.sender) {
        uint256 rev = depositoorRevenue[msg.sender];
        depositoorRevenue[msg.sender] = 0;
        bool sent = payable(msg.sender).send(rev);
        require(sent, "invalid balance");
    } 

        function flashLoan(address _borrower, uint256 _amount) external nonReentrant   {
        uint256 balanceBefore = borrowAsset.balanceOf(address(this));
        uint256 ethBalanceBefore = address(this).balance;
        require(balanceBefore >= _amount, "Not enough tokens in the pool");
        require(_borrower.isContract(), "Borrower must be a deployed contract");

        borrowAsset.approve(_borrower, _amount);

        _borrower.functionCallWithValue(
            abi.encodeWithSignature(
                "receiveTokens(IERC20,uint256)",borrowAsset, _amount
            ),
            FEE
        );
        uint256 balanceAfter = borrowAsset.balanceOf(address(this));
        uint256 ethBalanceAfter = address(this).balance;
        require(balanceAfter == balanceBefore,"Flash loan hasn't been paid back");
        require(ethBalanceAfter > ethBalanceBefore + FEE, "Flash loan fee hasnt' been paid");

        collectedFees += FEE;
        


    }
}

