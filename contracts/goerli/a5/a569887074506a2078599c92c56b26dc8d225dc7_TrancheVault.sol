        }

        uint256 strategyMaxWithdraw = withdrawStrategy.maxWithdraw(owner);
        return _min(trancheMaxRedeem, convertToShares(strategyMaxWithdraw));
    }

    function previewRedeem(uint256 shares) public view returns (uint256) {
        return convertToAssets(shares);
    }

    function redeem(
        uint256 shares,
        address receiver,
        address owner
    ) external returns (uint256) {
        _requireClosedPortfolio();
        require(shares <= maxRedeem(owner), "TrancheVault: Amount exceeds max redeem");

        uint256 assets = previewRedeem(shares);
        _safeBurn(owner, shares);
        token.safeTransfer(receiver, assets);

        return assets;
    }

    // -- non ERC4626 methods --

    function maxSize() public view returns (uint256) {
        return size.max;
    }

    function minSize() public view returns (uint256) {
        return size.min;
    }

    function _requirePortfolioManager() internal view {
        require(portfolio.hasRole(portfolio.MANAGER_ROLE(), msg.sender), "TrancheVault: Not a portfolio manager");
    }

    function _requireClosedPortfolio() internal view {
        require(portfolio.status() == Status.Closed, "TrancheVault: Portfolio is not closed");
    }

    function _authorizeUpgrade(address) internal view override {
        _requirePortfolioManager();
    }

    function setSizeRange(uint256 _minSize, uint256 _maxSize) external {
        _requirePortfolioManager();
        _setSizeRange(_minSize, _maxSize);
        emit SizeRangeChanged(_minSize, _maxSize);
    }

    function _setSizeRange(uint256 _minSize, uint256 _maxSize) internal {
        require(_minSize <= _maxSize, "TrancheVault: minSize cannot be greater than maxSize");
        size = SizeRange(_minSize, _maxSize);
    }

    // TODO: set portfolio in initialize()
    function setPortfolio(IStructuredPortfolio _portfolio) external {
        require(address(portfolio) == address(0), "TrancheVault: Portfolio already set");
        portfolio = _portfolio;
    }

    function transferToPortfolio() external returns (uint256) {
        require(msg.sender == address(portfolio), "TrancheVault: Sender is not portfolio");

        uint256 balance = token.balanceOf(address(this));
        token.safeTransfer(address(portfolio), balance);

        return balance;
    }

    function _safeBurn(address owner, uint256 shares) internal {
        if (owner == msg.sender) {
            _burn(owner, shares);
            return;
        }

        uint256 sharesAllowance = allowance(owner, msg.sender);
        require(sharesAllowance >= shares, "TrancheVault: Insufficient allowance");
        _burn(owner, shares);
        _approve(owner, msg.sender, sharesAllowance - shares);
    }

    function _min(uint256 x, uint256 y) internal pure returns (uint256) {
        return x > y ? y : x;
    }
}