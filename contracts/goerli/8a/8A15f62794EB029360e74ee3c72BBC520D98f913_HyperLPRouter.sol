contract HyperLPRouter is IHyperLPRouter {
    using SafeERC20 for IERC20;

    address public immutable override factory;
    address public immutable override weth;

    constructor(address _factory, address _weth) {
        factory = _factory;
        weth = _weth;
    }

    receive() external payable {
        assert(msg.sender == weth); // only accept ETH via fallback from the WETH contract
    }

    /* solhint-disable function-max-lines */
    function deposit(
        address tokenA,
        address tokenB,
        uint24 uniFee,
        int24 lowerTick,
        int24 upperTick,
        uint256 amountAMax,
        uint256 amountBMax,
        address receiver
    )
        external
        override
        returns (
            uint256 amountA,
            uint256 amountB,
            uint256 mintAmount,
            uint256 liquidityMinted
        )
    {
        address pool =
            IHyperLPFactory(factory).createPool(
                tokenA,
                tokenB,
                uniFee,
                lowerTick,
                upperTick
            );
        (amountA, amountB, mintAmount, liquidityMinted) = _deposit(
            pool,
            IERC20(tokenA),
            IERC20(tokenB),
            amountAMax,
            amountBMax,
            receiver
        );
        emit Deposit(
            receiver,
            tokenA,
            tokenB,
            amountA,
            amountB,
            mintAmount,
            liquidityMinted
        );
    }

    /* solhint-disable code-complexity */
    function _deposit(
        address pool,
        IERC20 tokenA,
        IERC20 tokenB,
        uint256 amountAMax,
        uint256 amountBMax,
        address receiver
    )
        internal
        returns (
            uint256 amountA,
            uint256 amountB,
            uint256 mintAmount,
            uint256 liquidityMinted
        )
    {
        uint256 balanceA = tokenA.balanceOf(address(this));
        uint256 balanceB = tokenB.balanceOf(address(this));
        if (amountAMax > 0) {
            tokenA.safeTransferFrom(msg.sender, address(this), amountAMax);
            tokenA.safeIncreaseAllowance(address(pool), amountAMax);
        }
        if (amountBMax > 0) {
            tokenB.safeTransferFrom(msg.sender, address(this), amountBMax);
            tokenB.safeIncreaseAllowance(address(pool), amountBMax);
        }
        if (tokenA == IHyperLPoolStorage(pool).token0()) {
            (amountA, amountB, mintAmount, liquidityMinted) = IHyperLPool(pool)
                .mint(amountAMax, amountBMax, receiver);
        } else {
            (amountB, amountA, mintAmount, liquidityMinted) = IHyperLPool(pool)
                .mint(amountBMax, amountAMax, receiver);
        }
        balanceA = tokenA.balanceOf(address(this)) - balanceA;
        balanceB = tokenB.balanceOf(address(this)) - balanceB;
        if (balanceA > 0) {
            tokenA.safeTransfer(msg.sender, balanceA);
        }
        if (balanceB > 0) {
            tokenB.safeTransfer(msg.sender, balanceB);
        }
    }

    function withdraw(
        address tokenA,
        address tokenB,
        uint24 uniFee,
        uint256 burnAmount,
        address receiver
    )
        external
        override
        returns (
            uint256 amountA,
            uint256 amountB,
            uint256 liquidityBurned
        )
    {
        address pool =
            IHyperLPFactory(factory).getPool(
                address(this),
                address(0),
                tokenA,
                tokenB,
                uniFee
            );

        require(address(pool) != address(0), "HyperLPRouter: no pool");
        require(burnAmount > 0, "HyperLPRouter: bad amount");

        IERC20(pool).safeTransferFrom(msg.sender, address(this), burnAmount);
        IERC20(pool).safeIncreaseAllowance(address(pool), burnAmount);

        (amountA, amountB, liquidityBurned) = IHyperLPool(pool).burn(
            burnAmount,
            receiver
        );

        if (tokenA != address(IHyperLPoolStorage(pool).token0())) {
            (amountA, amountB) = (amountB, amountA);
        }

        emit Withdraw(
            receiver,
            tokenA,
            tokenB,
            amountA,
            amountB,
            liquidityBurned
        );
    }

    function withdraw712(
        address tokenA,
        address tokenB,
        uint24 uniFee,
        uint256 burnAmount,
        address receiver,
        uint256 deadline,
        bytes calldata signature
    )
        external
        override
        returns (
            uint256 amountA,
            uint256 amountB,
            uint256 liquidityBurned
        )
    {
        address pool =
            IHyperLPFactory(factory).getPool(
                address(this),
                address(0),
                tokenA,
                tokenB,
                uniFee
            );

        require(address(pool) != address(0), "HyperLPRouter: no pool");
        require(burnAmount > 0, "HyperLPRouter: bad amount");

        _permit(pool, msg.sender, pool, burnAmount, deadline, signature);

        (amountA, amountB, liquidityBurned) = IHyperLPool(pool).burn(
            burnAmount,
            receiver
        );

        if (tokenA != address(IHyperLPoolStorage(pool).token0())) {
            (amountA, amountB) = (amountB, amountA);
        }

        emit Withdraw(
            receiver,
            tokenA,
            tokenB,
            amountA,
            amountB,
            liquidityBurned
        );
    }

    function _permit(
        address token,
        address owner,
        address spender,
        uint256 value,
        uint256 deadline,
        bytes calldata signature
    ) internal {
        (bytes32 r, bytes32 s, uint8 v) = ECDSAHelper.convert(signature);
        IERC20Permit(token).permit(owner, spender, value, deadline, v, r, s);
    }

    function getMintAmounts(
        address tokenA,
        address tokenB,
        uint24 uniFee,
        uint256 amount0Max,
        uint256 amount1Max
    )
        external
        view
        override
        returns (
            uint256 amount0,
            uint256 amount1,
            uint256 mintAmount,
            uint160 sqrtRatioX96
        )
    {
        address pool =
            IHyperLPFactory(factory).getPool(
                address(this),
                address(0),
                tokenA,
                tokenB,
                uniFee
            );

        require(address(pool) != address(0), "HyperLPRouter: no pool");

        return IHyperLPool(pool).getMintAmounts(amount0Max, amount1Max);
    }
}

