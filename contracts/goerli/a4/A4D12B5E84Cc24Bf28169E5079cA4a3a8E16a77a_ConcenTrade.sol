import "./libraries/UniswapTransferHelper.sol";

contract ConcenTrade is IConcenTrade {
    INonfungiblePositionManager public immutable nonfungiblePositionManager;
    IUniswapV3Factory public immutable uniswapV3Factory;

    IWETH9 public immutable WETH9;

    IERC721 public immutable UNINFT;

    address public protocolOperator;

    address payable public protocolFeeReceiver;

    uint16 public currentMinFee;

    // uint8 public currentStopPositionReward;

    bool public depositsActive;

    uint256 private deadline = 20 minutes;

    mapping(uint256 => PositionInfo) public positionInfos;

    mapping(address => uint256[]) internal ownedTokens;

    mapping(uint256 => uint256) internal ownedTokensIndex;

    /*****************************************/
    /*************** MODIFIERS ***************/
    /*****************************************/

    modifier checkDeadline() {
        require(block.timestamp <= deadline, "TTO"); // transaction to old
        _;
    }

    modifier onlyDepositsActive() {
        require(depositsActive, "DD"); // Deposits Disabled
        _;
    }

    modifier onlyOperator() {
        require(msg.sender == protocolOperator, "OOP"); // Contract Owner Only
        _;
    }

    modifier onlyOwner(uint256 tokenId) {
        require(positionInfos[tokenId].owner == msg.sender, "OOW"); // Position Owner Only
        _;
    }

    constructor(
        INonfungiblePositionManager _nonfungiblePositionManager,
        IUniswapV3Factory _uniswapV3Factory,
        IWETH9 _weth9
    ) {
        nonfungiblePositionManager = _nonfungiblePositionManager;
        uniswapV3Factory = _uniswapV3Factory;
        UNINFT = _nonfungiblePositionManager;
        protocolOperator = msg.sender;
        protocolFeeReceiver = payable(msg.sender);
        WETH9 = _weth9;
        currentMinFee = 1;
        depositsActive = true;
        // currentStopPositionReward = 0;
    }

    /*****************************************/
    /******** PROTOCOL ADMINISTRATION ********/
    /*****************************************/

    function setProtocolFeeReceiver(address receiver) external onlyOperator {
        require(address(0) != receiver, "IA"); // Invalid Address
        protocolFeeReceiver = payable(receiver);
        emit FeeReceiverSet(receiver);
    }

    function setProtocolOperator(address newOperator) external onlyOperator {
        require(address(0) != newOperator, "IA"); // Invalid Address
        protocolOperator = newOperator;
        emit OperatorSet(newOperator);
    }

    function setMinimumFee(uint16 fee) external onlyOperator {
        currentMinFee = fee;
        emit MinimumFeeSet(fee);
    }

    function setDepositsActive(bool active) external onlyOperator {
        depositsActive = active;
        emit DepositsActiveSet(active);
    }

    // function setStopPositionReward(uint8 reward) external onlyOperator {
    //     require(reward <= 100, "IR"); // Invalid Reward
    //     // currentStopPositionReward = reward;
    //     emit StopPositionRewardSet(reward);
    // }

    // require((params.token0Amount == 0 && params.token1Amount > 0) ||
    // (params.token1Amount == 0 && params.token0Amount > 0),"IAM");

    /*****************************************/
    /********** PUBLIC FUNCTIONS *************/
    /*****************************************/

    function getOwner(uint256 tokenId) external view returns (address) {
        return (positionInfos[tokenId].owner);
    }

    function getOwnedPositions(address owner) external view returns (uint256[] memory) {
        return ownedTokens[owner];
    }

    function getPositionInfo(uint256 tokenId) external view returns (PositionInfo memory) {
        return positionInfos[tokenId];
    }

    function cancelPosition(uint256 tokenId) external onlyOwner(tokenId) {
        // bool result =
        _payoutPosition(tokenId, false);
        // if (result) {
        emit CancelPosition(tokenId, msg.sender);
        // }
        // return result;
    }

    function stopPosition(uint256 tokenId) external {
        address owner = positionInfos[tokenId].owner;
        _payoutPosition(tokenId, true);
        // if (result) {
        emit CancelPosition(tokenId, owner);
        // }
        // return true;
    }

    // need to remove cyclomatic complexity from here
    function mint(
        MintParams calldata params
    )
        external
        payable
        onlyDepositsActive
        returns (
            // checkDeadline()
            uint256 tokenId
        )
    {
        require(params.token0Amount == 0 || params.token1Amount == 0, "ITQ"); // Invalid Token Quantity
        require(params.token0Amount > 0 || params.token1Amount > 0, "ITA"); // Invalid Token Amount
        require(params.protocolFee >= currentMinFee && params.protocolFee <= 500, "IPF"); // Invalid Protocol Fees

        uint256 ethAmount = 0;
        uint256 value = msg.value;
        address sender = msg.sender;

        if (value > 0) {
            if (params.token0 == address(WETH9)) {
                ethAmount = params.token0Amount;
            } else if (params.token1 == address(WETH9)) {
                ethAmount = params.token1Amount;
            } else {
                revert("Message value not 0");
            }
            require(ethAmount == value, "Invalid message value");
        }
        {
            IUniswapV3Pool pool = IUniswapV3Pool(
                uniswapV3Factory.getPool(params.token0, params.token1, params.poolFee)
            );

            // check if the current tick is out of sell range
            (, int24 currentTick, , , , , ) = pool.slot0();

            params.token0Amount > 0
                ? require(currentTick <= params.lowerTick, "Invalid Current Price")
                : require(currentTick >= params.lowerTick, "Invalid Current Price");

            // Approval for the position manger

            if (params.token0Amount > 0) {
                if (params.token0 != address(WETH9) || ethAmount == 0) {
                    UniswapTransferHelper.safeTransferFrom(params.token0, sender, address(this), params.token0Amount);
                }
                UniswapTransferHelper.safeApprove(
                    params.token0,
                    address(nonfungiblePositionManager),
                    params.token0Amount
                );
            } else {
                if (params.token1 != address(WETH9) || ethAmount == 0) {
                    UniswapTransferHelper.safeTransferFrom(params.token1, sender, address(this), params.token1Amount);
                }
                UniswapTransferHelper.safeApprove(
                    params.token1,
                    address(nonfungiblePositionManager),
                    params.token1Amount
                );
            }
        }

        // minting liquidity
        INonfungiblePositionManager.MintParams memory uniParams = INonfungiblePositionManager.MintParams({
            token0: params.token0,
            token1: params.token1,
            fee: params.poolFee,
            tickLower: params.lowerTick,
            tickUpper: params.upperTick,
            amount0Desired: params.token0Amount,
            amount1Desired: params.token1Amount,
            amount0Min: 0,
            amount1Min: 0,
            recipient: address(this),
            deadline: block.timestamp + deadline
        });

        uint128 liquidity = 0;
        (tokenId, liquidity, , ) = nonfungiblePositionManager.mint{ value: ethAmount }(uniParams);

        params.token0Amount > 0
            ? _storePositionInfo(
                tokenId,
                liquidity,
                params.upperTick,
                true,
                sender,
                params.protocolFee,
                params.unwrapToNative
            )
            : _storePositionInfo(
                tokenId,
                liquidity,
                params.lowerTick,
                false,
                sender,
                params.protocolFee,
                params.unwrapToNative
            );

        emit AddPosition(tokenId, sender, liquidity, params.token0Amount > 0);
        return tokenId;
    }

    function retrievePosition(uint256 tokenId) public onlyOwner(tokenId) {
        _removePosition(tokenId, msg.sender);

        emit RemovePosition(tokenId, msg.sender);
    }

    /*****************************************/
    /********** INTERNAL FUNCTIONS ***********/
    /*****************************************/

    function _storePositionInfo(
        uint256 tokenId,
        uint256 liquidity,
        int24 sellTarget,
        bool sellAboveTarget,
        address owner,
        uint16 fee,
        bool unwrapToNative
    ) internal {
        positionInfos[tokenId] = PositionInfo({
            owner: owner,
            liquidity: liquidity,
            sellTarget: sellTarget,
            sellAboveTarget: sellAboveTarget,
            fee: fee,
            unwrapToNative: unwrapToNative
        });
        uint256 length = ownedTokens[owner].length;
        ownedTokens[owner].push(tokenId);
        ownedTokensIndex[tokenId] = length;
    }

    function _payoutPosition(uint256 tokenId, bool isStoppedByProtocol) internal {
        PayOutParams memory payoutParams;

        (
            ,
            ,
            payoutParams.token0,
            payoutParams.token1,
            payoutParams.fee,
            payoutParams.tickLower,
            payoutParams.tickUpper,
            payoutParams.liquidity,
            ,
            ,
            ,

        ) = nonfungiblePositionManager.positions(tokenId);

        PositionInfo memory position = positionInfos[tokenId];

        require(position.owner != address(0), "PNF"); // Position Not Found

        IUniswapV3Pool pool = IUniswapV3Pool(
            uniswapV3Factory.getPool(payoutParams.token0, payoutParams.token1, payoutParams.fee)
        );
        (, int24 tick, , , , , ) = pool.slot0();
        if (isStoppedByProtocol) {
            position.sellAboveTarget
                ? require(tick >= position.sellTarget, "TNR") // Sell Target Not Reached
                : require(tick <= position.sellTarget, "TNR"); // Sell Target Not Reached
        }

        // removing liquidity here
        INonfungiblePositionManager.DecreaseLiquidityParams memory decreaseParams = INonfungiblePositionManager
            .DecreaseLiquidityParams(tokenId, payoutParams.liquidity, 0, 0, block.timestamp + deadline);

        nonfungiblePositionManager.decreaseLiquidity(decreaseParams);

        // collecting fees here
        INonfungiblePositionManager.CollectParams memory collectParams = INonfungiblePositionManager.CollectParams({
            tokenId: tokenId,
            recipient: address(this),
            amount0Max: type(uint128).max,
            amount1Max: type(uint128).max
        });

        (uint256 collectedAmount0, uint256 collectedAmount1) = nonfungiblePositionManager.collect(collectParams);

        uint256 fee0 = 0;
        uint256 fee1 = 0;

        // bool isInrange = ;
        if (isStoppedByProtocol || (tick > payoutParams.tickLower && tick < payoutParams.tickUpper)) {
            fee0 = (collectedAmount0 / 1000) * position.fee;
            fee1 = (collectedAmount1 / 1000) * position.fee;
        }

        _payoutTokens(collectedAmount0, fee0, payoutParams.token0, position.owner, position.unwrapToNative);
        _payoutTokens(collectedAmount1, fee1, payoutParams.token1, position.owner, position.unwrapToNative);
        _removePosition(tokenId, position.owner);
    }

    function _payoutTokens(
        uint256 collectedAmount,
        uint256 fee,
        address token,
        address receiver,
        bool unwrapToNative
    ) internal {
        if (collectedAmount > 0) {
            if (unwrapToNative && address(token) == address(WETH9)) {
                WETH9.withdraw(collectedAmount);
                UniswapTransferHelper.safeTransferETH(receiver, collectedAmount - fee);
            } else {
                UniswapTransferHelper.safeTransfer(token, receiver, collectedAmount - fee);
            }
        }
        if (fee > 0) {
            if (unwrapToNative && address(token) == address(WETH9)) {
                UniswapTransferHelper.safeTransferETH(receiver, fee);
            } else {
                UniswapTransferHelper.safeTransfer(token, address(this), fee);
            }

            // if (reward > 0) {
            //     if (unwrapToNative && token == address(WETH9)) {
            //         UniswapTransferHelper.safeTransferETH(msg.sender, reward);
            //     } else {
            //         UniswapTransferHelper.safeTransfer(token, msg.sender, reward);
            //     }
            // }
        }
    }

    function _removePosition(uint256 tokenId, address receiver) internal {
        delete positionInfos[tokenId];

        uint256 tokenIndex = ownedTokensIndex[tokenId];
        uint256 lastTokenIndex = (ownedTokens[receiver].length - 1); // 3
        uint256 lastToken = ownedTokens[receiver][lastTokenIndex]; // 104
        ownedTokens[receiver][tokenIndex] = lastToken;
        ownedTokens[receiver].pop();

        ownedTokensIndex[tokenId] = 0;
        ownedTokensIndex[lastToken] = tokenIndex;

        nonfungiblePositionManager.safeTransferFrom(address(this), msg.sender, tokenId);
    }

    function retrieveEth() external onlyOperator returns (bool) {
        return protocolFeeReceiver.send(address(this).balance);
    }

    function retrieveERC20(address token) external onlyOperator {
        IERC20 erc20 = IERC20(token);
        UniswapTransferHelper.safeTransfer(token, protocolFeeReceiver, erc20.balanceOf(address(this)));
    }

    receive() external payable {}
}

