import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract Marketplace is ReentrancyGuard {
    using Strings for uint;
    enum Type {
        ERC721,
        ERC1155
    }

    struct Purchaseinfo {
        address[] tokens;
        uint[] prices;
        uint priceInETH;
        address salesman;
    }

    mapping(bytes32 => Purchaseinfo) Sales; // hash of tokenAddress and tokenId => Purchasetemp

    function List(
        address tokenAddress,
        uint tokenId,
        Type tokenStandart,
        uint amount,
        address[] memory tokens,
        uint[] memory prices,
        uint priceInETH
    ) public nonReentrant {
        require(
            IERC721(tokenAddress).isApprovedForAll(msg.sender, address(this)),
            "List: need approve for this address"
        );
        require(tokens.length == prices.length, "List: length different");

        if (tokenStandart == Type.ERC721) {
            require(
                IERC721(tokenAddress).ownerOf(tokenId) == msg.sender,
                "List: Not your token"
            );
        } else {
            require(
                IERC1155(tokenAddress).balanceOf(msg.sender, tokenId) >= amount,
                "List: Not enougth token"
            );
        }

        bytes32 ItemHash = keccak256(abi.encodePacked(tokenAddress, tokenId));
        Purchaseinfo storage temp = Sales[ItemHash];
        temp.prices = prices;
        temp.tokens = tokens;
        temp.priceInETH = priceInETH;
        temp.salesman = msg.sender;
    }

    function Purchase(
        address tokenAddress,
        uint tokenId,
        Type tokenStandart,
        uint amount, // const 1 for ERC721
        address tokenForPurhase // address(0) for Purchase in ethers
    ) public payable nonReentrant {
        bytes32 ItemHash = keccak256(abi.encodePacked(tokenAddress, tokenId));
        Purchaseinfo storage temp = Sales[ItemHash];

        if (tokenStandart == Type.ERC721) {
            require(
                IERC721(tokenAddress).ownerOf(tokenId) == temp.salesman,
                "Purchase: owner changed"
            );
        } else {
            require(
                IERC1155(tokenAddress).balanceOf(temp.salesman, tokenId) >=
                    amount,
                "Purchase: Not enougth token on salesman balance"
            );
        }

        if (tokenForPurhase != address(0)) {
            uint price;
            for (uint i = 0; i < temp.tokens.length; i++) {
                if (temp.tokens[i] == tokenForPurhase) {
                    price = temp.prices[i];
                    break;
                }
            }

            require(
                IERC20(tokenForPurhase).transferFrom(
                    msg.sender,
                    temp.salesman,
                    price
                ),
                "Purchase: transfer tokens faild"
            );
        } else {
            (bool sent, ) = temp.salesman.call{value: temp.priceInETH}("");
            require(sent, "Purchase: transfer ethers faild");
        }

        if (tokenStandart == Type.ERC721) {
            IERC721(tokenAddress).safeTransferFrom(
                temp.salesman,
                msg.sender,
                tokenId,
                ""
            );
        } else {
            IERC1155(tokenAddress).safeTransferFrom(
                temp.salesman,
                msg.sender,
                tokenId,
                amount,
                ""
            );
        }
        temp.priceInETH = 0;
        delete (temp.prices);
        temp.salesman = address(0);
        delete (temp.tokens);
    }

    function UnList(address tokenAddress, uint tokenId) public {
        bytes32 ItemHash = keccak256(abi.encodePacked(tokenAddress, tokenId));
        Purchaseinfo storage temp = Sales[ItemHash];
        require(temp.salesman == msg.sender, "UnList: not your token");
        temp.priceInETH = 0;
        delete (temp.prices);
        temp.salesman = address(0);
        delete (temp.tokens);
    }

    function getPurchaseinfo(
        address tokenAddress,
        uint tokenId
    ) public view returns (Purchaseinfo memory) {
        return Sales[keccak256(abi.encodePacked(tokenAddress, tokenId))];
    }
}