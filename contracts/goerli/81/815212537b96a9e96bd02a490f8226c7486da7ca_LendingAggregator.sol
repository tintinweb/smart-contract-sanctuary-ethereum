pragma solidity ^0.8.0;

import {AToken} from "@aave-v3/protocol/tokenization/AToken.sol";
import {IPool} from "@aave-v3/interfaces/IPool.sol";
import {CErc20} from "@compound/CErc20.sol";
import {CEther} from "@compound/CEther.sol";
import {SafeERC20, IERC20} from "@openzeppelin/token/ERC20/utils/SafeERC20.sol";

contract LendingAggregator {
    using SafeERC20 for IERC20;

    enum Protocol {
        Aave,
        Compound
    }

    address public immutable cETH;

    error ErrorSendingETH();

    constructor(address cETH_) {
        cETH = cETH_;
    }

    function deposit(
        address payable poolToken,
        Protocol protocol,
        uint256 underlyingAmount
    ) external payable {
        uint256 preBal = IERC20(poolToken).balanceOf(address(this));

        if (protocol == Protocol.Aave) {
            IPool pool = AToken(poolToken).POOL();
            address underlying = AToken(poolToken).UNDERLYING_ASSET_ADDRESS();

            // get underlying tokens from user
            IERC20(underlying).safeTransferFrom(
                msg.sender,
                address(this),
                underlyingAmount
            );

            // approve
            IERC20(underlying).safeApprove(address(pool), 0);
            IERC20(underlying).safeApprove(address(pool), underlyingAmount);

            // deposit into Aave
            pool.supply(underlying, underlyingAmount, address(this), 0);
        } else if (protocol == Protocol.Compound) {
            address underlying = poolToken == cETH
                ? address(0)
                : CErc20(poolToken).underlying();

            if (underlying == address(0)) {
                CEther(poolToken).mint{value: msg.value}();
            } else {
                // get underlying tokens from user
                IERC20(underlying).safeTransferFrom(
                    msg.sender,
                    address(this),
                    underlyingAmount
                );

                // approve
                IERC20(underlying).safeApprove(poolToken, 0);
                IERC20(underlying).safeApprove(poolToken, underlyingAmount);

                // deposit into Compound
                CErc20(poolToken).mint(underlyingAmount);
            }
        }

        uint256 poolTokensReceived = IERC20(poolToken).balanceOf(
            address(this)
        ) - preBal;
        // send pool tokens to user
        IERC20(poolToken).safeTransfer(msg.sender, poolTokensReceived);
    }

    /// @notice Requires user to have approved this contract to transfer their poolTokens
    function withdraw(
        address poolToken,
        Protocol protocol,
        uint256 poolTokenAmount
    ) external {
        // get pool tokens from user
        IERC20(poolToken).safeTransferFrom(
            msg.sender,
            address(this),
            poolTokenAmount
        );

        if (protocol == Protocol.Aave) {
            IPool pool = AToken(poolToken).POOL();
            address underlying = AToken(poolToken).UNDERLYING_ASSET_ADDRESS();

            // withdraw underlying from Aave and send to user
            pool.withdraw(underlying, poolTokenAmount, msg.sender);
        } else if (protocol == Protocol.Compound) {
            address underlying = poolToken == cETH
                ? address(0)
                : CErc20(poolToken).underlying();

            uint256 preBal = _getBalance(underlying);
            CErc20(poolToken).redeem(poolTokenAmount);
            uint256 underlyingReceived = _getBalance(underlying) - preBal;

            // send underlying to user
            if (underlying == address(0)) {
                (bool success, ) = msg.sender.call{value: underlyingReceived}(
                    ""
                );
                if (!success) revert ErrorSendingETH();
            } else {
                IERC20(underlying).safeTransfer(msg.sender, underlyingReceived);
            }
        }
    }

    function _getBalance(address token)
        internal
        view
        returns (uint256 balance)
    {
        if (token == address(0)) {
            balance = address(this).balance;
        } else {
            balance = IERC20(token).balanceOf(address(this));
        }
    }

    receive() external payable {}
}

