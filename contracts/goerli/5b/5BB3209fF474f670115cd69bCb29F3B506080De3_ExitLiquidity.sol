contract ExitLiquidity {
    // Address for Contract Functions & Tokens
    IUniswapRouter public constant uniswapRouter = IUniswapRouter(0xE592427A0AEce92De3Edee1F18E0157C05861564);
    IQuoter public constant quoter = IQuoter(0xb27308f9F90D607463bb33eA1BeBb41C27CE5AB6);
    address public nonfungiblePositionManagerAddress = 0xC36442b4a4522E871399CD717aBDD847Ab11FE88;
    
    address public constant DAI = 0xB3432AC178B2d7c3909309032a78edC342ee5B30;   //testnet
    address private constant USDC = 0x20D96c88Dc5A0B02AE7b82a59f64eDB1fda5f508; //testnet
    uint24 public constant poolFee = 3000;
    address public userAddress;

    INonfungiblePositionManager public immutable nonfungiblePositionManager;
    // Struct for User deposits
    struct Deposit {
        address owner;
        uint128 liquidity;
        address token0;
        address token1;
    }

    // deposits[tokenId] => Deposit
    mapping(uint256 => Deposit) public deposits;

    // Constructor
    constructor() {
        userAddress = msg.sender;
        nonfungiblePositionManager = INonfungiblePositionManager(
            nonfungiblePositionManagerAddress
        );
    }

    // Implementing `onERC721Received` so this contract can receive custody of erc721 tokens
    function onERC721Received(
        address operator,
        address,
        uint256 tokenId,
        bytes calldata
    ) external returns (bytes4) {
        require(
            msg.sender == address(nonfungiblePositionManagerAddress),
            "not a univ3 nft"
        );
        _createDeposit(operator, tokenId);
        return this.onERC721Received.selector;
    }

    // to create the deposit by adding the values to the struct
    function _createDeposit(address owner, uint256 tokenId) internal {
        (,,address token0,address token1,,,,uint128 liquidity,,,,) = 
            nonfungiblePositionManager.positions(tokenId);
        
        // set the owner and data for position
        deposits[tokenId] = Deposit({
            owner: owner,
            liquidity: liquidity,
            token0: token0,
            token1: token1
        });
    }

    function mintNewPosition()
        external
        returns (
            uint256 tokenId,
            uint128 liquidity,
            uint256 amount0,
            uint256 amount1
        )
    {
        // For this example, we will provide equal amounts of liquidity in both assets.
        // Providing liquidity in both assets means liquidity will be earning fees and is considered in-range.
        uint256 amount0ToMint = 1000;
        uint256 amount1ToMint = 1000;

        // transfer tokens to contract
        TransferHelper.safeTransferFrom(DAI, msg.sender, address(this), amount0ToMint);
        TransferHelper.safeTransferFrom(USDC, msg.sender, address(this), amount1ToMint);

        // Approve the position manager
        TransferHelper.safeApprove(DAI, address(nonfungiblePositionManager), amount0ToMint);
        TransferHelper.safeApprove(USDC, address(nonfungiblePositionManager), amount1ToMint);

        INonfungiblePositionManager.MintParams memory params =
            INonfungiblePositionManager.MintParams({
                token0: DAI,
                token1: USDC,
                fee: poolFee,
                tickLower: TickMath.MIN_TICK,
                tickUpper: TickMath.MAX_TICK,
                amount0Desired: amount0ToMint,
                amount1Desired: amount1ToMint,
                amount0Min: 0,
                amount1Min: 0,
                recipient: address(this),
                deadline: block.timestamp
            });

        // Note that the pool defined by DAI/USDC and fee tier 0.3% must already be created and initialized in order to mint
        (tokenId, liquidity, amount0, amount1) = nonfungiblePositionManager.mint(params);

        // Create a deposit
        _createDeposit(msg.sender, tokenId);

        // Remove allowance and refund in both assets.
        if (amount0 < amount0ToMint) {
            TransferHelper.safeApprove(DAI, address(nonfungiblePositionManager), 0);
            uint256 refund0 = amount0ToMint - amount0;
            TransferHelper.safeTransfer(DAI, msg.sender, refund0);
        }

        if (amount1 < amount1ToMint) {
            TransferHelper.safeApprove(USDC, address(nonfungiblePositionManager), 0);
            uint256 refund1 = amount1ToMint - amount1;
            TransferHelper.safeTransfer(USDC, msg.sender, refund1);
        }
    }

    // function to remove full liquidity
    function exitLiquidity(uint256 tokenId)
        external
        returns (uint256 amount0, uint256 amount1)
    {
        require(msg.sender == deposits[tokenId].owner, "Not the owner");
        uint128 liquidity = deposits[tokenId].liquidity;
        uint128 reqLiquidity = 0;

        // amount0Min and amount1Min are price slippage checks
        // if the amount received after burning is not greater than these minimums, transaction will fail
        INonfungiblePositionManager.DecreaseLiquidityParams
            memory params = INonfungiblePositionManager
                .DecreaseLiquidityParams({
                    tokenId: tokenId,
                    liquidity: reqLiquidity,
                    amount0Min: 0,
                    amount1Min: 0,
                    deadline: block.timestamp
                });

        (amount0, amount1) = nonfungiblePositionManager.decreaseLiquidity(
            params
        );

        // send liquidity back to owner
        _sendToOwner(tokenId, amount0, amount1);
    }

    // transfer the funds to the owner of NFT
    function _sendToOwner(
        uint256 tokenId,
        uint256 amount0,
        uint256 amount1
    ) private {
        // get owner of contract
        address owner = deposits[tokenId].owner;

        address token0 = deposits[tokenId].token0;
        address token1 = deposits[tokenId].token1;
        // send collected fees to owner
        if(token0 == USDC){
            TransferHelper.safeTransfer(token0, owner, amount0);
        }else{
            convertToUSDCAndTransfer(token0, owner, amount0);
        }
        if(token1 == USDC){
            TransferHelper.safeTransfer(token1, owner, amount1);
        }else{
            convertToUSDCAndTransfer(token1, owner, amount1);
        }
    }

    /// @notice To convert tokens to USDC before transfer to the owner
    function convertToUSDCAndTransfer(
        address tokenAddress,
        address owner,
        uint256 tokenAmount
    ) private {
        TransferHelper.safeApprove(tokenAddress, address(uniswapRouter), tokenAmount);

        uint256 deadline = block.timestamp + 25;
        address tokenIn = tokenAddress;
        address tokenOut = USDC;
        uint24 fee = 3000;
        address recipient = owner;
        uint256 amountIn = tokenAmount;
        uint256 amountOutMinimum = 1;
        uint160 sqrtPriceLimitX96 = 0;
        
        ISwapRouter.ExactInputSingleParams memory params = ISwapRouter.ExactInputSingleParams(
            tokenIn,
            tokenOut,
            fee,
            recipient,
            deadline,
            amountIn,
            amountOutMinimum,
            sqrtPriceLimitX96
        );
        
        uniswapRouter.exactInputSingle{ value: msg.value }(params);
    }
}