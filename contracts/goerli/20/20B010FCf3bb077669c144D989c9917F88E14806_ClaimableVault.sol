    ) public override returns (bytes4) {
        bytes memory key = abi.encode(operator, msg.sender, tokenId);
        Claim storage existingClaim = claims[key];

        if (existingClaim.admin == address(0x0)) {
            existingClaim.admin = operator;
            existingClaim.supply = value;
            existingClaim.merkleRoot = bytes32(data);
        } else {
            existingClaim.supply += value;
        }

        // emit Success event
        emit ClaimableVaultCreatedOrSupplyIncreased(
            key,
            key,
            existingClaim.admin,
            msg.sender,
            tokenId
        );

        return this.onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] memory,
        uint256[] memory,
        bytes memory
    ) public pure override returns (bytes4) {
        revert("Batch sends are not supported");
    }

    ///  ===== Core Functions =====

    function extractClaimableAsset(bytes calldata claimKey)
        external
        whenNotPaused
        onlyValidClaimKey(claimKey)
        onlyClaimAdmin(claimKey)
    {
        (address _admin, address _tokenAddress, uint256 _tokenId) = extractFromClaimKey(claimKey);

        uint256 prevSupply = claims[claimKey].supply;
        claims[claimKey].supply = 0;

        IERC1155(_tokenAddress).safeTransferFrom(
            address(this),
            _admin,
            _tokenId,
            prevSupply,
            ""
        );
    }

    function claim(bytes calldata claimKey, bytes32[] calldata proof)
        external
        whenNotPaused
        onlyValidClaimKey(claimKey)
    {
        require(
            MerkleProof.verify(
                proof,
                claims[claimKey].merkleRoot,
                keccak256(abi.encode(msg.sender))
            ),
            "invalid proof"
        );
        require(
            claims[claimKey].claimed[msg.sender] == false,
            "user has already claimed"
        );

        require(claims[claimKey].supply > 0, "this vault is empty");

        (, address _tokenAddress, uint256 _tokenId) = extractFromClaimKey(claimKey);

        claims[claimKey].claimed[msg.sender] = true;
        claims[claimKey].supply--;

        IERC1155(_tokenAddress).safeTransferFrom(
            address(this),
            msg.sender,
            _tokenId,
            1,
            ""
        );
    }

    function setClaimRoot(bytes calldata claimKey, bytes32 root)
        external
        whenNotPaused
        onlyValidClaimKey(claimKey)
        onlyClaimAdmin(claimKey)
    {
        claims[claimKey].merkleRoot = root;
    }

    /// ===== Reads =====

    function getClaimRoot(bytes calldata claimKey)
        external
        view
        returns (bytes32)
    {
        return claims[claimKey].merkleRoot;
    }

    function getClaimAdmin(bytes calldata claimKey)
        public
        view
        returns (address)
    {
        return claims[claimKey].admin;
    }

    function getClaimSupply(bytes calldata claimKey)
        public
        view
        returns (uint256)
    {
        return claims[claimKey].supply;
    }

    function getClaimKey(
        address claimAdmin,
        address contractAddress,
        uint256 tokenId
    ) public pure returns (bytes memory) {
        return abi.encode(claimAdmin, contractAddress, tokenId);
    }

    function extractFromClaimKey(
        bytes memory claimKey
    ) public pure returns (address claimAdmin, address contractAddress, uint256 tokenId) {
        return abi.decode(
            claimKey,
            (address, address, uint256)
        );
    }

    /// ===== Admin stuff =====
    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }
}