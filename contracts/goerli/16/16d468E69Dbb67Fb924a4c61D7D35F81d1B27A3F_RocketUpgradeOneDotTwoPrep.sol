pragma solidity 0.7.6;
pragma abicoder v2;

import "../rocketpool/contracts/contract/RocketBase.sol";

/// @notice Transient contract to update settings in preparation for Atlas
contract RocketUpgradeOneDotTwoPrep is RocketBase {

    // Whether the upgrade has been performed or not
    bool public executed;

    // Save deployer to limit access to execute function
    address immutable deployer;

    // Setting values
    uint256 immutable public depositPoolLimit;
    uint256 immutable public collateralRatio;

    constructor(
        RocketStorageInterface _rocketStorageAddress,
        uint256 _depositPoolLimit,
        uint256 _collateralRatio
    ) RocketBase(_rocketStorageAddress) {
        // Version
        version = 1;
        deployer = msg.sender;

        depositPoolLimit = _depositPoolLimit;
        collateralRatio = _collateralRatio;
    }

    /// @notice Returns the address of the RocketStorage contract
    function getRocketStorageAddress() external view returns (address) {
        return address(rocketStorage);
    }

    /// @notice Once this contract has been voted in by oDAO, deployer can execute the upgrade
    function execute() external {
        require(msg.sender == deployer, "Only deployer can execute");

        require(!executed, "Already executed");
        executed = true;

        bytes32 settingNameSpace;

        // Update rETH collateral target
        settingNameSpace = keccak256(abi.encodePacked("dao.protocol.setting.", "network"));
        setUint(keccak256(abi.encodePacked(settingNameSpace, "network.reth.collateral.target")), collateralRatio);

        // Update deposit pool limit
        settingNameSpace = keccak256(abi.encodePacked("dao.protocol.setting.", "deposit"));
        setUint(keccak256(abi.encodePacked(settingNameSpace, "deposit.pool.maximum")), depositPoolLimit);
    }
}

pragma solidity 0.7.6;

