pragma solidity ^0.8.0;
contract DaoHallExchange is ReentrancyGuard, Ownable, EIP712 {
    using Address for address;

    event OrderMade(
        address maker, 
        address taker,
        address collection,
        uint256 tokenId,
        address currency,
        uint256 price,
        uint256 nonce,
        uint256 timestamp
    );

    event OrderCanceled(
        address maker,
        uint256 nonce,
        uint256 timestamp
    );
    
    bytes4 private constant _INTERFACE_ID_ERC2981 = 0x2a55205a;

    mapping (address => mapping(uint256 => bool)) private _nonceUsed;
    mapping (address => bool) private _supportedCurrencies;
    uint32 public protocolFeePercentage; // 
    address public protocolFeeReceiver;

    constructor(uint32 initProtocolFeePercentage, address initProtocolFeeReceiver, address supportedCurrency) 
            EIP712("MintgleExchange", "1") {
        protocolFeePercentage = initProtocolFeePercentage;
        protocolFeeReceiver = initProtocolFeeReceiver;
        _supportedCurrencies[supportedCurrency] = true;
    }

    function changeProtocolFeeReceiver(address newReceiver) public onlyOwner {
        protocolFeeReceiver = newReceiver;
    }

    function changeProtocolFeePercentage(uint32 newProtocolFeePercentage) public onlyOwner {
        protocolFeePercentage = newProtocolFeePercentage;
    }

    function addSupportedCurrency(address currency) public onlyOwner {
        _supportedCurrencies[currency] = true;
    }

    function removeSupportedCurrency(address currency) public onlyOwner {
        _supportedCurrencies[currency] = false;
    }

    function isSupportedCurrency(address currency) public view returns (bool) {
        return _supportedCurrencies[currency];
    }

    function withdraw(address receiver, uint256 amount) public onlyOwner {
        Address.sendValue(payable(receiver), amount);
    }

    function makeOrder(Types.Order calldata order) public payable nonReentrant {
        // check order
        _validateOrder(order);

        // process funds
        _transferFunds(order);

        // transfer token
        _transferNFT(order);

        _nonceUsed[order.maker][order.nonce] = true;
        emit OrderMade(order.maker, msg.sender, order.collection, order.tokenId, 
                    order.currency, order.price, order.nonce, block.timestamp);
    }

    function cancelOrder(uint256 nonce) public nonReentrant {
        require(!_nonceUsed[msg.sender][nonce], "Order has been processed.");

        _nonceUsed[msg.sender][nonce] = true;
        emit OrderCanceled(msg.sender, nonce, block.timestamp);
    }

    function isNonceUsed(address maker, uint256 nonce) public view returns (bool){
        return _nonceUsed[maker][nonce];
    }

    function _transferFunds(Types.Order calldata order) internal {
        // check payment
        uint256 payAmount = order.price;
        uint256 loyaltyFee = 0;
        address creator;
        bool is2981 = IERC165(order.collection).supportsInterface(_INTERFACE_ID_ERC2981);
        if(is2981){
            (creator, loyaltyFee) = IERC2981(order.collection).royaltyInfo(order.tokenId, payAmount);
        }
        uint256 protocolFee = payAmount * protocolFeePercentage / 10000;
        require(payAmount > loyaltyFee + protocolFee, "Payment amount not sufficient.");

        address seller = order.isBid ? msg.sender : order.maker;
        address buyer = order.isBid ? order.maker : msg.sender;

        uint256 sellerReceived = payAmount - loyaltyFee - protocolFee;
        if(order.currency == address(0)) {
            require(!order.isBid, "Bid without currency is not allowed.");
            
            require(payAmount == msg.value, "Invalid price.");

            // send loyalty
            if(loyaltyFee > 0){
                Address.sendValue(payable(creator), loyaltyFee);
            }

            // send protocol fee
            Address.sendValue(payable(protocolFeeReceiver), protocolFee);

            // send to seller
            Address.sendValue(payable(seller), sellerReceived);
        }
        else{ 
            require(_supportedCurrencies[order.currency], "CurrencyNotSupported");
            
            IERC20 currency = IERC20(order.currency);

            // transfer currency to this contract
            currency.transferFrom(buyer, address(this), payAmount);

            // send loyalty
            if(loyaltyFee > 0){
                currency.transfer(creator, loyaltyFee);
            }

            // send protocol fee
            currency.transfer(protocolFeeReceiver, protocolFee);

            // send to seller
            currency.transfer(seller, sellerReceived);
        }
    }

    function _transferNFT(Types.Order calldata order) internal {
        IERC1155 collection = IERC1155(order.collection);
        address seller = order.isBid ? msg.sender : order.maker;
        address buyer = order.isBid ? order.maker : msg.sender;
        collection.safeTransferFrom(seller, buyer, order.tokenId, 1, "");
    }

    function _validateOrder(Types.Order calldata order) internal view {
        // nonce should not be used
        require(!_nonceUsed[order.maker][order.nonce], "Nonce already used.");
        require(order.maker != address(0), "No maker address");
        require(order.startTime <= block.timestamp, "Offer not started.");
        require(order.endTime >= block.timestamp, "Offer expired.");
        require(Types.isSignatureValid(order, _domainSeparatorV4()), "Invalid signer");
    }
}