pragma solidity =0.7.6;
pragma abicoder v2;

import "@uniswap/swap-router-contracts/contracts/interfaces/IV3SwapRouter.sol";
import '@uniswap/v3-periphery/contracts/libraries/TransferHelper.sol';
import "@openzeppelin/contracts/math/SafeMath.sol";
import 'contracts/interfaces/IWETH.sol';

contract ExodusSwap {

  using SafeMath for uint256;

  IV3SwapRouter private constant swapRouter = IV3SwapRouter(0x68b3465833fb72A70ecDF485E0e4C7bD8665Fc45);

  uint private constant transaction_fee = 1;

  address private constant owner = 0x58AD93121D4fb5cbC5723c7063fD8083ed88fcE1;

  mapping(address => uint256) public collection;

  /// @notice Swaps `amountIn` of one token for as much as possible of another along the specified path after charging specified fees
  /// @param tokenIn The address of the token from swap is being done
  /// @param path The parameters necessary for the multi-hop swap, encoded as `ExactInputParams` in calldata
  /// @param amountOutMinimum Minimum amount of output token after swap
  /// @return amountOut The amount of the received token
  function executeSwap(uint256 amountIn, address tokenIn, bytes calldata path, uint256 amountOutMinimum) external payable returns (uint256 amountOut) {

    require(amountIn > 0, "Amount of tokenIn must be greater than zero.");

    if (msg.value > 0) {
      IWETH9(tokenIn).deposit{value : amountIn}();
    } else {
      TransferHelper.safeTransferFrom(tokenIn, msg.sender, address(this), amountIn);
    }

    TransferHelper.safeApprove(tokenIn, address(swapRouter), amountIn);

    uint256 fee_val = (amountIn * transaction_fee / 100);

    collection[tokenIn] += fee_val;

    IV3SwapRouter.ExactInputParams memory params = IV3SwapRouter.ExactInputParams({
      path : path,
      recipient : msg.sender,
      amountIn : amountIn - fee_val,
      amountOutMinimum : amountOutMinimum
    });

    amountOut = swapRouter.exactInput(params);
  }

  /// @notice Withdraws collected fees from swaps by specific token
  /// @param token Address of the token
  function withdrawTokens(address token) external {

    IERC20(token).transfer(owner, collection[token]);
    collection[token] = 0;
  }
}

