import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "./SoulBoundToken.sol";

contract SBT is Ownable, SoulboundToken {
    using Counters for Counters.Counter;
    Counters.Counter private _tokenIds;

    uint128 private _totalSupply;
    uint128 private _burnCount;

    mapping(uint256 => string) internal _verifyStr;

    constructor() SoulboundToken("SBTTest1014","ST_1"){}

    function mint(string memory tokenURI, string memory verifyStr, address to) external onlyOwner returns (uint256 tokenId){
        _tokenIds.increment();

        uint256 newItemId = _tokenIds.current();
        _verifyStr[newItemId] = verifyStr;
        _mint(to, newItemId);
        _setTokenURI(newItemId,tokenURI);

        return newItemId;
    }

}

