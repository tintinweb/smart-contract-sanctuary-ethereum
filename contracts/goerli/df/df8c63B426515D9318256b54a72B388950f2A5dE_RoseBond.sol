    // Get curnent redeemable amount of user
    function getRedeemAmount(address _who, uint256 _pid) public view returns (uint256) {
        UserInfo[] storage user = userInfo[_who];
        uint256 endTime = user[_pid].depositTime.add(vestingTime);
        uint256 debtPerTime = user[_pid].currentDebt.div(
            endTime.sub(user[_pid].lastRedeemTime)
        );
        uint256 redeemAmount = debtPerTime.mul(
            block.timestamp.sub(user[_pid].lastRedeemTime)
        );
        return redeemAmount;
    }

    // redeem current debt
    function redeem(uint256 _pid) public {
        UserInfo[] storage user = userInfo[msg.sender];
        uint256 redeemAmount = getRedeemAmount(msg.sender, _pid);
        rose.mint(msg.sender, redeemAmount);
        user[_pid].currentDebt -= redeemAmount;
        user[_pid].lastRedeemTime = block.timestamp;
        if (user[_pid].currentDebt == 0) {
            user[_pid].lastRedeemTime = 0;
        }
    }

