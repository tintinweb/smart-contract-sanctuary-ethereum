import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

import "./ITokenVesting.sol";

import "./TransferHelper.sol";

/**
 * @title TokensVesting
 * @dev A token holder contract that can release its token balance gradually like a
 * typical vesting scheme.
 */
contract TokensVesting is ITokenVesting, Initializable, OwnableUpgradeable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    uint256 constant MAX_UNLOCK_DATE = 10000000000;
    using EnumerableSet for EnumerableSet.Bytes32Set;
    uint256[] private _totalVestingPeriods;

    event rewardClaimed(uint256 amount);
    event reflectionClaimed(uint256 amount);
    event customRewardClaimed(uint256 amount, address token);
    event TokensReleased(uint256 amount);
    event TokensVestingRevoked(address receiver, uint256 amount);

    // Durations and timestamps are expressed in UNIX time, the same units as block.timestamp.
    uint256 private _start;
    uint256 private _unlockDate;
    uint256 private _duration;
    uint256 private _releasesCount;
    uint256 private _amountLocked;
    uint256 private _released;
    address private _revoker;
    bool private _revocable;
    bool private _revoked;

    IERC20 private _token;

    /**
     * @dev Creates a vesting contract that vests its balance of any ERC20 token to the
     * beneficiary, gradually in a linear fashion until start + duration. By then all
     * of the balance will have vested.
     * @param token address of the token which should be vested
     * @param duration duration in seconds of each release
     * @param releasesCount number of releases of vested amount
     * @param revocable whether the vesting is revocable or not
     * @param revoker address who can revoke funds
     */
    function initialize(
        address token,
        address owner,
        uint256 duration,
        uint256 releasesCount,
        bool revocable,
        address revoker,
        uint256 amount
    ) external override initializer {
        __Ownable_init();

        require(token != address(0), "TokensVesting: token is the zero address!");
        require(revoker != address(0), "TokensVesting: revoker is the zero address!");
        require(duration > 0, "TokensVesting: duration is 0!");
        require(releasesCount > 0, "TokensVesting: releases count is 0!");
        _token = IERC20(token);
        _duration = duration;
        _releasesCount = releasesCount;
        _start = block.timestamp;
        _unlockDate = _start.add(_releasesCount.mul(_duration));
        _revocable = revocable;
        _revoker = revoker;
        _amountLocked = amount;

        for (uint256 i = 0; i < _releasesCount; i++) {
            _totalVestingPeriods.push(_start.add(_duration.mul(i + 1)));
        }
        transferOwnership(owner);
    }

    // -----------------------------------------------------------------------
    // GETTERS
    // -----------------------------------------------------------------------

    /**
     * @return the start time of the token vesting.
     */
    function start() external view returns (uint256) {
        return _start;
    }

    /**
     * @return the finish time of the token vesting.
     */
    function unlockDate() external view returns (uint256) {
        return _unlockDate;
    }

    /**
     * @return the duration of the token vesting.
     */
    function getDuration() external view returns (uint256) {
        return _duration;
    }

    /**
     * @return the releases count of the token vesting.
     */
    function getReleasesCount() external view returns (uint256) {
        return _releasesCount;
    }

    /**
     * @return true if the vesting is revocable.
     */
    function getRevocable() external view returns (bool) {
        return _revocable;
    }

    /**
     * @return the amount of the token released.
     */
    function released() external view returns (uint256) {
        return _released;
    }

    /**
     * @return true if the token is revoked.
     */
    function revoked() external view returns (bool) {
        return _revoked;
    }

    /**
     * @return address, who allowed to revoke.
     */
    function getRevoker() external view returns (address) {
        return _revoker;
    }

    /**
     * @return all vesting periods
     */
    function vestingPeriods() external view returns (uint256[] memory) {
        uint256 tokensPerRelease = getTokensPerRelease();
        uint256 releasedNumber = _released.div(tokensPerRelease);
        uint256 length = _releasesCount - releasedNumber;

        uint256[] memory available = new uint256[](length);

        for (uint256 i = 0; i < _totalVestingPeriods.length; i++) {
            if (i >= releasedNumber) available[i - releasedNumber] = _totalVestingPeriods[i];
        }

        return available;
    }

    function getAvailableTokens() external view returns (uint256) {
        return _releasableAmount();
    }

    function getAvailableReleases() external view returns (uint256) {
        uint256 timeLeftAfterStart = block.timestamp.sub(_start);
        uint256 availableReleases = timeLeftAfterStart.div(_duration);
        return availableReleases;
    }

    function relock(uint256 _newUnlockDate) external {
        require(_unlockDate > block.timestamp, "TokensVesting: already unlocked");
        require(_newUnlockDate < MAX_UNLOCK_DATE, "TokensVesting: unlock date too long"); // prevents errors when timestamp entered in milliseconds
        require(_unlockDate < _newUnlockDate, "TokensVesting: invalid unlock date");

        if (_releasesCount > 1) {
            uint256 totalLockerTime = _newUnlockDate.sub(_start);
            uint256 newDuration = totalLockerTime.div(_releasesCount);
            _duration = newDuration;
            _updateVestingPeriods();
        }
        _unlockDate = _newUnlockDate;
    }

    function _updateVestingPeriods() internal {
        for (uint256 i = 0; i < _releasesCount; i++) {
            _totalVestingPeriods[i] = _start.add(_duration.mul(i + 1));
        }
    }

    // -----------------------------------------------------------------------
    // SETTERS
    // -----------------------------------------------------------------------

    /**
     * @notice Transfers vested tokens to beneficiary.
     */
    function release() external onlyOwner nonReentrant {
        uint256 unreleased = _releasableAmount();
        require(unreleased > 0, "TokensVesting: No tokens are due");
        _released = _released.add(unreleased);
        _token.safeTransfer(msg.sender, unreleased);
        emit TokensReleased(unreleased);
    }

    function claimRewards() external onlyOwner {
        uint256 balance = address(this).balance;
        (bool sent, ) = payable(msg.sender).call{value: balance}("");
        require(sent, "TokensVesting: Failed to send rewards");
        emit rewardClaimed(balance);
    }

    function claimReflections() external onlyOwner {
        uint256 tokenBalance = _token.balanceOf(address(this));
        uint256 reflection = tokenBalance.sub(_amountLocked);
        require(reflection > 0, "TokensVesting: there is no reflection to claim");
        _token.safeTransfer(msg.sender, reflection);
        emit reflectionClaimed(reflection);
    }

    function claimCustomRewards(address customToken) external onlyOwner {
        require(customToken != address(0), "TokensVesting: Address Zero");
        require(customToken != address(_token), "TokensVesting: token submited is the same as blocked");
        uint256 tokenBalance = IERC20(customToken).balanceOf(address(this));
        require(tokenBalance > 0, "TokensVesting: amount is 0");
        TransferHelper.safeTransfer(customToken, msg.sender, tokenBalance);
        emit customRewardClaimed(tokenBalance, customToken);
    }

    /**
     * @notice Allows the owner to revoke the vesting. Tokens already vested
     * remain in the contract, the rest are returned to the owner.
     * @param receiver Address who should receive tokens
     */
    function revoke(address receiver) external nonReentrant {
        require(msg.sender == _revoker, "revoke: unauthorized sender!");
        require(_revocable, "revoke: cannot revoke!");
        require(!_revoked, "revoke: token already revoked!");

        uint256 unreleased = _releasableAmount();
        uint256 refund = _amountLocked.sub(unreleased);

        _revoked = true;
        _token.safeTransfer(receiver, refund);
        emit TokensVestingRevoked(receiver, refund);
    }

    // -----------------------------------------------------------------------
    // INTERNAL
    // -----------------------------------------------------------------------

    /**
     * @dev Calculates the amount that has already vested but hasn't been released yet.
     */
    function _releasableAmount() private view returns (uint256) {
        return _vestedAmount().sub(_released);
    }

    function getTokensPerRelease() public view returns (uint256) {
        return _amountLocked.div(_releasesCount);
    }

    function deposit() external payable {}

    /**
     * @dev Calculates the amount that has already vested.
     */
    function _vestedAmount() private view returns (uint256) {
        uint256 totalBalance = _amountLocked.add(_released);
        if (block.timestamp < _start) {
            return 0;
        } else if (block.timestamp >= _unlockDate || _revoked) {
            return totalBalance;
        } else {
            uint256 timeLeftAfterStart = block.timestamp.sub(_start);
            uint256 availableReleases = timeLeftAfterStart.div(_duration);
            uint256 tokensPerRelease = totalBalance.div(_releasesCount);

            return availableReleases.mul(tokensPerRelease);
        }
    }
}

