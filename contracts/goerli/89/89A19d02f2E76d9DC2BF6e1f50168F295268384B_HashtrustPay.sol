import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./TokenWhiteList.sol";

contract Oracle is TokenWhiteList {
    /// @dev safe math
    using SafeMath for uint256;

    /**
     * @dev Get USD Price of token
     * @param _oracleAddress                    Address of the oracle
     * @param _oracleDecimalsLeft               decimals of the oracle
     * @return uint256
     */
    function getUSDPrice(address _oracleAddress, uint256 _oracleDecimalsLeft)
        public
        view
        returns (uint256)
    {
        AggregatorV3Interface oracle = AggregatorV3Interface(_oracleAddress);
        (, int256 price, , , ) = oracle.latestRoundData();

        return uint256(price) * 10**_oracleDecimalsLeft;
    }

    /**
     * @dev Parse Amount From USD
     * @param _token                    Address of the token
     * @param _amount                   Amount of the token
     * @return uint256
     */
    function parseAmountFromUSD(address _token, uint256 _amount)
        public
        view
        returns (uint256)
    {
        /// @dev Get info of token
        Token memory token = getToken(_token);

        /// @dev Get USD Price of token
        uint256 usdPrice = getUSDPrice(
            token.oracleAddress,
            token.oracleDecimalsLeft
        );

        /// @dev Calculate amount to send
        uint256 unity = 1 ether;
        uint256 amountToSend = _amount.mul(unity).div(usdPrice);

        uint256 _parseToTokenDecimals = transformAmountToTokenDecimals(
            amountToSend,
            token.oracleDecimalsLeft
        );

        return _parseToTokenDecimals;
    }

    /**
     * @notice Parse amount to token decimals
     * @dev Parse amount to token decimals
     * @param _amount                           Amount to convert
     * @param _decimals                         Decimals of token
     */
    function transformAmountToTokenDecimals(uint256 _amount, uint256 _decimals)
        internal
        pure
        returns (uint256)
    {
        if (_decimals == 18) {
            return _amount;
        } else if (_decimals == 8) {
            return _amount.div(10**10);
        } else if (_decimals == 6) {
            return _amount.div(10**12);
        } else if (_decimals == 3) {
            return _amount.div(10**15);
        }

        return 0;
    }
}

