pragma solidity 0.8.13;

import "openzeppelin-utils/structs/EnumerableSetUpgradeable.sol";
import "openzeppelin-utils/structs/EnumerableMapUpgradeable.sol";
import "openzeppelin-contracts/access/Ownable2Step.sol";
import "openzeppelin-contracts/access/Ownable.sol";
import "./interfaces/IRegistry.sol";

/**
 * @title Registry Contract
 * @notice Keeps a record of all valid contract addresses currently used in the protocol
 */
contract Registry is IRegistry, Ownable2Step {
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.AddressSet;
    using EnumerableMapUpgradeable for EnumerableMapUpgradeable.UintToAddressMap;

    /* Addresses */
    address private futureVaultFactory;
    EnumerableSetUpgradeable.AddressSet private futureVaults;
    mapping(address => address) private poolFutureMap;
    address zapDepositor;

    event RegistryUpdate(string _contractName, address _old, address _new);

    /**
     * @notice Constructor of the contract
     */
    constructor() Ownable() {}

    /* Zaps */

    /**
     * @notice set zap depositor
     * @param _zap address of zap depositor
     */
    function setZapDepositor(address _zap) external override {
        _checkOwner();
        require(_zap != address(0), "Registry: Cannot set zap to zero address");
        zapDepositor = _zap;
    }

    /**
     * @notice get the address of zap depositor
     */
    function getZapDepositor() external view returns (address) {
        return zapDepositor;
    }

    /* Futures */

    /**
     * @notice Setter for the future vault factory address
     * @param _newFutureVaultFactory the address of the token factory
     */
    function setFutureVaultFactory(
        address _newFutureVaultFactory
    ) external override {
        _checkOwner();
        require(
            _newFutureVaultFactory != address(0),
            "Registry: Cannot set futureVault factory to zero address"
        );
        emit RegistryUpdate(
            "FutureVaultFactory",
            futureVaultFactory,
            _newFutureVaultFactory
        );
        futureVaultFactory = _newFutureVaultFactory;
    }

    /**
     * @notice Add a future to the registry
     * @param _future the address of the future to add to the registry
     */
    function addFutureVault(address _future) external override {
        _checkOwner();
        require(futureVaults.add(_future), "Registry: ERR_FUTURE_ADD");
    }

    /**
     * @notice Remove a future from the registry
     * @param _future the address of the future to remove from the registry
     */
    function removeFutureVault(address _future) external override {
        _checkOwner();
        require(futureVaults.remove(_future), "Registry: ERR_FUTURE_RM");
    }

    /**
     * @notice Getter to check if a future is registered
     * @param _future the address of the future to check the registration of
     * @return true if it is, false otherwise
     */
    function isRegisteredFutureVault(
        address _future
    ) public view override returns (bool) {
        return futureVaults.contains(_future);
    }

    /**
     * @notice Getter for the future registered at an index
     * @param _index the index of the future to return
     * @return the address of the corresponding future
     */
    function getFutureVaultAt(
        uint256 _index
    ) external view override returns (address) {
        return futureVaults.at(_index);
    }

    /**
     * @notice Getter for number of futureVaults registered
     * @return the number of futureVaults registered
     */
    function futureVaultCount() external view override returns (uint256) {
        return futureVaults.length();
    }

    /**
     * @notice Getter for the future vault's factory address
     * @return the address of the tokens factory
     */
    function getFutureVaultFactoryAddress()
        external
        view
        override
        returns (address)
    {
        return futureVaultFactory;
    }

    /* Pools */

    /**
     * @notice Add a pool to the registry
     * @param _future the address of the future to add to the registry
     * @param _pool the address of deployed PT/IBT pool
     */
    function addPool(address _pool, address _future) external override {
        require(
            isRegisteredFutureVault(_future),
            "Registry: UNREGISTERED_FUTURE"
        );
        require(poolFutureMap[_future] == address(0), "Registry: ERR_POOL_ADD");
        poolFutureMap[_future] = _pool;
    }

    /**
     * @notice Getter for the pool registered with this future
     * @param _future the address of the future to return
     * @return the address of the corresponding pool
     */
    function getPool(address _future) external view override returns (address) {
        return poolFutureMap[_future];
    }
}

