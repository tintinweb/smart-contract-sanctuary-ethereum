pragma solidity ^0.8.4;
import "./IWoonklyAds.sol";
import "./IWoop.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

contract Vault is Initializable {
    using SafeMath for uint256;

    IWoonklyAds private _woonklyAds;

    IWoop private _woop;
    uint256 public _totalDepositedDoublePower;
    uint256 public _totalDepositedMultiAds;
    uint256 public constant MULTI_ADS_PRICE = 5000 ether;
    uint256 public constant DOUBLE_POWER_PRICE = 50000 ether;
    uint256 public constant TYPE_MULTI_ADS = 0;
    uint256 public constant TYPE_DOUBLE_POOWER = 1;


    address public constant DEAD = 0x000000000000000000000000000000000000dEaD;

    mapping(address => uint256) public woopsDeposited;

    event Deposit(address indexed from, uint256 value);
    event BurnWoop(address indexed from, uint256 value);
    event MintMultiAds(address indexed newOwner, uint256 tokenId);
    event MintDoublePower(address indexed newOwner, uint256 tokenId);
    event MintLotteryFreePot(address indexed newOwner, uint256 tokenId);

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize(
        IWoonklyAds woonklyAds,
        IWoop token
    ) public initializer {
        _woonklyAds = IWoonklyAds(woonklyAds);
        _woop = IWoop(token);
    }

    function getBurningToken() public view returns (address) {
        return address(_woop);
    }

    function getMultiAdsPrice() public view returns (uint256) {
        return uint256(MULTI_ADS_PRICE);
    }

    function getDoublePowerPrice() public view returns (uint256) {
        return uint256(DOUBLE_POWER_PRICE);
    }

    function getWoonklyAds() public view returns (address) {
        return address(_woonklyAds);
    }

     function getBalanceOfMultiAdsByUser(
        address minter
    ) public view returns (uint256 _amount) {
        return _woonklyAds.balanceOf(minter, 0);
    }

     function getBalanceOfDoublePowerByUser(
        address minter
    ) public view returns (uint256 _amount) {
        return _woonklyAds.balanceOf(minter, 1);
    }

    function getWoopsDepositedByUser(
        address depositor
    ) public view returns (uint256 _amount) {
        return woopsDeposited[depositor];
    }

    function totalDepositedDoublePower() public view returns (uint256) {
        return _totalDepositedDoublePower;
    }

    function totalDepositedMultiAds() public view returns (uint256) {
        return _totalDepositedMultiAds;
    }

    function depositMultiAds(uint256 _amount) external {
        require(
            _woonklyAds.balanceOf(msg.sender, 0) == 0,
            "User already owns MultiAds"
        );
        require(_amount == MULTI_ADS_PRICE, "amount must be equal to 5000");
        woopsDeposited[msg.sender] += _amount;
        _woop.transferFrom(msg.sender, DEAD, _amount);
        _woonklyAds.mint(msg.sender, TYPE_MULTI_ADS, 1, "0x");
        _totalDepositedMultiAds += _totalDepositedMultiAds + _amount;

        emit Deposit(msg.sender, _amount);
        emit BurnWoop(msg.sender, _amount);
        emit MintMultiAds(msg.sender, 0);
    }

    function depositDoublePower(uint256 _amount) external {
        require(
            _woonklyAds.balanceOf(msg.sender, 1) == 0,
            "User already owns DoublePower"
        );
        require(_amount == DOUBLE_POWER_PRICE, "amount must be equal to 50000");
        woopsDeposited[msg.sender] += _amount;
        _woop.transferFrom(msg.sender, DEAD, _amount);
        _woonklyAds.mint(msg.sender, TYPE_DOUBLE_POOWER, 1, "0x");
        _totalDepositedDoublePower += _totalDepositedDoublePower + _amount;

        emit Deposit(msg.sender, _amount);
        emit BurnWoop(msg.sender, _amount);
        emit MintDoublePower(msg.sender, 1);
    }

}

