import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "./IERC20.sol";
import "./Proton.sol";
import "./Newtron.sol";
import "./IERC721Receiver.sol";

contract ERC721Holder is IERC721Receiver {
    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }
}

contract Brion is ERC721Holder {
    struct nft {
        address collection;
        uint256 tokenId;
    }

    enum collectionType {
        BIG,
        Kaffic
    }

    mapping(address => collectionType) public typeOfCollection;

    mapping(address => uint256) public bpOfCollection;

    mapping(bytes32 => uint256) public mpOfToken;

    struct StakedNft {
        bytes32 nftId;
        uint256 protons;
        uint256 stakedTimeStamp;
        uint256 claimedTimeStamp;
        bool claimable;
    }

    StakedNft[] public StakedNfts; //StakeId

    mapping(address => uint256[]) private stakedNftsOfUser; //stakedIds

    mapping(bytes32 => uint256) private userStakedIdOfNftId; //stakedIds

    mapping(bytes32 => uint256) private stakeIdOfNftId;

    mapping(bytes32 => address) private ownerOfNft;
    
    struct _ownerInfo {
        uint256 protons;
        uint256 newtrons;
        uint256 spins;
    }

    mapping(address => _ownerInfo) public ownerInfo;

    uint256 public totalProtons;
    uint256 public totalNewTrons; 

    uint256 public startTime;

    mapping(uint256 => uint256) public totalMpsOfDay;
    uint256[3] public recentDays;

    Proton public proton;
    Newtron public newtron;

    address public constant teamAddress = 
        0x5bf075Ab68d05B5f8517De230a5791DBb9dCDF97;

    constructor(address _proton, address _newtron) {
        proton = Proton(_proton);
        newtron = Newtron(_newtron);
        startTime = proton.getStartTime();

        uint256 currentDay = getDay(block.timestamp);
        recentDays = [currentDay - 2, currentDay - 1, currentDay];
    }

    function getDay(uint256 cur) public view returns (uint256) {
        //return (cur - startTime) / 24 / 60 / 60;
        return (cur - startTime) / 5 / 60 + 2;
    }

    function updateMps(bool sign, uint256 mp) public {
        uint256 currentDay = getDay(block.timestamp);
    
        if (sign) totalMpsOfDay[currentDay] = totalMpsOfDay[recentDays[2]] + mp;
        else totalMpsOfDay[currentDay] = totalMpsOfDay[recentDays[2]] - mp;

        if (currentDay == recentDays[2]) return;

        delete totalMpsOfDay[recentDays[0]];

        recentDays = [recentDays[1], recentDays[2], currentDay];
    }

    function getRandomNumber() public view returns (uint256) {
        uint256 seed = uint256(keccak256(abi.encodePacked(block.timestamp)));
        uint256 randomStakeId;

        do {
            randomStakeId = seed % StakedNfts.length;
        } while (StakedNfts[randomStakeId].stakedTimeStamp == 0);

        return randomStakeId;
    }

    function getMpOfToken(address collection, uint256 tokenId)
        public
        view
        returns (uint256)
    {
        bytes32 nftId = getNftIdFromTokenId(collection, tokenId);

        if (
            typeOfCollection[collection] == collectionType.BIG &&
            mpOfToken[nftId] == 0
        ) return bpOfCollection[collection];

        return mpOfToken[nftId];
    }

    function getNftIdFromTokenId(address collection, uint256 tokenId)
        public
        pure
        returns (bytes32)
    {
        return keccak256(abi.encode(collection, tokenId));
    }

    function setMpOfBig(
        address collection,
        uint256[] calldata tokenIds,
        uint256 bp,
        uint256 hp
    ) public returns (bool) {
        IERC721 _nft = IERC721(collection);

        typeOfCollection[collection] = collectionType.BIG;
        bpOfCollection[collection] = bp;

        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(_nft.ownerOf(tokenIds[i]) == msg.sender, "Only owner can set mp!");
            bytes32 nftId = getNftIdFromTokenId(collection, tokenIds[i]);
            mpOfToken[nftId] = hp;
        }
        return true;
    }

    function setMpOfKaffic(
        address collection,
        uint256[] calldata tokenIds,
        uint256[] calldata mps
    ) public returns (bool) {
        IERC721 _nft = IERC721(collection);

        typeOfCollection[collection] = collectionType.Kaffic;

        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(_nft.ownerOf(tokenIds[i]) == msg.sender, "Only owner can set mp!");
            bytes32 nftId = getNftIdFromTokenId(collection, tokenIds[i]);
            mpOfToken[nftId] = mps[i];
        }
        return true;
    }

    function stakeNFTS(nft[] calldata nfts) public returns (bool) {
        for (uint256 i = 0; i < nfts.length; i++) {
            stakeNFT(nfts[i].collection, nfts[i].tokenId);
        }

        return true;
    }

    function stakeNFT(address collection, uint256 tokenId) internal {
        IERC721 _stakeNft = IERC721(collection);

        bytes32 nftId = getNftIdFromTokenId(collection, tokenId);

        uint256 mp = getMpOfToken(collection, tokenId);

        require(
            _stakeNft.ownerOf(tokenId) == msg.sender,
            "Only owner can stake nft!"
        );

        require(mp != 0, "Insert Mp for your token!");

        _stakeNft.safeTransferFrom(msg.sender, address(this), tokenId);

        require(
            _stakeNft.ownerOf(tokenId) == address(this),
            "Stake: Failed to take possession of NFT"
        );

        StakedNft memory _stakedNft = StakedNft({
            nftId: nftId,
            protons: 0,
            stakedTimeStamp: block.timestamp,
            claimedTimeStamp: block.timestamp,
            claimable: true
        });

        StakedNfts.push(_stakedNft);

        uint256 stakeId = StakedNfts.length;

        stakeIdOfNftId[nftId] = stakeId;

        stakedNftsOfUser[msg.sender].push(stakeId);

        userStakedIdOfNftId[nftId] = stakedNftsOfUser[msg.sender].length;

        ownerOfNft[nftId] = msg.sender;

        updateMps(true, mp);
    }

    function claimNFTs(nft[] calldata nfts) public returns (bool) {
        for (uint256 i = 0; i < nfts.length; i++) {
            claimNFT(nfts[i].collection, nfts[i].tokenId);
        }
        return true;
    }

    function claimNFT(address collection, uint256 tokenId)
        internal
        returns (bool)
    {
        bytes32 nftId = getNftIdFromTokenId(collection, tokenId);

        require(ownerOfNft[nftId] == msg.sender, "Only owner can claim!");

        uint256 stakeId = stakeIdOfNftId[nftId];

        require(StakedNfts[stakeId - 1].claimable, "You can't claim anymore!");

        uint256 currentDay = getDay(block.timestamp);

        uint256 intervalDays = currentDay - 
            getDay(StakedNfts[stakeId - 1].claimedTimeStamp);

        require(intervalDays > 0, "Please claim after 1 day");

        uint256 mp = getMpOfToken(collection, tokenId);

        if (intervalDays > 3) {
            StakedNfts[stakeId - 1].claimable = false;
            updateMps(false, mp);
            return false;
        }

        uint256 payout = 0;
        uint256 totalMp;
        uint256 recentDayIndex;

        if (totalMpsOfDay[currentDay] != 0) recentDayIndex = 1;
        else recentDayIndex = 2;

        currentDay = recentDays[recentDayIndex];

        for (uint256 i = 0; i < intervalDays; i++) {
            totalMp = totalMpsOfDay[recentDays[recentDayIndex]];

            if (
                totalMpsOfDay[currentDay] != 0 ||
                totalMpsOfDay[currentDay - 1] != 0
            ) recentDayIndex--;

            if (totalMp != 0) payout += (13698 * mp) / totalMp;

            currentDay--;
        }

        _payoutStake(payout, stakeId);

        StakedNfts[stakeId - 1].claimedTimeStamp = block.timestamp;

        return true;
    }

    function unStakeNFTs(nft[] calldata nfts) public returns (bool) {
        for (uint256 i = 0; i < nfts.length; i++) {
            unStakeNFT(nfts[i].collection, nfts[i].tokenId);
        }
        return true;
    }

    function unStakeNFT(address collection, uint256 tokenId)
        internal
        returns (bool)
    {
        bytes32 nftId = getNftIdFromTokenId(collection, tokenId);

        IERC721 _stakeNft = IERC721(collection);

        require(ownerOfNft[nftId] == msg.sender, "Only owner can unstake!");

        //require(block.timestamp >  StakedNfts[stakeId].stakedTimeStamp + 7 days, "Early unStake!");

        if (StakedNfts[stakeIdOfNftId[nftId] - 1].claimable)
            updateMps(false, getMpOfToken(collection, tokenId));

        delete StakedNfts[stakeIdOfNftId[nftId] - 1];

        delete ownerOfNft[nftId];

        delete stakedNftsOfUser[msg.sender][userStakedIdOfNftId[nftId] - 1];

        _stakeNft.safeTransferFrom(address(this), msg.sender, tokenId);

        return true;
    }

    function _payoutStake(uint256 payout, uint256 stakedId) internal {
        proton.transfer(msg.sender, payout - 2);

        proton.transfer(teamAddress, 1);

        ownerInfo[msg.sender].protons += (payout - 2);

        ownerInfo[msg.sender].spins++;

        StakedNfts[stakedId - 1].protons += payout - 2;

        totalProtons += payout;
    }

    function spins(uint256[] calldata spinValues) public returns (bool) {
        for (uint256 i = 0; i < spinValues.length; i++) {
            spin(spinValues[i]);
        }
        return true;
    }

    function spin(uint256 spinValue) internal {
        require(ownerInfo[msg.sender].spins > 0, "Can't spin!");
        ownerInfo[msg.sender].spins--;
        if (spinValue == 7) {
            newtron._mint(msg.sender, 1);
            ownerInfo[msg.sender].newtrons++;
            totalNewTrons++;

            if (totalNewTrons % 3 == 0) jackPot(msg.sender);
        }
    }

    function jackPot(address user) private {
        uint256 jackPots = proton.balanceOf(address(this));
        uint256 randomNumber = getRandomNumber();
        address randomUser = ownerOfNft[StakedNfts[randomNumber].nftId];

        proton.transfer(user, jackPots / 2);

        proton.transfer(randomUser, jackPots / 2);

        ownerInfo[user].protons += jackPots / 2;
        ownerInfo[randomUser].protons += jackPots / 2;
    }

    function getNftsFromUserAddress(address user)
        public
        view
        returns (StakedNft[] memory)
    {
        StakedNft[] memory _nfts = new StakedNft[](
            stakedNftsOfUser[user].length
        );
        for (uint256 i = 0; i < stakedNftsOfUser[user].length; i++) {
            if (stakedNftsOfUser[user][i] != 0) {
                StakedNft storage _nft = StakedNfts[
                    stakedNftsOfUser[user][i] - 1
                ];
                _nfts[i] = _nft;
            }
        }
        return _nfts;
    }

    function getUserInfo(address user) public view returns (_ownerInfo memory) {
        return ownerInfo[user];
    }
}

