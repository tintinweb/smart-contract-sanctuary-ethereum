//import "hardhat/console.sol";


// We need to import the helper functions frsom the contract that we copy/pasted.
import { Base64 } from "./Base64.sol";

contract TicTacToe is Router, ERC721Upgradeable {

  bool public canMint = false;

 
  uint _tokenIds = 0;

  struct Game {
    address player1;
    address player2;
    uint8 whosTurn;
    uint8[3][3] board;   //2d array of to store the game board
    uint8 gameState;     //gameState can be {0-Not Started, 1-On Going, 2-Game Over}
    uint8 winner;
  }

  Game[] public games;




  /**
    * @dev Emitted on `transferRemote` when a transfer message is dispatched.
    * @param destination The identifier of the destination chain.
    * @param recipient The address of the recipient on the destination chain.
    * @param tokenId The tokenId of tokens burnt on the origin chain.
    */
  event SentTransferRemote(
      uint32 indexed destination,
      address indexed recipient,
      uint256 tokenId
  );

  /**
    * @dev Emitted on `_handle` when a transfer message is processed.
    * @param origin The identifier of the origin chain.
    * @param recipient The address of the recipient on the destination chain.
    * @param tokenId The tokenId of tokens minted on the destination chain.
    */
  event ReceivedTransferRemote(
      uint32 indexed origin,
      address indexed recipient,
      uint256 tokenId
  );

/**
     * @notice Initializes the Hyperlane router, ERC721 metadata, and mints initial supply to deployer.
     * @param _abacusConnectionManager The address of the connection manager contract.
     * @param _interchainGasPaymaster The address of the interchain gas paymaster contract.
     * @param _name The name of the token.
     * @param _symbol The symbol of the token.
     */
    function initialize(
        address _abacusConnectionManager,
        address _interchainGasPaymaster,
        bool _canMint,
        string memory _name,
        string memory _symbol
    ) external initializer {
        // Set ownable to sender
        _transferOwnership(msg.sender);
        // Set ACM contract address
        _setAbacusConnectionManager(_abacusConnectionManager);
        // Set IGP contract address
        _setInterchainGasPaymaster(_interchainGasPaymaster);

        canMint = _canMint;

        __ERC721_init(_name, _symbol);
    }

  /**
    * @notice Transfers `_tokenId` of tokens from `msg.sender` to `_recipient` on the `_destination` chain.
    * @dev Burns `_tokenId` of tokens from `msg.sender` on the origin chain and dispatches
    *      message to the `destination` chain to mint `_tokenId` of tokens to `recipient`.
    * @dev Emits `SentTransferRemote` event on the origin chain.
    * @param _destination The identifier of the destination chain.
    * @param _recipient The address of the recipient on the destination chain.
    * @param _tokenId The tokenId of tokens to be sent to the remote recipient.
    */
  function transferRemote(
      uint32 _destination,
      address _recipient,
      uint256 _tokenId
  ) external payable {
      _burn(_tokenId);
      _dispatchWithGas(
          _destination,
          abi.encode(_recipient, _tokenId),
          msg.value
      );
      emit SentTransferRemote(_destination, _recipient, _tokenId);
  }

  /**
    * @dev Mints tokens to recipient when router receives transfer message.
    * @dev Emits `ReceivedTransferRemote` event on the destination chain.
    * @param _origin The identifier of the origin chain.
    * @param _message The encoded remote transfer message containing the recipient address and tokenId.
    */
  function _handle(
      uint32 _origin,
      bytes32,
      bytes calldata _message
  ) internal override {
      (address recipient, uint256 tokenId) = abi.decode(
          _message,
          (address, uint256)
      );
      _mint(recipient, tokenId);
      emit ReceivedTransferRemote(_origin, recipient, tokenId);
  }




  //Play Game
  function play(uint8 _row, uint8 _col, uint256 _gameId) public {
    require(_row < 3 && _col < 3); //'Invalid Move: Move is not on the board. Choose from positions 0-8'
    require((games[_gameId].player1 == address(0)) || (games[_gameId].player2 == address(0)) || msg.sender == games[_gameId].player1 || msg.sender == games[_gameId].player2); //'You are not the one of the two players for this game. '
    require(games[_gameId].gameState != 2); //'Game has already ended.'

    Game storage game = games[_gameId];

    //if player slot is open, assign msg.sender to player slot
    if((game.player1 == address(0))){
      game.player1 = msg.sender;
      game.whosTurn = 1;
    }else if((game.player2 == address(0))){
      game.player2 = msg.sender;
      game.whosTurn = 2;
    }

    //update game state
    require(game.board[_row][_col] == 0);//"Invalid Move. Already Has been played."
    if(game.whosTurn == 1){
      require(msg.sender == game.player1);// "It's  player's 1 turn. Wait your turn"
      game.board[_row][_col] = 1; //set marker 1 on board
      game.whosTurn = 2;  //give turn to other player
    }else if(game.whosTurn == 2){
      require(msg.sender == game.player2);//It's  player's 2 turn. Wait your turn"
      game.board[_row][_col] = 2; //set marker 2 on board
      game.whosTurn = 1; //give turn to other player
    }

    //check win
    if(((game.board[_row][0] & game.board[_row][1] & game.board[_row][2]) > 0) || 
       ((game.board[0][_col] & game.board[1][_col] & game.board[2][_col]) > 0) || 
       ((game.board[0][0] & game.board[1][1] & game.board[2][2]) > 0) ||
       ((game.board[0][2] & game.board[1][1] & game.board[2][0]) > 0)
    ){
      game.gameState = 2;
      game.winner = game.board[_row][_col];
    }

    // console.log("game.gameState:", game.gameState);
    // console.log("game.winner:", game.winner);
    // console.log(game.board[0][0], game.board[0][1], game.board[0][2]);
    // console.log(game.board[1][0], game.board[1][1], game.board[1][2]);
    // console.log(game.board[2][0], game.board[2][1], game.board[2][2]);
  }

  


  function resetGame(uint256 _gameId) public {
    require(ownerOf(_gameId) == msg.sender || games[_gameId].gameState == 2); // "Game can only be reset by owner or when the game is over"
    Game storage game = games[_gameId];
    game.board = [[0,0,0],[0,0,0],[0,0,0]];
    game.gameState = 2;
    game.player1 = address(0);
    game.player2 = address(0);
    game.whosTurn = 0;
    game.winner = 0;
  }


  //Create Game and Mint
  function mintGame() public {
    require(canMint);
    //initialize game
    //TODO:initialize board with zeros
    uint8[3][3] memory board = [[0,0,0],[0,0,0],[0,0,0]];
    games.push(Game({player1: address(0), player2:address(0), whosTurn:0, board: board,  gameState: 0, winner:0}));

 
    _safeMint(msg.sender, _tokenIds);
    _tokenIds +=1;
  }

   function tokenURI(uint256 _tokenId) public view override returns (string memory) {
    require(_exists(_tokenId));

    string memory svgBoard = '<svg  viewBox="0 0 350 350" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMin meet">   <rect x="0" y="0" width="100%" height="100%" fill="#ff12fa"/>';

    //add board lines
    svgBoard = string.concat(
      svgBoard, 
      '<line x1="0%" y1="33.33333%" x2="100%" y2="33.33333%" stroke="black" stroke-width="10"/>',
      '<line x1="0%" y1="66.66666%" x2="100%" y2="66.66666%" stroke="black" stroke-width="10"/>',
      '<line x1="33.33333%" y1="0%" x2="33.3333%" y2="100%" stroke="black" stroke-width="10"/>',
      '<line x1="66.66666%" y1="0%" x2="66.66666%" y2="100%" stroke="black" stroke-width="10"/>'
    );

    for(uint8 i = 0; i < 3; i++){
      for(uint8 j = 0; j < 3; j++){
        
        svgBoard = string.concat(svgBoard, 
          '<text x="',
          Strings.toString(16+33*i),
          '%" y="',
          Strings.toString(26+33*j),
          '%"  font-size="100" font-weight="bold" text-anchor="middle">',
          games[_tokenId].board[j][i]==0 ? '' : (games[_tokenId].board[j][i]==1 ? "X" : "O"),
          '</text> '
        );
      }
    }

    svgBoard = string.concat(svgBoard, '</svg>');

    
    // Get all the JSON metadata in place and base64 encode it.
    string memory json = Base64.encode(
        bytes(
            string(
                abi.encodePacked(
                    '{"name": "',
                    // We set the title of our NFT as the generated word.
                    'TicTacToe',
                    '", "description": "A game of TicTacToe.", "image": "data:image/svg+xml;base64,',
                    // We add data:image/svg+xml;base64 and then append our base64 encode our svg.
                    Base64.encode(bytes(svgBoard)),
                    '"}'
                )
            )
        )
    );

    // Just like before, we prepend data:application/json;base64, to our data.
    string memory finalTokenUri = string(
        abi.encodePacked("data:application/json;base64,", json)
    );

    return finalTokenUri;
  }
  
}