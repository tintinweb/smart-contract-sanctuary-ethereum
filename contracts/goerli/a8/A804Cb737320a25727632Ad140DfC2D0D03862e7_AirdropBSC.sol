pragma solidity ^0.8.17;

import "./interface/IAirdropData.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";


contract Airdrop is Ownable{

    address private _royal1;
    address private _royal2;
    uint256 public profit;

    modifier costs(uint _amount) {
        require(
            msg.value >= _amount,
            "Not enough Ether provided."
        );
        _;
        if (msg.value > _amount)
            payable(_msgSender()).transfer(msg.value - _amount);
    }


    constructor(uint256 _profit, address royal1, address royal2) {
        profit = _profit;
        _royal1 = royal1;
        _royal2 = royal2;
    }

    function setProfit(uint256 _profit, address royal1, address royal2) external onlyOwner{
        profit = _profit;
        _royal1 = royal1;
        _royal2 = royal2;
    }

    function getProfit() internal view virtual returns(uint256) {
        return profit;
    }

    function estimate(address tokenAddr, IAirdropData.AirdropData[] memory data) public view returns(uint256) {
        uint256 sum;
        for (uint256 i = 0; i < data.length; i++) {
            require(data[i].to != address(0), "address is 0");
            require(data[i].amount != 0, "amount is 0");
            if (tokenAddr == address(0)) sum += data[i].amount;
        }
        return data.length * getProfit() + sum;
    }

    function send(address tokenAddr, IAirdropData.AirdropData[] memory data) public payable costs(estimate(tokenAddr, data)){
        payable(_royal1).transfer(estimate(address(this), data) * 80 / 100);
        payable(_royal2).transfer(estimate(address(this), data) - (estimate(address(this), data) * 80 / 100));
        for (uint256 i = 0; i < data.length; i++) {
            if (tokenAddr != address(0)) 
                IERC20Metadata(tokenAddr).transferFrom(_msgSender(), data[i].to, data[i].amount);
            else 
                payable(data[i].to).transfer(data[i].amount);
        }
    }

    function estimateByContract(address tokenAddr, IAirdropData idata) public view returns(uint256) {
        return estimate(tokenAddr, idata.getData());
    }

    function sendByContract(address tokenAddr, IAirdropData idata) external payable {
        send(tokenAddr, idata.getData());
    }

}

