pragma solidity 0.8.7;

import "@openzeppelin/contracts/access/AccessControl.sol";

import {AlchemicalSupportedInterface} from "./base/AlchemicalSupportedInterface.sol";

import {AlchemicalPermission} from "./auth/AlchemicalPermission.sol";
import {IAlchemicalRecipe} from "./interfaces/IAlchemicalRecipe.sol";

contract AlchemicalRecipe is AlchemicalPermission, IAlchemicalRecipe {
    using AlchemicalSupportedInterface for address;

    mapping(address => mapping(uint256 => Recipe)) recipes;

    constructor(address _admin) AlchemicalPermission(_admin) {}

    modifier onlyExistingRecipe(address craftableAddress, uint256 tokenId) {
        if (!isRecipeExist(craftableAddress, tokenId)) {
            revert NonExistingRecipe();
        }
        _;
    }

    function createRecipe(
        address craftableAddress,
        uint256 tokenId,
        Material[] calldata materials,
        uint256 cap,
        uint256 endTimestamp
    ) external override onlyAlchemist(_msgSender()) {
        if (recipes[craftableAddress][tokenId].exist) {
            revert RecipeAlreadyExist();
        }

        if (endTimestamp > 0 && endTimestamp < block.timestamp) {
            revert PastEndDate();
        }

        Recipe storage _recipe = recipes[craftableAddress][tokenId];
        for (uint n = 0; n < materials.length; n++) {
            if (!materials[n].materialAddress.isERC721OrERC1155()) {
                revert MaterialNotConsumable();
            }
            _recipe.materials[n] = materials[n];
        }

        _recipe.length = materials.length;
        _recipe.exist = true;
        _recipe.enabled = true;
        _recipe.cap = cap;
        _recipe.limited = cap > 0;
        _recipe.endTimestamp = endTimestamp;

        emit CreateRecipe(
            _msgSender(),
            craftableAddress,
            tokenId,
            materials,
            cap,
            endTimestamp
        );
    }

    function disableRecipe(
        address craftableAddress,
        uint256 tokenId
    )
        external
        override
        onlyAlchemist(_msgSender())
        onlyExistingRecipe(craftableAddress, tokenId)
    {
        if (isRecipeEnabled(craftableAddress, tokenId)) {
            revert RecipeAlreadyDisabled();
        }

        recipes[craftableAddress][tokenId].enabled = false;

        emit DisableRecipe(craftableAddress, tokenId);
    }

    function enableRecipe(
        address craftableAddress,
        uint256 tokenId
    )
        external
        override
        onlyAlchemist(_msgSender())
        onlyExistingRecipe(craftableAddress, tokenId)
    {
        if (!isRecipeEnabled(craftableAddress, tokenId)) {
            revert RecipeAlreadyEnabled();
        }

        recipes[craftableAddress][tokenId].enabled = true;

        emit EnableRecipe(craftableAddress, tokenId);
    }

    function recipeMaterials(
        address craftableAddress,
        uint256 tokenId
    )
        public
        view
        override
        onlyAlchemist(_msgSender())
        onlyExistingRecipe(craftableAddress, tokenId)
        returns (Material[] memory)
    {
        Material[] memory _materials = new Material[](
            recipes[craftableAddress][tokenId].length
        );

        for (uint n = 0; n < recipes[craftableAddress][tokenId].length; n++) {
            _materials[n] = recipes[craftableAddress][tokenId].materials[n];
        }

        return _materials;
    }

    function addTokenMinted(address craftableAddress, uint256 tokenId, uint256 amount) external onlyAlchemist(_msgSender()) override {
        uint256 cap = recipes[craftableAddress][tokenId].cap;
        uint256 minted = recipes[craftableAddress][tokenId].minted;
        if (cap > 0 && minted + amount > cap) {
            revert MintExceedLimit(craftableAddress, tokenId);
        }

        if (cap > 0 && minted <= cap) {
            recipes[craftableAddress][tokenId].minted += amount;
        }
    }

    function recipe(
        address craftableAddress,
        uint256 tokenId
    )
        external
        view
        onlyExistingRecipe(craftableAddress, tokenId)
        override
        returns (
            bool exist,
            Material[] memory materials,
            uint256 cap,
            uint256 minted,
            bool limited,
            uint256 endTimestamp
        )
    {
        exist = recipes[craftableAddress][tokenId].exist;
        materials = recipeMaterials(craftableAddress, tokenId);
        cap = recipes[craftableAddress][tokenId].cap;
        minted = recipes[craftableAddress][tokenId].minted;
        limited = recipes[craftableAddress][tokenId].limited;
        endTimestamp = recipes[craftableAddress][tokenId].endTimestamp;
    }

    function isRecipeExist(
        address craftableAddress,
        uint256 tokenId
    ) public view override returns (bool) {
        return recipes[craftableAddress][tokenId].exist;
    }

    function isRecipeEnabled(
        address craftableAddress,
        uint256 tokenId
    ) public view override returns (bool) {
        return recipes[craftableAddress][tokenId].enabled;
    }

}

