        uint256 tokenId,
        Material[] calldata materials,
        uint256 cap,
        uint256 endTimestamp
    ) external;

    /// @dev Update number of recipe minted if cap > 0
    /// @param craftableAddress the address where to update the number of token minted
    /// @param tokenId the token id where to update the number of token minted
    function addTokenMinted(address craftableAddress, uint256 tokenId, uint256 amount) external;

    /// @notice Disable recipe by address and tokenId
    ///     Requirements: Caller must have (ALCHEMICAL_ROLE)
    /// @param craftableAddress the address where to disable items
    /// @param tokenId the tokenId (item) to disable
    function disableRecipe(address craftableAddress, uint256 tokenId) external;

    /// @notice This function will disable recipe for specific item
    /// @dev Recipe consider enabled when the Recipe (craftableAddress not set to address(0))
    /// @param craftableAddress the address where to disable items
    /// @param tokenId the tokenId (item) to disable
    function enableRecipe(address craftableAddress, uint256 tokenId) external;

    /// @dev Check if recipe already exist
    /// @param craftableAddress The recipe address to check
    /// @param tokenId The token id to check
    /// @return True if recipe exist else False
    function isRecipeExist(address craftableAddress, uint256 tokenId) external view returns(bool);

    /// @dev Check if recipe enabled
    /// @param craftableAddress The recipe address to check
    /// @param tokenId The token id to check
    /// @return True if recipe enabled else False
    function isRecipeEnabled(address craftableAddress, uint256 tokenId) external view returns(bool);

}