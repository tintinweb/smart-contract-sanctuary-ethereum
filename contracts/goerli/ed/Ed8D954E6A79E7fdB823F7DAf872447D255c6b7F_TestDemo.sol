        } else {
            return recover(digest, v, r, s) == signer;
        }
    }

    function getCode() external pure  returns(bytes32){
        return keccak256("Info(address token,address user,uint256 amount)");
    }

    function getHash(Info calldata info) public pure returns(bytes32){
        return keccak256(abi.encode(
            INFO_HASH,
            info.token,
            info.user,
            info.amount
        ));
    }

    function _validateOption(Info calldata info) external view returns(bool){

