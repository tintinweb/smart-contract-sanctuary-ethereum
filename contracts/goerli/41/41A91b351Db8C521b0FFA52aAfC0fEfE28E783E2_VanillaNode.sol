pragma solidity 0.8.15;




interface IERC1363Mintable is IERC1363 {
    function manager() external returns(address);
    function mint(address beneficiary, uint256 amount) external;
    function burn(uint256 amount) external;
}

contract VanillaNode is Ownable, ERC1363Payable {
    
    uint32 public domain;
    uint256 public minimumAmount;
    uint256 public tokenFee;
    address public router;
    IERC1363Mintable public immutable token;
    address public immutable wallet;

    struct Node {
        address deployment;
        uint256 nativeFee;
    }

    mapping(uint32 => Node) public nodes;

    event Deposit(
        address indexed sender,
        uint32 indexed destination,
        address indexed beneficiary,
        uint256 amount,
        uint256 nativeFee,
        bool isPrePaid
    );

    event Withdraw(
        address indexed sender,
        uint32 indexed origin,
        address indexed beneficiary,
        uint256 amount,
        uint256 tax
    );

    modifier onlyRouter() {
        require(msg.sender == router,
            "VanillaNode: unauthorized router");
        _;
    }

    constructor(
        uint32 _domain,
        uint256 _minimumAmount,
        uint256 _tokenFee,
        address _router,
        address _wallet,
        IERC1363Mintable _token
    )
        ERC1363Payable(_token)
    {
        domain = _domain;
        minimumAmount = _minimumAmount;
        tokenFee = _tokenFee;
        router = _router;
        wallet = _wallet;
        token = _token;
    }

    function configure(
        uint32 _domain,
        uint256 _minimumAmount,
        uint256 _tokenFee,
        address _router
    )
        external onlyOwner
    {
        domain = _domain;
        minimumAmount = _minimumAmount;
        tokenFee = _tokenFee;
        router = _router;
    }

    function addNode(
        uint32 _origin,
        address _deployment,
        uint256 _nativeFee
    )
        external onlyOwner
    {
        nodes[_origin] = Node(_deployment, _nativeFee);
    }

    function releaseCash()
        external onlyOwner
    {
        uint256 balance = address(this).balance;
        require(balance > 0,
            "VanillaNode: there is no cash to release");
        Address.sendValue(payable(msg.sender), balance);
    }

    function deposit(
        uint32 destination,
        address beneficiary,
        uint256 amount
    )
        external payable
    {
        require(acceptedToken().allowance(msg.sender, address(this)) >= amount,
            "VanillaNode: user must approve amount");
        acceptedToken().transferFrom(msg.sender, address(this), amount);
        _deposit(destination, beneficiary, amount);
    }

    function withdraw(
        uint32 origin,
        address beneficiary,
        uint256 amount,
        bool isPrePaid
    )
        external onlyRouter
    {
        uint256 tax = isPrePaid ? 0 : tokenFee;
        _processWithdraw(beneficiary, amount, tax);
        emit Withdraw(msg.sender, origin, beneficiary, amount, tax);
    }

    function _transferReceived(
        address,
        address beneficiary,
        uint256 amount,
        bytes memory data
    )
        internal override
    {
        uint32 destination = abi.decode(data, (uint32));
        _deposit(destination, beneficiary, amount);
    }

    function _deposit(
        uint32 destination,
        address beneficiary,
        uint256 amount
    )
        internal
    {
        require(nodes[destination].deployment != address(0),
            "VanillaNode: unknown destination address");

        require(minimumAmount == 0 || amount >= minimumAmount,
            "VanillaNode: amount is below the required minimum");

        uint256 nativeFee = nodes[destination].nativeFee;
        bool isPrePaid = false;
        if (nativeFee == 0 || msg.value > 0) {
            require(msg.value >= nativeFee,
                "VanillaNode: not enough cash attached to the trxn to cover gas on the destination chain");
            isPrePaid = true;
        }

        _processDeposit(amount);
        emit Deposit(msg.sender, destination, beneficiary, amount, nativeFee, isPrePaid);
    }

    function _processWithdraw(
        address beneficiary,
        uint256 amount,
        uint256 tax
    )
        internal
    {
         if (token.supportsInterface(type(IERC1363Mintable).interfaceId)) {
            require(token.manager() == address(this),
                "VanillaNode: token manager is incorrectly configured");
            
            if (tax > 0) {
                token.mint(beneficiary, amount - tax);
                token.mint(wallet, tax);
            } else {
                token.mint(beneficiary, amount);
            }
        } else {
            require(_balance() >= amount,
                "VanillaNode: not enough balance to process withdraw");
            
            if (tax > 0) {
                token.transfer(beneficiary, amount - tax);
                token.transfer(wallet, tax);
            } else {
                token.transfer(beneficiary, amount);
            }
        }
    }
    
    function _processDeposit(
        uint256 amount
    )
        internal
    {
        if (token.supportsInterface(type(IERC1363Mintable).interfaceId)) {
            token.burn(amount);
        }
    }

    function _balance()
        internal view returns (uint256)
    {
        return token.balanceOf(address(this));
    }

    function lockedTokens()
        external view returns (uint256)
    {
        return _balance();
    }

    function unlockTokens()
        external onlyOwner
    {
        token.transfer(msg.sender, _balance());
    }
}