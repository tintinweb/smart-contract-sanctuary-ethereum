            nestingBlocks >= MIN_NESTING_BLOCKS &&
                nestingBlocks <= MAX_NESTING_BLOCKS,
            "INVALID_NESTING_BLOCKS"
        );

        // Set the nestedTill field of the egg struct to the block number when the egg will be ready to hatch
        nestStates[eggId] = NestState(
            block.number + nestingBlocks,
            nestingBlocks,
            msg.sender,
            0
        );
        allNestedEggs[msg.sender].push(eggId);
        emit EggNested(eggId, msg.sender, nestingBlocks);

        // Transfer the egg from the caller to the contract
        // NOTE: Transfer is done at the end to avoid a re-entrancy vector
        roost.safeTransferFrom(msg.sender, address(this), eggId);
    }

    function nestAll(uint256[] calldata eggIds, uint256 nestingBlocks) public {
        for (uint256 i = 0; i < eggIds.length; ++i) {
            nest(eggIds[i], nestingBlocks);
        }
    }

    function getHatchableEggs(address nester)
        public
        view
        returns (uint256[] memory eggIds)
    {
        uint256 idx = 0;
        for (uint256 i = 0; i < allNestedEggs[nester].length; i++) {
            uint256 eggId = allNestedEggs[nester][i];
            NestState storage nestState = nestStates[eggId];

            if (
                nestState.nestedTill != 0 &&
                block.number >= nestState.nestedTill
            ) {
                eggIds[idx++] = eggId;
            }
        }
    }

    function hatch(uint256 eggId) public {
        NestState storage nestState = nestStates[eggId];

        require(nestState.rank == 0, "EGG_ALREADY_HATCHED");
        require(nestState.nestedTill != 0, "EGG_NOT_YET_NESTED");
        require(block.number >= nestState.nestedTill, "NESTING_INCOMPLETE");
        require(nestState.nestedBy == msg.sender, "NOT_THE_NESTER");

        // Generate a random number to determine whether the steal event occurs
        uint256 randomNumber = uint256(
            keccak256(
                abi.encodePacked(
                    blockhash(block.number - 1),
                    randNonce,
                    block.coinbase,
                    block.difficulty,
                    block.timestamp
                )
            )
        );
        randNonce += 1;

        // If the steal event occurs, choose a random komodo from the array of all komodo ids
        // weighted by the rank of each komodo
        bool stolen = randomNumber % 100 <
            hatchingStealProbability(nestState.nestedFor);

        address owner;
        if (stolen) {
            uint256 ownerId = komodoIdsRankWeighted[
                randomNumber % komodoIdsRankWeighted.length
            ];
            owner = roost.ownerOf(ownerId);

            nestStates[eggId] = NestState(0, 0, address(0), 0);
            emit EggStolen(eggId, msg.sender, owner);
        } else {
            owner = msg.sender;

            nestState.rank = hatchingKomodoRank(nestState.nestedFor);
            nestState.nestedTill = 0;
            nestState.nestedFor = 0;

            for (uint256 i = 0; i < nestState.rank; i++) {
                komodoIdsRankWeighted.push(eggId);
            }

            emit EggHatched(eggId, msg.sender, nestState.rank);
        }

        roost.safeTransferFrom(address(this), owner, eggId);
    }

    function hatchAll(uint256[] memory eggIds) public {
        for (uint256 i = 0; i < eggIds.length; i++) {
            hatch(eggIds[i]);
        }
    }

    function hatchAllAvailable() public {
        hatchAll(getHatchableEggs(msg.sender));
    }

    function hatchingStealProbability(uint256 nestedBlocks)
        public
        pure
        returns (uint256)
    {
        // Calculate the probability of the steal event occurring
        uint256 range = MAX_NESTING_BLOCKS - MIN_NESTING_BLOCKS;
        return
            ((MAX_STEAL_PROBABILITY - MIN_STEAL_PROBABILITY) *
                (nestedBlocks - MIN_NESTING_BLOCKS)) /
            range +
            MIN_STEAL_PROBABILITY;
    }

    function hatchingKomodoRank(uint256 nestedBlocks)
        public
        pure
        returns (uint256 rank)
    {
        if (nestedBlocks == MIN_NESTING_BLOCKS) {
            return MIN_KOMODO_RANK;
        } else if (nestedBlocks == MAX_NESTING_BLOCKS) {
            return MAX_KOMODO_RANK;
        } else {
            return
                (MIN_KOMODO_RANK +
                    ((MAX_KOMODO_RANK - MIN_KOMODO_RANK) *
                        (nestedBlocks - MIN_NESTING_BLOCKS))) /
                (MAX_NESTING_BLOCKS - MIN_NESTING_BLOCKS);
        }
    }
}

