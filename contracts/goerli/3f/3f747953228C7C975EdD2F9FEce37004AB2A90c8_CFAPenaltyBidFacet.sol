        DiamondStorage storage ds = diamondStorage();
        DiamondCFAStorage storage cs = cfaStorage();

        // Get flow rate (app -> beneficiary)
        (, int96 flowRate, , ) = cs.cfaV1.cfa.getFlow(
            ds.paramsStore.getPaymentToken(),
