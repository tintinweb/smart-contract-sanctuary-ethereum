contract BitRoyaleGamePool is Ownable {
    using SafeMath for uint256;

    address public WETH;
    address public BCOMP;

    IUniswapV2Router02 public uniswapV2Router;

    constructor(address _bcomp) Ownable(msg.sender) {
        BCOMP = _bcomp;
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D);
        uniswapV2Router = _uniswapV2Router;
        WETH = uniswapV2Router.WETH();
    }

    function setBCOMP(address _tokenAddress) external onlyOwner {
        BCOMP = _tokenAddress;
    }

    function getAmountsOut(
        uint256 amount,
        address tokenIn,
        address tokenOut
    ) public view returns (uint256) {
        address[] memory path = new address[](2);
        path[0] = tokenIn;
        path[1] = tokenOut;

        return uniswapV2Router.getAmountsOut(amount, path)[1];
    }

    function claim(uint256 claimableETHAmount, address player) external onlyOwner {
        uint256 claimableBCOMPAmount = getAmountsOut(claimableETHAmount, WETH, BCOMP);
        IERC20(BCOMP).transfer(player, claimableBCOMPAmount);
    }

    receive() external payable {}

}