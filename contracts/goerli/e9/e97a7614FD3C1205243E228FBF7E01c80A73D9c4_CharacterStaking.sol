import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

/// @notice Contract for having users get their avatar by staking NFTs for the Candy Mobile Game
contract CharacterStaking is Ownable, IERC721Receiver {
    using EnumerableSet for EnumerableSet.UintSet;
    using SafeERC20 for IERC20;

    enum Rarity {
        GOD,
        KING,
        PRINCE,
        MINISTER,
        CITIZEN
    }

    /// @dev Staking NFT address
    IERC721 private immutable _stakingNft;

    /// @dev Merkle root for identifying token id & rarity
    bytes32 private _merkleRoot;

    /// @notice User staked nfts (user address => staked nfts)
    mapping(address => EnumerableSet.UintSet) private _userNfts;

    /// @notice Rarity per token id (nft token id => rarity)
    mapping(uint256 => Rarity) private _rarities;

    event Staked(address account, uint256 tokenId, Rarity rarity);
    event Unstaked(address account, uint256 tokenId, Rarity rarity);

    error InvalidZeroAmount();
    error MerkleVerifyFailed();
    error NotOwnedNft();

    constructor(address stakingNft_) {
        _stakingNft = IERC721(stakingNft_);
    }

    /// @notice Stake nft tokens in the pool, require verification to match with rarity
    function stake(
        uint256[] calldata tokenIds_,
        Rarity[] calldata rarities_,
        bytes32[][] calldata proofs_
    ) external {
        uint256 countToStake = tokenIds_.length;
        if (countToStake == 0) revert InvalidZeroAmount();

        EnumerableSet.UintSet storage userNfts = _userNfts[_msgSender()];

        uint256 i;
        for (; i < countToStake; i++) {
            uint256 tokenId = tokenIds_[i];
            Rarity rarity = rarities_[i];
            require(
                MerkleProof.verify(
                    proofs_[i],
                    _merkleRoot,
                    keccak256(abi.encodePacked(tokenId, rarity))
                ),
                "Verify failed"
            );
            _stakingNft.safeTransferFrom(_msgSender(), address(this), tokenId);
            userNfts.add(tokenId);
            _rarities[tokenId] = rarity;

            emit Staked(_msgSender(), tokenId, rarity);
        }
    }

    /// @notice Unstake nfts from the staking pool
    function unstake(uint256[] calldata tokenIds_) external {
        uint256 countToWithdraw = tokenIds_.length;
        if (countToWithdraw == 0) revert InvalidZeroAmount();

        EnumerableSet.UintSet storage userNfts = _userNfts[_msgSender()];

        uint256 i;
        for (; i < countToWithdraw; i++) {
            uint256 tokenId = tokenIds_[i];
            if (!userNfts.contains(tokenId)) revert NotOwnedNft();
            _stakingNft.safeTransferFrom(address(this), _msgSender(), tokenId);
            userNfts.remove(tokenId);
            emit Unstaked(_msgSender(), tokenId, _rarities[tokenId]);
        }
    }

    /// @notice View user staked nft count
    function stakedCount(address account_) external view returns (uint256) {
        return _userNfts[account_].length();
    }

    /// @dev View user staked nfts (token id & rarity), pagination is needed
    function stakedNfts(
        address account_,
        uint256 offset_,
        uint256 count_
    ) external view returns (uint256[] memory, Rarity[] memory) {
        uint256[] memory nfts;
        Rarity[] memory rarities;
        EnumerableSet.UintSet storage userNfts = _userNfts[account_];
        uint256 userNftCount = userNfts.length();
        if (count_ == 0 || offset_ >= userNftCount) {
            // Return an empty array
            nfts = new uint256[](0);
            rarities = new Rarity[](0);
        } else {
            if (offset_ + count_ > userNftCount)
                count_ = userNftCount - offset_;

            nfts = new uint256[](count_);
            rarities = new Rarity[](count_);
            uint256 index;
            for (; index < count_; index++) {
                nfts[index] = userNfts.at(offset_ + index);
                rarities[index] = _rarities[nfts[index]];
            }
        }
        return (nfts, rarities);
    }

    /// @dev Check if the user staked the nft of token id
    function isStaked(address account_, uint256 tokenId_)
        external
        view
        returns (bool)
    {
        return _userNfts[account_].contains(tokenId_);
    }

    /// @notice View rarity of nft token id
    function rarityOfToken(uint256 tokenId_) external view returns (Rarity) {
        return _rarities[tokenId_];
    }

    /// @notice Update merkle root
    function updateMerkleRoot(bytes32 root_) external onlyOwner {
        _merkleRoot = root_;
    }

    function merkleRoot() external view returns (bytes32) {
        return _merkleRoot;
    }

    /**
     * @notice It allows the admin to recover wrong tokens sent to the contract
     * @dev This function is only callable by admin.
     */
    function recoverTokens(address token_, uint256 amount_) external onlyOwner {
        IERC20(token_).safeTransfer(_msgSender(), amount_);
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }
}

