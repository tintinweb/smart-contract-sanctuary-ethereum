pragma solidity ^0.8.0;

import "../interfaces/IPioneer.sol";
import "../ContractControlList.sol";
import "../Minter.sol";

contract PioneerMinter is Minter {
    IPioneer public activePioneer;
    IPioneer public founder;

    uint16 public maxMintPerWallet;

    mapping(address => uint16) internal mintedPerWallet;

    constructor(
        address contractControlListAddr_,
        address activePioneerAddr_,
        address founderAddr_,
        uint16 maxMintPerWallet_
    ) Minter(contractControlListAddr_) {
        prevalidateAddresses_(activePioneerAddr_, founderAddr_);
        activePioneer = IPioneer(activePioneerAddr_);
        founder = IPioneer(founderAddr_);
        maxMintPerWallet = maxMintPerWallet_;
    }

    function prevalidateAddresses_(
        address activePioneerAddr_,
        address founderPioneerAddr_
    ) internal pure {
        address zeroAddress = address(0);
        require(
            activePioneerAddr_ != zeroAddress,
            "PioneerMinter: ActivePioneer Address zero"
        );
        require(
            founderPioneerAddr_ != zeroAddress,
            "PioneerMinter: Founder Address zero"
        );
    }

    modifier onlyMinterRole() {
        contractControlList.checkPioneerMinterRole(msg.sender);
        _;
    }

    function getMintActivePioneerHash(
        address to_,
        uint256 nativePrice_,
        uint256 pioneerId_
    ) public pure returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(
                    uint16(0x1901),
                    EIP712_DOMAIN_HASH,
                    keccak256(
                        abi.encode(
                            keccak256(
                                "mintActivePioneer(address to_, uint256 nativePrice_, uint256 pioneerId_, bytes memory signature_)"
                            ),
                            to_,
                            nativePrice_,
                            pioneerId_
                        )
                    )
                )
            );
    }

    function beforeMintActivePioneer_(address to_, uint256 nativePrice_) internal {
        require(
            mintedPerWallet[to_] < maxMintPerWallet,
            "Cannot mint more Pioneers"
        );
        require(msg.value == nativePrice_, "Wrong ETH amount sent");
        mintedPerWallet[to_] += 1;
    }

    function mintActivePioneer(
        address to_,
        uint256 nativePrice_,
        uint256 pioneerId_,
        bytes memory signature_
    ) external payable {
        beforeMintActivePioneer_(to_, nativePrice_);

        bytes32 messageHash = getMintActivePioneerHash(
            to_,
            nativePrice_,
            pioneerId_
        );
        contractControlList.checkPioneerMinterRole(
            _getSigner(messageHash, signature_)
        );

        activePioneer.mintTo(to_, pioneerId_);
    }

    function burnActivePioneerForFounder(uint256 activePioneerId_) external {
        contractControlList.checkLandMinterRole(msg.sender);

        address owner = activePioneer.ownerOf(activePioneerId_);
        activePioneer.burn(activePioneerId_);
        founder.mintTo(owner, activePioneerId_);
    }

    function burnActivePioneer(uint256 activePioneerId_) external {
        contractControlList.checkLandMinterRole(msg.sender);

        activePioneer.burn(activePioneerId_);
    }

    function mintFounder(address owner_, uint256 founderId_) external {
        contractControlList.checkLandMinterRole(msg.sender);

        founder.mintTo(owner_, founderId_);
    }
}

