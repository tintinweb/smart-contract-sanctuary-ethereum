pragma solidity >=0.4.22 <0.9.0;
pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";
import { ECDSA } from "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
//import "./IERC721Ownable.sol";

contract LuffyMarket is Ownable {

    event NftMinted(address nftAddress, uint256 initialTokenId, uint256 finalTokenId,address owner, string uri);
    event CollectionCreated(address nftAddress, address owner);

    bytes32 public immutable DOMAIN_SEPARATOR;
    bytes32 public immutable BUY_SALT;

    mapping(address => uint256) public setFee;

    constructor() {
         DOMAIN_SEPARATOR = keccak256(abi.encode(
            keccak256(bytes("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)")),
            keccak256("LUFFY MARKETPLACE"),
            keccak256("1"),
            5,
            address(this)
        ));
        BUY_SALT = keccak256(bytes("List(address nftAddress,uint256 tokenID,address from)"));
     }
    address[] public collectionsCreated;

    string public constant salt = "LUFFY MARKETPLACE";

    address burnAddr = 0x000000000000000000000000000000000000dEaD;

    bool public isToken = false;
    address public recoveredAddress;
    uint256 public feeDecimal = 10000;
    uint256 public getFee;
    uint256 public ethFee;
    uint256 public tokenFee;

    struct nftList {
      address[] selltype;
      uint256[] price;
      string divid;
    }
    //bool public burn_Method;
    IERC20 public token;
    function buyWithToken (
      address tokenAddr
    ) public {
      token = IERC20(tokenAddr);
    }

    function collectionCreated() public {
      require(msg.sender != tx.origin, "Caller origin validation failed");
      collectionsCreated.push(address(msg.sender));
      //emit CollectionCreated(msg.sender, tx.origin);
    }

    function nftMinted (
      uint256 initialTokenId, 
      uint256 finalTokenId,
      string memory uri
    ) public {
      require(msg.sender != tx.origin, "Caller origin validation failed");
      emit NftMinted(msg.sender, initialTokenId, finalTokenId,tx.origin, uri);
    }

    function purchaseWithFixedPrice (
        address nftAddress, 
        uint256 tokenId,
        address from,
        address tokenAddr,
        uint256 _price,
        bool burn_Method,
        uint256 burnPro,
        nftList memory nft_List,
        bytes memory signature
      ) public payable {

        buyWithToken(tokenAddr);

        IERC721 nftInstance = IERC721(nftAddress);

        address to = msg.sender;

        bytes32 digest = keccak256(
          abi.encodePacked(
            uint8(0x19),
            uint8(0x01),
            DOMAIN_SEPARATOR,
            keccak256(abi.encode(BUY_SALT, nftAddress, tokenId, from))
          )
        );
        
        getFee = setFee[tokenAddr];

        recoveredAddress = ECDSA.recover(digest, signature);

        require(recoveredAddress == from, "invalid signature");

        require(nftInstance.ownerOf(tokenId) == from, "wrong owner");
        require(nftInstance.isApprovedForAll(from, address(this)) == true, "Nft Not Approved By the owner");
        //require(nftInstance.getApproved(tokenId)==address(this), "Nft Not Approved By the owner");

        if(tokenAddr == address(0)) {
          for(uint i=0; i < nft_List.selltype.length; i++) {
              if(nft_List.selltype[i] == tokenAddr && nft_List.price[i] <= _price) {
                isToken = true;
                break;
              }
          }

          require(isToken == true, "Can't buy with ETH or low price");
          
          ethFee = msg.value * getFee / (100 * feeDecimal);

          payable(address(this)).transfer(ethFee);
          payable(from).transfer(msg.value - ethFee);

          nftInstance.transferFrom(from, to, tokenId);
        }
        else {
          for(uint i=0; i < nft_List.selltype.length; i++) {
              if(nft_List.selltype[i] == tokenAddr && nft_List.price[i] <= _price) {
                isToken = true;
                break;
              }
          }

          require(isToken == true, "Can't buy with this token or low price");

          if(burn_Method == true) {  
                //require(token.allowance(to, address(this)) >= _price, "Payable is not allowed by buyer");
                uint256 burnPrice = _price * burnPro / 10 ** 8;

                token.transferFrom(to, burnAddr, burnPrice); 
                token.transferFrom(to, from, (_price - burnPrice));
                //nftInstance.transferFrom(from, to, tokenId);
          }
          else if(burn_Method == false) {
                //require(token.allowance(to, address(this)) >= _price, "Payable is not allowed by buyer");
                //uint256 burnPrice = _price * 15 / 1000;

                getFee = setFee[tokenAddr];
                tokenFee = _price * getFee / (100 * feeDecimal);

                token.transferFrom(to, address(this), tokenFee);
                //token.transferFrom(to, burnAddr, burnPrice); 
                token.transferFrom(to, from, (_price - tokenFee));
          }
        nftInstance.transferFrom(from, to, tokenId);
        }
        isToken = false;
        // emit NftSold(price, owner, to, nftAddress, tokenId);
      }

    function purchaseAuction(
      address nftAddress, 
      uint256 tokenId,
      address to,
      address tokenAddr,
      uint256 _price,
      bool burn_Method,
      uint256 burnPro,
      nftList memory nft_List,
      bytes memory signature
    ) public payable {

      buyWithToken(tokenAddr);
    
      IERC721 nftInstance = IERC721(nftAddress);

      address from = msg.sender;

      bytes32 digest = keccak256(
            abi.encodePacked(
              uint8(0x19), 
              uint8(0x01), 
              DOMAIN_SEPARATOR, 
              keccak256(abi.encode(BUY_SALT, nftAddress, tokenId, from))
            ) 
      );

      recoveredAddress = ECDSA.recover(digest, signature);

      require(recoveredAddress == from, "invalid signature");
      
      require(nftInstance.ownerOf(tokenId) == from, "wrong owner");
      require(nftInstance.isApprovedForAll(from, address(this)) == true, "Nft Not Approved By the owner");
      //require(nftInstance.getApproved(tokenId)==address(this), "Nft Not Approved By the owner");

		for(uint i=0; i < nft_List.selltype.length; i++) {
				if(nft_List.selltype[i] == tokenAddr && nft_List.price[i] <= _price) {
				isToken = true;
				break;
				}
		}
	  require(isToken == true, "Can't buy with this token or low price");

		if(burn_Method == true) {  

				uint256 burnPrice = _price * burnPro / 10 ** 8;

				token.transferFrom(to, burnAddr, burnPrice); 
				token.transferFrom(to, from, (_price - burnPrice));
				//nftInstance.transferFrom(from, to, tokenId);
		}
		else if(burn_Method == false) {

				//uint256 burnPrice = _price * 2 / 100;
        getFee = setFee[tokenAddr];
        tokenFee = _price * getFee / (100 * feeDecimal);
				token.transferFrom(to, address(this), tokenFee); 
				token.transferFrom(to, from, (_price - tokenFee));
		}
		nftInstance.transferFrom(from, to, tokenId);
      
      isToken = false;
    }
    function set_Fee(address tokenAddr, uint256 feeValue) public onlyOwner {
      setFee[tokenAddr] = feeValue;
    }
    function delete_Fee(address tokenAddr) public onlyOwner {
      delete setFee[tokenAddr];
    }
    
}

