pragma solidity ^0.8.17;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "./interfaces/IFilmProvider.sol";
import "./common/OwnableExtended.sol";


contract FilmProvider is IFilmProvider, OwnableExtended {
	uint public fee;

	address public feeReceiver;

	constructor(uint _fee, address _feeReceiver) {
		setupFee(_fee, _feeReceiver == address(0) ? address(this) : _feeReceiver);
	}

	// Function to receive Ether. msg.data must be empty
	receive() external payable {}

	// Fallback function is called when msg.data is not empty
	fallback() external payable {}

	function onTokenTransfer(
		address _collection,
		address _from,
		address _to,
		uint _startTokenId,
		uint _quantity
	) external override {
		if (_from == address(0)) {
			emit Mint(_collection, _to, _startTokenId, _quantity);
		}
	}

	function feeInfo(uint _salePrice) public view virtual override returns (uint, address) {
		uint256 feeAmount = (_salePrice * fee) / 10_000;
		return (feeAmount, feeReceiver);
	}

	function setupFee(uint _fee, address _feeReceiver) public onlyOwnerOrOperator {
		fee = _fee;
		feeReceiver = _feeReceiver;
	}
}

