contract BattleRoyale is AccessControl {
  uint256 public constant MAX_ALLOWED_PLAYERS = 256;

  bytes32 public constant ORACLE_ROLE = keccak256("ORACLE_ROLE");

  address public constant WETH_ADDRESS = 0xB4FBF271143F4FBf7B91A5ded31805e42b2208d6;

  mapping(address => bool) public allowedTokens;


  struct Game {
    uint256 playerCap;
    address[] players;
    uint256 betAmount;
    address tokenAddress;
    address winner;
    bytes32 gameInfo;
  }

  mapping (uint256 => Game) public games;
  // game
  mapping(uint256 => mapping(address => bool)) public gamePlayerBetStatus;

  uint256 public gameCounter;

  mapping (address => uint256) public feesCollected;

  uint256 public feePercentage = 5;

  event GameCreated(
    uint256 gameId,
    uint256 playerCap,
    address[] players,
    uint256 betAmount,
    address tokenAddress
  );

  event GamePlayerDeposit(
    uint256 gameId,
    address playerAddress,
    uint256 betAmount,
    address tokenAddress
  );

  event GameResult(
    uint256 gameId,
    address[] players,
    uint256 betAmount,
    address tokenAddress,
    address winner
  );

  constructor() public {
    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    addAllowedToken(WETH_ADDRESS);
  }


  function createGame(
    uint256 playerCap,
    // address[] memory players,
    uint256 betAmount,
    address tokenAddress,
    bytes32 gameInfo
  ) public {
    require(playerCap > 0, "Player cap should be greater than zero");
    require(playerCap <= MAX_ALLOWED_PLAYERS, "Player cap should be <= MAX_ALLOWED_PLAYERS");
    // require(players.length <= playerCap, "At least two players are required");
    require(betAmount > 0, "Bet amount should be greater than zero");
    require(checkTokenAllowed(tokenAddress), "Token address is not allowed");

    address[] memory players;
    gameCounter++;

    games[gameCounter] = Game({
      playerCap:      playerCap,
      players:        players, // players,
      betAmount:      betAmount,
      tokenAddress:   tokenAddress,
      winner:         address(0),
      gameInfo:       gameInfo
    });

    emit GameCreated({
      gameId:       gameCounter,
      playerCap:    playerCap,
      players:      players, // players,
      betAmount:    betAmount,
      tokenAddress: tokenAddress
    });
  }

  function playerPlaceBet(uint256 gameId, address playerAddress) public {
    Game storage game = games[gameId];

    // address[] memory players = game.players;
    address tokenAddress = game.tokenAddress;
    uint256 betAmount = game.betAmount;
    uint256 playerCap = game.playerCap;

    require(!Utils.isAddressInList(game.players, playerAddress), "Player already in game");
    require(game.players.length < playerCap, "Game is full");

    // bool hasPlayerPlacedBet = gamePlayerBetStatus[gameId][playerAddress];

    // require(hasPlayerPlacedBet == false, "Player has already placed a bet");



    ERC20 token = ERC20(tokenAddress);

    bool isTransferSuccessful = token.transferFrom({
      from:   playerAddress,
      to:     address(this),
      amount: betAmount
    });

    require(isTransferSuccessful, "Bet transfer failed");

    gamePlayerBetStatus[gameId][playerAddress] = true;

    emit GamePlayerDeposit({
      gameId:           gameId,
      playerAddress:    playerAddress,
      betAmount:        betAmount,
      tokenAddress:     tokenAddress
    });
  }

  function resolveGame(uint256 gameId, address winner) onlyRole(ORACLE_ROLE) public {
    Game storage game = games[gameId];
    address[] memory players = game.players;

    require(players.length > 0, "Game does not exist");
    require(game.winner == address(0), "Game already resolved");
    require(Utils.isAddressInList(players, winner), "Winner is not specified player list");

    game.winner = winner;

    address tokenAddress = game.tokenAddress;
    uint256 totalAmount = game.betAmount * game.players.length;
    uint256 feeAmount = totalAmount * feePercentage / 100;
    uint256 payoutAmount = totalAmount - feeAmount;

    feesCollected[tokenAddress] += feeAmount;

    if (tokenAddress == WETH_ADDRESS) {
      WETH(payable(WETH_ADDRESS)).withdraw(payoutAmount);
      payable(winner).transfer(payoutAmount);

    } else {
      ERC20 token = ERC20(tokenAddress);
      bool isTransferSuccessful = token.transfer(address(winner), payoutAmount);
      require(
        isTransferSuccessful,
        "Token transfer from contract to player reverted"
      );
    }

    emit GameResult({
      gameId:         gameId,
      players:        game.players,
      betAmount:      game.betAmount,
      tokenAddress:   tokenAddress,
      winner:         winner
    });
  }

  function checkTokenAllowed(address tokenAddress) public view returns (bool) {
    return allowedTokens[tokenAddress];
  }

  function addAllowedToken(address tokenAddress) public onlyRole(DEFAULT_ADMIN_ROLE) {
    if (!allowedTokens[tokenAddress]) {
      allowedTokens[tokenAddress] = true;
      feesCollected[tokenAddress] = 0;
    }
  }

  function removeAllowedToken(address tokenAddress) public onlyRole(DEFAULT_ADMIN_ROLE) {
    delete allowedTokens[tokenAddress];
  }

  function approveTokenSpend(address tokenAddress, uint256 amount) public {
    ERC20 token = ERC20(tokenAddress);
    token.approve({
      spender: address(this),
      amount:  amount
    });
  }

  function setFeePercentage(uint256 newFeePercentage) public onlyRole(DEFAULT_ADMIN_ROLE) {
    feePercentage = newFeePercentage;
  }

  function claimFees(address recipient, address tokenAddress) public onlyRole(DEFAULT_ADMIN_ROLE) {
    uint256 feesCollectedForToken = feesCollected[tokenAddress];

    require(feesCollectedForToken > 0, "No fees to claim");

    if (tokenAddress == WETH_ADDRESS) {
      WETH(payable(WETH_ADDRESS)).withdraw(feesCollectedForToken);
      payable(recipient).transfer(feesCollectedForToken);
    } else {
      ERC20 token = ERC20(tokenAddress);
      token.transfer(recipient, feesCollectedForToken);
    }
    feesCollected[tokenAddress] = 0;
  }

  receive() external payable {}

}


