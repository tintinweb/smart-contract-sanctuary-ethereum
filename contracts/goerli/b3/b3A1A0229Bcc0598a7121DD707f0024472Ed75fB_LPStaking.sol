pragma solidity 0.8.12;

import "@openzeppelin/contracts/proxy/Clones.sol";
import "./LPStaking.sol";

contract LPStakingFactory {
  /*==================================================== Events =============================================================*/
 
  event LPStakingCreated(address _contract, address _admin);
 
  /*==================================================== State Variables ====================================================*/
 
  address public immutable LPStakingImplementation;
  address[] public LPStakings;

  uint256 private salt;

  /*==================================================== Constructor ========================================================*/

  constructor() {
    LPStakingImplementation = address(new LPStaking());
  }

  /*==================================================== FUNCTIONS ==========================================================*/

  function createLPStaking(
    IERC20 _rewardToken,
    IERC20 _lpToken,
    address _admin
  ) external returns (address) {
    address _clone = Clones.cloneDeterministic(LPStakingImplementation, bytes32(salt));
    salt++;
    LPStaking(_clone).initialize(_rewardToken, _lpToken, _admin);
    LPStakings.push(_clone);
 
    emit LPStakingCreated(_clone, _admin);

    return _clone;
  }
}

