pragma solidity 0.8.12;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/proxy/utils/Initializable.sol";

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract LPStaking is Initializable, ReentrancyGuard {
  using SafeMath for uint256;
  /*==================================================== Events =============================================================*/
  event Deposit(address indexed user, uint256 amount, address indexed to);
  event Withdraw(address indexed user, uint256 amount, address indexed to);
  event EmergencyWithdraw(address indexed user, uint256 amount, address indexed to);
  event Harvest(address indexed user, uint256 amount);
  event LogPoolAddition(uint256 indexed blockNumber, IERC20 indexed lpToken);
  event LogUpdatePool(uint256 lastRewardBlock, uint256 lpSupply, uint256 accRewardPerShare);
  /*==================================================== Modifiers ==========================================================*/
  //Modifiers here..
  modifier onlyAdmin() {
    require(msg.sender == admin, "Not Authorized");
    _;
  }
  /*==================================================== State Variables ====================================================*/
  struct UserInfo {
    uint256 amount;
    int256 rewardDebt;
  }

  struct PoolInfo {
    uint256 accRewardPerShare;
    uint256 lastRewardBlock;
  }
  IERC20 public rewardToken;
  /// @notice Address of the LP token.
  IERC20 public lpToken;
  /// @notice Info of the pool.
  PoolInfo public poolInfo;
  /// @notice Info of each user that stakes LP tokens.
  mapping(address => UserInfo) public userInfo;

  uint256 private constant ACC_REWARD_PRECISION = 1e12;
  /// @notice Address of the Admin.
  address public admin;
  /// @notice Address of the Factory Contract.
  address public factory;
  /// @notice Reward ERC20 Token quantity per block.
  uint256 public rewardPerBlock;

  /*==================================================== Constructor ========================================================*/

  function initialize(
    IERC20 _rewardToken,
    IERC20 _lpToken,
    address _admin
  ) public virtual initializer {
    __LpStaking_init_unchained(_rewardToken, _lpToken, _admin);
  }

  /*==================================================== FUNCTIONS ==========================================================*/
  /*==================================================== Read Functions ======================================================*/

  /// @notice View function to see pending Reward on frontend.
  /// @param _user Address of user.
  /// @return pending reward for a given user.
  function pendingReward(address _user) external view returns (uint256 pending) {
    PoolInfo memory pool = poolInfo;
    UserInfo storage user = userInfo[_user];
    uint256 accRewardPerShare = pool.accRewardPerShare;
    uint256 lpSupply = lpToken.balanceOf(address(this));
    if (block.number > pool.lastRewardBlock && lpSupply != 0) {
      uint256 blocks = block.number - pool.lastRewardBlock;
      uint256 reward = blocks * rewardPerBlock;
      accRewardPerShare += ((reward * ACC_REWARD_PRECISION) / lpSupply);
    }
    pending = uint256((int256((user.amount * (accRewardPerShare)) / ACC_REWARD_PRECISION)) - (user.rewardDebt));
  }

  function returnBlockNumber() external view returns(uint256 blocknm) {
    blocknm = block.number;
  }
  /*==================================================== External Functions ==================================================*/

  function setRewardPerBlock(uint256 _amount) external onlyAdmin {
    require(_amount > 0, "Reward per block can not be zero");
    rewardPerBlock = _amount;
  }

  function fund(uint256 _amount) external onlyAdmin {
    require(_amount > 0, "Funds must be greater than zero");
    rewardToken.transferFrom(msg.sender, address(this), _amount);
  }

  //External functions here
  /// @notice Add a new LP to the pool. Can only be called by the owner.
  /// DO NOT add the same LP token more than once. Rewards will be messed up if you do.
  /// @param _lpToken Address of the LP ERC-20 token.
  function add(IERC20 _lpToken) public onlyAdmin {
    uint256 lastRewardBlock = block.number;
    poolInfo = (PoolInfo({lastRewardBlock: lastRewardBlock, accRewardPerShare: 0}));
    emit LogPoolAddition(lastRewardBlock, _lpToken);
  }

  /// @notice Update reward variables of the given pool.

  /// @return pool Returns the pool that was updated.
  function updatePool() public returns (PoolInfo memory pool) {
    pool = poolInfo;
    if (block.number > pool.lastRewardBlock) {
      uint256 lpSupply = lpToken.balanceOf(address(this));
      if (lpSupply > 0) {
        uint256 blocks = block.number - pool.lastRewardBlock;
        uint256 reward = blocks * rewardPerBlock;
        pool.accRewardPerShare += (reward * ACC_REWARD_PRECISION) / lpSupply;
      }
      pool.lastRewardBlock = block.number;
      poolInfo = pool;
      emit LogUpdatePool(pool.lastRewardBlock, lpSupply, pool.accRewardPerShare);
    }
  }

  /// @notice Deposit LP tokens to LPStaking for reward allocation.
  /// @param amount LP token amount to deposit.
  /// @param to The receiver of `amount` deposit benefit.
  function deposit(uint256 amount, address to) public {
    PoolInfo memory pool = updatePool();
    UserInfo storage user = userInfo[to];

    // Effects
    user.amount += amount;
    //user.rewardDebt += (amount * (pool.accRewardPerShare)) / ACC_REWARD_PRECISION;
    user.rewardDebt += int256((amount * pool.accRewardPerShare) / ACC_REWARD_PRECISION);

    lpToken.transferFrom(msg.sender, address(this), amount);

    emit Deposit(msg.sender, amount, to);
  }

  /// @notice Withdraw LP tokens from MCV2.
  /// @param amount LP token amount to withdraw.
  /// @param to Receiver of the LP tokens.
  function withdraw(uint256 amount, address to) public nonReentrant {
    PoolInfo memory pool = updatePool();
    UserInfo storage user = userInfo[msg.sender];

    // Effects

    user.rewardDebt -= int256((amount * pool.accRewardPerShare) / ACC_REWARD_PRECISION);

    user.amount -= amount;

    lpToken.transfer(to, amount);

    emit Withdraw(msg.sender, amount, to);
  }

  /// @notice Harvest proceeds for transaction sender to `to`.
  /// @param to Receiver of rewards.
  function harvest(address to) public nonReentrant {
    PoolInfo memory pool = updatePool();
    UserInfo storage user = userInfo[msg.sender];
    int256 accumulatedReward = int256((user.amount * pool.accRewardPerShare) / ACC_REWARD_PRECISION);
    uint256 _pendingReward = uint256(accumulatedReward - user.rewardDebt);

    // Effects
    user.rewardDebt = accumulatedReward;

    // Interactions
    if (_pendingReward != 0) {
      rewardToken.transfer(to, _pendingReward);
    }
    emit Harvest(msg.sender, _pendingReward);
  }


  /// @notice Withdraw without caring about rewards. EMERGENCY ONLY.
  /// @param to Receiver of the LP tokens.
  function emergencyWithdraw(address to) public {
    UserInfo storage user = userInfo[msg.sender];
    uint256 amount = user.amount;
    user.amount = 0;
    user.rewardDebt = 0;

    // Note: transfer can fail or succeed if `amount` is zero.
    lpToken.transfer(to, amount);
    emit EmergencyWithdraw(msg.sender, amount, to);
  }

  /*==================================================== Internal Functions ==================================================*/
  function __LpStaking_init_unchained(
    IERC20 _rewardToken,
    IERC20 _lpToken,
    address _admin
  ) internal onlyInitializing {
    require(address(_rewardToken) != address(0), "Reward token address can not be address zero");
    require(address(_lpToken) != address(0), "LP token address can not be address zero");
    require(_admin != address(0), "Admin address can not be address zero");
    rewardToken = _rewardToken;
    lpToken = _lpToken;
    admin = _admin;
    factory = msg.sender;
  }
}

