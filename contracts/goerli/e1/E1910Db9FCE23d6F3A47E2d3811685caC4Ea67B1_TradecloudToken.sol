pragma solidity 0.5.6;

import "openzeppelin-solidity/contracts/token/ERC20/ERC20Pausable.sol";
import "openzeppelin-solidity/contracts/access/roles/WhitelistedRole.sol";

contract TradecloudToken is ERC20Pausable, WhitelistedRole {

    string public constant name = "TradecloudToken";
    string public constant symbol = "TCST";
    uint8 public constant decimals = 0;

    // %0 millions
    uint256 public constant MAXIMUM_SUPPLY = 50 * (10 ** 6) * (10 ** uint256(decimals));

    constructor(address _tokengateAccount, address _tradeCloudAccount) public
    {
        require(_tokengateAccount !=  address(0), "_tokengateAccount can not be 0x0");
        require(_tradeCloudAccount !=  address(0), "_tradeCloudAccount can not be 0x0");
        require(_tokengateAccount != _tradeCloudAccount, "_tokengateAccount and _tradeCloudAccount must be different");

        // Whitelisted accounts have been approved by a WhitelistAdmin to perform certain actions.
        // This role is special in that the only accounts that can add it are WhitelistAdmins (who can also remove
        // it), and not Whitelisteds themselves.
         _addWhitelistAdmin(_tokengateAccount);
        renounceWhitelistAdmin();

        // tradeCloudAccount can pause/unpause
        _addPauser(_tradeCloudAccount);
        renouncePauser();

        // tradeCloudAccount is whitelisted so we can transfer all token to him
        _addWhitelisted(_tradeCloudAccount);

        // tokengate need to be able to transfer to investor after that tradeCloudAccount has approved the transfer
        _addWhitelisted(_tokengateAccount);

        // create tokens, tradeCloudWallet get all the tokens
        _mint(_tradeCloudAccount, MAXIMUM_SUPPLY);
    }

    /**
     * @dev Transfer token to a specified address
     * @param to The address to transfer to.
     * @param value The amount to be transferred.
     */
    function transfer(address to, uint256 value)
        onlyWhitelisted
        validDestination(to) public returns (bool) {
        require(isWhitelisted(to), "to is not whitelisted");

        return super.transfer(to, value);
    }

    function transferFrom(address from, address to, uint256 value)
        validDestination(from)
        validDestination(to) public returns (bool) {
        require(isWhitelisted(from), "from is not whitelisted");
        require(isWhitelisted(to), "to is not whitelisted");

        return super.transferFrom(from, to, value);
    }

    /**
    * Never let investors  lose money:
    * Prevent transferring Ethereum Tokens to 0x0 and our contract address
    */
    modifier validDestination( address to ) {
        require(to != address(0x0), "No transfer to 0x0");
        require(to != address(this), "No transfer to the token smart contract" );
        _;
    }

}

