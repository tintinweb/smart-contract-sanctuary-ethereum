contract Sell is Ownable {
    using SafeMath for uint256;
    uint256 public FINMaticRate_;
    address public finAddress_;
    address public admin_;

    struct Coins {
        bool status;
        uint256 rate;
    }

    mapping(address => Coins) public CoinState_;

    event BuyWithMatic(address, uint256);
    event BuyWithCrypto(address, uint256);

    constructor(
        address _finAddress,
        address _crypto,
        uint256 _finRate,
        uint256 _finMaticRate
    ) {
        finAddress_ = _finAddress;
        CoinState_[_crypto] = Coins(true, _finRate);
        FINMaticRate_ = _finMaticRate;
        admin_ = msg.sender;
    }

    function buywithMatic() external payable {
        require(msg.value > 0, "weiAmount is zero");
        uint256 finAmount = msg.value * FINMaticRate_;
        payable(admin_).transfer(msg.value);
        IERC20(finAddress_).transfer(msg.sender, finAmount);

        emit BuyWithMatic(msg.sender, finAmount);
    }

    function buyWithCrypto(address _crypto, uint256 _amount) external {
        require(CoinState_[_crypto].status, "Not enabled coin");
        require(_amount > 0, "Invalied Amount");

        uint256 finAmount = _amount * CoinState_[_crypto].rate;
        IERC20(_crypto).transferFrom(msg.sender, address(this), _amount);
        IERC20(finAddress_).transfer(msg.sender, finAmount);

        emit BuyWithCrypto(msg.sender, finAmount);
    }

    function setFinMaticRate(uint256 _finMaticRate) external onlyOwner {
        FINMaticRate_ = _finMaticRate;
    }

    function setCoinState(
        address _crypto,
        bool _status,
        uint256 _rate
    ) external onlyOwner {
        CoinState_[_crypto] = Coins(_status, _rate);
    }

    function setFINAddress(address _finAddress) external onlyOwner {
        finAddress_ = _finAddress;
    }
}