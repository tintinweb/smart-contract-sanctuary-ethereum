    function isOwner() public returns (bool) {
        return msg.sender == owner;
    }

    function isOtherAddresses() public returns (bool check) {
        uint256 leng = others.length;
        for (uint256 i; i < leng; ) {
            if (msg.sender == others[i]) {
                check = true;
                break;
            } else {
                check = false;
            }
            unchecked {
                ++i;
            }
        }
        return check;
    }

