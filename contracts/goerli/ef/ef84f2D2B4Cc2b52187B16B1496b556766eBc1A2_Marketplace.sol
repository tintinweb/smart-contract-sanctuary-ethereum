interface IMarketplace {
    enum ListingStatus {
        ACTIVE,
        CANCELLED,
        SOLD
    }

    enum ListingType {
        BUY_NOW,
        AUCTION
    }

    enum ItemType {
        ERC20,
        ERC721,
        ERC1155
    }

    enum ConsiderationType {
        ALL,
        ANY
    }

    struct Item {
        ItemType itemType;
        address token;
        uint256 identifierOrCriteria;
        uint256 startAmount;
        uint256 endAmount;
    }

    struct Bid {
        address bidder;
        uint256 amount;
    }

    struct Listing {
        ListingStatus listingStatus;
        ListingType listingType;
        Item[] offer;
        ConsiderationType considerationType;
        Item[] consideration;
    }

    function createListing(
        ListingType listingType,
        Item[] memory offer,
        ConsiderationType considerationType,
        Item[] memory consideration
    ) external;

    function updateListing(
        uint256 listingId,
        Item[] memory offer,
        ConsiderationType considerationType,
        Item[] memory consideration
    ) external;

    function cancelListing(uint256 listingId) external;

    function getListing(uint256 listingId)
        external
        view
        returns (Listing memory, Bid[] memory);

    function getListings(
        uint256 offset,
        uint256 limit,
        ListingStatus status
    ) external view returns (Listing[] memory);

    function placeBid(uint256 listingId, uint256 amount) external payable;

    function acceptHighestBid(uint256 listingId) external;

    function buyNow(uint256 listingId) external payable;

    event ListingCreated(
        uint256 indexed listingId,
        ListingType listingType,
        Item[] offer,
        ConsiderationType considerationType,
        Item[] consideration
    );

    event ListingUpdated(
        uint256 indexed listingId,
        ListingType listingType,
        Item[] offer,
        ConsiderationType considerationType,
        Item[] consideration
    );

    event ListingCancelled(uint256 indexed listingId);

    event BidPlaced(
        uint256 indexed listingId,
        address indexed bidder,
        uint256 amount
    );

    event ListingCompleted(uint256 indexed listingId, address indexed buyer);
}