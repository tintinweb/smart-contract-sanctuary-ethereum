import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/interfaces/IERC2981.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "../interfaces/IMarketplace.sol";

contract Marketplace is
    IMarketplace,
    Initializable,
    AccessControlUpgradeable,
    ReentrancyGuardUpgradeable
{
    using CountersUpgradeable for CountersUpgradeable.Counter;

    CountersUpgradeable.Counter public _listingsCounter;
    mapping(uint256 => Listing) public _listings;
    mapping(uint256 => address) public _listingCreators;
    mapping(uint256 => Bid[]) public _listingBids;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function initialize() public initializer {
        __AccessControl_init();
        __ReentrancyGuard_init();

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function verifyListingData(
        ListingType listingType,
        Item[] memory offer,
        ConsiderationType,
        Item[] memory consideration
    ) public view {
        require(
            offer.length > 0 && offer.length <= 5,
            "MRKP: offer must not be empty and must not exceed 5 items"
        );
        require(
            consideration.length > 0 && consideration.length <= 5,
            "MRKP: consideration must not be empty and must not exceed 5 items"
        );

        for (uint256 i = 0; i < offer.length; i++) {
            require(
                offer[i].itemType == ItemType.ERC721 ||
                    offer[i].itemType == ItemType.ERC1155,
                "MRKP: offer must only be ERC721 or ERC1155 items"
            );
            require(
                offer[i].startAmount == offer[i].endAmount,
                "MRKP: offer start and end amount must be equal"
            );

            if (offer[i].itemType == ItemType.ERC721) {
                require(
                    offer[i].startAmount == 1,
                    "MRKP: ERC721 start & end amounts must be 1"
                );
                require(
                    IERC721(offer[i].token).ownerOf(
                        offer[i].identifierOrCriteria
                    ) == msg.sender,
                    "MRKP: sender must be owner of ERC721 offer"
                );
                require(
                    IERC721(offer[i].token).getApproved(
                        offer[i].identifierOrCriteria
                    ) == address(this),
                    "MRKP: contract must be approved to transfer ERC721 offer"
                );
            } else {
                require(
                    IERC1155(offer[i].token).balanceOf(
                        msg.sender,
                        offer[i].identifierOrCriteria
                    ) >= offer[i].startAmount,
                    "MRKP: sender must be owner of ERC1155 offer"
                );
                require(
                    IERC1155(offer[i].token).isApprovedForAll(
                        msg.sender,
                        address(this)
                    ),
                    "MRKP: contract must be approved to transfer ERC1155 offer"
                );
            }
        }

        if (listingType == ListingType.AUCTION) {
            require(
                consideration.length == 1,
                "MRKP: consideration must be 1 item for auction"
            );
            require(
                consideration[0].itemType == ItemType.ERC20,
                "MRKP: consideration must be ERC20 for auction"
            );
            require(
                consideration[0].startAmount > 100,
                "MRKP: consideration start amount must be greater than 100"
            );
        } else {
            for (uint256 i = 0; i < consideration.length; i++) {
                if (consideration[i].itemType == ItemType.ERC721) {
                    require(
                        consideration[i].startAmount == 1,
                        "MRKP: ERC721 start & end amounts must be 1"
                    );
                } else if (
                    consideration[i].itemType == ItemType.ERC1155 ||
                    consideration[i].itemType == ItemType.ERC20
                ) {
                    require(
                        consideration[i].startAmount ==
                            consideration[i].endAmount,
                        "MRKP: ERC20/ERC1155 start & end amounts must be equal"
                    );
                }
            }
        }
    }

    function createListing(
        ListingType listingType,
        Item[] memory offer,
        ConsiderationType considerationType,
        Item[] memory consideration
    ) external {
        verifyListingData(listingType, offer, considerationType, consideration);

        _listingsCounter.increment();
        uint256 listingId = _listingsCounter.current();

        Listing storage listing = _listings[listingId];
        listing.listingStatus = ListingStatus.ACTIVE;
        listing.listingType = listingType;
        listing.considerationType = considerationType;

        for (uint256 i = 0; i < offer.length; i++) {
            listing.offer.push(offer[i]);
        }

        for (uint256 i = 0; i < consideration.length; i++) {
            listing.consideration.push(consideration[i]);
        }

        _listingCreators[listingId] = msg.sender;

        emit ListingCreated(
            listingId,
            listingType,
            offer,
            considerationType,
            consideration
        );
    }

    function updateListing(
        uint256 listingId,
        Item[] memory offer,
        ConsiderationType considerationType,
        Item[] memory consideration
    ) external {
        Listing storage listing = _listings[listingId];
        require(
            listing.listingStatus == ListingStatus.ACTIVE,
            "MRKP: listing is not active"
        );
        require(
            _listingCreators[listingId] == msg.sender,
            "MRKP: sender is not listing creator"
        );

        verifyListingData(
            listing.listingType,
            offer,
            considerationType,
            consideration
        );

        listing.considerationType = considerationType;

        delete listing.offer;
        delete listing.consideration;

        for (uint256 i = 0; i < offer.length; i++) {
            listing.offer.push(offer[i]);
        }

        for (uint256 i = 0; i < consideration.length; i++) {
            listing.consideration.push(consideration[i]);
        }

        emit ListingUpdated(
            listingId,
            listing.listingType,
            offer,
            considerationType,
            consideration
        );
    }

    function cancelListing(uint256 listingId) external {
        Listing storage listing = _listings[listingId];
        require(
            listing.listingStatus == ListingStatus.ACTIVE,
            "MRKP: listing is not active"
        );
        require(
            _listingCreators[listingId] == msg.sender,
            "MRKP: sender is not listing creator"
        );

        listing.listingStatus = ListingStatus.CANCELLED;
        emit ListingCancelled(listingId);
    }

    function placeBid(uint256 listingId, uint256 amount)
        external
        payable
        nonReentrant
    {
        Listing storage listing = _listings[listingId];
        require(
            listing.listingStatus == ListingStatus.ACTIVE,
            "MRKP: listing is not active"
        );
        require(
            listing.listingType == ListingType.AUCTION,
            "MRKP: listing is not an auction"
        );
        require(
            amount > listing.consideration[0].startAmount,
            "MRKP: bid amount must be greater than floor price"
        );
        require(
            amount > listing.consideration[0].endAmount,
            "MRKP: bid amount must be greater than highest bid"
        );

        if (listing.consideration[0].token == address(0)) {
            require(
                msg.value == amount,
                "MRKP: ETH amount must match bid amount"
            );
        } else {
            bool retval = IERC20(listing.consideration[0].token).transferFrom(
                msg.sender,
                address(this),
                amount
            );
            require(retval, "MRKP: ERC20 transfer failed");
        }

        Bid[] storage listingBids = _listingBids[listingId];
        if (listingBids.length > 0) {
            Bid storage previousBid = listingBids[listingBids.length - 1];

            if (listing.consideration[0].token == address(0)) {
                payable(previousBid.bidder).transfer(previousBid.amount);
            } else {
                bool retval = IERC20(listing.consideration[0].token).transfer(
                    previousBid.bidder,
                    previousBid.amount
                );
                require(retval, "MRKP: ERC20 transfer failed");
            }
        }

        listingBids.push(Bid(msg.sender, amount));
        listing.consideration[0].endAmount = amount;

        emit BidPlaced(listingId, msg.sender, amount);
    }

    function acceptHighestBid(uint256 listingId) external nonReentrant {
        Listing storage listing = _listings[listingId];
        require(
            listing.listingStatus == ListingStatus.ACTIVE,
            "MRKP: listing is not active"
        );
        require(
            listing.listingType == ListingType.AUCTION,
            "MRKP: listing is not an auction"
        );
        require(
            _listingCreators[listingId] == msg.sender,
            "MRKP: sender is not listing creator"
        );

        Bid[] storage listingBids = _listingBids[listingId];
        require(listingBids.length > 0, "MRKP: no bids have been placed");

        Bid storage highestBid = listingBids[listingBids.length - 1];

        if (listing.consideration[0].token == address(0)) {
            payable(msg.sender).transfer(listing.consideration[0].endAmount);
        } else {
            bool retval = IERC20(listing.consideration[0].token).transfer(
                msg.sender,
                listing.consideration[0].endAmount
            );
            require(retval, "MRKP: ERC20 transfer failed");
        }

        for (uint256 i = 0; i < listing.offer.length; i++) {
            if (listing.offer[i].itemType == ItemType.ERC721) {
                IERC721(listing.offer[i].token).safeTransferFrom(
                    msg.sender,
                    highestBid.bidder,
                    listing.offer[i].identifierOrCriteria
                );
            } else {
                IERC1155(listing.offer[i].token).safeTransferFrom(
                    msg.sender,
                    highestBid.bidder,
                    listing.offer[i].identifierOrCriteria,
                    listing.offer[i].startAmount,
                    ""
                );
            }
        }

        listing.listingStatus = ListingStatus.SOLD;
        emit ListingCompleted(listingId, highestBid.bidder);
    }

    function buyNow(uint256 listingId) external payable nonReentrant {
        Listing storage listing = _listings[listingId];
        require(
            listing.listingStatus == ListingStatus.ACTIVE,
            "MRKP: listing is not active"
        );
        require(
            listing.listingType == ListingType.BUY_NOW,
            "MRKP: listing is not a buy now listing"
        );

        uint256 ethValue = 0;
        for (uint256 i = 0; i < listing.consideration.length; i++) {
            if (listing.consideration[i].itemType == ItemType.ERC20) {
                if (listing.consideration[i].token == address(0)) {
                    ethValue += listing.consideration[i].startAmount;
                } else {
                    bool retval = IERC20(listing.consideration[i].token)
                        .transferFrom(
                            msg.sender,
                            _listingCreators[listingId],
                            listing.consideration[i].endAmount
                        );
                    require(retval, "MRKP: ERC20 transfer failed");
                }
            } else if (listing.consideration[i].itemType == ItemType.ERC721) {
                IERC721(listing.consideration[i].token).safeTransferFrom(
                    msg.sender,
                    _listingCreators[listingId],
                    listing.consideration[i].identifierOrCriteria
                );
            } else {
                IERC1155(listing.consideration[i].token).safeTransferFrom(
                    msg.sender,
                    _listingCreators[listingId],
                    listing.consideration[i].identifierOrCriteria,
                    listing.consideration[i].startAmount,
                    ""
                );
            }
        }

        require(
            msg.value >= ethValue,
            "MRKP: ETH amount must match consideration"
        );
        payable(_listingCreators[listingId]).transfer(ethValue);

        for (uint256 i = 0; i < listing.offer.length; i++) {
            if (listing.offer[i].itemType == ItemType.ERC721) {
                IERC721(listing.offer[i].token).safeTransferFrom(
                    _listingCreators[listingId],
                    msg.sender,
                    listing.offer[i].identifierOrCriteria
                );
            } else {
                IERC1155(listing.offer[i].token).safeTransferFrom(
                    _listingCreators[listingId],
                    msg.sender,
                    listing.offer[i].identifierOrCriteria,
                    listing.offer[i].startAmount,
                    ""
                );
            }
        }

        listing.listingStatus = ListingStatus.SOLD;
        emit ListingCompleted(listingId, msg.sender);
    }

    function getListing(uint256 listingId)
        external
        view
        returns (Listing memory, Bid[] memory)
    {
        return (_listings[listingId], _listingBids[listingId]);
    }

    function getListings(
        uint256 offset,
        uint256 limit,
        ListingStatus status
    ) external view returns (Listing[] memory) {
        Listing[] memory listings = new Listing[](limit);
        uint256 count = 0;

        for (uint256 i = offset; i <= _listingsCounter.current(); i++) {
            if (count == limit) {
                break;
            }

            Listing memory listing = _listings[i];
            if (listing.listingStatus == status) {
                listings[count] = listing;
                count++;
            }
        }

        return listings;
    }
}

