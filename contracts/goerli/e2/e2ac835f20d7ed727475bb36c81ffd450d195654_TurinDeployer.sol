import {IUniswapV2Factory} from "v2-core/interfaces/IUniswapV2Factory.sol";

uint256 constant ONE_YEAR = 365 days;

contract TurinDeployer {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    address public constant IDO = address(0x620A27a4c628D46Cfb398b3169948baa90089Dc5);
    address public constant UV2_FACTORY = address(0xc35DADB65012eC5796536bD9864eD8773aBc74C4);
    address public constant UV2_LIBRARY = address(0x65faacf8C1636f6f021b3c6a6799baaCFd584638);
    address public constant UV2_ROUTER = address(0x1b02dA8Cb0d097eB8D57A175b88c7D8b47997506);

    IERC20Upgradeable public token;
    address public psdaVault;
    address public teamVault;
    address public treasuryVault;
    address public rewardsVault;
    address public incentivesVault;
    address public staking;
    address public farming;
    address public pool;

    constructor(uint256 timestamp, address ms, address feed, IERC20Upgradeable wbtc) {
        {
            TurinToken tokenImplementation = new TurinToken();
            bytes memory tokenInitializeData = abi.encodeWithSelector(TurinToken.initialize.selector, ms);
            address tokenAddress = _createProxy(address(tokenImplementation), tokenInitializeData);
            token = IERC20Upgradeable(tokenAddress);
        }

        address vaultImplementationAddress = address(new TurinDistributionVaultAllocation());

        if (timestamp == 0) {
            // solhint-disable-next-line
            timestamp = block.timestamp;
        }

        {
            uint256 idoAmount = 1606298539070e12;
            token.safeTransfer(IDO, idoAmount);
        }

        {
            uint256 psdaAmount = 625e4 ether;
            bytes memory psdaInitializeData = abi.encodeWithSelector(
                TurinDistributionVaultAllocation.initialize.selector,
                ms,
                address(token),
                1,
                psdaAmount,
                timestamp + ONE_YEAR,
                timestamp + (4 * ONE_YEAR)
            );
            psdaVault = _createProxy(vaultImplementationAddress, psdaInitializeData);
            token.safeTransfer(psdaVault, psdaAmount);
        }

        {
            address implementation = address(new TurinDistributionVaultMerkleVesting());
            uint256 teamAmount = 315e4 ether;
            bytes memory teamInitializeData = abi.encodeWithSelector(
                TurinDistributionVaultMerkleVesting.initialize.selector,
                ms,
                address(token),
                timestamp + (ONE_YEAR / 2),
                timestamp + (ONE_YEAR + (ONE_YEAR / 2))
            );
            teamVault = _createProxy(implementation, teamInitializeData);
            token.safeTransfer(teamVault, teamAmount);
        }

        {
            uint256 treasuryAmount = 315e4 ether;
            bytes memory treasuryInitializeData = abi.encodeWithSelector(
                TurinDistributionVaultAllocation.initialize.selector,
                ms,
                address(token),
                2,
                treasuryAmount,
                timestamp,
                timestamp + (4 * ONE_YEAR)
            );
            treasuryVault = _createProxy(vaultImplementationAddress, treasuryInitializeData);
            token.safeTransfer(treasuryVault, treasuryAmount);
        }

        {
            address implementation = address(new TurinDistributionVaultMerkle());
            uint256 rewardsAmount = 105e4 ether;
            bytes memory rewardsInitializeData =
                abi.encodeWithSelector(TurinDistributionVaultMerkle.initialize.selector, ms, address(token));
            rewardsVault = _createProxy(implementation, rewardsInitializeData);
            token.safeTransfer(rewardsVault, rewardsAmount);
        }

        {
            uint256 incentivesAmount = 315e4 ether;
            bytes memory incentivesInitializeData = abi.encodeWithSelector(
                TurinDistributionVaultAllocation.initialize.selector,
                ms,
                address(token),
                1,
                incentivesAmount,
                timestamp,
                timestamp + (3 * ONE_YEAR)
            );
            incentivesVault = _createProxy(vaultImplementationAddress, incentivesInitializeData);
            token.safeTransfer(incentivesVault, incentivesAmount);
        }

        {
            address stakingImplementationAddress = address(new TurinStaking());
            bytes memory stakingInitializeData = abi.encodeWithSelector(
                TurinStaking.initialize.selector, ms, incentivesVault, token, 30 days, 0.1 ether, 10 ether
            );
            staking = _createProxy(stakingImplementationAddress, stakingInitializeData);
        }

        uint256 tokenAmount;

        {
            AggregatorV3Interface aggregatorInterface = AggregatorV3Interface(feed);
            uint256 decimals = aggregatorInterface.decimals(); //8
            int256 answer = aggregatorInterface.latestAnswer();
            uint256 btcToUsdPrice = uint256(answer) * 1 ether / (10 ** decimals);
            tokenAmount = btcToUsdPrice * uint256(20) / uint256(3);
            wbtc.safeTransferFrom(ms, address(this), 2e8);
            wbtc.approve(UV2_ROUTER, 2e8);
            token.approve(UV2_ROUTER, tokenAmount);
        }

        {
            IUniswapV2Router02 router = IUniswapV2Router02(UV2_ROUTER);
            require(tokenAmount != 0, "");
            (,, uint256 liquidity) = router.addLiquidity(
                address(token),
                address(wbtc),
                tokenAmount,
                2e8,
                tokenAmount,
                2e8,
                ms,
                // solhint-disable-next-line
                block.timestamp + 5 minutes
            );
            IUniswapV2Factory factory = IUniswapV2Factory(UV2_FACTORY);
            pool = factory.getPair(address(token), address(wbtc));
            require(pool != address(0), "");
            IERC20Upgradeable lpToken = IERC20Upgradeable(pool);
            uint256 lpBalance = lpToken.balanceOf(ms);
            require(lpBalance == liquidity, "");
            token.safeTransfer(ms, token.balanceOf(address(this)));
        }

        {
            address farmingImplementationAddress = address(new TurinFarming());
            bytes memory farmingInitializeData =
                abi.encodeWithSelector(TurinFarming.initialize.selector, ms, incentivesVault, pool);
            farming = _createProxy(farmingImplementationAddress, farmingInitializeData);
        }

        {
            uint256[] memory allocations = new uint256[](uint256(1));
            allocations[0] = 100 ether;
            TurinDistributionVaultAllocation(incentivesVault).addAccount(farming, allocations);
            uint256[] memory allocations2 = new uint256[](uint256(2));
            allocations2[0] = 80 ether;
            allocations2[1] = 20 ether;
            TurinDistributionVaultAllocation(incentivesVault).addAccount(staking, allocations2);
        }
    }

    function _createProxy(address proxyImplementation, bytes memory initializeCalldata)
        private
        returns (address proxyAddress)
    {
        proxyAddress = address(new ERC1967Proxy(proxyImplementation, initializeCalldata));
    }
}

