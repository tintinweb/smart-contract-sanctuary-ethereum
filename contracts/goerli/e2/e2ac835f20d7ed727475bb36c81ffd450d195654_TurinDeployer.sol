        _update();
        uint256 pending = _pendingRewards(account);
        require(pending != 0, "Staking: nothing to claim");
        _reward(account);
        _users[account].rewardDebt = _users[account].balance * _general.accRewardsPerShare / 1 ether;

        emit Claim(account);
