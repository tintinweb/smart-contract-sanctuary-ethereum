        require(account == msg.sender || _approvals[account][msg.sender], "Staking: unauthorized account");
        require(amount > 0, "Staking: amount must be over zero");
        require(amount <= _users[account].balance, "Staking: user has not enough staking balance");

        _users[account].balance -= amount;
        _users[account].rewardDebt = _users[account].balance * _general.accRewardsPerShare / 1 ether;

        _token.safeTransfer(account, amount);

        emit Withdraw(account, amount);
    }

