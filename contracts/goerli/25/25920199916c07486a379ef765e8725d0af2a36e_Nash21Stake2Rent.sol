pragma solidity ^0.8.9;

import "./utils/UUPSUpgradeableByRole.sol";
import "./interfaces/INash21Manager.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/SignatureCheckerUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";

contract Nash21Stake2Rent is UUPSUpgradeableByRole, EIP712Upgradeable {
    bytes32 internal constant _N21_S2R_TYPEHASH_DEPOSIT = keccak256(
        "Deposit(address account,uint256 tokenId,uint256 amount,uint256 yieldPerSecond,uint256 cliffTime,uint256 deadline)"
    );
    bytes32 internal constant _S2R_ADMIN_ROLE = keccak256("S2R_ADMIN_ROLE");

    struct Data {
        uint256 deposit;
        uint256 yieldPerSecond;
        uint256 startDate;
        uint256 cliffTime;
        uint256 lastClaimDate;
        uint256 pendingYield;
        uint256 withdrawn;
    }

    mapping(address => mapping(uint256 => Data)) internal _data;

    modifier notAtCliffTime(address account, uint256 tokenId) {
        require(!_isCliffTime(account, tokenId), "cliffTime");
        _;
    }

    function initialize() public initializer {
        __AccessControlProxyPausable_init(msg.sender);
    }

    //view

    function getData(address account, uint256 tokenId) public view returns (Data memory) {
        return _data[account][tokenId];
    }

    function getDeposit(address account, uint256 tokenId) public view returns (uint256) {
        return _data[account][tokenId].deposit;
    }

    function getYieldPerSecond(address account, uint256 tokenId) public view returns (uint256) {
        return _data[account][tokenId].yieldPerSecond;
    }

    function getStartDate(address account, uint256 tokenId) public view returns (uint256) {
        return _data[account][tokenId].startDate;
    }

    function getCliffTime(address account, uint256 tokenId) public view returns (uint256) {
        return _data[account][tokenId].cliffTime;
    }

    function getLastClaimDate(address account, uint256 tokenId) public view returns (uint256) {
        return _data[account][tokenId].lastClaimDate;
    }

    function getPendingYield(address account, uint256 tokenId) public view returns (uint256) {
        return _data[account][tokenId].pendingYield;
    }

    function getWithdrawn(address account, uint256 tokenId) public view returns (uint256) {
        return _data[account][tokenId].withdrawn;
    }

    function isCliffTime(address account, uint256 tokenId) public view returns (bool) {
        return _isCliffTime(account, tokenId);
    }

    //owner

    function updateYieldPerSecond(address account, uint256 tokenId, uint256 newYieldPerSecond)
        public
        onlyRole(_S2R_ADMIN_ROLE)
    {
        if (_isCliffTime(account, tokenId)) {
            _lockYield(account, tokenId);
        } else {
            _claim(account, tokenId);
        }
        _data[account][tokenId].yieldPerSecond = newYieldPerSecond;
        //emit
    }

    //TBD: not necessary I think
    function updateCliffTime(address account, uint256 tokenId, uint256 newCliffTime) public onlyRole(_S2R_ADMIN_ROLE) {
        if (_isCliffTime(account, tokenId)) {
            _lockYield(account, tokenId);
        } else {
            _claim(account, tokenId);
        }
        _data[account][tokenId].cliffTime = newCliffTime;
        //emit
    }

    function updateMerkleRoot() public onlyRole(_S2R_ADMIN_ROLE) {}

    //public

    function deposit(
        address account,
        uint256 tokenId,
        uint256 amount,
        uint256 yieldPerSecond,
        uint256 cliffTime,
        uint256 deadline,
        bytes memory signature,
        address signer
    ) external view returns (bool) 
    /**
     * TBD: reentrancy?
     */
    {
        //verify signature
        // require(hasRole(_S2R_ADMIN_ROLE, signer), "N21F003");
        // require(block.timestamp <= deadline, "N21F004");

        bytes32 structHash = keccak256(
            abi.encode(_N21_S2R_TYPEHASH_DEPOSIT, account, tokenId, amount, yieldPerSecond, cliffTime, deadline)
        );
        bytes32 hash = _hashTypedDataV4(structHash);
        // bytes memory message = abi.encodePacked(hash);

        bool validation = SignatureCheckerUpgradeable.isValidSignatureNow(signer, hash, signature);
        require(validation, "N21F005");
        return true;

        // require(_data[account][tokenId].deposit == 0, "use increaseDeposit");
        // _data[account][tokenId] = Data({
        //     deposit: 0,
        //     yieldPerSecond: yieldPerSecond,
        //     startDate: block.timestamp,
        //     cliffTime: cliffTime,
        //     lastClaimDate: block.timestamp,
        //     pendingYield: 0,
        //     withdrawn: 0 //TBD..if offchain signature rm
        // });

        // _deposit(account, tokenId, amount);
    }

    function increaseDeposit(address account, uint256 tokenId, uint256 amount) external {
        //TBD: re-use deposit()?
        if (_isCliffTime(account, tokenId)) {
            _lockYield(account, tokenId);
        } else {
            _claim(account, tokenId);
        }
        _deposit(account, tokenId, amount);
    }

    function claim(address account, uint256 tokenId) external notAtCliffTime(account, tokenId) {
        _claim(account, tokenId);
    }

    function withdraw(address account, uint256 tokenId) external {
        _claim(account, tokenId);
        //transfer
        //emit
        delete _data[account][tokenId];
    }

    //internal

    function _claimable(address account, uint256 tokenId) internal view returns (uint256) {
        return _released(account, tokenId) + _data[account][tokenId].pendingYield;
    }

    function _isCliffTime(address account, uint256 tokenId) internal view returns (bool) {
        return block.timestamp < (_data[account][tokenId].startDate + _data[account][tokenId].cliffTime);
    }

    function _released(address account, uint256 tokenId) internal view returns (uint256) {
        uint256 yieldPerSecond = _data[account][tokenId].yieldPerSecond;
        uint256 lastClaimDate = _data[account][tokenId].lastClaimDate;
        if (block.timestamp > lastClaimDate) {
            return (block.timestamp - lastClaimDate) * yieldPerSecond;
        } else {
            return 0;
        }
    }

    function _deposit(address account, uint256 tokenId, uint256 amount) internal {
        IERC20Upgradeable tokenInterface = IERC20Upgradeable(INash21Manager(manager).get(keccak256("USDT")));
        address guarantee = INash21Manager(manager).get(keccak256("GUARANTEE"));
        require(tokenInterface.transferFrom(account, guarantee, amount), "deposit transferFrom");
        _data[account][tokenId].deposit += amount;
        //emit
    }

    function _lockYield(address account, uint256 tokenId) internal {
        uint256 released = _released(account, tokenId);
        _data[account][tokenId].lastClaimDate = block.timestamp;
        _data[account][tokenId].pendingYield += released;
        //emit?
    }

    function _claim(address account, uint256 tokenId) internal {
        uint256 claimable = _claimable(account, tokenId);
        _releaseLockedYield(account, tokenId);
        _data[account][tokenId].lastClaimDate = block.timestamp;
        IERC20Upgradeable tokenInterface = IERC20Upgradeable(INash21Manager(manager).get(keccak256("USDT")));
        //TBD: not transfer from this...use guarantee.extractFunds or a external contract
        require(tokenInterface.transfer(account, claimable), "claim transfer");
        //emit
    }

    function _releaseLockedYield(address account, uint256 tokenId) internal {
        if (_data[account][tokenId].pendingYield > 0) {
            _data[account][tokenId].pendingYield = 0;
        }
    }
}

