pragma solidity ^0.8.17;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import './DateTime.sol';


contract SpreadRunners is AccessControl, Pausable {
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    bytes32 public constant SNAPSHOT_ROLE = keccak256("SNAPSHOT_ROLE");

    event SalesBetPlaced(address indexed user, address indexed nftCollection, uint256 prediction, bool useCredit);
    event VolumeBetPlaced(address indexed user, address indexed nftCollection, uint256 prediction, bool useCredit);
    event ChangeBetPlaced(address indexed user, address indexed nftCollection, Direction predictedDirection, bool useCredit);

    event SalesSnapshot(address indexed nftCollection, uint256 outcome);
    event VolumeSnapshot(address indexed nftCollection, uint256 outcome);
    event ChangeSnapshot(address indexed nftCollection, Direction outcome);

    //5AM - 5PM everyday
    uint256 constant startBetWindowHour = 5;
    uint256 constant endBetWindowHour = 17;

    enum Direction { Up, Down }

    struct SalesBet {
        uint256 createdOn;
        address user;
        uint256 value;
        uint256 betSize;
    }

    struct VolumeBet {
        uint256 createdOn;
        address user;
        uint256 value;
        uint256 betSize;
    }

    struct ChangeBet {
        uint256 createdOn;
        address user;
        Direction direction;
        uint256 betSize;
    }

    struct DayBets {
        bool salesDrawn;
        bool volumeDrawn;
        bool changeDrawn;
        uint256 changeUpJackpot;
        uint256 changeDownJackpot;
        SalesBet[] salesBets;
        VolumeBet[] volumeBets;
        ChangeBet[] changeBets;
    }
    
    mapping(uint256=>mapping(address=>DayBets)) public dayBets;
    mapping(address=>uint256) public claimable;
    mapping(address=>bool) public nftCollections;

    uint256 public platformCollect;

    bool collectFeeOnBet = false;
    bool collectFeeOnWinners = true;
    uint256 feePercentage = 5;

    modifier onBetWindow() {
        uint256 hour = getCurrentCSTHour();
        require(hour >= startBetWindowHour && hour <= endBetWindowHour, "Out of window");
        _;
    }

    modifier validBeSize() {
        require(msg.value == 10000000000000000 || msg.value == 25000000000000000 || msg.value == 50000000000000000, "Invalid bet size");
        _;
    }

    constructor() {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(OPERATOR_ROLE, msg.sender);
        _grantRole(SNAPSHOT_ROLE, msg.sender);
    }

    // Users call this function to place a new bet for Sales
    function placeSalesBet(address _nftCollection, uint256 _prediction, bool _useCredit, uint256 _betSize) external payable onBetWindow validBeSize whenNotPaused {
        require((msg.value == _betSize && !_useCredit) || (_useCredit && claimable[msg.sender] >= _betSize), "Invalid value");
        require(nftCollections[_nftCollection], "Invalid collection");

        if (_useCredit) {
            claimable[msg.sender] -= _betSize;
        }

        if (collectFeeOnBet) {
            uint256 fees = _betSize * feePercentage / 100;
            platformCollect += fees;
            _betSize -= fees;
        }

        SalesBet memory bet = SalesBet({
            createdOn: block.timestamp,
            user: msg.sender,
            value: _prediction, 
            betSize: _betSize
        });
        
        dayBets[getToday()][_nftCollection].salesBets.push(bet);

        emit SalesBetPlaced(msg.sender, _nftCollection, _prediction, _useCredit);
    }

    // Users call this function to place a new bet for Volume
    function placeVolumeBet(address _nftCollection, uint256 _prediction, bool _useCredit, uint256 _betSize) external payable onBetWindow validBeSize whenNotPaused {
        require((msg.value == _betSize && !_useCredit) || (_useCredit && claimable[msg.sender] >= _betSize), "Invalid value");
        require(nftCollections[_nftCollection], "Invalid collection");

        if (_useCredit) {
            claimable[msg.sender] -= _betSize;
        }

        if (collectFeeOnBet) {
            uint256 fees = _betSize * feePercentage / 100;
            platformCollect += fees;
            _betSize -= fees;
        }

        VolumeBet memory bet = VolumeBet({
            createdOn: block.timestamp,
            user: msg.sender,
            value: _prediction, 
            betSize: _betSize
        });
        
        dayBets[getToday()][_nftCollection].volumeBets.push(bet);

        emit VolumeBetPlaced(msg.sender, _nftCollection, _prediction, _useCredit);
    }

    // Users call this function to place a positive negative bet for % of Change
    function placeChangeBet(address _nftCollection, Direction _predictedDirection, bool _useCredit, uint256 _betSize) external payable onBetWindow validBeSize whenNotPaused {
        require((msg.value == _betSize && !_useCredit) || (_useCredit && claimable[msg.sender] >= _betSize), "Invalid value");
        require(nftCollections[_nftCollection], "Invalid collection");

        if (_useCredit) {
            claimable[msg.sender] -= _betSize;
        }

        if (collectFeeOnBet) {
            uint256 fees = _betSize * feePercentage / 100;
            platformCollect += fees;
            _betSize -= fees;
        }

        ChangeBet memory changeBet = ChangeBet({
            createdOn: block.timestamp,
            user: msg.sender,
            direction: _predictedDirection, 
            betSize: _betSize
        });
        
        if (_predictedDirection == Direction.Up) {
            dayBets[getToday()][_nftCollection].changeUpJackpot += msg.value;
        } else {
            dayBets[getToday()][_nftCollection].changeDownJackpot += msg.value;
        }

        dayBets[getToday()][_nftCollection].changeBets.push(changeBet);

        emit ChangeBetPlaced(msg.sender, _nftCollection, _predictedDirection, _useCredit);
    }

    //Users call this function to claim their earnings
    function claim() external whenNotPaused {
        require(claimable[msg.sender] > 0, "Nothing to claim");
        uint256 total = claimable[msg.sender];
        claimable[msg.sender] = 0;

        (bool sent,) = msg.sender.call{value: total}("");
        require(sent, "Failed to send Ether");
    }

    //8AM (21 hours later)
    function salesSnapshot(address _nftCollection, uint256 _outcome) external onlyRole(SNAPSHOT_ROLE) whenNotPaused {
        uint256 yesterday = getYesterday();
        require(!dayBets[yesterday][_nftCollection].salesDrawn, "Already called");
        dayBets[yesterday][_nftCollection].salesDrawn = true;

        SalesBet[] memory salesBets = dayBets[yesterday][_nftCollection].salesBets;

        for (uint i = 0; i < salesBets.length; i++) {
            if (salesBets[i].value == _outcome) {
                claimable[salesBets[i].user] += checkFeesAndSet(10 * salesBets[i].betSize);
            } else if (salesBets[i].value == _outcome + 1 || salesBets[i].value == _outcome - 1) {
                claimable[salesBets[i].user] += checkFeesAndSet(3 * salesBets[i].betSize);
            } else {
                platformCollect += salesBets[i].betSize;
            }
        }

        emit SalesSnapshot(_nftCollection, _outcome);
    }

    //8AM (21 hours later)
    function volumeSnapshot(address _nftCollection, uint256 _outcome) external onlyRole(SNAPSHOT_ROLE) whenNotPaused {
        uint256 yesterday = getYesterday();
        require(!dayBets[yesterday][_nftCollection].volumeDrawn, "Already called");
        dayBets[yesterday][_nftCollection].volumeDrawn = true;

        VolumeBet[] memory volumeBets = dayBets[yesterday][_nftCollection].volumeBets;

        for (uint i = 0; i < volumeBets.length; i++) {
            if (volumeBets[i].value == _outcome) {
                claimable[volumeBets[i].user] += checkFeesAndSet(20 * volumeBets[i].betSize);
            } else if (volumeBets[i].value == _outcome + 1 || volumeBets[i].value == _outcome - 1) {
                claimable[volumeBets[i].user] += checkFeesAndSet(5 * volumeBets[i].betSize);
            } else if (volumeBets[i].value == _outcome + 2 || volumeBets[i].value == _outcome - 2) {
                claimable[volumeBets[i].user] += checkFeesAndSet(2 * volumeBets[i].betSize);
            } else if (volumeBets[i].value == _outcome + 3 || volumeBets[i].value == _outcome - 3) {
                claimable[volumeBets[i].user] += checkFeesAndSet(5 * volumeBets[i].betSize / 10);
            } else {
                platformCollect += volumeBets[i].betSize;
            }
            
        }

        emit VolumeSnapshot(_nftCollection, _outcome);
    }

    function checkFeesAndSet(uint256 _amount) internal returns(uint256) {
        if (collectFeeOnWinners) {
            uint256 fees = _amount * feePercentage / 100;
            platformCollect += fees;
            return _amount - fees;
        }
        return _amount;
    }

    //8AM (21 hours later)
    function changeSnapshot(address _nftCollection, Direction _outcomeDirection) external onlyRole(SNAPSHOT_ROLE) whenNotPaused {
        uint256 yesterday = getYesterday();
        require(!dayBets[yesterday][_nftCollection].changeDrawn, "Already called");
        dayBets[yesterday][_nftCollection].changeDrawn = true;

        ChangeBet[] memory changeBets = dayBets[yesterday][_nftCollection].changeBets;

        uint256 totalToShare;
        uint256 totalBets;

        if (_outcomeDirection == Direction.Up) {
            totalBets = dayBets[yesterday][_nftCollection].changeUpJackpot;
            totalToShare = dayBets[yesterday][_nftCollection].changeDownJackpot;
        } else {
            totalBets = dayBets[yesterday][_nftCollection].changeDownJackpot;
            totalToShare = dayBets[yesterday][_nftCollection].changeUpJackpot;
        }

        if (totalBets > 0) {
            if (collectFeeOnWinners) {
                uint256 fees = totalToShare * feePercentage / 100;
                totalToShare -= fees;
                platformCollect += fees;
            }

            for (uint i = 0; i < changeBets.length; i++) {
                if (_outcomeDirection == changeBets[i].direction) {
                    uint256 percentage = changeBets[i].betSize * 100 / totalBets;
                    claimable[changeBets[i].user] += totalToShare * percentage / 100;
                }
            }
        }
        else {
            platformCollect += totalToShare;
        }

        emit ChangeSnapshot(_nftCollection, _outcomeDirection);
    }

    function setNftCollection(address _nftCollection, bool _enabled) external onlyRole(OPERATOR_ROLE) {
        nftCollections[_nftCollection] = _enabled;
    }

    function setNftCollections(address[] memory _nftCollections, bool _enabled) external onlyRole(OPERATOR_ROLE) {
        for (uint i = 0; i < _nftCollections.length; i++) {
            nftCollections[_nftCollections[i]] = _enabled;
        }
    }

    function claimFees() external onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 total = platformCollect;
        platformCollect = 0;
        (bool sent,) = msg.sender.call{value: total}("");
        require(sent, "Failed to send Ether");
    }

    function setFeeOptions(bool _collectFeeOnBet, bool _collectFeeOnWinners) external onlyRole(DEFAULT_ADMIN_ROLE) {
        collectFeeOnBet = _collectFeeOnBet;
        collectFeeOnWinners = _collectFeeOnWinners;
    }

    function getToday() public view returns(uint256) {
        (uint256 year, uint256 month, uint256 day) = DateTime.timestampToDate(block.timestamp);
        return year * 10000 + month * 100 + day;
    }

    function getYesterday() public view returns(uint256) {
        (uint256 year, uint256 month, uint256 day) = DateTime.timestampToDate(DateTime.subDays(block.timestamp, 1));
        return year * 10000 + month * 100 + day;
    }

    function getCurrentCSTHour() public view returns(uint256) {
        (, , , uint256 hour, ,) = DateTime.timestampToDateTime(block.timestamp);
        return hour - 6;
    }

    function pause() external onlyRole(DEFAULT_ADMIN_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(DEFAULT_ADMIN_ROLE) {
        _unpause();
    }

    function getSalesBet(uint256 _date, address _nftCollection, uint256 _index) public view returns(uint256, address, uint256, uint256) {
        SalesBet memory saleBet = dayBets[_date][_nftCollection].salesBets[_index];
        return (saleBet.createdOn, saleBet.user, saleBet.value, saleBet.betSize);
    }

    function getVolumeBet(uint256 _date, address _nftCollection, uint256 _index) public view returns(uint256, address, uint256, uint256) {
        VolumeBet memory volumeBet = dayBets[_date][_nftCollection].volumeBets[_index];
        return (volumeBet.createdOn, volumeBet.user, volumeBet.value, volumeBet.betSize);
    }

    function getChangeBet(uint256 _date, address _nftCollection, uint256 _index) public view returns(uint256, address, Direction, uint256) {
        ChangeBet memory changeBet = dayBets[_date][_nftCollection].changeBets[_index];
        return (changeBet.createdOn, changeBet.user, changeBet.direction, changeBet.betSize);
    }

    receive() external payable {}

    fallback() external payable {}
}

