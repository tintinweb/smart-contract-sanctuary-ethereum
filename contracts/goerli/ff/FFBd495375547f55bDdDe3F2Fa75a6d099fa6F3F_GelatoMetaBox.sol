    uint256 chainId;
    address target;
    bytes data;
    address feeToken;
    uint256 paymentType;
    uint256 maxFee;
    uint256 gas;
    address user;
    address sponsor; // could be same as user
    uint256 sponsorChainId;
    uint256 nonce;
    uint256 deadline;
}

