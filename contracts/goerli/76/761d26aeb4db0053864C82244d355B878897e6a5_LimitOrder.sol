import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./interfaces/IUniswapV2Router02.sol";
import "./lib/TransferHelper.sol";

contract LimitOrder {

    // address public owners;
    // address public inputToken;
    // address public outputToken;

    bytes32 public DOMAIN_SEPARATOR;

    mapping(address => uint256) public nonces;

    string public constant name = "Permitted";

    address public router;

    // keccak256("Permit(address owner,address spender,uint256 value,uint256 nonce)")
    bytes32 public constant PERMIT_TYPEHASH = 0x1903b0573ddc0b65c61504cbe83a2543c6e8a1fb8af580a777a5b2f8073e319d;

    constructor(address _router) {

        router = _router;

        DOMAIN_SEPARATOR = keccak256(
            abi.encode(
                keccak256('EIP712Domain(string name)'),
                keccak256(bytes(name))
            )
        );

    }

    function verify(address _owners, address spender, uint value, uint8 v, bytes32 r, bytes32 s) public {
        bytes32 digest = keccak256(
            abi.encodePacked(
                '\x19\x01',
                DOMAIN_SEPARATOR,
                keccak256(abi.encode(PERMIT_TYPEHASH, _owners, spender, value, nonces[_owners]++))
            )
        );
        address recoveredAddress = ecrecover(digest, v, r, s);

        require(recoveredAddress != address(0), 'INVALID_SIGNATURE');

        require(recoveredAddress == _owners, 'INVALID_OWNER');
        
       
    }

    function swapTokenforToken(address _owners, address spender, uint value, uint8 v, bytes32 r, bytes32 s,
                                uint amountIn, uint amountOutMin, address[] calldata path, address to, uint deadline) external {
        

        // _approve(address(this), address(uniswapv2router02), _amount);

        // make the swap
        // console.log("hello");
        
        verify( _owners,  spender,  value,  v,  r,  s);

        IERC20(path[0]).transferFrom(msg.sender, address(this), amountIn);
        TransferHelper.safeApprove(address(path[0]), address(router), amountIn);

        bytes memory data = returnHash( amountIn,  amountOutMin, path,  to,  deadline);

        router.call(data);
    }

    function returnHash(uint amountIn, uint amountOutMin, address[] calldata path, address to, uint deadline) public pure returns(bytes memory _data) {

        _data = abi.encodeWithSignature("swapExactTokensForTokens(uint,uint,address[],address,uint)", amountIn,amountOutMin,path,to,deadline);
    }

}