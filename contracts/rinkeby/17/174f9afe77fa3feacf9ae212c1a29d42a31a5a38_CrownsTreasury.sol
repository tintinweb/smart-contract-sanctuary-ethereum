function compareStringsByBytes(string memory s1, string memory s2) pure returns (bool){
    return keccak256(abi.encodePacked(s1)) == keccak256(abi.encodePacked(s2));
}

contract TreasuryValidator {
    using ECDSA for bytes32;

    function validateDecodedMessage(address _sender, address _owner, uint256 _tokenId, DecodedMessage memory _message, address _signerAddress) public pure {
        // todo: validate _timestamp is not in the past

        _validateSupportedAction(_message.action);
        _validateMessageSender(_sender, _message.nftAddress);
        _validateTokenId(_tokenId, _message.tokenId);

        _validateOwnerAddress(_message.owner, _owner);
        _validateHash(_message.action, _message.nftAddress, _message.tokenId, _message.owner, _message.price, _message.timestamp, _message.hash);
        _validateSignature(_message.hash, _message.signature, _signerAddress);
    }

    function _validateSupportedAction(string memory _action) private pure {
        require((compareStringsByBytes(_action, "stake") || compareStringsByBytes(_action, "deposit")), "CrownsTreasury: unsupported action");
    }

    function _validateMessageSender(address _sender, address _nftContractAddress) private pure {
        require(_sender == _nftContractAddress, "CrownsTreasury: ERC721 contract address mismatch");
    }

    function _validateTokenId(uint256 _tokenId, uint256 _depositedTokenId) private pure {
        require(_tokenId == _depositedTokenId, "CrownsTreasury: tokenId mismatch");
    }

    function _validateOwnerAddress(address _depositor, address _owner) private pure {
        require(_owner == _depositor, "CrownsTreasury: depositor address mismatch");
    }

    function _validateHash(
        string memory _action,
        address _nftAddress,
        uint256 _tokenId,
        address _depositor,
        uint256 _price,
        uint _timestamp,
        bytes32 _hash
    ) private pure {
        require(_hashTransaction(_action, _nftAddress, _tokenId, _depositor, _price, _timestamp) == _hash, "CrownsTreasury: hash mismatch");
    }

    function _validateSignature(bytes32 _hash, bytes memory _signature, address _signerAddress) private pure {
        require(_addressSignerValid(_hash, _signature, _signerAddress), "CrownsTreasury: invalid signature");
    }

    function _hashTransaction(string memory _action, address _nftAddress, uint256 _tokenId, address _depositor, uint256 _price, uint _timestamp) private pure returns (bytes32) {
        bytes32 hash = keccak256(abi.encodePacked(
                "\x19Ethereum Signed Message:\n32",
                keccak256(abi.encodePacked(_action, _nftAddress, _tokenId, _depositor, _price, _timestamp)))
        );

        return hash;
    }

    function _addressSignerValid(bytes32 _hash, bytes memory _signature, address _signerAddress) private pure returns (bool) {
        address signatureAddress = _hash.recover(_signature);
        return _signerAddress == signatureAddress;
    }

}

