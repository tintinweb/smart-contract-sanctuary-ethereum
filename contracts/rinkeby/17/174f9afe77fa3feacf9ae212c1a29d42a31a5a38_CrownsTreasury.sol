import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "./CrownsERC20.sol";
import "./lib/TreasuryValidator.sol";
import "./lib/Structs.sol";

contract CrownsTreasury is Initializable, OwnableUpgradeable, IERC721Receiver {
    address public crownsTokenAddress;
    address public signerAddress;
    CrownsERC20Token private crownsContract;
    TreasuryValidator private treasuryValidator;

    mapping(address => DepositedERC721[]) public depositedERC721Tokens;
    mapping(address => StakedERC721[]) public stakedERC721TokensByContract;
    mapping(address => StakedERC721[]) public stakedERC721TokensByOwner;

    function initialize(address _crownsAddress, address _signerAddress) public initializer {
        crownsTokenAddress = _crownsAddress;
        crownsContract = CrownsERC20Token(crownsTokenAddress);
        signerAddress = _signerAddress;
        treasuryValidator = new TreasuryValidator();
        __Ownable_init();
    }

    function mintCrowns(address _to, uint256 _amount) external onlyOwner {
        crownsContract.mint(_to, _amount);
    }

    function burnCrowns(address _from, uint256 _amount) external onlyOwner {
        uint256 crownsBalance = crownsContract.balanceOf(_from);
        require(crownsBalance >= _amount, "Crowns: insufficient balance");
        crownsContract.burn(_from, _amount);
    }

    function onERC721Received(address, address _owner, uint256 _tokenId, bytes calldata _data) external override returns (bytes4) {
        DecodedMessage memory _message = _decodeCallbackData(_data);
        treasuryValidator.validateDecodedMessage(msg.sender, _owner, _tokenId, _message, signerAddress);

        if (compareStringsByBytes(_message.action, "stake")) {
            _stakeERC721(_message.nftAddress, _tokenId, _owner);
        } else if (compareStringsByBytes(_message.action, "deposit")) {
            _depositERC721(_message.nftAddress, _tokenId, _owner, _message.price);
        }

        return this.onERC721Received.selector;
    }

    function unstakeERC721(address _nftAddress, uint256 _tokenId) external {
        address _owner = msg.sender;
        _findStakedTokenIndexForOwner(_owner, _nftAddress, _tokenId);

        IERC721 _nftContract = IERC721(_nftAddress);

        require(_nftContract.ownerOf(_tokenId) == address(this), "CrownsTreasury: treasury does not own token");

        _nftContract.safeTransferFrom(address(this), _owner, _tokenId);

        _updateStakedBalances(_owner, _nftAddress, _tokenId);
    }

    function getStakedTokensByOwnerBalance(address _owner) external view returns (uint) {
        return stakedERC721TokensByOwner[_owner].length;
    }

    function getStakedTokensByOwner(address _owner, uint _index) external view returns (address, uint256) {
        require(_index < this.getStakedTokensByOwnerBalance(_owner), "CrownsTreasury: owner index out of bounds");

        StakedERC721 storage _stakedTokenInfo = stakedERC721TokensByOwner[_owner][_index];
        return (_stakedTokenInfo.nftAddress, _stakedTokenInfo.tokenId);
    }

    function hashTransaction(string memory _action, address _nftAddress, uint256 _tokenId, address _depositor, uint256 _price, uint _timestamp) public pure returns (bytes32) {
        bytes32 hash = keccak256(abi.encodePacked(
                "\x19Ethereum Signed Message:\n32",
                keccak256(abi.encodePacked(_action, _nftAddress, _tokenId, _depositor, _price, _timestamp)))
        );

        return hash;
    }


    function getStakedTokensByContractBalance(address _nftAddress) external view returns (uint) {
        return stakedERC721TokensByContract[_nftAddress].length;
    }

    function getStakedTokensByContract(address _nftAddress, uint _index) external view returns (address, uint256) {
        require(_index < this.getStakedTokensByContractBalance(_nftAddress), "CrownsTreasury: contract index out of bounds");

        StakedERC721 storage _stakedTokenInfo = stakedERC721TokensByContract[_nftAddress][_index];
        return (_stakedTokenInfo.nftAddress, _stakedTokenInfo.tokenId);
    }

    function _decodeCallbackData(bytes calldata _data) private pure returns (DecodedMessage memory) {
        (
        string memory _action,
        address _nftAddress,
        uint256 _signedTokenId,
        address _signedOwner,
        uint256 _price,
        uint _timestamp,
        bytes32 _hash,
        bytes memory _signature
        ) = abi.decode(_data, (string, address, uint256, address, uint256, uint, bytes32, bytes));

        return DecodedMessage(_action, _nftAddress, _signedTokenId, _signedOwner, _price, _timestamp, _hash, _signature);
    }

    function _findStakedTokenIndexByContract(address _nftAddress, uint256 _tokenId) private view returns (uint) {
        uint _stakedBalance = this.getStakedTokensByContractBalance(_nftAddress);
        require(_stakedBalance > 0, "CrownsTreasury: nothing staked for contract");

        for (uint _index = 0; _index < _stakedBalance; _index++) {
            (address _stakedNftAddress, uint256 _stakedTokenId) = this.getStakedTokensByContract(_nftAddress, _index);

            if (_stakedNftAddress == _nftAddress && _stakedTokenId == _tokenId) {
                return _index;
            }
        }

        require(false, "CrownsTreasury: this item is not staked");
        return 0;
        // never happens
    }

    function _findStakedTokenIndexForOwner(address _owner, address _nftAddress, uint256 _tokenId) private view returns (uint) {
        uint _stakedBalance = this.getStakedTokensByOwnerBalance(msg.sender);
        require(_stakedBalance > 0, "CrownsTreasury: nothing staked by sender");

        for (uint _index = 0; _index < _stakedBalance; _index++) {
            (address _stakedNftAddress, uint256 _stakedTokenId) = this.getStakedTokensByOwner(_owner, _index);

            if (_stakedNftAddress == _nftAddress && _stakedTokenId == _tokenId) {
                return _index;
            }
        }

        require(false, "CrownsTreasury: this item is not staked");
        return 0;
        // never happens
    }

    function _depositERC721(address _nftAddress, uint256 _tokenId, address _owner, uint256 _price) private {
        uint256 _sellPrice = _price * 130 / 100;
        depositedERC721Tokens[_nftAddress].push(DepositedERC721(_nftAddress, _tokenId, _price, _sellPrice));

        _mintCrownsRewards(_owner, _price);
    }

    function _stakeERC721(address _nftAddress, uint256 _tokenId, address _owner) private {
        stakedERC721TokensByContract[_nftAddress].push(StakedERC721(_nftAddress, _owner, _tokenId));
        stakedERC721TokensByOwner[_owner].push(StakedERC721(_nftAddress, _owner, _tokenId));
    }

    function _updateStakedBalances(address _owner, address _nftAddress, uint256 _tokenId) private {
        _removeStakedItemForContract(_nftAddress, _tokenId);
        _removeStakedItemForOwner(_owner, _nftAddress, _tokenId);
    }

    function _removeStakedItemForOwner(address _owner, address _nftAddress, uint256 _tokenId) private {
        uint _itemIndexByOwner = _findStakedTokenIndexForOwner(_owner, _nftAddress, _tokenId);
        uint _itemBalanceByOwner = this.getStakedTokensByOwnerBalance(_owner);

        stakedERC721TokensByOwner[_owner][_itemIndexByOwner] = stakedERC721TokensByOwner[_owner][_itemBalanceByOwner - 1];
        stakedERC721TokensByOwner[_owner].pop();
    }

    function _removeStakedItemForContract(address _nftAddress, uint256 _tokenId) private {
        uint _itemIndexByContract = _findStakedTokenIndexByContract(_nftAddress, _tokenId);
        uint _itemBalanceByContract = this.getStakedTokensByContractBalance(_nftAddress);

        stakedERC721TokensByContract[_nftAddress][_itemIndexByContract] = stakedERC721TokensByContract[_nftAddress][_itemBalanceByContract - 1];
        stakedERC721TokensByContract[_nftAddress].pop();
    }


    function _mintCrownsRewards(address _to, uint256 _amount) private _isCrownsOwner {
        crownsContract.mint(_to, _amount);
    }

    modifier _isCrownsOwner() {
        address crownsOwner = crownsContract.owner();
        require(crownsOwner == address(this), "treasury must own crowns contract");

        _;
    }
}

