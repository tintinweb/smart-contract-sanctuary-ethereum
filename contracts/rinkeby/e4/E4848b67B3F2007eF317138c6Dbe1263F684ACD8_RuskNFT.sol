import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";


contract RuskPaymentSafe is Context, Ownable, ReentrancyGuard {
    event Received(address sender, uint256 amount, uint256 dateTime);
    event Transferred(address receiver, address token, uint256 amount, uint256 dateTime);

    constructor(){}
    
    function transferERC20(IERC20 token, address recipient, uint256 amount)
    external
    onlyOwner
    nonReentrant {
        SafeERC20.safeTransfer(token, recipient, amount);
        emit Transferred(recipient, address(token), amount, block.timestamp);
    } 

    function sendValue(address payable recipient, uint256 amount) 
    external 
    onlyOwner 
    nonReentrant {
        require(address(this).balance >= amount, "Address: insufficient balance");

        (bool success, ) = recipient.call{value: amount}("");
        require(success, "Address: unable to send value, recipient may have reverted");
        emit Transferred(recipient, address(0), amount, block.timestamp);
    }

    function getContractBalance(IERC20 token) external view onlyOwner returns (uint256){
        if(address(token) == address(0)) return address(this).balance;
        return token.balanceOf(address(this));
    }

    receive() external payable {
        emit Received(msg.sender, msg.value, block.timestamp);
    }
    
    fallback() external payable {
        emit Received(msg.sender, msg.value, block.timestamp);
    }
