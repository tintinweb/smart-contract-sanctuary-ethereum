pragma solidity 0.8.10;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721URIStorage.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "./RandomnessGenerator.sol";
import "./RuskPaymentSafe.sol";

contract RuskNFT is Context, ReentrancyGuard, RandomnessGenerator {

    using Counters for Counters.Counter;

    uint256 public mintCounter; // Current count of NFTs to be minted, counts the tokens allowed of the beneficiaries
    uint256 public maxMintCount; // Maximum amount of NFT to mint
    uint256 constant BP = 10000; 
    uint256 public constant maxRoyalty = 10000; // 100% 
    uint256 public mintPrice; // Price that will be charged to the user to mint.
    uint256 public mintArtistFee; // Percentage of the mint price that will be paid to the artist of the NFT.
    address public paymentDistributor; // Address allowed to call functions to pay the royalties.
    address public constant networkToken = address(0); // To be used in the functions as network token address. E.g MATIC, ETH
    RuskPaymentSafe public ruskPaymentSafe; // Address of contract that will receive the royalty payments.

    address[] public beneficiariesList;
    uint256[] public saleFeeChanges; // tracks the block number of the changes
    Counters.Counter private _tokenIdTracker;

    struct SaleFee {
        uint256 admin;
        uint256 artist;
    }

    mapping(address => uint256) public amountPerBeneficiary;
    mapping(address => uint256[]) public mintedTokens; // List of nfts by address
    mapping(uint256 => SaleFee) public feeHistory; // Changes by block number
    mapping(string => bool) public txWasPaid; // Marks the paid tx hashes to prevent duplicate payments

    event NftMinted(uint256 indexed time, uint256 indexed tokenId, address indexed minter);
    event ArtistMintFeeWithdrawal(address indexed artist, uint256 amount, address indexed admin);
    event SaleFeeWithdrawal(address indexed artist, address indexed owner, uint256 artistAmount, uint256 ownerAmount, address indexed tokenUsed, address admin);
    event URIUpdate(uint256 indexed tokenId, string uriBefore, string uriAfter, address indexed admin);

    modifier onlyPaymentDistributor(){
        require(_msgSender() == paymentDistributor || _msgSender() == owner(), "User not allowed");
        _;
    }

    constructor(string memory name, string memory symbol, uint256 _mintPrice, uint256 _maxMintCount, address _VRFCoordinator, address _LINKToken, bytes32 _keyHash, uint256 _fee) 
        RandomnessGenerator(name, symbol, _VRFCoordinator, _LINKToken, _keyHash, _fee)
    {
        mintPrice = _mintPrice;
        maxMintCount = _maxMintCount;
        ruskPaymentSafe = new RuskPaymentSafe();
    }

    // Allows to add a list of new beneficiaries and the amount of token those beneficiaries can mint 
    function addBeneficiaries(address[] memory beneficiaries, uint256[] memory amounts) external onlyOwner {
        require(beneficiaries.length == amounts.length, "Different size inputs");
        for(uint i; i < beneficiaries.length; i++){
            require(beneficiaries[i] != address(0), "Invalid address");
            require(amounts[i] > 0, "Invalid amount");
            require((mintCounter + amounts[i]) <= maxMintCount, "Unable to add this amount of tokens");
            require(amountPerBeneficiary[beneficiaries[i]] == 0, "User already added before");
            beneficiariesList.push(beneficiaries[i]);
            amountPerBeneficiary[beneficiaries[i]] = amounts[i];
            mintCounter += amounts[i];
        }
    }

    // Allows the admin to delete multiple beneficiaries that have not minted any token.
    function batchDeleteBeneficiaries(address[] memory _beneficiaries) external {
        for(uint256 i; i < _beneficiaries.length; i++){
            deleteBeneficiary(_beneficiaries[i]);
        }
    }

    // Allows the admin to delete a beneficiary who has not minted any token.
    function deleteBeneficiary(address beneficiary) public onlyOwner {
        require(0 == mintedTokens[beneficiary].length, "Unable to delete a user that already minted");
        for(uint256 i; i < beneficiariesList.length; i++){
            if(beneficiariesList[i] == beneficiary) {
                // delete beneficiary
                beneficiariesList[i] = beneficiariesList[beneficiariesList.length - 1];
                beneficiariesList.pop();
                mintCounter -= amountPerBeneficiary[beneficiary];
                amountPerBeneficiary[beneficiary] = 0;
                break;
            }
        }
    }

    // This function can be used to increase or decrease the mint amount per user
    function editBeneficiaryAmount(address[] memory beneficiaries, uint256[] memory amounts) external onlyOwner {
        require(beneficiaries.length == amounts.length, "Different size inputs");
        for(uint i; i < beneficiaries.length; i++){
            require(amounts[i] >= mintedTokens[beneficiaries[i]].length, "New amount cannot be less than minted amount");
            mintCounter -= amountPerBeneficiary[beneficiaries[i]];
            require((mintCounter + amounts[i]) <= maxMintCount, "Unable to add this amount of tokens");
            amountPerBeneficiary[beneficiaries[i]] = amounts[i];
            mintCounter += amounts[i];
        }
    }
   
    // Mint only 1 NFT
    function mint() public payable {
        mint_(1);
    }

    function mint_(uint256 amount) private {
        require((msg.value / amount) >= mintPrice, "Value is lower than price");
        require(mintedTokens[_msgSender()].length < amountPerBeneficiary[_msgSender()], "User not allowed to mint more times");
        _tokenIdTracker.increment();
        _safeMint(_msgSender(), _tokenIdTracker.current());
        mintedTokens[_msgSender()].push(_tokenIdTracker.current());
        if(mintPrice > 0) {
            uint256 artistRoyalty = calculateArtistMintFee();
            owedPaymentsByToken[_tokenIdTracker.current()] = artistRoyalty;
            sendValue(payable(owner()), ((msg.value/amount) - artistRoyalty));
        }
        getRandomNumber(_tokenIdTracker.current());
        emit NftMinted(block.timestamp, _tokenIdTracker.current(), _msgSender());
    }

    // Allows to mint many nfts at the same time.
    // Amount: how many tokens to mint
    function batchMint(uint256 amount) public payable {
        // Have enough tokens available
        require((amountPerBeneficiary[_msgSender()] - mintedTokens[_msgSender()].length) >= amount, "User not allowed to mint so many times");
        // Prevents reusing the msg.value for different mints
        require(msg.value == (mintPrice * amount), "Value is different than price for batch mint"); 
        for(uint256 i; i < amount; i++){
            mint_(amount);
        }
    }
    
    // Allows to update the token URI of one NFT
    function setTokenURI(uint256 tokenId, string memory _tokenURI) public onlyOwner {
        _setTokenURI(tokenId, _tokenURI);
        emit URIUpdate(tokenId, tokenURI(tokenId), _tokenURI, _msgSender());
    }

    // Allows to update the token URI of multiple NFTs
    function batchSetTokenURIs(uint256[] memory tokenIds, string[] memory _tokenURIs) external onlyOwner {
        require(tokenIds.length == _tokenURIs.length, "Inputs must have the same length");
        for(uint256 i; i < tokenIds.length; i++){
            setTokenURI(tokenIds[i], _tokenURIs[i]);
        }
    }

    // Adds the intial URIs for the NFTs to the contract
    function addUris(string[] memory _uris, address[] memory _artists) external onlyOwner {
        require(_uris.length == _artists.length, "Inputs must have the same length");
        require((availableUris.length + _uris.length) <= maxMintCount, "Unable to add this amount of uris");
        for(uint i; i < _uris.length; i++){
            availableUris.push(_uris[i]);
            artists.push(_artists[i]);
        }
    }

    // Shows the current length of URIs that have not been used in a NFT
    function getAvailableUrisLength() public view returns (uint256){
        return availableUris.length;
    }

    // Allows a user to burn its own tokens
    function burn(uint256 tokenId) public {
        require(ownerOf(tokenId) == _msgSender(), "Sender is not owner");
        _burn(tokenId);
    }

    // Use Basis points = 10% = 1000, 100% = 10000 
    // Receives the portion of the total royalty charged to the sale that will be sent to the admin and artist
    // E.g: the royalty is 10%, then the adminFee: 80% and artisFee: 20%, both in terms of the total royalty charged.
    // The admin and artist fees must sum 100%
    function setRoyaltyPercentage(uint256 _saleAdminFee, uint256 _saleArtistFee) public onlyOwner {
        require((_saleAdminFee + _saleArtistFee) == maxRoyalty, "Sale royalty fees need to sum 100%");
        saleFeeChanges.push(block.number);
        feeHistory[block.number].admin = _saleAdminFee;
        feeHistory[block.number].artist = _saleArtistFee;
    }

    // Allows the admin to change the maximum amount of NFTs that the collection can have
    function editMaxMintCount (uint256 _maxMintCount) external {
        require(_maxMintCount >= mintCounter, "Invalid max mint count");
        maxMintCount = _maxMintCount;
    }

    // Allows the admin to change the price to mint an NFTs. Price in wei format 10 ** 18
    function editMintPrice (uint256 _mintPrice) external {
        mintPrice = _mintPrice;
    }

    // Value in basis points 10% = 1000
    function editMintArtistFee(uint256 _mintArtistFee) external {
        require(_mintArtistFee <= maxRoyalty, "Fee greater than allowed");
        mintArtistFee = _mintArtistFee;
    }

    // Calculates the amount of the fee that the artist will get from the mint price.
    function calculateArtistMintFee() public view returns (uint256){
        return (mintPrice * mintArtistFee) / BP;
    }

    // Allows to pay the pending mint fees for one token of one artist.
    function withdrawSingleArtistMintPayment(address payable artist, uint256 tokenId) external nonReentrant onlyPaymentDistributor {
        uint256 owedAmount = owedPaymentsByToken[tokenId];
        bool found;
        require(owedAmount > 0, "Token mint royalty already paid");
        for(uint256 i; i < tokensByArtist[artist].length; i++){
            if(tokensByArtist[artist][i] == tokenId){
                found = true;
                break;
            }
        }
        require(found, "TokenId was not created by provided artist");
        owedPaymentsByToken[tokenId] = 0;
        sendValue(artist, owedAmount);
        emit ArtistMintFeeWithdrawal(artist, owedAmount, _msgSender());
    }

    // Allows to pay the pending mint fees for all the tokens of one artist.
    function withdrawAllArtistMintPayments(address payable artist) external nonReentrant onlyPaymentDistributor {
        for(uint256 i; i < tokensByArtist[artist].length; i++){
            uint256 tokenId = tokensByArtist[artist][i];
            uint256 owedAmount = owedPaymentsByToken[tokenId];
            if(owedAmount > 0) {
                owedPaymentsByToken[tokenId] = 0;
                sendValue(artist, owedAmount);
                emit ArtistMintFeeWithdrawal(artist, owedAmount, _msgSender());
            }
        }
    }

    // Allows to see the pending mint payments for all the tokens of one artist.
    function pendingArtistMintPayments(address payable artist) external view onlyPaymentDistributor returns (uint256 totalAmount) {
        for(uint256 i; i < tokensByArtist[artist].length; i++){
            uint256 tokenId = tokensByArtist[artist][i];
            uint256 owedAmount = owedPaymentsByToken[tokenId];
            if(owedAmount > 0) totalAmount += owedAmount;
        }
    }

    /***
    tokenId: id of token that was sold
    token: address of the contract of the token used as currency for the payment. 
    Use 0x0000000000000000000000000000000000000000 for the network token like MATIC or ETH
    blockNumber: block number of the royalty payment transaction
    royaltyPaidAmount: only the amount of royalties paid, not the sale price.
    ***/
    function withdrawSale(
        uint256 tokenId, 
        IERC20 token, 
        uint256 royaltyPaidAmount, 
        string memory transactionHash,
        uint256 paymentBlockNumber
    ) 
        public 
        nonReentrant
        onlyPaymentDistributor {

        require(_exists(tokenId), "Token does not exist");
        require(txWasPaid[transactionHash] == false, "The transaction hash has already been paid");
        address receiver = artistPerToken[tokenId];
        uint256 feeId = getSaleFeeId(paymentBlockNumber);
        uint256 adminPayment = (royaltyPaidAmount * feeHistory[feeId].admin) / BP;
        uint256 artistPayment =  (royaltyPaidAmount * feeHistory[feeId].artist) / BP;
        // Payment in network coin
        if(address(token) == address(0)){
            require((adminPayment + artistPayment) <= address(ruskPaymentSafe).balance, "Insufficient balance to pay");
            if(receiver == address(0)){
                ruskPaymentSafe.sendValue(payable(owner()), (adminPayment + artistPayment));
                emit SaleFeeWithdrawal(owner(), owner(), artistPayment, adminPayment, address(0), _msgSender());
            } else {
                ruskPaymentSafe.sendValue(payable(owner()), adminPayment);
                ruskPaymentSafe.sendValue(payable(receiver), artistPayment);
                emit SaleFeeWithdrawal(receiver, owner(), artistPayment, adminPayment, address(0), _msgSender());
            }
        } else {
            // Payment in ERC20 token
            require((adminPayment + artistPayment) <= token.balanceOf(address(ruskPaymentSafe)), "Insufficient balance to pay");
            if(receiver == address(0)){
                ruskPaymentSafe.transferERC20(token, owner(), (adminPayment + artistPayment));
                emit SaleFeeWithdrawal(owner(), owner(), artistPayment, adminPayment, address(token), _msgSender());
            } else {
                ruskPaymentSafe.transferERC20(token, owner(), adminPayment);
                ruskPaymentSafe.transferERC20(token, receiver, artistPayment);
                emit SaleFeeWithdrawal(receiver, owner(), artistPayment, adminPayment, address(token), _msgSender());
            }
        }
        txWasPaid[transactionHash] = true;
    }

    function getSaleFeeId(uint256 paymentBlockNumber) public view returns (uint256){
        for(uint256 i; i < saleFeeChanges.length; i++){
            // Payment date greater than the last change date
            if(paymentBlockNumber >= saleFeeChanges[saleFeeChanges.length-1]){
                return saleFeeChanges[saleFeeChanges.length-1];
            }

            if(paymentBlockNumber >= saleFeeChanges[i] && paymentBlockNumber < saleFeeChanges[i+1]){
                return saleFeeChanges[i];
            }
        }
        revert("Sale fee not found for provided datetime");
    }

    function getHistoricalFeeChanges() public view returns(uint256[] memory){
        return saleFeeChanges;
    }

    // Allows the admin to set a new address to be the payment distributor
    function changePaymentDistributor(address _paymentDistributor) external onlyOwner {
        paymentDistributor = _paymentDistributor;
    }

    function sendValue(address payable recipient, uint256 amount) internal {
        require(address(this).balance >= amount, "Address: insufficient balance");

        (bool success, ) = recipient.call{value: amount}("");
        require(success, "Address: unable to send value, recipient may have reverted");
    }

    function totalSupply() public view returns (uint256) {
        return _tokenIdTracker.current();
    }
    
    function getBeneficiariesList() external view returns (address[] memory){
        return beneficiariesList;
    }

    function getAvailableUris() external view returns (string[] memory){
        return availableUris;
    }

    function getAvailableArtists() external view returns (address[] memory){
        return artists;
    }

    function getFeeHistory(uint256 blockNumber) external view returns (SaleFee memory){
        return feeHistory[blockNumber];
    }
    
    function getMintedTokensByAddress(address beneficiary) external view returns (uint256[] memory){
        return mintedTokens[beneficiary];
    }

    function getTokensByArtist(address artist) external view returns (uint256[] memory){
        return tokensByArtist[artist];
    }

    // RuskNFT contract stores the mint fee payments.
    function getContractBalance(IERC20 token) external view onlyPaymentDistributor returns (uint256){
        if(address(token) == address(0)) return address(this).balance;
        return token.balanceOf(address(this));
    }

    // RuskPaymentSafe contract stores the sale royalty payments.
    function getPaymentSafeContractBalance(IERC20 token) external view onlyPaymentDistributor returns (uint256){
        if(address(token) == address(0)) return address(ruskPaymentSafe).balance;
        return token.balanceOf(address(ruskPaymentSafe));
    }
}

