import "@openzeppelin/contracts/utils/Strings.sol";
import "./Dragons.sol";
import "./ArcanaToken.sol";



// solhint-disable-next-line
contract ArcanaTrove is OwnableUpgradeable, ReentrancyGuardUpgradeable {
    uint32 public constant ARCANA_DRAGONS_REWARDS_PER_ROUND = 100; //this is 1

    uint256 public EPOCH_LENGTH; //solhint-disable
    uint256 public STARTING_POINT;



    Dragons public dragons;

    ArcanaToken public arcana;


    Pause public paused;

    mapping(uint16 => uint256) private lastRewardOfArcanaPerDragons;





    struct Pause {
        uint8 pauseDragons;
    }


    /***********Events**************/
    event ArcanaClaimed(address indexed _to, uint256 _amount);
    event StartingPointChanged(uint256 startingPoint);
    event SetContract(string indexed _contract, address _target);
    event EpochChange(string indexed epochType, uint256 _newValue);
    event PauseChanged(uint8 _pauseDragons);

    function initialize() public initializer {
        __Ownable_init();
        __ReentrancyGuard_init();


        // solhint-disable-next-line
        // we set it to 2^16 = 65,536 as bees max supply is 20700 so the first id that is generated, will be lower than this

        EPOCH_LENGTH = 8; //one day 86400

 

        STARTING_POINT = 1649376515;
    }

    /***********External**************/

    /**
     * @notice claiming arcana by owning a dragon
     */
    function claimDragonsArcana(uint16[] calldata _dragonsIds) external nonReentrant {
        require(STARTING_POINT < block.timestamp, "Rewards didn't start");

        require(paused.pauseDragons == 0, "Paused");

        uint256 amount;
        for (uint16 i = 0; i < _dragonsIds.length; i++) {
            uint16 id = _dragonsIds[i];

            //if not owner of the token then no rewards, usecase when someone tries to get rewards for
            //a token that isn't his or when he tries to get the rewards for an old token
            if (!dragons.exists(id)) continue;
            if (dragons.ownerOf(id) != msg.sender) continue;

            uint256 epochsToReward;
            uint256 lastReward = lastRewardOfArcanaPerDragons[id];
            if (lastReward > 0 && lastReward > STARTING_POINT) {
                // solhint-disable-next-line
                //we get whole numbers for example if someone claims after 1 round and a half, he should be rewarded for 1 round.
                epochsToReward = (block.timestamp - lastReward) / EPOCH_LENGTH;
            } else {
                // if no rewards claimed so far, then he gets rewards from when the rewards started.
                epochsToReward = (block.timestamp - STARTING_POINT) / EPOCH_LENGTH;
            }

            //accumulating arcana to mint
            amount += ARCANA_DRAGONS_REWARDS_PER_ROUND * epochsToReward;
            lastRewardOfArcanaPerDragons[id] = block.timestamp;
        }
        require(amount > 0, "Nothing to claim");
        amount = amount * 1e16;

        //can not mint more than maxSupply
        if (arcana.totalSupply() + amount > arcana.maxSupply()) {
            amount = (arcana.maxSupply() - arcana.totalSupply());
        }

        arcana.mint(msg.sender, amount);
        emit ArcanaClaimed(msg.sender, amount);
    }

    /**
     * @notice claiming arcana by owning a bee, it counts for the bee level.
     */
    // solhint-disable-next-line

    /**
     * @notice mints a Arcana Hive by having a dragon. You need to be the holder of the dragon.
     */

    /**
     * @notice after MAX_USAGE_PER_HIVE, a hive becomes inactive so it needs to be activated so we can mint more Bees
     */

    /***********Views**************/
    /**
     * @notice Get a time when the Dragon was last rewarded with arcana
     */
    function getLastRewardedByDragon(uint16 _dragonId) external view returns (uint256) {
        return lastRewardOfArcanaPerDragons[_dragonId];
    }

    /**
     * @notice Get a time when the Bee was last rewarded with arcana
     */


    /**
     * @notice Get last time you claimed a bee
     */


    /**
     * @notice Get total unclaimed Arcana for a holder
     */
    function getUnclaimedArcanaForDragons(address _owner) external view returns (uint256 amount) {
        uint256[] memory dragonsIds = dragons.tokensOfOwner(_owner);
        for (uint16 i = 0; i < dragonsIds.length; i++) {
            uint16 id = uint16(dragonsIds[i]);

            //if not owner of the token then no rewards, usecase when someone tries to get rewards for
            //a token that isn't his or when he tries to get the rewards for an old token
            if (!dragons.exists(id)) continue;
            if (dragons.ownerOf(id) != _owner) continue;

            uint256 epochsToReward;
            uint256 lastReward = lastRewardOfArcanaPerDragons[id];
            if (lastReward > 0 && lastReward > STARTING_POINT) {
                // solhint-disable-next-line
                //we get whole numbers for example if someone claims after 1 round and a half, he should be rewarded for 1 round.
                epochsToReward = (block.timestamp - lastReward) / EPOCH_LENGTH;
            } else {
                if (block.timestamp < STARTING_POINT)
                    //if the starting point it's in the future then return 0
                    epochsToReward = 0;
                    // if no rewards claimed so far, then he gets rewards from when the rewards started.
                else epochsToReward = (block.timestamp - STARTING_POINT) / EPOCH_LENGTH;
            }

            //accumulating arcana to mint
            amount += ARCANA_DRAGONS_REWARDS_PER_ROUND * epochsToReward;
        }
        amount = amount * 1e16;
    }



    function setDragons(address _contract) external onlyOwner {
        require(_contract != address(0), "Can not be address 0");
        dragons = Dragons(_contract);
        emit SetContract("Dragons", _contract);
    }

    function setArcana(address _contract) external onlyOwner {
        require(_contract != address(0), "Can not be address 0");
        arcana = ArcanaToken(_contract);
        emit SetContract("ArcanaToken", _contract);
    }


    function setInitialStartingPoint(uint256 _startingPoint) external onlyOwner {
        STARTING_POINT = _startingPoint;
        emit StartingPointChanged(_startingPoint);
    }

    function getInitialStartingPoint() external view returns (uint256) {
        return STARTING_POINT;
    }

    function setArcanaEpochLength(uint256 _epochLength) external onlyOwner {
        EPOCH_LENGTH = _epochLength;
        emit EpochChange("ArcanaEpochLength", _epochLength);
    }





    /**
     * @notice Sets the activitiy of the Dragons/Bee/Hive as paused or not, only use in case of emergency.
     * 1 = Paused
     * 0 = Active
     */
    function setPauseState(
        uint8 _pauseDragons

    ) external onlyOwner {
        paused.pauseDragons = _pauseDragons;

        emit PauseChanged(_pauseDragons);
    }
}

