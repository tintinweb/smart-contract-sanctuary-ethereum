/// @title A LayerZero USDBNonFungibleToken
/// @author Kris
/// @notice You can use this to mint NFT and transfer across chain
/// @dev All function calls are currently implemented without side effects
contract USDBNFT is ERC721A,ERC721URIStorage, ERC721APausable, ERC721Enumerable,
Ownable, AccessControl, NonblockingReceiver, ILayerZeroUserApplicationConfig {
    using SafeMath for uint256;
    using Address for address;
    using Counters for Counters.Counter;

      
    Counters.Counter private _tokenIds;

    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

     /* ======== EVENTS ======== */
    event BondRedeemed( address indexed recipient, uint payout, uint usdbPayout, uint remaining );

    uint256 public _totalSupply;
    string public baseTokenURI;
    uint256 maxMint;
    address public vaultManagerAddress;// vaultManager Address
    address public immutable sFHM; // token given as payment for bond
    address public immutable USDB; // invest token
    address public generate; 

    mapping( uint256 => Bond) public _nftInfo; // stores bond information into nft.

    uint256 gas = 350000;

     // Info for bond holder
    struct Bond {
        uint gonsPayout; // sFHM remaining to be paid
        uint fhmPayout; //fhm payout
        uint usdbAmount; //deposit usdbAmount
        uint vesting; // Blocks left to vest
        uint lastBlock; // Last interaction
        uint vestingSeconds; // Blocks left to vest
        uint lastTimestamp; // Last interaction
        uint pricePaid; // In DAI, for front end viewing
    }
    event ReceiveNFT(
        uint16 _srcChainId,
        address _from,
        uint256 _tokenId,
        uint256 counter
    );


    /// @notice Constructor for the USDBNonFungibleToken
    /// @param _layerZeroEndpoint handles message transmission across chains
    /// @param _maxMint the max number of mints on this chain
    constructor(
        address _layerZeroEndpoint,
        uint256 _maxMint,
        address _sfhm,
        address _usdb,
        address _generate
    )
    ERC721A("USDB Backed NFT", "USDB-NFT"){
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(MINTER_ROLE, msg.sender);

        endpoint = ILayerZeroEndpoint(_layerZeroEndpoint);
        maxMint = _maxMint;

        require(_sfhm != address(0), "No zero address");
        sFHM = _sfhm;
        require(_usdb != address(0), "No zero address");
        USDB = _usdb;
        require(_generate != address(0), "No zero address");
        generate = _generate;
    }
   
    /// @notice Set the baseTokenURI
    /// @param _baseTokenURI to set
    function setBaseURI(string memory _baseTokenURI) public onlyOwner {
        baseTokenURI = _baseTokenURI;
    }

    /// @notice Get the base URI
    function _baseURI() override public view returns (string memory) {
        return baseTokenURI;
    }

    function tokenURI(uint256 tokenId) public view override(ERC721A, ERC721URIStorage) returns (string memory) {
       return IGenerateMetadata(generate).generateURI(tokenId);
    }
     /**
     * @dev Sets `_tokenURI` as the tokenURI of `tokenId`.
     *
     * Requirements:
     *
     * - `tokenId` must exist.
     */
    function setTokenURI(uint256 tokenId, string memory _tokenURI) internal {
        require(_exists(tokenId), "ERC721Metadata: URI set of nonexistent token");
        _tokenURIs[tokenId] = _tokenURI;
    }

    function _beforeTokenTransfers(address from, address to, uint256 tokenId, uint256 quantity) internal whenNotPaused override(ERC721A, ERC721APausable, ERC721Enumerable) {
        super._beforeTokenTransfers(from, to, tokenId, quantity);
    }
    /// @notice Mint your USDBNonFungibleToken
    function mint(address wallet, Bond memory userInfo) whenNotPaused external payable returns(uint256) {
        require(hasRole(MINTER_ROLE, _msgSender()), "USDBNFT: must have minter role to mint");
        require(_totalSupply + 1 <= maxMint, "USDBNFT: Max limit reached");
        _tokenIds.increment();
        uint256 tokenId = _tokenIds.current();
        _safeMint(wallet, 1);

        _nftInfo[tokenId] = userInfo;
        _totalSupply = _totalSupply.add(1);

        return tokenId;
    }
    function getTokenIdForMint() public view returns(uint) {
        return _tokenIds.current().add(1);
    }
    function getNftInfo(uint256 tokenId) external view returns(Bond memory) {
        return _nftInfo[tokenId];
    }
    function getTokenIds(address _owner) public view returns (uint[] memory) {
        uint[] memory _tokensOfOwner = new uint[](ERC721A.balanceOf(_owner));
        uint i;

        for (i=0;i<ERC721A.balanceOf(_owner);i++){
            _tokensOfOwner[i] = ERC721Enumerable.tokenOfOwnerByIndex(_owner, i);
        }
        return (_tokensOfOwner);
    }
    function totalSupply() public view override(ERC721A, ERC721Enumerable) returns(uint256) {
        return _totalSupply;
    }
    function supportsInterface(bytes4 interfaceId) public view override(ERC721A, ERC721Enumerable) returns (bool) {
        return
            interfaceId == type(IERC721).interfaceId ||
            interfaceId == type(IERC721Metadata).interfaceId ||
            super.supportsInterface(interfaceId);
    }
    function withdraw(uint256 tokenId, address _recipient) external returns(uint256, uint256) {
        require(msg.sender == ownerOfNftToken(tokenId), "No owner of NFT token");
        uint percentVested = percentVestedFor( tokenId ); // (seconds since last interaction / vesting term remaining)
        uint percentVestedBlocks = percentVestedBlocksFor(tokenId ); // (blocks since last interaction / vesting term remaining)

        require ( percentVested >= 10000, "Wait for end timestamp of bond") ;
        require ( percentVestedBlocks >= 10000, "Wait for end block of bond") ;

        Bond memory info = _nftInfo[tokenId];
        uint sfhmAmount = IsFHM(sFHM).balanceForGons(info.gonsPayout);
        IVault(IVaultManager(vaultManagerAddress).getVaultAddress(tokenId)).withdraw(tokenId, sfhmAmount, info.usdbAmount);
        IERC20(sFHM).transfer(_recipient, sfhmAmount);
        IERC20(USDB).transfer(_recipient, info.usdbAmount);
        delete _nftInfo[tokenId];
        emit BondRedeemed( _recipient, sfhmAmount, info.usdbAmount, 0 );
        return (sfhmAmount, info.usdbAmount);
    }
      /**
     *  @notice calculate how far into vesting a depositor is
     *  @param _nftTokenId uint256
     *  @return percentVested_ uint
     */
    function percentVestedFor( uint256 _nftTokenId ) public view returns ( uint percentVested_ ) {
        Bond memory info = _nftInfo[_nftTokenId];
        uint secondsSinceLast = block.timestamp.sub( info.lastTimestamp );
        uint vestingSeconds = info.vestingSeconds;

        if ( vestingSeconds > 0 ) {
            percentVested_ = secondsSinceLast.mul( 10000 ).div(vestingSeconds);
        } else {
            percentVested_ = 0;
        }
    }
    
    function percentVestedBlocksFor( uint256 _nftTokenId ) public view returns ( uint percentVested_ ) {
        Bond memory info = _nftInfo[_nftTokenId];
        uint blocksSinceLast = block.number.sub( info.lastBlock );
        uint vesting = info.vesting;

        if ( vesting > 0 ) {
            percentVested_ = blocksSinceLast.mul( 10000 ).div( vesting );
        } else {
            percentVested_ = 0;
        }
    }
    function setGenerate(address _newGenerate) public onlyOwner {
        generate = _newGenerate;
    }
    function setRole(address bondAddress) public onlyOwner {
        _setupRole(MINTER_ROLE, bondAddress);
    } 
    function setVaultManagerAddress(address _vaultManagerAddress) public onlyOwner {
        require(_vaultManagerAddress != address(0), "No Zero Address");
        vaultManagerAddress = _vaultManagerAddress;
    }

    function _burn(uint256 tokenId) internal override(ERC721A, ERC721URIStorage) {
        super._burn(tokenId);
    }
    function currentTokenId() external view returns (uint256) {
        return _tokenIds.current();
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }
    function ownerOfNftToken(uint256 tokenId) public view returns(address) {
        return ownerOf(tokenId);
    }
    /// @notice Burn USDBNFT_tokenId on source chain and mint on destination chain
    /// @param _chainId the destination chain id you want to transfer too
    /// @param USDBNFT_tokenId the id of the USDBNFT you want to transfer
    function transferUsdbNft(
        uint16 _chainId,
        uint256 USDBNFT_tokenId
    ) public payable {
        require(msg.sender == ownerOf(USDBNFT_tokenId), "Message sender must own the USDBNFT.");
        require(trustedSourceLookup[_chainId].length != 0, "This chain is not a trusted source source.");

        // burn USDBNFT on source chain
        _burn(USDBNFT_tokenId);

        //sub counts of USDBNFT on source chain
        _totalSupply = _totalSupply.sub(1);
        // encode payload w/ sender address and USDBNFT token id
        bytes memory payload = abi.encode(msg.sender, USDBNFT_tokenId);

        // encode adapterParams w/ extra gas for destination chain
        // This example uses 500,000 gas. Your implementation may need more.
        uint16 version = 1;
        bytes memory adapterParams = abi.encodePacked(version, gas);

        // use LayerZero estimateFees for cross chain delivery
        (uint quotedLayerZeroFee, ) = endpoint.estimateFees(_chainId, address(this), payload, false, adapterParams);

        require(msg.value >= quotedLayerZeroFee, "Not enough gas to cover cross chain transfer.");

        endpoint.send{value:msg.value}(
            _chainId,                      // destination chainId
            trustedSourceLookup[_chainId], // destination address of OmnichainNFT
            payload,                       // abi.encode()'ed bytes
            payable(msg.sender),           // refund address
            address(0x0),                  // future parameter
            adapterParams                  // adapterParams
        );
    }
    /// @notice Override the _LzReceive internal function of the NonblockingReceiver
    // @param _srcChainId - the source endpoint identifier
    // @param _srcAddress - the source sending contract address from the source chain
    // @param _nonce - the ordered message nonce
    // @param _payload - the signed payload is the UA bytes has encoded to be sent
    /// @dev safe mints the ONFT on your destination chain
    function _LzReceive(uint16 _srcChainId, bytes memory _srcAddress, uint64 _nonce, bytes memory _payload) internal override  {
        (address _dstUsdbNftAddress, uint256 usdbNft_tokenId) = abi.decode(_payload, (address, uint256));
        // mint the tokens
        _safeMint(_dstUsdbNftAddress, usdbNft_tokenId);
        _totalSupply = _totalSupply.add(1);
        emit ReceiveNFT(_srcChainId, _dstUsdbNftAddress, usdbNft_tokenId, _totalSupply);
    }
    function estimateFees(
        uint16 _dstChainId,
        address _userApplication,
        bytes calldata _payload,
        bool _payInZRO,
        bytes calldata _adapterParams
    ) external view returns (uint256 nativeFee, uint256 zroFee) {
        return
            endpoint.estimateFees(
                _dstChainId,
                _userApplication,
                _payload,
                _payInZRO,
                _adapterParams
            );
    }
    //---------------------------DAO CALL----------------------------------------
    // generic config for user Application
    function setConfig(
        uint16 _version,
        uint16 _chainId,
        uint256 _configType,
        bytes calldata _config
    ) external override onlyOwner {
        endpoint.setConfig(_version, _chainId, _configType, _config);
    }

    function setSendVersion(uint16 _version) external override onlyOwner {
        endpoint.setSendVersion(_version);
    }

    function setReceiveVersion(uint16 _version) external override onlyOwner {
        endpoint.setReceiveVersion(_version);
    }

    function forceResumeReceive(uint16 _srcChainId, bytes calldata _srcAddress) external override onlyOwner {
        endpoint.forceResumeReceive(_srcChainId, _srcAddress);
    }

    function renounceOwnership() public override onlyOwner {}
}

