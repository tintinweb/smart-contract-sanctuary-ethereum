		address _from,
		uint16,
		bytes memory,
		uint256 _amount
	) internal virtual {
		address spender = _msgSender();
		if (_from != spender) _spendAllowance(_from, spender, _amount);
		_burn(_from, _amount);
	}

	function _creditTo(
		uint16,
		address _toAddress,
		uint256 _amount
	) internal virtual {
		_mint(_toAddress, _amount);
	}
}

