import { CLPTokenStorage } from "./abstract/CLPTokenStorage.sol";

import { ICargoIntegration } from "./integrations/ICargoIntegration.sol";

import {FullMath} from "./vendor/uniswap/LiquidityAmounts.sol";

import {
    IERC20,
    SafeERC20
} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract CLPToken is CLPTokenStorage {
    using SafeERC20 for IERC20;

    /// @notice Emitted when LP deposits PLP token
    /// @param sender Address of sender
    /// @param to Address of recipient
    /// @param amountCLPMinted Minted amount of CLP token
    /// @param amountToken0Desired Desired amount of one side token
    /// @param amountToken0Deposited Deposited amount of one side token
    /// @param amountToken1Desired Desired amount of the other side token
    /// @param amountToken1Deposited Deposited amount of the other side token
    event Deposit(
        address indexed sender,
        address indexed to,
        uint256 amountCLPMinted,
        uint256 amountToken0Desired,
        uint256 amountToken0Deposited,
        uint256 amountToken1Desired,
        uint256 amountToken1Deposited
    );

    /// @notice Emitted when LP withdraws PLP token
    /// @param sender Address of sender
    /// @param to Address of recipient
    /// @param amountCLPBurned Burned amount of CLP token
    /// @param amountToken0 Withdrawn amount of one side token
    /// @param amountToken0 Withdrawn amount of the other side token
    event Withdraw(
        address indexed sender,
        address indexed to,
        uint256 amountCLPBurned,
        uint256 amountToken0,
        uint256 amountToken1
    );

    /**
     * @notice Decimals of CLP token
     */
    function getIntegrationAddress() public view returns (address) {
        return cargoIntegrationAddress;
    }

    /**
     * @notice Get token0 address via CargoIntegration
     */
    function token0Address() public view returns (address) {
        ICargoIntegration itg = ICargoIntegration(cargoIntegrationAddress);
        return itg.token0Address(poolAddress);
    }

    /**
     * @notice Get token1 address via CargoIntegration
     */
    function token1Address() public view returns (address) {
        ICargoIntegration itg = ICargoIntegration(cargoIntegrationAddress);
        return itg.token1Address(poolAddress);
    }

    /**
     * @notice Deposit PLP token
     * @param _amount0Desired Amount of one side token
     * @param _amount1Desired  Amount of the other side token
     * @param _to Address recipient of CLP
     * @return Amount of CLP minted
     * @dev nonReentrant modifier is added in order to prevent reentrance attack
     * @dev Before calling this, sender should call approve function of pool's contract
     */
    // solhint-disable-next-line function-max-lines
    function deposit(
        uint256 _amount0Desired,
        uint256 _amount1Desired,
        address _to
    ) external payable nonReentrant whenNotPaused returns (uint256) {
        // Check params
        require(_to != address(0x0), "CD0010");
        require(_amount0Desired > 0, "CD0020");
        require(_amount1Desired > 0, "CD0030");

        IERC20 token0 = IERC20(token0Address());
        IERC20 token1 = IERC20(token1Address());

        // Check balance of token pair
        require(token0.balanceOf(msg.sender) >= _amount0Desired, "CD0040");
        require(token1.balanceOf(msg.sender) >= _amount1Desired, "CD0050");

        // Transfer token pair from sender to CargoIntegration
        token0.safeTransferFrom(msg.sender, cargoIntegrationAddress, _amount0Desired);
        token1.safeTransferFrom(msg.sender, cargoIntegrationAddress, _amount1Desired);

        ICargoIntegration itg = ICargoIntegration(cargoIntegrationAddress);
        (uint256 shares, uint256 amount0Deposited, uint256 amount1Deposited) = itg.deposit(
            poolAddress,
            _amount0Desired,
            _amount1Desired
        );

        if (_amount0Desired - amount0Deposited > 0) {
            token0.safeTransfer(msg.sender, _amount0Desired - amount0Deposited);
        }
        if (_amount1Desired - amount1Deposited > 0) {
            token1.safeTransfer(msg.sender, _amount1Desired - amount1Deposited);
        }

        // Mint CLP token as much as _amount
        _mint(_to, shares);

        // solhint-disable-next-line max-line-length
        emit Deposit(msg.sender, _to, shares, _amount0Desired, amount0Deposited, _amount1Desired, amount1Deposited);

        return shares;
    }

    /**
     * @notice Withdraw PLP token
     * @param _amount Amount of PLP token which sender want to withdraw
     * @param _to Address to which token pair will be sent
     * @return amount of token 0
     * @return amount of token 1
     * @dev nonReentrant modifier is added in order to prevent reentrance attack
     */
    function withdraw(
        uint256 _amount,
        address _to)
    external payable nonReentrant whenNotPaused returns (uint256, uint256) {
        // Check params
        require(_to != address(0x0), "CW0010");
        require(_amount > 0, "CW0020");

        // Check allowance
        uint256 allowance = allowance(msg.sender, address(this));
        require(allowance >= _amount, "CW0030");

        // Burn CLP token as much as
        _burn(msg.sender, _amount);

        // Transfer PLP token to CargoIntegration
        IERC20(poolAddress).safeTransfer(cargoIntegrationAddress, _amount);

        // Call CargoIntegration.withdraw
        ICargoIntegration itg = ICargoIntegration(cargoIntegrationAddress);
        (uint256 amount0, uint256 amount1) = itg.withdraw(poolAddress, _amount, _to);

        emit Withdraw(msg.sender, _to, _amount, amount0, amount1);

        return (amount0, amount1);
    }

    /**
     * @notice Retrieves token amounts on rebalancer's position for a given number of shares
     * @param _shares Amount of PLP token which sender wants to get token amounts for
     * @return amount of token0
     * @return amount of token1
     */
    function getAmountsForShares(uint256 _shares) external view returns (uint256, uint256) {
        require(_shares > 0, "CGUIGTFS0020");

        ICargoIntegration itg = ICargoIntegration(cargoIntegrationAddress);
        (uint256 positionAmount0, uint256 positionAmount1) =
            itg.getAmountsFromPosition(poolAddress, totalSupply());

        uint256 userAmount0 = FullMath.mulDiv(positionAmount0, _shares, totalSupply());

        uint256 userAmount1 = FullMath.mulDiv(positionAmount1, _shares, totalSupply());

        return (userAmount0, userAmount1);
    }

    /**
     * @notice Get uniswap pool address
     * @return _uniPoolAddress address of the uniswap pool
     */
    function getUniswapPool() external view returns (address) {
        address _uniPoolAddress =
            ICargoIntegration(cargoIntegrationAddress).getUniswapPool(poolAddress);
        return _uniPoolAddress;
    }

    /**
     * @notice Get tick lower
     * @return current tick lower of the rebalancer pool
     */
    function getTickLower() external view returns (int24) {
        return ICargoIntegration(cargoIntegrationAddress).getTickLower(poolAddress);
    }

    /**
     * @notice Get tick upper
     * @return current tick upper of the rebalancer pool
     */
    function getTickUpper() external view returns (int24) {
        return ICargoIntegration(cargoIntegrationAddress).getTickUpper(poolAddress);
    }

    /** Pauses contract */
    function pause() external onlyOwner {
        _pause();
    }

    /** Unpauses contract */
    function unpause() external onlyOwner {
        _unpause();
    }
    
}

