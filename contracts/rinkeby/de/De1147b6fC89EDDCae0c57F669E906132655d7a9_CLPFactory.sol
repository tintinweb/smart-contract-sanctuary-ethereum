import "@openzeppelin/contracts/access/Ownable.sol";
import "./CLPToken.sol";
import { ICLPToken } from "./interfaces/ICLPToken.sol";
import { ICLPFactory } from "./interfaces/ICLPFactory.sol";
import { EIP173Proxy } from "./vendor/proxy/EIP173Proxy.sol";

contract CLPFactory is Ownable, ICLPFactory {
    // Address pairs of CLP contract and rebalancer's pool
    mapping(address => address) public rebalancersToClpAddresses;

    address[] public clpTokens;

    /// @notice Emitted when a CLP is created
    /// @param proxy Address of proxy
    /// @param clp Address of clp
    /// @param plp Address of plp
    /// @param integration Address of integration contract
    event CLPTokenCreated(address proxy, address clp, address plp, address integration);

    constructor(address owner) {
        transferOwnership(owner);
    }

    /**
     * @notice Deploy new CLP contract
     * @param _name Name of this CLP token
     * @param _poolAddress Address of rebalancer's pool
     * @param _cargoIntegrationAddress Address of rebalancer's pool
     * @dev This contract ban be callled only by owner. So onlyOwner modifier is added.
     */
    function deploy(
        string calldata _name,
        address _poolAddress,
        address _cargoIntegrationAddress
    ) external onlyOwner {
        // Deploy new CLP token contract
        CLPToken newCLPToken = new CLPToken();

        address clpTokenProxyAddress = 
            address(new EIP173Proxy(address(newCLPToken), msg.sender, ""));

        ICLPToken(clpTokenProxyAddress).initialize(
            _name, 
            "CLP", 
            _poolAddress, 
            _cargoIntegrationAddress, 
            msg.sender
        );

        // Store address of proxy as deployed contract
        rebalancersToClpAddresses[_poolAddress] = clpTokenProxyAddress;

        clpTokens.push(clpTokenProxyAddress);

        emit CLPTokenCreated(
            clpTokenProxyAddress,
            address(newCLPToken),  
            _poolAddress, 
            _cargoIntegrationAddress
        );
    }

    /**
     * @notice Return address of CLP token to correspond to designated pool's address
     * @param _poolAddress Address of rebalancer's pool
     */
    function getCLPTokenAddress(address _poolAddress) external view returns (address) {
        return rebalancersToClpAddresses[_poolAddress];
    }

    /**
     * @notice Return addresses of all CLP tokens created by this factory
     */
    function getCLPTokenAddresses() external view returns (address[] memory) {
        return clpTokens;
    }

    /**
     * @notice is CLP
     */
    function isClp(address _clp, address _poolAddress) external view override returns (bool) {
        require(_poolAddress != address(0x0), "Pool address passed is 0");
        require(_clp != address(0x0), "CLP address passed is 0");
        address clpAddress = rebalancersToClpAddresses[_poolAddress];
        return (clpAddress == _clp);
    }
}

