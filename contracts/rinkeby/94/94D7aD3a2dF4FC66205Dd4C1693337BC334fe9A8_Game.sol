import "@openzeppelin/contracts/access/IAccessControl.sol";

import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import "./../../erc1155/IMintableContract.sol";

contract MintablePools {
  using EnumerableSet for EnumerableSet.AddressSet;
  using EnumerableSet for EnumerableSet.UintSet;

  mapping(uint256 => MintablePool) mintablePools;

  struct MintablePool {
    uint256 poolCount;
    EnumerableSet.AddressSet nftAddresses;
    // contract -> ids[]
    mapping(IMintableContract => EnumerableSet.UintSet) nftIds;
    // contract -> id -> amount
    mapping(IMintableContract => mapping(uint256 => uint256)) nftAmount;
  }

  event MintableItemAdded(
    IMintableContract indexed nftAddress,
    uint256 id,
    uint256 poolId,
    uint256 amount
  );

  event MintableItemRemoved(
    IMintableContract indexed nftAddress,
    uint256 id,
    uint256 poolId
  );

  event ItemSelected(
    address indexed pool,
    IMintableContract indexed nftContract,
    uint256 id,
    uint256 poolId,
    bool staticItem
  );

  function getMintablePoolCount(uint256 _poolId)
    external
    view
    returns (uint256)
  {
    return mintablePools[_poolId].poolCount;
  }

  function getMintableItem(
    address _to,
    uint256 _itemId,
    uint256 _poolId
  )
    internal
    returns (
      address _nftAddress,
      uint256 _id,
      uint256
    )
  {
    MintablePool storage pool = mintablePools[_poolId];
    require(pool.poolCount > 0, "Mintable pool is empty");
    _itemId %= pool.poolCount;

    uint256 itemCount = 0;
    uint256 nftAddressesCount = pool.nftAddresses.length();
    for (uint256 i = 0; i < nftAddressesCount; i++) {
      IMintableContract nftContract = IMintableContract(
        pool.nftAddresses.at(i)
      );
      uint256 nftIdsCount = pool.nftIds[nftContract].length();
      for (uint256 m = 0; m < nftIdsCount; m++) {
        uint256 id = pool.nftIds[nftContract].at(m);
        itemCount += pool.nftAmount[nftContract][id];
        if (itemCount > _itemId) {
          nftContract.mint(_to, id, 1, "0x00");
          emit ItemSelected(address(this), nftContract, id, _poolId, false);
          return (address(nftContract), id, _poolId);
        }
      }
    }
    revert("error 01");
  }

  function addMintableItem(
    IMintableContract _address,
    uint256 _id,
    uint256 _poolId,
    uint256 _weight
  ) public virtual {
    MintablePool storage pool = mintablePools[_poolId];
    require(pool.nftAmount[_address][_id] == 0, "Already added");
    require(
      IAccessControl(address(_address)).hasRole(
        keccak256("MINTER_ROLE"),
        address(this)
      ),
      "Not a MINTER"
    );

    pool.nftAddresses.add(address(_address));
    pool.nftIds[_address].add(_id);
    pool.nftAmount[_address][_id] = _weight;
    pool.poolCount += _weight;
    emit MintableItemAdded(_address, _id, _poolId, _weight);
  }

  function removeMintableItem(
    IMintableContract _address,
    uint256 _id,
    uint256 _poolId
  ) public virtual {
    MintablePool storage pool = mintablePools[_poolId];
    require(pool.nftAmount[_address][_id] != 0, "No such item");
    pool.nftIds[_address].remove(_id);
    pool.poolCount -= pool.nftAmount[_address][_id];
    pool.nftAmount[_address][_id] = 0;
    emit MintableItemRemoved(_address, _id, _poolId);
  }
}

