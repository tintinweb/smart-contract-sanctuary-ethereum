import "./IDungeons.sol";
import "./Enemies.sol";
import "./Game.sol";

// TODO create an abstract contract variant?
contract Dungeons is ERC165, AccessControl, IDungeons {
  uint256 public numDungeons;
  uint256 public maxEnemies = 4;
  uint256 public energyCost = 2;

  // Stores the available dungeons in this contract with uint256 as the id
  mapping(uint256 => DungeonLibrary.Dungeon) public dungeons;

  mapping(address => mapping(uint256 => bool)) public cleared;

  Enemies public enemiesContract;

  // TODO move to library
  bytes32 public constant GAME_ROLE = keccak256("GAME_ROLE");

  constructor(address enemiesAddress) {
    enemiesContract = Enemies(enemiesAddress);
    _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
  }

  function addDungeon(
    uint256 lockedBy,
    uint256 level,
    bool active,
    DungeonLibrary.Realm realm,
    uint256[][] memory stages
  ) external override onlyRole(DEFAULT_ADMIN_ROLE) {
    // Don't use id 0 so that lockedBy can have a null value
    uint256 id = ++numDungeons;
    updateDungeon(id, lockedBy, level, active, realm, stages);
    emit DungeonAdded(id);
  }

  function editDungeon(
    uint256 id,
    uint256 lockedBy,
    uint256 level,
    bool active,
    DungeonLibrary.Realm realm,
    uint256[][] memory stages
  ) external override onlyRole(DEFAULT_ADMIN_ROLE) {
    require(id <= numDungeons, "Invalid id");
    updateDungeon(id, lockedBy, level, active, realm, stages);
    emit DungeonEdited(id);
  }

  function updateDungeon(
    uint256 id,
    uint256 lockedBy,
    uint256 level,
    bool active,
    DungeonLibrary.Realm realm,
    uint256[][] memory stages
  ) private {
    uint256 numEnemies = enemiesContract.numEnemies();
    DungeonLibrary.Dungeon storage d = dungeons[id];

    d.id = id;
    d.lockedBy = lockedBy;
    d.level = level;
    d.active = active;
    d.realm = realm;

    for (uint256 i = 0; i < stages.length; i++) {
      require(
        stages[i].length > 0 && stages[i].length <= maxEnemies,
        "Invalid num enemies"
      );
      for (uint256 j = 0; j < stages[i].length; j++) {
        require(stages[i][j] <= numEnemies, "Invalid enemy");
      }
    }
    d.stages = stages;
  }

  function isDungeonLocked(address user, uint256 id)
    public
    view
    override
    returns (bool)
  {
    uint256 lockedBy = dungeons[id].lockedBy;
    return lockedBy == 0 ? false : !cleared[user][lockedBy];
  }

  function setCleared(address user, uint256 id)
    external
    override
    onlyRole(GAME_ROLE)
  {
    cleared[user][id] = true;
  }

  function getDungeon(uint256 id)
    external
    view
    override
    returns (DungeonLibrary.Dungeon memory)
  {
    require(id != 0 && id <= numDungeons, "Invalid dungeon");
    return dungeons[id];
  }

  function getDungeons()
    external
    view
    returns (DungeonLibrary.Dungeon[] memory _dungeons)
  {
    _dungeons = new DungeonLibrary.Dungeon[](numDungeons);
    for (uint256 i; i < numDungeons; i++) {
      _dungeons[i] = dungeons[i + 1];
    }
  }

  function isDungeonCleared(address user, uint256 id)
    external
    view
    override
    returns (bool)
  {
    return cleared[user][id];
  }

  function setMaxEnemies(uint256 max)
    external
    override
    onlyRole(DEFAULT_ADMIN_ROLE)
  {
    maxEnemies = max;
    emit MaxEnemiesSet(max);
  }

  function setEnergyCost(uint256 cost)
    external
    override
    onlyRole(DEFAULT_ADMIN_ROLE)
  {
    energyCost = cost;
    emit EnergyCostSet(cost);
  }

  function getEnemies(uint256 dungeon, uint256 stage)
    external
    view
    override
    returns (DungeonLibrary.EnemyStats[] memory enemies)
  {
    require(dungeon != 0, "Invalid dungeon");
    require(stage < dungeons[dungeon].stages.length, "Invalid stage");

    //    require(numDungeons > 1, 'No dungeons added');
    DungeonLibrary.Dungeon storage d = dungeons[dungeon];
    uint256[] memory e = d.stages[stage];

    enemies = new DungeonLibrary.EnemyStats[](e.length);

    for (uint256 i; i < e.length; i++) {
      DungeonLibrary.EnemyStats memory enemy = enemiesContract.getEnemy(e[i]);
      (enemy.hp, enemy.dmg, enemy.def) = DungeonLibrary.calculateStats(
        d.level,
        enemy.hp,
        enemy.dmg,
        enemy.def
      );
      enemies[i] = enemy;
    }
  }

  function getLoot(
    address to,
    uint256 dungeon,
    uint256 stage
  )
    external
    override
    returns (
      address[] memory nftAddresses,
      uint256[] memory lootIds,
      uint256[] memory poolIds
    )
  {
    require(dungeon != 0, "Invalid dungeon");
    require(stage < dungeons[dungeon].stages.length, "Invalid stage");
    DungeonLibrary.Dungeon storage d = dungeons[dungeon];
    uint256[] memory e = d.stages[stage];

    nftAddresses = new address[](e.length);
    lootIds = new uint256[](e.length);
    poolIds = new uint256[](e.length);

    // TODO add some randomness so that not every enemy always drops
    for (uint256 i; i < e.length; i++) {
      (nftAddresses[i], lootIds[i], poolIds[i]) = enemiesContract.getLoot(
        to,
        e[i]
      );
    }
  }

  /**
   * @dev See {IERC165-supportsInterface}.
   */
  function supportsInterface(bytes4 interfaceId)
    public
    view
    virtual
    override(ERC165, AccessControl)
    returns (bool)
  {
    return
      interfaceId == type(IDungeons).interfaceId ||
      super.supportsInterface(interfaceId);
  }
}

