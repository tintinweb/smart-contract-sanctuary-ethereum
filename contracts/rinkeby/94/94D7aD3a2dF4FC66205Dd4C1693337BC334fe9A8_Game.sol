  bool public migrationActive;

  // uint256 is the id of a given creature type: terra herald, sea herald etc.
  mapping(uint256 => DungeonLibrary.CreatureStats)
    public creatureTypesBaseStats;

  // the mapping of which stats a creature in this contract has
  mapping(uint256 => DungeonLibrary.CreatureStats) public creaturesStats;

  constructor(
    string memory name,
    string memory symbol,
    string memory uri,
    address creaturesAndArtifactsAddress
  ) ERC721(name, symbol) {
    _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    creaturesAndArtifacts = ERC1155Burnable(creaturesAndArtifactsAddress);
    _tokenIdCounter.increment();
    setBaseURI(uri);
  }

  event CreatureMigrated(
    uint256 indexed creatureId,
    uint256 indexed migratedId
  );

  event LeveledUp(uint256 indexed id, uint256 indexed level);

  modifier baseStatsDefined(uint256 creatureId) {
    require(
      creatureTypesBaseStats[creatureId].level == 1,
      "Base stats not defined"
    );
    _;
  }

  // TODO create batch migrate function
  function migrateCreature(uint256 creatureId)
    external
    nonReentrant
    baseStatsDefined(creatureId)
  {
    require(migrationActive, "Migration not active");
    require(
      creaturesAndArtifacts.balanceOf(msg.sender, creatureId) > 0,
      "Don't own given creature"
    );
    creaturesAndArtifacts.burn(msg.sender, creatureId, 1);
    uint256 tokenId = _tokenIdCounter.current();
    creaturesStats[tokenId] = creatureTypesBaseStats[creatureId];
    _tokenIdCounter.increment();
    _safeMint(msg.sender, tokenId);

    emit CreatureMigrated(creatureId, tokenId);
  }

  // TODO change this into a payable function and add logic for random creature type
  function mintNewCreature(address to, uint256 creatureId)
    external
    baseStatsDefined(creatureId)
    onlyRole(DEFAULT_ADMIN_ROLE)
  {
    uint256 tokenId = _tokenIdCounter.current();
    creaturesStats[tokenId] = creatureTypesBaseStats[creatureId];
    _tokenIdCounter.increment();
    _safeMint(to, tokenId);
  }

  function toggleMigrationActive() external onlyRole(DEFAULT_ADMIN_ROLE) {
    migrationActive = !migrationActive;
  }

  // TODO might consider moving all the xp and level logic to a separate contract
  function addXp(uint256 xp, uint256 id) external onlyRole(GAME_ROLE) {
    // TODO change this check, use counter
    require(creaturesStats[id].level > 0, "Creature does not exist");
    require(creaturesStats[id].level < maxLevel, "Max lvl reached");
    uint256 newXp = creaturesStats[id].xp + xp;
    uint256 nextLvl = nextLevel(creaturesStats[id].level);

    if (newXp < nextLvl) {
      creaturesStats[id].xp += xp;
    } else {
      levelUp(newXp, nextLvl, id);
    }
  }

  function levelUp(
    uint256 newXp,
    uint256 nextLvl,
    uint256 id
  ) internal {
    while (newXp >= nextLvl) {
      creaturesStats[id].level++;
      emit LeveledUp(id, creaturesStats[id].level);
      if (creaturesStats[id].level == maxLevel) {
        creaturesStats[id].xp = 0;
        break;
      }
      creaturesStats[id].xp = newXp - nextLvl;

      newXp = creaturesStats[id].xp;
      nextLvl = nextLevel(creaturesStats[id].level);
    }

    uint256 typeId = creaturesStats[id].typeId;
    (
      creaturesStats[id].hp,
      creaturesStats[id].dmg,
      creaturesStats[id].def
    ) = DungeonLibrary.calculateStats(
      creaturesStats[id].level,
      creatureTypesBaseStats[typeId].hp,
      creatureTypesBaseStats[typeId].dmg,
      creatureTypesBaseStats[typeId].def
    );
  }

  // We can change the level calculation when we need to
  function nextLevel(uint256 curLev) public pure returns (uint256) {
    return (40 * (curLev**3)) / 5;
  }

  function setMaxLevel(uint256 max) external onlyRole(DEFAULT_ADMIN_ROLE) {
    maxLevel = max;
  }

  function setCreatureTypeBaseStats(
    uint256 typeId,
    uint256 hp,
    uint256 dmg,
    uint256 def,
    uint256[] memory spellIds,
    string memory image
  ) public onlyRole(DEFAULT_ADMIN_ROLE) {
    creatureTypesBaseStats[typeId] = DungeonLibrary.CreatureStats({
      evolution: 0,
      energy: 10,
      hp: hp,
      dmg: dmg,
      def: def,
      level: 1,
      xp: 0,
      typeId: typeId,
      spellIds: spellIds,
      image: image
    });
  }

  function getCreature(uint256 id)
    external
    view
    returns (
      //    override
      DungeonLibrary.CreatureStats memory
    )
  {
    require(id > 0 && id < _tokenIdCounter.current(), "invalid id");
    return creaturesStats[id];
  }

  function creatureDetails(uint256[] memory _ids)
    external
    view
    returns (DungeonLibrary.CreatureStats[] memory _details)
  {
    _details = new DungeonLibrary.CreatureStats[](_ids.length);
    for (uint256 i; i < _ids.length; i++) {
      _details[i] = creaturesStats[_ids[i]];
    }
  }

  function ownedCreatures(address _owner)
    public
    view
    returns (uint256[] memory _ids)
  {
    uint256 balance = this.balanceOf(_owner);
    _ids = new uint256[](balance);
    for (uint256 i; i < balance; i++) {
      _ids[i] = tokenOfOwnerByIndex(_owner, i);
    }
  }

  // The following functions are overrides required by Solidity.

  function supportsInterface(bytes4 interfaceId)
    public
