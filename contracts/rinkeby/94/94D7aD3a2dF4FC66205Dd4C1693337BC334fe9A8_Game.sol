pragma solidity ^0.8.9;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Address.sol";

import "../lib/DungeonLibrary.sol";
import "../erc721/SkullxCreatures.sol";
import "../erc1155/Artifacts.sol";

import "./Dungeons.sol";
import "./Enemies.sol";

contract Game is AccessControl, ReentrancyGuard {
  SkullxCreatures public heraldsContract;
  Dungeons public dungeonsContract;
  Artifacts public artifactsContract;
  IERC20 public gameTokenContract;

  uint256 public maxHeralds = 3;
  uint256 public maxItems = 2;
  uint256 public maxSpells = 5;
  uint256 public maxTurns = 20;

  uint256 private randNonce;

  uint256[] private tokenReward = [0, 0, 0];

  // Stores the current dungeon stage per user address
  mapping(address => DungeonLibrary.DungeonState) public dungeonStates;

  // TODO move to library
  bytes32 public constant GAME_ROLE = keccak256("GAME_ROLE");

  constructor(
    SkullxCreatures _heraldsAddress,
    Dungeons _dungeonsAddress,
    Artifacts _artifacts,
    IERC20 _gameTokenAddress
  ) {
    heraldsContract = _heraldsAddress;
    dungeonsContract = _dungeonsAddress;
    artifactsContract = _artifacts;
    gameTokenContract = _gameTokenAddress;
    _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
  }

  event HeraldAttack(
    uint256 heraldId,
    uint256 enemyId,
    uint256 dmg,
    uint256 bonusDmg,
    uint256 xpGain
  );
  event EnemiesAttack(uint256 hp, uint256 dmg);
  event BattleResult(bool win, uint256 xpGain, uint256 turns);
  event SpellUsed(
    uint256 spellId,
    uint256 hp,
    uint256 dmg,
    uint256 def,
    bool burned
  );
  event ItemLost(uint256 itemId);

  event DungeonSelected(uint256 indexed id, address user);

  event DungeonStageCleared(
    uint256 indexed id,
    uint256 indexed stage,
    address user
  );

  event TokenTransferred(uint256 amount);

  event LootReceived(
    address[] nftAddresses,
    uint256[] lootIds,
    uint256[] poolIds,
    address user
  );

  event DungeonCleared(uint256 indexed id, address user);

  function getGameState(address _user, uint256 _dungeonId)
    external
    view
    returns (
      DungeonLibrary.Dungeon memory dungeon,
      DungeonLibrary.DungeonState memory state
    )
  {
    state = dungeonStates[_user];
    dungeon = dungeonsContract.getDungeon(_dungeonId);
  }

  function getHeraldSpells(uint256[] memory _heraldIds)
    external
    view
    returns (uint256[] memory amount)
  {
    amount = new uint256[](artifactsContract.idCounter() + 1);
    for (uint256 i; i < _heraldIds.length; i++) {
      DungeonLibrary.CreatureStats memory herald = heraldsContract.getCreature(
        _heraldIds[i]
      );
      for (uint256 j; j < herald.spellIds.length; j++) {
        amount[herald.spellIds[j]]++;
      }
    }
  }

  /**
   * @notice Selects a valid dungeon.
   * @param id Dungeon id to select.
   */
  function selectDungeon(uint256 id) public {
    require(dungeonsContract.getDungeon(id).active == true, "Dungeon inactive");
    require(
      dungeonsContract.isDungeonLocked(msg.sender, id) == false,
      "Dungeon locked"
    );
    dungeonStates[msg.sender].stage = 0;
    dungeonStates[msg.sender].currentDungeon = id;
    emit DungeonSelected(id, msg.sender);
  }

  function checkArtifactsAmount(
    uint256[] memory _artifactIds,
    bool[] memory _checked
  ) public view returns (bool _pass) {
    require(_checked.length == _artifactIds.length, "checked length");
    uint256 maxId;

    // find max id;
    for (uint256 i; i < _artifactIds.length; i++) {
      if (_artifactIds[i] > maxId) {
        maxId = _artifactIds[i];
      }
    }

    // count amount (by artifact type)
    uint8[] memory amount = new uint8[](maxId + 1);
    for (uint256 i; i < _artifactIds.length; i++) {
      if (!_checked[i] && _artifactIds[i] != 0) {
        amount[_artifactIds[i]]++;
      }
    }

    // check items/spells balance
    for (uint256 i = 1; i < amount.length; i++) {
      if (amount[i] == 0) {
        continue;
      }
      if (artifactsContract.balanceOf(msg.sender, i) < amount[i]) {
        return false;
      }
    }
    return true;
  }

  function checkArtifactsType(uint256[] memory _artifactIds, bool durable)
    public
    view
    returns (bool _durable)
  {
    for (uint256 i; i < _artifactIds.length; i++) {
      if (_artifactIds[i] == 0) {
        continue;
      }
      DungeonLibrary.ArtifactStats memory stats = artifactsContract
        .getArtifactDetails(_artifactIds[i]);
      if (
        (durable && stats.durability == 0) ||
        (!durable && stats.durability != 0)
      ) {
        return false;
      }
    }
    return true;
  }

  function checkSpells(
    uint256[] memory _heraldIds,
    uint256[] calldata _spellIds
  ) public view returns (bool[] memory checked) {
    checked = new bool[](_spellIds.length);

    require(_spellIds.length <= maxSpells, "too many spells");
    require(checkArtifactsType(_spellIds, false), "item included");

    // iterate over heralds
    for (uint256 i; i < _heraldIds.length; i++) {
      if (_heraldIds[i] == 0) {
        continue;
      }
      DungeonLibrary.CreatureStats memory herald = heraldsContract.getCreature(
        _heraldIds[i]
      );
      // iterate over heralds spells
      for (uint256 j; j < herald.spellIds.length; j++) {
        // iterate over selected spells and mark them as checked if there's a match
        for (uint256 k; k < _spellIds.length; k++) {
          if (checked[k]) {
            continue;
          }
          if (herald.spellIds[j] == _spellIds[k]) {
            checked[k] = true;
            break;
          }
        }
      }
    }
    require(checkArtifactsAmount(_spellIds, checked), "not enough spells");
  }

  function nonZeroIncluded(uint256[] memory _array)
    internal
    pure
    returns (bool included)
  {
    for (uint256 i; i < _array.length; i++) {
      if (_array[i] != 0) {
        return true;
      }
    }
    return false;
  }

  function checkHeralds(uint256[] memory _heraldIds) public view {
    require(nonZeroIncluded(_heraldIds), "no heralds");
    require(_heraldIds.length <= maxHeralds, "too many heralds");

    // check ownership and dups (best generic approach for very short lists)
    for (uint256 i; i < _heraldIds.length; i++) {
      if (_heraldIds[i] == 0) {
        continue;
      }
      require(
        heraldsContract.ownerOf(_heraldIds[i]) == msg.sender,
        "not herald owner"
      );
      for (uint256 j = i + 1; j < _heraldIds.length; j++) {
        require(_heraldIds[i] != _heraldIds[j], "herald dup");
      }
    }
  }

  function checkItems(uint256[] memory _itemIds) public view {
    require(_itemIds.length <= maxItems, "too many items");
    require(checkArtifactsType(_itemIds, true), "spell included");
    require(
      checkArtifactsAmount(_itemIds, new bool[](_itemIds.length)),
      "not enough items"
    );
  }

  /**
   * @notice Enters a dungeon and initiates the first stage.
   * @dev Called only when entering a new dungeon. Use initiateStage if the dungeon is already progressed.
   * @param id Dungeon id to enter.
   * @param heraldIds Heralds selected for the dungeon.
   * @param itemIds Ids of selected items
   * @param spellIds Ids of selected spells
   */
  function enterDungeon(
    uint256 id,
    uint256[] calldata heraldIds,
    uint256[] calldata itemIds,
    uint256[] calldata spellIds
  ) external nonReentrant {
    require(!Address.isContract(msg.sender), "contract");

    DungeonLibrary.DungeonState storage dState = dungeonStates[msg.sender];
    // TODO add removal of herald energy here?

    require(
      dState.currentDungeon != id || dState.stage == 0,
      "Already progressed current dungeon"
    );
    if (dState.currentDungeon != id) {
      selectDungeon(id);
    }

    dState.selectedHeralds = heraldIds;
    dState.selectedItems = itemIds;
    dState.totalHp = 0;

    checkItems(dState.selectedItems);
    _initiateStage(spellIds);
  }

  function burnItems(DungeonLibrary.DungeonState storage dState) internal {
    for (uint256 i; i < dState.selectedItems.length; i++) {
      if (
        dState.selectedItems[i] != 0 &&
        artifactsContract.balanceOf(msg.sender, dState.selectedItems[i]) > 0
      ) {
        artifactsContract.burn(msg.sender, dState.selectedItems[i], 1);
        emit ItemLost(dState.selectedItems[i]);
        dState.selectedItems[i] = 0;
      }
    }
  }

  function sendRewardToken(uint256 _amount) internal {
    if (_amount != 0 && gameTokenContract.balanceOf(address(this)) >= _amount) {
      gameTokenContract.transfer(msg.sender, _amount);
      emit TokenTransferred(_amount);
    }
  }

  /**
   * @notice Sets ERC20 Game Token Reward
   * @param _high token amount for finishing dungeon
   * @param _medium token amount for finishing stage
   * @param _low token amount in case of loosing battle
   */
  function setRewardRate(
    uint256 _high,
    uint256 _medium,
    uint256 _low
  ) external onlyRole(DEFAULT_ADMIN_ROLE) {
    tokenReward[0] = _high;
    tokenReward[1] = _medium;
    tokenReward[2] = _low;
  }

  function updateXp(DungeonLibrary.DungeonState storage dState, uint256 xp)
    internal
  {
    xp /= countNonZeros(dState.selectedHeralds);
    for (uint256 i; i < dState.selectedHeralds.length; i++) {
      if (dState.selectedHeralds[i] == 0) {
        continue;
      }
      heraldsContract.addXp(xp, dState.selectedHeralds[i]);
    }
  }

  /**
   * @notice Initiates a dungeon stage.
   * @dev Should be used when heralds and items are already selected. Use enterDungeon instead when entering new dungeons.
   * @param spellIds Ids of selected spells
   */
  function initiateStage(uint256[] calldata spellIds) public nonReentrant {
    _initiateStage(spellIds);
  }

  function findMaxHeraldLevel(DungeonLibrary.CreatureStats[] memory heralds)
    internal
    pure
    returns (uint256 maxLevel)
  {
    maxLevel = 1;
    for (uint256 i; i < heralds.length; i++) {
      if (heralds[i].level > maxLevel) {
        maxLevel = heralds[i].level;
      }
    }
    return maxLevel;
  }

  function getCurrentDungeonLevel()
    internal
    view
    returns (uint256 currentDungeonLevel)
  {
    uint256 id = dungeonStates[msg.sender].currentDungeon;
    return dungeonsContract.getDungeon(id).level;
  }

  function getXpFactor(DungeonLibrary.CreatureStats[] memory heralds)
    internal
    view
    returns (uint256 xpFactor)
  {
    uint256 maxHeraldLevel = findMaxHeraldLevel(heralds);
    if (maxHeraldLevel <= getCurrentDungeonLevel()) {
      return 100;
    }
    uint256 lvlDiff = 1 + maxHeraldLevel - getCurrentDungeonLevel();
    return 100 / lvlDiff;
  }

  function _initiateStage(uint256[] calldata spellIds) internal {
    require(!Address.isContract(msg.sender), "contract");

    DungeonLibrary.DungeonState storage dState = dungeonStates[msg.sender];
    checkHeralds(dState.selectedHeralds);
    bool[] memory checked = checkSpells(dState.selectedHeralds, spellIds);

    bool success;
    uint256 xp;
    uint256 factor;
    (success, xp, factor) = simulateBattle(msg.sender, spellIds, checked);

    if (success) {
      updateXp(dState, xp);
      if (updateDungeonProgress(msg.sender)) {
        burnItems(dState);
        sendRewardToken(tokenReward[0] * getCurrentDungeonLevel());
        delete dState.selectedHeralds;
        delete dState.selectedItems;
      } else {
        sendRewardToken(tokenReward[1] * getCurrentDungeonLevel());
      }

      if (factor >= 50) {
        address[] memory nftAddresses;
        uint256[] memory lootIds;
        uint256[] memory poolIds;
        (nftAddresses, lootIds, poolIds) = dungeonsContract.getLoot{
          gas: 700000
        }(msg.sender, dState.currentDungeon, dState.stage);
        emit LootReceived(nftAddresses, lootIds, poolIds, msg.sender);
      }
    } else {
      sendRewardToken(tokenReward[2] * getCurrentDungeonLevel());
      burnItems(dState);
      dState.stage = 0;
      dState.totalHp = 0;
      delete dState.selectedHeralds;
      delete dState.selectedItems;
    }
  }

  // TODO make private and find a proper way to test private functions
  // optionally make it internal and follow this
  // https://medium.com/@danielque/solidity-unit-testing-internal-functions-4e9a728298a0
  /**
   * @notice Simulates the battle of a dungeon stage.
   * @dev Uses the DungeonState of the caller.
   * @param user Address of the user to simulate for.
   * @return success Boolean outcome of the battle.
   * @return xp Experience gained.
   */
  function simulateBattle(
    address user,
    uint256[] calldata spellIds,
    bool[] memory checked
  )
    public
    returns (
      bool success,
      uint256 xp,
      uint256 xpFactor
    )
  {
    DungeonLibrary.DungeonState storage dState = dungeonStates[user];
    require(dState.currentDungeon != 0, "No dungeon selected");
    require(dState.selectedHeralds.length != 0, "No heralds selected");

    DungeonLibrary.CreatureStats[] memory heralds;
    DungeonLibrary.EnemyStats[] memory enemies;
    DungeonLibrary.BattleStruct memory battle;
    DungeonLibrary.ArtifactStats memory stats;

    for (uint256 i; i < dState.selectedItems.length; i++) {
      if (
        dState.selectedItems[i] != 0 &&
        artifactsContract.balanceOf(msg.sender, dState.selectedItems[i]) > 0
      ) {
        stats = artifactsContract.getArtifactDetails(dState.selectedItems[i]);
        battle.itemDef += stats.def;
        battle.itemDmg += stats.dmg;
      }
    }

    (heralds, enemies, battle.totalHp) = getHeraldsAndEnemies(
      dState.selectedHeralds,
      dState.currentDungeon,
      dState.stage
    );

    if (dState.totalHp != 0) {
      battle.totalHp = dState.totalHp;
    }

    xpFactor = getXpFactor(heralds);

    for (battle.numTurns = 0; battle.numTurns < maxTurns; battle.numTurns++) {
      battle.spellDmg = 0;
      battle.spellDef = 0;

      // ---- Artifacts turn ----
      if (battle.numTurns < spellIds.length && spellIds[battle.numTurns] != 0) {
        stats = artifactsContract.getArtifactDetails(spellIds[battle.numTurns]);
        battle.totalHp += stats.hp;
        battle.spellDef = stats.def;
        battle.spellDmg = stats.dmg;
        emit SpellUsed(
          spellIds[battle.numTurns],
          stats.hp,
          stats.dmg,
          stats.def,
          !checked[battle.numTurns]
        );
        if (!checked[battle.numTurns]) {
          artifactsContract.burn(msg.sender, spellIds[battle.numTurns], 1);
        }
      }

      // ---- Heralds turn ----
      // Attack last enemy in enemy array with each herald
      for (uint256 j; j < heralds.length; j++) {
        if (enemies.length == 0) {
          // Battle won
          dState.totalHp = battle.totalHp;
          emit BattleResult(true, xp, battle.numTurns);
          return (true, xp, xpFactor);
        }

        battle.dmg = heralds[j].dmg + battle.itemDmg + battle.spellDmg;
        if (enemies[enemies.length - 1].hp <= battle.dmg) {
          // TODO get xp for enemies killed, even though failing dungeon? (currently like that)

          xp += (enemies[enemies.length - 1].xpGain * xpFactor) / 100;
          emit HeraldAttack(
            j,
            enemies.length - 1,
            heralds[j].dmg,
            battle.itemDmg + battle.spellDmg,
            enemies[enemies.length - 1].xpGain
          );
          // Remove the last enemy when killed (test thoroughly if this assembly code is safe)
          // https://ethereum.stackexchange.com/questions/51891/how-to-pop-from-decrease-the-length-of-a-memory-array-in-solidity
          assembly {
            mstore(enemies, sub(mload(enemies), 1))
          }
        } else {
          enemies[enemies.length - 1].hp -= battle.dmg;
          emit HeraldAttack(
            j,
            enemies.length - 1,
            heralds[j].dmg,
            battle.itemDmg + battle.spellDmg,
            0
          );
        }
      }
      // ---- Enemies turn ----
      battle.dmg = 0;
      // Sum all enemy damage
      for (uint256 j; j < enemies.length; j++) {
        battle.dmg += enemies[j].dmg;
      }
      battle.dmg -= Math.min(battle.itemDef + battle.spellDef, battle.dmg);

      emit EnemiesAttack(battle.totalHp, battle.dmg);
      if (battle.totalHp <= battle.dmg) {
        // Battle lost
        emit BattleResult(false, xp, battle.numTurns);
        return (false, xp, xpFactor);
      } else {
        battle.totalHp -= battle.dmg;
      }
    }
    emit BattleResult(false, xp, battle.numTurns);
    return (false, xp, xpFactor);
  }

  // TODO make private and find a proper way to test private functions
  // optionally make it internal and follow this
  // https://medium.com/@danielque/solidity-unit-testing-internal-functions-4e9a728298a0
  /**
   * @notice Updates the dungeon progress.
   * @dev Calls the setCleared function in the Dungeons contract if dungeon is cleared.
   * @param user Address of the user.
   * @return finished info about dungeon progress.
   */
  function updateDungeonProgress(address user) public returns (bool finished) {
    uint256 id = dungeonStates[user].currentDungeon;
    require(id != 0, "No dungeon selected");
    if (
      dungeonStates[user].stage ==
      dungeonsContract.getDungeon(id).stages.length - 1
    ) {
      dungeonsContract.setCleared(user, id);
      emit DungeonCleared(id, user);
      dungeonStates[user].stage = 0;
      return true;
    } else {
      emit DungeonStageCleared(id, dungeonStates[user].stage, user);
      dungeonStates[user].stage++;
    }
    return false;
  }

  function countNonZeros(uint256[] memory _ids)
    internal
    pure
    returns (uint256 _counter)
  {
    for (uint256 i; i < _ids.length; i++) {
      if (_ids[i] != 0) {
        ++_counter;
      }
    }
  }

  /**
   * @notice Gets the stats of the heralds and enemies for the given parameters.
   * @param heraldIds Heralds to get stats for.
   * @param dungeon Dungeon to select the stage from.
   * @param stage Dungeon stage containing the enemies.
   */
  function getHeraldsAndEnemies(
    uint256[] memory heraldIds,
    uint256 dungeon,
    uint256 stage
  )
    public
    view
    returns (
      DungeonLibrary.CreatureStats[] memory,
      DungeonLibrary.EnemyStats[] memory,
      uint256 totalHp
    )
  {
    checkHeralds(heraldIds);

    DungeonLibrary.CreatureStats[]
      memory heralds = new DungeonLibrary.CreatureStats[](
        countNonZeros(heraldIds)
      );

    uint256 cost = dungeonsContract.energyCost();
    uint256 index;
    for (uint256 i; i < heraldIds.length; i++) {
      if (heraldIds[i] == 0) {
        continue;
      }
      DungeonLibrary.CreatureStats memory herald = heraldsContract.getCreature(
        heraldIds[i]
      );
      require(herald.energy >= cost, "Not enough energy");
      totalHp += herald.hp;
      heralds[index++] = herald;
    }

    DungeonLibrary.EnemyStats[] memory enemies = dungeonsContract.getEnemies(
      dungeon,
      stage
    );

    return (heralds, enemies, totalHp);
  }
}

