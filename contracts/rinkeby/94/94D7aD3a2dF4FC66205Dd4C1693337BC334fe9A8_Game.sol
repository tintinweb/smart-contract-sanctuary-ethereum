    DIVINE,
    NETHER
  }

  function calculateStats(
    uint256 level,
    uint256 hp,
    uint256 dmg,
    uint256 def
  )
    public
    pure
    returns (
      uint256 hpCalc,
      uint256 dmgCalc,
      uint256 defCalc
    )
  {
    hpCalc = calculateStat(level, hp);
    dmgCalc = calculateStat(level, dmg);
    defCalc = calculateStat(level, def);
