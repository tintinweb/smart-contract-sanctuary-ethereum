  using EnumerableSet for EnumerableSet.UintSet;

  mapping(uint256 => StaticPool) staticPools;

  struct StaticPool {
    uint256 poolCount;
    EnumerableSet.AddressSet nftAddresses;
    // contract -> ids[]
    mapping(IERC1155Upgradeable => EnumerableSet.UintSet) nftIds;
    // contract -> id -> amount
    mapping(IERC1155Upgradeable => mapping(uint256 => uint256)) nftAmount;
  }

  event ItemSelected(
    address indexed pool,
    IERC1155Upgradeable indexed nftContract,
    uint256 id,
    uint256 poolId,
    bool staticItem
  );

  function getStaticPoolCount(uint256 _poolId) external view returns (uint256) {
    return staticPools[_poolId].poolCount;
  }

  function getStaticItem(
    address _to,
    uint256 _itemId,
    uint256 _poolId
  )
    internal
    virtual
    returns (
      address _nftAddress,
      uint256 _id,
      uint256
    )
  {
    StaticPool storage pool = staticPools[_poolId];
    require(pool.poolCount > 0, "Static pool is empty");
    _itemId %= pool.poolCount;

    uint256 itemCount = 0;
    for (uint256 i = 0; i < pool.nftAddresses.length(); i++) {
      IERC1155Upgradeable nftContract = IERC1155Upgradeable(
        pool.nftAddresses.at(i)
      );
      for (uint256 m = 0; m < pool.nftIds[nftContract].length(); m++) {
        uint256 id = pool.nftIds[nftContract].at(m);
        itemCount += pool.nftAmount[nftContract][id];
        if (itemCount > _itemId) {
          pool.poolCount--;
          pool.nftAmount[nftContract][id]--;
          nftContract.safeTransferFrom(address(this), _to, id, 1, "0x00");
          emit ItemSelected(address(this), nftContract, id, _poolId, true);
          return (address(nftContract), id, _poolId);
        }
      }
    }
    revert("error 02");
  }

  function depositStaticItem(
    IERC1155Upgradeable _contract,
    address _from,
    uint256 _id,
    uint256 _poolId,
    uint256 _amount
  ) public virtual {
    StaticPool storage pool = staticPools[_poolId];
    _contract.safeTransferFrom(_from, address(this), _id, _amount, "");
    pool.nftAddresses.add(msg.sender);
    pool.nftIds[IERC1155Upgradeable(msg.sender)].add(_id);
    pool.nftAmount[IERC1155Upgradeable(msg.sender)][_id] += _amount;
    pool.poolCount += _amount;
  }

  function withdrawStaticItem(
    IERC1155Upgradeable _contract,
    address _to,
    uint256 _id,
    uint256 _poolId,
    uint256 _amount
  ) public virtual {
    StaticPool storage pool = staticPools[_poolId];
    _contract.safeTransferFrom(address(this), _to, _id, _amount, "");
    pool.poolCount -= _amount;
    pool.nftAmount[IERC1155Upgradeable(_contract)][_id] -= _amount;
  }

  function onERC1155Received(
    address,
    address,
    uint256 _id,
    uint256 _amount,
    bytes memory
  ) public virtual override returns (bytes4) {
    StaticPool storage pool = staticPools[0];
    pool.nftAddresses.add(msg.sender);
    pool.nftIds[IERC1155Upgradeable(msg.sender)].add(_id);
    pool.nftAmount[IERC1155Upgradeable(msg.sender)][_id] += _amount;
    pool.poolCount += _amount;

    return this.onERC1155Received.selector;
  }

  function onERC1155BatchReceived(
    address,
    address,
    uint256[] calldata _ids,
    uint256[] calldata _amount,
    bytes memory
  ) public virtual override returns (bytes4) {
    StaticPool storage pool = staticPools[0];
    pool.nftAddresses.add(msg.sender);
    for (uint256 i = 0; i < _ids.length; i++) {
      pool.nftIds[IERC1155Upgradeable(msg.sender)].add(_ids[i]);
      pool.nftAmount[IERC1155Upgradeable(msg.sender)][_ids[i]] += _amount[i];
      pool.poolCount += _amount[i];
    }

    return this.onERC1155BatchReceived.selector;
  }
}

