import "./basicPool/MintablePools.sol";
import "./basicPool/StaticPools.sol";
import "./IMixedManagedPools.sol";

contract MixedManagedPools is
  ERC1155ReceiverUpgradeable,
  AccessControlUpgradeable,
  UUPSUpgradeable,
  ReentrancyGuardUpgradeable,
  MintablePools,
  StaticPools,
  IMixedManagedPools
