  bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");
  bytes32 public constant POOLS_MANAGER_ROLE = keccak256("POOLS_MANAGER_ROLE");

  uint256 private randNonce;

  /// @custom:oz-upgrades-unsafe-allow constructor
  constructor() initializer {}

  function initialize() public initializer {
    __AccessControl_init();
    __UUPSUpgradeable_init();

    _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    _grantRole(UPGRADER_ROLE, msg.sender);
    _grantRole(POOLS_MANAGER_ROLE, msg.sender);
  }

  function _authorizeUpgrade(address newImplementation)
    internal
    override
    onlyRole(UPGRADER_ROLE)
  {}

  function supportsInterface(bytes4 interfaceId)
    public
    view
    override(ERC1155ReceiverUpgradeable, AccessControlUpgradeable)
    returns (bool)
  {
    return super.supportsInterface(interfaceId);
  }

  function totalItemsCount(uint256 _poolId)
    public
    view
    returns (uint256 count)
  {
    return mintablePools[_poolId].poolCount + staticPools[_poolId].poolCount;
  }

  function rand(uint32 _seed) internal returns (uint256) {
    /* solhint-disable not-rely-on-time */
    return
      uint256(
        keccak256(
          abi.encodePacked(
            _seed,
            ++randNonce,
            block.timestamp,
            block.difficulty,
            ((uint256(keccak256(abi.encodePacked(block.coinbase)))) /
              (block.timestamp)),
            block.gaslimit,
            ((uint256(keccak256(abi.encodePacked(msg.sender)))) /
              (block.timestamp)),
            block.number
