    public
    view
    virtual
    override
    returns (string memory)
  {
    require(
      tokenId > 0 && tokenId < _tokenIdCounter.current(),
      "ERC721Metadata: URI query for nonexistent token"
    );

    DungeonLibrary.CreatureStats memory stats = creaturesStats[tokenId];

    if (bytes(baseURI).length == 0) {
      return "";
    }

    return
      string(
        abi.encodePacked(
          abi.encodePacked(
            baseURI,
            tokenId.toString(),
            "?tid=",
            stats.typeId.toString(),
            "&hp=",
            stats.hp.toString()
          ),
          abi.encodePacked(
            "&dmg=",
            stats.dmg.toString(),
            "&def=",
