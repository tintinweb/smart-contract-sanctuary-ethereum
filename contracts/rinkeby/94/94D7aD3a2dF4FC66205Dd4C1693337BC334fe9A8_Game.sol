    IMintableContract _address,
    uint256 _id,
    uint256 _poolId,
    uint256 _amount
  ) public override onlyRole(POOLS_MANAGER_ROLE) {
    super.addMintableItem(_address, _id, _poolId, _amount);
  }

  function removeMintableItem(
    IMintableContract _address,
    uint256 _id,
    uint256 _poolId
  ) public override onlyRole(POOLS_MANAGER_ROLE) {
    super.removeMintableItem(_address, _id, _poolId);
  }

  function depositStaticItem(
    IERC1155Upgradeable _operator,
    address _from,
    uint256 _id,
    uint256 _poolId,
    uint256 _amount
  ) public override onlyRole(POOLS_MANAGER_ROLE) {
    super.depositStaticItem(_operator, _from, _id, _poolId, _amount);
  }

  function withdrawStaticItem(
    IERC1155Upgradeable _operator,
    address _to,
    uint256 _id,
    uint256 _poolId,
    uint256 _amount
  ) public override onlyRole(POOLS_MANAGER_ROLE) {
    super.withdrawStaticItem(_operator, _to, _id, _poolId, _amount);
  }

  function onERC1155Received(
    address _operator,
    address _from,
    uint256 _id,
    uint256 _amount,
    bytes memory
  ) public override(IERC1155ReceiverUpgradeable, StaticPools) returns (bytes4) {
    require(hasRole(POOLS_MANAGER_ROLE, tx.origin), "Not a pool manager"); // solhint-disable-line avoid-tx-origin
    return super.onERC1155Received(_operator, _from, _id, _amount, "");
  }

  function onERC1155BatchReceived(
    address _operator,
    address _from,
    uint256[] calldata _ids,
    uint256[] calldata _amount,
    bytes memory
  ) public override(IERC1155ReceiverUpgradeable, StaticPools) returns (bytes4) {
    require(hasRole(POOLS_MANAGER_ROLE, tx.origin), "Not a pool manager"); // solhint-disable-line avoid-tx-origin
    return super.onERC1155BatchReceived(_operator, _from, _ids, _amount, "");
  }
}

