import "@manifoldxyz/libraries-solidity/contracts/access/AdminControl.sol";
import "@openzeppelin/contracts/utils/introspection/IERC165.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract CollectUsers is IERC165, AdminControl {
    mapping(uint => address[]) public _signUps;
    mapping(uint => uint) public _maxSignUps;
    mapping(uint => address) public _dropTokens;
    mapping(uint => uint) public _dropPrice;

    function supportsInterface(bytes4 interfaceId) public view virtual override(AdminControl, IERC165) returns (bool) {
        return AdminControl.supportsInterface(interfaceId) || super.supportsInterface(interfaceId);
    }

    function configure(uint drop, uint maxSignUps, address erc20, uint erc20Price) public adminRequired {
      require(_signUps[drop].length < maxSignUps, "Cannot lower maxSignUps below existing signUps");
      _maxSignUps[drop] = maxSignUps;
      _dropTokens[drop] = erc20;
      _dropPrice[drop] = erc20Price;
    }

    function signUp(uint drop) public {
      require(_signUps[drop].length < _maxSignUps[drop], "Drop already done.");
      require(IERC20(_dropTokens[drop]).allowance(msg.sender, address(this)) >= _dropPrice[drop], "You have not approved enough.");
      require(IERC20(_dropTokens[drop]).balanceOf(msg.sender) >= _dropPrice[drop], "You do not have enough token.");
      require(IERC20(_dropTokens[drop]).transferFrom(msg.sender, address(this), _dropPrice[drop]), "Failed to transfer token.");
      _signUps[drop].push(msg.sender);
    }

    function withdraw(address recipient, address erc20, uint256 amount) external adminRequired {
        IERC20(erc20).transfer(recipient, amount);
    }
}

