  require(saleStarted, "MINT_NOT_STARTED");
  require(totalSupply() + _count <= collectionSize, "MAX_SUPPLY_REACHED");
  require(msg.value >=(_count * MINT_PRICE), "Invalid_BNB_Sent");
  _safeMint(msg.sender, _count);
  totalPublicMinted[msg.sender]+=_count;
      // collectionWallet.transfer(msg.value);
  }

