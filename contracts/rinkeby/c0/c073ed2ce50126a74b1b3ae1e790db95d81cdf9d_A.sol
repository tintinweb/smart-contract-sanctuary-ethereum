      require(!lock, "ALREADY_LOCKED");
      prefixURI = _uri;
  }

  function setTokenURI(string calldata _uri, uint256 _tokenId) external onlyOwner {
      require(!lock, "ALREADY_LOCKED");
      tokenURIs[_tokenId] = _uri;
  }

  function pause() external onlyOwner {
      require(!paused(), "ALREADY_PAUSED");
