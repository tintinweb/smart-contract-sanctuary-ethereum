      internal
      view
      returns(bool, uint256)
  {
      for (uint256 s = 0; s < minteddata.length; s += 1){
          if (_address == minteddata[s].mintedAddress) return (true, s);
      }
      return (false, 0);
  }

  function totalMintedAddress()public view returns(uint256){
  return minteddata.length;
  }

