  {
      require(preSaleStarted, "MINT_NOT_STARTED");
      require(totalSupply() + userInfo[msg.sender].quantity <= collectionSize, "MAX_SUPPLY_REACHED");
      require(userInfo[msg.sender].userStatus!=false,"Address isn't Whitelisted");
