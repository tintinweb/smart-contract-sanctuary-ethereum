contract MESAStake is Ownable {
    using SafeERC20 for IERC20;
    IERC20 public immutable token;
    using OrderSet for OrderSet.Set;
    mapping(address => OrderSet.Set) private _orderOf;
    uint256[3] STAKE_YIELD = [15, 30, 65];
    uint256[3] STAKE_TIME = [3 minutes, 6 minutes, 9 minutes];
    //uint256[3] STAKE_TIME = [30 days, 60 days, 90 days];
    uint256 public minStakeAmount = 10000 * 10 ** 18;
    uint256 public maxStakeAmount = 100000000 * 10 ** 18;
    uint256 public accumulativeTotalAmount;
    uint256 public currentTotalAmount1;
    uint256 public currentTotalAmount2;
    uint256 public currentTotalAmount3;
    uint256 public currentId;

    event Stake(address indexed user, uint256 indexed stakeType, uint indexed orderId, uint256 createTime, uint256 amount);
    event CancelStake(address indexed user, uint indexed orderId, uint256 createTime, uint stakeAmount, uint256 amount);

    constructor(IERC20 token_) {
        token = token_;
    }

    function stake(uint256 stakeType, uint256 amount) external  {
        require(0 < stakeType && stakeType <= 3, "stake: stakeType changes are not supported");
        require(minStakeAmount <= amount, "stake: 0 < 10000*10**18");
        require(accumulativeTotalAmount + amount <= maxStakeAmount, "stake: amount < maxStakeAmount");
        require(IERC20(token).allowance(msg.sender,address(this)) >= amount, "stake: IERC20(token).allowance(msg.sender,address(this)) >= amount");
        IERC20(token).safeTransferFrom(msg.sender, address(this), amount);
        OrderSet.Order memory order;
    
        order.orderId = ++currentId;
        order.createTime = block.timestamp;
        order.amount = amount;
        order.stakeType = stakeType;

        _orderOf[msg.sender].add(order);
        accumulativeTotalAmount += amount;
        if(stakeType == 1) {
             currentTotalAmount1 += amount;
        }
        if(stakeType == 2) {
             currentTotalAmount2 += amount;
        }
        if(stakeType == 3) {
             currentTotalAmount3 += amount;
        }

        emit Stake(msg.sender, stakeType, order.orderId,order.createTime, order.amount);
    }

    function cancelStake(uint256 orderId) external  {
        require(currentId >= orderId, "cancelStake: currentId >= orderId");
        OrderSet.Order memory order = _orderOf[msg.sender].idAt(orderId);
        require(order.createTime + STAKE_TIME[order.stakeType - 1] <= block.timestamp, "cancelStake: order.createTime + STAKE_TIME[order.stakeType - 1] <= block.timestamp");
        uint256 amount = order.amount + order.amount * STAKE_YIELD[order.stakeType - 1] / 100;

        if(order.stakeType == 1) {
             currentTotalAmount1 -= order.amount;
        }
        if(order.stakeType == 2) {
             currentTotalAmount2 -= order.amount;
        }
        if(order.stakeType == 3) {
             currentTotalAmount3 -= order.amount;
        }

        _orderOf[msg.sender].remove(order);

        _release(msg.sender,amount);

        emit CancelStake(msg.sender, orderId, block.timestamp,order.amount, amount);
    }

    /**
     * @dev get '_account' pledge by page_metavisaOrderOf
     */
    function getOrders(address user, uint256 index, uint256 offset) public view returns (OrderSet.Order[] memory orders) {
        uint256 totalSize = getOrdersNum(user);
        require(0 < totalSize && totalSize > index, "getOrders: 0 < totalSize && totalSize > _index");
        uint256 offset_ = offset;
        if (totalSize < index + offset_) {
            offset_ = totalSize - index;
        }

        orders = new OrderSet.Order[](offset_);
        for (uint256 i = 0; i < offset_; i++) {
            orders[i] = _orderOf[user].at(index + i);
        }
    }

    /**
     * @dev get '_account' pledge orders num
     */
    function getOrdersNum(address user) public view returns (uint256 totalSize) {
        totalSize = _orderOf[user].length();
    }

    function _release(address user, uint256 amount) internal virtual {
        require(IERC20(token).balanceOf(address(this)) >= amount, "_release:token balance insufficient");
        IERC20(token).safeTransfer(user, amount);
    }

    ///////////////////////////////////////////onlyOwner//////////////////////////////////////////// 
    function adminRelease(address user, uint256 amount) external onlyOwner virtual {
        _release(user,amount);
    }


}