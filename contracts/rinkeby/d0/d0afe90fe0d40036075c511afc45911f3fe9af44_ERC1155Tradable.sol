  function mint(
    address _to,
    uint256 _id,
    uint256 _quantity,
    bytes memory _data
  ) public creatorOnly(_id) {
    require(tokenSupply[_id]+1 <= tokenSupplyLimit[_id], "Over supply limit of the token.");
    _mint(_to, _id, _quantity, _data);
    // tokenSupply[_id] += _quantity;
    tokenSupply[_id] = tokenSupply[_id].add(_quantity);
  }

