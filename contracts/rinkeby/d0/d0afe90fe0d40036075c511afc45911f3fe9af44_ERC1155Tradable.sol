    name = "Kilos Garden test";
    symbol = "KLG";
    proxyRegistryAddress = _proxyRegistryAddress;
    // signerAddress = _address;
    //For BaseRelayRecipient
    // setTrustedForwarder(address(0x4d4581c01A457925410cd3877d17b2fd4553b2C5 ));  //mumbai Forwarder
    //Polygon mainnet Forwarder: 0xdA78a11FD57aF7be2eDD804840eA7f4c2A38801d 
    // EIP712Upgradeable.__EIP712_init("My App", "1");
    OwnableUpgradeable.__Ownable_init();
    emit TransferSingle(_msgSender(), address(0), owner(), 0, 1);
  }

  function initialize(address _proxyRegistryAddress) initializer public {
    _currentTokenID = 0;
    name = "Kilos Garden test";
    symbol = "KLG";
    proxyRegistryAddress = _proxyRegistryAddress;
    // signerAddress = _address;
    //For BaseRelayRecipient
    // setTrustedForwarder(address(0x4d4581c01A457925410cd3877d17b2fd4553b2C5 ));  //mumbai Forwarder
    //Polygon mainnet Forwarder: 0xdA78a11FD57aF7be2eDD804840eA7f4c2A38801d 
