import "./Controllable.sol";
import "../lib/SlotsLib.sol";
import "../interface/IOracle.sol";

contract Oracle is Controllable, IOracle {
  using SlotsLib for bytes32;

  // ---- CONSTANTS ----

  /// @notice Version of the contract
  /// @dev Should be incremented when contract changed
  string public constant VERSION = "1.0.0";
  bytes32 internal constant _INDEX_SLOT = bytes32(uint256(keccak256("eip1967.Oracle.Index")) - 1);

  // ---- EVENTS ----

  event Random(uint number, uint max);

  // ---- INITIALIZER ----

  function init(
    address controller_
  ) external initializer {
    __Controllable_init(controller_);
  }

  // ---- RESTRICTIONS ----

  function onlyGovernance() internal view {
    require(_isGovernance(msg.sender), "C: Not gov");
  }

  // ---- ACTIONS ----

  function getRandomNumber(uint max) external override returns (uint) {
    return _getRandomNumber(max);
  }

  function _getRandomNumber(uint maxValue) internal returns (uint) {
    require(maxValue != 0, "Oracle: Wrong input");
    uint index = _INDEX_SLOT.getUint();
  unchecked {
    _INDEX_SLOT.set(index + 1);
  }
    // pseudo random number
    uint r = (uint(keccak256(abi.encodePacked(block.difficulty, block.timestamp, index))) % (maxValue + 1));
    emit Random(r, maxValue);
    return r;
  }

  function getRandomNumberInRange(uint min, uint max) external override returns (uint) {
    require(max >= min, "Wrong range");
    if (max - min < 2) {
      return max;
    }
    uint r = _getRandomNumber((max - min) * 1e18);
    return min + (r / 1e18);
  }

}

