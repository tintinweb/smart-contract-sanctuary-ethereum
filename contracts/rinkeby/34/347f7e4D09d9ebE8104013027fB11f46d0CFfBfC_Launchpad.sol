pragma solidity ^0.8.0;
import "./AlturaLaunchpadProject.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";

contract Launchpad is Ownable {
    address public targetAddress;
    address[] public projects;
    mapping(address => address) public projectCreators;

    // Events
    event ProjectCreated(address newProject);

    function setTarget(address _target) external onlyOwner {
        require(_target != address(0), "!zero address");

        targetAddress = _target;
    }

    // Create new project
    function createProject(string memory _name, address _creator)
        public
        returns (address newProject)
    {
        bytes memory bytecode = type(AlturaLaunchpadProject).creationCode;
        bytes32 salt = keccak256(abi.encodePacked("AlturaLaunchpadProject"));
        assembly {
            newProject := create2(0, add(bytecode, 32), mload(bytecode), salt)
        }
        AlturaLaunchpadProject(newProject).init(_name, _creator, msg.sender);
        emit ProjectCreated(newProject);
    }
}

