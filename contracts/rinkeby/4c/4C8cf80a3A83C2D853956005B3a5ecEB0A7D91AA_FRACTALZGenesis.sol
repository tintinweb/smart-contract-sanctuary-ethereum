        if (!insideWindow(mintConfig.window)) revert MintingDisabled();
        if (msg.value < quantity * mintConfig.price) revert InvalidEthereumValue();
        if (quantity + _totalMinted() > mintConfig.maximumSupply) revert MintQuantityExceedsMaximumSupply();
        if (mintedOf(msg.sender)+quantity>getFractalzAllowance(msg.sender)) revert MintQuantityExceedsWaystoneBalance();
        if (x==1) revert X();
        x = 1;
        internalEpochMint(quantity);
        x = 0;
    }

