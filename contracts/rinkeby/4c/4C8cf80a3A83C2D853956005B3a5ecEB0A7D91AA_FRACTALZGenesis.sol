    function getFractal(uint256 tokenId) private view returns (Fractal memory){
        Fractal memory fractal;
        uint256 curr = tokenId;
        while(fractal.epoch == 0){
            TokenOwnership memory ownership = _ownerships[curr];
            if(ownership.epoch>0){
                fractal.epoch = ownership.epoch;
                fractal.minter = ownership.minter;
                fractal.tier = ownership.tier;
                //fractal.offset = ownership.offset;
            }else{
                curr--;
            }
        }
        return fractal;
    }

