        unchecked{
            if(closeEpoch > 0 && block.timestamp >= closeEpoch){
                revert MintingClosed();
            }else{
                if(_currentIndex - 1 + quantity >= mintConfig.closeTrigger){
                    closeEpoch = uint64(block.timestamp) + mintConfig.closeDuration;
                }
            }
        }
        _mint(msg.sender, quantity, 0);
    }

    function breakFractals(uint256[] calldata tokenIds) external {
        if (!insideWindow(breakConfig.window)) revert BreakingDisabled();
        internalTransformation(tokenIds, breakConfig);
    }

    function combineFractals(uint256[] calldata tokenIds, bytes32 hash, bytes memory signature) external {
        if (!insideWindow(combineConfig.window)) revert CombiningDisabled();
        if (hashTransformation(msg.sender, tokenIds, combineConfig.burnTier) != hash) revert InvalidHash();
        if (signer != hash.recover(signature)) revert InvalidSignature();
        internalTransformation(tokenIds, combineConfig);
    }

    function internalTransformation(uint256[] calldata tokenIds, TransformationConfig memory config) internal {
        if (tokenIds.length % config.burnQuantity != 0) revert InvalidTokenQuantity();
        for (uint256 i = 0; i < tokenIds.length; i++) {
            TokenOwnership memory ownership = _ownershipOf(tokenIds[i]);
            if (ownership.addr != msg.sender) revert NotTokenOwner();
            if (ownership.burned) revert TokenAlreadyBurned();
            if (getFractal(tokenIds[i]).tier != config.burnTier) revert InvalidTokenTier();
            _burn(tokenIds[i]);
        }
        _mint(msg.sender, (tokenIds.length / config.burnQuantity) * config.mintQuantity, config.mintTier);
    }

    function insideWindow(Window memory window) internal view returns (bool){
        return (window.epoch > 0 && block.timestamp > window.epoch && block.timestamp < window.epoch + window.duration);
    }

