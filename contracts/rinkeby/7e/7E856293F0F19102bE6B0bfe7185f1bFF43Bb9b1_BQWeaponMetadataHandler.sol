                uint8 riffleAttachment_ = selectTrait(uint16(rand), 4);
                rand = rand >> 16;
                power_ = power_ + 2 * (riffleAttachment_ % 5) + 30;
                uint8 riffleBase_ = selectTrait(uint16(rand), 5);
                rand = rand >> 16;
                power_ = power_ + 2 * (riffleBase_ % 3) + 20;
                uint8 barrel_ = selectTrait(uint16(rand), 6);
                rand = rand >> 16;
                power_ = power_ + 2 * barrel_ + 10;
                uint8 riffleEffect_ = selectTrait(uint16(rand), 7);
                rand = rand >> 16;
