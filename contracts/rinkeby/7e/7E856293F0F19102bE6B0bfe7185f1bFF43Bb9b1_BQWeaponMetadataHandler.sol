        string memory number = toString(_tokenId);
        
        string memory uri = string(
            abi.encodePacked(
                'data:application/json;base64,',
                Base64.encode(
                    bytes(
                        abi.encodePacked(
                            '{"name":"BQWeapon #', number,'", "description":"BQWeapon is a collection of weapons ready to be used by Primus to figh corruped in BlockQuest.","image": "',
                            'data:image/svg+xml;base64,',
                            svg,
                            '",',
                            attributes,
                            '}'
                        )
                    )
                )
            )
        );
        return uri;
