        uint16 supply = uint16(totalSupply());
        uint cost = mintCost * _mintAmount;
        require(bqt.balanceOf(_msgSender()) >= cost, "not enough BQT");
        require(_mintAmount > 0, "must mint at least 1 weapon");
        require(supply + _mintAmount <= maxSupply, "minting exceed max supply");

        for (uint16 i = 0; i < _mintAmount; i++)
