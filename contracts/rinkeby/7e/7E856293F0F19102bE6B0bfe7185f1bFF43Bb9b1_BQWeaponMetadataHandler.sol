    function getTokenURI(uint16 _tokenId) external view returns (string memory)
    {
        string memory svg;
        string memory attributes;

        // using block to avoid max heap error
        {
            string memory header = '<svg id="weapon" width="100%" height="100%" version="1.1" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">';
            string memory footer = '<style>#weapon{shape-rendering: crispedges; image-rendering: -webkit-crisp-edges; image-rendering: -moz-crisp-edges; image-rendering: crisp-edges; image-rendering: pixelated; -ms-interpolation-mode: nearest-neighbor;}</style></svg>';

            uint8 weaponType;

            {
                (uint8 weaponDomain_, uint8 weaponType_, uint16 power_) = weapon.getWeaponStats(_tokenId);
                weaponType = weaponType_;
                string memory weaponDomainString;
                if (weaponDomain_ == 0) {
                    weaponDomainString = "strength";
                } else if (weaponDomain_ == 1) {
                    weaponDomainString = "agility";
                } else if (weaponDomain_ == 2) {
                    weaponDomainString = "intelligence";
                }

                string memory weaponTypeString;
                if (weaponType_ == 0) {
                    weaponTypeString = "blade";
                } else if (weaponType_ == 1) {
                    weaponTypeString = "riffle";
