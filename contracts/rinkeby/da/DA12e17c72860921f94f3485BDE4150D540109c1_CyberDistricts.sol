pragma solidity ^0.8.7;

import "@rari-capital/solmate/src/tokens/ERC721.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./VRFv2Consumer.sol";

contract CyberDistricts is ERC721, Ownable, VRFv2Consumer {
    using Strings for uint256;

    uint256 public PRICE = .1 ether;
    uint256 public MAX_SUPPLY = 2000;
    uint256 public numMinted;
    uint256 public startTime;
    uint256 public endTime;
    uint256 public tokenOffset;

    string public ipfsCID;

    bool public isRevealed = false;
    bool public isPaused = false;

    mapping(address => bool) addressMinted;

    address private signerAddress;

    modifier saleCheck(address _addr) {
        require(!isPaused, "Sale is paused");
        require(numMinted + 1 <= MAX_SUPPLY, "Collection oos");
        require(tx.origin == _addr, "No smart contracts");
        require(!addressMinted[_addr], "Wallet has minted");
        _;
    }

    constructor(
        uint64 _subscriptionId,
        address _vrfCoordinator,
        bytes32 _keyHash
    )
        ERC721("hello", "hi")
        VRFv2Consumer(_subscriptionId, _vrfCoordinator, _keyHash)
    {}

    ///////// MINTING ////////////
    function mint(bytes memory _signature)
        external
        payable
        saleCheck(msg.sender)
    {
        require(verify(msg.sender, _signature), "Address is not on WL/AL");
        require(msg.value == PRICE, "Invalid amount");
        _mint(msg.sender, numMinted);
        numMinted += 1;
        addressMinted[msg.sender] = true;
    }

    function verify(address sender, bytes memory _signature)
        public
        view
        returns (bool)
    {
        bytes32 messageHash = keccak256(
            abi.encodePacked(
                "\x19Ethereum Signed Message:\n32",
                keccak256(abi.encodePacked(sender))
            )
        );
        address signer = ECDSA.recover(messageHash, _signature);
        return signer == signerAddress;
    }

    ///////// SET STATE ////////////
    function setSigner(address _signerAddress) external onlyOwner {
        signerAddress = _signerAddress;
    }

    function setPaused() external onlyOwner {
        isPaused = !isPaused;
    }

    function setRevealed() external onlyOwner {
        isRevealed = !isRevealed;
    }

    ///////// METADATA ///////////
    function setCID(string memory _cid) external onlyOwner {
        ipfsCID = _cid;
    }

    function fulfillRandomWords(
        uint256, /* requestId */
        uint256[] memory randomWords
    ) internal override {
        tokenOffset = randomWords[0];
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override
        returns (string memory)
    {
        if (!isRevealed) {
            return string(abi.encodePacked("ipfs://", ipfsCID));
        } else {
            require(tokenOffset != 0, "Need token offset");
            uint256 offset = (tokenOffset + tokenId) % MAX_SUPPLY;
            return
                string(
                    abi.encodePacked("ipfs://", ipfsCID, "/", offset.toString())
                );
        }
    }

    ///////// WITHDRAW ///////////
    function withdraw() external onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }
}

