contract Header {
    string[3] public html;

    function add(uint256 _htmlIndex, string memory _html) public {
        html[_htmlIndex] = string.concat(html[_htmlIndex],_html);
    }

    constructor() {
        add(0, "<!DOCTYPE html>");
        add(0, "<html lang='en'>");
        add(0, "<head>");
        add(0, "<meta charset='UTF-8'>");
        add(0, "<meta name='viewport' content='width=device-width, initial-scale=1.0'>");
        add(0, "<meta http-equiv='X-UA-Compatible' content='ie=edge'>");
        add(0, "<title>");
