        add(1, "</title>");
        add(1, "<style>");
        add(1, "html { background: #1c232b; }");
        add(1, "body { font-family: 'Trebuchet MS', Helvetica, sans-serif; color: #CCC; margin: 0px;}");
        add(1, "button { width: 120px; height: 30px; border: 2px solid #00a3ff; border-radius: 3px; background: #000; color: #CCC; cursor: pointer; margin: 5px; }");
        add(1, "input[type=text] { width: 180px; height: 24px; }");
        add(1, "a { color: #CCC; }");
        add(1, "</style>");
        add(1, "</head>");
    }

    function render(string memory _title) public returns(string memory) {
        add(2,html[0]);
        add(2, _title);
        add(2, html[1]);
        return html[2];
    }
}

