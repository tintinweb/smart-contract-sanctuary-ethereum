contract Marketplace is OwnableUpgradeable, ReentrancyGuardUpgradeable, PausableUpgradeable {

    using SafeMath for uint256;
    using AddressUpgradeable for address payable;
    using SafeERC20 for IERC20;

    /// @notice Events for the contract
    event ItemListed(
        address indexed owner,
        address indexed nft,
        uint256 tokenId,
        uint256 quantity,
        address payToken,
        uint256 pricePerItem,
        uint256 startingTime
    );

    event ItemSold(
        address indexed seller,
        address indexed buyer,
        address indexed nft,
        uint256 tokenId,
        uint256 quantity,
        address payToken,
        uint256 pricePerItem
    );

    event ItemUpdated(
        address indexed owner,
        address indexed nft,
        uint256 tokenId,
        address payToken,
        uint256 newPrice
    );

    event ItemCanceled(
        address indexed owner,
        address indexed nft,
        uint256 tokenId
    );

    event OfferCreated(
        address indexed creator,
        address indexed nft,
        uint256 tokenId,
        uint256 quantity,
        address payToken,
        uint256 pricePerItem,
        uint256 deadline
    );

    event OfferCanceled(
        address indexed creator,
        address indexed nft,
        uint256 tokenId
    );

    event UpdatePlatformFee(uint24 platformFee);

    event UpdateTokenRegistry(address tokenRegistry);

    event UpdateTreasuryAddress(address treasuryAddress);

    struct Listing {
        uint256 tokenId;
        uint256 quantity;
        address payToken;
        uint256 pricePerItem;
        uint256 startingTime;
        address contractAddress;
        address owner;
        uint256 internalIndex;
    }

    /// @notice Structure for offer
    struct Offer {
        address offerer;
        IERC20 payToken;
        uint256 quantity;
        uint256 pricePerItem;
        uint256 deadline;
    }

    bytes4 private constant INTERFACE_ID_ERC721 = 0x80ac58cd;
    bytes4 private constant INTERFACE_ID_ERC1155 = 0xd9b67a26;
//    bytes4 private constant _ERC721_RECEIVED = 0x150b7a02;
    
    /// @notice Listing owner -> Array of Listing items
    mapping(address => Listing[]) addressListings;

    Listing[] listings;

    uint32[] internal emptyIndexesInListings;

    /// @notice NftAddress -> Token ID -> Offers
    mapping(address => mapping(uint256 => Offer[])) public offers;

    /// @notice Platform fee (will be saved in the % * 1000 form, e.g. 2.755% = 2755)
    uint24 public platformFee;

    /// @notice Platform fee receipient
    address payable public treasuryAddress;

    /// @notice Token registry
    ITokenRegistry public tokenRegistryAddress;

    modifier offerNotExists(
        address _nftAddress,
        uint256 _tokenId,
        address _creator
    ) {
        for(uint i=0; i < offers[_nftAddress][_tokenId].length; i++){
            if(offers[_nftAddress][_tokenId][i].offerer == _creator){
                Offer memory offer = offers[_nftAddress][_tokenId][i];        
                require(
                    offer.quantity == 0 || offer.deadline <= block.timestamp,
                    "offer already created"
                );                
            }            
        }
        _;
    }

    /// @notice Contract initializer
    function initialize(
        address payable _treasuryAddress, 
        uint24 _platformFee
    ) public initializer {
        platformFee = _platformFee;
        treasuryAddress = _treasuryAddress;

        // !!! Check if others needed for example address registry, tokenRegistry
        __Ownable_init();
        __ReentrancyGuard_init();
        __Pausable_init();
    }

    /// @notice Method for listing NFT
    /// @param _nftAddress Address of NFT contract
    /// @param _tokenId Token ID of NFT
    /// @param _quantity token amount to list (needed for ERC-1155 NFTs, set as 1 for ERC-721)
    /// @param _payToken Paying token
    /// @param _pricePerItem sale price for each iteam
    /// @param _startingTime scheduling for a future sale, time in seconds
    function listItem(
        address _nftAddress,
        uint256 _tokenId,
        uint256 _quantity,
        address _payToken,
        uint256 _pricePerItem,
        uint256 _startingTime
    ) external nonReentrant whenNotPaused {
        
        require(_quantity > 0, "invalid quantity");
        uint256 nftType = tokenRegistryAddress.allowedNFTs(_nftAddress);

        if (nftType == 721) {
            IERC721 nft = IERC721(_nftAddress);
            require(nft.ownerOf(_tokenId) == _msgSender(), "not owning item");
            require(
                nft.isApprovedForAll(_msgSender(), address(this)),
                "item not approved"
            );
        } else if (nftType == 1155) {
            IERC1155 nft = IERC1155(_nftAddress);
            require(
                nft.balanceOf(_msgSender(), _tokenId) >= _quantity,
                "must hold enough nfts"
            );
            require(
                nft.isApprovedForAll(_msgSender(), address(this)),
                "item not approved"
            );
        } else {
            revert("invalid nft address");
        }

        _validPayToken(_payToken);

        Listing memory _listing = Listing({
            tokenId: _tokenId,
            quantity: _quantity,
            payToken: _payToken,
            pricePerItem: _pricePerItem,
            startingTime: _startingTime,
            contractAddress: _nftAddress,
            owner: _msgSender(),
            internalIndex: 0
        });

        _addListing(_listing);

        emit ItemListed(
            _msgSender(),
            _nftAddress,
            _tokenId,
            _quantity,
            _payToken,
            _pricePerItem,
            _startingTime
        );
    }

    /// @notice Method for cancelling listed NFT
    /// @param _nftAddress Address of NFT contract
    /// @param _tokenId Token ID of NFT
    function cancelListing(
        address _nftAddress, 
        uint256 _tokenId 
    ) external nonReentrant whenNotPaused {
        (, bool found) = _removeListing(_nftAddress, _tokenId, _msgSender());
        require(found == true, "item not found");        
        emit ItemCanceled(_msgSender(), _nftAddress, _tokenId);
    }

    /// @notice Method for updating listed NFT
    /// @param _nftAddress Address of NFT contract
    /// @param _tokenId Token ID of NFT
    /// @param _newPayToken payment token
    /// @param _newPrice New sale price for each iteam
    /// @param _newQuantity New quantity for sale
    function updateListing(
        address _nftAddress,
        uint256 _tokenId,
        address _newPayToken,
        uint256 _newPrice,
        uint256 _newQuantity
    ) external nonReentrant whenNotPaused {

        require(_newQuantity > 0, "invalid quantity");
        _validPayToken(_newPayToken);

        Listing[] storage _ownersListings = addressListings[_msgSender()];
        require(_ownersListings.length > 0, "item not found");
        bool found = false;
        for(uint256 i =0; i < _ownersListings.length; i++) {

            if (_ownersListings[i].tokenId == _tokenId && _ownersListings[i].contractAddress == _nftAddress) {
                
                _ownersListings[i].payToken = _newPayToken;
                _ownersListings[i].pricePerItem = _newPrice;
                _ownersListings[i].quantity = _newQuantity;
                uint internalIndex = _ownersListings[i].internalIndex;
                // Updating an array
                listings[internalIndex].payToken = _newPayToken;
                listings[internalIndex].pricePerItem = _newPrice;
                listings[internalIndex].quantity = _newQuantity;
                found = true;
                break;
            }
        }
        require(found == true, "item not found");

        emit ItemUpdated(
            _msgSender(),
            _nftAddress,
            _tokenId,
            _newPayToken,
            _newPrice
        );
    }

    /// @notice Method for buying listed NFT
    /// @param _nftAddress NFT contract address
    /// @param _tokenId TokenId
    /// @param _payToken payment token
    /// @param _owner owner of the listed NFT        
    function buyItem(
        address _nftAddress,
        uint256 _tokenId,
        address _payToken,
        address _owner
    )
        external
        nonReentrant
        whenNotPaused
    {
        (Listing memory _listing, bool found) = _removeListing(_nftAddress, _tokenId, _owner);
        require(found == true, "item not found");        
        require(_listing.payToken == _payToken, "invalid pay token");
        require(block.timestamp >= _listing.startingTime, "item not buyable");

        _validOwner(_listing.contractAddress, _listing.tokenId, _listing.owner, _listing.quantity);

        _buyItem(_listing);
    }

    /// @notice Method for offering item
    /// @param _nftAddress NFT contract address
    /// @param _tokenId TokenId
    /// @param _payToken Paying token
    /// @param _quantity Quantity of items
    /// @param _pricePerItem Price per item
    /// @param _deadline Offer expiration time, in seconds
    function createOffer(
        address _nftAddress,
        uint256 _tokenId,
        IERC20 _payToken,
        uint256 _quantity,
        uint256 _pricePerItem,
        uint256 _deadline
    ) external nonReentrant whenNotPaused offerNotExists(_nftAddress, _tokenId, _msgSender()) {

        require(tokenRegistryAddress.allowedNFTs(_nftAddress) != 0, "invalid nft address");
        require(_deadline > block.timestamp, "invalid expiration");

        _validPayToken(address(_payToken));

        offers[_nftAddress][_tokenId].push(Offer(
            _msgSender(),
            _payToken,
            _quantity,
            _pricePerItem,
            _deadline
        ));

        emit OfferCreated(
            _msgSender(),
            _nftAddress,
            _tokenId,
            _quantity,
            address(_payToken),
            _pricePerItem,
            _deadline
        );
    }

    /// @notice Method for canceling the offer
    /// @param _nftAddress NFT contract address
    /// @param _tokenId TokenId
    function cancelOffer(address _nftAddress, uint256 _tokenId) external whenNotPaused {
        bool exists = false;        
        for(uint i=0; i < offers[_nftAddress][_tokenId].length; i++){
            if(offers[_nftAddress][_tokenId][i].offerer == _msgSender()){
                delete (offers[_nftAddress][_tokenId][i]);
                exists = true;
            }
        }
        require(exists == true, "no such offer");
        emit OfferCanceled(_msgSender(), _nftAddress, _tokenId);
    }

    /// @notice Method for accepting the offer
    /// @param _nftAddress NFT contract address
    /// @param _tokenId TokenId
    /// @param _creator Offer creator address
    function acceptOffer(
        address _nftAddress,
        uint256 _tokenId,
        address _creator
    ) external nonReentrant whenNotPaused {

        Offer memory offer;
        for(uint i=0; i < offers[_nftAddress][_tokenId].length; i++){
            if(offers[_nftAddress][_tokenId][i].offerer == _creator){
                offer = offers[_nftAddress][_tokenId][i];        
                require(
                    offer.quantity > 0 && offer.deadline > block.timestamp,
                    "no such offer or expired"
                );            
            }            
        }
        require(offer.quantity > 0 && offer.deadline > block.timestamp, "no such offer");

