        address _nftAddress,
        uint256 _tokenId,
        address _owner,
        uint256 quantity
    ) internal {
        uint256 nftType = tokenRegistryAddress.allowedNFTs(_nftAddress);
        if (nftType == 721) {
            IERC721 nft = IERC721(_nftAddress);
            require(nft.ownerOf(_tokenId) == _owner, "not owner");
        } else if ( nftType == 1155) {
            IERC1155 nft = IERC1155(_nftAddress);
            require(nft.balanceOf(_owner, _tokenId) >= quantity, "not owner");
        } else {
            revert("invalid nft address");
        }
    }

    function _addListing(Listing memory _listing) private {
        Listing[] memory _ownerListings = addressListings[_msgSender()];

        for(uint256 i = 0; i < _ownerListings.length; i++) {
            Listing memory _l = _ownerListings[i];
            if(_l.contractAddress == _listing.contractAddress){
                require (_l.tokenId != _listing.tokenId ,"already listed"); 
            }
        }
        if(emptyIndexesInListings.length > 0){
            uint emptyIndex = uint(emptyIndexesInListings[emptyIndexesInListings.length-1]);
            listings[emptyIndex] = _listing;
            emptyIndexesInListings.pop();
            _listing.internalIndex = emptyIndex;
        } else {
            listings.push(_listing);
            _listing.internalIndex = listings.length-1;
        }
        addressListings[_msgSender()].push(_listing);
    }

    function _removeListing(
        address _contract, 
        uint256 _tokenId, 
        address _owner
    ) private returns(Listing memory, bool found) {

        Listing[] storage _ownersListings = addressListings[_owner];
        found = false;
        Listing memory _listing;
        if(_ownersListings.length <= 0){
            return (_listing,found);
        }
        for(uint256 i =0; i < _ownersListings.length; i++) {
            _listing = _ownersListings[i];

            if (_listing.tokenId == _tokenId && _listing.contractAddress == _contract) {
                // Removing from mapping
                uint mapLength = _ownersListings.length;
                if(mapLength > 1){
                    _ownersListings[i] = _ownersListings[mapLength-1];
                }
                _ownersListings.pop();

                // Removing from an array
                delete(listings[_listing.internalIndex]);
                emptyIndexesInListings.push(uint32(_listing.internalIndex));
                found = true;
                break;
            }
        }

        return(_listing, found);
    }

    function _buyItem(Listing memory _listing) private {
       
        uint256 price = _listing.pricePerItem.mul(_listing.quantity);
        require(IERC20(_listing.payToken).balanceOf(_msgSender()) >= price, "Not enough amount to buy");

        uint256 feeAmount = price.mul(platformFee).div(100000);

        require(IERC20(_listing.payToken).transferFrom(_msgSender(), address(this), price));
        IERC20(_listing.payToken).approve(treasuryAddress, feeAmount);
        ITokenPaymentSplitter(treasuryAddress).split(_listing.payToken, _listing.owner, feeAmount);
        
        IERC20(_listing.payToken).safeTransfer(
            _listing.owner,
            price.sub(feeAmount)
        );

        // Transfer NFT to buyer
        if (IERC165(_listing.contractAddress).supportsInterface(INTERFACE_ID_ERC721)) {
            IERC721(_listing.contractAddress).safeTransferFrom(
                _listing.owner,
                _msgSender(),
                _listing.tokenId
            );
        } else {
            IERC1155(_listing.contractAddress).safeTransferFrom(
                _listing.owner,
                _msgSender(),
                _listing.tokenId,
                _listing.quantity,
                bytes("")
            );
        }

        emit ItemSold(
            _listing.owner,
            _msgSender(),
            _listing.contractAddress,
            _listing.tokenId,
            _listing.quantity,
            _listing.payToken,
            _listing.pricePerItem
        );
    }
