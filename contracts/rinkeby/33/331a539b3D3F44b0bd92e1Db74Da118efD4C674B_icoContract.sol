abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}

abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(
        address indexed previousOwner,
        address indexed newOwner
    );

    /**
     * @dev Initializes the contract setting the deployer as the initial owner.
     */
    constructor() {
        _transferOwnership(_msgSender());
    }

    /**
     * @dev Returns the address of the current owner.
     */
    function owner() public view virtual returns (address) {
        return _owner;
    }

    /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwner() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        _transferOwnership(address(0));
    }

    /**
     * @dev Transfers ownership of the contract to a new account (`newOwner`).
     * Can only be called by the current owner.
     */
    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(
            newOwner != address(0),
            "Ownable: new owner is the zero address"
        );
        _transferOwnership(newOwner);
    }

    /**
     * @dev Transfers ownership of the contract to a new account (`newOwner`).
     * Internal function without access restriction.
     */
    function _transferOwnership(address newOwner) internal virtual {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}

contract icoContract is Ownable {
    using SafeMath for uint256;
    //declaring  state variables
    uint256 public usdcRate;
    uint256 public avaxRate;
    uint256 public precision;
    // uint256 public tokenBalance;
    IERC20 public token;
    IERC20 public usdcToken;

    // events
    event BoughtWithUSDC(
        address indexed buyer,
        uint256 receivedAmount,
        uint256 issuedTokens,
        uint256 rate
    );
    event BoughtWithAVAX(
        address indexed buyer,
        uint256 receivedAmount,
        uint256 issuedTokens,
        uint256 rate
    );
    event TokenDeposited(
        address tokenAddress,
        address depositor,
        uint256 amount
    );
    event UsdcWithdrawn(address receiver, uint256 amount);
    event AvaxWithdrawn(address receiver, uint256 amount);

    constructor(
        address _tokenaddress,
        address _usdcAddress,
        uint256 _usdcCRate,
        uint256 _avaxRate
    ) {
        token = IERC20(_tokenaddress);
        usdcToken = IERC20(_usdcAddress);
        usdcRate = _usdcCRate;
        avaxRate = _avaxRate;
        precision = 1000;
    }

    function tokenBalance() public view returns (uint256 _balance) {
        _balance = token.balanceOf(address(this));
    }

    function depositToken(uint256 amount) public {
        token.transferFrom(msg.sender, address(this), amount);
        // tokenBalance = tokenBalance.add(amount);
    }

    /*
    receive avax and transfer the token
    */
    function buyWithUsdc(uint256 usdcAmount) public {
        address buyer = msg.sender;
        require(usdcAmount > 0, "USDC cannot be zero");
        uint256 transferableamount = usdcAmount.mul(usdcRate).div(precision);
        usdcToken.transferFrom(buyer, address(this), usdcAmount); // fetch usdc
        token.transfer(buyer, transferableamount); // send tokens
        // tokenBalance.sub(transferableamount);
        emit BoughtWithUSDC(buyer, usdcAmount, transferableamount, usdcRate);
    }

    /*
    receive avax and transfer the token
    */
    function buyWithAvax() public payable {
        address buyer = msg.sender;
        uint256 avaxAmount = msg.value;
        //require(avaxAmount==msg.value,"avax value mismatch");
        require(avaxAmount > 0, "AVax cannot be zero");
        uint256 transferableamount = avaxAmount.mul(avaxRate).div(precision);
        token.transfer(buyer, transferableamount);
        // tokenBalance.sub(transferableamount);
        emit BoughtWithAVAX(buyer, avaxAmount, transferableamount, avaxRate);
    }

    function withdrawUSDC(uint256 amount) public onlyOwner {
        uint256 balance = usdcToken.balanceOf(address(this));
        address receiver = msg.sender;
        require(
            balance >= amount,
            "ICCOContract:Not enough balance to withdraw"
        );
        usdcToken.transfer(receiver, amount);

        emit UsdcWithdrawn(receiver, amount);
    }

    function withdrawTokens(uint256 amount) public onlyOwner {
        uint256 balance = token.balanceOf(address(this));
        address receiver = msg.sender;
        require(
            balance >= amount,
            "ICCOContract:Not enough balance to withdraw"
        );
        token.transfer(receiver, amount);
        // tokenBalance.sub(amount);
        emit UsdcWithdrawn(receiver, amount);
    }

    // testing purpose
    function avaxBalance() public view returns (uint256 _balance) {
        _balance = payable(address(this)).balance;
    }

    function withdrawAvax(uint256 amount) public onlyOwner {
        address payable receiver = payable(msg.sender);
        uint256 balance = payable(address(this)).balance;
        require(
            balance >= amount,
            "ICCOContract:Not enough balance to withdraw"
        );
        receiver.transfer(amount);
        emit AvaxWithdrawn(receiver, amount);
    }

    function updateRates(uint256 _usdcCRate, uint256 _avaxRate)
        public
        onlyOwner
    {
        usdcRate = _usdcCRate;
        avaxRate = _avaxRate;
    }

    function updateUsdcAddress(address _usdcAddress) public onlyOwner {
        usdcToken = IERC20(_usdcAddress);
    }
}