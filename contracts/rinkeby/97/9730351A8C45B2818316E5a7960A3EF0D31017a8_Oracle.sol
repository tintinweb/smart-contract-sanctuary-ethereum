pragma solidity ^0.8.0;


import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import '@openzeppelin/contracts/utils/Address.sol';


contract Oracle is Ownable, ReentrancyGuard{
    using ECDSA for bytes32;
    using SafeMath for  uint;
      using Address for address;
    address mainCollection;
    address cosmetics;
   

    address regenAuthorizer = 0xC95DBB35c338F05e35EF45B014b2EaB8cfbea78B;

    address multiSig;

    uint256 public currentSeason = 1;
    uint256 public exp_rate_divisor = 82;

    struct  avatar {
        int timesRegenerated;
        uint256[] equipped;
        mapping(uint256 => characterSeasonStats) stats;
        uint256  exp_rate_divisor;
     
    }

    struct characterSeasonStats{
        uint256 exp_earned;
        uint256 level;
        uint256 stake_time_started;
        bool isStaked;

    }
    

  


    //Stores Info About An Avatar
    mapping(uint256 =>  avatar) public avatarInfo;
    //Stores state for cosmetics: While they are equipped, they must be locked
    mapping(uint256=> bool) public cosmeticsLocked;
    //Safeguard to check which cosmetic is assigned to which character
    mapping(uint256 => uint256) public characterOfCosmetic;
    //tracker to see how many times someone has regenerated
    mapping(address=>uint256) public timesRegenerated;

    //

    mapping(uint256 => bool) public isStaked;





    

    constructor(){

    }
    modifier checkOwner(uint256 avatarId,uint256[] calldata cosmeticIds){
        require(_msgSender() == ITranshumansAvatars(mainCollection).ownerOf(avatarId),"You Don't Own This Avatar");
        for(uint256 i; i<cosmeticIds.length;i++){
            require(_msgSender() == ITranshumansCosmetics(cosmetics).ownerOf(cosmeticIds[i]),"You Don't Own This Cosmetic");
        }
        _;
    }

    modifier onlyMultiSig() {
        require(_msgSender() == multiSig,"Not Multi-Sig");
        _;
    }

    modifier checkAvatarOwner(uint256 avatarId)  {
        require(_msgSender() == ITranshumansAvatars(mainCollection).ownerOf(avatarId),"You Don't Own This Avatar");
        _;
    }


        modifier onlyAvatarContract(){
        require(_msgSender() == mainCollection,"You Don't Have Permission");
        _;
    }


    //EVENTS

    event Regenerate(uint256 avatarId, uint256[]  cosmeticIds);


    //SETTERS
    function setMainCollection(address _address) public onlyOwner{
        mainCollection = _address;
    }

    function setCosmetics(address _address) public onlyOwner{
        cosmetics = _address;
    }

    function unlockCosmetic(uint256 cosmeticId) public onlyAvatarContract {
       delete cosmeticsLocked[cosmeticId];
    }




    //STAKE FUNCTIONS
  function startStake(uint256 avatarId) external checkAvatarOwner(avatarId)  {
      require(!avatarInfo[avatarId].stats[currentSeason].isStaked,"Character is Currently Staking");
        avatarInfo[avatarId].exp_rate_divisor = exp_rate_divisor;
     avatarInfo[avatarId].stats[currentSeason].isStaked = true;
     avatarInfo[avatarId].stats[currentSeason].stake_time_started = block.timestamp;

  }
  function endStake(uint256 avatarId) external checkAvatarOwner(avatarId) {
    require(avatarInfo[avatarId].stats[currentSeason].isStaked,"Character is Currently Staking");

    avatarInfo[avatarId].stats[currentSeason].exp_earned += calculate_exp_to_give(avatarId);
    delete avatarInfo[avatarId].stats[currentSeason].isStaked;

//STAKE HELPERS
  }

  function calculate_exp_to_give(uint256 avatarId)  internal view returns(uint256){
    if(!avatarInfo[avatarId].stats[currentSeason].isStaked){
        return 0;
    }
    uint256 time_started_stake =   avatarInfo[avatarId].stats[currentSeason].stake_time_started;
    uint256 time_difference = block.timestamp - time_started_stake;
    uint256 exp_to_give = time_difference.div(avatarInfo[avatarId].exp_rate_divisor);
      return  exp_to_give;
  }

  function get_Exp_Earned_In_Season(uint256 avatarId) external view returns(uint256){
      uint256 exp_earned = avatarInfo[avatarId].stats[currentSeason].exp_earned;
      uint256 exp_to_add = calculate_exp_to_give(avatarId);
    
    return exp_earned.add(exp_to_add);

  }
  //END ------------------ STAKE

  function getStakeStatus(uint256 avatarId) public view returns(bool){
      return   avatarInfo[avatarId].stats[currentSeason].isStaked;
  }

  function setSeason(uint256 new_season) external onlyOwner{
      currentSeason = new_season;
  }

  function set_xp_divisor(uint256 _divisor) external onlyOwner{
      exp_rate_divisor = _divisor;
  }

  function getCharacterSeasonStats(uint256 avatarId) external view returns(characterSeasonStats memory){
     return avatarInfo[avatarId].stats[currentSeason];
  }

    function regenerateAvatar(uint256 avatarId, uint256[] calldata cosmeticIds) external
    nonReentrant 
    checkOwner(avatarId,cosmeticIds)
    onlyMultiSig
     returns(bool){
     
     /* REMEMBER TO CHANGE THE AUTH PROCEESS @SIMON*/
        require(!isStaked[avatarId],"Character is Staked");

        //Unequip Previous Items    
        uint256[] memory previousItems = avatarInfo[avatarId].equipped;
        if(previousItems.length>0)
        {
            for(uint256 i; i<previousItems.length;i++){
                
                delete cosmeticsLocked[previousItems[i]];
            }
        }
        //Equip New Items
        avatarInfo[avatarId].equipped = cosmeticIds;
        for(uint256 i; i< cosmeticIds.length;i++){
            cosmeticsLocked[cosmeticIds[i]] = true;
            characterOfCosmetic[cosmeticIds[i]] = avatarId;
        }
        timesRegenerated[_msgSender()]++;

        
        emit Regenerate(avatarId,cosmeticIds);
        return true;
    }




   
    function unlockCosmeticsArray(uint256 avatarId) public onlyAvatarContract{
        // uint256[] memory _cosmeticIds = cosmeticIds;
        uint256[] memory _cosmeticIds = avatarInfo[avatarId].equipped;
        for(uint256 i; i<_cosmeticIds.length;i++){
            delete cosmeticsLocked[_cosmeticIds[i]];
        }
    }

    function lockCosmeticsArray(uint256 avatarId) public onlyAvatarContract{
        uint256[] memory _cosmeticIds = avatarInfo[avatarId].equipped;
            for(uint256 i; i<_cosmeticIds.length;i++){
            cosmeticsLocked[_cosmeticIds[i]] = true;
        }
    }

    function emergencyUnlock(uint256 tokenId) public onlyOwner{
        delete cosmeticsLocked[tokenId];
    }


    
    
  
  

    //GETTERS
    function getAvatarOwner(uint256 avatarId) public view returns(address) {
        return ITranshumansAvatars(mainCollection).ownerOf(avatarId);
    }

    function getCosmeticOwner(uint256 avatarId) public view returns(address) {
        return ITranshumansCosmetics(cosmetics).ownerOf(avatarId);
    }

   function getCosmeticStatus(uint256 cosmeticId) public view  returns(bool){
       bool isLocked = cosmeticsLocked[cosmeticId];
        return isLocked;
    }

    function getAvatarEquipped(uint256 avatarId) public view returns(uint256[] memory){
        return avatarInfo[avatarId].equipped;
    }

    function getTimesRegenerated(address _address) external view returns(uint256) {
        return timesRegenerated[_address];
    }





}



interface ITranshumansAvatars{

       function ownerOf(uint256 tokenId) external view returns (address owner); 

    
}

interface ITranshumansCosmetics{

       function ownerOf(uint256 tokenId) external view returns (address owner);


}

