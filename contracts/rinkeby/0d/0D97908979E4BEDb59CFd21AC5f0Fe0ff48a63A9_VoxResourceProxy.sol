pragma solidity ^0.8.9;
import "./IVoxResourcePacks.sol";

contract VoxResourceProxy {
    address public packsAddress;

    event ResourceBurned(
        address indexed _from,
        uint256 indexed _id,
        uint256 _amount,
        string _idType,
        string userId,
        string uri
    );

    constructor(address _packsAddress) {
        packsAddress = _packsAddress;
    }

    /**
     * @dev Burns a resource pack
     * @param _id The id of the resource pack
     * @param _amount The amount of the resource pack
     * @param _idType The type of userId (e.g. "discord")
     * @param _userId The id of the user
     * @param _uri The uri of the resource pack metadata
     */
    function burn(
        address _from,
        uint256[] memory _id,
        uint256[] memory _amount,
        string memory _idType,
        string memory _userId,
        string memory _uri
    ) external {
        uint256[] memory id = new uint256[](_id.length);
        uint256[] memory amount = new uint256[](_id.length);

        for (uint256 i = 0; i < _id.length; i++) {
            id[0] = _id[i];
            amount[0] = _amount[i];
            IVoxResourcePacks(packsAddress).burn(_from, id, amount);
            emit ResourceBurned(
                _from,
                _id[i],
                _amount[i],
                _idType,
                _userId,
                _uri
            );
        }
    }

    /**
     * @dev Sets the Resource Pack Contract address.
     * @param _packsAddress The address of the Resource Pack Contract
     */
    function setPacksAddress(address _packsAddress) external {
        packsAddress = _packsAddress;
    }
}

