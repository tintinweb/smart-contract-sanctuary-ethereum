contract SmcPool is Ownable, Pausable, ReentrancyGuard{
    using SafeMath for uint256;
    address public adminAddress;
    address public operatorAddress;
    address private tokensAddress;

    event NewAdminAddress(address admin);
    event NewOperatorAddress(address operator);
    event AddNewLedger(address indexed Address, uint256 amount, uint256 unlockDate);
    event ClaimToken(address indexed sender, uint256 amount);
    event TokenRecovery(address indexed token, uint256 amount);

    struct AmountLock {
        uint256 unlockTime;
        uint256 amount;
        bool isClaimed;

    }
  
    mapping(address => AmountLock[] ) public ledgers;


    constructor(address _tokensAddress){
        adminAddress = msg.sender;
        tokensAddress = _tokensAddress;
    }
    

    function AddLedger(address _address,uint256 _amount, uint256 _unlockDate) private onlyAdminOrOperator nonReentrant{
        ledgers[_address].push(AmountLock(_unlockDate,_amount*10**18,false));
        emit AddNewLedger(_address,_amount,_unlockDate);
    }

    function AddMultiLedgers(address[] calldata _address,uint256[] calldata _amount, uint256[] calldata _unlockDate) external onlyAdminOrOperator {
        
        require((_address.length == _amount.length) && (_amount.length ==_unlockDate.length) , "Invalid parameters Input length");

        for(uint8 i = 0; i < _address.length ; i++ ){
             AddLedger(_address[i],_amount[i], _unlockDate[i]);

        }
        
    }

    function ledgerLength(address _address) external view returns (uint){
        return ledgers[_address].length;
    }

    function checkClaimAbleTokens() public view returns  (uint256){
        uint256 claimable = 0;
        for(uint i = 0; i < ledgers[msg.sender].length ; i++){
            AmountLock memory acc = ledgers[msg.sender][i];
            if ((acc.unlockTime <= block.timestamp) && !acc.isClaimed){
                claimable = claimable + acc.amount;
            }
        }
        return claimable;
    }

    function checkClaimedTokens() public view returns  (uint256){
        uint256 claimed = 0;
        for(uint i = 0; i < ledgers[msg.sender].length ; i++){
            AmountLock memory acc = ledgers[msg.sender][i];
            if (acc.isClaimed){
                claimed = claimed + acc.amount;
            }
        }
        return claimed;
    }

        function checkLockedTokens() public view returns  (uint256){
        uint256 lockToken = 0;
        for(uint i = 0; i < ledgers[msg.sender].length ; i++){
            AmountLock memory acc = ledgers[msg.sender][i];
            if (acc.unlockTime >= block.timestamp){
                lockToken = lockToken + acc.amount;
            }
        }
        return lockToken;
    }

        function checkUnLockedTokens() public view returns  (uint256){
        uint256 unlockToken = 0;
        for(uint i = 0; i < ledgers[msg.sender].length ; i++){
            AmountLock memory acc = ledgers[msg.sender][i];
            if (acc.unlockTime < block.timestamp){
                unlockToken = unlockToken + acc.amount;
            }
        }
        return unlockToken;
    }

    function getBlockTimeStamp() external view returns (uint256){
        return block.timestamp;
    }


    function claimAvaliableSMC() external nonReentrant {
        uint256 _amount = 0;
        for(uint i = 0; i < ledgers[msg.sender].length ; i++){
            AmountLock memory acc = ledgers[msg.sender][i];
            if ((acc.unlockTime <= block.timestamp) && !acc.isClaimed){
                ledgers[msg.sender][i].isClaimed = true;
                _amount = _amount + acc.amount;
            }
        }
        IERC20(tokensAddress).transfer(address(msg.sender), _amount);
        emit ClaimToken(msg.sender,_amount);
    }

    function recoverToken(address _token, uint256 _amount) external onlyAdmin {
        IERC20(_token).transfer(address(msg.sender), _amount);

        emit TokenRecovery(_token, _amount);
    }
    
    modifier onlyAdmin() {
        require(msg.sender == adminAddress, "Not admin");
        _;
    }

    modifier onlyOperator() {
        require(msg.sender == operatorAddress, "Not operator");
        _;
    }
    
    modifier onlyAdminOrOperator() {
        require(msg.sender == adminAddress || msg.sender == operatorAddress, "Not operator/admin");
        _;
    }

       /**
     * @notice Set operator address
     * @dev Callable by admin
     */
    function setOperator(address _operatorAddress) external onlyAdmin {
        require(_operatorAddress != address(0), "Cannot be zero address");
        operatorAddress = _operatorAddress;

        emit NewOperatorAddress(_operatorAddress);
    }

     /**
     * @notice Set admin address
     * @dev Callable by owner
     */
    function setAdmin(address _adminAddress) external onlyOwner {
        require(_adminAddress != address(0), "Cannot be zero address");
        adminAddress = _adminAddress;

        emit NewAdminAddress(_adminAddress);
    }

}