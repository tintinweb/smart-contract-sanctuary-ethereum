pragma solidity ^0.8.16;

import {ERC721} from "ERC721.sol";
import {Strings} from "Strings.sol";
import "Helpers.sol";
import "Errors.sol";


interface IERC721 {
    function ownerOf(uint tokenId) external view returns (address);
}

contract NFTPass is ERC721 {

    /// @notice The last token id that dutch auction minters will receive, inclusive
    uint public immutable maxSupply = 500;

    // Base token and contract URI
    string private baseTokenURI;


    /// @notice The address which can admin mint for free, set merkle roots, and set auction params
    address public Owner;

    constructor(
        string memory _baseTokenURI,
        string memory _name,
        string memory _symbol
    ) ERC721(_name, _symbol) {

        baseTokenURI = _baseTokenURI;
        Owner = msg.sender;
    }

    function _baseURI() internal view virtual returns (string memory) {
        return baseTokenURI;
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override
        returns (string memory)
    {
        if (ownerOf(tokenId) == address(0)) revert Errors.TokenDoesNotExist();

        string memory baseURI = _baseURI();
        return
            bytes(baseURI).length > 0
                ? string(
                    abi.encodePacked(baseURI, Helpers.uint2string(tokenId))
                )
                : "";
    }

}

