pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract PreSale {
    using SafeMath for uint256;

    mapping(address => uint256) public sales;

    uint256 public end;
    uint256 public duration = 604800;
    uint256 public price = 13;
    //@dev min and max purchase in USDT
    uint256 public minPurchase = 10;
    uint256 public maxPurchase = 5000;

    uint256 public availableTokens;

    uint256 receivedUSDT;
    uint256 availableUSDT = receivedUSDT - withdrawnUSDT;
    uint256 withdrawnUSDT;

    address public admin;

    IERC20 USDT = IERC20(0x3B00Ef435fA4FcFF5C209a37d1f3dcff37c705aD);
    IERC20 SLN = IERC20(0xE1853c34238C1EdB02F4ADDc8aDDA0E6CF77Ea87);

    constructor() {
        admin = msg.sender;
    }

    // @dev to start the preSale we call the function
    function start() external onlyAdmin preSaleNotActive {
        end = block.timestamp + duration;
    }

    function buy(uint256 UsdtAmount) external preSaleActive {
        require(
            UsdtAmount > minPurchase && UsdtAmount <= maxPurchase,
            "The user needs to buy between min and maxPurchase"
        );
        uint256 tokenAmount = UsdtAmount.div(price);
        require(tokenAmount <= availableTokens);
        USDT.transferFrom(msg.sender, address(this), UsdtAmount);
        sales[msg.sender] = sales[msg.sender] + tokenAmount;
        availableTokens = availableTokens - tokenAmount;
        SLN.transferFrom(address(this), msg.sender, tokenAmount);
    }

    //@dev supply SLN tokens to contract
    function InitialSupplyToken(uint256 _SLNSupply)
        external
        onlyAdmin
        preSaleActive
    {
        availableTokens = availableTokens + _SLNSupply;
        SLN.transferFrom(msg.sender, address(this), _SLNSupply);
    }

    function withdrawUSDT(uint256 USDTAmount) external onlyAdmin {
        require(
            USDTAmount < availableUSDT,
            "USDT amount is greater than availableUSDT in the contract"
        );
        withdrawnUSDT = withdrawnUSDT + USDTAmount;
        USDT.transferFrom(address(this), admin, USDTAmount);
    }

    function withdrawSLN(uint256 _SLNToken) external onlyAdmin {
        SLN.transferFrom(address(this), admin, _SLNToken); //can we do address(this).balance
    }

    //@dev calling the functions
    function totalReceivedTokens() external view returns (uint256) {
        return receivedUSDT;
    }

    function withdrawnUSDTfromContract() external view returns (uint256) {
        return withdrawnUSDT;
    }

    function availableUSDTInTheContract() external view returns (uint256) {
        return availableUSDT;
    }

    // available SLN tokens call

    function availableSLNTokens() external view returns (uint256) {
        return availableTokens;
    }

    //modifiers
    modifier onlyAdmin() {
        require(msg.sender == admin, "only Admin can call this function");
        _;
    }
    modifier preSaleActive() {
        require(end > 0 && block.timestamp < end && availableTokens > 0);
        _;
    }

    modifier preSaleNotActive() {
        require(end == 0, "PreSale should not be active");
        _;
    }
    modifier icoEnded() {
        require(
            end > 0 && (block.timestamp >= end || availableTokens == 0),
            "preSale might have ended"
        );
        _;
    }
}

