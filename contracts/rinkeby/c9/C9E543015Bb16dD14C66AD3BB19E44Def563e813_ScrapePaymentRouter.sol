pragma solidity ^0.8.4;
pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/metatx/ERC2771Context.sol";
contract ScrapePaymentRouter is ERC2771Context{

    address payable router;

    constructor (address _trustedForwarder, address payable _router) ERC2771Context(_trustedForwarder){
        router = _router;
    }
    
    function sendErc(address _to, address _tokenAddress, uint _amount) public returns(bool sent){
        require(_tokenAddress != address(0),"token Address cannot be address zero(0)");
        require(IERC20(_tokenAddress).balanceOf(_msgSender()) >= _amount, "Not enough token");
        IERC20(_tokenAddress).transfer(_to, _amount);
        sent = true;
        return sent;
    }

    function checkBalance(address _tokenAddress, address _addr) public view returns(uint){
        return IERC20(_tokenAddress).balanceOf(_addr);
    }

    function withdrewETH() public {
        (bool os, ) = payable(router).call{value: address(this).balance}("");
        require(os);
    }
}

