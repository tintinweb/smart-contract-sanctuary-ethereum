pragma solidity ^0.8.0;



contract ConvertContract is Ownable{
    uint256 public fees;

    mapping(address => mapping(address=> uint256)) public listOfTokenConvertRatio;

    constructor(uint256 _fees) {
        fees = _fees;
    }

    function setRate(address token0, address token1,uint256 _rate) public onlyOwner {
        listOfTokenConvertRatio[token0][token1] = _rate;
    }

    function setFees(uint256 _Fees) public onlyOwner {
        fees = _Fees;
    }

    function claimToken0(address tokenAddress) public onlyOwner {
        IERC20(tokenAddress).transfer(msg.sender, IERC20(tokenAddress).balanceOf(address(this)));
    }

    function swapToken0ToToken1(address token0, address token1, uint256 amountToken0) public returns (uint256) {
        require(amountToken0 > 0, "amountToken0 must be greater then zero");

        require(
            IERC20(token0).balanceOf(msg.sender) >= amountToken0,
            "sender doesn't have enough Tokens"
        );

        require(listOfTokenConvertRatio[token0][token1] > 0,"rate of convert is not set yet");

        uint256 exchangeA = uint256(mul(amountToken0, listOfTokenConvertRatio[token0][token1]));
        uint256 exchangeAmount = exchangeA;

        if(fees > 0){
            exchangeAmount = exchangeAmount -
                uint256((mul(exchangeA, fees)) / 100);
            require(
                exchangeAmount > 0,
                "exchange Amount must be greater then zero"
            );
        }

        require(
            IERC20(token1).balanceOf(address(this)) > exchangeAmount,
            "currently the exchange doesnt have enough Token1, please retry later :=("
        );

        IERC20(token0).transferFrom(msg.sender, address(this), amountToken0);
        IERC20(token1).transfer(address(msg.sender),exchangeAmount);
        return exchangeAmount;
    }

    function mul(uint256 x, uint256 y) internal pure returns (uint256 z) {
        require(y == 0 || (z = x * y) / y == x, "ds-math-mul-overflow");
    }
}