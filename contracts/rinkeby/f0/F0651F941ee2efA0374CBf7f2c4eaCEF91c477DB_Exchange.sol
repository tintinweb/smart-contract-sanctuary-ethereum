import "./factory/IFactory.sol";
import "./ERC165Checker.sol";

contract ExchangeCore is EIP712, ERC165Check {
    using SafeMath for *;
    using ECDSA for bytes32;
    using SignatureChecker for address;

    uint256 constant public feeDenominator = 10000; // based on ERC2981 default denominator

    enum TradeDirection {
        Sell,
        Buy
    }

    enum TokenType {
        ERC721,
        ERC1155,
        IFactory
    }

    // Base struct for NFT Orders
    struct Order {
        TradeDirection direction;
        /* (required) Token standard type - ERC721, ERC1155 and Factory interfaces are supported */
        TokenType tokenType;
        /* (required) address of the maker or signer of the order, owner of token(s) */
        address maker;
        /* allowed taker of the order used for direct sales, if set to zero address - allows any taker */
        address taker;
        /* (required) address of the NFT contract */
        address nftAddress;
        /* (required) id of the NFT token */
        uint256 nftTokenId;
        /* amount of tokens to sell (required only if ERC1155) */
        uint128 nftAmount;
        /* ERC20 token address, if it is zero address use current network currency */
        address erc20Address;
        /* timestamp until the order expires */
        uint256 expireTime;
        /* minimal price is set for auction orders, if not specified - requires fulfill price to set */
        uint256 startPrice;
        /* price to imminent sale or maximum auction bid, tokens (native or ERC20) amount */
        uint256 fulfillPrice;
        /* fees */
        address[] feeRecipients;
        uint96[] feeAmounts;
    }

    bytes32 constant _ORDER_TYPEHASH = keccak256(
        "Order(TradeDirection direction,TokenType tokenType,address maker,address taker,address nftAddress,uint256 nftTokenId,uint256 nftAmount,address erc20Address,uint256 expireTime,unit256 startPrice,uint256 fulfillPrice,address[] feeRecipients,uint256[] feeAmounts)"
    );

    constructor() EIP712("MinimalForwarder", "0.0.1") {}

    function _hashOrder(Order memory order) internal pure returns (bytes32) {
        return keccak256(abi.encode(
                _ORDER_TYPEHASH,
                order.direction,
                order.tokenType,
                order.maker,
                order.taker,
                order.nftAddress,
                order.nftTokenId,
                order.nftAmount,
                order.expireTime,
                order.startPrice,
                order.fulfillPrice,
                order.feeRecipients,
                order.feeAmounts
            ));
    }

    function _hashToSign(bytes32 hash) internal view returns (bytes32) {
        return _hashTypedDataV4(hash);
    }

    function _validateSignature(address signer, bytes32 hash, bytes memory sig) internal view returns (bool) {
        return signer.isValidSignatureNow(hash.toEthSignedMessageHash(), sig);
    }

    /* Finalizers supply functions */

    // transfers funds
    function _transferOrderFunds(
        address from,
        address erc20Addr,
        uint256 transferAmount,
        address[] memory recipients,
        uint96[] memory amounts
    ) internal returns (bool) {
        if (erc20Addr == address(0)) {
            for (uint i = 0; i < recipients.length; i++) {
                address recipient = recipients[i];
                uint256 fee = amounts[i];
                uint256 denominator = SafeMath.div(msg.value, feeDenominator);
                uint256 feeValue = SafeMath.mul(denominator, fee);
                (bool success,) = recipient.call{value : feeValue}("");
                require(success, "Fee transfer failed");
            }
        } else {
            for (uint i = 0; i < recipients.length; i++) {
                address recipient = recipients[i];
                uint256 fee = amounts[i];
                uint256 denominator = SafeMath.div(transferAmount, feeDenominator);
                uint256 feeValue = SafeMath.mul(denominator, fee);
                IERC20(erc20Addr).transferFrom(from, recipient, feeValue);
            }
        }
        return true;
    }

    // transfers NFT assets to order taker
    function _transferOrderNFTs(
        TokenType tokenType,
        address nftAddress,
        uint256 nftTokenId,
        uint256 nftAmount,
        address from,
        address recipient
    ) internal returns (bool) {
        if (tokenType == TokenType.ERC721) {
            IERC721(nftAddress).safeTransferFrom(from, recipient, nftTokenId);
        } else if (tokenType == TokenType.ERC1155) {
            IERC1155(nftAddress).safeTransferFrom(from, recipient, nftTokenId, nftAmount, "");
        } else if (tokenType == TokenType.IFactory) {
            IFactory(nftAddress).mint(recipient, nftTokenId);
            // optionId
        } else {
            return false;
        }
        return true;
    }

}

