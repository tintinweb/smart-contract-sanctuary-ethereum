import "@openzeppelin/contracts/access/Ownable.sol";

import "./ExchangeCore.sol";

contract Exchange is ExchangeCore, Ownable {

    string public constant name = "Savl NFT Exchange";

    mapping(address => mapping(bytes32 => uint256)) public fills;

    event OrdersMatched(
        bytes32 firstHash,
        bytes32 secondHash,
        address maker,
        address taker,
        address erc20,
        uint256 startPrice,
        uint256 finalPrice
    );

    constructor(
    ) ExchangeCore() {
    }

    /* hashing methods */
    function hashOrder(
        Order memory order
    ) public pure returns (bytes32) {
        return _hashOrder(order);
    }

    function hashToSign(
        bytes32 hash
    ) public view returns (bytes32) {
        return _hashToSign(hash);
    }

    function validateOrderSignature(
        address signer,
        bytes32 hash,
        bytes memory sig
    ) public view returns (bool) {
        return _validateSignature(signer, hash, sig);
    }
    /* end of hashing and validating methods */

    /* Validate order parameters */
    function validateSellOrder(
        Order memory order
    ) public view returns (bool, string memory) {
        if (order.direction != TradeDirection.Sell) {
            return (false, "Invalid order trade direction");
        }

        if (order.maker == order.taker) {
            return (false, "Taker cannot be listed for maker");
        }

        // check expiration time
        if (order.expireTime > 0 && order.expireTime < block.timestamp) {
            return (false, "Bad expiration timestamp");
        }

        if (order.feeRecipients.length != order.feeAmounts.length) {
            return (false, "Order fee recipients and amounts must have equal length");
        }

        if (order.nftAddress == address(0)) {
            return (false, "NFT contract address has null value");
        }

        // check token ownership
        if (order.tokenType == TokenType.ERC721) {
            if (!_isValidERC721(order.nftAddress)) {
                return (false, "Token not supports ERC721 interface");
            }

            if (IERC721(order.nftAddress).ownerOf(order.nftTokenId) != order.maker) {
                return (false, "Order maker is not an owner of token");
            }
        } else if (order.tokenType == TokenType.ERC1155) {
            if (!_isValidERC1155(order.nftAddress)) {
                return (false, "Token not supports ERC1155 interface");
            }

            if (IERC1155(order.nftAddress).balanceOf(order.maker, order.nftTokenId) < order.nftAmount) {
                return (false, "Order maker is not an owner of token(s)");
            }
        } else if (order.tokenType == TokenType.IFactory) {
            if (!_isValidFactory(order.nftAddress)) {
                return (false, "Token not supports Factory interface");
            }

            if (IFactory(order.nftAddress).ownerOf(order.nftTokenId) != order.maker) {
                return (false, "Order maker is not an owner of factory token");
            }
        } else {
            return (false, "Invalid tokenType enum value");
        }

        // validate prices are set
        if (order.startPrice == 0 && order.fulfillPrice == 0) {
            return (false, "Start or fulfill price should be specified");
        }

        // restrict auctions for ERC20 tokens only
        if (order.startPrice > 0 && order.erc20Address == address(0)) {
            return (false, "Timed deals can be listed only using ERC20 tokens");
        }

        if (order.startPrice > 0 && order.expireTime == 0) {
            return (false, "Auction orders should have expiration timestamp");
        }

        // validate fee percentages
        uint256 feeAmount;
        for (uint i = 0; i < order.feeAmounts.length; i++) {
            feeAmount += order.feeAmounts[i];
        }
        if (feeAmount != feeDenominator) {
            return (false, "Invalid fee setup: denominator is 10000");
        }

        return (true, "");
    }

    function validateBuyOrder(
        Order memory order,
        uint256 amount
    ) public view returns (bool, string memory) {
        if (order.direction != TradeDirection.Buy) {
            return (false, "Invalid order trade direction");
        }

        if (order.taker != address(0)) {
            return (false, "Taker address should be nil address");
        }

        if (order.expireTime < block.timestamp) {
            return (false, "Expired order timestamp");
        }

        if (amount > 0) {// offer check
            if (order.erc20Address != address(0)) {
                if (IERC20(order.erc20Address).allowance(order.maker, address(this)) < order.fulfillPrice) {
                    return (false, "Allowance is too low to make an offer");
                }
            } else {
                return (false, "ERC20 Token is required for offers");
            }
        } else {// buy order check
            if (order.erc20Address != address(0)) {
                if (order.startPrice > 0) {
                    if (IERC20(order.erc20Address).allowance(order.maker, address(this)) < order.startPrice) {
                        return (false, "Not enough of ERC20 allowed funds");
                    }
                } else {
                    if (IERC20(order.erc20Address).allowance(order.maker, address(this)) < order.fulfillPrice) {
                        return (false, "Not enough of ERC20 allowed funds");
                    }
                }
            } else {
                if (order.maker.balance < order.fulfillPrice) {
                    return (false, "ETH Balance is too low");
                }
                // as startPrice is only available for auction orders
                // there is not way to compare native token amount
            }
        }

        return (true, "");
    }

    // finalize order or an auction by
    function matchOrders(
        Order memory sellOrder,
        bytes memory sellSignature,
        Order memory buyOrder,
        bytes memory buySignature
    ) public payable {
        require(sellOrder.maker != buyOrder.maker, "Buyer cannot be the seller");
        require(sellOrder.nftAddress == buyOrder.nftAddress, "NFT Address not matched");
        require(sellOrder.nftTokenId == buyOrder.nftTokenId, "NFT Token ID not matched");
        require(sellOrder.erc20Address == buyOrder.erc20Address, "ERC20 Address not matched");

        if (sellOrder.startPrice > 0) {
            require(buyOrder.fulfillPrice >= sellOrder.startPrice, "Invalid buy order fulfill");
        } else {
            require(buyOrder.fulfillPrice >= sellOrder.fulfillPrice, "Invalid buy order fulfill");
            if (sellOrder.erc20Address == address(0)) {
                require(_msgSender() == buyOrder.maker, "May be matched only by buyer");
                require(msg.value >= buyOrder.fulfillPrice, "Not enough ETH sent");
            }
        }

        bytes32 sellHash = _hashToSign(_hashOrder(sellOrder));
        bytes32 buyHash = _hashToSign(_hashOrder(buyOrder));

        require(
            _validateSignature(sellOrder.maker, sellHash, sellSignature),
            "Invalid first order signature"
        );
        require(
            _validateSignature(buyOrder.maker, buyHash, buySignature),
            "Invalid second order signature"
        );

        require(fills[sellOrder.maker][sellHash] == 0, "Order already fulfilled");

        require(_transferOrderFunds(
                buyOrder.maker,
                sellOrder.erc20Address,
                buyOrder.fulfillPrice,
                sellOrder.feeRecipients,
                sellOrder.feeAmounts
            ), "Failed to transfer order funds");

        require(_transferOrderNFTs(
                sellOrder.tokenType,
                sellOrder.nftAddress,
                sellOrder.nftTokenId,
                sellOrder.nftAmount,
                sellOrder.maker,
                buyOrder.maker
            ), "Failed to transfer order NFTs");

        fills[sellOrder.maker][sellHash] += buyOrder.fulfillPrice;

        emit OrdersMatched(
            sellHash,
            buyHash,
            sellOrder.maker,
            buyOrder.maker,
            sellOrder.erc20Address,
            sellOrder.startPrice,
            buyOrder.fulfillPrice
        );
    }

}

