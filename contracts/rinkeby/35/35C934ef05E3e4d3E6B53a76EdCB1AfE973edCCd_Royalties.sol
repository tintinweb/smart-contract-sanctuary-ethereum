pragma solidity 0.8.11;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract Royalties is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;

    address[] Addresses;
    mapping(address => uint256) RoyaltyRate; //1000 = 10%
    uint256 totalRoyaltyPercent;
    address treasuryAddress;
    uint256 totalPendingRoyalties;
    address constant weth = 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2;
    address[] SalesContracts;
    mapping(address => bool) SalesContractsByAddress;

    modifier onlySalesContract() {
        require(SalesContractsByAddress[_msgSender()] == true);
        _;
    }    

    constructor(address[] memory salesContracts_, address treasuryAddress_, address[] memory walletAddresses, uint[] memory royalties) {
        for(uint256 x = 0; x < walletAddresses.length; x++) {
            RoyaltyRate[walletAddresses[x]] = royalties[x];
            totalRoyaltyPercent += royalties[x];
        }
        Addresses = walletAddresses;

        _setSalesContracts(salesContracts_);
        treasuryAddress = treasuryAddress_;
    }

    receive() external payable {
        assert(SalesContractsByAddress[_msgSender()] == true); 
        receiveFunds();
    }    

    function setTreasuryAddress(address walletAddress_) external onlyOwner {
        require(walletAddress_ != address(0), "Error : treasury address set to 0");
        treasuryAddress = walletAddress_;
    }

    // reset entire array
    function setRoyaltyRates(address[] memory walletAddresses, uint256[] memory royalties) external onlyOwner {
        require(walletAddresses.length == royalties.length, "different length for arrays");
        for(uint256 i = 0; i < Addresses.length; i++) {
            RoyaltyRate[Addresses[i]] = 0;
        }        
        totalRoyaltyPercent = 0;
        for(uint256 x = 0; x < walletAddresses.length; x++) {
            //Addresses[x] = walletAddresses[x];
            RoyaltyRate[walletAddresses[x]] = royalties[x];
            totalRoyaltyPercent += royalties[x];
        }
        Addresses = walletAddresses;
        emit SetRoyaltyRates(_msgSender(), walletAddresses, royalties);
    }

    function receiveFunds() payable public onlySalesContract returns (bool){
        require(msg.value > 0, 'msg.value == 0');
        totalPendingRoyalties += msg.value;  
        emit ReceiveFunds(msg.value);
        return true;
    }   

    function getRoyalties(address user) external view returns(uint256) {
        return totalPendingRoyalties * RoyaltyRate[user] / 10000;
    }

    function withdrawRoyalties() external onlyOwner {
        require(totalPendingRoyalties > 0 || IERC20(weth).balanceOf(address(this)) > 0, "no royalties to withdraw");
        totalPendingRoyalties = totalPendingRoyalties * 99 / 100;
        uint256 totalPendingWeth = IERC20(weth).balanceOf(address(this)) * 99 / 100;
        for(uint256 x = 0; x < Addresses.length; x++){
            address recipient = Addresses[x];
            //eth
            uint256 amount = totalPendingRoyalties * RoyaltyRate[recipient] / 10000;
            if (amount > 0) {
                (bool success,) = recipient.call{ value: amount }("");
                require (success, "Transfer treasuryAddress failed");
            }
            //weth
            amount = totalPendingWeth * RoyaltyRate[recipient] / 10000;
            if (amount > 0) {
                IERC20(weth).transferFrom(address(this), recipient, amount);
            }
        }    
        totalPendingRoyalties = 0;      
        emit WithdrawRoyalties(_msgSender());
    }

    //*******************
    //*  GENERAL ADMIN  *  
    //*******************

    function withdrawFund() public onlyOwner {
        require(treasuryAddress != address(0), "treasury address not set");
        (bool sent, ) = treasuryAddress.call{value: address(this).balance}("");
        require(sent, "failed to send funds");
    }

    function withdraw(address _token) external onlyOwner nonReentrant {
        require(treasuryAddress != address(0), "treasury address not set");
        IERC20(_token).safeTransfer(treasuryAddress, IERC20(_token).balanceOf(address(this)));
        emit Withdraw(_msgSender(), _token);
    }        

    function setSalesContracts(address[] memory _SalesContracts) public onlyOwner {
        _setSalesContracts(_SalesContracts);
    }

    function _setSalesContracts(address[] memory _SalesContracts) internal {
        for(uint256 i = 0; i < SalesContracts.length; i++) {
            SalesContractsByAddress[SalesContracts[i]] = false;
        }

        for(uint256 j = 0; j < _SalesContracts.length; j++) {
            SalesContractsByAddress[_SalesContracts[j]] = true;
        }
        SalesContracts = _SalesContracts;
        emit SetSalesContracts(_SalesContracts);
    }

    function getSalesContracts() public  view returns (address[] memory) {
        return SalesContracts;
    }    

    //*******************
    //*     EVENTS      *  
    //*******************
    event SetRoyaltyRates(address indexed user, address[] indexed walletAddresses, uint256[] indexed rates);
    event SetRoyaltyRate(address indexed user, address indexed walletAddress, uint256 indexed rate);
    event ReceiveFunds(uint256 indexed amount);
    event DistributeFunds(address indexed user, uint256 indexed totalReward);
    event WithdrawRoyalties(address indexed user);
    event Withdraw(address indexed msgSender, address indexed token);
    event SetSalesContracts(address[] SalesContracts);
}

