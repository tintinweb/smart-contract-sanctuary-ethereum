pragma solidity 0.8.11;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./TransferHelper.sol";


contract BurnClaim is Ownable, IERC721Receiver, ReentrancyGuard {

    bool public burningEnabled = false;

    address immutable LIZCOIN_ERC20;
    IERC721 immutable LIZ_ERC721;
    IERC721 immutable OGLIZ_ERC721;
       
    bytes32 public merkleRoot;

    constructor(address lizCoin, address lizERC721, address ogLizERC721) {
        require(lizERC721 != address(0), "Address Error");
        require(ogLizERC721 != address(0), "Address Error");
        require(lizCoin != address(0), "Address Error");
    
        LIZCOIN_ERC20 = lizCoin;
        LIZ_ERC721 = IERC721(lizERC721);
        OGLIZ_ERC721 = IERC721(ogLizERC721);
    }
 
    function withdrawETH(uint amount) external onlyOwner {       
        //Allows the Transfer of ETH from contract
        TransferHelper.safeTransferETH(_msgSender(), amount);
    }

    function withdrawERC20(address to, uint amount) external onlyOwner {       
        //Allows the Transfer of ERC20 from contract
        TransferHelper.safeTransfer(LIZCOIN_ERC20, to, amount);
    }

    function setMerkleRoot(bytes32 _merkleRoot) external onlyOwner {
        merkleRoot = _merkleRoot;
    }

   function toggleBurning() external onlyOwner {
        burningEnabled = !burningEnabled;
    }

    // ======== Public functions ========

     // Claim all rewards from caller 

  function _burnClaimMulti(uint256[] calldata _tokenIds, uint256[] calldata _burnClaimAmount, bytes32[][] calldata _merkleProof) external virtual {

        require(burningEnabled, "Burning is stopped");
        uint totalClaim = 0;
        
        for (uint i = 0; i < _tokenIds.length; i++) {
                            
                //uint tokenId = _tokenIds[i];                
                 
                if(_tokenIds[i] < 5050){

                    bytes32 claimLeaf = keccak256(abi.encodePacked(_tokenIds[i], _burnClaimAmount[i]));
                    require(MerkleProof.verify(_merkleProof[i], merkleRoot, claimLeaf),      "Invalid proof provided.");

                    require(LIZ_ERC721.ownerOf(_tokenIds[i]) == _msgSender(), "Not your Lizard");    
                    LIZ_ERC721.safeTransferFrom(_msgSender(), address(this), _tokenIds[i]);
                   
                    totalClaim += _burnClaimAmount[i];
  
                } 
                else {              
                    
                    bytes32 claimLeaf = keccak256(abi.encodePacked(_tokenIds[i], _burnClaimAmount[i]));
                    require(MerkleProof.verify(_merkleProof[i], merkleRoot, claimLeaf),      "Invalid proof provided.");


                    require(OGLIZ_ERC721.ownerOf(_tokenIds[i]-10000) == _msgSender(), "Not your Lizard");      
                    OGLIZ_ERC721.safeTransferFrom(_msgSender(), address(this), (_tokenIds[i]-10000));
                  //  Claimed[tokenId] = true;
                    totalClaim += _burnClaimAmount[i];
                }
            }

             TransferHelper.safeTransfer(LIZCOIN_ERC20, _msgSender(), totalClaim * 1e18);
    }

    // ======== function overrides ========

    // Prevent sending ERC721 tokens directly to this contract
    function onERC721Received(address operator, address from, uint256 tokenId, bytes calldata data) external view override returns (bytes4) {
        from; tokenId; data; // supress solidity warnings
        if (operator == address(this)) {
            return this.onERC721Received.selector;
        }
        else {
            return 0x00000000;
        }
    }

}

