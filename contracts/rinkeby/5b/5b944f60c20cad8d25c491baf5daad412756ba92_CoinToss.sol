/// @title A coin toss game
/// @author Waris A
/// @notice You can use this contract for only the most basic simulation
/// @dev All function calls are currently implemented without side effects
/// @custom:experimental This is an experimental contract.
contract CoinToss {

  	using SafeMath for uint256;
  	uint256 lastHash;
  	uint256 FACTOR;
  	
  	//custom error
	error InsufficientTreasuryBalance(bool returnFund);
	
	event BalanceTransferedFromTreasurey(bytes , address , uint256);

  	constructor(uint256 _factor) {
    	FACTOR = _factor; // 57896044618658097711785492504343953926634992332820282019728792003956564819968;
  	}

    receive() external payable {        
	}

  	/// @notice play coin toss game by providing some ETH value , if won contract will return twice of the given amount
    /// @dev contract must have twice of the value passed to satisfy win condition
    /// @param _guess The guess/bet for the coin side
    /// @return bool result of the output coin side
  	function play(bool _guess) public payable returns(bool){

      require(msg.value > 0 , "You must pass some eth value to play game");

      // If the amount sent is larger than the contractâ€™s current treasury balance, the contract should send the funds back as-is
      // To satisfy win condition contract must have twice of msg.value.
      if( (msg.value * 2 ) >= address(this).balance ){
        revert InsufficientTreasuryBalance({returnFund : true});
      }

      //call to toss (true : head , false : tails)
      bool result = toss();

      //user won so returns twice the amount
      if(result == _guess){ 
        (bool sent, bytes memory data) = payable(msg.sender).call{value: (msg.value * 2)}("");
        require(sent, "Failed to send Ether");
        emit BalanceTransferedFromTreasurey(data , msg.sender , msg.value * 2); 
      }
      return result;
  	}

	/// @notice random number logic with blockhash mechanism 
    /// @dev revert condition to prevent from hacks
    /// @return bool result of the output coin side
    function toss() internal returns (bool) {
        
        uint256 blockValue = uint256(blockhash(block.number.sub(1)));    
        if (lastHash == blockValue) {
            revert();
        }        
        lastHash = blockValue;
        uint256 coinFlip = blockValue.div(FACTOR);

        //true : head
        //false : tails
        bool side = coinFlip == 1 ? true : false;
        return side;
    }
}