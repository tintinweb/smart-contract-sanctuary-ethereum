import "./open-zeppelin/SafeMath.sol";
import "./open-zeppelin/IERC777Sender.sol";
import "./open-zeppelin/IERC777.sol";
import "./open-zeppelin/ERC1820Implementer.sol";
import "./open-zeppelin/IERC1820Registry.sol";
import "./open-zeppelin/IERC777Sender.sol";
import "./open-zeppelin/Ownable.sol";

// This contract exists to implement the ERC777 token's Sender interface that overrides tokensToSend to collect a fee on every transfer.
contract Sender is IERC777Sender, ERC1820Implementer, Ownable {
    using SafeMath for uint256;

    uint256 public feeRate; // in %
    address public fundAddress; // where the fees are sent to

    event FeeRateSet(uint16 percentage);
    event FundAddressSet(address target);

    IERC1820Registry internal constant _ERC1820_REGISTRY =
        IERC1820Registry(0x1820a4B7618BdE71Dce8cdc73aAB6C95905faD24);

    constructor(address initialFundAddress, uint256 initialFeeRate) {
        fundAddress = initialFundAddress;
        feeRate = initialFeeRate;
    }

    // settings
    function setFundAddress(address _target) external onlyOwner {
        fundAddress = _target;
        emit FundAddressSet(_target);
    }

    function setFeeRate(uint16 _percentage) external onlyOwner {
        feeRate = _percentage;
        emit FeeRateSet(_percentage);
    }

    // called by token when any its transfer-like function is called
    function tokensToSend(
        address operator,
        address from,
        address to,
        uint256 amount,
        bytes calldata userData,
        bytes calldata operatorData
    ) external override {
        require(fundAddress != address(0), "target address not set");

        if (to == fundAddress) {
            return;
        }

        uint256 fee = amount.mul(feeRate).div(uint16(100));

        IERC777 tokenContract = IERC777(msg.sender);

        tokenContract.operatorSend(
            from,
            fundAddress,
            fee,
            userData,
            operatorData
        );
    }

    // call after deployment
    function setAsSenderFor(address _token) external onlyOwner {
        _ERC1820_REGISTRY.setInterfaceImplementer(
            _token,
            keccak256("ERC777TokensSender"),
            address(this)
        );
    }

    // call when changing token's sender to a new contract
    function changeManager(address _token, address _newSender)
        external
        onlyOwner
    {
        _ERC1820_REGISTRY.setManager(_token, _newSender);
    }
}

