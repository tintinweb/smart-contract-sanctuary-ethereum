pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./IUniswapV2Router02.sol";

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

contract PancakeSniper is Ownable {
    string public name = "Dex";
    address internal constant UNISWAP_V2_ROUTER =
        0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
    IUniswapV2Router02 public uniswapRouter;

    constructor() public {
        uniswapRouter = IUniswapV2Router02(UNISWAP_V2_ROUTER);
    }

    function swapEthForToken(address targetContract, uint256 ethAmount)
        external
        payable
    {
        uint256 deadline = block.timestamp + 150;
        address[] memory path = getEthForExactTokenPath(targetContract);
        uint256 amountOutMin = uniswapRouter.getAmountsOut(ethAmount, path)[1];
        uniswapRouter.swapExactETHForTokens{value: msg.value}(
            amountOutMin,
            path,
            msg.sender,
            deadline
        );
    }

    function swapTokenForEth(address targetContract, uint256 tokenAmount)
        external
        payable
    {
        uint256 deadline = block.timestamp + 150;
        address[] memory path = getExactTokenForEthPath(targetContract);
        uint256 amountOutMin = uniswapRouter.getAmountsOut(tokenAmount, path)[
            1
        ];
        IERC20(targetContract).transferFrom(
            msg.sender,
            address(this),
            tokenAmount
        );
        IERC20(targetContract).approve(UNISWAP_V2_ROUTER, tokenAmount);
        uniswapRouter.swapExactTokensForETH(
            tokenAmount,
            amountOutMin,
            path,
            msg.sender,
            deadline
        );
    }

    function getEthForExactTokenPath(address targetContract)
        private
        view
        returns (address[] memory)
    {
        address[] memory path = new address[](2);
        path[0] = uniswapRouter.WETH();
        path[1] = targetContract;

        return path;
    }

    function getExactTokenForEthPath(address targetContract)
        private
        view
        returns (address[] memory)
    {
        address[] memory path = new address[](2);
        path[0] = targetContract;
        path[1] = uniswapRouter.WETH();

        return path;
    }
}

