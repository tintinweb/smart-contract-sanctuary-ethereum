/// @title Marketplace Contract
/// @notice Contract that implements all the functionality of the marketplace

contract MockMarketplace is MarketplaceSignature, AccessControlEnumerable, VRFConsumerBaseV2 {
    using SafeERC20 for IERC20;
    using Counters for Counters.Counter;
    using EnumerableSet for EnumerableSet.UintSet;

    VRFCoordinatorV2Interface COORDINATOR;
    LinkTokenInterface LINKTOKEN;

    // Your subscription ID.
    uint64 public s_subscriptionId;

    // A reasonable default is 100000, but this value could be different
    // on other networks.
    uint32 constant callbackGasLimit = 2500000;

    // The default is 3, but you can set this higher.
    uint16 constant requestConfirmations = 3;

    bytes32 internal immutable keyHash;
    uint256 internal immutable fee;
    uint256 public s_requestId;
    string public uri;
    uint256 immutable presaleTimer;
    bytes32 public constant OWNER_MARKETPLACE_ROLE = keccak256("OWNER_MARKETPLACE_ROLE");
    uint256 public normalPrice;
    uint256 public whitelistPrice;
    uint8 constant MAX_QUANTITY = 5;
    uint16 constant MAX_PARTICIPANTS_NUM = 10010;
    uint8 constant MAX_WHITELIST_QUANTITY = 2;
    IERC721 public nftToken721;
    EnumerableSet.UintSet private winnerIds;
    bool public isDraw;
    uint256 public _counter;

    uint256[] public testWords;

    struct UserData {
        uint8 whitelistCounter;
        uint8 counter;
        bool blacklist;
    }
    mapping(address => UserData) public users;

    event BronzeDraw(uint256 lastTokenId);
    event AddedToBlackList(address user);
    event RemovedFromBlackList(address user);
    event Purchase(address user, uint8 quantity);
    event ReturnedRandomness(uint256[] randomWords);

    /// @dev Check if caller is contract owner
    /// @dev normalPrice price in wei for buing one token for non whiteList buyers
    /// @dev whiteListPrice price in wei for buing one token for whiteList buyers

    constructor(
        bytes32 _keyHash,
        uint256 _fee,
        address _linkToken,
        address _vrfCoordinator,
        uint256 _presaleTimer
    ) VRFConsumerBaseV2(_vrfCoordinator) {
        __Signature_init("Marketplace", "1");
        COORDINATOR = VRFCoordinatorV2Interface(_vrfCoordinator);
        LINKTOKEN = LinkTokenInterface(_linkToken);
        _setupRole(OWNER_MARKETPLACE_ROLE, _msgSender());
        createNewSubscription();

        normalPrice = 200000000000000000; // 0.2 ETH
        whitelistPrice = 100000000000000000; // 0.1 ETH
        keyHash = _keyHash; // Rinkeby keyHash
        fee = _fee; // VRF Fee
        presaleTimer = block.timestamp + _presaleTimer;
    }

    /// @param _nftToken721 address of ERC721 contract

    function init(address _nftToken721, string memory baseURI) external onlyRole(OWNER_MARKETPLACE_ROLE) {
        nftToken721 = IERC721(_nftToken721);
        nftToken721.setBaseURI(baseURI);
    }

    function getWinners() external view onlyRole(OWNER_MARKETPLACE_ROLE) returns (uint256[] memory) {
        return winnerIds.values();
    }

    function requestRandomNumbers() external onlyRole(OWNER_MARKETPLACE_ROLE) {
        s_requestId = COORDINATOR.requestRandomWords(keyHash, s_subscriptionId, requestConfirmations, callbackGasLimit, 70);
        isDraw = true;
    }

    function topDraw(string memory _uri) external {
        for (uint16 i = 0; i < 110; ++i) {
            uint256 tokenId = (testWords[i] % nftToken721.getTotalSupply()) + 1;
            while (winnerIds.contains(tokenId)) {
                i++;
                tokenId = (testWords[i] % nftToken721.getTotalSupply()) + 1;
            }

            winnerIds.add(tokenId);
            nftToken721.setTokenURI(tokenId, string(abi.encodePacked(_uri, Strings.toString(i))));
        }
    }

    function bronzeDraw(string memory _uri) external onlyRole(OWNER_MARKETPLACE_ROLE) {
        uint256 i = _counter;
        while (i < MAX_PARTICIPANTS_NUM) {
            if (gasleft() > 50000) {
                if (!winnerIds.contains(i)) {
                    nftToken721.setTokenURI(i, string(abi.encodePacked(_uri, Strings.toString(i))));
                }
                i++;
            } else {
                break;
            }
        }
        _counter = i;
        emit BronzeDraw(i);
    }

    function addToBlacklist(address user) external onlyRole(OWNER_MARKETPLACE_ROLE) {
        users[user].blacklist = true;
        emit AddedToBlackList(user);
    }

    function removeFromBlacklist(address user) external onlyRole(OWNER_MARKETPLACE_ROLE) {
        users[user].blacklist = false;
        emit RemovedFromBlackList(user);
    }

    /// @dev Buy token through ERC721 contract
    /// @param quantity number of tokens
    /// @param v sign v value
    /// @param r sign r value
    /// @param s sign s value
    function purchase(
        uint8 quantity,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external payable returns (bool) {
        require(nftToken721.getTotalSupply() + quantity <= MAX_PARTICIPANTS_NUM, "Sold out.");

        if (hasRole(OWNER_MARKETPLACE_ROLE, _getSigner(msg.sender, quantity, v, r, s)) && presaleTimer >= block.timestamp) {
            require(users[msg.sender].blacklist == false, "User is blocked.");
            require(msg.value == whitelistPrice * quantity, "Incorrectly amount by the whitelisted user.");
            require(users[msg.sender].whitelistCounter + quantity <= MAX_WHITELIST_QUANTITY, "Quantity too big.");
            users[msg.sender].whitelistCounter += quantity;
            users[msg.sender].counter += quantity;
        } else {
            require(msg.value == normalPrice * quantity, "Incorrectly amount by the user.");
            require(users[msg.sender].counter + quantity <= MAX_QUANTITY, "Quantity too big.");
            users[msg.sender].counter += quantity;
        }
        for (uint8 j = 0; j < quantity; ++j) {
            nftToken721.mint(msg.sender);
        }

        emit Purchase(msg.sender, quantity);
        return true;
    }

    /// @dev Withdraw all ETH from contract addrress

    function unlockETH() external onlyRole(OWNER_MARKETPLACE_ROLE) {
        require(address(this).balance > 0, "balance is zero");
        payable(msg.sender).transfer(address(this).balance);
    }

    /// @dev Withdraw ERC20 token balance from contract addrress
    /// @param tokenAddress address of the ERC20 token contract whose tokens will be withdrawn to the recipient

    function unlockTokens(IERC20 tokenAddress) external onlyRole(OWNER_MARKETPLACE_ROLE) {
        uint256 tokenBalance = tokenAddress.balanceOf(address(this));
        require(tokenBalance > 0, "balance must be bigger than 0");
        tokenAddress.safeTransfer(msg.sender, tokenBalance);
    }

    /**
     * Callback function used by VRF Coordinator
     */
    function fulfillRandomWords(
        uint256, /* requestId */
        uint256[] memory randomWords
    ) internal override {
        // testWords = randomWords;
        for (uint16 i = 0; i < randomWords.length; ++i) {
            uint256 tokenId = (testWords[i] % nftToken721.getTotalSupply()) + 1;
            if (winnerIds.length() == 110) {
                break;
            }
            winnerIds.add(tokenId);
        }
        emit ReturnedRandomness(randomWords);
    }

    // CHAINLINK VRF HELPER FUNCTIONS

    // Create a new subscription when the contract is initially deployed.
    function createNewSubscription() private onlyRole(OWNER_MARKETPLACE_ROLE) {
        // Create a subscription with a new subscription ID.
        address[] memory consumers = new address[](1);
        consumers[0] = address(this);
        s_subscriptionId = COORDINATOR.createSubscription();
        // Add this contract as a consumer of its own subscription.
        COORDINATOR.addConsumer(s_subscriptionId, consumers[0]);
    }

    // Assumes this contract owns link.
    // 1000000000000000000 = 1 LINK
    function topUpSubscription(uint256 amount) external onlyRole(OWNER_MARKETPLACE_ROLE) {
        LINKTOKEN.transferAndCall(address(COORDINATOR), amount, abi.encode(s_subscriptionId));
    }

    function cancelSubscription(address receivingWallet) external onlyRole(OWNER_MARKETPLACE_ROLE) {
        // Cancel the subscription and send the remaining LINK to a wallet address.
        COORDINATOR.cancelSubscription(s_subscriptionId, receivingWallet);
        s_subscriptionId = 0;
    }
}

