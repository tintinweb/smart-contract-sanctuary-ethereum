import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";

import "./BUNI.sol";
import "./BUniverseNFT.sol";

contract BUniverseNFTStaking is ERC1155Holder {
    struct UserStake {
        uint256 amount;
        uint256 checkpoint;
    }

    uint256[6] public nftStakingRatesById; /// staking rates depending on id of nft (percent * 100 for exact calculations)
    uint256[6] public rewardPerBlockById; // Reward for every block
    uint256 public blockPerDay; // Approximate number of blocks per day

    BUNI public buni;
    BUniverseNFT public nft;

    mapping(address => mapping(uint8 => UserStake)) public userStakes; // user => id => userStakes

    event Staked(address indexed user, uint8 id, uint256 amount);
    event Claimed(address indexed user, uint8 id, uint256 amount);
    event Unstaked(address indexed user, uint8 id, uint256 amount);

    constructor(BUNI buni_, BUniverseNFT nft_) {
        buni = buni_;
        nft = nft_;
        blockPerDay = 6460;
        nftStakingRatesById = [100, 150, 225, 300, 450, 900];
        for (uint8 id = 0; id < 6; id++) {
            rewardPerBlockById[id] = (nftStakingRatesById[id] * 1e18) / (100 * (blockPerDay * 100));
        }
    }

    /**
     * @notice Stake NFT tokens
     * @param id_: the id of the NFT token
     * @param amount_: the amount of NFT tokens that should be staked
     */
    function stake(uint8 id_, uint256 amount_) external {
        require(amount_ > 0, "BUniverseNFTStaking: Nothing to stake.");
        require(id_ < 6, "BUniverseNFTStaking: Wrong id for NFT.");

        UserStake memory user = userStakes[msg.sender][id_];
        uint256 reward = 0;

        if (user.amount > 0) {
            reward = _claimReward(msg.sender, id_);
        }
        _stake(id_, amount_);

        buni.mint(msg.sender, reward);
        nft.safeTransferFrom(msg.sender, address(this), id_, amount_, "0x00");
    }

    /**
     * @notice Unstake NFT tokens
     * @param id_: the id of the NFT token
     * @param amount_: the amount of NFT tokens that should be unstaked
     */
    function unstake(uint8 id_, uint256 amount_) external {
        require(amount_ > 0, "BUniverseNFTStaking: Nothing to unstake.");
        require(id_ < 6, "BUniverseNFTStaking: Wrong id for NFT.");

        UserStake memory user = userStakes[msg.sender][id_];

        require(user.amount >= amount_, "BUniverseNFTStaking: You have no enough stakes to unstake");

        uint256 reward = _claimReward(msg.sender, id_);
        _unstake(id_, amount_);

        buni.mint(msg.sender, reward);
        nft.safeTransferFrom(address(this), msg.sender, id_, amount_, "0x00");
    }

    /**
     * @notice Function to claim BUNI tokens stored as reward for staked NFT with given id
     * @param id_: the id of the NFT token
     */
    function claimReward(uint8 id_) external {
        UserStake memory user = userStakes[msg.sender][id_];
        require(user.amount > 0, "BUniverseNFTStaking: You have no rewards to claim");

        buni.mint(msg.sender, _claimReward(msg.sender, id_));
    }

    /// Function to claim rewards stored for all staked NFTs
    function claimAll() external {
        uint256 reward;
        for (uint8 id = 0; id < 6; id++) {
            UserStake memory user = userStakes[msg.sender][id];
            if (user.amount <= 0) continue;
            reward += _claimReward(msg.sender, id);
        }
        buni.mint(msg.sender, reward);
    }

    /**
     * @notice Private function to stake NFT tokens
     * @param id_: the id of the NFT token
     * @param amount_: the amount of NFT tokens that should be staked
     */
    function _stake(uint8 id_, uint256 amount_) private {
        UserStake storage user = userStakes[msg.sender][id_];
        user.checkpoint = block.number;
        user.amount += amount_;
        emit Staked(msg.sender, id_, amount_);
    }

    /**
     * @notice Private function to unstake NFT tokens
     * @param id_: the id of the NFT token
     * @param amount_: the amount of NFT tokens that should be unstaked
     */
    function _unstake(uint8 id_, uint256 amount_) private {
        UserStake storage user = userStakes[msg.sender][id_];
        user.checkpoint = block.number;
        user.amount -= amount_;
        emit Unstaked(msg.sender, id_, amount_);
    }

    /**
     * @notice Private function to claim BUNI tokens stored as reward
     * @param stakeholder_: the address of stakeholder
     * @param id_: the id of the NFT token
     */
    function _claimReward(address stakeholder_, uint8 id_) internal returns (uint256 reward) {
        UserStake storage user = userStakes[stakeholder_][id_];
        reward = pendingReward(stakeholder_, id_);
        emit Claimed(msg.sender, id_, reward);
        if (reward > 0) {
            user.checkpoint = block.number;
        }
    }

    /**
     * @notice Function to calculate BUNI tokens stored as reward
     * @param stakeholder_: the address of stakeHolder
     * @param id_: the id of the NFT token
     * @dev Here the result should be divided to 1e18, but as the
     * @dev user.amount shows how many NFT tokens has user staked
     * @dev (each costed him 1 BUNI token), we should multiply the
     * @dev user.amount with 1e18, the result of mul and then div
     * @dev the number to 1e18 is one, so that's what we see
     */
    function pendingReward(address stakeholder_, uint8 id_) public view returns (uint256) {
        UserStake storage user = userStakes[stakeholder_][id_];
        uint256 blocksPassed = block.number - user.checkpoint;
        return (user.amount * blocksPassed * rewardPerBlockById[id_]);
    }
}

