import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";
import "./BUNI.sol";
import "./BUniverseNFT.sol";

contract BUniverse is VRFConsumerBase {
    using SafeERC20 for BUNI;
    using SafeERC20 for IERC20;

    uint256 public immutable caseOpeningPrice;
    address public immutable deadAddress;
    uint8[6] public probability;
    bytes32 private keyHash;
    uint256 private fee;

    BUNI public buni;
    BUniverseNFT public nft;
    IERC20 public lp;

    event CaseOpened(bytes32 requestId, address caseOpener, uint256 amount, address token, address referrer);

    mapping(address => address) public referrerOfUser; // user => referrer
    mapping(bytes32 => address) private _caseOpeners; // requestID (returned when a request is made) => the address of the caseOpener
    mapping(bytes32 => uint256) private _caseAmounts; // requestID (returned when a request is made) => the amount of cases to open
    mapping(address => bool) private _hasOpenedCase; // bool to check if user has ever opened a case

    constructor(
        address vrfCoordinator_,
        address link_,
        bytes32 keyHash_,
        uint256 fee_,
        BUNI buni_,
        BUniverseNFT nft_,
        IERC20 lp_
    ) VRFConsumerBase(vrfCoordinator_, link_) {
        require(address(lp_) != address(0), "BUniverse: The lp token address can not be zero");
        buni = buni_;
        nft = nft_;
        lp = lp_;
        caseOpeningPrice = 1 ether;
        probability = [4, 12, 24, 40, 64, 100];
        deadAddress = 0x000000000000000000000000000000000000dEaD; // dead address
        keyHash = keyHash_;
        fee = fee_; // fee * 1e18
    }

    function caseOpeningPriceForLP() public view returns (uint256 lpAmount) {
        IUniswapV2Pair lp_ = IUniswapV2Pair(address(lp));

        uint256 lpTotalSupply = lp_.totalSupply();
        (, uint112 buniAmount, ) = lp_.getReserves();

        if (lp_.token0() == address(buni)) {
            (buniAmount, , ) = lp_.getReserves();
        }

        lpAmount = (((lpTotalSupply * 1 ether * 9) / 2) / buniAmount) / 10;
    }

    /**
     * @notice Function to open case with BUNI without referrer
     * @param referrer_: the address of referrer(deadAddress if user doesn't have referrer)
     * @param amount_: the amount of cases to be opened
     */
    function openCase(address referrer_, uint256 amount_) external {
        address referrer = referrerOfUser[msg.sender];
        if (referrer == address(0)) {
            if (referrer_ == address(0) || referrer_ == msg.sender || _hasOpenedCase[msg.sender]) {
                referrer = deadAddress;
            } else {
                referrerOfUser[msg.sender] = referrer_;
                referrer = referrer_;
            }
            _hasOpenedCase[msg.sender] = true;
        }
        _payThePrice(referrer, address(buni), amount_);

        bytes32 requestId = _getRandomNumber(amount_);

        emit CaseOpened(requestId, msg.sender, amount_, address(buni), referrer);
    }

    /**
     * @notice Function to open case with BUNI without referrer
     * @param amount_: the amount of cases to be opened
     */

    function openCase(uint256 amount_) external {
        address referrer = referrerOfUser[msg.sender];

        if (referrer == address(0)) {
            referrer = deadAddress;
            _hasOpenedCase[msg.sender] = true;
        }

        _payThePrice(referrer, address(buni), amount_);
        bytes32 requestId = _getRandomNumber(amount_);

        emit CaseOpened(requestId, msg.sender, amount_, address(buni), referrer);
    }

    /**
     * @notice Function to open case with LP tokens
     * @param amount_: the amount of cases to be opened
     */
    function openCaseWithLP(uint256 amount_) external {
        _payThePrice(address(0), address(lp), amount_);

        bytes32 requestId = _getRandomNumber(amount_);

        emit CaseOpened(requestId, msg.sender, amount_, address(lp), deadAddress);
    }

    /**
     * @notice Private function to pay the case Opening Price and send referral income, if there is such
     * @param referrer_: the address of referrer(deadAddress address if user doesn't have referrer or is opening case with lp tokens)
     * @param token_: the address of token with which the case is being opened
     * @param amount_: the amount of cases to be opened
     */
    function _payThePrice(
        address referrer_,
        address token_,
        uint256 amount_
    ) private {
        uint256 priceToPay = amount_ * caseOpeningPrice;
        if (token_ == address(buni)) {
            if (referrer_ == deadAddress) {
                buni.burnFrom(msg.sender, priceToPay);
            } else {
                uint256 referralIncome = priceToPay / 10;
                buni.safeTransferFrom(msg.sender, referrer_, referralIncome);
                buni.burnFrom(msg.sender, priceToPay - referralIncome);
            }
            return;
        }
        lp.safeTransferFrom(msg.sender, deadAddress, amount_ * caseOpeningPriceForLP());
    }

    /**
     * @notice Private function that requests randomness
     * @param amount_: the amount of cases to be opened
     */

    function _getRandomNumber(uint256 amount_) private returns (bytes32 requestId) {
        require(LINK.balanceOf(address(this)) >= fee, "BUniverse: Not enough LINK - fill contract with faucet");
        requestId = requestRandomness(keyHash, fee);
        _caseOpeners[requestId] = msg.sender;
        _caseAmounts[requestId] = amount_;
    }

    /**
     * Callback function used by VRF Coordinator
     */
    function fulfillRandomness(bytes32 requestId, uint256 randomness) internal override {
        _mintNFTByRandomId(_caseOpeners[requestId], randomness, _caseAmounts[requestId]);
    }

    /**
     * @notice Private function called by VRF coordinator to mint nft token by given random
     * @param caseOpener_: the address of case Opener
     * @param random_: the random number given from VRF Coordinator
     * @param amount_: the amount of cases to be opened
     */

    function _mintNFTByRandomId(
        address caseOpener_,
        uint256 random_,
        uint256 amount_
    ) private {
        uint256[] memory randomValues = _multipleRandom(random_, amount_);
        for (uint256 i = 0; i < amount_; i++) {
            if (randomValues[i] < probability[0]) {
                nft.mintNFT(caseOpener_, 5, "0x0");
                continue;
            }

            if (randomValues[i] < probability[1]) {
                nft.mintNFT(caseOpener_, 4, "0x0");
                continue;
            }

            if (randomValues[i] < probability[2]) {
                nft.mintNFT(caseOpener_, 3, "0x0");
                continue;
            }

            if (randomValues[i] < probability[3]) {
                nft.mintNFT(caseOpener_, 2, "0x0");
                continue;
            }

            if (randomValues[i] < probability[4]) {
                nft.mintNFT(caseOpener_, 1, "0x0");
                continue;
            }

            nft.mintNFT(caseOpener_, 0, "0x0");
        }
    }

    function _multipleRandom(uint256 rValue_, uint256 n_) private pure returns (uint256[] memory rValues) {
        rValues = new uint256[](n_);
        for (uint256 i = 0; i < n_; i++) {
            rValues[i] = (uint256(keccak256(abi.encode(rValue_, i)))) % 100;
        }
    }
}