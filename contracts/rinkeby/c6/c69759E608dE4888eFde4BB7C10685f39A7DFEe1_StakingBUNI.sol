import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./libs/ABDKMath64x64.sol";
import "./BUNI.sol";



contract StakingBUNI {
    using SafeERC20 for BUNI;
    using SafeERC20 for IERC20;

    /**
     * @notice Info of each stake
     * @param shares: amount of user's stake
     * @param stakeBlock: blocknumber of user's last action
     */
    struct Stake {
        uint256 amount;
        uint256 checkpoint;
    }

    uint256 public immutable withdrawFee; // 10% of the withdrawing amount
    uint256 public immutable lockPeriod; // untill this period passed the withdrawing fee will be charged
    uint256 public immutable dailyRoi; // 3678.34%% APY (for autocomp staking)
    uint256 public blockPerDay; // Approximate number of blocks per day

    BUNI public immutable buni;

    uint256 public manualTotalStakes; // token => totalStakes
    uint256 public rewardPerBlock; // token => rewardPerBlock
    mapping(address => Stake) public autoStakes; // AutoComp pool user => stake
    mapping(address => Stake) public manualStakes; // Manual pool token => user => stake

    event Staked(address indexed user, bool isAutoComp, uint256 amount);
    event Unstaked(address indexed user, bool isAutoComp, uint256 amount);
    event Claimed(address indexed user, uint256 amount);

    constructor(
        address buni_,
        uint256 dailyRewardForBUNI_ // 1%
    ) {
        buni = BUNI(buni_);
        withdrawFee = 10; // 10% of the withdrawing amount
        blockPerDay = 6460;
        rewardPerBlock = (dailyRewardForBUNI_ * 1e16) / blockPerDay; // For manual staking
        dailyRoi = 1e16; // 3678.34%% APY (for autocomp staking)
        lockPeriod = 19380; // blocks within 3 days
    }

    function stake(bool isAutoComp_, uint256 amount_) external {
        if (isAutoComp_) {
            _stakeWithAuto(amount_);
        } else {
            _stakeManual(amount_);
        }
    }

    function unstake(bool isAutoComp_, uint256 amount_) external {
        if (isAutoComp_) {
            _unstakeWithAuto();
        } else {
            _unstakeManual(amount_);
        }
    }

    /// @notice Claim BUNI tokens stored as reward and reinvest them
    function claimAndStake() external {
        Stake storage userStake = manualStakes[msg.sender];
        require(userStake.amount > 0, "StakingBUNI: You have no rewards to claim");
        uint256 reward = pendingReward(msg.sender);
        userStake.checkpoint = block.number;
        userStake.amount += reward;
        manualTotalStakes += reward;

        buni.mint(address(this), reward);

        emit Claimed(msg.sender, reward);
        emit Staked(msg.sender, false, reward);
    }

    /// @notice Claim BUNI tokens stored as reward
    function claimReward() external {
        Stake memory userStake = manualStakes[msg.sender];
        require(userStake.amount > 0, "StakingBUNI: You have no rewards to claim");
        buni.mint(msg.sender, _claimReward());
    }

    /**
     * @notice Stake BUNI tokens
     * @param amount_: the amount of BUNI tokens that should be staked
     */
    function _stakeManual(uint256 amount_) private {
        Stake storage userStake = manualStakes[msg.sender];
        uint256 reward = 0;
        if (userStake.amount > 0) {
            reward = _claimReward();
        }
        userStake.checkpoint = block.number;
        userStake.amount += amount_;
        manualTotalStakes += amount_;

        emit Staked(msg.sender, false, amount_);

        buni.mint(msg.sender, reward);
        buni.safeTransferFrom(msg.sender, address(this), amount_);
    }

    /**
     * @notice Unstake BUNI tokens
     * @param amount_: the amount of BUNI tokens that should be unstaked
     */
    function _unstakeManual(uint256 amount_) private {
        Stake storage userStake = manualStakes[msg.sender];

        require(userStake.amount >= amount_, "StakingBUNI: You have no enough stakes to unstake");
        uint256 reward = _claimReward();

        userStake.checkpoint = block.number;
        userStake.amount -= amount_;
        manualTotalStakes -= amount_;

        emit Unstaked(msg.sender, false, amount_);

        buni.mint(msg.sender, reward);
        buni.safeTransfer(msg.sender, amount_);
    }

    /**
     * @notice Private function to claim BUNI tokens stored as reward
     */
    function _claimReward() internal returns (uint256 reward) {
        Stake storage userStake = manualStakes[msg.sender];
        reward = pendingReward(msg.sender);

        emit Claimed(msg.sender, reward);

        if (reward > 0) {
            userStake.checkpoint = block.number;
        }
    }

    /**
     * @notice Function to calculate BUNI tokens stored as reward
     * @param stakeholder_: the address of stakeHolder
     */
    function pendingReward(address stakeholder_) public view returns (uint256) {
        Stake memory userStake = manualStakes[stakeholder_];
        uint256 blocksPassed = block.number - userStake.checkpoint;
        return ((userStake.amount * blocksPassed * rewardPerBlock) / 1e18);
    }

    /**
     * @notice Calculate compound ROI
     * @param principal_: User stake amount
     * @param n_: Number of days
     */
    function compound(uint256 principal_, uint256 n_) public view returns (uint256) {
        return
            ABDKMath64x64.mulu(
                ABDKMath64x64.pow(
                    ABDKMath64x64.add(ABDKMath64x64.fromUInt(1), ABDKMath64x64.divu(dailyRoi, 10**18)),
                    n_
                ),
                principal_
            );
    }

    /**
     * @notice Reinvest user's rewards and mint necessary tokens
     */
    function _reinvest() private {
        Stake storage userStake = autoStakes[msg.sender];

        userStake.amount = stakeOfAuto(msg.sender);
        userStake.checkpoint = block.number;

        buni.mint(address(this), rewardOfAuto(msg.sender));
    }

    /**
     * @notice Deposits BUNI tokens into the BUNI Vault
     * @param amount_: the amount of BUNI tokens to deposit
     */
    function _stakeWithAuto(uint256 amount_) private {
        Stake storage userStake = autoStakes[msg.sender];
        Stake storage totalStake = autoStakes[address(this)];

        if (totalStake.amount > 0) {
            totalStake.amount = stakeOfAuto(address(this));
        }
        if (userStake.amount > 0) {
            _reinvest();
        }
        buni.safeTransferFrom(msg.sender, address(this), amount_);
        userStake.amount += amount_;
        userStake.checkpoint = block.number;
        totalStake.amount += amount_;
        totalStake.checkpoint = block.number;

        emit Staked(msg.sender, true, amount_);
    }

    /**
     * @notice Withdraws all funds for a user
     */
    function _unstakeWithAuto() private {
        Stake storage userStake = autoStakes[msg.sender];
        Stake storage totalStake = autoStakes[address(this)];

        require(userStake.amount > 0, "StakingBUNI: Nothing to unstake!");

        uint256 blocksPassed = block.number - userStake.checkpoint;
        _reinvest();
        uint256 amount = userStake.amount;
        userStake.amount -= amount;
        totalStake.amount = stakeOfAuto(address(this)) - amount;
        totalStake.checkpoint = block.number;
        uint256 fee = 0;
        if (blocksPassed < lockPeriod) {
            fee = (amount * withdrawFee) / 100;
            buni.burn(fee);
        }

        buni.safeTransfer(msg.sender, (amount - fee));

        emit Unstaked(msg.sender, true, amount);
    }

    /**
     * @notice Get current amount of user's stake including rewards
     * @param user_: User's address
     */
    function stakeOfAuto(address user_) public view returns (uint256 result) {
        Stake memory userStake = autoStakes[user_];

        result = userStake.amount;
        if (result <= 0) {
            return result;
        }
        uint256 blocksPassed = block.number - userStake.checkpoint;
        uint256 daysPassed = blocksPassed / blockPerDay;
        blocksPassed -= daysPassed * blockPerDay;
        result = compound(result, daysPassed);
        result += (result * dailyRoi * blocksPassed) / blockPerDay / 1e18;
    }

    /**
     * @notice Get user's reward since last stake
     * @param user_: User's address
     */
    function rewardOfAuto(address user_) public view returns (uint256 reward) {
        Stake memory userStake = autoStakes[user_];

        reward = stakeOfAuto(user_) - userStake.amount;
    }
}

