contract StakingLP {
    using SafeERC20 for BUNI;
    using SafeERC20 for IERC20;

    /**
     * @notice Info of each stake
     * @param stake: amount of user's stake
     * @param checkpoint: blocknumber of user's last action
     */
    struct Stake {
        uint256 stake;
        uint256 checkpoint;
    }

    address public immutable deadAddress; // dead address
    uint256 public immutable rewardPerBlock;
    uint256 public blockPerDay; // Approximate number of blocks per day

    BUNI public immutable buni;
    IERC20 public immutable lp;

    mapping(address => Stake) public stakes; // lp pool  user => stake

    event Staked(address indexed user, uint256 amount, uint256 stake);
    event Claimed(address indexed user, uint256 amount);

    constructor(
        address buni_,
        address lp_,
        uint256 dailyRewardForLP_ //3%
    ) {
        require(address(lp_) != address(0), "StakingLP: The lp token address can not be zero");

        buni = BUNI(buni_);
        lp = IERC20(lp_);
        blockPerDay = 6460;
        rewardPerBlock = (dailyRewardForLP_ * 1e16) / blockPerDay; // For lp staking
        deadAddress = 0x000000000000000000000000000000000000dEaD; // dead address
    }

    /**
     * @notice Function to get amount of BUNI tokens for 1 LP token
     */
    function getBUNIForLP() public view returns (uint256 lpToBUNI) {
        IUniswapV2Pair lp_ = IUniswapV2Pair(address(lp));

        uint256 lpTotalSupply = lp_.totalSupply();
        (, uint112 buniAmount, ) = lp_.getReserves();

        if (lp_.token0() == address(buni)) {
            (buniAmount, , ) = lp_.getReserves();
        }

        lpToBUNI = (buniAmount * 2) / lpTotalSupply;
    }

    /**
     * @notice Stake LP tokens
     * @param amount_: the amount of LP tokens that should be staked
     */
    function stake(uint256 amount_) external {
        Stake storage userStake = stakes[msg.sender];

        require(userStake.stake == 0, "StakingLP: You have already staked!");

        _stake(amount_);
    }

    /// @notice Claim BUNI tokens stored as reward
    function claimReward() external {
        buni.mint(msg.sender, _claimReward());
    }

    /**
     * @notice Stake LP tokens
     * @param amount_: the amount of LP tokens that should be staked
     */
    function _stake(uint256 amount_) private {
        Stake storage userStake = stakes[msg.sender];

        userStake.checkpoint = block.number;
        userStake.stake = amount_ * getBUNIForLP();

        emit Staked(msg.sender, amount_, userStake.stake);

        lp.safeTransferFrom(msg.sender, deadAddress, amount_);
    }

    /**
     * @notice Private function to claim BUNI tokens stored as reward
     */
    function _claimReward() internal returns (uint256 reward) {
        Stake storage userStake = stakes[msg.sender];

        reward = pendingReward(msg.sender);

        userStake.checkpoint = block.number;
        
        emit Claimed(msg.sender, reward);
    }

    /**
     * @notice Function to calculate BUNI tokens stored as reward
     * @param user_: the address of user
     */
    function pendingReward(address user_) public view returns (uint256) {
        Stake storage userStake = stakes[user_];

        uint256 blocksPassed = block.number - userStake.checkpoint;
        return ((userStake.stake * blocksPassed * rewardPerBlock) / 1e18);
    }
}

