contract GiveAway is Context, Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    IBEP20 public token;        
    bool public isClaimEnable=true;
    struct user{
        uint256 allowedAmount;
    }
    mapping(address=>user) public userInfo;        
    constructor()  {
        token=IBEP20(0x587660C930C3Cf92315D6A631639f5F5Bc06544e); // Token contract address
    }

    // For adding addresess with token amounts
    function addAddresses(address[] memory _addresses,uint256[] memory _amount) public onlyOwner{
        require(_addresses.length>0,"at least one address is required");
        require(_addresses.length==_amount.length,"address and amount must be same length");

        for(uint256 i=0;i<_addresses.length;i++){
            if(userInfo[_addresses[i]].allowedAmount>0){
                userInfo[_addresses[i]].allowedAmount+=_amount[i];                    
            }else{
                userInfo[_addresses[i]].allowedAmount=_amount[i];
            }            
        }
    }

    // For Claim the tokens
    function claimTokens() public nonReentrant {
        require(token.balanceOf(address(this)) >= userInfo[msg.sender].allowedAmount, "Contract Balance Exceed");
        require(isClaimEnable, "Claiming is not activated");
        require(userInfo[msg.sender].allowedAmount > 0,"You are not included!");        
        token.transfer(msg.sender, userInfo[msg.sender].allowedAmount);
        userInfo[msg.sender].allowedAmount=0;
    }

    // Set claim is enable or disable
    function setEnableClaim(bool _isEnable) public onlyOwner{
      isClaimEnable=_isEnable;  
    }

    // Withdraw BNB from contract
    function withdrwal() public onlyOwner{        
        payable(owner()).transfer(address(this).balance);
    }
    
    // Withdraw token from contract
    function withdrawTokens() public onlyOwner{        
        token.transfer(owner(),token.balanceOf(address(this)));               
    }  
}