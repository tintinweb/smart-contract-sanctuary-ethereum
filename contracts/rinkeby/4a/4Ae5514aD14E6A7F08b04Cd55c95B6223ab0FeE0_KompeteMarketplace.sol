    function hashOrder(Order memory order, uint256 nonce) internal view returns (bytes32) {
        return
            keccak256(
                bytes.concat(
                    abi.encode(_ORDER_TYPEHASH),
                    abi.encode(
                        order.maker,
                        order.taker,
                        order.makerProtocolFee,
                        order.takerProtocolFee,
                        order.feeRecipient,
                        order.side
