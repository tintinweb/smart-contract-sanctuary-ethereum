    function makeBid(uint256[] memory orderId, uint256[] memory bidAmount) public {
        uint256 len = orderId.length;
        for (uint256 i = 0; i < len; i++) {
            Order storage order = orders[orderId[i]];
            require(order.expiresAt > block.timestamp, "Bidd time is over");
            require(msg.sender != order.maker, "Cant bid your own order");
            
            uint256 numBids = order.numBids;
            Bid storage lastbid = bids[orderId[i]][numBids];
            require(bidAmount[i] > (order.basePrice + order.bidStep) && bidAmount[i] > (lastbid.bidPrice + order.bidStep), "Bid amount is too low");

            _transferTokens(order.token, msg.sender, address(this), lastbid.bidder == msg.sender ? (bidAmount[i] - lastbid.bidPrice) : bidAmount[i]);
            // Return Allowed to the last bidder
            if (numBids > 0 && lastbid.bidder != msg.sender) {
                _transferTokens(order.token, address(this), lastbid.bidder, lastbid.bidPrice);
            }
            order.numBids++;
            bids[orderId[i]][order.numBids] = Bid(msg.sender, bidAmount[i]);
           emit NewHighestBid(orderId[i], msg.sender, bidAmount[i]);
        }

    }

    
