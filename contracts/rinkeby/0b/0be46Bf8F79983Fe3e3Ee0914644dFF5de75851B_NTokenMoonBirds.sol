        bool isUsedAsCollateral = _isUsedAsCollateral[tokenId];
        _transferCollaterizable(from, to, tokenId, isUsedAsCollateral);

        if (validate) {
            POOL.finalizeTransfer(
                underlyingAsset,
                from,
                to,
                isUsedAsCollateral,
                tokenId,
                fromBalanceBefore,
                toBalanceBefore
            );
        }

        // emit BalanceTransfer(from, to, tokenId, index); TODO emit a transfer event
    }

