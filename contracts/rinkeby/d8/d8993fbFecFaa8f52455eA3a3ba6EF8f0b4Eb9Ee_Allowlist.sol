pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Receiver.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "../ERC1155/IERC1155Burnable.sol";

contract Allowlist is ERC1155Receiver, Ownable, Pausable{

    using EnumerableSet for EnumerableSet.AddressSet;
    
    struct VoucherData {
        uint256 voucherId;
        uint256 amount;
    }

    bytes4 internal constant _ERC1155_RECEIVED = 0xf23a6e61;
    bytes4 internal constant _ERC1155_BATCH_RECEIVED = 0xbc197c81;
    bytes4 internal constant _ERC1155_REJECTED = 0xffffffff;

    EnumerableSet.AddressSet internal _allowlist;
    mapping(address => VoucherData) internal _balances;

    IERC1155Burnable public immutable voucherContract;
    uint256 public requiredTokenId;
    uint256 public requiredAmount;

    constructor(IERC1155Burnable _voucherContract){
        voucherContract = _voucherContract;
    }

    function checkAllowlist(address user) public view returns (bool){
        return _allowlist.contains(user);
    }

    function balanceOf(address user) public view returns (VoucherData memory){
        return _balances[user];
    }

    function getAllowlistUser(uint256 index) public view returns (address){
        return _allowlist.at(index);
    }

    function getAllowlistLength() public view returns (uint256){
        return _allowlist.length();
    }

    function setRequirement(uint256 tokenId, uint256 amount) external onlyOwner{
        requiredTokenId = tokenId;
        requiredAmount = amount;
    }

    function pause() public onlyOwner{
        _pause();
    }

    function unpause() public onlyOwner{
        _unpause();
    }

    /*
    *   Burn participant's vouchers without remove from allowlist 
    */
    function batchBurn() external onlyOwner whenPaused{
        uint256 lengthOfAllowlist = _allowlist.length();
        require(lengthOfAllowlist > 0, "no participants"); 
        
        address firstParticipant = _allowlist.at(0);
        uint256 id = _balances[firstParticipant].voucherId;
        uint256 amount = _balances[firstParticipant].amount;
        
        _balances[firstParticipant].amount = 0;

        for(uint256 i = 1; i != lengthOfAllowlist; ++i){
            address participant = _allowlist.at(i);
            if(_balances[participant].amount == 0){
                continue;
            }
            if(_balances[participant].voucherId != id){
                voucherContract.burn(address(this), _balances[participant].voucherId, _balances[participant].amount);
            }else{
                amount += _balances[participant].amount;
            }
            _balances[participant].amount = 0; 
        }
        if(amount > 0){
            voucherContract.burn(address(this), id, amount);
        }
    }

    /*
    *   Withdraw vouchers back to participant and remove from allowlist 
    */
    function withdraw(address[] memory participants) external onlyOwner whenPaused{
        for (uint256 i = 0; i != participants.length; ++i){
            address participant = participants[i];
            require(_balances[participant].amount > 0, "no balance");
            voucherContract.safeTransferFrom(address(this), participant, _balances[participant].voucherId, _balances[participant].amount, "");
            _balances[participant].amount = 0;
            _allowlist.remove(participant);
        }
    }

    /**
     * Handle the receipt of a single ERC1155 token type.
     * @dev See {IERC1155TokenReceiver-onERC1155Received(address,address,uint256,uint256,bytes)}.
     */
    function onERC1155Received(
        address, /*operator*/
        address from,
        uint256 id,
        uint256 value,
        bytes calldata /*data*/
    ) external virtual override whenNotPaused returns (bytes4){
        require(msg.sender == address(voucherContract), "wrong sender");
        require(!_allowlist.contains(from), "on allowlist");
        require(requiredAmount > 0, "wrong requirement");
        require(id == requiredTokenId, "wrong Id");
        require(value == requiredAmount, "worng amount");
        
        _balances[from] = VoucherData({
            voucherId: id,
            amount: value
        });
        _allowlist.add(from);
        return _ERC1155_RECEIVED;
    }

    /**
     * Handle the receipt of multiple ERC1155 token types.
     * @dev See {IERC1155TokenReceiver-onERC1155BatchReceived(address,address,uint256[],uint256[],bytes)}.
     */
    function onERC1155BatchReceived(
        address, /*operator*/
        address,
        uint256[] calldata,
        uint256[] calldata,
        bytes calldata /*data*/
    ) external virtual override returns (bytes4) {
        return _ERC1155_REJECTED;
    }
}

