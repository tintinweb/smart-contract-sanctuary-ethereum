contract BlockpayEscrow is Ownable {

  using SafeMath for uint256;


//----------------------event-------------------//

  event SenderSentToReceiver(address sendingTokenAddress, uint256 amount, address receiverAddress);
  event TakeOutByOwner(address tokenAddress, uint256 amount);

//----------------------view functions-------------------------//



//----------------------internal functions---------------------//

  function senderToEscrow(address sendingTokenAddress, uint256 amount) internal {
    require(amount > 0, "senderToEscrow: You can't send no token");
    require(sendingTokenAddress != address(0), "senderToEscrow: You can't send tokens from zero address");
    IERC20 sendingToken = IERC20(sendingTokenAddress);
    require(sendingToken.allowance(_msgSender(), address(this)) > amount, "senderToEscrow: You can't send more than allowance");
    sendingToken.transferFrom(_msgSender(), address(this), amount);
  }

  function escrowToReceiver(address sendingTokenAddress, uint256 amount, address receiverAddress) internal {
    IERC20 sendingToken = IERC20(sendingTokenAddress);
    sendingToken.transfer(receiverAddress, amount);
  }



//-----------------------public functions-----------------------//

/* When user send some amount of tokne to receiver, that amount of token will come to this escrow contract at first, then
   99% will go to the receiver
   1% will be this contract as a tax
 */
  function senderToReceiver(address sendingTokenAddress, uint256 amount, address receiverAddress) public {
    require(amount > 0, "senderToReceiver: You can't send no token");
    require(receiverAddress != address(0), "senderToReceiver: You are going to send to zero address");
    require(sendingTokenAddress != address(0), "senderToReceiver: You can't send tokens from zero address");
    uint256 realSendingAmount;
    realSendingAmount = amount.div(100).mul(99);
    senderToEscrow(sendingTokenAddress, amount);
    escrowToReceiver(sendingTokenAddress, realSendingAmount, receiverAddress);
    emit SenderSentToReceiver(sendingTokenAddress, amount, receiverAddress);
  }
/* If withdraw amount is bigger that balance of this contract, owner will take out all */
  function withdrawByOwner(address tokenAddress, uint256 amount) public onlyOwner {
    require(amount > 0, "You can't withdraw no token");
    IERC20 token = IERC20(tokenAddress);
    if(amount > token.balanceOf(address(this)))
    {
      amount = token.balanceOf(address(this));
    }
    require(token.balanceOf(address(this)) > 0, "No balance of this token");
    token.transfer(_msgSender(), amount);
    emit TakeOutByOwner(tokenAddress, amount);
  }
}


