pragma solidity ^0.8.2;

import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts/interfaces/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract Stake is Ownable, ReentrancyGuard {
  
    using SafeERC20 for IERC20;

    /* ========== STATE VARIABLES ========== */
    IERC20 public stakingToken;
    //IERC20 public rewardsToken;
    IERC721 public nftCollection;
    uint256 public rewardRate = 0.001157407 * 10 ** 18;
    uint256 public tierOneRewardRate = 0.00002314815 * 10 ** 18;
    uint256 public tiertwoRewardRate = 0.00001736111* 10 ** 18;
    uint256 public tierThreeRewardRate = 0.00001388889 * 10 ** 18;
    uint256 public tierFourRewardRate = 0.00001157407 * 10 ** 18;
    uint256 public devRewardRate = 0.00000868056 * 10 ** 18;
    uint256 public minDelegateAmount = 100 * 10 ** decimals();
    uint256 public minDevDelegateAmount = 50 * 10 ** decimals();
    mapping(address => uint) public userRewardRate;
    mapping(address => uint) public multiplier;
    

    uint public lastUpdateTime;
    uint public rewardPerTokenStored;

    mapping(address => uint256) public userRewardPerTokenPaid;
    mapping(address => uint256) public rewards;

    uint private _totalSupply;
    mapping(address => bool) private isNftStaked;
    mapping(address => uint256) private nftTokenId;

    /* ========== STRUCTS ========== */

    struct SubGraphInfo{
        string id;
        string name;
        string url;
        string description;
        address owner;
        uint256 balances;
    }

    SubGraphInfo[] public subGraphInfo;

    mapping (address => SubGraphInfo[]) listOfUserSubGraph;
    mapping(uint256 => mapping(address => SubGraphInfo)) public info;
    mapping(string => SubGraphInfo) public subGraph;

    /* ========== EVENTS ========== */

    event StakeNft(address indexed user, uint256 tokenId);
    event StakedTokens(address indexed user, uint256 amount);
    event UnstakeNft(address indexed user, uint256 tokenId);
    event RewardPaid(address indexed user, uint256 amount);
    event AddSubGraph(address indexed user, string gid);

    /* ========== CONSTRUCTOR ========== */

    constructor(address _stakingToken, address _nftCollection) {
        stakingToken = IERC20(_stakingToken);
        //rewardsToken = IERC20(_rewardsToken);
        nftCollection = IERC721(_nftCollection);
    }

    /* ========== ACCESS CONTROL/SANITY MODIFIERS ========== */

    modifier updateReward(address account) {
        rewardPerTokenStored = rewardPerToken(account);
        lastUpdateTime = block.timestamp;

        rewards[account] = earned(account);
        userRewardPerTokenPaid[account] = rewardPerTokenStored;
        _;
    }

    modifier isCorrectDevMillBalance() {
        require(
            stakingToken.balanceOf(msg.sender) >= minDevDelegateAmount,
            "Minimum MILL token amount required not met"
        );
        _;
    }

     modifier isCorrectMillBalance(uint256 amount) {
        require(
            stakingToken.balanceOf(msg.sender) >= minDelegateAmount * amount,
            "Insufficient MILL token balance"
        );
        _;
    }

    modifier isStakingNft() {
        require(
            isNftStaked[msg.sender] == true, "A Miller NFT must be staked first");
        _;
    }

    modifier isNftOwner(uint256 tokenId){
        require(nftCollection.ownerOf(tokenId) == (msg.sender), "User must be owner of the NFT");
        _;
    }

    modifier setDelegateMultiplier(uint256 amount){
        multiplier[msg.sender] += (amount / minDelegateAmount);
        _;
    }

     modifier setDevMultiplier(){
        multiplier[msg.sender] += 1;
        _;
    }

    modifier setDevRewardRate(){
        userRewardRate[msg.sender] = devRewardRate;
        _;
    }
    modifier setUserRewardRate(uint256 nftTier){
        userRewardRate[msg.sender] = getRewardRate(nftTier);
        _;
    }


    /* ========== VIEWS ========== */

    function rewardPerToken(address account) public view returns (uint) {
        if (_totalSupply == 0) {
            return rewardPerTokenStored;
        }
        return 
            rewardPerTokenStored +
            (((block.timestamp - lastUpdateTime) * userRewardRate[account] * 1e18));
    }

    function earned(address account) public view returns (uint) {
        return
            ((multiplier[account]*
             (rewardPerToken(account) - userRewardPerTokenPaid[account])) / 1e18) +
            rewards[account];
    }

    function isNFTStaked() external view returns(bool){
        return isNftStaked[msg.sender];
    }

    function decimals() internal pure returns (uint8) {
        return 18;
    }



    /* ========== PUBLIC MUTATIVE FUNCTIONS ========== */

    function addSubGraph(
        string memory _id,
        string memory _name,
        string memory _url,
        string memory _description
        )
        external
        isCorrectDevMillBalance
        setDevRewardRate
        setDevMultiplier
        updateReward(msg.sender) 
    {   
        SubGraphInfo memory graphInfo;
        //subGraphInfo.push(
        graphInfo = SubGraphInfo({
                id: _id,
                name: _name,
                url: _url,
                description: _description,
                owner: address(msg.sender),
                balances: 0
            });
        //);
        subGraphInfo.push(graphInfo);
        //SubGraphInfo storage graphInfo = subGraphInfo[subGraphInfo.length-1];
        graphInfo.balances += minDevDelegateAmount;
        stakingToken.transferFrom(msg.sender, address(this), minDevDelegateAmount);
        emit AddSubGraph(msg.sender, _id);
        
    }

    function stakeNft(uint256 tokenId, uint256 nftTier) external isNftOwner(tokenId){
        nftTokenId[msg.sender] = tokenId;
        userRewardRate[msg.sender] = getRewardRate(nftTier);
        isNftStaked[msg.sender] = true;
        nftCollection.safeTransferFrom(msg.sender, address(this), tokenId);
        emit StakeNft(msg.sender, tokenId);
    }

    function unStakeNft(uint256 tokenId) external {

        require(tokenId == nftTokenId[msg.sender], "You have no NFT to unstake");
        delete nftTokenId[msg.sender];
        isNftStaked[msg.sender] = false;
        nftCollection.safeTransferFrom(address(this), msg.sender, tokenId);
        emit UnstakeNft(msg.sender, tokenId);
    }

    function stake(string memory gid, uint _amount, uint256 tier)

        external 
        isCorrectMillBalance(_amount)
        isStakingNft
        setUserRewardRate(tier)
        setDelegateMultiplier(_amount) 
        updateReward(msg.sender) 
    {
        SubGraphInfo storage graphInfo = findSubGraph(gid);
        uint256 millTotal = _amount * minDelegateAmount;
        graphInfo.balances += millTotal;
        listOfUserSubGraph[msg.sender].push(graphInfo);
        stakingToken.transferFrom(msg.sender, address(this), millTotal);
        emit StakedTokens(msg.sender, _amount);
    }

    function getReward() external updateReward(msg.sender) {
        uint reward = rewards[msg.sender];
        if (reward > 0){
              rewards[msg.sender] = 0;
            stakingToken.transfer(msg.sender, reward);
            emit RewardPaid(msg.sender, reward);
        }
    }

    // ============ SUPPORTING FUNCTIONS ============

     function findSubGraph(string memory gid) view internal returns (SubGraphInfo storage){
        for (uint256 i=0; i < subGraphInfo.length; i++){
                if(keccak256(bytes(subGraphInfo[i].id)) == keccak256(bytes(gid))){
                    return subGraphInfo[i];
                }
        }
        revert('Not found');
    }

    function getRewardRate(uint256 nftTier) internal view returns(uint256){
        if (nftTier == 4){
            return tierFourRewardRate;
        }else if (nftTier == 3){
            return tierThreeRewardRate;
        }else if (nftTier == 2){
            return tiertwoRewardRate;
        }else{
            return tierOneRewardRate;
        }
    }
     // ============ OWNER-ONLY ADMIN FUNCTIONS ============

     function withdraw() public onlyOwner {
        uint256 balance = address(this).balance;
        payable(msg.sender).transfer(balance);
    }

    function withdrawTokens(IERC20 token) public onlyOwner {
        uint256 balance = token.balanceOf(address(this));
        token.transfer(msg.sender, balance);
    }
   
}

