import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

interface IERC20 {
  function transfer(address recipient, uint256 amount) external returns (bool);
  function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
  function balanceOf(address account) external view returns (uint256);
}

contract OPAD_ICO2 is Ownable {
  using SafeMath for uint256;
  IERC20 OPAD;
  IERC20 USDC;

  uint256 public START; // start ICO time
  uint256 public DAYS; // During Days
  bool public endStatus = false;
  address public USDC_Addr = 0x64560E3968f9c8AF2300dA48976641b7d30592e7;
  uint256 public purchaseRate = 1;
  
  /**
   * BoughtTokens
   * @dev Log tokens bought onto the blockchain
   */
  event BoughtTokens(address indexed to, uint256 value);

  /**
   * whenSaleIsActive
   * @dev ensures that the contract is still active
   **/
  modifier whenSaleIsActive() {
    // Check if sale is active
    assert(isActive());
    _;
  }
  
  /**
   * @dev OPADICO constructor
   **/
  constructor(address OPAD_Addr, uint _startTime, uint _duringDays) {
    require(OPAD_Addr != address(0), "It can't be zero address");
    require(_duringDays > 0, "Duration can't be zero day");

    OPAD = IERC20(OPAD_Addr);
    USDC = IERC20(USDC_Addr);

    START = _startTime;
    DAYS = _duringDays;
  }

  /**
   * delayDuration
   * @dev function that delays ICO during days
   **/
  function delay_Duration(uint _delayDays) public onlyOwner {
      DAYS = DAYS.add(_delayDays);
  }

  /**
   * isActive
   * @dev Determins if the contract is still active
   **/
  function isActive() public view returns (bool) {
    return (
        endStatus == false && 
        block.timestamp >= START && // Must be after the START date
        block.timestamp <= START.add(DAYS.mul(1 days)) // Must be before the end date
    );
  }

  /**
   * set_EndStatus
   * @dev function that sets ending status
   **/
  function set_EndStatus(bool status) public onlyOwner {
      endStatus = status;
  }

  /**
   * set_PurchaseRate
   * @dev function that sets purchase rate
   **/
  function set_PurchaseRate(uint256 newRate) public onlyOwner {
      purchaseRate = newRate;
  }

  /**
   * buyTokens
   * @dev function that sells available tokens
   **/
  function buyTokens(uint USDC_amount) public whenSaleIsActive {
    require(USDC_amount > 0, "Amount can't be zero numbers");

    USDC.transferFrom(_msgSender(), address(this), USDC_amount); // Bring ICO contract address USDC tokens from buyer
    OPAD.transfer(_msgSender(), USDC_amount * purchaseRate); // Send OPAD tokens to buyer

    emit BoughtTokens(_msgSender(), USDC_amount); // log event onto the blockchain
  }

  /**
   * withdrawUSDC
   * @dev function that withdraw USDC to owner
   **/
  function withdrawUSDC() public onlyOwner {
    require(USDC.balanceOf(address(this)) > 0, "Sufficient USDC balance");
    
    USDC.transfer(owner(), USDC.balanceOf(address(this)));
  }

  /**
   * withdrawOPAD
   * @dev function that withdraw OPAD to owner
   **/
  function withdrawOPAD() public onlyOwner {
    require(OPAD.balanceOf(address(this)) > 0, "Sufficient OPAD balance");
    
    OPAD.transfer(owner(), OPAD.balanceOf(address(this)));
  }

  /**
   * withdraw native token
   * @dev function that withdraw native token to owner
   **/
  function withdraw() public payable onlyOwner {
      require(payable(msg.sender).send(address(this).balance));
  }
}

