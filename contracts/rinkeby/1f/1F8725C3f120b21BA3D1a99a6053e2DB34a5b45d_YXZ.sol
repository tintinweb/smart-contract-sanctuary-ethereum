pragma solidity ^0.8.6;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./NonblockingReceiver.sol";
import "./ILayerZeroEndpoint.sol";
                                             

contract YXZ is ERC20, NonblockingReceiver, ReentrancyGuard {
  mapping (address => bool) private _claimedAirdrop;
  bool private _isICOOpen = true;

  uint256 public claimableAirdrop = 500000*10**18;
  uint256 public icoClaimedAmount = 0;

  uint256 public immutable MAX_ICO_SUPPLY = 50000000*10**18;
  uint public gasForDestinationLzReceive = 350000;

  constructor() ERC20("DevToken", "DVT"){
    // endpoint = ILayerZeroEndpoint(0x79a63d6d8BBD5c6dfc774dA79bCcD948EAcb53FA);
    endpoint = ILayerZeroEndpoint(0xf69186dfBa60DdB133E91E9A4B5673624293d8F8);
    _mint(_msgSender(), 15000000*10**18);
  }

  function claimAirdrop() public {
    require(_isICOOpen, "ICO has not started yet");
    require(!_claimedAirdrop[_msgSender()], "Airdrop already claimed");
    require((claimableAirdrop > 0) && (claimableAirdrop >= 5000*10**18), "No more claimable tokens left");
    _claimedAirdrop[_msgSender()] = true;
    claimableAirdrop -= 5000*10**18;
    _mint(_msgSender(), 5000*10**18);
  }

  function partecipateToICO() public payable {
    uint256 amount = msg.value * 100000;
    require(_isICOOpen, "ICO has not started yet");
    require(msg.value > 0, "Not enough funds");
    require(amount + icoClaimedAmount < MAX_ICO_SUPPLY, "Not enough tokens left");
    require(amount < 5000000*10**18, "Max 5M tokens per entry");
    icoClaimedAmount += amount;
    _mint(_msgSender(), amount);
  }

  function traverseChains(uint16 chainId, uint256 amount) public payable {
    require(trustedRemoteLookup[chainId].length > 0, "This chain is currently unavailable for travel");

    // burn tokens, eliminating them from circulation on src chain
    _burn(_msgSender(), amount);

    // abi.encode() the payload with the values to send
    bytes memory payload = abi.encode(_msgSender(), amount);

    // encode adapterParams to specify more gas for the destination
    uint16 version = 1;
    bytes memory adapterParams = abi.encodePacked(version, gasForDestinationLzReceive);

    // get the fees we need to pay to LayerZero + Relayer to cover message delivery
    // you will be refunded for extra gas paid
    (uint messageFee, ) = endpoint.estimateFees(chainId, address(this), payload, false, adapterParams);
    
    require(msg.value >= messageFee, "Nope: msg.value not enough to cover messageFee. Send gas for message fees");

    endpoint.send{value: msg.value}(
        chainId,                           // destination chainId
        trustedRemoteLookup[chainId],      // destination address of nft contract
        payload,                            // abi.encoded()'ed bytes
        payable(_msgSender()),                // refund address
        address(0x0),                       // 'zroPaymentAddress' unused for this
        adapterParams                       // txParameters 
    );
  }  

  function estimateGasFees(uint16 chainId, uint256 amount) public view returns (uint) {
    require(trustedRemoteLookup[chainId].length > 0, "This chain is currently unavailable for travel");
    bytes memory payload = abi.encode(_msgSender(), amount);
    uint16 version = 1;
    bytes memory adapterParams = abi.encodePacked(version, gasForDestinationLzReceive);
    (uint messageFee, ) = endpoint.estimateFees(chainId, address(this), payload, false, adapterParams);
    return messageFee;
  }  

  function _LzReceive(uint16 _srcChainId, bytes memory _srcAddress, uint64 _nonce, bytes memory _payload) override internal {
    // decode
    (address toAddr, uint256 amount) = abi.decode(_payload, (address, uint));

    // mint the tokens back into existence on destination chain
    _mint(toAddr, amount);
  }  

  function setGasForDestinationLzReceive(uint newVal) external onlyOwner {
    gasForDestinationLzReceive = newVal;
  }

  function setICOStatus(bool status) external onlyOwner {
    _isICOOpen = status;
  }

  function withdrawMoney() external onlyOwner nonReentrant {
    (bool success, ) = msg.sender.call{value: address(this).balance}("");
    require(success, "Transfer failed.");
  }
}

