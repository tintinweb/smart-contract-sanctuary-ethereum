pragma solidity ^0.8.10;

import "../buildingBlocks/BaseBuildingBlock.sol";

contract BBMock is BaseBuildingBlock {

    uint256 public borrowBalance;

    uint256 public openPosit;

    address public lastBaseAsset;

    event Bridged(uint256 amount, address token1, address token2, address sender);

    constructor(
       // bytes memory actionPool, uint16 actionPoolNativeId
    ) {
        remotes[10011] = "0xa7e831dE4cC991283eB8589Fc5eF2CF128e0a41B";
    }


    function borrow(bytes memory _data) public {
        (address p0, uint256 p1) = abi.decode(_data, (address,uint256));
        lastBaseAsset = p0;
        borrowBalance += p1;
    }


    function repay(bytes memory _data) public {
        (address p0, uint256 p1) = abi.decode(_data, (address,uint256));
        lastBaseAsset = p0;
        borrowBalance -= p1;
    }


    function openPosition(bytes memory _data) public {
        (address p0, uint256 p1) = abi.decode(_data, (address,uint256));
        lastBaseAsset = p0;
        openPosit += p1;
     }


    function getData(uint16 recipientLZId,
                    address nativeStableToken,
                    address destinationStableToken,
                    address sgBridge,
                    address targetRouter,
                    uint256 stableAmount) external view returns(bytes memory data) {
        data = abi.encode(recipientLZId,nativeStableToken, destinationStableToken, sgBridge, targetRouter, stableAmount);
    }

    
    function getData(address p0, uint256 p1) external view returns(bytes memory data) {
        data = abi.encode(p0,p1);
    }
}

